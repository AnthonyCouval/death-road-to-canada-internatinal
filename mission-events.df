: quit-from-mission
	quit-to-title
	clear-streak delete-the-game
;

: road? game.location LOCATION_ROAD = ;
: mission? game.location LOCATION_MISSION = ;

// : back-esc cyoa{ cyoa-back-esc } ; - Now in cyoa.df instead

// Quit from screens
: handle-quit cyoa{
	cyoa-active? if then;
//	4 500 tone
	cyoa-new- 
	"QUITTER?" cyoa-title!

	game.location 0 < if
		"Sortir de la partie?" cyoa-text!
		choice( "NON" )choice back-esc
		choice( "OUI" )choice: mad_quit
	then;
	
	"ABORT the game and quit to the title screen?" cyoa-text!
	choice( "NON" )choice back-esc
	road? if
		"You can resume the game later with CONTINUE GAME!" +crtext
		choice( "OUI" )choice: quit-to-title
	then;
	ZOMBOTOWN if
		"EXIT ZOMBO TOWN" cyoa-title!
		"Return to the title screen?
		Any upgrades you have purchased are already saved." cyoa-text!
		choice( "OUI" )choice: quit-to-title
	then;
	mission? if 
		"WARNING: Quitting directly from a mission will delete the save!" rbold +crtext
		choice( "QUITTER ET SUPPRIMER LA SAUVEGARDE" )choice: quit-from-mission
	then;
	choice( "BIEN-SURE" )choice: quit-from-mission

} ;

last to main-event-do-quit


: handle-esc
	game.location 0 < if
		cyoa-active? if then;
		cyoa-new- 
		"QUITTER?" cyoa-title!
		"Sortir de la partie?" cyoa-text!
		choice( "NON" )choice back-esc
		choice( "OUI" )choice: mad_quit
	then;
;
last to main-event-do-esc

}


cyoa{

cyoa-choice: tutorchat-1
	pchar choosechar
	($ pname .. "  raconte " .. bname .. "  to " .. "COOL IT!" pbold $) text!
	($ bname .. " est furieux de cela ! " .. bHe .. " obtenir " .. "SUPER ENRAGE!" rbold $) +crtext
	($ "'I'm not sure if telling someone to " .. "''COOL IT'" pbold .. "  has ever worked, in the history of the whole world." $) +crtext
	1 cchar .wits! 1 cchar .attitude!
	witsattREV badfx clear-cyoa morale2-all
;

cyoa-choice: tutorchat-2
	pchar choosechar
	($ pname .. "  essaie de se faire charmant et de convaincre " .. bname .. "  daider a combattre les zombies qui affluent.	" .. bname .. "  transpire visiblement." $) text!
	($ "'Je suis occupe! Je suis occupe a faire des trucs! Va le faire toi!" pbold $) +crtext
	"Eh bien, ca valait la peine dessayer. Ca aurait peut etre marche sur quelquun de moins con." +crtext
	6 cchar .wits! 6 cchar .attitude!
	witsattREV badfx clear-cyoa
;

cyoa-choice: tutorchat-3 
	pchar choosechar
	($ pname .. "  appelle " .. bname .. " francais " .. " idiot." pbold $) text!
	($ bname .. "  est choque ! Cetait amusant de finalement dire " .. bhim .. "  quel idiot " .. bhe .. "  etait." $) +crtext
	goodfx clear-cyoa morale++all
;

cyoa: tutorchat
	rescue choosechar cicon
	cchar to bully
	dead? if npc-died then;
	($ pname .. "  voit " .. cname .. ", qui est un vrai idiot.	" .. "'Des zombies ont fait irruption chez moi ! C'est probablement de ta faute ! Ce n'est certainement pas la mienne !" pbold .. "	Quand le groupe a trouve ce bunker de zombies, " .. bname .. "  a appele dibs sur cette grande chambre avant tout le monde." $) text!
	
	choice( "Laissez " .. chim .. "  etre pour linstant" )choice
	choice( "Dites " .. chim .. " ' a 'Cool It'" )choice: tutorchat-1
	choice( "Convainquez " .. chim .. "  daider a combattre les zombies" )choice: tutorchat-2
	choice( "Appele " .. chim .. " un canard" )choice: tutorchat-3
;

cyoa: tutorrecruit
	recruitee choosechar cicon
	dead? if npc-died then;
	($ pname .. " salutent " .. rname .. ".
	" .. "Je pense que nous devons quitter ce refuge. Au moins nous avons pu reposer un peu. Nous devrions essayer de diriger vers le Canada ! Voulez vous me voyager avec toi ?" pbold .. "plus de gens signifie plus de mains pour piller et lutter. Cela signifie egalement plus de gens a empecher, a manger les vivres et a se brouiller.," $) text!
	0.25 cchar .ai.wander_chance! 0 nearest .unseen! clear-cyoa
	recruit-yesno
	
;

}

: tutorial-npc1 
	new-npc@ 0 over .ai.wander_chance! 180 lt .aim_angle! lt .character@ to rescue
	cyoa{ ' tutorchat cyoa! } drop
;

: tutorial-npc2
	// new-rescue-npc 0 lt .character@ .ai.wander_chance!
	new-npc@ rescue-weapon over .weapona! 1 lt .unseen! 0 over .ai.wander_chance! 180 lt .aim_angle! lt .character@ to recruitee 
	cyoa{ ' tutorrecruit cyoa! } drop
;

mission{ 

: door-tutorial-escape
	cyoa-start
	beep "porte sans echappatoire" print
	"Pas de sortie" cyoa-title!
	($ "Vous ne pouvez pas quitter de cette localisation ! Cette porte ne mene qu'a la " .. "Salle a dechets" rbold .. "qui est presque plein. Celui qui a concu ce bunker zombie n'a pas mis beaucoup de pensee a ce que ca durerait longtemps. Vous devrez trouver une autre facon de sortir. " $) cyoa-text!
	"Ou, si vous le souhaitez, vous pouvez sauter la formation.," rbold +text
		choice( "Revenir a la formation" )choice
		cyoa-add-choice
		"Sauter la formation !" cyoa-choice-text!
			cyoa{ ' tutorial-ladder-end cyoa-choice-handler! }
;

: tutortopmsg
	eventid THING_EVENT_TIMER <> if drop then;
	( beep ) // Good for debugging timers
	me .retrigger_timer
	curmapview me .mapid@ <> if then;
	WHITE swap $cat 60 view_w 0.5 * 16 msgtickxy
;

: best_btn_name args( cmd ) <- cmd p1_cmd_joy_alt <- cmd p1_btn_name ;


: attackbtn CMD_ATTACK best_btn_name ;
: swapbtn CMD_SWAP best_btn_name ;
: usebtn CMD_USE best_btn_name ;
: startbtn CMD_START best_btn_name ;

: upbtn CMD_UP best_btn_name ;
: downbtn CMD_DOWN best_btn_name ;
: leftbtn CMD_LEFT best_btn_name ;
: rightbtn CMD_RIGHT best_btn_name ;

: usebtns usebtn
	// .. usebtn $len 1 usebtn $len and if "OU " else "" then .. 1 usebtn
;
: attackbtns attackbtn 
	// .. attackbtn $len 1 attackbtn $len and if "OU " else "" then .. 1 attackbtn
;
: swapbtns swapbtn
	// .. swapbtn $len 1 swapbtn $len and if "OU " else "" then .. 1 swapbtn 
;
: startbtns startbtn 
	// .. startbtn $len 1 startbtn $len and if "OU " else "" then .. 1 startbtn 
;

: arrowbtns
	upbtn ", " .. downbtn .. ", " .. leftbtn .. ", " .. rightbtn ..
;

: tutorial_touch_check touch_controls@ 0 > ;

thing-event: tutormsg1
	tutorial_touch_check if
		($ "DRAG LEFT THUMB TO MOVE		TAP USE BUTTON TO OPEN" $)
		// ADJUST CONTROLS IN TOP LEFT OF PAUSE MENU - Removed from second line for now
		// Could we have the USE button glow here or something? That way could get rid of the third line maybe...
	else
		($ arrowbtns .. " Deplacer" .. usebtns .. " OUVRIR OU UTILISER" $) 
	then tutortopmsg ;
thing-event: tutormsg2 
	tutorial_touch_check if
		($ "Utiliser le bouton pour ramasser les armes		Changer le bouton pour echanger		Maintenir le bouton pour lacher" $) 
	else
		($ usebtns .. " Ramasser les armes" .. swapbtns .. " 	POUR CHANGER DARME " .. usebtn .. " LACHER ARME" $) 
	then tutortopmsg ;
thing-event: tutormsg3 
	tutorial_touch_check if
		($ "UTILISER LE BOUTON POUR RAMASSER LES CHAISES		TAPOTER LE COTE DROIT DE LECRAN POUR LANCER LA CHAISE		ECHANGER LE BOUTON POUR DEPOSER" $)
	else
		($ usebtns .. " 	Ranger les chaises" .. attackbtns .. " LANCER UNE CHAISE" .. swapbtns .. " LACHER LA CHAISE" $)
	then tutortopmsg ;
thing-event: tutormsg4 
	tutorial_touch_check if
		($ "ESSAYEZ DE VOUS CALMER" $)
	else
		($ attackbtns .. " ESSAYEZ DE VOUS MODERER" $)
	then tutortopmsg ;

thing-event: tutormsg5 
	"FAITES ATTENTION AUX ENORMES ESSAIMS	COURIR DEPASSE SOUVENT LES COMBATS" tutortopmsg ;
thing-event: tutormsg6 
	"LECHELLE MENE A LEXTERIEUR	BONNE CHANCE DEHORS" tutortopmsg ;

thing-event: tutormsg7 
	tutorial_touch_check if
		($ "UTILISER LE BOUTON POUR PARLER OU INTERAGIR" $)
	else
		($ usebtns .. "  POUR PARLER OU INTERAGIR" $)
	then tutortopmsg ;

thing-event: tutormsg8 
	"CHOISISSEZ VOS COMPAGNONS A BON ESCIENT" tutortopmsg ;
thing-event: tutormsg9 
	"LES SALLES DE BAIN PEUVENT AVOIR DES MEDICAMENTS" tutortopmsg ;
thing-event: tutormsg10 
	"TOUJOURS ETRE EN TRAIN DE LOOTER" tutortopmsg ;

	thing-event: tutormsg11
	tutorial_touch_check if
		($ "PAUSE POUR UN ECHANGE DEQUIPE OU DES INFOS		VOUS POUVEZ ECHANGER LES LEADERS" $)
	else
		($ startbtns .. "  POUR UN ECHANGE DEQUIPE OU DES INFOS		VOUS POUVEZ ECHANGER LES LEADERS" $)
	then tutortopmsg ;
}


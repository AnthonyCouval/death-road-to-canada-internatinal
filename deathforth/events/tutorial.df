cyoa{

cyoa-choice: tutorchat-1
	pchar choosechar
	($ pname .. "  racconta " .. bname .. "  a " .. "Raffreddati!" pbold $) text!
	($ bname .. "  e infuriato da questo! " .. bHe .. "  prende " .. "SUPER FURIOSO!" rbold $) +crtext
	($ "'Non sono sicuro che dire a qualcuno " .. "''CALMATI'" pbold .. "  abbia mai funzionato, nella storia del mondo intero." $) +crtext
	1 cchar .wits! 1 cchar .attitude!
	witsattREV badfx clear-cyoa morale2-all
;

cyoa-choice: tutorchat-2
	pchar choosechar
	($ pname .. "  cerca di fare il fascino e ottenere " .. bname .. "  per aiutare a combattere gli zombi che si riversano dentro." .. bname .. "  suda visibilmente." $) text!
	($ "'Sono occupato! Sono impegnato a fare cose! Vai a farlo!" pbold $) +crtext
	"Beh, valeva la pena provare. Questo avrebbe potuto funzionare su qualcuno che era meno uno stronzo." +crtext
	6 cchar .wits! 6 cchar .attitude!
	witsattREV badfx clear-cyoa
;

cyoa-choice: tutorchat-3 
	pchar choosechar
	($ pname .. "  chiama " .. bname .. "  a " .. "dink." pbold $) text!
	($ bname .. "  e scioccato! E stato divertente dirlo finalmente " .. bhim .. "  che idiota " .. bhe .. "  era." $) +crtext
	goodfx clear-cyoa morale++all
;

cyoa: tutorchat
	rescue choosechar cicon
	cchar to bully
	dead? if npc-died then;
	($ pname .. "  vede " .. cname .. ", che e un vero idiota.	" .. "'Gli zombi sono entrati in casa mia! Probabilmente e colpa tua! Di certo non e colpa mia!" pbold .. "quando il gruppo ha trovato questo bunker degli zombi, " .. bname .. "  ha chiamato dibs su questa grande camera da letto prima di chiunque altro." $) text!
	
	choice( "Lascia " .. chim .. "  essere per ora" )choice
	choice( "Di " .. chim .. " ' di Calmarsi" )choice: tutorchat-1
	choice( "Convinci " .. chim .. "  di aiutare a combattere gli zombi" )choice: tutorchat-2
	choice( "Chiama " .. chim .. "  uno stupido" )choice: tutorchat-3
;

cyoa: tutorrecruit
	recruitee choosechar cicon
	dead? if npc-died then;
	($ pname .. "  saluta " .. rname .. ".
	" .. "Penso che dovremo lasciare questo rifugio sicuro. Almeno abbiamo potuto riposare per un po. Dovremmo provare a dirigerci verso il Canada! Vorresti che viaggiassi con te?" pbold .. " piu persone significano piu mani per saccheggiare e combattere. Significa anche piu persone che intralciano, mangiano il cibo e litigano." $) text!
	0.25 cchar .ai.wander_chance! 0 nearest .unseen! clear-cyoa
	recruit-yesno
	
;

}

: tutorial-npc1 
	new-npc@ 0 over .ai.wander_chance! 180 lt .aim_angle! lt .character@ to rescue
	cyoa{ ' tutorchat cyoa! } drop
;

: tutorial-npc2
	// new-rescue-npc 0 lt .character@ .ai.wander_chance!
	new-npc@ rescue-weapon over .weapona! 1 lt .unseen! 0 over .ai.wander_chance! 180 lt .aim_angle! lt .character@ to recruitee 
	cyoa{ ' tutorrecruit cyoa! } drop
;

mission{ 

: door-tutorial-escape
	cyoa-start
	beep "porta senza via di fuga" print
	"No Exit" cyoa-title!
	($ "'Non puoi andartene da questa posizione! Questa porta conduce solo alla " .. "Stanza della spazzatura" rbold .. "', che e quasi piena. Chiunque abbia progettato questo bunker per gli zombi non ha pensato molto a quanto sarebbe durato. Dovrai trovare un'altra via d'uscita. " $) cyoa-text!
	"'Oppure, se vuoi, puoi saltare il tutorial." rbold +text
		choice( "Torna al tutorial" )choice
		cyoa-add-choice
		"Salta il tutorial!" cyoa-choice-text!
			cyoa{ ' tutorial-ladder-end cyoa-choice-handler! }
;

: tutortopmsg
	eventid THING_EVENT_TIMER <> if drop then;
	( beep ) // Good for debugging timers
	me .retrigger_timer
	curmapview me .mapid@ <> if then;
	WHITE swap $cat 60 view_w 0.5 * 16 msgtickxy
;

: best_btn_name args( cmd ) <- cmd p1_cmd_joy_alt <- cmd p1_btn_name ;


: attackbtn CMD_ATTACK best_btn_name ;
: swapbtn CMD_SWAP best_btn_name ;
: usebtn CMD_USE best_btn_name ;
: startbtn CMD_START best_btn_name ;

: upbtn CMD_UP best_btn_name ;
: downbtn CMD_DOWN best_btn_name ;
: leftbtn CMD_LEFT best_btn_name ;
: rightbtn CMD_RIGHT best_btn_name ;

: usebtns usebtn
	// .. usebtn $len 1 usebtn $len and if "O " else "" then .. 1 usebtn
;
: attackbtns attackbtn 
	// .. attackbtn $len 1 attackbtn $len and if "O " else "" then .. 1 attackbtn
;
: swapbtns swapbtn
	// .. swapbtn $len 1 swapbtn $len and if "O " else "" then .. 1 swapbtn 
;
: startbtns startbtn 
	// .. startbtn $len 1 startbtn $len and if "O " else "" then .. 1 startbtn 
;

: arrowbtns
	upbtn ", " .. downbtn .. ", " .. leftbtn .. ", " .. rightbtn ..
;

: tutorial_touch_check touch_controls@ 0 > ;

thing-event: tutormsg1
	tutorial_touch_check if
		($ "TRASCInare IL POLLICE SINISTRO PER MUOVERSI		TOCCA IL PULSANTE UTILIZZA PER APRIRE" $)
		// ADJUST CONTROLS IN TOP LEFT OF PAUSE MENU - Removed from second line for now
		// Could we have the USE button glow here or something? That way could get rid of the third line maybe...
	else
		($ arrowbtns .. " Italiano" .. usebtns .. " APRIRE O USARE" $) 
	then tutortopmsg ;
thing-event: tutormsg2 
	tutorial_touch_check if
		($ "USA IL PULSANTE PER RACCOGLIERE ARMI		SCAMBIA PULSANTE PER SCAMBIARE		TENI USA PER LASCIARE" $) 
	else
		($ usebtns .. "  PER RACCOGLIERE LE ARMI		" .. swapbtns .. "  PER CAMBIARE ARMI		TIENI PREMUTO " .. usebtn .. "  PER LASCIARE CADERE LARMA" $) 
	then tutortopmsg ;
thing-event: tutormsg3 
	tutorial_touch_check if
		($ "USA IL PULSANTE PER RACCOGLIERE LE SEDIE		TOCCA IL LATO DESTRO DELLO SCHERMO PER LANCIARLE		CAMBIA PULSANTE PER LASCIARLE CADERE" $)
	else
		($ usebtns .. "  PER RACCOGLIERE LE SEDIE		" .. attackbtns .. "  PER LANCIARLE		" .. swapbtns .. "  PER LASCIAR CADERE LA SEDIA" $)
	then tutortopmsg ;
thing-event: tutormsg4 
	tutorial_touch_check if
		($ "TOCCA IL LATO DESTRO DELLO SCHERMO PER ATTACCARE		CERCA DI REGOLARE IL RITMO" $)
	else
		($ attackbtns .. "  PER ATTACCARE		CERCA DI REGOLARE IL RITMO" $)
	then tutortopmsg ;

thing-event: tutormsg5 
	"FAI ATTENZIONE AGLI ENORMI SCIAME	CORRERE SPESSO E MEGLIO CHE COMBATTERE" tutortopmsg ;
thing-event: tutormsg6 
	"LA SCALA PORTA ALLESTERNO	BUONA FORTUNA LI FUORI" tutortopmsg ;

thing-event: tutormsg7 
	tutorial_touch_check if
		($ "USA IL PULSANTE PER PARLARE O INTERAGIRE" $)
	else
		($ usebtns .. "  PER PARLARE O INTERAGIRE" $)
	then tutortopmsg ;

thing-event: tutormsg8 
	"SCEGLI I TUOI AMICI SAGGIAMENTE" tutortopmsg ;
thing-event: tutormsg9 
	"I BAGNI POTREBBERO AVERE MEDS" tutortopmsg ;
thing-event: tutormsg10 
	"SEMPRE SACCHEGGIARE" tutortopmsg ;

	thing-event: tutormsg11
	tutorial_touch_check if
		($ "METTI IN PAUSA PER SCAMBIO O INFO		PUOI CAMBIARE LEADER" $)
	else
		($ startbtns .. "  PER SCAMBIO O INFO		PUOI CAMBIARE LEADER" $)
	then tutortopmsg ;
}


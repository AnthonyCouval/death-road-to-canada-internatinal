
0 value alienopen
0 value grayalien

cyoa{ mission{

cyoa: cyoa-alien-car
	alienopen 1 > if cyoa-car then;
//	PRINTSTACK thing# to them# player .id@ to me#
	alienopen 0 > if
	"Andiamo!" cyoa-title!
		($ "La porta si apre quando " .. pname .. "  la tocca! Questa macchina aliena e gia impressionante!" $) cyoa-text!
			morale++all
			2 to alienopen goodfx
			choice( "Salite in macchina" )choice: get-into-car
			choice( "Lascialo stare per ora" )choice
	else
	"Oggetto Veloce Non Identificato" cyoa-title!
		"'Dopo un'ispezione piu attenta, questa cosa non e un UFO. E una specie di strana macchina! Non ci sono porte visibili su di essa." cyoa-text!
		grayalien .alive? if
			"Il piccolo alieno grigio deve sapere come aprire questa."
		else
			"'Con l'alieno mangiato dagli zombi, non c'e piu modo di aprirla! Non resta altro che andarsene quando puoi."
		then +crtext
		choice( "Lascialo stare per ora" )choice
	then
	STAT_STRENGTH cyoachar .effstat 99 > if
		choice( "Prendi la macchina" )choice: lift-car
	then

;

} }

cyoa{

cyoa: maninblack
	nearest .character@ to recruitee
	recruitee choosechar cicon
	dead? if npc-died then;
	"Uomo in Nero" cyoa-title!
	($ "'E un uomo inespressivo in un abito nero." .. "Non ci sono alieni qui! Gli alieni non esistono! Inoltre, gli zombi non esistono!" pbold $) cyoa-text! clear-cyoa
;

cyoa: alien
	1 nearest .character@ .party!
	grayalien choosechar cicon
	dead? if npc-died then;
	"Voglio credere" cyoa-title!
	($ "Gli alieni esistono davvero!" .. "  LO SAPEVI!" rbold $) text!
	region.zombie_basespawn@ 1 < if
		1 to alienopen clear-cyoa deleteme goodfx
		($ "Lalieno colpisce " .. pname .. "  con un dito luminoso. " .. pHis .. "  il cervello e pieno di informazioni su come aprire portiere di auto sbloccate leggermente piu complicate! Lalieno coglie loccasione per scappare." $)
	else
		"Lalieno e un po occupato al momento! Prova a parlare piu tardi, se sopravvive a questo assedio!" 
	then +crtext
;

}

: .maninblack
	47 over .specialtype!
	4 over .strength!
	3 over .fitness!
	4 over .shooting!
	0 over .female!
	"MiB" over .name!
	WEAPON_PISTOL over .weapona!
	30 LOOT_BULLET 2 pick .lootamt!
	drop
;

: alien map{ selected } . cr new-npc@ .alien lt .character@ to grayalien
	lt cyoa{ ' alien cyoa! } drop ;

: maninblack map{ selected } . cr new-npc@ .maninblack lt cyoa{ ' maninblack cyoa! } drop ;

: spawn-alien-car 
	18 spawncar mission{ cyoa{ ' cyoa-alien-car cyoa! } } 1 lt .no_hit!
;

: alien-trees map{
	20 for
		tree
		-60 60 frnd anglexy 0.5 pixelw * xymul 0.6 0.4 frnd * lt .pos xyadd lt .pos!
	next

	1 light_mode!
	0 1 0 tint_thing_near!
} ;


regiondef{

	 region: forest ufo
		w: 24
		h: 15
		on-foot
		script: timeofday o'clock

		no-prefab // Don't build that default city
		
		: setup-ufo-forest
			map{ grass } spawn-alien-car
			alien maninblack
			mission{ siege-start-dig }
			alien-trees
			// ' garf-survived to post-mission-cyoa
		;

		post-script: setup-ufo-forest 
}


cyoa{

// Unused
: npc-panda-go 
	($ cname .. " empieza a seguirte ', " .. pname .. " se queda un rato!" $) +crtext ccharget
;

: npc-panda-recruit
	cchar to recruitee goodfx clear-cyoa
	($ "El panda parece querer seguir " .. pname .. "!" $) +crtext
	pchar .morale3+ pchar .loyaltyREV pchar .attitudeREV
	recruitee .strengthREV recruitee .fitnessREV
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	recruit-yesno
;

: npc-panda-attack
	($ "El panda " .. "se enfada!" rbold $) +crtext pchar .ouch-- bitefx
;

cyoa-bridge: npc-panda-food
	($ pname .. " le ofrece al panda algun alimento." $) text!
	50 %chance if 
		npc-panda-recruit
	else
		($ "El panda muele la comida y luego la expelle. Los pandas son comederos exigentes, pero puedes seguir intentando con mas alimentos." $) +crtext badfx
	then	
	-1 add-food
;

cyoa-bridge: npc-panda-pull
	($ pname .. " tira hacia " .. phim .. " con la esperanza de que el animal siga. Parece valer la pena." $) text!
	50 %chance if 
		npc-panda-recruit
	else
		npc-panda-attack
	then	
	
;

cyoa-bridge: npc-panda-charm
	pchar isdogpal? if
		($ pname .. "  usa " .. phis .. " Psicologia del perro sobre el panda, lo que es un perro en realidad." $) text!
		npc-panda-recruit
	else
		pchar charming? if 
			($ pname .. "  usa " .. phis .. " su carisma natural para convencer al panda de seguirme." $) text!
			npc-panda-recruit
		else
			($ "Se molesta con " .. pname .. "." $) text!
			npc-panda-attack
		then
	then
;

// pchar .nonfatal if then

cyoa: npc-panda
	"Panico del Panda" cyoa-title!
	nearest .character@ choosechar cicon
	($ "Es un panda que se encuentra alrededor de un edificio en desorden. Mira a " .. pname .. " with a blank expression. It may be possible to get it to follow you..." $) text!
	"ADVERTENCIA: Probablemente te matara a menos que estes ofreciendole comida. Es una cosa con un 50% de probabilidades de desperdiciar tu comida." rbold +crtext
		choice( "Dejemoslo solo." )choice
		choice( "Arrastra al panda" )choice: npc-panda-pull
		LOOT_FOOD pchar .lootamt@ 0 > if
			choice( "Atraelos con comida" )choice: npc-panda-food
		then
		choice( "Coja su atencion con gracia" )choice: npc-panda-charm	
;

}

: .panda args( char )
	35 <- char .specialtype!
	"Panda" <- char .name!
	WEAPON_FIERCE <- char .weapon_default!
	2 STAT_STRENGTH <- char .bonus!
	6 <- char .strength!
	6 <- char .fitness!
	1 <- char .female!
	1 <- char .carrying.slot_count!
	"es una panda. Muy atractiva a menos que este enojado." <- char .job!
	<- char cyoa{ ' npc-panda cyoa! }
	drop
;


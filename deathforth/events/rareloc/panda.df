
cyoa{

// Unused
: npc-panda-go 
	($ cname .. " ' starts following ' wird zu ' beginnt zu folgen ' im Deutschen " .. pname .. " 'fur eine Weile!" $) +crtext ccharget
;

: npc-panda-recruit
	cchar to recruitee goodfx clear-cyoa
	($ "'Der Panda scheint zu wollen, dem zu folgen " .. pname .. "!" $) +crtext
	pchar .morale3+ pchar .loyaltyREV pchar .attitudeREV
	recruitee .strengthREV recruitee .fitnessREV
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	recruit-yesno
;

: npc-panda-attack
	($ "'Der Panda " .. "'schlagt aus!" rbold $) +crtext pchar .ouch-- bitefx
;

cyoa-bridge: npc-panda-food
	($ pname .. " ' bietet dem Panda etwas zu essen." $) text!
	50 %chance if 
		npc-panda-recruit
	else
		($ "'Der Panda kaut auf dem Essen herum und spuckt es dann aus. Pandas sind wahlerische Esser, aber Sie konnen es weiterhin mit mehr Essen versuchen." $) +crtext badfx
	then	
	-1 add-food
;

cyoa-bridge: npc-panda-pull
	($ pname .. " 'zieht den Panda zu " .. phim .. " 'hin, in der Hoffnung, dass das Tier folgt. Es scheint, als ware es einen Versuch wert." $) text!
	50 %chance if 
		npc-panda-recruit
	else
		npc-panda-attack
	then	
	
;

cyoa-bridge: npc-panda-charm
	pchar isdogpal? if
		($ pname .. "  benutzt " .. phis .. " 'HUNDEVERHALTEN auf den Panda, der eine Art Hund ist." $) text!
		npc-panda-recruit
	else
		pchar charming? if 
			($ pname .. "  benutzt " .. phis .. " 'naturlichen Charme, um den Panda dazu zu bringen, Ihnen zu folgen." $) text!
			npc-panda-recruit
		else
			($ "'Der Panda scheint nur genervt zu sein von " .. pname .. "." $) text!
			npc-panda-attack
		then
	then
;

// pchar .nonfatal if then

cyoa: npc-panda
	"'Panda Panik" cyoa-title!
	nearest .character@ choosechar cicon
	($ "'Es handelt sich um ein Panda, das nahe einer vernachlassigten Gebaudestruktur steht. Es schaut auf dich her. " .. pname .. " with a blank expression. It may be possible to get it to follow you..." $) text!
	"'WARNUNG: Ding dafur sehr wahrscheinlich, dich zu toten, wenn du nicht Essen anbietest. Handelt es sich um ein ding mit 50%-Wahrscheinlichkeit, dein Essen zu verschenken." rbold +crtext
		choice( "'Lass es in Ruhe" )choice
		choice( "'Das Panda ziehen" )choice: npc-panda-pull
		LOOT_FOOD pchar .lootamt@ 0 > if
			choice( "'Mit Essen locken" )choice: npc-panda-food
		then
		choice( "'Mit Charme ansprechen" )choice: npc-panda-charm	
;

}

: .panda args( char )
	35 <- char .specialtype!
	"'Panda" <- char .name!
	WEAPON_FIERCE <- char .weapon_default!
	2 STAT_STRENGTH <- char .bonus!
	6 <- char .strength!
	6 <- char .fitness!
	1 <- char .female!
	1 <- char .carrying.slot_count!
	"'ist ein Panda. Sehr schon, bis er wutet." <- char .job!
	<- char cyoa{ ' npc-panda cyoa! }
	drop
;


"
value SEWERTURTLE
SEWERTURTLE $parse-rooms

cyoa{ 

cyoa-bridge: turt-recruit-ask
	cchar to recruitee goodfx clear-cyoa
	($ cname .. "  le gusta la idea de ir a Canada. Sobre todo porque ha estado atrapado en esta alcantarilla durante demasiado tiempo." $) text!
	recruitee .strengthREV recruitee .fitnessREV
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	recruit-yesno
;

cyoa: turt-recruit
	"Haciendo amigos en la alcantarilla" cyoa-title!
	interactee .character@ choosechar cicon
	"'Es un gran hombre animal verde. Quizas algun tipo de roedor verde?" text!
	($ "'Hola? Puedo ayudarte con algo? Estas en mi casa." pbold $) +crtext
		choice( "Dejalo en paz por ahora" )choice
		choice( "Haz que te siga" )choice: turt-recruit-ask
;

}	

roomgen{
	
: .sewer-turt args( char )
	<- char .turtleify
	cyoa{ ' turt-recruit cyoa! }
	
;

}
	
locdef{
		
	: tsewerstarter
		s random-edge-door "alcantarilla" only-with-door
	;
	
	: tsewerender
		random-door "casa" only-with-door
	;
	
	: tostairsdown
		s random-edge-door "escalerasabajo" only-with-door

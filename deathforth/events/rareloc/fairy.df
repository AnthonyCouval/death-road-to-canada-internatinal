
cyoa{

: npc-fairy-go 
	($ cname .. " accorde des subventions " .. pname .. "doigts" $) text! goodfx clear-cyoa
;

cyoa-choice: npc-fairy-food
	npc-fairy-go
	($ "C'est ainsi que l'on considere la richesse aujourd'hui ?" pbold $) +crtext
	($ "Elle fait apparaitre une quantite de nourriture. " .. pname .. "." $) +crtext
	20 add-food deleteme
;

cyoa-bridge: npc-fairy-recruit
	cchar to recruitee npc-fairy-go
	($ "Elle casse ses doigts puis invoque une batte de baseball." $) +crtext
	($ "Je serai heureux de vous etre ami !" pbold $) +crtext
	0.25 cchar .ai.wander_chance! 0 nearest .unseen! WEAPON_FAIRYBAT cchar .weapona!
	recruitee .shootingREV recruitee .strengthREV recruitee .fitnessREV recruitee .medicalREV
	recruit-yesno
;

cyoa-choice: npc-fairy-vit
	npc-fairy-go
	($ "Vive une longue et heureuse vie !" pbold $) +crtext
	pchar .vitality++ pchar .health++ deleteme
;

cyoa: npc-fairy
	"Parvient a maitriser" cyoa-title!
	nearest .character@ choosechar cicon
	($ "Vous avez trouve la reine des fees ! elle vous offre un souhait ! " .. pname .. " une envie !" $) text!
		choice( "N'enonce pas encore une voeu" )choice
		choice( "Faites chiller !" )choice: npc-fairy-food
		choice( "Sante" )choice: npc-fairy-vit
		choice( "Vrai amitie" )choice: npc-fairy-recruit
		
;

}

: .fairy args( char )
	13 <- char .specialtype!
	"Reine des fees" <- char .name!
	5 <- char .shooting!
	4 <- char .strength!
	6 <- char .fitness!
	1 <- char .female!
	0 <- char .loyalty!
	4 <- char .medical!
	"la reine de tous les elements feeries est la fee morgane." <- char .job!
	<- char cyoa{ ' npc-fairy cyoa! } drop
	
;

locdef{
		
location
		tags: fairy
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .fairy
			filter-only
			
}


cyoa{

: npc-fairy-go 
	($ cname .. "  concede " .. pname .. "'' desiderio!" $) text! goodfx clear-cyoa
;

cyoa-choice: npc-fairy-food
	npc-fairy-go
	($ "'Questo e cio che ora e considerato ricchezza, giusto?" pbold $) +crtext
	($ "Evoca un mucchio di cibo per " .. pname .. "." $) +crtext
	20 add-food deleteme
;

cyoa-bridge: npc-fairy-recruit
	cchar to recruitee npc-fairy-go
	($ "Si schiocca le nocche e poi evoca una mazza da baseball." $) +crtext
	($ "'Certo, saro tuo amico!" pbold $) +crtext
	0.25 cchar .ai.wander_chance! 0 nearest .unseen! WEAPON_FAIRYBAT cchar .weapona!
	recruitee .shootingREV recruitee .strengthREV recruitee .fitnessREV recruitee .medicalREV
	recruit-yesno
;

cyoa-choice: npc-fairy-vit
	npc-fairy-go
	($ "Vivi una vita lunga e felice!" pbold $) +crtext
	pchar .vitality++ pchar .health++ deleteme
;

cyoa: npc-fairy
	"Regina delle Fate" cyoa-title!
	nearest .character@ choosechar cicon
	($ "Hai trovato la Regina delle Fate! Si offre di esaudire " .. pname .. "  un desiderio!" $) text!
		choice( "'Non esprimere ancora un desiderio" )choice
		choice( "Ricchezza" )choice: npc-fairy-food
		choice( "Salute" )choice: npc-fairy-vit
		choice( "Vera amicizia" )choice: npc-fairy-recruit
		
;

}

: .fairy args( char )
	13 <- char .specialtype!
	"Regina delle fate" <- char .name!
	5 <- char .shooting!
	4 <- char .strength!
	6 <- char .fitness!
	1 <- char .female!
	0 <- char .loyalty!
	4 <- char .medical!
	"e la regina di tutti i Fae Folk." <- char .job!
	<- char cyoa{ ' npc-fairy cyoa! } drop
	
;

locdef{
		
location
		tags: fairy
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .fairy
			filter-only
			
}

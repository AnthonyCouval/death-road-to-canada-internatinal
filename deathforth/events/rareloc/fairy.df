
cyoa{

: npc-fairy-go 
	($ cname .. "  accorde " .. pname .. "' souhait !" $) text! goodfx clear-cyoa
;

cyoa-choice: npc-fairy-food
	npc-fairy-go
	($ "'C'est ce qui est considere comme de la richesse maintenant, n'est ce pas ?" pbold $) +crtext
	($ "Elle evoque un tas de nourriture pour " .. pname .. "." $) +crtext
	20 add-food deleteme
;

cyoa-bridge: npc-fairy-recruit
	cchar to recruitee npc-fairy-go
	($ "Elle craque ses jointures puis evoque une batte de baseball." $) +crtext
	($ "'Bien sur, je serai ton ami !" pbold $) +crtext
	0.25 cchar .ai.wander_chance! 0 nearest .unseen! WEAPON_FAIRYBAT cchar .weapona!
	recruitee .shootingREV recruitee .strengthREV recruitee .fitnessREV recruitee .medicalREV
	recruit-yesno
;

cyoa-choice: npc-fairy-vit
	npc-fairy-go
	($ "Vis une longue et heureuse vie !" pbold $) +crtext
	pchar .vitality++ pchar .health++ deleteme
;

cyoa: npc-fairy
	"Reine des fees" cyoa-title!
	nearest .character@ choosechar cicon
	($ "Vous avez trouve la Reine des Fees ! Elle propose daccorder " .. pname .. "  un souhait !" $) text!
		choice( "'Ne faites pas encore de vu" )choice
		choice( " Richesse" )choice: npc-fairy-food
		choice( " Sante" )choice: npc-fairy-vit
		choice( " Veritable Amitie" )choice: npc-fairy-recruit
		
;

}

: .fairy args( char )
	13 <- char .specialtype!
	"Reine des fees" <- char .name!
	5 <- char .shooting!
	4 <- char .strength!
	6 <- char .fitness!
	1 <- char .female!
	0 <- char .loyalty!
	4 <- char .medical!
	"est la reine de tous les etres feeriques." <- char .job!
	<- char cyoa{ ' npc-fairy cyoa! } drop
	
;

locdef{
		
location
		tags: fairy
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .fairy
			filter-only
			
}

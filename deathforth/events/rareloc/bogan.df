
cyoa{

cyoa-bridge: npc-bogan-recruit
	cchar to recruitee goodfx clear-cyoa
	($ "Hace salir sus garras con un pequeno " .. "fwiiiiiink" pbold .. " 'ruido.	" .. "Vamos a darle un vuelo, BUB!" pbold .. "
		-- " .. cname $) text!
	recruitee .strengthREV recruitee .fitnessREV
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	team-count 3 > if
		($  rname .. " ' necesita una sorpresa cantidad de espacio en el coche. Tendras que deshacerte de alguien:" $) +crtext ' recruit-replace cyoa-team-choice
	else
		recruited
		choice( "Eres mi nuevo mejor amigo, " .. rname .. "!" )choice
	then
;

cyoa: npc-bogan
	"Hombre Pequeno Peludo Feroz" cyoa-title!
	interactee .character@ choosechar cicon
	($ "P" $) text!
	($ "Que quieres, BUB?" pbold .. "
		-- " .. cname $) +crtext
		choice( "Dejelo en paz por el momento" )choice
		choice( "Reclutelo" )choice: npc-bogan-recruit
;

}

: .bogan args( char )
	<- char .boganify
	<- char cyoa{ ' npc-bogan cyoa! }
	drop
;


cyoa: rare2-draculagrave
	"Cementerio espeluznante" cyoa-title!
	($ Thegroup .. " ' pasa por un cementerio. No hay muchos zombis ahi, pero se siente " .. "ominoso a un grado caricaturesco" rbold .. ". Debilmente, hacia el norte, se puede oir la espeluznante risa de un duende." $) cyoa-text! basic-tone
	goblin-laugh sfx{ 60 delay! 0.5 scale! }
	1.7 25 0 1 rnd zforecast
	"events/rareloc/cemetery.df" $load-region
		choice( "Buscar duende" )choice: premission
		gas-draw
;


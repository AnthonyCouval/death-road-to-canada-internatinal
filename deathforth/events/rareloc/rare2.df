	"events/inner/region/infernohouse.df" $load-region
		choice( "'Pule no incendio'" )choice: premission
		gas-draw
;

cyoa: rare2-farm
	"Fazenda gotica" cyoa-title!
	char-gen to recruitee 16 recruitee .specialtype! ricon
	($ Thegroup .. " 've uma quinta invadida por uma horda enraivada. Dois velhinhos fazendeiros correm para a casa deles. Eles podem ainda ser salvos!'" $) text! basic-tone
	2.3 12 17 rnd 3 4 rnd zforecast // former 2.6
	3 to farmtype
	"events/exterior/farm.df" $load-region
		choice( "Tente salvalos!" )choice: premission
		gas-draw
;


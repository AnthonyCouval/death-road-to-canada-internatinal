
cyoa{

: npc-cat-recruit
	cchar to recruitee goodfx clear-cyoa
	($ "Sollen " .. pname .. "  den Katzen rekrutieren?" $) +crtext
	pchar .morale3+ 
	// pchar .loyaltyREV pchar .attitudeREV
	recruitee .loyaltyREV recruitee .fitnessREV
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	recruit-yesno
;

cyoa-bridge: npc-cat-oscar
	cchar to recruitee clear-cyoa
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	recruit-yes
	pchar .morale3+ 
	recruitee .loyaltyREV recruitee .fitnessREV recruitee .temperREV
	"'BONUS: Oscars Moral bleibt immer uber Null!" fbold +crtext
	
;

cyoa-bridge: npc-cat-food
	LOOT_FOOD pchar .lootamt@ 0 > if
		($ pname .. " bietet der Katze Essen an.	Die Katze schnuffelt es sorgfaltig aus, dann verzehrt sie es in einem Augenblick. Sie entscheidet sich, ihn nicht zu toten " .. pname .. " in diesem Moment der Zeit." $) text!
		npc-cat-recruit
		-1 add-food
	else
		($ pname .. " has no food right now! Hopefully there's some in a nearby building..." $) text!
	then
;

cyoa-bridge: npc-cat-poke
	($ "	Well, your call, I suppose." .. pname .. " greift nach der Katze wird aber unterbrochen weil " .. "MORDEN LASSEN" fbold .. " von einer Flut von Krallen und Bissen." $) text!
	pchar .kill
;

// pchar .nonfatal if then

cyoa: npc-catrecruit
	nearest .character@ choosechar cicon
	
	cchar .bodytype@ 9 = if
		"Die letzte gute Katze" cyoa-title!
			($ pname .. " finds a cat that has made its den here. It seems different than all other post-zombocalypse cats. 
			The cat is super calm and doesn't radiate a desire to murder humans! How bizarre!
			He is wearing a name tag that reads:" .. "  OSCAR" rainbold $) text!
		choice( "Lass Oscar zuruck" )choice
		choice( "Rekrutiere Oscar!" )choice: npc-cat-oscar
	then;
	
	"Das Katzennest" cyoa-title!
	($ pname .. "  findet eine Katze die sich in diesem verwusteten Haus eingenistet hat. Die Katze starrt " .. phim .. "  mit einem tragen Blick an der gefarbt ist mit " .. "MORDERISCHER ABSICHT." rainbold $) text!
	// "Katzen wurden einige Zeit nach der Apokalypse riesig. Die kleinen Katzen der Vergangenheit sind jetzt eine Sache ferner Erinnerung." +crtext 
	"WARNUNG: Wird dich toten. Wenn nicht jetzt, vielleicht spater." rbold +crtext
		choice( "Lass es alleine" )choice
		choice( "Stocher die Katze! Ja!" fbold )choice: npc-cat-poke
		choice( "Locke es mit Essen an" )choice: npc-cat-food
;

}

: .catrecruit args( char )
	<- char
	2 %chance kspet-checker 1 < and if
		.oscarcatify
	else
		.catify
	then
	<- char cyoa{ ' npc-catrecruit cyoa! }
	drop
;

locdef{
		
location
		tags: catnest
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .catrecruit 3 5 rnd for skelscat next
			filter-only
			
}
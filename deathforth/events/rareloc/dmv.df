cyoa{

: dmv-cool-namer args( chara )
	"Cool " <- chara .name@ $cat <- chara .name!
;

: dmv-text-1
	($ cname .. "''s'appelle maintenant " $) text!
;

: dmv-text-2
	($ cname .. "'! Le permis de conduire le dit! C'est juridiquement contraignant!" $) +text clear-cyoa
;

: dmv-text-badname
	cchar dsyp? if
		($ cname .. " ' ne se soucie pas vraiment trop du nom. C'est plutot approprie!" $) +crtext goodfx
		morale++ vitality++ statmod{ -5 to dsyp-farted }
	then;
	($ cname .. "  forme instantanement une enorme puce sur " .. chis .. "  epaule. " .. cHe .. "  entre dans un etat permanent de rage bouillonnante!" $) +crtext strength++ fitness++ morale-- temper-- badfx
;

cyoa-choice: dmv-machine-1
	dmv-text-1 "Smellbert" pchar .name! dmv-text-2
	" Quel nouveau nom completement horrible!" +crtext dmv-text-badname
;

cyoa-choice: dmv-machine-2
	dmv-text-1 "Fartfart" pchar .name! dmv-text-2
	($ " Cest toujours mieux que " .. chis .. "  nom precedent." $) +crtext dmv-text-badname
;

cyoa-choice: dmv-machine-3
	dmv-text-1 "Harry Ham" pchar .name! dmv-text-2
	$( cname .. "  etait le nom le plus populaire pendant des siecles a la fin de lere medievale, tant pour les filles que pour les garcons. On pensait que cela apportait une benediction de bonne sante." $) +crtext
	vitality++ goodfx
;

cyoa-choice: dmv-machine-4
	dmv-text-1 pchar dmv-cool-namer dmv-text-2
	($ cname .. "  se sent bien au dela de la fraicheur avec " .. chis .. "  nouveau nom!" $) +crtext
	morale3+ goodfx
;

cyoa-bridge: dmv-machine-go
	"' Quel devrait etre le nom sur le permis de conduire?" text!
	choice( "Smellbert" )choice: dmv-machine-1
	choice( "Fartfart" )choice: dmv-machine-2
	choice( "Harry Ham" )choice: dmv-machine-3
	choice( "Cool " .. pchar .name@ )choice: dmv-machine-4
;

cyoa: dmv-machine
	"A License... to Drive" cyoa-title! picon!
	"'Je ne peux pas croire que tu aies saute la file d'attente ! Tres impoli !	C'est une machine utilisee pour imprimer les permis de conduire.	Elle peut imprimer un dernier permis avant de manquer de fournitures." text!
	($ pname .. "  pourrait en utiliser un nouveau, " .. phis .. "  le permis va bientot expirer !" $) +crtext
		choice( "Laisser pour le moment" )choice
		choice( "Imprimer un nouveau permis" )choice: dmv-machine-go
;

}

map{ roomgen{ : dmv-machine hospitalmachine swolebolt cyoa{ ' dmv-machine cyoa! } ; } }

locdef{
		
location: dmv
		max-rooms: 4
		entry-tags: dmvstart
		pre-script: set-theme-office
		script: set-theme-office
				
		: dmvdoors
			random-door "dmvend" only-with-door
			random-door "salle de bain" only-with-door
			random-door "salle de bain" only-with-door
		;
		
		room-choice: dmvstart
			room-weight: 80
			room-count: 1
			room-script: nad
			room-post-script: dmvdoors 5diff %zombs
			
		room-choice: dmvend
			room-weight: 1
			room-count: 1
			room-script: nad
			room-post-script: 10diff %zombs
			filter-only
			
		room-choice: restroom
			room-weight: 1
			room-count: 2
			room-script: nad
			room-post-script: 20diff %zombs
			filter-only
			
}


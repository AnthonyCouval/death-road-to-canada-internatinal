
cyoa{

: npc-heman-go 
	($ "Eu concordo com voce!" pbold $) text!
	($ cname .. " ' diz que ele vai te ajudar ate voce estar no seu caminho!" $) +crtext
	ccharget
;

cyoa-choice: npc-heman-fab
	npc-heman-go
	($ "Ele concede a " .. pname .. " algunas de suas " .. "PODER ESPECTACULAR" rainbold $) +crtext
	pchar .strength++ pchar .fitness++
;

cyoa-choice: npc-heman-mor
	npc-heman-go
	($ "Concede renovada " .. "COBRACaO" rainbold .. " a " .. pname .. "." $) +crtext
	pchar .morale4+
;

cyoa-choice: npc-heman-vit
	npc-heman-go
	($ "Ele concede a " .. pname .. " grande " .. "DESENHOLOMENTO" rainbold $) +crtext
	pchar .vitality++ pchar .health++
;

cyoa: npc-heman
	"Herman" cyoa-title!
	nearest .character@ choosechar cicon
	($ "O homem robusto vestido de um estranho custoume fala para " .. pname .. "." $) text!
	($ "Qual atributo consideras mais importante num heroi?" pbold $) +crtext
		choice( "'Nao responda ainda'" )choice
		choice( "Poder Espectacular" )choice: npc-heman-fab
		choice( "Coragem" )choice: npc-heman-mor
		choice( "Determinacao" )choice: npc-heman-vit
;

}

: .heman args( char )
	18 <- char .specialtype!
	"Principe Herman" <- char .name!
	WEAPON_CLAYMORE <- char .weapona!
	1 <- char .weapon_nodropa!
	6 <- char .strength!
	6 <- char .fitness!
	4 <- char .vitality!
	4 <- char .health!
	0 <- char .female!
	<- char cyoa{ ' npc-heman cyoa! }
	drop
;

locdef{
		
location
		tags: heman
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .heman
			filter-only
			
}

cyoa{

: npc-heman-go 
	($ " Je suis daccord avec toi !" pbold $) text!
	($ cname .. " ' dit qu'il t'aidera jusqu'a ce que tu sois sur la bonne voie !" $) +crtext
	ccharget
;

cyoa-choice: npc-heman-fab
	npc-heman-go
	($ " Il accorde " .. pname .. "  un peu de son " .. " POUVOIR FABULEUX" rainbold $) +crtext
	pchar .strength++ pchar .fitness++
;

cyoa-choice: npc-heman-mor
	npc-heman-go
	($ " Il accorde une " .. "COURAGE" rainbold .. "  sur " .. pname .. "." $) +crtext
	pchar .morale4+
;

cyoa-choice: npc-heman-vit
	npc-heman-go
	($ " Il accorde " .. pname .. "  grand " .. "DETERMINATION" rainbold $) +crtext
	pchar .vitality++ pchar .health++
;

cyoa: npc-heman
	"Herman" cyoa-title!
	nearest .character@ choosechar cicon
	($ "Lhomme costume et baraque parle a " .. pname .. "." $) text!
	($ "Quelle est selon toi la qualite la plus importante chez un heros ?" pbold $) +crtext
		choice( "'Ne reponds pas encore" )choice
		choice( "Un pouvoir fabuleux" )choice: npc-heman-fab
		choice( "Courage" )choice: npc-heman-mor
		choice( "Determination" )choice: npc-heman-vit
;

}

: .heman args( char )
	18 <- char .specialtype!
	"Prince Herman" <- char .name!
	WEAPON_CLAYMORE <- char .weapona!
	1 <- char .weapon_nodropa!
	6 <- char .strength!
	6 <- char .fitness!
	4 <- char .vitality!
	4 <- char .health!
	0 <- char .female!
	<- char cyoa{ ' npc-heman cyoa! }
	drop
;

locdef{
		
location
		tags: heman
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .heman
			filter-only
			
}
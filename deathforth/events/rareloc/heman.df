
cyoa{

: npc-heman-go 
	($ "Estou de acordo contigo!" pbold $) text!
	($ cname .. " 'diz que vai ajuda lo ate estar no caminho!" $) +crtext
	ccharget
;

cyoa-choice: npc-heman-fab
	npc-heman-go
	($ "Conferencia lhe " .. pname .. " alguns de seus " .. "PODERES FABULOSOS" rainbold $) +crtext
	pchar .strength++ pchar .fitness++
;

cyoa-choice: npc-heman-mor
	npc-heman-go
	($ "Conferencia novos " .. "CORAJE" rainbold .. " a " .. pname .. "." $) +crtext
	pchar .morale4+
;

cyoa-choice: npc-heman-vit
	npc-heman-go
	($ "Conferencia lhe " .. pname .. " grande " .. "DETERMINACAO" rainbold $) +crtext
	pchar .vitality++ pchar .health++
;

cyoa: npc-heman
	"Herman" cyoa-title!
	nearest .character@ choosechar cicon
	($ "O homem corpulento em uma fantasia estranha fala com " .. pname .. "." $) text!
	($ "Qual voce acha que e a qualidade mais importante em um heroi?" pbold $) +crtext
		choice( "'Nao responda ainda" )choice
		choice( "Poder Fabuloso" )choice: npc-heman-fab
		choice( "Coragem" )choice: npc-heman-mor
		choice( "Determinacao" )choice: npc-heman-vit
;

}

: .heman args( char )
	18 <- char .specialtype!
	"Principe Herman" <- char .name!
	WEAPON_CLAYMORE <- char .weapona!
	1 <- char .weapon_nodropa!
	6 <- char .strength!
	6 <- char .fitness!
	4 <- char .vitality!
	4 <- char .health!
	0 <- char .female!
	<- char cyoa{ ' npc-heman cyoa! }
	drop
;

locdef{
		
location
		tags: heman
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .heman
			filter-only
			
}
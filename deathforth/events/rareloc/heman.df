
cyoa{

: npc-heman-go 
	($ "Je suis d'accord avec toi !" pbold $) text!
	($ cname .. " il vous aidera jusqu'a ce que vous soyez sur le chemin !" $) +crtext
	ccharget
;

cyoa-choice: npc-heman-fab
	npc-heman-go
	($ "Il accorde a " .. pname .. " certains de ses " .. "POUVOIR MERVEILLEUX" rainbold $) +crtext
	pchar .strength++ pchar .fitness++
;

cyoa-choice: npc-heman-mor
	npc-heman-go
	($ "Il rerenove. " .. "COURAGE : C'EST LE FAIT DE POURSU" rainbold .. " sur " .. pname .. "." $) +crtext
	pchar .morale4+
;

cyoa-choice: npc-heman-vit
	npc-heman-go
	($ "Il accorde a " .. pname .. " tres bien. " .. "DETERMINATION" rainbold $) +crtext
	pchar .vitality++ pchar .health++
;

cyoa: npc-heman
	"Herman : hermann" cyoa-title!
	nearest .character@ choosechar cicon
	($ "L'homme robuste vetu d'un costume etrange parle a. " .. pname .. "." $) text!
	($ "La qualite la plus importante d'un heros est le courage." pbold $) +crtext
		choice( "Attendez encore avant de repondre." )choice
		choice( "Pouvoir merveilleux" )choice: npc-heman-fab
		choice( "Courage : bravery, energie et determin" )choice: npc-heman-mor
		choice( "Determination : la volonte de ne pas s'arreter malgre les obstacles." )choice: npc-heman-vit
;

}

: .heman args( char )
	18 <- char .specialtype!
	"Prince herman : prince herman" <- char .name!
	WEAPON_CLAYMORE <- char .weapona!
	1 <- char .weapon_nodropa!
	6 <- char .strength!
	6 <- char .fitness!
	4 <- char .vitality!
	4 <- char .health!
	0 <- char .female!
	<- char cyoa{ ' npc-heman cyoa! }
	drop
;

locdef{
		
location
		tags: heman
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .heman
			filter-only
			
}
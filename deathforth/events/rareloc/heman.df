
cyoa{

: npc-heman-go 
	($ "Estoy de acuerdo contigo!" pbold $) text!
	($ cname .. " ' dice que el te ayudara hasta que estes en tu camino!" $) +crtext
	ccharget
;

cyoa-choice: npc-heman-fab
	npc-heman-go
	($ "El confiere a " .. pname .. " ' alguna de su " .. "PODER FABULOSO" rainbold $) +crtext
	pchar .strength++ pchar .fitness++
;

cyoa-choice: npc-heman-mor
	npc-heman-go
	($ "El confiere renovado " .. "VALOR" rainbold .. " ' a " .. pname .. "." $) +crtext
	pchar .morale4+
;

cyoa-choice: npc-heman-vit
	npc-heman-go
	($ "El confiere a " .. pname .. " ' gran " .. "DETERMINACION" rainbold $) +crtext
	pchar .vitality++ pchar .health++
;

cyoa: npc-heman
	"Herman" cyoa-title!
	nearest .character@ choosechar cicon
	($ "El hombre corpulento en un traje extrano habla a " .. pname .. "." $) text!
	($ "Cual crees que es la cualidad mas importante en un heroe?" pbold $) +crtext
		choice( "No contestes todavia" )choice
		choice( "Poder Fabuloso" )choice: npc-heman-fab
		choice( "Valor" )choice: npc-heman-mor
		choice( "Determinacion" )choice: npc-heman-vit
;

}

: .heman args( char )
	18 <- char .specialtype!
	"Principe Herman" <- char .name!
	WEAPON_CLAYMORE <- char .weapona!
	1 <- char .weapon_nodropa!
	6 <- char .strength!
	6 <- char .fitness!
	4 <- char .vitality!
	4 <- char .health!
	0 <- char .female!
	<- char cyoa{ ' npc-heman cyoa! }
	drop
;

locdef{
		
location
		tags: heman
		max-rooms: 2
		entry-tags: trashed
		script: set-theme-house
		pre-script: set-theme-house
		
		room-choice: trashed
			room-weight: 10
			room-count: 2
			room-script: nad
			room-post-script: still-npc .heman
			filter-only
			
}
"../deathforth/rooms/bigoffice.txt" $add-rooms
"events/inner/officeloc.df" $load

cyoa{

cyoa-bridge: npc-wyk-recruit
	cchar to recruitee goodfx clear-cyoa
	($ "Devrait " .. pname .. " recruteur " .. cname .. "?" $) text!
	recruitee .strengthREV recruitee .fitnessREV
	recruitee .shootingREV
	recruitee .medicalREV recruitee .mechanicREV
	0.25 cchar .ai.wander_chance! 0 nearest .unseen!
	recruit-yesno
;

cyoa: npc-wykrecruit
	"'Monument de l'echec de Would You Kindly" cyoa-title!
	nearest .character@ choosechar cicon
	($ pname .. " ' trouve un squelette. Il bouge, d'une maniere ou d'une autre. Il pue " .. "ECHEC." rainbold $) text!
	cchar .name@ "GOOBS" $= if
		"CRIER RESOUD TOUJOURS TOUT" pbold
	then
	cchar .name@ "Brawli" $= if
		"IT'S NOT MY BIRTHDAY ... BUT FOR YOU ... IT IS..." pbold
	then
	cchar .name@ "Le Danamal" $= if
		"THE DUDE ABIDES..." pbold
	then
	cchar .name@ "Romcomm" $= if
		"'JE N'AI PEUT ETRE QU'UNE SEULE CORNE, MAIS C'EST TOUT POUR VOUS" pbold
	then
	cchar .name@ "Farrington" $= if
		"CHARGEZ LES LASERS !" pbold
	then
	cchar .name@ "Dagwood" $= if
		"'TU ES OS" pbold
	then
	cchar .name@ "Firecrow" $= if
		"BUT I'M YOUR FRIENDLY NEIGHBORHOOD BARTENDER..." pbold
	then
	// "'BON, JE SUPPOSE QU'ILS ONT ESSAYE. MAIS CE N'ETAIT PAS ASSEZ BON." pbold
	+crtext
	"CON : Vraiment terrible recrue, dans la vie comme dans la mort." rbold +crtext
	"PRO : Est un squelette dansant effrayant." bbold +crtext
		choice( "Ignorez pour le moment" )choice
		choice( "Recrutez le" )choice: npc-wyk-recruit
;

}

: .wykrecruit args( char )
	lt .scatter
	<- char .skelify
	<- char cyoa{ ' npc-wykrecruit cyoa! }
	0.1 <- char .ai.wander_chance!
	drop
;

: .wykgoobers args( char )
	"GOOBS" <- char .name!
	<- char .wykrecruit
;

: .wykbrawli args( char )
	"Brawli" <- char .name!
	<- char .wykrecruit
;

: .wykdan args( char )
	"Le Danamal" <- char .name!
	<- char .wykrecruit
;

: .wykfirecrow args( char )
	"Firecrow" <- char .name!
	<- char .wykrecruit
;

: .wykdagwood args( char )
	"Dagwood" <- char .name!
	<- char .wykrecruit
;

: .wykfarrington args( char )
	"Farrington" <- char .name!
	<- char .wykrecruit
;

: .wykromcomm args( char )
	"Romcomm" <- char .name!
	<- char .wykrecruit
;

locdef{
		
location: wyk
		max-rooms: 4
		entry-tags: officstart
		pre-script: set-theme-office
		script: set-theme-office
		post-script: 10diff %zombs
		
		: wykdoors
			random-door "supprime" only-with-door
			random-door "supprime" only-with-door
			random-door "salle de bain" only-with-door
		;
		
		: wyk-member
			still-npc .wykromcomm
			still-npc .wykfarrington
			still-npc .wykdagwood
			still-npc .wykfirecrow
			still-npc .wykbrawli
			still-npc .wykdan
			still-npc .wykgoobers
			5 for skelscat next
		;
		
		room-choice: officstart
			room-weight: 80
			room-count: 1
			room-script: nad
			room-post-script: 5 12 rnd femur .scatter wykdoors
			
		room-choice: trashed
			room-weight: 1
			room-count: 2
			room-script: nad
			room-post-script: 10 %zombs 2 7 rnd femur .scatter
			filter-only
			
		room-choice: restroom
			room-weight: 1
			room-count: 2
			room-script: nad
			room-post-script: 10 %zombs wyk-member
			filter-only
			
}
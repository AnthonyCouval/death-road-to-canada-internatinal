
cyoa{ road{

: bandithurt
	ezbandit? if 
		ouch--all
	else
		ouch12rnd--all
	then
;

: haggler-morale 
	haggler? if else morale--all then
;

: bandit-give-in
	($ Thegroup .. " 'entscheidet sich, auf die Seite der Banditen zu gehen.' // Deutsch " .. gThey .. " 'gibt' // Deutsch" .. g1s .. " 'in die Forderungen der Banditen ein.' // Deutsch" $) cyoa-text! badfx
;
cyoa-choice: bandit-pay-foodtoll
	someicon bandit-give-in bandit-toll-pay haggler-morale 
;
cyoa-choice: bandit-pay-lowtoll
	someicon bandit-give-in eat-all bandit-ammomed2 haggler-morale
;
cyoa-choice: bandit-pay-badtoll
	someicon bandit-give-in bandit-ammomed 
		// check if in car
		vehicle.which@ 0 if
			bandit-gas
		else
			bandit-gastank
		then morale2-all
;
cyoa-choice: bandit-start-fight
	($ Thegroup .. " 'weiss, dass jedes einzelne von ' // Deutsch " .. ghis .. " 'Versorgungen wichtig ist fur ' // Deutsch " .. ghis .. " 'Chancen, nach Kanada zu gelangen. " .. gthey .. " 'kampfen" .. g1s .. "." $) cyoa-text! someicon bitefx
		ezbandit? if 
			ouch--all
		else
			70 %chance if
				ouch12rnd--all
			then;
			ouch2-all
		then
;

: bandit-demand
	bandit-toll? if
		($ bandit-toll .. " 'Lebensmittel " .. "'um sicher weiterzukommen." rbold $) +text
		choice( "'Maut bezahlen von " .. bandit-toll .. " 'Lebensmittel" )choice: bandit-pay-foodtoll
	else
		trunk-food 4 > if
			ezbandit? if 
				($ "'den Rest Ihrer Lebensmittel, und ein Viertel Ihrer Munition und medizinischen Vorrate." rbold $) 
			else
				($ "'den Rest Ihrer Lebensmittel, und die Halfte Ihrer Munition und medizinischen Vorrate." rbold $) 
			then +text
			choice( "'Den Forderungen der Banditen nachgeben" )choice: bandit-pay-lowtoll
		else
			ezbandit? if
				($ "'all Ihren zusatzlichen Treibstoff, und die Halfte Ihrer Munition und medizinischen Vorrate!" rbold $)
			else
				($ "'all Ihre Munition, medizinischen Vorrate, und zusatzlichen Treibstofftanks!" rbold $)
			then +text
			choice( "'Den harten Forderungen der Banditen nachgeben" )choice: bandit-pay-badtoll
		then
	then
;
: bandit-fight
	choice( "'Verweigern und kampfen!" )choice: bandit-start-fight
;
: bandit-demand-fight
	bandit-demand bandit-fight
;

cyoa-choice: bandit-charm-sucker
	($ cname .. " 'trickst die Bande. Wahrend sie auf Lieferungen warten, " .. ghe .. " 'rennt er ins Auto und wegfahrt. Die Bande gelingt es, das Auto zu treffen, als es wegfahrt! Sie konnen es nur knapp beschadigen." $) cyoa-text! -1 car-chassis+ bitefx
	car-chassis 0 > if
		"'Das Auto bekommt ein oder zwei zusatzliche Locher hinzu und ist sonst intakt." +crtext
	then loyaltyREV
;

cyoa-choice: bandit-charm-tp
	($ Thegroup .. "', nicht bereit oder in der Lage, andere Vorrate zu sparen, entscheidet sich dazu, die " .. ghis .. " ' zusatzlichen Waffen aus dem Kofferraum zu werfen.	" .. "'ZUSATZLICHE WAffEN VERLOREN!" rbold $) cyoa-text! trunk.clear badfx
;

cyoa-choice: bandit-charm-morale
	($ Thegroup .. "', nicht bereit oder in der Lage, andere Vorrate zu sparen, entscheidet sich dazu, verehrte personliche Gegenstande den Banden abzutreten.	" .. "'Was ein Schade!" rbold $) cyoa-text! badfx morale3-all
;

cyoa-bridge: bandit-start-charm
	($ cname .. " 'bietet den Banditen einen Kompromiss an. " .. gHe .. " 'wird den Banditen etwas auf der Straße hinterlassen, dann fahrt er weg. Es wird keinem von beiden geschadet." $) cyoa-text! witsattREV 
	"'Die Versorgungen werden sein:" +crtext
		trunk-food bandit-toll2 1 - > if
			choice( bandit-toll2 .. " 'Lebensmittel" )choice: bandit-toll-pay2
		then
		cloyalty- if
			choice( "'TSCHAU, NERDS!!" )choice: bandit-charm-sucker
		then
		trunk-bullet 1 > trunk-rifle-shell 1 > trunk-shotgun-shell 1 > or or if
			choice( "'Die Halfte eurer Munition" )choice: bandit-ammo2
		then
		trunk-gas 100 > if
			choice( "'Eure zusatzlichen Benzintanks" )choice: bandit-gastank
		then
		trunk-medical 1 > if
			choice( "'Die Halfte eurer medizinischen Vorrate" )choice: bandit-med2
		then
		choice( "'Personliche Schatze" )choice: bandit-charm-morale
		trunk.count 0 > if
			choice( "'Alle Waffen im Kofferraum" )choice: bandit-charm-tp
		then
;
: bandit-charm
	most-charming if 
		charchoice( " 'bietet den Banditen einen Kompromiss" )choice: bandit-start-charm
	then
;

// Toll road

cyoa-bridge: bandit-tollroad-coolit
	cpet? if
		($ cname .. " 'furzt auf der Mautbrucke." $)
	else
		($ cname .. " 'sagt den Bruckenbanditen, sie sollten" .. " KUHL ES." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "Bruckenrauber" recruitee .name!
		($ "1" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ " the loot. " .. thegroup .. "s Vorrate." $) +crtext badfx bandit-mostgas morale2-all
	then witsattREV 
;

cyoa-choice: bandit-tollroad-shoot
	($ Thegroup .. " zeichnen " .. ghis .. " ': LASSTS DAS SPRINGEN']" .. gs .. " ': LASSTS DAS SPRINGEN']" $) cyoa-text!
	($ gThey .. " " .. gare .. " ': LASSTS DAS SPRINGEN']" .. Thegroup .. " ': LASSTS DAS SPRINGEN']" $) +crtext goodfx
;

cyoa-choice: bandit-tollroad-jump
	($ cname .. " ': LASSTS DAS SPRINGEN'] " .. cHe .. " ': LASSTS DAS SPRINGEN']" $) cyoa-text! temperREV car-jump
;

cyoa: bandit-tollroad

	($ "': LASSTS DAS SPRINGEN']" .. "': LASSTS DAS SPRINGEN'] " rbold $) cyoa-text!
		bandit-demand-fight
		shooting-total 12 > if
			choice( "': LASSTS DAS SPRINGEN']" )choice: bandit-tollroad-shoot
		then
		most-grating if
			charchoice( " ': LASSTS DAS SPRINGEN']" fcoolit )choice: bandit-tollroad-coolit
		then
		smartest-pass if
			smartest charchoice( "': LASSTS DAS SPRINGEN']" )choice: car-detour
		then
		angriest-pass if 
			angriest choosechar chumany? if
				cchar charchoice( "': LASSTS DAS SPRINGEN']" )choice: bandit-tollroad-jump
			then
		then
;

// Quiet Ambush

cyoa-choice: bandit-quiet-paranoid
	($ cname .. " ' ruft sofort die Banditen auf ihr Bluffen heraus. " .. cname .. " ' macht bereits eine Menge Larm. Die Banditen geraten in Panik und die Zombies sturzen herein, " .. thegroup .. " ' schlendert unbeeindruckt davon weg. Es zahlt sich aus, standig fur das Schlimmste zu planen!" $) cyoa-text! goodfx morale++ morale++all witsREV attitudeREV
;

cyoa-choice: bandit-quiet-angry
	($ "'ohne Vorwarnung und mit keinem Wort, " .. cname .. " ' lauft auf den nachsten Banditen zu und schlagt ihn mit der Faust nieder, sodass er ohnmachtig wird. Dann " .. cname .. " ' macht das gleiche mit einem zweiten Banditen, bevor sie sich beruhigt. Alle sind geschockt. Die verbleibenden drei Banditen beschließen, ihre Freunde leise aufzuheben und zu gehen." $) cyoa-text! goodfx morale++ morale++all temperREV strengthREV
;

cyoa-choice: bandit-quiet-pay
	($ Thegroup .. " ' zahlt den Banditen ihr Erpressungsgeld, anstatt das Gemetzel zu riskieren." $) cyoa-text!
	-10 trunk-food+ badfx
;

: bandit-quiet-roll
	50 %chance if
		"'Schreit plotzlich ein Bandit und es kommt zu Chaos, als die Zombies uberrennen. Die Flucht ist blutig." +crtext ouch--all badfx
	else
		($ "'Die Banditen sind nur heiße Luft und machen keinen Mucks, als ihr Bluff auffliegt. " .. Thegroup .. " ' kehrt zum Auto zuruck, wahrend die Banditen erschrocken wegschleichen." $) +crtext goodfx
	then
;

cyoa-choice: bandit-quiet-nofood
	choosehuman cicon
	($ cname .. " ' erklart, dass " .. ghe .. " ' nicht genug Nahrung hat." $) cyoa-text! 
	trunk-food 4 > if
		"'Die Banditen scheinen nicht das Risiko einzugehen, also nehmen sie weniger Nahrung an." +crtext eat-all
	else
		"Die Banditen denken, dass das eine Luge ist!" +crtext
		bandit-quiet-roll
	then
;

cyoa-choice: bandit-quiet-yell
	choosehuman cicon
	($ cname .. " ruft den Banditen an seinem Bluff." $) cyoa-text! 
	bandit-quiet-roll
;

cyoa-bridge: bandit-quiet-coolit
	cpet? if
		($ cname .. " 'fadept leise den Raubern etwas an." .. " Silent... but deadly." pbold $)
	else	
		($ "'leise murmelt zu den Raubern, " .. cname .. " 'verlangt den Raubern," .. " KUHL ES." pbold $) 
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "'stilleres Gespensterbandit" recruitee .name!
		($ "'stehen die Rauber verstarrte, ohne zu wissen, was sie tun sollen. Einer bietet an, wenn ', " .. cname .. " 'wird weggehen und niemals wiederkehren lasst. Die Rauber konnen ihre Vorrate abgeben oder stilles Zeichen vermitteln, um Zombie-Geheimnisse zu lehren." $)
		+crtext 
		rescue-trainitem 
		cooled-it goodfx
	else cool-it++
		"'Die Rauber sind, fur was sich lang anfuhlt wie eine lange Zeit, uberrascht von diesem." +crtext 
		bandit-quiet-roll
	then witsattREV 
;

cyoa: bandit-quiet
	// NEED IMAGE 
	someicon
	($ "'belagern ', " .. thegroup .. " 'wahrend sie', " .. gtheyare .. " 'bei einem von Zombies bevolkerten Haus heranstehen. Die Rauber sprechen in halber Stimme, um Aufmerksamkeit der Untoten zu vermeiden. Sie fordern etwas Essen ab oder drohen zu schreien." $) cyoa-text!
		trunk-food 9 > if
			choice( "'10 Essen geben" )choice: bandit-quiet-pay
		else
			choice( "'Kein Essen dabei!" )choice: bandit-quiet-nofood
		then		
		most-angrystrong if 
			charchoice( " amok laufen" )choice: bandit-quiet-angry
		then
		most-paranoid if 
			charchoice( " hatte bereits einen Plan" )choice: bandit-quiet-paranoid
		then
		most-grating if 
			charchoice( " ': LASSTS DAS SPRINGEN']" fcoolit )choice: bandit-quiet-coolit
		then
		choice( "Luge aufrufen" )choice: bandit-quiet-yell
;

// Buff Bandits

cyoa-choice: bandit-buff-pose
	($ cname .. " 'fordert die Banditen zu einem Posen-Wettbewerb heraus.'" $) cyoa-text!
	cstrength+ if
		($ cHe .. "  go. " .. thegroup .. " geh wegen des Bodybuilder-Codes." $) +crtext goodfx morale2+all strengthREV
	then;
	
	cstrength- if
		90 %chance if
			($ cHe .. " 'ist weit von der Muskulatur der Bandeiten entfernt.', " .. cHe .. " 'verliert den Pose-Wettkampf nahezu sofort. Die Bandeiten nehmen zusatzlich viele Ausrustungsgegenstande, auch solche, die sie nicht benotigen, weil ', " .. thegroup .. " 'ein Lernstuck daruber ist, dass die Schwachen das Swole herausfordern.', " $) +crtext morale--all bandit-most bandit-gastank badfx
		else
			($ "'Durch eine seltsame Wende der Dinge wird ', " .. che .. " 'diesen Pose-Wettkampf trotzdem gewinnt, weil es ein geheimes Regelwerk im Leistungssportrichterbuch gibt. Die Bandeiten sind recht wutend daruber, aber ihre Hande sind durch ihre Regeln gebunden." $) +crtext strength++ goodfx morale++all
		then strengthREV
	then;
	
	strengthroll if
		($ cHe .. " 'schafft es, trotzdem die Banditen in einem Korperkulturwettkampf zu schlagen, sowohl in den Flexing-Abschnitten als auch im Talentsegment! ', " .. Thegroup .. " 'entlassen wird." $)
		+crtext goodfx strength++ morale++all strengthREV
	then;
	($ cname .. " 'verliert den Pose-Wettkampf. Es ist peinlich, und die Bandeiten nehmen zusatzliche Ausrustungsgegenstande als Strafe fur das Hochmut der Herausfordernung." $) +crtext
		morale-- badfx bandit-ammomed2 bandit-food
;

cyoa-bridge: bandit-buff-coolit
	cpet? if
		($ cname .. " 'flatuliert den Banditen und dem Konzept des Korperkulturs." $)
	else	
		($ cname .. " 'sollen" .. " KUHL ES." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "'Buff-Bandeit" recruitee .name!
		($ "'sind beeindruckt von diesem mutigen Verhalten! Sie erklaren sich bereit, ', " .. chim .. " 'ihr Ehrenchampion!		Die Banditen bieten ein Geschenk:'" $)
		+crtext morale3+all rescskill1 rescue-reward-shuffle recruit-choice cooled-it goodfx
	else cool-it++
		($ "'Die Banditen sind erbost uber diese negative Einstellung und entladen ihren Zorn an ' " .. thegroup .. "''s Auto. Sie alle schlagen es bare-handed, was ernsthafte Schaden anrichtet.'" $) +crtext -2 car-chassis+ badfx	
		morale--all bitefx
		"'Die muskelbepackten Banditen rennen davon, auch der Hund.'" +crtext	
	then witsattREV
;

cyoa-choice: bandit-buff-obliv
	($ cname .. " 'fragt die muskelbepackten Banditen nach ihrer ' " .. "'ARMBANDTUCHERN'" pbold .. " ' und " .. "'STANDIG HANTELN MIT GESPRACHEN BEWERFEN.	'" pbold .. "'Die Banditen sprechen uber eine beeindruckende verlorene Tradition des ' " .. "'KORPERBAU'" rbold .. " 'die verloren ging, als die Zivilisation fiel.	Sie zeigen, was sie meinen, in einer beeindruckenden Muskel-Ausstellung. Dabei vergessen die Banditen beinahe, ' " .. thegroup .. "." $) cyoa-text!
	morale2+all goodfx witsattREV
;

cyoa: bandit-buff
	image-buff-bandit
	"'Sie tragen alle Armbandtucher'" cyoa-title!
	($ "'Es erscheinen Banditen, alle tragen Armbandtucher und sind super muskulos, sogar ihr Hund. Sie fordern Proteinpulver!'" .. "'Sie werden auch ' " rbold $) cyoa-text!
		bandit-demand
		strongest charchoice( " fordert sie zu einem Posen-Wettbewerb heraus" )choice: bandit-buff-pose
		most-grating if
			charchoice( " kuhlen Sie es'" fcoolit )choice: bandit-buff-coolit
		then
		most-oblivious if
			charchoice( " what's up with the outfits" )choice: bandit-buff-obliv
		then
		bandit-fight
		
;

// Greedy bandits that demand all of your stuff

: bandit-allofit-ez
	ezbandit? if "die Halfte von" else "alles" then
;

cyoa-choice: bandit-allofit-pay
	($ "Die Banditen gehen durch " .. thegroup .. "fakalien-Gas.'] " .. bandit-allofit-ez .. " fakalien-Gas.']" .. Thegroup .. " fakalien-Gas.']" $) cyoa-text! badfx
	bandit-most
	morale2-all
;
: bandit-allofit-check args( chara ) 
	<- chara .cfitness+ if
		<- chara .sting--
	else
		<- chara .cfitness- if
			<- chara .ouch2-
		else
			<- chara .ouch-- 50 %chance if <- chara .sting-- then
		then
	then <- chara .fitnessREV
;
cyoa-choice: bandit-allofit-run
	($ Thegroup .. " fakalien-Gas.']" $) cyoa-text!
	solo if
		cfitness+ if
			($ cname .. " fakalien-Gas.'] " .. cHe .. " fakalien-Gas.']" $) +crtext sting--
		else
			cfitness- if
				($ cname .. " runs a few feet before getting winded. 
				" .. cHe .. " fakalien-Gas.']" $) +crtext ouch2-
			else
				($ cname .. " fakalien-Gas.'] " .. che .. " fakalien-Gas.'] " .. cHe .. " fakalien-Gas.']" $) +crtext ouch-- 50 %chance if sting-- then
			then
		then
	else
		' bandit-allofit-check foreach-team-char
	then bitefx
;
cyoa-bridge: bandit-allofit-coolit
	cpet? if
		($ cname .. " fakalien-Gas.'] " .. chis .. " fakalien-Gas.']" $)
	else	
		($ cname .. " 'verlangt den Raubern," .. " KUHL ES." pbold $) 
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "'Reformierter Rauber" recruitee .name!
		($ "'Dies halt die Rauber auf Distanz.		Was tun, wenn sie ihr ganzes Leben falsch gelebt haben?		Konnten Dinge besser gelaufen sein, wenn sie einfach ruhig blieben?		Sie entscheiden sich, nur gute Dinge von jetzt an zu tun und ein Geschenk anzubieten!		" .. Thegroup .. " 'ist unverletzt, mit " .. ghis .. " 'gehobenen Geistern." $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "'Die Rauber sind von dieser Sache gar nicht amusiert. Sie eroffnen das Feuer, als " .. thegroup .. " 'flucht versucht." $) +crtext 
		notsolo if 
			($ "'zudem ist " .. cname .. "." $) +crtext
		then
		ouch2- sting--all bitefx
	then witsattREV 
;

cyoa-choice: bandit-allofit-paranoid
	($ "'immer vorsichtig, " .. cname .. " 'war vor dem Uberfall auf der Hut. " .. cHe .. " 'rennt zu einem nahe gelegenen und leicht ubersehenen Deckungspunkt. " $) cyoa-text!
	notsolo if ($ Everyone .. " 'folgt " .. chim .. "." $) +text then
	"'Die Rauber verlieren ihre uberwaltigende Vorteilstellung, und fliehen nach einer kurzen Schlagerei." +crtext bitefx sting--all witsattREV
;

cyoa: bandit-allofit
	"'Dein Geld vs Dein Leben" cyoa-title! someicon
	($ "'Die Banditen fangen an " .. thegroup .. " 'unerwartet, an einem schrecklich ungunstigen Ort fur ein " .. ghim .. " 'Kampf. Sie fordern alle Nahrungsmittel und " .. bandit-allofit-ez .. " 'Vorrate auf!	" .. "'DEIN GELD ODER DEIN LEBEN!" rbold $) cyoa-text!
		most-charming if 
			charchoice( " 'bietet den Banditen einen Kompromiss" )choice: bandit-start-charm
		else
			choice( "'Gib die Versorgung auf" )choice: bandit-allofit-pay
		then
		most-grating if 
			charchoice( " ': LASSTS DAS SPRINGEN']" fcoolit )choice: bandit-allofit-coolit
		then
		most-paranoid if 
			charchoice( "': Wir konnen sie bekampfen!" )choice: bandit-allofit-paranoid
		then
		choice( "'Lauf weg!" )choice: bandit-allofit-run
;		

} }



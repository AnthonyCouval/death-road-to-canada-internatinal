
cyoa{ road{

cyoa-choice: bandit-car-plow
	($ Thegroup .. " 'entscheidet sich, das Auto mit voller Absicht durch die Banditen-Sperre und Lord Humungoid zu steuern." .. gThey .. " 'nehmen" .. g1s .. " 'viel Schaden, uberleben aber" .. g1s .. "." $) cyoa-text! sting12rnd--all bitefx car-plowthrough someicon
;

cyoa-choice: bandit-car-paranoid
	($ cname .. " 'hatte wahrend der Rede einen Plan ausgearbeitet." $) cyoa-text!
	cpet? if
		($ cHe .. "  go. " .. thegroup .. " alles Teil des Plans!" $)
	else
		($ cHe .. " 	they are already far behind. " .. thegroup .. " schon zu weit voraus, um es noch einzuholen." $)
	then +crtext morale++all witsattREV goodfx
;

cyoa-bridge: bandit-car-coolit
	cpet? if
		($ "Nach einer dramatischen Pause " .. cname .. " 'Furz. Es hallt.'" $)
	else
		($ cname .. " " .. " KUHL ES." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "'Riesling" recruitee .name!
		($ "'Lord Riesling hat ein riesiges Umdenken. Er bietet ein Geschenk und sichere Passage!" .. "THERE HAS BEEN TOO MUCH VIOLENCE... TOO MUCH PAIN. BUT I HAVE AN HONORABLE COMPROMISE!" rbold .. "'Lord Riesling mag das nicht. Die Banditen nehmen das Auto und alles, was sie finden konnen." $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "'Lord Riesling ist nicht einverstanden. Die Autosammlerbanditen nehmen das Auto und all seine Vorrate. " .. thegroup .. "'steigt aus dem Auto aus und geht unversehrt weg. Lord Rieslings letzte Worte, bevor er mit dem Auto des" $) +crtext badfx car-abandon bandit-all morale2-all
	then witsattREV 
;

cyoa-choice: bandit-car-pay
	image-buff-bandit
	($ Thegroup .. " 'steigt aus dem Auto aus und geht unversehrt weg. Lord Humungoids letzte Worte, bevor er mit schrillem Gerausch wegfahrt in " .. thegroup .. "'s davonbraust, sind " .. "'RIECH ICH DICH SPATER, NERDS!" rbold $) cyoa-text! car-abandon bandit-gas
;
	

cyoa: bandit-car
	"'Autosammlerbanditen" cyoa-title!
	($ "'Die Banditen haben die schmale Straße vor ihnen mit ihren Autos versperrt. Ihr Anfuhrer, Lord " .. "'Riesling" pbold .. " " .. "' LASST SICH SIMPLY NIE AUSSTEIGEN! GIB IHR IHR FAHRT, IHR OEL! DAS BENZIN! Und ich werde eure LEBEN sparen.	ICH WARTE AUF EURE Antwort." rbold $) cyoa-text!
		choice( "' opfert den Wagen und alle Benzin auf" )choice: bandit-car-pay
		bandit-fight
		most-paranoid if
			charchoice( " ' hat schon eine Planung gemacht" )choice: bandit-car-paranoid
		then
		most-grating if
			charchoice( " ': LASSTS DAS SPRINGEN']" fcoolit )choice: bandit-car-coolit
		then
		choice( "' durchbricht sie!" )choice: bandit-car-plow
;

// Medical bandits

cyoa-choice: bandit-medic-help
	($ cname .. " ' bietet an, die Verletzten Bander mit " .. chis .. " ' medizinischem Wissen zu heilen. " $) cyoa-text!
	medicalroll cmedical+ or if
		($ cHe .. " ' heilt es sofort auf! Die Bander lassen " .. thegroup .. " ' los." $) +text goodfx
	else
		($ cHe .. " ' macht es schlimmer! Die Bander sind nicht sehr zufrieden." $) +text
		bandithurt bitefx
	then medicalREV medical++
;

cyoa-choice: bandit-medic-paranoid
	cpet? if
		($ cname .. " ' wusste, dass etwas sehr falsch war das ganze Mal. Aufgrund von " .. chis .. " " .. cgrowlhiss .. "' Instinkt, ', " .. everyone .. " ' wird fruh gewarnt. " .. gTheyare .. " 'bereit, vor den Banditen zu kampfen und unversehrt zu entkommen." $) 
	else
		($ "'immer misstrauisch, " .. cname .. " 'das Auto und die Vorrate versteckt, bevor er sich dem Siedlung nahert. " .. cHe .. " 'bekundet, nichts von Wert zu besitzen.		Die Banditen bezweifeln das, konnen aber nichts finden. Sie lassen " .. thegroup .. " ' los." $)
	then cyoa-text! witsattREV goodfx
;

cyoa-bridge: bandit-medic-coolit
	cpet? if
		($ cname .. " 'Pups in einer Tonlage, die wie ein winziger Geigenklang klingt." $)
	else
		($ cname .. " 'den falschen Handlern sagt " .. " KUHL ES." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "'Falscher Handler" recruitee .name!
		($ "'Der verletzte Bandit sieht wirklich bewegt von dieser Geste aus!		" .. "'Wow! Jetzt fuhle ich mich viel besser!" rbold .. "'		Sie steht auf, macht eine Handstandubung und ordnet an, dass man Ihnen ein Geschenk bringt!" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "'Die Banditen starren den " .. thegroup .. " 'einen Moment an.		Dann nehmen sie die meisten von " .. ghis .. " vorrate" $) +crtext badfx bandit-mostgas morale2-all
	then witsattREV 
;

: bandit-medic-pay
		-8 trunk-medical+
;
	

cyoa: bandit-medic
	"Handlerfalle" cyoa-title!
	($ Thegroup .. "  Uberpruft, was wie ein Handlerlager aussieht. " .. gTheyare .. " 	Stattdessen" .. "Sie verlangen " rbold $) cyoa-text!
	solo if
		soloer ispet? if
			($ "... oh wait, it's just an animal. False alarm!" rbold .. "
			The bandits let " .. soloname .. " los!" $) +text goodfx
		then;
	then
	trunk-medical 7 > if
		($ "'8 medizinischen Vorraten!" rbold $) +text
		choice( "8 Medikits" )choice: bandit-medic-pay
	else
		bandit-demand
	then
		medicalest charchoice( " ' bietet an, Verletzung zu heilen" )choice: bandit-medic-help
		most-grating if
			charchoice( " ': LASSTS DAS SPRINGEN']" fcoolit )choice: bandit-medic-coolit
		then
		most-paranoid if
			charchoice( " habe das kommen sehen" )choice: bandit-medic-paranoid
		then
		bandit-fight
;

// Weapon thieves

cyoa-choice: bandit-weapon-paranoid
	solo if 
		($ cname .. " ' verdachtigte sich gegenuber dem Campingplatz und ', " .. che .. " ' ließ das Auto laufen.', " .. cHe .. " ' vorgibt, den Anforderungen nachzugeben, aber zum wartenden Wagen fluchtet er sich sofort, sobald ', " .. che .. " ' kann.		Die Bandeits Waffen sind zu schwach, um etwas an das Auto zu tun, wenn es ', " .. che .. "' drin ist, also ', " .. che .. " ' RASEND FahrT AUF." rbold $) cyoa-text! goodfx
	else
		($ cname .. " ' verdachtigte sich gegenuber dem Campingplatz und ', " .. che .. " " .. everyone .. " ' wird uberfallen, der Wagen zerquetscht ein Lagerlager und zerstort dann ein Zelt. Die Bande ist verunsichert, also fliehen sie!" $) cyoa-text!
		cpet? if 
			cdog? if 
				($ cname .. " ' hat versehentlich ', " .. chim .. "'sich in dem Wagen eingesperrt und rauszulassen schreit." $)
			else
				($ Everyone .. " ' ist unsicher, ob ', " .. cname .. " ' das alles absichtlich gemacht hat oder nicht." $)
			then +crtext
		else
			cloyalty- if
				($ notcname .. "  ist wirklich uberrascht " .. cname .. "  versuchte nicht, das Auto zu stehlen.  " .. cHe .. " sieht nervos fur einen Moment aus." $) +crtext
			then loyaltyREV
		then
	then goodfx witsattREV morale++all
;

cyoa-bridge: bandit-weapon-coolit
	cpet? if
		($ cname .. " 'furzt und macht ein Riesen-Theater darum'" $)
	else
		($ cname .. " 'verlangt den Raubern," .. " KUHL ES." pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "'Schlechter Bandit" recruitee .name!
		($ "'Die Banditen nehmen das wirklich zu Herzen." .. "'Ja! Waffen brauchen wir nicht, wenn wir Freundschaft haben!" rbold .. "'Sie bieten ein Geschenk!" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "'Die Banditen beginnen alle anzugreifen " .. cname .. "' . Sie vergessen die Waffen." $) +crtext badfx ouch2-
	then witsattREV 
;

: bandit-weapon-check args( @ ) 
	<- @ .cstrength+ if
		($ <- @ .colourname .. " ' kampft gegen die Banditen mit " .. <- @ xhis .. " ' Starke!" $) +crtext
		<- @ .strengthREV
	else
		<- @ .cstrength- if
			<- @ .ouch-- <- @ .sting--
		else
			<- @ .ouch--
		then
	then
;

cyoa-choice: bandit-weapon-fight
	($ Thegroup .. " ' entscheidet sich, sein Gluck in einem Kampf zu versuchen. Die Waffen der Banditen sind grob, aber sie sind trotzdem gefahrlich." $) cyoa-text! 
		bitefx ' bandit-weapon-check foreach-team-char
;

cyoa-choice: bandit-weapon-pay
	($ Thegroup .. " ' uberlasst allen " .. ghis .. " 'Waffen den Banditen. Die Banditen geben " .. ghim .. " ' ihm einige alte Waffen, vielleicht wegen einiger Reue." $) cyoa-text! 0weaponsall trunk.clear morale2-all someicon badfx
	3 WEAPON_NAIL trunk.weapon+ 2 WEAPON_REBAR trunk.weapon+ 1 WEAPON_FISHING trunk.weapon+
	1 WEAPON_PARKING trunk.weapon+
;

cyoa-choice: bandit-weapon-calmshot
	($ cname .. " ' zielt " .. ghis .. " ' Waffe mit blitzartigen Geschwindigkeiten zerreißt die schwachen Waffen der Bande.	Die Bande beginnt zu fluchten!" $) cyoa-text! goodfx shootingREV temperREV shooting++
;
	

cyoa: bandit-weapon
	"' Die Waffenraub-Bande" cyoa-title! someicon
	($ "'Als " .. thegroup .. " ' eine Campingstatte erkundet,	 " .. gtheyare .. " ' wird von Bandigen uberfallen. Sie zeigen improvisierte Waffen vor." .. "' fordern alle Ihre Waffen ab." rbold .. "'		Das ist absurdig. Selten tun sogar Bande das, denn es ist ein langsamer aber sicherer Todesstraf." $) cyoa-text!
		calmshot-check if
			charchoice( " ' zieht schnell heraus und feuert ab" )choice: bandit-weapon-calmshot
		else
			choice( "'Die Bande bekampfen!" )choice: bandit-weapon-fight
		then
		most-paranoid if
			solo if charchoice( " ' kommt zum Rettungsschlag" )choice: bandit-weapon-paranoid
			else charchoice( " ' ist zuruckgeblieben, um das Auto laufen zu lassen" )choice: bandit-weapon-paranoid then
		then
		most-grating if
			charchoice( " ': LASSTS DAS SPRINGEN']" fcoolit )choice: bandit-weapon-coolit
		then
		bandit-charm
		choice( "Geben Sie alle Waffen auf!" )choice: bandit-weapon-pay
;

cyoa-choice: bandit-loyal-pick
	cicon
	($ cname .. " ' wird an die Banditen gesendet, um sie abzulenken, damit sie ihren Autoposten verlassen." $) cyoa-text!
	cloyalty- if
		($ cname .. " ' schaltet sich sofort ein " .. everyone .. " ' und schließt sich den Banditen an, stattdessen." $) +crtext
		loyaltyREV decruit-bad
		($ Thegroup .. " ' wird angegriffen! " .. gThey .. " ' Versuch" .. g1s .. " to escape..." $) +crtext
		bandithurt
	then;
	($ cname .. " ' verkauft nicht " .. everyone .. " ' verrat sie nicht an die Banditen! " .. cHe .. " ' lenkt sie von Weitem ab und rennt weg. Sie verfolgen das Auto, und es gelingt, vorbeizukommen." $) +crtext
	ctemper- if
		($ cname .. " ' gerat in Panik beim Zuruckweichen. " .. cHe .. " ' halt sich nicht an den Plan und wird verletzt!" $) +crtext cchar .sting12rnd-- bitefx
	else
		goodfx
	then
		($ cname .. " ' schleicht sich spater um den Kontrollpunkt herum und schließt sich wieder " .. everyone .. "." $) +crtext
		loyaltyREV
		
;

cyoa-choice: bandit-loyal-plow
	($ Thegroup .. " ' beschließt, das Auto einfach durch den Kontrollpunkt zu rammen." .. gThey .. " 'nehmen" .. g1s .. " 'viel Schaden, uberleben aber" .. g1s .. "." $) cyoa-text! sting12rnd--all bitefx car-plowthrough someicon
;
: bandit-loyal-plow? choice( "'Fahr das Auto einfach durch!" )choice: bandit-loyal-plow ;

cyoa-choice: bandit-loyal-paranoid
	($ cname .. " ' eine Ruckfallplan gelegt, bevor ich entdeckt wurde." $) cyoa-text!
	($ cHe .. " ' sich nach einem zerstorten Gebaude zuruckzieht, wo die Bande nicht sehen konnen. " .. chim .. "'. Wenn sie naher kommen, " .. che .. " ' springt durch ein hinteres Fenster und schlupft " .. chis .. " ' WEG RASCH ZUM AUTO, UND FLUCHT DURCH EIN NUN LEERES SICHERHEITSPUNKT!" $) +crtext goodfx
;

cyoa-bridge: bandit-loyal-pick4
	someicon
	"'Wer soll zur Ablenkung der Bande geschickt werden?" cyoa-text!
	' bandit-loyal-pick cyoa-team-choice
;

cyoa: bandit-loyal
	"'Wen kann man vertrauen?" cyoa-title! someicon
	solo if
		($ cname .. " ' eine Gruppe von Bandigen, die auf der Straße einen Kontrollpunkt eingerichtet haben. " .. cHe .. " ' hat keine gute Moglichkeit, sie abzulenken und schließlich wird entdeckt." .. "Sie verlangen " rbold $) cyoa-text!
		bandit-demand
		most-paranoid if
			charchoice( " ' hat ein Plan, um sie zu betrugen" )choice: bandit-loyal-paranoid
		then
		bandit-charm
		bandit-loyal-plow?
		bandit-fight
	else
		($ Thegroup .. " ' entdeckt eine Gruppe von Bandigen, die auf der Straße einen Kontrollpunkt eingerichtet haben. Jemand aus der Mannschaft konnte zur Ablenkung der Bande geschickt werden.		Das musste jemand kaltblutig und " .. "vertrauenswurdig" rbold .. "." $) cyoa-text!
		team-count 3 > if
			' bandit-loyal-pick 2 #cyoa-team-choice
			choice( "'Wahle jemand anderen" )choice: bandit-loyal-pick4
		else
			' bandit-loyal-pick 3 #cyoa-team-choice
		then
			bandit-loyal-plow?
	then
;



cyoa{ road{

cyoa-choice: bandit-car-plow
	($ Thegroup .. " il decide de faire passer la voiture directement a travers le barrage de bandits et l'humain geant. ." .. gThey .. " prendre" .. g1s .. " beaucoup de degats, mais survivre" .. g1s .. "." $) cyoa-text! sting12rnd--all bitefx car-plowthrough someicon
;

cyoa-choice: bandit-car-paranoid
	($ cname .. " etabli un plan pendant le discours." $) cyoa-text!
	cpet? if
		($ cHe .. " l'animal fait sonner la cloche sonore. les voleurs sont divertis par la vue d'un animal faisant cela. ils decident de la laisser passer. " .. thegroup .. " tout fonctionne selon le plan !" $)
	else
		($ cHe .. " soudainement, il presse dur sur l'accelerateur et tourne brusquement. la voiture passe par une petite fissure dans le barrage routier, puis continue. ... a la fin, les bandits ne peuvent reagir a temps.		 " .. thegroup .. " il a trop avance pour etre rentable de le poursuivre." $)
	then +crtext morale++all witsattREV goodfx
;

cyoa-bridge: bandit-car-coolit
	cpet? if
		($ "Les frais de passage du bandit sont reduits. " .. cname .. " les flatulences. elles resonnent." $)
	else
		($ cname .. " dit a lord humungoid de" .. " FAITES ATTENTION A NE PAS S'ECH" pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "Geant humain" recruitee .name!
		($ "Le seigneur humungus a une grosse modification d'attitude...." .. "THERE HAS BEEN TOO MUCH VIOLENCE... TOO MUCH PAIN. BUT I HAVE AN HONORABLE COMPROMISE!" rbold .. "offre un cadeau et une passe securisee !" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "Le seigneur humungus ne supporte pas cela. les voleurs prennent la voiture et tout. " .. thegroup .. "fournit des approvisionnements qu'ils trouvent." $) +crtext badfx car-abandon bandit-all morale2-all
	then witsattREV 
;

cyoa-choice: bandit-car-pay
	image-buff-bandit
	($ Thegroup .. " sortie du voiture et s'en va indemne. paroles dernieres de seigneur humungoid avant de rouler a grande vitesse. " .. thegroup .. "les voitures de lui sont. " .. "ADIEUX POUR LE MOMENT, NERDS !" rbold $) cyoa-text! car-abandon bandit-gas
;
	

cyoa: bandit-car
	"Collecteurs de voitures voleurs" cyoa-title!
	($ "Ce groupe de brigands a bloque la etroite route devant eux avec leurs voitures. leur chef est present. " .. "Seigneur humungus" pbold .. " parle : . ." .. "Fuyez simplement ! donnez-moi votre voiture ! votre petrole ! et l'essence et je ferai epargner vos vies... je vous attend une reponse." rbold $) cyoa-text!
		choice( "Laisser la voiture et tous les gaz de carburant" )choice: bandit-car-pay
		bandit-fight
		most-paranoid if
			charchoice( " des deja un plan" )choice: bandit-car-paranoid
		then
		most-grating if
			charchoice( " fais-le bief, voyous." fcoolit )choice: bandit-car-coolit
		then
		choice( "Cultivez-les !" )choice: bandit-car-plow
;

// Medical bandits

cyoa-choice: bandit-medic-help
	($ cname .. " offre de guerir le voleur blesse. " .. chis .. " competences medicales. " $) cyoa-text!
	medicalroll cmedical+ or if
		($ cHe .. " regle tout a fait ! les voleurs laissaient. " .. thegroup .. " allez." $) +text goodfx
	else
		($ cHe .. " la chose finit par se compliquer et les voleurs ne sont pas du tout ravis." $) +text
		bandithurt bitefx
	then medicalREV medical++
;

cyoa-choice: bandit-medic-paranoid
	cpet? if
		($ cname .. " savait que quelque chose etait tres mal place tout le temps a cause de... " .. chis .. " " .. cgrowlhiss .. "ing, " .. everyone .. " est averti precocement. " .. gTheyare .. " pret a lutter devant que les brigands soient prets, et s'enfuir indemne." $) 
	else
		($ "Suspectueusement prudent, " .. cname .. " cacher voiture et approvisionnements avant d'approcher le reglement. " .. cHe .. " les voleurs doutent de cela, mais ne trouvent rien de precieux. ils laissent finalement aller. " .. thegroup .. " allez." $)
	then cyoa-text! witsattREV goodfx
;

cyoa-bridge: bandit-medic-coolit
	cpet? if
		($ cname .. " farterie avec une tonalite qui ressemble a une petite viole." $)
	else
		($ cname .. " laissez-passer aux fraudeurs : " .. " FAITES ATTENTION A NE PAS S'ECH" pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "Faux negociateur" recruitee .name!
		($ "Un blesse de voleur semble etre reellement touche par cela !" .. "Je me sens beaucoup mieux maintenant!" rbold .. "elle se leve, fait un volterete et ordonne que vous soyez amene un cadeau !" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "Les voleurs ne font qu'observer. " .. thegroup .. " puis ils prennent la plus grande partie de...  " .. ghis .. " tres epais" $) +crtext badfx bandit-mostgas morale2-all
	then witsattREV 
;

: bandit-medic-pay
		-8 trunk-medical+
;
	

cyoa: bandit-medic
	"Kevin clark : kevin clark" cyoa-title!
	($ Thegroup .. " se semble etre un etablissement de negociants. " .. gTheyare .. " ils sont attaques par des voleurs qui l'ont pris d'assaut. un d'entre eux semble blesse." .. "Prendre le deck numero 2 chaque jour. " rbold $) cyoa-text!
	solo if
		soloer ispet? if
			($ "... oh wait, it's just an animal. False alarm!" rbold .. "
			The bandits let " .. soloname .. " allez !" $) +text goodfx
		then;
	then
	trunk-medical 7 > if
		($ "huit fournitures medicales !" rbold $) +text
		choice( "Huit approvisionnements medicaux :" )choice: bandit-medic-pay
	else
		bandit-demand
	then
		medicalest charchoice( " offre de guerir une blessure" )choice: bandit-medic-help
		most-grating if
			charchoice( " fais-le bief, voyous." fcoolit )choice: bandit-medic-coolit
		then
		most-paranoid if
			charchoice( " j'en avais prevu cela." )choice: bandit-medic-paranoid
		then
		bandit-fight
;

// Weapon thieves

cyoa-choice: bandit-weapon-paranoid
	solo if 
		($ cname .. " j'avais des doutes quant a ce campsite. " .. che .. " laissez l'automobile allumee. " .. cHe .. " se prete a leurs demandes, mais court vers la voiture attendante des qu'ils l'ont faite. " .. che .. " les armes des voleurs ne sont pas assez solides pour faire quelque chose a l'automobile. " .. che .. "dans elle, donc. " .. che .. " SORT SES PELURES." rbold $) cyoa-text! goodfx
	else
		($ cname .. " j'avais des doutes quant a ce campsite. " .. che .. " voulait attendre pres de la voiture ... " .. everyone .. " le conducteur volant la voiture saccage le camping, ecrase un chapiteau et arrete brusquement. les voleurs sont effrayes, ils prennent la fuite !" $) cyoa-text!
		cpet? if 
			cdog? if 
				($ cname .. " involontairement verrouille. " .. chim .. "s'asseoir dans la voiture et aboie pour etre sorti." $)
			else
				($ Everyone .. " n'est pas sur " .. cname .. " a fait-il tout cela avec intention ou non." $)
			then +crtext
		else
			cloyalty- if
				($ notcname .. " est vraiment etonne/e " .. cname .. " n'ai pas essaye a voler la voiture. " .. cHe .. " se figure nerveuse pendant un moment." $) +crtext
			then loyaltyREV
		then
	then goodfx witsattREV morale++all
;

cyoa-bridge: bandit-weapon-coolit
	cpet? if
		($ cname .. " fait des flatulences et en fait grand cas." $)
	else
		($ cname .. " une voiture qu'ils ont unefois possedee" .. " FAITES ATTENTION A NE PAS S'ECH" pbold $)
	then cyoa-text!
	cool-it-7 if
		char-gen to recruitee "Voleur de mauvaise qualite" recruitee .name!
		($ "Les voleurs en prennent reellement a coeur cela..." .. "Oui ! quand nous avons l'amitie, quels besoin aurions de armes ?" rbold .. "ils offrent un cadeau !" $)
		+crtext morale3+all rescue-trainitem cooled-it goodfx
	else cool-it++
		($ "Les bandits commencent tous a attaquer. " .. cname .. "ils oublient des armes." $) +crtext badfx ouch2-
	then witsattREV 
;

: bandit-weapon-check args( @ ) 
	<- @ .cstrength+ if
		($ <- @ .colourname .. " lute contre les voleurs " .. <- @ xhis .. " faites de l'effort !" $) +crtext
		<- @ .strengthREV
	else
		<- @ .cstrength- if
			<- @ .ouch-- <- @ .sting--
		else
			<- @ .ouch--
		then
	then
;

cyoa-choice: bandit-weapon-fight
	($ Thegroup .. " les bandits decident de se lancer dans une bagarre... ." $) cyoa-text! 
		bitefx ' bandit-weapon-check foreach-team-char
;

cyoa-choice: bandit-weapon-pay
	($ Thegroup .. " sous une voix floue : " .. ghis .. " des armes ... 	ils donnent des armes. " .. ghim .. " il lui transmet des armes anciennes, peut-etre sentant un peu de culpabilite." $) cyoa-text! 0weaponsall trunk.clear morale2-all someicon badfx
	3 WEAPON_NAIL trunk.weapon+ 2 WEAPON_REBAR trunk.weapon+ 1 WEAPON_FISHING trunk.weapon+
	1 WEAPON_PARKING trunk.weapon+
;

cyoa-choice: bandit-weapon-calmshot
	($ cname .. " objectives " .. ghis .. " les bandits s'enfuient, leurs armes desemparees face a la vitesse et aux explosions de l'arme." $) cyoa-text! goodfx shootingREV temperREV shooting++
;
	

cyoa: bandit-weapon
	"Voleurs de gun :" cyoa-title! someicon
	($ "Commme " .. thegroup .. " explore un camping. " .. gtheyare .. " attaques par des voleurs. ils brandissent des armeaux faits maison... ." .. "Un jour d'autre, une autre boite de conserve." rbold .. "cela est absurde. pas meme les voleurs le feront generalement, car c'est une condamnation a mort lente mais sure." $) cyoa-text!
		calmshot-check if
			charchoice( " tire et tire-rapides" )choice: bandit-weapon-calmshot
		else
			choice( "Lutte contre les voleurs !" )choice: bandit-weapon-fight
		then
		most-paranoid if
			solo if charchoice( " laisser le moteur allume" )choice: bandit-weapon-paranoid
			else charchoice( " vient en aide" )choice: bandit-weapon-paranoid then
		then
		most-grating if
			charchoice( " fais-le bief, voyous." fcoolit )choice: bandit-weapon-coolit
		then
		bandit-charm
		choice( "Laissez tomber tous vos armes !" )choice: bandit-weapon-pay
;

cyoa-choice: bandit-loyal-pick
	cicon
	($ cname .. " 's'en va agiter les bandits pour qu'ils quitte leur poste de controle routier.'" $) cyoa-text!
	cloyalty- if
		($ cname .. " immediatement allume " .. everyone .. " se fait collaborer avec les voleurs au lieu de cela." $) +crtext
		loyaltyREV decruit-bad
		($ Thegroup .. " est attaque ! " .. gThey .. " essayer." .. g1s .. " to escape..." $) +crtext
		bandithurt
	then;
	($ cname .. " ne vende pas. " .. everyone .. " courrez aux voleurs ! " .. cHe .. " derive-les de loin et s'enfuit : ils le poursuivent, et la voiture parvient a depasser." $) +crtext
	ctemper- if
		($ cname .. " panique en retraite. " .. cHe .. " finit par ne suivre le plan et se blesser !" $) +crtext cchar .sting12rnd-- bitefx
	else
		goodfx
	then
		($ cname .. " se glisse autour du point de controle plus tard, et rejoint " .. everyone .. "." $) +crtext
		loyaltyREV
		
;

cyoa-choice: bandit-loyal-plow
	($ Thegroup .. " decide de faire passer la voiture directement a travers le point de controle..." .. gThey .. " prendre" .. g1s .. " beaucoup de degats, mais survivre" .. g1s .. "." $) cyoa-text! sting12rnd--all bitefx car-plowthrough someicon
;
: bandit-loyal-plow? choice( "Foule la voiture par-dessus les roues !" )choice: bandit-loyal-plow ;

cyoa-choice: bandit-loyal-paranoid
	($ cname .. " avant d'etre repere, j'ai fait des plans de secours." $) cyoa-text!
	($ cHe .. " se retire dans un batiment ruine, ou les brigands ne peuvent pas le voir. " .. chim .. "quand ils se approchent. " .. che .. " saute par la fenetre arriere, roule sur le sol. " .. chis .. " aller vers la voiture et s'enfuit par un controle desormais vide !" $) +crtext goodfx
;

cyoa-bridge: bandit-loyal-pick4
	someicon
	"Envoyer quelqu'un pour detourner les brigands." cyoa-text!
	' bandit-loyal-pick cyoa-team-choice
;

cyoa: bandit-loyal
	"Qui peut etre confie ?" cyoa-title! someicon
	solo if
		($ cname .. " un groupe de brigands qui ont etabli un poste de controle sur la route. " .. cHe .. " il n'y a pas de bonne facon de les distraire et finit par etre repere." .. "Prendre le deck numero 2 chaque jour. " rbold $) cyoa-text!
		bandit-demand
		most-paranoid if
			charchoice( " a veut mettre en scene une ruse pour les tromper." )choice: bandit-loyal-paranoid
		then
		bandit-charm
		bandit-loyal-plow?
		bandit-fight
	else
		($ Thegroup .. " une personne apaisee pour les detourner l'attention des brigands et permettre au vehicule de passer. " .. "fiable" rbold .. "." $) cyoa-text!
		team-count 3 > if
			' bandit-loyal-pick 2 #cyoa-team-choice
			choice( "Choisissez quelqu'un d'autre." )choice: bandit-loyal-pick4
		else
			' bandit-loyal-pick 3 #cyoa-team-choice
		then
			bandit-loyal-plow?
	then
;


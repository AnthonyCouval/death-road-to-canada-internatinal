
gstats{

: twitter-tally
	twitter-1 twitter-2 twitter-f + +
;

// Increase this number as more unlocks are added
: twitter-twitsleft
	3 twitter-tally -
;

}
	
defer twitterback	

: followusthing
	gstats{ twitter-twitsleft } 0 > if
		($ "Seguici per notizie e per " .. "PUNTI ZOMBO" fbold .. "!" $) +crtext
	then
;

cyoa-blank: twitter-zombop
	gstats{ 5 ' zombo-point +! save }
	"Il coso del pollo blu sembrava contento!" text!
	"5 PUNTI ZOMBO guadagnati!" rainbold +crtext
	zombopfull? if
		zombo-point ZOMBOP_CAP > if 
			"You are over the maximum for Zombo Points!
			Spend your excess ZP before starting a new game!" fbold +crtext
		else
			zombopfull rbold +crtext
		then
	then
;

: rocketcat-twitter
	gstats{ twitter-1 } 1 < if
		gstats{ 1 to twitter-1 }
		twitter-zombop
	then
	"http://www.twitter.com/rocketcatgames/" openurl
;

: rocketcat-facebook
	gstats{ twitter-f } 1 < if
		gstats{ 1 to twitter-f }
		twitter-zombop
	then
	"http://www.facebook.com/rocketcatgames/" openurl
;

: madgarden-twitter
	gstats{ twitter-2 } 1 < if
		gstats{ 1 to twitter-2 }
		twitter-zombop
	then
	"http://www.twitter.com/madgarden/" openurl
;
		
cyoa-blank: twitterbird gstats{
	"POLLO DEI SOCIAL MEDIA" cyoa-title!

	"'E un qualche tipo di uccello blu. Stride:" text!
	"'Leggi gli aggiornamenti di Rocketcat Games su Twitter o Facebook per le notizie su Death Road e i giochi imminenti!	Leggi il Twitter di Madgarden per la vera saggezza canadese!" bbold +crtext
	
	followusthing
	
	choice( "Lascia per ora" )choice
	choice( "Twitter di Rocketcat" gstats{ twitter-1 } 1 < if fbold then )choice: rocketcat-twitter
	choice( "Twitter di Madgarden" gstats{ twitter-2 } 1 < if fbold then )choice: madgarden-twitter
	choice( "Facebook di Rocketcat" gstats{ twitter-f } 1 < if fbold then )choice: rocketcat-facebook
	
} ;
	
' twitterbird to twitterback


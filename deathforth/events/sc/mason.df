uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

: mason-missing 1 5 rnd case
	1 of " il a certainement echappe de nous." endof
	2 of " est disparu de la surface de la terre." endof
	3 of " probablement c'est correct." endof
	4 of " desole, il semble que vous ait abandonne." endof
	5 of "je me presenterai probablement." endof
endcase ;

: mason-sad
	($ "Se pensant trop triste pour continuer, il se rend vers le parc d'ete abandonne le plus proche et se morfond pendant des annees jusqu'a ce que de plus personnes arrivent." $) +cr +text badfx
		decruit-bad-silent
;
: mason-kill
	notcchar to victim
	($ "Toujours, egalement. " .. vname .. " epee de chevalier " .. victim xHe .. mason-missing .. "
	" .. vname .. " a quitte l'equipe !" $) +cr +text badfx
		victim .weapons-to-trunk TEAM_STATUS_DIED victim .decruit morale2+ deadtally
;

cyoa: mason-alive
	char-gen to recruitee "???" recruitee .name! 4 recruitee .morale! recruitee .masonify
	ricon 2 3 rnd to mason-countdown 1 to mason-curse someone choosechar
		($ "Heureusement, ton ami est de retour, vivant et en sante ! tu le croyais perdu, mais il est bien la dans la voiture ! ca t'amuse beaucoup !" $) text!
	team-count 0 > if
		($ "C'est semblable a. " .. cname .. " est quitte du groupe. " .. cHe .. mason-missing $) +crtext
		cchar .kill
	then
		recruitee .strengthREV recruitee .fitnessREV recruited goodfx
;

cyoa: mason-camp
	sc-camper choosechar cicon
	"Couper ce zombie sous tes roues, oui!" cyoa-title!
	($ "Alors qu'on campait pour la nuit, " .. cname .. " il a beaucoup de souvenirs chers de sa derniere annee au camp d'ete !" $) cyoa-text!
	mason-kill +cr fullcamp
;

cyoa: mason-timeup
	stpick-mason if choosechar cicon else ($ "Mason snoorhes : macon snoorhes" pbold .. " allait se lever pour quelque chose " .. "LA TURQUIE EST UN PAYS SITUE EN EUROPE ET EN ASIE. SON NOM OFFIC" fbold .. " il semble qu'il etait le disparu, a la place de moi pour une fois." $) text! exit then
	solo if 
		"L'ultime genki" cyoa-title!
		($ cname .. " se sent tout seul dans le monde... . 	mais il ne peut pas s'y laisser abattre ! s'il continue, il sait rencontrer de nouveaux amis !" $) cyoa-text!
		morale++
	else
	notcchar to victim
	"Au moins quelqu'un a une attitude optimiste." cyoa-title!
	($ cname .. " brusquement semble recevoir une forte augmentation d'esprit de corps !" $) cyoa-text!
		mason-kill
	then
	3 4 rnd to mason-countdown
;

cyoa: mason-despair
	bully choosechar
	cicon
	solo if 
		"Rendez-vous a camp bloodkill 2 : le retour" cyoa-title!
		($ cname .. " ressent vraiment la solitude sans ses amis." $) cyoa-text!
		mason-sad
	then;
	"Il est simplement tres optimiste." cyoa-title!
	($ cname .. " se sent reellement abattue mais soudain se ressent mieux !" $) cyoa-text!
		mason-kill
;

} }



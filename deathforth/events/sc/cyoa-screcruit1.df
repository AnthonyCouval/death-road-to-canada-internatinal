(* uses base.df
uses charfilt.df
uses charstats.df
uses road.df
uses charstatmods.df *)

// Both Santas, Alvis, TLB, Wrestler, Fencer, Debutante, L*nk

road{

0 value lnk-countdown

}

cyoa{ road{

: santajoins
	+cr ($ "FELIZ NAVIDAD! HO HO HO!" pbold $) +text
	team-count 3 > if then;
	4 recruitee .mechanical! 6 recruitee .attitude!
	recruitee .attitudeREV
	recruited
;

: evilsantajoins
	team-count 3 > if then;
	5 recruitee .strength! 0 recruitee .attitude!
	recruitee .attitudeREV
	recruited
;

cyoa-choice: santa-test-nice
	ricon
($ "Regala a " .. thegroup .. " ' un regalo! Son una gran cantidad de latas de maiz, justo lo que " .. gthey .. " ' siempre quiso!" $) cyoa-text! 2 300 tone
	5 LOOT_FOOD trunk.loot+
	santajoins
;
cyoa-choice: santa-test-naughty 
	ricon
	($ "Eres mas amable que esos horribles zombis! 	Regala a " .. thegroup .. " 'carbon. " .. cname-He .. " 'lo mete en el deposito de combustible del coche." $) cyoa-text! 2 300 tone
	50 LOOT_GAS trunk.loot+
	santajoins
;
cyoa-choice: santa-test-pissoff
	ricon
	"Santa Malvado" recruitee .name! 4 screcruit
	($ cname .. " 'se enoja y le grita a Santa." .. "qUE VAYAS A LA MALA, SANTA. BUENA! ESTAS UN CABRON! COMO HACERES QUE EL ANO NUEVO LLEVE FELICIDAD! ERES UN PUTO!" pbold .. "	Santa pierde la fe en la humanidad y se convierte " .. rname .. "!" $) cyoa-text! goodfx morale2-
	evilsantajoins	
;

cyoa: santa-test
	"FELIZ NAVIDAD" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	3 screcruit
	"Santa Claus" recruitee .name!
	4 recruitee .shooting! 0 recruitee .female! 6 recruitee .morale!
	($ Thegroup .. " is searching through a house for supplies when something comes down the chimney. It's Santa!!!
	" .. "HO HO HO! HAS SIDO MALO O BUENO?" pbold $) cyoa-text! basic-tone
		choice( "Bonito" )choice: santa-test-nice
		choice( "Travieso" )choice: santa-test-naughty
		goofus-pass if
			goofus charchoice( ": Jodete" )choice: santa-test-pissoff
		then
;

cyoa-bridge: TLB-recruit
	team-count 3 > if
		ricon
		($ "Demasiada gente, como se supone que debo posar o engrasarme en el coche?" fbold ..
		 rname .. " 'tiene razon aqui. Deshazte de alguien para hacer sitio:" $) cyoa-text!
		 recruit-replace?
	then;
	($ cname .. " ' convence " .. "El ultimo culturista" pbold  .. " 'que no tiene sentido ser el mejor culturista del mundo si no hay nadie a tu alrededor para apreciarlo." .. "LET'S DO THIS! YEAH!!!" fbold $) cyoa-text! goodfx
		recruitee .attitudeREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa-bridge: TLB-flex
	"Tonto!" cyoa-title!
	($ cname .. " 'reto a " .. "El ultimo culturista" pbold .. " 'a un concurso de flexiones. Que locura!" $) text!
	($ cname .. " 'ES ANULADO EN LA CONTIENDA DESPUES DE UNA FLEXION! NO HABIA NINGUNA OPORTUNIDAD!" fbold $) +crtext
	($ "No queda nada de " .. chim .. ". " .. "TLB" pbold .. " 'tiene una sola lagrima en el ojo." $) +crtext
	cchar .kill
		team-count 0 > if
			choice( "Intenta reclutarlo" )choice: TLB-recruit
			choice( "Dejelo en paz" )choice
		then
;

cyoa-choice: TLB-train
	"Obteniendo impulso con T*L*B" cyoa-title!
	ricon
	($ "EL ULTIMO CULTOR DE MUSCULOS " pbold .. "da " .. thegroup .. " ' alguna excelente informacion sobre engrandecerse durante el post-apocalipsis. La informacion es tan buena que se siente una bomba inmediatamente, sin necesidad de entrenar." $) cyoa-text! goodfx
	' .strength++ foreach-team-char
;

cyoa: TLB-test
	"El Ultimo Cultor de Musculos" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"TLB" recruitee .name!
	5 recruitee .morale! 6 recruitee .attitude!	1 recruitee .composure! recruitee .tlbify
	STAT_STRENGTH recruitee .effstat print
	($ Thegroup .. " 'entra en un gimnasio abandonado. Alli, sentado sobre un trono de jaras de proteinas viejas, esta un cultor muscular bronceado.	" .. "I AM... " pbold .. "THE LAST BODYBUILDER! YEAH!!!" fbold .. "se flexiona y grunta, de una manera triste." $) cyoa-text! basic-tone
		choice( "Solicitar consejos de fuerza" )choice: TLB-train
		choice( "Intenta reclutarlo" )choice: TLB-recruit
		cchar charchoice( " 'inicia un concurso de flexion" )choice: TLB-flex
		
;

cyoa-bridge: alvis-recruit
	ricon
	team-count 3 > if
		($  rname .. " 'murmura algo. El grupo esta demasiado lleno.		Eliminar a alguien para hacer espacio:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " 'dice claramente " .. "VAMOS A ROCKEAR!" pbold $) cyoa-text! goodfx
		recruitee .fitnessREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa: alvis-test
	"El Rey del Canto" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"Alvis" recruitee .name!
	3 recruitee .strength! 4 recruitee .morale! 6 recruitee .fitness!
	1 recruitee .composure! 4 recruitee .shooting! recruitee .alvify
	($ Thegroup .. " 'Vaya! Un hombre de oro! Y con un peinado tan increible! Y esta practicando karate! Que genial! Vamos a ver si nos ensena algo!" $) cyoa-text! basic-tone
		choice( "Reclutelo" )choice: alvis-recruit
		choice( "Dejelo en paz" )choice
;

cyoa-bridge: debutante-recruit
	ricon
	team-count 3 > if
		($  rname .. "  'I'm sorry, I can't do this.' " .. "VALGAME DIOS!" pbold .. "hacerle un hueco a alguien" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. "  gira su paraguas alrededor de su mano con una velocidad relampago, y luego lo coloca en una pose de descanso contra su hombro. Debe haber practicado mucho eso." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: debutante-test
	"Alta Sociedad de Moda, Post-Sociedad" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .debutantify
	($ Thegroup .. " 'abre la puerta a una tienda de te y encuentra una mujer muy elegida dentro, comparando tranquilamente dos cajas de te.	Deja las cajas en el suelo, gira medio hacia ti y toma su paraguas." $) cyoa-text! basic-tone
		choice( "Recruitarla" )choice: debutante-recruit
		choice( "Dejarla sola" )choice
;

cyoa-bridge: fencer-recruit
	ricon
	team-count 3 > if
		($  rname .. " 'no se detiene ante tu coche lleno y solo se ajusta. Termina destrozando realmente mal la interior del coche con su espada.	Cuando se le pregunta si puede poner su espada de rapera en el maletero, ella dice " .. "NO HAY TRANSACCION! REEMPLAZAR A ALGUUNA O RENOUNCIO!" pbold $) cyoa-text! recruit-replace?
	then;
	($ rname  .. " 'apunta su espada al cielo y grita " .. "NADIE PUEDE PARAR MI LAGARA! HO HO HO!" pbold .. " 'Es un poco desconcertante despues de que hablaba tan normalmente.	Despues corta el aire en una gran manera mientras rie durante alrededor de 4 minutos seguidos." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: fencer-test
	"Espadachin" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .fencify
	($ Thegroup .. " 'cruza por alguien que se esconde detras de una ciudad desierta. Hay una mujer vestida de manera medieval como si estuviera en una Feria Renacentista. Ella esta haciendo pasadas con su espada de foil.	Deja de cortar su espada eventualmente, pero nunca la pone abajo. Cuando habla con ella, parece una persona bastante normal a pesar de su apariencia." $) cyoa-text! basic-tone
		choice( "Recruitarla" )choice: fencer-recruit
		choice( "Dejarla sola" )choice
;

cyoa-bridge: wrestler-recruit
	ricon
	team-count 3 > if
		($ "No me gusta decepcionar a los fanes, pero tienes demasiada gente." pbold .. "		El diablo no puede unirse a menos que alguien se vaya:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " 'da su pose teatral caracteristica y luego dice: " .. "Si, claro, me unire." pbold $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: wrestler-test
	"LUCHAREMOS!" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"El Satan" recruitee .name!
	5 recruitee .morale! recruitee .wrestify
	($ Thegroup .. " 'oye ruidos fuertes y caoticos provenientes de una casa cercana, y va a investigar. En medio de un mar de muebles destruidos y tripas de zombies se encuentra el luchador famoso mundialmente, " .. rname .. "!	Esta aplastando a un zombi mientras grita " .. "APLASTADORA!" pbold .. " ' a los gritos." $) cyoa-text! basic-tone
		choice( "Reclutelo" )choice: wrestler-recruit
		choice( "Dejelo en paz" )choice
;

cyoa-bridge: lnk-recruit
	ricon
	1 2 rnd to lnk-countdown
	team-count 3 > if
		($ "KYYYYYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!" pbold .. "		Esto significa que " .. rname .. " 'cree que el grupo esta lleno. Reemplaza a alguien para hacer espacio:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " 'recoge un palo y luego lo levanta hacia el cielo de manera incomoda. De la nada, suena una melodia." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

: lnkname 1 6 rnd case
	1 of "Lank" endof
	2 of "Lenk" endof
	3 of "Enlace" endof
	4 of "Enlace" endof
	5 of "Leyendo" endof
	6 of "Enlace" endof
endcase ;

cyoa: lnk-test
	"ENLACE" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	lnkname recruitee .name!
	3 recruitee .morale! recruitee .lnkify
	($ Thegroup .. " 1" $) cyoa-text! basic-tone
		choice( "Reclutelo" )choice: lnk-recruit
		choice( "Dejelo en paz" )choice
;

} }



road{

0 value lnk-countdown

}

cyoa{ road{

: santajoins
	+cr ($ "HO HO HO ! JOYEUX NOEL !" pbold $) +text
	team-count 3 > if then;
	4 recruitee .mechanical! 6 recruitee .attitude!
	recruitee .attitudeREV
	recruited
;

: evilsantajoins
	team-count 3 > if then;
	5 recruitee .strength! 0 recruitee .attitude!
	recruitee .attitudeREV
	recruited
;

cyoa-choice: santa-test-nice
	ricon
($ "Le Pere Noel donne " .. thegroup .. " ' un cadeau ! Ce sont des boites de mais, exactement ce que " .. gthey .. "  a toujours voulu !" $) cyoa-text! 2 300 tone
	5 LOOT_FOOD trunk.loot+
	santajoins
;
cyoa-choice: santa-test-naughty 
	ricon
	($ "'Vous etes toujours plus gentil que ces horribles zombies ! Le Pere Noel donne " .. thegroup .. "  du charbon. " .. cname-He .. " ' le met dans l'orifice de remplissage d'essence de la voiture." $) cyoa-text! 2 300 tone
	50 LOOT_GAS trunk.loot+
	santajoins
;
cyoa-choice: santa-test-pissoff
	ricon
	"Pere Noel malefique" recruitee .name! 4 screcruit
	($ cname .. "  claque et sen prend verbalement au Pere Noel." .. "'	DEGAGE, PERE NOEL. BIEN JOUE ! TU ES UN CON. BRAVO ! BRAVO POUR LA BONNE HUMEUR DES FETES ! IDIOT !" pbold .. "	Le Pere Noel perd foi en lhumanite et devient " .. rname .. "!" $) cyoa-text! goodfx morale2-
	evilsantajoins	
;

cyoa: santa-test
	"JOYEUX NOEL" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	3 screcruit
	"Pere Noel" recruitee .name!
	4 recruitee .shooting! 0 recruitee .female! 6 recruitee .morale!
	($ Thegroup .. " is searching through a house for supplies when something comes down the chimney. It's Santa!!!
	" .. "HO HO HO ! AVEZ VOUS ETE SAGE OU MECHANT ?" pbold $) cyoa-text! basic-tone
		choice( "Sage" )choice: santa-test-nice
		choice( "Mechant" )choice: santa-test-naughty
		goofus-pass if
			goofus charchoice( ": DEGAGE" )choice: santa-test-pissoff
		then
;

cyoa-bridge: TLB-recruit
	team-count 3 > if
		ricon
		($ "TROP DE GENS, COMMENT SUIS JE SUPPOSE POSER OU MHUILER DANS LA VOITURE ?		" fbold ..
		 rname .. "  a raison ici. Debarrassez vous de quelquun pour faire de la place :" $) cyoa-text!
		 recruit-replace?
	then;
	($ cname .. "  convainc " .. "LE DERNIER CULTURISTE" pbold  .. " ' qu'il ne sert a rien d'etre le meilleur culturiste du monde s'il n'y a personne pour l'apprecier.	" .. "LET'S DO THIS! YEAH!!!" fbold $) cyoa-text! goodfx
		recruitee .attitudeREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa-bridge: TLB-flex
	"Imbecile !" cyoa-title!
	($ cname .. "  defie " .. "LE DERNIER CULTURISTE" pbold .. "  a un concours de flexions. Quelle folie !" $) text!
	($ cname .. "  EST OBLITERE DANS LE CONCOURS APRES UNE FLEXION ! IL NY AVAIT AUCUNE CHANCE !" fbold $) +crtext
	($ "'Il ne reste rien de " .. chim .. ". " .. "T*L*B" pbold .. "  a une seule larme a lil." $) +crtext
	cchar .kill
		team-count 0 > if
			choice( "Essayez de le recruter" )choice: TLB-recruit
			choice( "Laissez le tranquille" )choice
		then
;

cyoa-choice: TLB-train
	"Getting Pumped with T*L*B" cyoa-title!
	ricon
	($ "THE LAST BODYBUILDER " pbold .. "donne " .. thegroup .. "  quelques excellents conseils pour se gonfler pendant la post apocalypse.	Les conseils sont si bons quune pompe se fait sentir immediatement, aucun entrainement requis." $) cyoa-text! goodfx
	' .strength++ foreach-team-char
;

cyoa: TLB-test
	"Le dernier bodybuilder" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"T*L*B" recruitee .name!
	5 recruitee .morale! 6 recruitee .attitude!	1 recruitee .composure! recruitee .tlbify
	STAT_STRENGTH recruitee .effstat print
	($ Thegroup .. "  entre dans une salle de sport abandonnee. La, sur un trone de vieux pots de poudre de proteines, est assis un bodybuilder bronze.	" .. "I AM... " pbold .. "THE LAST BODYBUILDER! YEAH!!!" fbold .. "	Il flechit et grogne, dune maniere lugubre." $) cyoa-text! basic-tone
		choice( "Demander des conseils de force" )choice: TLB-train
		choice( "Essayez de le recruter" )choice: TLB-recruit
		cchar charchoice( "  lance un concours de flex" )choice: TLB-flex
		
;

cyoa-bridge: alvis-recruit
	ricon
	team-count 3 > if
		($  rname .. "  marmonne quelque chose. Le groupe est trop plein.		Debarrassez vous de quelquun pour faire de la place:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. "  dit assez clairement " .. "'LET'S ROCK!" pbold $) cyoa-text! goodfx
		recruitee .fitnessREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa: alvis-test
	"Le Roi du Chant" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"Alvis" recruitee .name!
	3 recruitee .strength! 4 recruitee .morale! 6 recruitee .fitness!
	1 recruitee .composure! 4 recruitee .shooting! recruitee .alvify
	($ Thegroup .. " 'il pille une ville et se heurte a un homme dans un costume d'or, dote d'un magnifique pompadour. Il pratique des mouvements de karate.	Il dit quelque chose que vous ne pouvez comprendre en raison d'une mumble harmonique mais inintelligible." $) cyoa-text! basic-tone
		choice( "Recruter" )choice: alvis-recruit
		choice( "Laissez le tranquille" )choice
;

cyoa-bridge: debutante-recruit
	ricon
	team-count 3 > if
		($  rname .. " il saccorde a vous rejoindre, mais puisquil voit combien votre vehicule est surpeuple, avec des personnes et divers sales la " .. "BEN, JE NE LE FAIENT PAS!" pbold .. "enlever quelquun pour faire de la place:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " elle tourne son parapluie autour de sa main a vive allure, puis larrete dans une pose reposante contre son epaule. Elle doit lavoir pratiquee beaucoup." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: debutante-test
	"Haute Societe, Post Societe" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .debutantify
	($ Thegroup .. " elle ouvre la porte dune boutique de the et trouve une femme tres habillee a linterieur, qui compare deux boites de the de maniere calme.	Elle met les boites a terre, tourne demi vers vous et prend son parapluie." $) cyoa-text! basic-tone
		choice( "La recruter" )choice: debutante-recruit
		choice( "Laisser la tranquille" )choice
;

cyoa-bridge: fencer-recruit
	ricon
	team-count 3 > if
		($  rname .. " il ne se decourage pas devant votre vehicule rempli et sy insinue juste a temps. Elle endommage gravement linterieur du vehicule avec son epee. 	Quand on lui demande si elle peut mettre son rapier dans le coffre, elle repond " .. "AUCUNE AFFAIRE! REMPLACEZ QUELQUUN OU JE QUITTE!" pbold $) cyoa-text! recruit-replace?
	then;
	($ rname  .. "  pointe son epee vers le ciel et sort " .. "PERSONNE NE PEUT ARRETER MA LAME! HO HO HO!" pbold .. " ' C'est brievement derangeant apres qu'elle ait parle si normalement. Elle frappe ensuite l'air d'une maniere grandiose en riant pendant environ 4 minutes d'affilee." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: fencer-test
	"Swashbuckler" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .fencify
	($ Thegroup .. " ' tombe sur le camp de quelqu'un cache derriere une ville vide. Il y a une femme vetue de vetements medievaux comme si elle etait a une foire de la Renaissance. Elle se bat dans les airs avec un fleuret d'escrime. Elle finit par arreter de frapper son epee, mais ne pose jamais sa rapiere. En lui parlant, elle semble etre une personne assez normale malgre les apparences." $) cyoa-text! basic-tone
		choice( "La recruter" )choice: fencer-recruit
		choice( "Laisser la tranquille" )choice
;

cyoa-bridge: wrestler-recruit
	ricon
	team-count 3 > if
		($ "'Je n'aime pas decevoir les fans, mais vous avez juste trop de monde." pbold .. "'		El Satan ne peut pas rejoindre a moins que quelqu'un ne parte:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. "  prend sa pose dramatique brevetee puis dit " .. "'Ouais, bien sur, je te rejoins." pbold $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: wrestler-test
	"'LUTTONS" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"El Satan" recruitee .name!
	5 recruitee .morale! recruitee .wrestify
	($ Thegroup .. "  entend de gros bruits de fracas venant dune maison voisine et va enqueter. Au milieu dune mer de meubles detruits et de sang de zombie se trouve le celebre lutteur " .. rname .. "il est actuellement pile driving un zombie tout en criant " .. "ENFONCEUR DE PIEUX!" pbold .. " a pleins poumons" $) cyoa-text! basic-tone
		choice( "Recruter" )choice: wrestler-recruit
		choice( "Laissez le tranquille" )choice
;

cyoa-bridge: lnk-recruit
	ricon
	1 2 rnd to lnk-countdown
	team-count 3 > if
		($ "KYYYYYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!" pbold .. "cela signifie que " .. rname .. " pense que le groupe est trop plein. Remplacez quelquun pour faire de la place:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " il ramasse un baton et le tient maladroitement vers le ciel. De nulle part, une petite melodie se fait entendre." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

: lnkname 1 6 rnd case
	1 of "Lank" endof
	2 of "Lenk" endof
	3 of "Link" endof
	4 of "Lunk" endof
	5 of "Leyenk" endof
	6 of "L*nk" endof
endcase ;

cyoa: lnk-test
	"LNK" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	lnkname recruitee .name!
	3 recruitee .morale! recruitee .lnkify
	($ Thegroup .. " ' enquete sur de bruits de fracas provenant d'un magasin de bricolage.	Un homme vetu de vert est en train de briser des poteries avec une epee gigantesque. L'epee cogne contre le sol en fracassant chaque pot, mais ne se tord pas.	Apres avoir observe cela pendant un certain temps, il est clair que quelque chose ne va vraiment pas chez cette personne." $) cyoa-text! basic-tone
		choice( "Recruter" )choice: lnk-recruit
		choice( "Laissez le tranquille" )choice
;

} }



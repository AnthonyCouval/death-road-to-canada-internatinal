// Both Santas, Alvis, TLB, Wrestler, Fencer, Debutante, L*nk

road{

0 value lnk-countdown

}

cyoa{ road{

: santajoins
	+cr ($ "HO HO HO! FROHE WEIHNACHTEN!" pbold $) +text
	team-count 3 > if then;
	4 recruitee .mechanical! 6 recruitee .attitude!
	recruitee .attitudeREV
	recruited
;

: evilsantajoins
	team-count 3 > if then;
	5 recruitee .strength! 0 recruitee .attitude!
	recruitee .attitudeREV
	recruited
;

cyoa-choice: santa-test-nice
	ricon
($ "Santa gibt " .. thegroup .. " ' ein Geschenk! Es ist ein Haufen Dosen Mais, genau das, was " .. gthey .. "  immer wollte!" $) cyoa-text! 2 300 tone
	5 LOOT_FOOD trunk.loot+
	santajoins
;
cyoa-choice: santa-test-naughty 
	ricon
	($ "'Du bist immer noch netter als diese schrecklichen Zombies! 	Der Weihnachtsmann gibt " .. thegroup .. "  etwas Kohle. " .. cname-He .. " ' stopft es in den Benzintank des Autos." $) cyoa-text! 2 300 tone
	50 LOOT_GAS trunk.loot+
	santajoins
;
cyoa-choice: santa-test-pissoff
	ricon
	"Bose Weihnachtsmann" recruitee .name! 4 screcruit
	($ cname .. "  schnappt und legt sich verbal mit dem Weihnachtsmann an." .. "'	VERPISS DICH, WEIHNACHTSMANN. SCHON! DU BIST EIN D**FUS. WEITER SO! WEITER SO, WEIHNACHTLICHE STIMMUNG ZU VERBREITEN! DU D*NK!" pbold .. "	Der Weihnachtsmann verliert den Glauben an die Menschheit und wird " .. rname .. "!" $) cyoa-text! goodfx morale2-
	evilsantajoins	
;

cyoa: santa-test
	"FROHE WEIHNACHTEN" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	3 screcruit
	"Weihnachtsmann" recruitee .name!
	4 recruitee .shooting! 0 recruitee .female! 6 recruitee .morale!
	($ Thegroup .. " is searching through a house for supplies when something comes down the chimney. It's Santa!!!
	" .. "HO HO HO! WARST DU UNARTIG ODER ARTIG?" pbold $) cyoa-text! basic-tone
		choice( "Artig" )choice: santa-test-nice
		choice( "Unartig" )choice: santa-test-naughty
		goofus-pass if
			goofus charchoice( ": VERPISS DICH" )choice: santa-test-pissoff
		then
;

cyoa-bridge: TLB-recruit
	team-count 3 > if
		ricon
		($ "ZU VIELE LEUTE, WIE SOLL ICH IM AUTO POSIEREN ODER OLEN?		" fbold ..
		 rname .. "  hat hier einen Punkt. Werde jemanden los um Platz zu schaffen:" $) cyoa-text!
		 recruit-replace?
	then;
	($ cname .. "  uberzeugt " .. "DER LETZTE BODYBUILDER" pbold  .. " ' dass es keinen Sinn macht der beste Bodybuilder der Welt zu sein wenn es niemanden gibt der es zu schatzen wei.	" .. "LET'S DO THIS! YEAH!!!" fbold $) cyoa-text! goodfx
		recruitee .attitudeREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa-bridge: TLB-flex
	"Toricht!" cyoa-title!
	($ cname .. "  fordert " .. "DER LETZTE BODYBUILDER" pbold .. "  zu einem Flexing Wettbewerb heraus. Was fur eine Torheit!" $) text!
	($ cname .. "  WIRD IM WETTBEWERB NACH EINEM FLEX ZERSTORT! ES GAB KEINE CHANCE!" fbold $) +crtext
	($ "'Es ist nichts mehr ubrig von " .. chim .. ". " .. "T*L*B" pbold .. "  hat eine einzelne Trane im Auge." $) +crtext
	cchar .kill
		team-count 0 > if
			choice( "Versuche ihn zu rekrutieren" )choice: TLB-recruit
			choice( "Lasst ihn in Ruhe" )choice
		then
;

cyoa-choice: TLB-train
	"Pumpen mit T*L*B" cyoa-title!
	ricon
	($ "DER LETZTE BODYBUILDER " pbold .. "gibt " .. thegroup .. "  einige ausgezeichnete Tipps, wie man sich nach der Apokalypse aufblahen kann.	Der Rat ist so gut, dass man sofort eine Pumpe spurt, ohne dass man trainieren muss." $) cyoa-text! goodfx
	' .strength++ foreach-team-char
;

cyoa: TLB-test
	"Der letzte Bodybuilder" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"T*L*B" recruitee .name!
	5 recruitee .morale! 6 recruitee .attitude!	1 recruitee .composure! recruitee .tlbify
	STAT_STRENGTH recruitee .effstat print
	($ Thegroup .. "  betritt ein verlassenes Fitnessstudio. Dort sitzt auf einem Thron aus alten Proteinpulverdosen ein bronzefarbener Bodybuilder.	" .. "I AM... " pbold .. "THE LAST BODYBUILDER! YEAH!!!" fbold .. "	Er FLEXIERT und GRUNZT auf traurige Weise." $) cyoa-text! basic-tone
		choice( "Nach Krafttipps fragen" )choice: TLB-train
		choice( "Versuche ihn zu rekrutieren" )choice: TLB-recruit
		cchar charchoice( "  startet einen Flexwettbewerb" )choice: TLB-flex
		
;

cyoa-bridge: alvis-recruit
	ricon
	team-count 3 > if
		($  rname .. "  murmelt etwas. Die Gruppe ist zu voll.		Werdet jemanden los um Platz zu schaffen:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. "  sagt etwas deutlicher " .. "'LASS UNS ROCKEN!" pbold $) cyoa-text! goodfx
		recruitee .fitnessREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa: alvis-test
	"Der Konig des Singens" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"Alvis" recruitee .name!
	3 recruitee .strength! 4 recruitee .morale! 6 recruitee .fitness!
	1 recruitee .composure! 4 recruitee .shooting! recruitee .alvify
	($ Thegroup .. " ' plundert eine Stadt, als sie auf einen Mann in einem goldenen Anzug mit einer unglaublichen Tolle treffen. Er ubt Karate Bewegungen.	Er sagt etwas, das du aufgrund eines harmonischen, aber unverstandlichen Gemurmels nicht verstehen kannst." $) cyoa-text! basic-tone
		choice( "Rekrutieren Sie ihn" )choice: alvis-recruit
		choice( "Lasst ihn in Ruhe" )choice
;

cyoa-bridge: debutante-recruit
	ricon
	team-count 3 > if
		($  rname .. "  stimmt zu, sich anzuschlieen, sieht dann aber, wie unglaublich uberfullt dein Fahrzeug mit Menschen und verschiedenem Dreck ist. " .. "WOHL, ICH NIE!" pbold .. "		Werdet jemanden los um Platz zu schaffen:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. "  dreht ihren Regenschirm blitzschnell um ihre Hand und schnappt ihn dann in einer Ruhepose gegen ihre Schulter. Das muss sie viel geubt haben." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: debutante-test
	"High Society Fashion, Post Society" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .debutantify
	($ Thegroup .. "  offnet die Tur zu einem Teeladen und findet eine sehr schick gekleidete Frau darin vor, die ganz beilaufig zwei Teedosen vergleicht. Sie legt die Dosen weg, dreht sich halb zu dir und nimmt ihren Regenschirm auf." $) cyoa-text! basic-tone
		choice( "Rekrutiere sie" )choice: debutante-recruit
		choice( "Lass sie in Ruhe" )choice
;

cyoa-bridge: fencer-recruit
	ricon
	team-count 3 > if
		($  rname .. "  lasst sich von deinem vollgepackten Auto nicht abschrecken und quetscht sich gerade so hinein. Am Ende zerreit sie mit ihrem Schwert die Innenausstattung des Autos ganz schon. Als sie gefragt wird, ob sie ihren Degen in den Kofferraum legen kann, sagt sie " .. "KEIN DEAL! ERSETZE JEMANDEN ODER ICH HORE AUF!" pbold $) cyoa-text! recruit-replace?
	then;
	($ rname  .. "  richtet ihr Schwert zum Himmel und schmettert heraus " .. "NIEMAND KANN MEINE KLINGE AUFHALTEN! HO HO HO!" pbold .. " ' Es ist kurzzeitig beunruhigend nachdem sie so normal gesprochen hat. Dann schlitzt sie die Luft auf groartige Weise auf wahrend sie etwa 4 Minuten lang lacht." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: fencer-test
	"Swashbuckler" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .fencify
	($ Thegroup .. " ' stolpert uber das Lager von jemandem, das hinter einer leeren Stadt versteckt ist. Da ist eine Frau, die in mittelalterlicher Kleidung gekleidet ist, als ware sie auf einem Renaissance Markt. Sie fechtet mit einem Fechtflorett in der Luft. Irgendwann hort sie auf, mit ihrem Schwert zu fechten, legt ihren Degen aber nie ab. Wenn man mit ihr spricht, wirkt sie trotz ihres Aussehens wie eine ziemlich normale Person." $) cyoa-text! basic-tone
		choice( "Rekrutiere sie" )choice: fencer-recruit
		choice( "Lass sie in Ruhe" )choice
;

cyoa-bridge: wrestler-recruit
	ricon
	team-count 3 > if
		($ "'Ich enttausche Fans nicht gerne, aber du hast einfach zu viele Leute." pbold .. "' El Satan kann nur beitreten wenn jemand geht:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " deutsch sein " .. "'Ja, klar, ich trete euch bei." pbold $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: wrestler-test
	"'LASST UNS RINGEN" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"El Satan" recruitee .name!
	5 recruitee .morale! recruitee .wrestify
	($ Thegroup .. "  hort groe Absturzgerausche aus einem nahegelegenen Haus und geht nachsehen.	Mitten in einem Meer aus zerstorten Mobeln und Zombieblut ist der weltberuhmte Wrestler, " .. rname .. "!	Er rammt gerade einen Zombie zu Boden und brullt " .. "PILE DRIVER!" pbold .. "  aus voller Kehle." $) cyoa-text! basic-tone
		choice( "Rekrutieren Sie ihn" )choice: wrestler-recruit
		choice( "Lasst ihn in Ruhe" )choice
;

cyoa-bridge: lnk-recruit
	ricon
	1 2 rnd to lnk-countdown
	team-count 3 > if
		($ "KYYYYYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!" pbold .. "		Das bedeutet dass " .. rname .. "  glaubt die Gruppe ist zu voll. Ersetze jemanden um Platz zu schaffen:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. "  nimmt einen Stock und halt ihn dann unbeholfen in den Himmel. Aus dem Nichts ertont eine kleine Melodie." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

: lnkname 1 6 rnd case
	1 of "Lank" endof
	2 of "Lenk" endof
	3 of "Lonk" endof
	4 of "Lunk" endof
	5 of "Leyenk" endof
	6 of "L*nk" endof
endcase ;

cyoa: lnk-test
	"LNK" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	lnkname recruitee .name!
	3 recruitee .morale! recruitee .lnkify
	($ Thegroup .. " ' untersucht laute Krachgerausche aus einem Bastelladen. Ein Mann in Grun zerschlagt Topferwaren mit einem gigantischen Schwert. Das Schwert scheppert auf den Boden, als es jeden Topf zerschmettert, verbiegt sich aber nicht. Nachdem man dies eine ganze Weile beobachtet hat, wird klar, dass mit dieser Person etwas zutiefst nicht stimmt." $) cyoa-text! basic-tone
		choice( "Rekrutieren Sie ihn" )choice: lnk-recruit
		choice( "Lasst ihn in Ruhe" )choice
;

} }



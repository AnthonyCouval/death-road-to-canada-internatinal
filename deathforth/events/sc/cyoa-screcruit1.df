cyoa: santa-test
	"JOYEUX NOEL" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	3 screcruit
	"Santa claus" recruitee .name!
	4 recruitee .shooting! 0 recruitee .female! 6 recruitee .morale!
	($ Thegroup .. " is searching through a house for supplies when something comes down the chimney. It's Santa!!!
	" .. "VOILA, VOUS AVEZ ETE BIEN OU PAS BIEN ?" pbold $) cyoa-text! basic-tone
		choice( "Gaz" )choice: santa-test-nice
		choice( "Regule" )choice: santa-test-naughty
		goofus-pass if
			goofus charchoice( ": FOU TE FAIRE PIPI." )choice: santa-test-pissoff
		then
;

cyoa-bridge: TLB-recruit
	team-count 3 > if
		ricon
		($ "Trop de personnes, comment devrais-je poser ou huiler moi-meme dans la voiture ?" fbold ..
		 rname .. " eliminer quelqu'un pour creer de l'espace :" $) cyoa-text!
		 recruit-replace?
	then;
	($ cname .. " convainc " .. "LE DERNIER BODYBUILDER" pbold  .. " il n'y a pas de sens d'etre le meilleur bodybuilder au monde si personne n'est la pour l'apprecier." .. "LET'S DO THIS! YEAH!!!" fbold $) cyoa-text! goodfx
		recruitee .attitudeREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa-bridge: TLB-flex
	"Fou rien que cela !" cyoa-title!
	($ cname .. " defis. " .. "LE DERNIER BODYBUILDER" pbold .. " aller a une competition de souplesse, c'est une betise !" $) text!
	($ cname .. " C'ETAIT ELIMINE DANS LA COMPETITION DES UNE SOUPLE FLEXION ! IL N'Y AVAIT AUCUNE CHANCE !" fbold $) +crtext
	($ "Rien ne reste de " .. chim .. ". " .. "T*L*" pbold .. " un seul larmement s'est glisse de son oeil." $) +crtext
	cchar .kill
		team-count 0 > if
			choice( "Tentez de le recruter" )choice: TLB-recruit
			choice( "Laissez-le etre" )choice
		then
;

cyoa-choice: TLB-train
	"Se preparer avec t*l*b a plein regime" cyoa-title!
	ricon
	($ "ECHOUE " pbold .. "donnez " .. thegroup .. " conseils exceptionnels pour gonfler dans le monde post-apocalyptique... . les conseils sont si bien faits que l'inflation est immediate, sans besoin de travail supplementaire." $) cyoa-text! goodfx
	' .strength++ foreach-team-char
;

cyoa: TLB-test
	"Le dernier bodybuilder" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"T*L*" recruitee .name!
	5 recruitee .morale! 6 recruitee .attitude!	1 recruitee .composure! recruitee .tlbify
	STAT_STRENGTH recruitee .effstat print
	($ Thegroup .. " dans un gym abandonne, sur un trone de jarres de proteines anciennes, siege un corps bronze d'un bodybuilder ..." .. "I AM... " pbold .. "THE LAST BODYBUILDER! YEAH!!!" fbold .. "il s'etire et grogne, de maniere triste." $) cyoa-text! basic-tone
		choice( "Demandez des conseils pour gagner en force." )choice: TLB-train
		choice( "Tentez de le recruter" )choice: TLB-recruit
		cchar charchoice( " l'artiste martial s'est applique sur le char." )choice: TLB-flex
		
;

cyoa-bridge: alvis-recruit
	ricon
	team-count 3 > if
		($  rname .. " il faut renvoyer quelqu'un pour creer de l'espace :" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " assez clairement dit " .. "DORALISATION SONORISEE" pbold $) cyoa-text! goodfx
		recruitee .fitnessREV recruitee .strengthREV recruitee .temperREV
		recruited
;

cyoa: alvis-test
	"Le roi des chants" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"Avisez" recruitee .name!
	3 recruitee .strength! 4 recruitee .morale! 6 recruitee .fitness!
	1 recruitee .composure! 4 recruitee .shooting! recruitee .alvify
	($ Thegroup .. " il vole une ville en rencontrant un homme dans un costume d'or, possedant un magnifique pompadour. il pratique des mouvements de karate... . il dit quelque chose que vous ne pouvez pas comprendre, a cause d'un murmure harmonique mais inintelligible." $) cyoa-text! basic-tone
		choice( "Engager-le" )choice: alvis-recruit
		choice( "Laissez-le etre" )choice
;

cyoa-bridge: debutante-recruit
	ricon
	team-count 3 > if
		($  rname .. " s'engage a rejoindre, mais puis voit combien votre vehicule est surcharge, avec des personnes et divers sales-meles. " .. "MAIS JE NE L'AI JAMAIS FAITE !" pbold .. "laisser partir quelqu'un pour faire place a quelque chose." $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " elle tourne sa parasol a vive allure autour de sa main puis le fait reposer rapidement sur l'epaule. elle semble avoir pratique cela beaucoup." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: debutante-test
	"La haute societe de la mode, l'epoque post-society." cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .debutantify
	($ Thegroup .. " vous entrez dans la boutique de the et vous decouvrez une femme tres elegamment habillee qui compare deux boites de the l'une avec l'autre... . elle met les boites a terre, tourne le dos a vous un peu et prend son parapluie." $) cyoa-text! basic-tone
		choice( "La recrutez" )choice: debutante-recruit
		choice( "Laissez-la tranquille" )choice
;

cyoa-bridge: fencer-recruit
	ricon
	team-count 3 > if
		($  rname .. " elle ne recule devant votre voiture chargee et parvient a s'inserer juste. elle termine par dechirer vraiment mal l'interieur de la voiture avec son epee. . . " .. "PAS DE DEAL ! CHANGEMENT DE PERSONNE OU JE QUITTE !" pbold $) cyoa-text! recruit-replace?
	then;
	($ rname  .. " elle pointe son epee vers le ciel et hurle : " .. "AUCUN POURRA ARRETER MON COUTEAU ! HO HO HO !" pbold .. " Elle parle brievement de maniere inquietante apres qu'elle parlait si normalement... puis elle coupe l'air d'une facon epanouissante en riant pendant environ quatre minutes consecutives." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: fencer-test
	"Voleur de mer, pirate." cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .fencify
	($ Thegroup .. " une personne rencontre un camp cache derriere une ville deserte. il y a une femme habillee en tenue medievale, comme si elle etait a une fete des rencontres. elle se bat l'air avec une epee de passe : ... elle arrete finalement de couper son epee, mais ne la met jamais a terre. quand on parle a elle, elle parait comme une personne bien normale malgre ses apparences." $) cyoa-text! basic-tone
		choice( "La recrutez" )choice: fencer-recruit
		choice( "Laissez-la tranquille" )choice
;

cyoa-bridge: wrestler-recruit
	ricon
	team-count 3 > if
		($ "Je n'aime pas decevoir les fans, mais vous avez simplement trop de personnes." pbold .. "l'elevateur de satan ne peut rejoindre qu'en deplacant quelqu'un :" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " frappe sa pose dramatique brevetee et puis dit : " .. "Je me rejoindrai a vous." pbold $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: wrestler-test
	"RUPTURE DE VOITURE" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"L'etendu satan" recruitee .name!
	5 recruitee .morale! recruitee .wrestify
	($ Thegroup .. " dans la maison voisine, il entend de grands bruits de cassements et se rend a l'enquete... dans le milieu d'un ocean detruit de meubles et de selles de zombie figure le celebre lutteur du monde. " .. rname .. "il est actuellement qui percute un zombie en hurleant. " .. "CONDUCTEUR DE PALE !" pbold .. " a plein souffle." $) cyoa-text! basic-tone
		choice( "Engager-le" )choice: wrestler-recruit
		choice( "Laissez-le etre" )choice
;

cyoa-bridge: lnk-recruit
	ricon
	1 2 rnd to lnk-countdown
	team-count 3 > if
		($ "KYYYYYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!" pbold .. "rien, c'est rien " .. rname .. " pense que le groupe est trop plein. remplace quelqu'un pour faire place:" $) cyoa-text!
		recruit-replace?
	then;
	($ rname  .. " prend une baton et le pointe vers le ciel avec une grosse geste maladroite. de nulle part, un petit air s'entend." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

: lnkname 1 6 rnd case
	1 of "Definition de lank" endof
	2 of "Conduisez." endof
	3 of "Lien" endof
	4 of "Raccourcir : un '" endof
	5 of "Leyenk : rien a traduire" endof
	6 of "Liens :" endof
endcase ;

cyoa: lnk-test
	"LIENS DEADANS" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	lnkname recruitee .name!
	3 recruitee .morale! recruitee .lnkify
	($ Thegroup .. " une personne habillee en vert se trouve dans un magasin de creation et casse des vases avec une grosse epee. le fer de l'epee sonne sur le sol chaque fois qu'elle percute un pot, mais ne s'integre pas.. . 	apres avoir assiste a cela pendant quelque temps, il est clair que cette personne a quelque chose qui ne va bien." $) cyoa-text! basic-tone
		choice( "Engager-le" )choice: lnk-recruit
		choice( "Laissez-le etre" )choice
;


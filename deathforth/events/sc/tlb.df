uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

0 value tlb-camped

cyoa: tlb-camp
	sc-camper choosechar cicon
	"Muskelcamp" cyoa-title!
	solo if 
		($ "Bevor wir fur die Nacht campen, " .. cname .. "  hat einen vollen olympischen Stil Pose-Down-Wettbewerb vor einer Menge von Richtern, die er aus Mull konstruiert hat." $) cyoa-text!
	else
		($ cname .. " " .. everyone .. "seine Routine ist unglaublich, ohne Worte vermittelt sie eine starke Botschaft von Hoffnung und Vergebung. Die Gruppe geht mit einem spirituellen Hochgefuhl schlafen." $) cyoa-text!
	then
		' .morale2+ foreach-team-char +cr fullcamp
;

cyoa: tlb-despair
	"Stillstand der Gewinne" cyoa-title!
	bully choosechar cicon
	solo if 
		($ cname .. " realizes that the promise of Canada really isn't doing much for his physique. He makes a quick decision to abandon the entire mission." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons
	then;
	($ cname .. " 'swole' goes, I'm not sure if it's a word or not. I'm assuming it's a slang term for 'cool' or 'awesome' or something like that. I'm not sure. " .. everyone .. " 'kann vermuten, er schreit noch auf, als er uber den Horizont verschwindet." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons	
;

} }



uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

0 value tlb-camped

cyoa: tlb-camp
	sc-camper choosechar cicon
	"Chante une chanson." cyoa-title!
	solo if 
		($ "Avant de camper pour la nuit, " .. cname .. " un combatier a l'ancienne pose devant une jury compose de figures en carton et dechetterie." $) cyoa-text!
	else
		($ cname .. " montre sa totalite de son travail d'artificialisation corporelle en train de poser. " .. everyone .. "son rythme est incroyable, sans mots il transmet un fort message d'espoir et de pardon. le groupe s'endormit excite a un niveau spirituel." $) cyoa-text!
	then
		' .morale2+ foreach-team-char +cr fullcamp
;

cyoa: tlb-despair
	"+2 de force" cyoa-title!
	bully choosechar cicon
	solo if 
		($ cname .. " il se rend compte qu'engage dans la promesse du canada ne fait pas beaucoup pour sa physionomie. il prend rapidement une decision de renoncer a toute la mission." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons
	then;
	($ cname .. " il hurle quelque chose quant a l'arret de ses gains. il commence a marcher en disant quelque chose d'inutile sur ce voyage ne faisant rien etre gonfle. " .. everyone .. " il crye encore, il disparait au-dela de l'horizon." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons	
;

} }



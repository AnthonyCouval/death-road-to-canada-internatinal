uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

0 value tlb-camped

cyoa: tlb-camp
	sc-camper choosechar cicon
	"Muscle Camp" cyoa-title!
	solo if 
		($ "Avant de camper pour la nuit, " .. cname .. "  organise un concours de poses de style olympique complet devant un groupe de juges quil a construits a partir de dechets." $) cyoa-text!
	else
		($ cname .. "  montre toute sa routine de pose de culturiste a " .. everyone .. ". Sa routine est incroyable, sans paroles elle transmet un message fort despoir et de pardon. Le groupe sendort en se sentant gonfle dun point de vue spirituel." $) cyoa-text!
	then
		' .morale2+ foreach-team-char +cr fullcamp
;

cyoa: tlb-despair
	"Gains au point mort" cyoa-title!
	bully choosechar cicon
	solo if 
		($ cname .. " ' se rend compte que la promesse du Canada ne fait vraiment pas grand chose pour son physique. Il prend la decision rapide d'abandonner toute la mission." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons
	then;
	($ cname .. "  crie quelque chose a propos de ses gains au point mort. Il commence a seloigner en criant quelque chose sur le fait que rien dans ce voyage nest gonfle. Pour autant que " .. everyone .. " ' puisse le deviner, il crie toujours alors qu'il disparait a l'horizon." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons	
;

} }



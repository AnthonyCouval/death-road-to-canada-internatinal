uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

0 value tlb-camped

cyoa: tlb-camp
	sc-camper choosechar cicon
	"Campamento de Musculos" cyoa-title!
	solo if 
		($ "Antes de acampar para la noche, " .. cname .. " tiene una competencia de poseo estilo olimpico frente a un monton de jueces que construyo con basura." $) cyoa-text!
	else
		($ cname .. " muestra toda su rutina de poseo del culturista ante " .. everyone .. ". Su rutina es increible, sin palabras transmite un fuerte mensaje de esperanza y perdon. El grupo se duerme sentidos emocionados en un sentido espiritual.," $) cyoa-text!
	then
		' .morale2+ foreach-team-char +cr fullcamp
;

cyoa: tlb-despair
	"Ganancias atoradas" cyoa-title!
	bully choosechar cicon
	solo if 
		($ cname .. " 'se da cuenta de que la promesa de Canada realmente no esta haciendo mucho por su fisico. Hace una rapida decision de abandonar toda la mision.'" $) cyoa-text! badfx
		decruit-bad-silent-takeweapons
	then;
	($ cname .. " grita algo sobre que sus ganancias se han detenido. Empieza a caminar lejos mientras grita algo sobre nada en este viaje siendo swole. Segun " .. everyone .. " 'puedo adivinar, sigue gritando al desaparecer por el horizonte.'," $) cyoa-text! badfx
		decruit-bad-silent-takeweapons	
;

} }



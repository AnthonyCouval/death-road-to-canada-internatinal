uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

0 value tlb-camped

cyoa: tlb-camp
	sc-camper choosechar cicon
	"Muscle Camp" cyoa-title!
	solo if 
		($ "Bevor sie fur die Nacht zelten, " .. cname .. "  hat einen kompletten Bodybuilder Posing Wettbewerb vor einer Gruppe von Richtern die er aus Mull gebaut hat." $) cyoa-text!
	else
		($ cname .. "  zeigt seine gesamte Bodybuilder Posing Routine vor " .. everyone .. ". Seine Routine ist unglaublich, ohne Worte vermittelt sie eine starke Botschaft der Hoffnung und Vergebung. Die Gruppe geht zu Bett und fuhlt sich in einem spirituellen Sinne aufgepumpt." $) cyoa-text!
	then
		' .morale2+ foreach-team-char +cr fullcamp
;

cyoa: tlb-despair
	"Stalled Gains" cyoa-title!
	bully choosechar cicon
	solo if 
		($ cname .. " ' erkennt dass das Versprechen Kanadas seinem Korperbau nicht wirklich viel bringt. Er trifft eine schnelle Entscheidung die gesamte Mission abzubrechen." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons
	then;
	($ cname .. "  schreit etwas uber seine blockierten Gewinne. Er geht weg wahrend er etwas daruber schreit dass auf dieser Reise nichts angeschwollen ist. Soweit " .. everyone .. " ' vermuten kann, schreit er immer noch, als er am Horizont verschwindet." $) cyoa-text! badfx
		decruit-bad-silent-takeweapons	
;

} }




cyoa{ road{

0 value lnk-event
0 value lnk-bombbag

: lnk-chest
	($ cname .. "  tropeca em um bau de tesouro. Ele o abre e levanta seu conteudo bem acima de sua cabeca.		Continha o " $) cyoa-text!
;

: lnksword 1 6 rnd case
	1 of "M*ster" endof
	2 of "Master" endof
	3 of "Senhor" endof
	4 of "Moster" endof
	5 of "Muster" endof
	6 of "Myster" endof
endcase ;

cyoa-choice: lnk-heart
	($ cname .. "  pegou o " .. "Recipiente de Coracao!" pbold .. "	Saude Maxima foi aumentada!" $) cyoa-text!
		STAT_VITALITY cchar .stat++ cchar .health++
;

: lnk-restock
	52 stpick if choosechar then
	WEAPON_LNKBOMB cchar .weaponb! 3 cchar .stackedb! 
	1 cchar .weapon_nodropb!
;

cyoa-choice: lnk-bomb
	($ cname .. "  pegou o " .. "Saco de Bombas!" pbold .. "'	Ele agora pode jogar tres bombas por missao!	Novas bombas aparecerao no bau quando forem totalmente usadas!" $) cyoa-text!
		1 to lnk-bombbag
		// lnk-restock
		 3 WEAPON_LNKBOMB trunk.weapon+
;

cyoa: lnk-timeup
	52 stpick if choosechar cicon else ($ "L*nk" pbold .. "  nao esta mais por perto. Provavelmente e o melhor. Por favor nao conte a ninguem que colocamos esse personagem no jogo." $) text! exit then
	"DA NA NA NAAAAAAA!" cyoa-title!
	lnk-event 0 = if
		lnk-chest ($ "Bumerangue de Madeira!" pbold $) +text
			1 WEAPON_WOODBOOM trunk.weapon+
	then
	lnk-event 1 = if
		lnk-chest ($ "Espada Branca!" pbold $) +text
			WEAPON_WHITESWORD cchar .weapona! 1 cchar .weapon_nodropa!
	then
	lnk-event 2 = if
		lnk-chest ($ "Bumerangue de Metal!" pbold $) +text
			1 WEAPON_METALBOOM trunk.weapon+
	then
	lnk-event 3 = if
		lnk-chest ($ "..." pbold .. "		Escolha Um:" $) +text
			choice( "Recipiente de Coracao" )choice: lnk-heart
			choice( "Saco de Bombas" )choice: lnk-bomb
	then
	lnk-event 4 = if
		lnk-chest ($ PURPLE .. lnksword .. " Espada!" .. WHITE $) +text
				WEAPON_HERO cchar .weapona! 1 cchar .weapon_nodropa!
	then 
	' lnk-event ++ goodfx
	lnk-event 5 < if 1 2 rnd else 0 then to lnk-countdown
;

: lnk-cut
	lnk-event 2 < if 50 else 80 then %chance if dup .ouch-- then
	lnk-event 3 > if dup .ouch-- then
;

cyoa: lnk-despair
	bully choosechar cicon
	"Ataque Giratorio" cyoa-title!
	($ cname .. "  segura sua espada na frente dele, e entao gira em alta velocidade." .. "KYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!!!!" rbold .. "ele acaba cortando tudo perto dele, e tambem se corta muito feio." $) cyoa-text!
	morale2+ lnk-event 1 > if ouch-- else sting-- then
	cchar ' lnk-cut foreach-team-char-except bitefx 
;

} }



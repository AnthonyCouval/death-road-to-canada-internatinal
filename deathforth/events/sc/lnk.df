
cyoa{ road{

0 value lnk-event
0 value lnk-bombbag

: lnk-chest
	($ cname .. " il contenait le " $) cyoa-text!
;

: lnksword 1 6 rnd case
	1 of "M*stre" endof
	2 of "Maitre" endof
	3 of "Monsieur" endof
	4 of "Moster" endof
	5 of "Muster" endof
	6 of "Myster" endof
endcase ;

cyoa-choice: lnk-heart
	($ cname .. "  a obtenu le " .. "Recipient de cur !" pbold .. "	La sante maximale a augmente !" $) cyoa-text!
		STAT_VITALITY cchar .stat++ cchar .health++
;

: lnk-restock
	52 stpick if choosechar then
	WEAPON_LNKBOMB cchar .weaponb! 3 cchar .stackedb! 
	1 cchar .weapon_nodropb!
;

cyoa-choice: lnk-bomb
	($ cname .. "  a obtenu le " .. "Sac de bombes !" pbold .. "'	Il peut desormais lancer trois bombes a chaque mission ! 	De nouvelles bombes apparaitront dans le coffre lorsqu'elles seront completement epuisees !" $) cyoa-text!
		1 to lnk-bombbag
		// lnk-restock
		 3 WEAPON_LNKBOMB trunk.weapon+
;

cyoa: lnk-timeup
	52 stpick if choosechar cicon else ($ "L*nk" pbold .. "  nest plus la. Cest probablement pour le mieux. Veuillez ne dire a personne que nous avons mis ce personnage dans le jeu." $) text! exit then
	"DA NA NA NAAAAAAA!" cyoa-title!
	lnk-event 0 = if
		lnk-chest ($ "Boomerang en bois !" pbold $) +text
			1 WEAPON_WOODBOOM trunk.weapon+
	then
	lnk-event 1 = if
		lnk-chest ($ "Epee blanche !" pbold $) +text
			WEAPON_WHITESWORD cchar .weapona! 1 cchar .weapon_nodropa!
	then
	lnk-event 2 = if
		lnk-chest ($ "Boomerang en metal !" pbold $) +text
			1 WEAPON_METALBOOM trunk.weapon+
	then
	lnk-event 3 = if
		lnk-chest ($ "..." pbold .. "		Choisissez en un :" $) +text
			choice( "Conteneur de coeur" )choice: lnk-heart
			choice( "Sac de bombes" )choice: lnk-bomb
	then
	lnk-event 4 = if
		lnk-chest ($ PURPLE .. lnksword .. "  Epee !" .. WHITE $) +text
				WEAPON_HERO cchar .weapona! 1 cchar .weapon_nodropa!
	then 
	' lnk-event ++ goodfx
	lnk-event 5 < if 1 2 rnd else 0 then to lnk-countdown
;

: lnk-cut
	lnk-event 2 < if 50 else 80 then %chance if dup .ouch-- then
	lnk-event 3 > if dup .ouch-- then
;

cyoa: lnk-despair
	bully choosechar cicon
	"Attaque tournoyante" cyoa-title!
	($ cname .. "  tient son epee devant lui, puis tourne a grande vitesse.	" .. "KYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!!!!" rbold .. "	Il finit par tout couper pres de lui, et se coupe aussi tres mal." $) cyoa-text!
	morale2+ lnk-event 1 > if ouch-- else sting-- then
	cchar ' lnk-cut foreach-team-char-except bitefx 
;

} }



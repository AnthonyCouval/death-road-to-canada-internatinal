
cyoa{ road{

0 value lnk-event
0 value lnk-bombbag

: lnk-chest
	($ cname .. " des joyaux precieux et des pieces d'or. 	 " $) cyoa-text!
;

: lnksword 1 6 rnd case
	1 of "Orange = orange" endof
	2 of "Maitre" endof
	3 of "Monsieur" endof
	4 of "Montrer" endof
	5 of "Armoire a vetements" endof
	6 of "Mystere" endof
endcase ;

cyoa-choice: lnk-heart
	($ cname .. " obtenu. " .. "Conteneur de coeur !" pbold .. "la sante maximale a augmente !" $) cyoa-text!
		STAT_VITALITY cchar .stat++ cchar .health++
;

: lnk-restock
	52 stpick if choosechar then
	WEAPON_LNKBOMB cchar .weaponb! 3 cchar .stackedb! 
	1 cchar .weapon_nodropb!
;

cyoa-choice: lnk-bomb
	($ cname .. " obtenu. " .. "Sac de bombes !" pbold .. "il peut jeter maintenant trois bombes chaque mission !" $) cyoa-text!
		1 to lnk-bombbag
		// lnk-restock
		 3 WEAPON_LNKBOMB trunk.weapon+
;

cyoa: lnk-timeup
	52 stpick if choosechar cicon else ($ "Liens :" pbold .. " cette entite n'est plus parmi nous. cela peut etre le mieux. s'il vous plait, ne dites rien a personne que nous l'avons mis dans notre jeu." $) text! exit then
	"DA NA NA NAAAAAAA!" cyoa-title!
	lnk-event 0 = if
		lnk-chest ($ "Couteau de bois retourne!" pbold $) +text
			1 WEAPON_WOODBOOM trunk.weapon+
	then
	lnk-event 1 = if
		lnk-chest ($ "Epee blanche !" pbold $) +text
			WEAPON_WHITESWORD cchar .weapona! 1 cchar .weapon_nodropa!
	then
	lnk-event 2 = if
		lnk-chest ($ "Lance-bouclier en metal !" pbold $) +text
			1 WEAPON_METALBOOM trunk.weapon+
	then
	lnk-event 3 = if
		lnk-chest ($ "..." pbold .. "selectionner une option :" $) +text
			choice( "Assecurer le depotoir" )choice: lnk-heart
			choice( "Sac de bombes" )choice: lnk-bomb
	then
	lnk-event 4 = if
		lnk-chest ($ PURPLE .. lnksword .. " Epee !" .. WHITE $) +text
				WEAPON_HERO cchar .weapona! 1 cchar .weapon_nodropa!
	then 
	' lnk-event ++ goodfx
	lnk-event 5 < if 1 2 rnd else 0 then to lnk-countdown
;

: lnk-cut
	lnk-event 2 < if 50 else 80 then %chance if dup .ouch-- then
	lnk-event 3 > if dup .ouch-- then
;

cyoa: lnk-despair
	bully choosechar cicon
	"Attaque tournante" cyoa-title!
	($ cname .. " tient son epee devant lui et effectue une rotation rapide." .. "KYAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!!!!" rbold .. "il finit par couper tout autour de lui et s'endommage lui-meme assez gravement." $) cyoa-text!
	morale2+ lnk-event 1 > if ouch-- else sting-- then
	cchar ' lnk-cut foreach-team-char-except bitefx 
;

} }



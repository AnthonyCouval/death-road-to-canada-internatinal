(* uses base.df
uses charfilt.df
uses charstats.df
uses road.df
uses charstatmods.df *)

// Mason, Octodad, Boxer, Mad Scientist, Sumo, Valkyrie, Rambeux

road{

0 value madsci-countdown
0 value mason-countdown
0 value mason-curse

}

cyoa{ road{

cyoa-bridge: ramb-recruit
	ricon recruitee .strengthREV recruitee .fitnessREV recruitee .shootingREV
	team-count 3 > if
		($  rname .. " ' percebe que a equipe ja esta cheia. Voce tera que expulsar alguem da equipe para abrir espaco. Voce deveria, ja que voce ja desistiu da comida." $) cyoa-text! -10 trunk-food+ recruit-replace?
	then;
	($ rname  .. "  enfia ele e sua minigun no carro. Ele se recusa a colocar " .. "BERTHA" pbold .. "  no porta malas e diz que ninguem nunca conseguira arranca lo dele." $) cyoa-text! goodfx
		-10 trunk-food+	recruited
;

cyoa: ramb-test
	"RAMBEUX: PRIMEIRO BUMBUM" cyoa-title!
	char-gen to recruitee
	"Rambeux" recruitee .name!
	ricon
	4 recruitee .morale! recruitee .rambify
	($ Thegroup .. "  ouve grandes barragens de tiros enquanto se aproxima de uma cidade. No meio da cidade esta um homem segurando uma minigun. Ao redor dele estao multidoes de mortos vivos mortos vivos. Ele diz que e um mercenario de aluguel, pago adiantado." $) cyoa-text! basic-tone
	trunk-food 9 > if
		choice( "Recrute o por 10 comida" )choice: ramb-recruit
	then
		choice( "Nao posso poupar a comida" )choice
;

cyoa-choice: valk-recruit
	ricon
	team-count 3 > if
		($  rname .. "  avisa que seu grupo esta cheio.		" .. "'Bem, alguem tera que sair." pbold .. 
		"  Ela joga seu martelo e atinge " .. cname .. "  bem no cranio.		" .. cname .. " deixou o time!" $) cyoa-text! cchar .kill
	else
		($ rname  .. " ' levanta dramaticamente seu martelo. Um raio o atinge!		O resto do time fica quase surdo e nao consegue ver a maioria das cores pelo resto do dia." $) cyoa-text! goodfx
	then
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: valk-test
	"Ponte Arco Iris para Valhalla" cyoa-title!
	char-gen to recruitee
	someone choosechar
	"Valkyrie" recruitee .name!
	ricon
	4 recruitee .morale! recruitee .valkify
	($ "As nuvens se abrem e um arco iris aparece. Uma valquiria monta um unicornio descendo o arco iris.	" .. "'Voce tem matado um monte de coisas. Fui enviado aqui por Thor e outras porcarias para ajuda lo em sua jornada.	Isso realmente nao e grande coisa entao nao questione." pbold $) cyoa-text! basic-tone
		choice( "Aceite a oferta dela" )choice: valk-recruit
		choice( "Rejeite a oferta dela" )choice
;

cyoa-bridge: sumo-recruit
	ricon recruitee .strengthREV recruitee .fitnessREV
	team-count 3 > if 
		($  rname .. " ' agradece a oferta no comeco, mas depois fica bem aparente que nao tem como 5 pessoas caberem no carro. Muito menos 4 pessoas e um lutador de sumo.		Substitua alguem:" $) cyoa-text! recruit-replace?
	then;
	($ rname  .. "  entra no carro. A suspensao fica muito, muito baixa de um lado, mas o carro ainda consegue dirigir na estrada." $) cyoa-text! goodfx
		recruited
;

cyoa: sumo-test
	"'VAMOS LUTAR SUMO" cyoa-title!
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .sumoify
	($ Thegroup .. " ' esta tentando encontrar suprimentos e tropeca em um dojo de artes marciais fortificado. Dentro ha um lutador de sumo.	Ele explica que esta sobrevivendo, mas quer viajar. Todos deixaram sua cidade ha um bom tempo. Mesmo antes disso, nao havia uma grande demanda por treinamento de lutador de sumo na costa leste dos Estados Unidos." .. "Eu ouvi que sumo e bem grande no Canada! Maior que hoquei!" pbold $) cyoa-text! basic-tone
		choice( "Recruta lo" )choice: sumo-recruit
		choice( "Deixe o em paz" )choice
;

cyoa-choice: madsci-give
	ricon
		(*  Here, take one of my old experiments! It'll work a couple times." " hands you a TELEPORTER MK 1! *)
	($ "Otimo, isso realmente ira ajudar a ciencia! Aqui, pegue um dos meus experimentos antigos!" pbold .. rname .. "  te entrega um TELEPORTER MK 1! Ela sai andando para continuar sua jornada de descobertas." $) cyoa-text! goodfx
		-20 LOOT_SHOTGUN_SHELL trunk.loot+
		7 WEAPON_SMOKEBOMB trunk.weapon+
;

cyoa-bridge: madsci-recruit
	ricon 2 4 rnd to madsci-countdown recruitee .witsREV recruitee .mechanicREV recruitee .shootingREV
	($  "Depois de conversar com a cientista, descobre se que o laboratorio dela esta no caminho." .. "'Obrigado. Vou dar seu nome a proxima invencao." pbold $) cyoa-text! goodfx
		team-count 3 > if
			"'O grupo e grande demais para recruta la! Substitua alguem:" +crtext
			recruit-replace?
		then; recruited
;

cyoa: madsci-test
	"Doando para a Pesquisa Cientifica" cyoa-title!
	char-gen to recruitee
	ricon
	"Doc" recruitee .name! 4 recruitee .morale! recruitee .madscify
	($ Thegroup .. " ' esta dando uma pausa para verificar seu equipamento quando de repente ha um clarao de luz! Uma cientista se materializa do nada." .. "Droga, agora preciso voltar para meu laboratorio. Eu poderia precisar de uma carona ou, digamos, 20 projeteis para minha Shotgun Cientifica." pbold $) cyoa-text! basic-tone
		choice( "Oferecer uma carona" )choice: madsci-recruit
		trunk-shotgun-shell 19 > if
		choice( "Dar 20 Projeteis de Shotgun" )choice: madsci-give
		then
		choice( "'Desculpe, nao posso ajudar" )choice
;

// boxer-recruit sometimes gives a stack error that I haven't been able to track down yet
cyoa-bridge: boxer-recruit
	ricon "Contender" recruitee .name! recruitee .strengthREV recruitee .fitnessREV recruitee .attitudeREV
	team-count 3 > if
		($  rname .. "  fica bem agitada com todo mundo se amontoando para pedir para ela se juntar. Ela desfere um grande golpe de direita bem no queixo de " .. cname .. "'s chin." .. "'Yeah, that's a real knockout punch!" pbold .. 
		"  A equipe abre espaco para o boxeador descartando:" $) cyoa-text!
		sting-- badfx recruit-replace?
	then;
	($ rname  .. "  soca as luvas juntas.	" .. "Hora de treinar na estrada!" pbold $) cyoa-text! goodfx
		recruited
;

cyoa: boxer-test
	"The Big Fight" cyoa-title!
	char-gen to recruitee
	someone choosechar
	ricon
	4 recruitee .morale! recruitee .boxerify
	($ Thegroup .. "  verifica um ginasio de boxe abandonado e encontra uma mulher la em equipamento de boxe completo. Ela esta lamentando em um saco de pancadas com velocidade alucinante.	Suas respostas na conversa sao todas nao sequitur, ditados aleatorios sobre boxe." $) cyoa-text! basic-tone
		choice( "Recrute a" )choice: boxer-recruit
		choice( "Deixe a em paz" )choice
;

cyoa-choice: octodad-recruit
	ricon
	team-count 3 > if
		($ "O novo recruta acabou sendo bastante compacto e se espremeu no carro!		" .. rname .. "  se junta a equipe!		Mais tarde, enquanto dirigia pela rodovia, ele voou pela janela em um acidente bizarro, junto com a arma e os suprimentos que trouxe com ele.		" .. rname .. "  deixa a equipe!" $) cyoa-text!
	then;
	($ "  Leva " .. rname .. "  cerca de 15 minutos para abrir a porta do carro, entrar no carro e colocar o cinto de seguranca.	Durante isso, a claymore e os suprimentos sao jogados em um banheiro proximo e sao irrecuperaveis." $) cyoa-text! badfx
	recruitee .temperREV recruitee .attitudeREV
	recruited
;

: octodadname 1 5 rnd case
	1 of "*blub*" endof
	2 of "*balbucio*" endof
	3 of "*bluub*" endof
	4 of "New Guy" endof
	5 of "Recruta" endof
endcase ;

cyoa: octodad-test
	"Pessoa Normal" cyoa-title!
	char-gen to recruitee
	ricon
	octodadname recruitee .name!
	4 recruitee .morale! recruitee .octodadify
	($ Thegroup .. " ' encontra um sobrevivente nada notavel em um aquario abandonado.	Ele parece ser uma pessoa amigavel. Em uma inspecao mais proxima, ele esta carregando uma espada claymore e um saco enorme de suprimentos!" $) cyoa-text! basic-tone
		choice( "Recruta lo" )choice: octodad-recruit
		choice( "Deixe o em paz" )choice
;

cyoa-choice: mason-recruit
	ricon 2 3 rnd to mason-countdown 1 to mason-curse
	team-count 3 > if
		($ "A equipe para no acostamento para encontrar o caroneiro. A principio havia pessoas demais para encaixar uma nova pessoa no carro, mas entao " .. cname .. "  desaparece da face da terra.		Que intrigante!" $) cyoa-text!
		cchar .kill
	else
		($ rname  .. "  abre a porta do carro e se senta, sem dizer nada. Parece que voce tem um novo amigo!" $) cyoa-text! goodfx
	then
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: mason-test
	"Conheca Novos Amigos" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"???" recruitee .name!
	5 recruitee .morale! recruitee .masonify
	($ Thegroup .. "  avista um caroneiro. Ele esta usando uma mascara de hoquei e parado ao lado da estrada, como uma estatua, olhando para o nada. Em uma mao ele tem uma motosserra, na outra um facao.	Conforme o carro se aproxima, o caroneiro vira a cabeca levemente para olhar diretamente para " .. thegroup .. "." $) cyoa-text! basic-tone
		choice( "Pare para ele, aconteca o que acontecer" )choice: mason-recruit
		choice( "Dirija um pouco mais rapido" )choice
;



} }



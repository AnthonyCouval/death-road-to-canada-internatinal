(* uses base.df
uses charfilt.df
uses charstats.df
uses road.df
uses charstatmods.df *)

// Mason, Octodad, Boxer, Mad Scientist, Sumo, Valkyrie, Rambeux

road{

0 value madsci-countdown
0 value mason-countdown
0 value mason-curse

}

cyoa{ road{

cyoa-bridge: ramb-recruit
	ricon recruitee .strengthREV recruitee .fitnessREV recruitee .shootingREV
	team-count 3 > if
		($  rname .. " 'notica que el equipo esta lleno ya.	Tendras que sacar a alguien de la lista de equipos. Tu tendras que hacerlo, ya que ya has renunciado a la comida." $) cyoa-text! -10 trunk-food+ recruit-replace?
	then;
	($ rname  .. " se mete y su minigun en el coche. Se niega rotundamente a poner " .. "BERTHA" pbold .. " en el maletero, y dice que nadie podra arrancarla de el." $) cyoa-text! goodfx
		-10 trunk-food+	recruited
;

cyoa: ramb-test
	"RAMBEUX: PRIMER CULO" cyoa-title!
	char-gen to recruitee
	"Rambeux" recruitee .name!
	ricon
	4 recruitee .morale! recruitee .rambify
	($ Thegroup .. " escucha salvas masivas de disparos mientras se acerca a una ciudad.	En el centro de la ciudad esta un hombre con una minigun. Alrededor de el hay multitudes de re muertos.	Dice que es un mercenario a la carta, pagado por adelantado." $) cyoa-text! basic-tone
	trunk-food 9 > if
		choice( "Reclutalo por 10 comidas" )choice: ramb-recruit
	then
		choice( "'No puedo prescindir de la comida" )choice
;

cyoa-choice: valk-recruit
	ricon
	team-count 3 > if
		($  rname .. "  se da cuenta de que su grupo esta lleno.		" .. "'Bueno, alguien tendra que irse." pbold .. 
		"  Ella lanza su martillo y golpea " .. cname .. "  justo en el craneo.		" .. cname .. "  ha dejado el equipo!" $) cyoa-text! cchar .kill
	else
		($ rname  .. " ' levanta dramaticamente su martillo. Un rayo lo golpea! El resto del equipo esta casi sordo y no puede ver la mayoria de los colores durante el resto del dia." $) cyoa-text! goodfx
	then
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: valk-test
	"Puente del arco iris a Valhalla" cyoa-title!
	char-gen to recruitee
	someone choosechar
	"Valquiria" recruitee .name!
	ricon
	4 recruitee .morale! recruitee .valkify
	($ "Las nubes se abren y aparece un arco iris. Una valquiria monta un unicornio por el arco iris.	" .. "'Has estado matando toneladas de cosas. He sido enviado aqui por Thor y una mierda para ayudarte en tu busqueda. Esto realmente no es gran cosa asi que no lo cuestiones." pbold $) cyoa-text! basic-tone
		choice( "Acepta su oferta" )choice: valk-recruit
		choice( "Rechazar su oferta" )choice
;

cyoa-bridge: sumo-recruit
	ricon recruitee .strengthREV recruitee .fitnessREV
	team-count 3 > if 
		($  rname .. " ' aprecia la oferta al principio, pero luego se hace realmente evidente que no hay forma de que 5 personas puedan caber en el coche. Mucho menos 4 personas y un luchador de sumo. Reemplazar a alguien:" $) cyoa-text! recruit-replace?
	then;
	($ rname  .. "  entra en el coche. La suspension baja mucho, mucho en un lado, pero el coche aun logra conducir por la carretera." $) cyoa-text! goodfx
		recruited
;

cyoa: sumo-test
	"LUCHA DE SUMO" cyoa-title!
	char-gen to recruitee
	ricon
	4 recruitee .morale! recruitee .sumoify
	($ Thegroup .. " " .. "En espanol Escuche que el sumo es bastante grande en Canada! Mas grande que el hockey!" pbold $) cyoa-text! basic-tone
		choice( "Reclutalo" )choice: sumo-recruit
		choice( "Dejalo en paz" )choice
;

cyoa-choice: madsci-give
	ricon
		(*  Here, take one of my old experiments! It'll work a couple times." negrita " hands you a TELEPORTER MK 1! *)
	($ "Genial, esto realmente hara avanzar la ciencia!	Aqui, toma uno de mis viejos experimentos! 	" pbold .. rname .. "  te entrega un TELETRANSPORTADOR MK 1!	Ella se va caminando para continuar su viaje de descubrimiento." $) cyoa-text! goodfx
		-20 LOOT_SHOTGUN_SHELL trunk.loot+
		7 WEAPON_SMOKEBOMB trunk.weapon+
;

cyoa-bridge: madsci-recruit
	ricon 2 4 rnd to madsci-countdown recruitee .witsREV recruitee .mechanicREV recruitee .shootingREV
	($  "Despues de hablar con la cientifica, resulta que su laboratorio esta en camino.	" .. "'Gracias. Nombrare el proximo invento en tu honor." pbold $) cyoa-text! goodfx
		team-count 3 > if
			"'El grupo es demasiado grande para reclutarla! Reemplazar a alguien:" +crtext
			recruit-replace?
		then; recruited
;

cyoa: madsci-test
	"Donando a la Investigacion Cientifica" cyoa-title!
	char-gen to recruitee
	ricon
	"Doc" recruitee .name! 4 recruitee .morale! recruitee .madscify
	($ Thegroup .. " ' esta tomando un descanso para revisar su equipo cuando de repente hay un destello de luz brillante!	Una cientifica se materializa de la nada.	" .. "Caramba, ahora necesito regresar a mi laboratorio. Me vendria bien un aventon, o digamos, 20 cartuchos para mi Escopeta Cientifica." pbold $) cyoa-text! basic-tone
		choice( "Ofrecerle un aventon" )choice: madsci-recruit
		trunk-shotgun-shell 19 > if
		choice( "Darle 20 cartuchos de escopeta" )choice: madsci-give
		then
		choice( "'Lo siento, no puedo ayudar" )choice
;

// boxer-recruit sometimes gives a stack error that I haven't been able to track down yet
cyoa-bridge: boxer-recruit
	ricon "Contendiente" recruitee .name! recruitee .strengthREV recruitee .fitnessREV recruitee .attitudeREV
	team-count 3 > if
		($  rname .. "  se pone bastante agitada porque todos se le amontonan para pedirle que se una. Ella suelta un gran uppercut directo a la barbilla de " .. cname .. "''s barbilla.		" .. "'Si, ese es un verdadero golpe de gracia!" pbold .. 
		"  El equipo deja espacio para el boxeador abandonando:" $) cyoa-text!
		sting-- badfx recruit-replace?
	then;
	($ rname  .. "  golpea sus guantes juntos.	" .. "Hora de entrenar en la carretera!" pbold $) cyoa-text! goodfx
		recruited
;

cyoa: boxer-test
	"La gran pelea" cyoa-title!
	char-gen to recruitee
	someone choosechar
	ricon
	4 recruitee .morale! recruitee .boxerify
	($ Thegroup .. "  revisa un gimnasio de boxeo abandonado y encuentra a una mujer alli con equipo de boxeo completo. Ella esta llorando sobre un saco de boxeo con una velocidad vertiginosa.	Sus respuestas en la conversacion son todas sin sentido, dichos aleatorios sobre el boxeo." $) cyoa-text! basic-tone
		choice( "Reclutarla" )choice: boxer-recruit
		choice( "Dejala estar" )choice
;

cyoa-choice: octodad-recruit
	ricon
	team-count 3 > if
		($ "El nuevo recluta resulta ser bastante compacto y se mete en el coche!		" .. rname .. "  se une al equipo!		Mas tarde, mientras conducia por la autopista, de alguna manera salio volando por la ventana en un extrano accidente, junto con el arma y los suministros que trajo consigo.		" .. rname .. "  abandona el equipo!" $) cyoa-text!
	then;
	($ "  Se necesitan " .. rname .. "  unos 15 minutos para abrir la puerta del coche, entrar en el coche y ponerse el cinturon de seguridad.	Durante esto, la claymore y los suministros se dejan caer en un inodoro cercano y no se pueden recuperar." $) cyoa-text! badfx
	recruitee .temperREV recruitee .attitudeREV
	recruited
;

: octodadname 1 5 rnd case
	1 of "* blub*" endof
	2 of "* burbujeo*" endof
	3 of "*bluub*" endof
	4 of "Chico nuevo" endof
	5 of "Recluta" endof
endcase ;

cyoa: octodad-test
	"Persona normal" cyoa-title!
	char-gen to recruitee
	ricon
	octodadname recruitee .name!
	4 recruitee .morale! recruitee .octodadify
	($ Thegroup .. " ' encuentra a un superviviente bastante anodino en un acuario abandonado. Parece una persona amable. Al inspeccionarlo mas de cerca, lleva una claymore y un enorme saco de suministros!" $) cyoa-text! basic-tone
		choice( "Reclutalo" )choice: octodad-recruit
		choice( "Dejalo en paz" )choice
;

cyoa-choice: mason-recruit
	ricon 2 3 rnd to mason-countdown 1 to mason-curse
	team-count 3 > if
		($ "El equipo se detiene al lado de la carretera para encontrarse con el autoestopista. Al principio habia demasiada gente para que cupiera una persona nueva en el coche, pero luego " .. cname .. "  desaparece de la faz de la tierra. Que desconcertante!" $) cyoa-text!
		cchar .kill
	else
		($ rname  .. "  abre la puerta del coche y se sienta, sin decir nada. Parece que tienes un nuevo amigo!" $) cyoa-text! goodfx
	then
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;

cyoa: mason-test
	"Conocer nuevos amigos" cyoa-title!
	someone choosechar
	char-gen to recruitee
	ricon
	"???" recruitee .name!
	5 recruitee .morale! recruitee .masonify
	($ Thegroup .. "  ve a un autoestopista. Lleva una mascara de hockey y se queda quieto al lado de la carretera, como una estatua, mirando fijamente a la nada en particular. En una mano tiene una motosierra, en la otra un machete. A medida que el coche se acerca, el autoestopista gira la cabeza ligeramente para mirar directamente a " .. thegroup .. "." $) cyoa-text! basic-tone
		choice( "Detente por el, pase lo que pase" )choice: mason-recruit
		choice( "Conducir un poco mas rapido" )choice
;



} }



	trunk-food 7 > if
		choice( "'Give her 8 food' wird zu 'Gib ihr 8 Futter" )choice: catlady-recruit
	then
	trunk-food 8 < trunk-food 0 > and if
		choice( "'Give her ' wird zu 'Gib ihr " .. trunk-food .. " 'Lebensmittel" )choice: catlady-crumb
	then
		choice( "'Essen kann ich nicht abgeben" )choice
;




cyoa: jerk-test
	"Was fur ein Idiot" cyoa-title!
	char-gen to recruitee
	ricon
	21 screcruit 5 recruitee .morale! 
	0 recruitee .attitude! 0 recruitee .wits! 0 recruitee .loyalty! 0 recruitee .composure!
	($ Thegroup .. " ' findet ein Herrenhaus, das einen Haufen zufalligen Kram enthalt. Es gibt viele teure und mittlerweile nutzlose Fernseher, die verstreut herumliegen, einige noch in ihren Kartons. Uberall stehen Flaschen. Drauen ist ein Muscle Car in den stehenden Pool gekracht.	" .. "Hey, verschwinde aus meinem Haus!	" rbold .. "'Ein Mann erscheint und stellt sich als Burgermeister der Stadt vor. Er korrigiert sich und sagt, er sei der Gouverneur Kaiser." $) cyoa-text! basic-tone
		choice( "Rekrutieren Sie ihn" )choice: jerk-recruit
		choice( "Lasst ihn in Ruhe" )choice: jerk-leave
;

cyoa-bridge: roller-recruit
	ricon
	team-count 3 > if
		recruitee .strengthREV recruitee .fitnessREV recruitee .temperREV
		($  rname .. " ' schlagt vor, dass du sie ein Seil an die Stostange des Autos binden lasst, und sie kann sich einfach daran festhalten, wahrend du fahrst. Auf diese Weise ist der Platz im Auto kein Problem. Wirf jemanden raus, um Platz zu schaffen:" $) cyoa-text! recruit-replace?
	then;
	($ rname .. " ' stimmt zu, sich anzuschlieen, solange sie nach Herzenslust Dinge zerschlagen kann." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV recruitee .temperREV
		recruited
;

cyoa: roller-test
	"The Big Rollerderby" cyoa-title!
	char-gen to recruitee
	ricon
	3 recruitee .morale! recruitee .rollerify
	($ Thegroup .. " ' stolpert uber eine verlassene Rollschuhbahn. Drinnen fahrt eine Frau auf Rollschuhen herum, wahrend ein Zombie auf sie zustolpert. Der Zombie gewinnt keinen Boden.	Sie dreht sich ein wenig und spritzt den Zombie mit einem Schraubenschlussel voll, ohne zu stolpern, als sie mit dem Skaten fortfahrt." $) cyoa-text! basic-tone
		choice( "Rekrutiere sie" )choice: roller-recruit
		choice( "Lass sie in Ruhe" )choice
;

: clown-floorit 
($ cname .. "  marmeladen " .. chis .. "  fu auf das Gaspedal und " .. "DRUCKT DAS GASPEDAL DURCH! " rbold $)
;
cyoa-choice: clown-flee
	ricon
	clown-floorit cyoa-text!
	solo if
		($ cHe .. "  biegt " .. chis .. "  kopf nach rechts und der Clown sitzt direkt im Auto bei " .. chim .. ". 		Mit einem Wimpernschlag ist der Clown verschwunden. Vielleicht eine Halluzination?" $) +text sfx{ creepy }
	then;
	($ "'Aber es gibt kein Entkommen. Es ist schon im Auto. 	Vielleicht war es schon immer im Auto." $) +text badfx
	recruited
;

cyoa-choice: clown-recruit
	ricon
	($ "Warum hast du das getan? Warum?" $) cyoa-text! badfx
		recruited
;

cyoa: clown-test
	"Eine Art Albtraum?" cyoa-title!
	char-gen to recruitee
	"Clown" recruitee .name!
	"ist ein lustiger Clown!" recruitee .job!
	someone choosechar
	ricon 29 screcruit 
	6 recruitee .morale! 0 recruitee .attitude!
	-1 STAT_MORALE recruitee .bonus!
	($ "Das Auto fahrt die Autobahn entlang und nahert sich einer Gestalt im Regen.	" .. cname .. " ' verlangsamt um zu sehen wer es ist.	Es ist ein Clown. Er halt eine kleine Clown Hupe heraus und hupt. Der Ton ist so verzerrt." $) cyoa-text! basic-tone
	team-count 3 > if
	clown-floorit +cr +text +cr
	($ gHe .. "  ist zutiefst verstort und schwort dies jemals zu vergessen." $) +text
	then;	
		choice( "Lass den Clown ins Auto" )choice: clown-recruit
		choice( "GASGEBEN" )choice: clown-flee
;

: turkey-meal
	($ Thegroup .. " ' isst ein riesiges Thanksgiving Essen. Lecker! Es gibt sogar Reste!" $) cyoa-text! goodfx
	' .morale++ foreach-team-char
	8 trunk-food+
;

cyoa-choice: turkey-eat
	ricon
	turkey-meal
;

cyoa-choice: turkey-recruit
	ricon
	($ "Groer Fehler! Jetzt glaubt der Truthahn dass " .. cname .. "  seine Mutter ist! Er folgt " .. chim .. "  uberall hin." $) cyoa-text! badfx
		recruited
;

cyoa: turkey-test
	"GLUCKLICHES DANKSAGUNGSFEST" cyoa-title!
	char-gen to recruitee
	"Truthahn" recruitee .name!
	someone choosechar
	ricon 27 screcruit
	3 recruitee .morale!
	($ "'Es ist wieder soweit! Ein Truthahn taucht auf! Er ist ziemlich gro also konnte es tatsachlich ein Typ im Truthahnkostum sein. Das kann niemand mit Sicherheit sagen." $) cyoa-text! basic-tone
		choice( "Truthahn essen" )choice: turkey-eat
		choice( "Truthahn verschonen" )choice: turkey-recruit
;

cyoa-choice: ninja-flee
	ricon
	($ rname  .. " ' springt herunter und wirft eine Rauchbombe auf den Boden. Sie ist weg!" $) cyoa-text! badfx
;

cyoa-bridge: ninja-recruit
	ricon
	($ rname  .. " ' nimmt das Essen und wirft dann eine Rauchbombe auf den Boden. Sie ist weg! Nein, warte, sie ist jetzt im Auto." $) cyoa-text! goodfx
		team-count 3 > if
			"Schmeit jemanden aus dem Team um Platz zu schaffen:" +crtext -10 trunk-food+ recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV recruitee .temperREV
		-10 trunk-food+
		recruited 
		3 4 rnd to ninja-countdown
;

cyoa: ninja-test
	"Ninja Strike 3: Third Strike" cyoa-title!
	char-gen to recruitee
	"Ninja" recruitee .name!
	ricon
	5 recruitee .morale! recruitee .ninjaify
	($ Thegroup .. "  findet eine Spur von Zombies, die alle sauber in zwei Halften geschnitten sind. Wenn man der Spur folgt, kommt man zu jemandem, der in einem Ninja Kostum gekleidet ist und auf einem Mullcontainer mit einer dramatischen Armverschrankungspose steht. Ihr unpraktisch langes Stirnband weht im Wind." $) cyoa-text! basic-tone
	trunk-food 9 > if
		choice( "Besteche sie mit 10 Lebensmitteln damit sie beitritt" )choice: ninja-recruit
	then
		choice( "Nahere dich ihr" )choice: ninja-flee
		choice( "Lass sie in Ruhe" )choice
;

cyoa-choice: catlady-crumb
	ricon
	($ rname  .. "  scheint enttauscht von der Menge an Futter, die du ihr gegeben hast, aber nur fur den kurzesten Moment.	" .. "Danke fur das Katzenfutter! Bitte streichle die Katzchen! " pbold $) cyoa-text! goodfx
		eat-all ' .morale++ foreach-team-char
;

cyoa-choice: catlady-recruit
	ricon
	team-count 3 > if
		($  rname .. "  freut sich uber das provisorische Katzenfutter!		Sie zeigt der Gruppe ihre besondere Reserve von Katzen die in kleine Kleider gekleidet sind und die die weniger wahrscheinlich hart genug beien um Blut zu ziehen." $) cyoa-text!
		' .morale2+ foreach-team-char
	else
		($ "Genau wie die Katzen, die sie liebt, " .. rname .. "  sieht dich jetzt als eine Nahrungsquelle die sie dann direkt mit ihren Katzen teilen kann. Sie fangt an dir uberall hin zu folgen." $) cyoa-text! goodfx
		recruitee .witsREV recruitee .attitudeREV
		recruited
	then
	-8 trunk-food+
;

cyoa: catlady-test
	"Haus der Miaus" cyoa-title!
	char-gen to recruitee
	"Katzenlady" recruitee .name!
	ricon
	4 recruitee .morale! recruitee .catladyify
	($ Thegroup .. "  erkennt einen uberwaltigenden Gestank, der sich vom ublichen Todesgeruch unterscheidet.	Sie folgen ihm zu einem Haus voller Katzen. Niemand hat seit Ewigkeiten eine Katze gesehen!	Eine Frau ist unter den Katzen und fragt sofort, ob " .. thegroup .. "  etwas ubrig gebliebenes Katzenfutter hat." $) cyoa-text! basic-tone
	trunk-food 7 > if
		choice( "Gib ihr 8 Futter" )choice: catlady-recruit
	then
	trunk-food 8 < trunk-food 0 > and if
		choice( "Gib ihr " .. trunk-food .. "  essen" )choice: catlady-crumb
	then
		choice( "'Kann das Essen nicht entbehren" )choice
;




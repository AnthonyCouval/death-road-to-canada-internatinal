;

cyoa-choice: jerk-leave 
	ricon
	team-count 3 > if
		($  rname .. "  schnaubt.		" .. "Ja, du solltest besser rennen.		" pbold .. rname .. "  kichert." $) cyoa-text! badfx morale--all
	then;
	($ rname .. "'Stimme wird plotzlich panisch. " .. "WARTEN!" rbold .. "'	Du kannst mich nicht einfach hier lassen! Komm schon, nimm mich mit. Ich gebe dir ein paar Sachen, damit sich das lohnt. Haben wir einen Deal?" pbold $) cyoa-text!
		choice( "Ja" )choice: jerk-leave-yes
		choice( "Nein" )choice: jerk-leave2
;

cyoa-choice: jerk-recruit 
	ricon
	team-count 3 > if
		($  rname .. " makes an exaggerated PFFFFT sound.
		" .. "Du musst gewusst haben dass die Gruppe voll ist. Bist du so eine Art Idiot oder was?		" pbold ..
		rname .. "  wirft einen Augenroll, kostenlos." $) cyoa-text! badfx morale--all
	then;
	($ rname .. "  kichert. " .. "HEH HEH" rbold .. "	Ja ich wette du willst dass ich mich dir anschliee. Wie ware es wenn du mich im Voraus bezahlst?" pbold $) cyoa-text!
	trunk-food 19 > if
		choice( "Gib ihm 20 Essen" )choice: jerk-ransom
	then
	trunk-food 20 < trunk-food 0 > and if
		choice( "Gib ihm " .. trunk-food .. "  essen" )choice: jerk-ransom
	then
	choice( "Ablehnen und gehen" )choice: jerk-leave

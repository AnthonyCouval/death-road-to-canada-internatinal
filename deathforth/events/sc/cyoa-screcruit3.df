// Cat Lady, Ninja, Turkey, Evil Clown, Rollerderby, Jerk, Dog Man

road{

0 value ninja-countdown

}

cyoa{ road{

cyoa-choice: dogman-recruit
	ricon
	($ "La persona que cojea huele el aire un poco mientras mira a " .. thegroup .. "." $) text!
	team-count 3 > if
	"El equipo hace espacio para esta extrana figura reemplazando:" +crtext recruit-replace?
	then;
	"Le cuesta un poco forcejear con la puerta, pero finalmente entra en el coche." +crtext goodfx
		recruited
;

cyoa: dogman-test
	"Viajero cojeando" cyoa-title!
	char-gen to recruitee ricon
	4 recruitee .morale! recruitee .dogmanify
	($ Thegroup .. "  conduce por un tranquilo camino secundario y ve una figura extrana. Se tambalea sin coordinacion. Quizas este intoxicado o herido?" $) cyoa-text! basic-tone
		choice( "Ofrecerle un viaje" )choice: dogman-recruit
		choice( "Sigue conduciendo" )choice
;


// Jerk stuff below

: jerk-get recruitee .witsREV recruitee .attitudeREV recruitee .temperREV team-count 3 > if "Echar a alguien para hacer sitio:" +crtext recruit-replace? else recruited then ;

cyoa-choice: jerk-leave-yes
	ricon
	($ rname .. " ' pone una expresion que es una mezcla de alivio y una sonrisa burlona." .. "'Genial! No te arrepentiras! Aqui tienes la comida." pbold $) cyoa-text!
	2 trunk-food+ jerk-get goodfx
;

cyoa-choice: jerk-leave4
	ricon
	($ "'DE TODAS FORMAS NO TE NECESITABA!" rbold .. rname .. "  continua gritando mientras " .. thegroup .. "  hojas." $) cyoa-text!
;

cyoa-choice: jerk-leave3
	ricon
	($ "'Te lo suplico! Se que morire aqui sin ayuda! Soy inutil, ten piedad de mi y dejame unirme a tu grupo! Hare trabajo extra! No puedes dejarme aqui! POR FAVOR!" pbold $) cyoa-text!
		choice( "Vale! Lo que sea!" )choice: jerk-leave-yes
		choice( "Marcharse en silencio" )choice: jerk-leave4
;

cyoa-choice: jerk-leave2
	ricon
	($ "Oh, vamos! Por favor? Por favorcito?" pbold $) cyoa-text!
		choice( "Vale, bien" )choice: jerk-leave-yes
		choice( "No!" )choice: jerk-leave3
;

cyoa-choice: jerk-ransom
	ricon
	($ "JEJE" rbold .. " gracias, Obama." pbold $) cyoa-text!
	trunk-food 20 < if eat-all else -20 trunk-food+ then
	jerk-get
;

cyoa-choice: jerk-leave 
	ricon
	team-count 3 > if
		($  rname .. "  resopla.		" .. "Si, mejor corre.		" pbold .. rname .. "  se rie entre dientes." $) cyoa-text! badfx morale--all
	then;
	($ rname .. "''s voz se vuelve de repente presa del panico. " .. "ESPERA!" rbold .. "'	No puedes dejarme aqui! Vamos, llevame contigo. Te dare un monton de comida, hare que valga la pena tu tiempo. Tenemos un trato?" pbold $) cyoa-text!
		choice( "Si" )choice: jerk-leave-yes
		choice( "No" )choice: jerk-leave2
;

cyoa-choice: jerk-recruit 
	ricon
	team-count 3 > if
		($  rname .. " makes an exaggerated PFFFFT sound.
		" .. "Espanol" pbold ..
		rname .. " lanza una mirada de desaprobacion, gratis." $) cyoa-text! badfx morale--all
	then;
	($ rname .. " chortles. " .. "JEJE" rbold .. "si apuesto a que quieres que me una a ti. Que tal si me pagas por adelantado?" pbold $) cyoa-text!
	trunk-food 19 > if
		choice( "Dale 20 de comida" )choice: jerk-ransom
	then
	trunk-food 20 < trunk-food 0 > and if
		choice( "Dale " .. trunk-food .. "  comida" )choice: jerk-ransom
	then
	choice( "Negarse e irse" )choice: jerk-leave
;

cyoa: jerk-test
	"Que idiota" cyoa-title!
	char-gen to recruitee
	ricon
	21 screcruit 5 recruitee .morale! 
	0 recruitee .attitude! 0 recruitee .wits! 0 recruitee .loyalty! 0 recruitee .composure!
	($ Thegroup .. " 'encuentra una mansion que tiene un monton de basura al azar. Hay muchos televisores caros y ahora inutiles esparcidos, algunos todavia en sus cajas. Hay botellas por todas partes. Afuera, hay un muscle car estrellado contra la piscina estancada." .. "Oye, sal de mi casa!" rbold .. "'Aparece un hombre, presentandose como el alcalde de la ciudad. Se corrige y dice que es el Gobernador Emperador." $) cyoa-text! basic-tone
		choice( "Reclutalo" )choice: jerk-recruit
		choice( "Dejalo en paz" )choice: jerk-leave
;

cyoa-bridge: roller-recruit
	ricon
	team-count 3 > if
		recruitee .strengthREV recruitee .fitnessREV recruitee .temperREV
		($  rname .. " 'sugiere que le dejes atar una cuerda al parachoques del coche, y ella puede simplemente agarrarse a el mientras conduces. De esa manera, el espacio del coche no sera un problema.		Esa es una idea terrible. Echar a alguien para hacer espacio:" $) cyoa-text! recruit-replace?
	then;
	($ rname .. " 'acepta unirse, siempre y cuando pueda romper cosas a su antojo." $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .fitnessREV recruitee .temperREV
		recruited
;

cyoa: roller-test
	"El Gran Rollerderby" cyoa-title!
	char-gen to recruitee
	ricon
	3 recruitee .morale! recruitee .rollerify
	($ Thegroup .. " 'se topa con una pista de patinaje sobre ruedas abandonada. Dentro hay una mujer dando vueltas en patines mientras un zombi se acerca a ella. El zombi no esta ganando terreno.	Ella hace un pequeno giro y luego salpica al zombi con una llave inglesa, sin tropezar mientras reanuda su patinaje." $) cyoa-text! basic-tone
		choice( "Reclutarla" )choice: roller-recruit
		choice( "Dejala estar" )choice
;

: clown-floorit 
($ cname .. " atascos " .. chis .. " pie en el acelerador y " .. "A TODO GAS " rbold $)
;
cyoa-choice: clown-flee
	ricon
	clown-floorit cyoa-text!
	solo if
		($ cHe .. " vueltas " .. chis .. " dirigete a la derecha y el payaso esta justo alli en el coche con " .. chim .. "	With a blink, the clown is gone. Maybe a hallucination?" $) +text sfx{ creepy }
	then;
	($ "'Pero no hay escapatoria. Ya esta en el auto. Tal vez siempre estuvo en el auto." $) +text badfx
	recruited
;

cyoa-choice: clown-recruit
	ricon
	($ "Por que hiciste eso? Por que?" $) cyoa-text! badfx
		recruited
;

cyoa: clown-test
	"Una especie de pesadilla?" cyoa-title!
	char-gen to recruitee
	"Payaso" recruitee .name!
	"es un payaso gracioso!" recruitee .job!
	someone choosechar
	ricon 29 screcruit 
	6 recruitee .morale! 0 recruitee .attitude!
	-1 STAT_MORALE recruitee .bonus!
	($ "El auto va por la carretera y se acerca a una figura bajo la lluvia." .. cname .. " ' reduce la velocidad para ver quien es. Es un payaso. Saca una pequena bocina de payaso y toca. El sonido esta muy distorsionado." $) cyoa-text! basic-tone
	team-count 3 > if
	clown-floorit +cr +text +cr
	($ gHe .. "  esta profundamente perturbado y jura olvidar que esto sucedio." $) +text
	then;	
		choice( "Deja que el payaso entre al auto" )choice: clown-recruit
		choice( "PISA EL ACELERADOR" )choice: clown-flee
;

: turkey-meal
	($ Thegroup .. " ' come una gran comida de Accion de Gracias. Delicioso! Incluso hay algunas sobras!" $) cyoa-text! goodfx
	' .morale++ foreach-team-char
	8 trunk-food+
;

cyoa-choice: turkey-eat
	ricon
	turkey-meal
;

cyoa-choice: turkey-recruit
	ricon
	($ "Gran error! Ahora el pavo piensa que " .. cname .. "  es su madre! Comienza a seguir a " .. chim .. "  alrededor." $) cyoa-text! badfx
		recruited
;

cyoa: turkey-test
	"FELIZ DIA DE ACCION DE GRACIAS" cyoa-title!
	char-gen to recruitee
	"Turquia" recruitee .name!
	someone choosechar
	ricon 27 screcruit
	3 recruitee .morale!
	($ "Es esa epoca del ano! Aparece un pavo! Es bastante grande asi que podria ser un tipo en un traje de pavo. Nadie puede decirlo con certeza." $) cyoa-text! basic-tone
		choice( "Comer Pavo" )choice: turkey-eat
		choice( "Pavo de repuesto" )choice: turkey-recruit
;

cyoa-choice: ninja-flee
	ricon
	($ rname  .. " ' salta y lanza una bomba de humo al suelo. Se ha ido!" $) cyoa-text! badfx
;

cyoa-bridge: ninja-recruit
	ricon
	($ rname  .. " ' toma la comida y luego lanza una bomba de humo al suelo. Se ha ido! No, espera, ahora esta en el coche." $) cyoa-text! goodfx
		team-count 3 > if
			"Echa a alguien del equipo para hacer sitio:" +crtext -10 trunk-food+ recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV recruitee .temperREV
		-10 trunk-food+
		recruited 
		3 4 rnd to ninja-countdown
;

cyoa: ninja-test
	"Ninja Strike 3: Third Strike" cyoa-title!
	char-gen to recruitee
	"Ninja" recruitee .name!
	ricon
	5 recruitee .morale! recruitee .ninjaify
	($ Thegroup .. "  encuentra un rastro de zombis, todos cortados limpiamente por la mitad. Siguiendo el rastro se llega a alguien vestido con un disfraz de ninja, de pie sobre un contenedor de basura con una pose dramatica de brazos cruzados. Su cinta para la cabeza, de longitud poco practica, ondea al viento." $) cyoa-text! basic-tone
	trunk-food 9 > if
		choice( "Sobornala para que se una por 10 comidas" )choice: ninja-recruit
	then
		choice( "Acercate a ella" )choice: ninja-flee
		choice( "Dejala estar" )choice
;

cyoa-choice: catlady-crumb
	ricon
	($ rname  .. "  parece decepcionada por la cantidad de comida que le has dado, pero solo por un breve momento.	" .. "Gracias por la comida para gatos! Por favor acaricia a los gatitos " pbold $) cyoa-text! goodfx
		eat-all ' .morale++ foreach-team-char
;

cyoa-choice: catlady-recruit
	ricon
	team-count 3 > if
		($  rname .. "  esta encantada con la comida improvisada para gatos! Te muestra su reserva especial de gatos vestidos con ropita y los que tienen menos probabilidades de morder lo suficientemente fuerte como para sacar sangre." $) cyoa-text!
		' .morale2+ foreach-team-char
	else
		($ "Al igual que los gatos que ama, " .. rname .. "  ahora te ve como una fuente de comida que puede dar directamente a sus gatos. Empieza a seguirte." $) cyoa-text! goodfx
		recruitee .witsREV recruitee .attitudeREV
		recruited
	then
	-8 trunk-food+
;

cyoa: catlady-test
	"Casa de los Miau" cyoa-title!
	char-gen to recruitee
	"Senora de los gatos" recruitee .name!
	ricon
	4 recruitee .morale! recruitee .catladyify
	($ Thegroup .. "  detecta un hedor abrumador, diferente del olor habitual de la muerte. Lo siguen hasta una casa llena de gatos. Nadie ha visto un gato en anos! Una mujer esta entre los gatos y pregunta de inmediato si " .. thegroup .. "  tiene comida para gatos de sobra." $) cyoa-text! basic-tone
	trunk-food 7 > if
		choice( "Dale 8 comidas" )choice: catlady-recruit
	then
	trunk-food 8 < trunk-food 0 > and if
		choice( "Dale " .. trunk-food .. "  comida" )choice: catlady-crumb
	then
		choice( "'No puedo prescindir de la comida" )choice
;




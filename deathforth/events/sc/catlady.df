cyoa{ road{

cyoa: catlady-camp
	sc-camper choosechar cicon
	"Comida de gato e cara" cyoa-title!
	trunk-food 4 < if
		($ cname .. "  esta farta da situacao alimentar. Ela pega seu enorme enxame de gatos e a comida restante, entao deixa a equipe." $) cyoa-text! decruit-bad-silent-takeweapons eat-all
	else
	($ "Antes de acampar para o dia, , " .. cname .. "  pega as maos na comida e joga uma quantidade no chao. Um grande rebanho de gatos aparecem do nada e consumemna." $) cyoa-text!
		trunk-food 7 > if -8 trunk-food+ else eat-all then
	then
	badfx team-count 0 > if +cr fullcamp then
;


cyoa: catlady-despair
	bully choosechar cicon
	"Festa de Gatos" cyoa-title!
	($ cname .. "'Seu rosto brilha.	'" .. "Quem pode ficar triste quando tem gatinhos?" pbold .. "	Um rebanho de gatinhos adoraveis aparece!" $) cyoa-text!
	' .morale2+ foreach-team-char goodfx
	trunk-food 7 > if "Eles se aventjam no alimento e o consumem por completo." +crtext -8 trunk-food+ then;
	trunk-food 0 > if "Eles acabam com o resto do alimento." +crtext eat-all then;
;
	
} }



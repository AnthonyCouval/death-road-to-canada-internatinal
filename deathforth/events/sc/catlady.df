cyoa{ road{

cyoa: catlady-camp
	sc-camper choosechar cicon
	"Le aliment de chat est couteux." cyoa-title!
	trunk-food 4 < if
		($ cname .. " elle est lasse de la situation des repas. elle emmene son immense horde de chats et les aliments restants, puis quitte l'equipe." $) cyoa-text! decruit-bad-silent-takeweapons eat-all
	else
	($ "Avant de camper pour la journee, " .. cname .. " la femme s'emparte de la nourriture et jette une quantite sur le sol. une grande horde de chats s'elevait soudainement et la consommait." $) cyoa-text!
		trunk-food 7 > if -8 trunk-food+ else eat-all then
	then
	badfx team-count 0 > if +cr fullcamp then
;


cyoa: catlady-despair
	bully choosechar cicon
	"Fete des chats" cyoa-title!
	($ cname .. "son visage s'eclaire... ." .. "Quand on a des chaton" pbold .. "une horde de chatons adorables s'affiche !" $) cyoa-text!
	' .morale2+ foreach-team-char goodfx
	trunk-food 7 > if "Ils s'introduisent dans l'aliment et en mangent beaucoup." +crtext -8 trunk-food+ then;
	trunk-food 0 > if "Ils mangent le reste de la nourriture." +crtext eat-all then;
;
	
} }



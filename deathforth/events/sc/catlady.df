cyoa{ road{

cyoa: catlady-camp
	sc-camper choosechar cicon
	"Il cibo per gatti e costoso" cyoa-title!
	trunk-food 4 < if
		($ cname .. "  e stufa della situazione alimentare. Prende il suo enorme sciame di gatti e il cibo rimanente, poi lascia la squadra." $) cyoa-text! decruit-bad-silent-takeweapons eat-all
	else
	($ "Prima di accamparsi per la giornata, " .. cname .. "  mette le mani sul cibo e ne lancia un po a terra. Un grande sciame di gatti appare apparentemente dal nulla e lo consuma." $) cyoa-text!
		trunk-food 7 > if -8 trunk-food+ else eat-all then
	then
	badfx team-count 0 > if +cr fullcamp then
;


cyoa: catlady-despair
	bully choosechar cicon
	"Festa dei gatti" cyoa-title!
	($ cname .. "' espressione si illumina." .. "Chi puo rimanere triste quando ha dei gattini?" pbold .. "	Appare uno sciame di adorabili gatti!" $) cyoa-text!
	' .morale2+ foreach-team-char goodfx
	trunk-food 7 > if "Entrano nel cibo e ne mangiano un po." +crtext -8 trunk-food+ then;
	trunk-food 0 > if "Mangiano il cibo rimanente." +crtext eat-all then;
;
	
} }



cyoa{ road{

cyoa: catlady-camp
	sc-camper choosechar cicon
	"Katzenfutter ist teuer" cyoa-title!
	trunk-food 4 < if
		($ cname .. " ist mude von der Essensituation. Sie nimmt ihren ungeheuren Schwarm an Katzen und das verbleibende Essen mit, dann verlasst sie die Mannschaft." $) cyoa-text! decruit-bad-silent-takeweapons eat-all
	else
	($ "Vor dem Lager aufstehen will " .. cname .. " bekommt seine Hande an das Essen und wirft einige drauf. Ein groer Schwarm von Katzen erscheint aus keinem Grund und verzehrt es." $) cyoa-text!
		trunk-food 7 > if -8 trunk-food+ else eat-all then
	then
	badfx team-count 0 > if +cr fullcamp then
;


cyoa: catlady-despair
	bully choosechar cicon
	"Katzenparty" cyoa-title!
	($ cname .. "'seine Ausdrucke hellen auf.	" .. "Wer traurig bleiben kann wenn man Katzen hat?" pbold .. "eine Horde entzuckender Katzen taucht auf!" $) cyoa-text!
	' .morale2+ foreach-team-char goodfx
	trunk-food 7 > if "They get into the food and eat a lot." +crtext -8 trunk-food+ then;
	trunk-food 0 > if "Sie essen das restliche Essen." +crtext eat-all then;
;
	
} }



	"Bonbons dHalloween" cyoa-title!

	($ "Vous avez fait le bon choix! Si vous aviez choisi une autre option, jaurais " .. "detruit tous vos personnages, instantanement!" rbold .. " ' Voici votre recompense." $) cyoa-text! goodfx
	"Vous avez obtenu un seul bonbon dur. Il sent comme linterieur dun tres vieux sac a main." bbold +crtext
	1 trunk-food+
	
	choice( "Francais " .. " beaucoup Obama" bbold )choice
;


cyoa-choice: halloween-hand2

	($ cname .. " perd " .. chis .. " boring old hand and gets a " .. "Tronconneuse Main!" rainbold .. "  Ce sera peut etre lHalloween la plus festive de tous les temps !" $) cyoa-text!
	ctakeweapons WEAPON_CHAINHAND cchar .weapona! 1 cchar .weapon_nodropa!
	cchar .trait@ "Specialiste" $= if
		($ cname .. " se sent INCROYABLEMENT satisfait" rainbold $) +crtext
		2 cchar .carrying.slot_count! morale4+
	then goodfx


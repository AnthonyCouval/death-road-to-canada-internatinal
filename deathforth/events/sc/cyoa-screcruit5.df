// Nimbus Ordeal, Kaiju, Canada Day Beaver, July 4th

cyoa{ road{

cyoa-bridge: nimbus-recruit
	ricon
	($ rname .. " sube al coche. Su espada ostentosa raspa todo, destruyendo la tapiceria." $) cyoa-text! goodfx
	team-count 3 > if
		"Tu equipo esta lleno! Quien debe salir para darle lugar?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: nimbus-scget
	"Necesita grindear niveles" cyoa-title!
	char-gen to recruitee ricon	3 recruitee .morale! recruitee .nimbusify
	($ Thegroup .. " 've a un autostopista cerca de la carretera. Lleva una espada ridicula y enorme. Esta claro que es demasiado grande para swingear eficazmente. El hombre tambien esta en nivel 1, nivel 2 a lo sumo. Va a necesitar un gran aumento de poder si va a pelear contra " .. "Ultimate Ascended Bizarro Krankor" rainbold .. "  al final de este juego." $) cyoa-text! basic-tone
		choice( "Reclutalo" )choice: nimbus-recruit
		choice( "Dejalo en paz" )choice
;

cyoa-bridge: kaiju-recruit
	ricon
	($ Thegroup .. " conduce unas pocas distancias y casi atropella al monstruo. Resulto ser una persona en traje de monstruo, pisoteando una ciudad de carton." .. "'Lo siento, estoy atrapado en este traje!" pbold .. " Sube al coche." $) cyoa-text! goodfx
	team-count 3 > if
		"'No hay espacio en el equipo para este monstruo! Quien debe salir?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: kaiju-scget
	"Ciudad Monstruo" cyoa-title!
	char-gen to recruitee 3 recruitee .morale! recruitee .kaijuify
	($ "Un monstruo prehisto?rico gigante esta? destruyendo la ciudad! Esta? pisoteando todo, destruyendo edificios. Quie?n sabe cua?ntas latas de comida esta? aplastando? Tu? eres el u?nico que puede detenerlo!" $) cyoa-text! basic-tone
	"Tu pronostico zombie es:" pbold +crtext
	($ "TAMANO DE ENJAMBRE " pbold .. "ALGO GRANDE" fbold $) +crtext
	($ "AGRESION: " pbold .. "SUPER MOLESTO" fbold $) +crtext
	($ "HORA ACTUAL: " pbold .. "HORA MONSTRUO" fbold $) +crtext
		choice( "No, vete" )choice
		choice( "Salva la ciudad!" )choice: kaiju-recruit
		
;

cyoa: july4-scget
	"Feliz Dia de America" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .unclesamify
	($ rname .. " ' aparece! Es la personificacion viva de " .. "AMERICA" fbold .. ", que dejo de existir hace anos. Te sientes " .. "VAGAMENTE MAS PATRIOTICO" rbold .. ", pero no realmente. Es hora de escapar de este paramo zombi!" $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Pidele a " .. rname .. "  que se una" )choice: recruit-yes
		choice( "Huye hacia Canada" )choice
;

cyoa: beaver-scget
	"Feliz Dia de Canada" cyoa-title!
	char-gen to recruitee ricon 6 recruitee .morale! recruitee .beaverify
	255 WEAPON_HOCKEY trunk.weapon+
	($ "Alguien te ha llenado el coche de palos de hockey! Esto debe ser una especie de " .. "DIA DE CANADA" rbold .. " broma! Algo se mueve en el nido gigante de palos de hockey. Un gran roedor asoma la cabeza por la pila." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Pidele a " .. rname .. "  que se una" )choice: recruit-yes
		choice( "Ignorar roedor" )choice
;

cyoa: feb14-scget
	"'Dia de San Valentin: esta vez es personal" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .cupidify
	($ rname .. " 'esta aqui! Es la personificacion viviente de " .. "ROMANCE" fbold .. ". Como los que ves en esos pequenos caramelos de tiza con forma de corazon. Te sientes " .. "LIGERAMENTE MAS ROMANTICO" rbold .. ", pero en realidad no." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Pidele a " .. rname .. "  que se una" )choice: recruit-yes
		choice( "Demasiado empalagoso para mi" )choice
;

// HALLOWEEN Event


cyoa-choice: sans-test
	"WHOAAAAAAAAAAAAAAAAAAAAAAAAA!" cyoa-title!
	"Excelente eleccion! Aqui tienes!" cyoa-text! goodfx
	char-gen to recruitee recruitee .skelify
	"Personaje cameo" recruitee .name!
	recruited
;

: sans2-test
	sans-test ' .skelify foreach-team-char
;

cyoa-choice: halloween-cameos2
	"MEJORES CAMEOS" cyoa-title!

	($ "'No te preocupes! tenemos mas cameos alineados! Muchos mas! " .. "4 mas!" rainbold $) cyoa-text! goodfx
	
	choice( "Freddie, el de FNAF Parte 12 [?]" rbold )choice: sans-test
	choice( "Tu personaje cameo favorito de FNF" rbold )choice: sans-test
	choice( "El muy a menudo solicitado " .. "SHREK de FNFAFNF 8" rbold )choice: sans-test
	choice( "Elige a Sans despues de todo, y arrepientete de no haberlo hecho antes" )choice: sans2-test
;

cyoa-choice: halloween-cameos
	"TIEMPO DE CAMEOS" cyoa-title! picon

	($ "Crossover cameos from popular videogames???? " .. "WHOAAAAAAAAAAAAAAAAAAAAA!" rbold .. " 'Finalmente! Pero elige sabiamente, porque solo ofreceremos este un dia al ano! " .. "En HALLOWEEN" rainbold $) cyoa-text! goodfx
	
	"'NOTA DEL DESARROLLADOR: Actualizaremos esto cada ano para estar a la vanguardia de los cameos" bbold +crtext
	
	choice( "Sans y Helvetica de Undertale" rbold )choice: sans2-test
	choice( "Amogus de Among Us" rbold )choice: sans-test
	choice( "Fall Guys supongo?" rbold )choice: sans-test
	choice( "No es suficiente, yo " .. "NECESITAR" rbold .. " ver mas opciones" )choice: halloween-cameos2
;

cyoa-bridge: event-dracula
	"Como en mis novelas de Crepusculo" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .dracufy
	($ "'Oye, es Dracula! Hola, Dracula." $) text! " Im going to vomit!" rbold +text
	($ pname .. " nunca pense " .. phe .. "conoceria a una celebridad! No le importa hacer algunas de sus frases celebres." $) +crtext
	recruitee .fitnessREV goodfx
	($ "Deberia " .. pname .. " reclutar " .. rname .. "? Parece bastante solitario por estar metido en una cripta por tanto tiempo." $) +crtext
	recruit-yesno
;

cyoa-choice: halloween-monsters
	"HORA MONSTRUO" cyoa-title!

	($ "Is delicious! " .. "TRATAR" bbold .. " opcion " .. "EXTREMADAMENTE venenoso." rbold .. " elige tu monstruo favorito, como recompensa:" $) cyoa-text! goodfx
	
	choice( "Un gracioso " .. "payaso" rbold )choice: clown-test
	choice( "MASON" rbold .. ", el monstruo amigable" )choice: mason-test
	choice( "G*RF" rbold .. ", la Perdicion de los Lunes" )choice: grf-test
	choice( "DRACULA" rbold .. ", un cameo de celebridad" )choice: event-dracula
;

cyoa-choice: halloween-treat
	"Dulces de Halloween" cyoa-title!

	($ "Tomaste la decision correcta! Si hubieras elegido cualquier otra opcion, yo habria " .. "destruido todos tus personajes, al instante!" rbold .. " ' Aqui" $) cyoa-text! goodfx
	"Tienes una sola pieza de caramelo duro. Huele como el interior de un bolso muy viejo." bbold +crtext
	1 trunk-food+
	
	choice( "GRACIAS " .. "mucho Obama" bbold )choice
;


cyoa-choice: halloween-hand2

	($ cname .. "  pierde " .. chis .. " vieja y aburrida mano y obtiene una " .. "Mano de motosierra!" rainbold .. "  Este podria ser el Halloween mas festivo de todos!" $) cyoa-text!
	ctakeweapons WEAPON_CHAINHAND cchar .weapona! 1 cchar .weapon_nodropa!
	cchar .trait@ "Especialista" $= if
		($ cname .. " se siente INCREIBLEMENTE engreido!" rainbold $) +crtext
		2 cchar .carrying.slot_count! morale4+
	then goodfx

	choice( " Feliz Halloween!" )choice

;

cyoa-bridge: halloween-hand
	" Mano de motosierra" cyoa-title! picon
	solohuman if
		choosehuman cchar halloween-hand2
	then;
	" Nada dice Halloween como reemplazar tu mano con una motosierra! A quien quieres darle una mano de motosierra?" text!
	' halloween-hand2 cyoa-human-choice
;

cyoa: halloween-event
	" Espectacular de Halloween" cyoa-title!
	($ "' Es " .. " HALLOWEEN!" fbold .. "  Preparate para un " .. " ESPELUZNANTE" fbold .. "  experiencia! Puedes elegir de la siguiente lista de " .. " TRUCOS" rbold .. ", o ir por la opcion segura, deliciosa pero aburrida de un " .. "Espanol" bbold $) cyoa-text! basic-tone

		choice( "TRUCO: " rbold .. "Reclutar un MONSTRUO" )choice: halloween-monsters
		choice( "TRUCO: " rbold .. "Cameo de juego popular! Crossover!" )choice: halloween-cameos
		choice( "TRUCO: " rbold .. "Consigue una MANO DE MOTOSIERRA" )choice: halloween-hand
		choice( "Dame eso " .. "TRATAR" bbold )choice: halloween-treat

;

} }



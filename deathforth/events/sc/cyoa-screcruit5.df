// Nimbus Ordeal, Kaiju, Canada Day Beaver, July 4th

cyoa{ road{

cyoa-bridge: nimbus-recruit
	ricon
	($ rname .. "  sale in auto. La sua ostentata spada gigante sbatte contro tutto, distruggendo la tappezzeria." $) cyoa-text! goodfx
	team-count 3 > if
		"La tua squadra e al completo! Chi dovrebbe andarsene per fare spazio?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: nimbus-scget
	"Necessario livellamento" cyoa-title!
	char-gen to recruitee ricon	3 recruitee .morale! recruitee .nimbusify
	($ Thegroup .. " ' vede un autostoppista vicino alla strada. Brandisce una spada goffa e gigantesca. E ovvio che e troppo grande per essere usata efficacemente. L'uomo e anche di Livello 1, al massimo Livello 2. Avra bisogno di un serio potenziamento se vuole combattere " .. "Bizarro Krankor asceso definitivo" rainbold .. "  alla fine di questo gioco." $) cyoa-text! basic-tone
		choice( "Reclutalo" )choice: nimbus-recruit
		choice( "Lascialo stare" )choice
;

cyoa-bridge: kaiju-recruit
	ricon
	($ Thegroup .. "  guida per qualche metro e quasi investe il mostro. Si e scoperto essere qualcuno in un costume da mostro, che calpestava una piccola citta di cartone." .. "'Mi dispiace, sono bloccato in questa tuta!" pbold .. "  Sale in auto." $) cyoa-text! goodfx
	team-count 3 > if
		"'Non c'e posto nella squadra per questo mostro! Chi dovrebbe andarsene?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: kaiju-scget
	"Citta dei mostri giganti" cyoa-title!
	char-gen to recruitee 3 recruitee .morale! recruitee .kaijuify
	($ "'Un gigantesco mostro preistorico sta distruggendo la citta! Sta calpestando tutto, distruggendo edifici. Chissa quante scatolette di cibo sta schiacciando? Solo tu puoi fermarlo!" $) cyoa-text! basic-tone
	"Le tue previsioni sugli zombi sono:" pbold +crtext
	($ "DIMENSIONI SCIAMO: " pbold .. "PIUTTOSTO GRANDI" fbold $) +crtext
	($ "AGGRESSIVITA: " pbold .. "SUPER INFASIDITO" fbold $) +crtext
	($ "ORA ATTUALE: " pbold .. "ORA DEL MOSTRO" fbold $) +crtext
		choice( "Non ce verso, scappa via" )choice
		choice( "Salva la citta!" )choice: kaiju-recruit
		
;

cyoa: july4-scget
	"Buon giorno dellAmerica" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .unclesamify
	($ rname .. " ' appare! E la personificazione vivente di " .. "AMERICA" fbold .. ", che ha cessato di esistere anni fa.	Ti senti " .. "VAGAMENTE PIU PATRIOTTICO" rbold .. ", ma non molto.	E ora di scappare da questa terra desolata di zombie!" $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Chiedi a " .. rname .. " di unirsi" )choice: recruit-yes
		choice( "Fuggire verso il Canada" )choice
;

cyoa: beaver-scget
	"Buon Canada Day" cyoa-title!
	char-gen to recruitee ricon 6 recruitee .morale! recruitee .beaverify
	255 WEAPON_HOCKEY trunk.weapon+
	($ "Qualcuno ti ha riempito la macchina di mazze da hockey! Questo deve essere qualche tipo di " .. "FESTA DEL CANADA" rbold .. " scherzo!	Qualcosa si muove nel nido gigante di mazze da hockey. Un grosso roditore fa capolino dalla pila." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Chiedi a " .. rname .. " di unirsi" )choice: recruit-yes
		choice( "Ignora il roditore" )choice
;

cyoa: feb14-scget
	"'San Valentino: questa volta e personale" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .cupidify
	($ rname .. " ' e qui! E la personificazione vivente di " .. "ROMANZO" fbold .. ". Proprio come quelli che vedi su quelle caramelle di gesso a forma di cuore.	Ti senti " .. "LEGGERMENTE PIU ROMANTICO" rbold .. ", ma non proprio." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Chiedi a " .. rname .. " di unirsi" )choice: recruit-yes
		choice( "Troppo sdolcinato per me" )choice
;

// HALLOWEEN Event


cyoa-choice: sans-test
	"WHOAAAAAAAAAAAAAAAAAAAAAAAAA!" cyoa-title!
	"Scelta eccellente! Ecco a te!" cyoa-text! goodfx
	char-gen to recruitee recruitee .skelify
	"Personaggio cameo" recruitee .name!
	recruited
;

: sans2-test
	sans-test ' .skelify foreach-team-char
;

cyoa-choice: halloween-cameos2
	"CAMEI ANCORA MIGLIORI" cyoa-title!

	($ "'Non ti preoccupare! Abbiamo altri cameo in programma! Molti altri! " .. "altri 4!" rainbold $) cyoa-text! goodfx
	
	choice( "Freddie, quello di FNAF Parte 12 [?]" rbold )choice: sans-test
	choice( "Il tuo personaggio cameo preferito di FNF" rbold )choice: sans-test
	choice( "Il richiestissimo " .. "SHREK da FNFAFNF 8" rbold )choice: sans-test
	choice( "Scegli Sans dopo tutto e pentiti di non averlo fatto prima" )choice: sans2-test
;

cyoa-choice: halloween-cameos
	"TEMPO DEI CAMEI" cyoa-title! picon

	($ "Crossover cameos from popular videogames???? " .. "WHOAAAAAAAAAAAAAAAAAAAAA!" rbold .. " ' 	Finalmente! Ma scegli con saggezza, perche lo offriremo solo un giorno all'anno! " .. "A HALLOWEEN" rainbold $) cyoa-text! goodfx
	
	"'NOTA DELLO SVILUPPATORE: aggiorneremo questo ogni anno quindi siamo all'avanguardia con i cameo" bbold +crtext
	
	choice( "Sans e Helvetica da Undertale" rbold )choice: sans2-test
	choice( "Amogus da Among Us" rbold )choice: sans-test
	choice( "Fall Guys immagino?" rbold )choice: sans-test
	choice( "Non abbastanza bene, " .. "HO BISOGNO" rbold .. "  di vedere piu opzioni" )choice: halloween-cameos2
;

cyoa-bridge: event-dracula
	"Proprio come nei miei romanzi di Twilight" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .dracufy
	($ "Ciao, e Dracula! Ciao, Dracula." $) text! " BLUHD! BLAUGH!" rbold +text
	($ pname .. " non avrei mai pensato " .. phe .. "'d meet a celebrity! He doesn't mind doing some of his catchphrases." $) +crtext
	recruitee .fitnessREV goodfx
	($ "Dovrebbe " .. pname .. " reclutare " .. rname .. "sembra piuttosto solo per essere stato rinchiuso in una cripta per cosi tanto tempo." $) +crtext
	recruit-yesno
;

cyoa-choice: halloween-monsters
	"ORA DEL MOSTRO" cyoa-title!

	($ "Hai fatto la scelta giusta! La caramella dellopzione " .. "TRATTAMENTO" bbold .. "  era " .. "ESTREMAmente velenosa." rbold .. "  scegli il tuo mostro preferito, come ricompensa:" $) cyoa-text! goodfx
	
	choice( "Un buffo " .. "clown" rbold )choice: clown-test
	choice( "MASON" rbold .. ", il mostro amichevole" )choice: mason-test
	choice( "G*RF" rbold .. ", il Flagello del Lunedi" )choice: grf-test
	choice( "DRACULA" rbold .. ", un cameo di una celebrita" )choice: event-dracula
;

cyoa-choice: halloween-treat
	"Dolcetti di Halloween" cyoa-title!

	($ "Hai fatto la scelta giusta! Se avessi scelto qualsiasi altra opzione, avrei " .. "distrutto tutti i tuoi personaggi, allistante!" rbold .. " ' Ecco la tua ricompensa." $) cyoa-text! goodfx
	"Hai ottenuto un singolo pezzo di caramella dura.	Puzza come linterno di una borsa davvero vecchia." bbold +crtext
	1 trunk-food+
	
	choice( "GRAZIE " .. "un sacco di Obama" bbold )choice
;


cyoa-choice: halloween-hand2

	($ cname .. "  perde " .. chis .. " mano noiosa e vecchia e ottiene un " .. "Mano Motosega!" rainbold .. "  Questo potrebbe essere il Halloween piu festoso di sempre!" $) cyoa-text!
	ctakeweapons WEAPON_CHAINHAND cchar .weapona! 1 cchar .weapon_nodropa!
	cchar .trait@ "Specialista" $= if
		($ cname .. "  si sente INCREDIBILMENTE presuntuoso!" rainbold $) +crtext
		2 cchar .carrying.slot_count! morale4+
	then goodfx

	choice( "Buon Halloween!" )choice

;

cyoa-bridge: halloween-hand
	"Mano motosega" cyoa-title! picon
	solohuman if
		choosehuman cchar halloween-hand2
	then;
	"Niente dice Halloween come sostituire la tua mano con una motosega!	A chi vuoi dare una mano motosega?" text!
	' halloween-hand2 cyoa-human-choice
;

cyoa: halloween-event
	"Italiano" cyoa-title!
	($ "'It's " .. "HALLOWEEN!" fbold .. " Preparati per una " .. "SPIAVOLOSO" fbold .. " esperienza! Puoi scegliere dalla seguente lista di " .. "TRICKS" rbold .. ", o scegliere lopzione sicura, deliziosa ma noiosa di un " .. "DOLCE." bbold $) cyoa-text! basic-tone

		choice( "TRICK: " rbold .. "Reclutare UN MONSTRO" )choice: halloween-monsters
		choice( "TRICK: " rbold .. "Gioco popolare crossover di comparse!" )choice: halloween-cameos
		choice( "TRICK: " rbold .. "Ottenere una MANO A SEGA" )choice: halloween-hand
		choice( "Dammi quello " .. "TRATTAMENTO" bbold )choice: halloween-treat

;

} }



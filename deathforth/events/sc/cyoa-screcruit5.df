// Nimbus Ordeal, Kaiju, Canada Day Beaver, July 4th

cyoa{ road{

cyoa-bridge: nimbus-recruit
	ricon
	($ rname .. " monte dans la voiture. son enorme epee ostentatoire glisse contre tout et detruit l'ameublement." $) cyoa-text! goodfx
	team-count 3 > if
		"Vous devez laisser quelqu'un sortir pour que nous avons assez d'espace." +crtext recruit-replace?
	then;
		recruited
;

cyoa: nimbus-scget
	"Niveau de grinding necessaire" cyoa-title!
	char-gen to recruitee ricon	3 recruitee .morale! recruitee .nimbusify
	($ Thegroup .. " un voyageur d'route detecte pres de la route... il brandisse une epee grotesque et enormous. il est evident que celle-ci est trop grande pour l'echauffer efficacement... 	cet homme ne depasse pas le niveau 1, au maximum 2. il aura besoin d'une importante augmentation de niveau pour affronter " .. "L'ultime ascendu bizarro-krankor" rainbold .. " a la fin de ce jeu." $) cyoa-text! basic-tone
		choice( "Engager-le" )choice: nimbus-recruit
		choice( "Laissez-le etre" )choice
;

cyoa-bridge: kaiju-recruit
	ricon
	($ Thegroup .. " il conduit quelques pieds et se prepare a ecraser le monstre. mais ce s'est avere etre quelqu'un dans un costume de monstre, qui marchait sur une ville en carton." .. "Je me trouve bloque dans cette tenue !" pbold .. " Elle monte dans la voiture." $) cyoa-text! goodfx
	team-count 3 > if
		"Ce monstre ne peut pas entrer dans l'equipe ! qui doive quitter ?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: kaiju-scget
	"Docteur drobnus deluxe" cyoa-title!
	char-gen to recruitee 3 recruitee .morale! recruitee .kaijuify
	($ "Vous etes le seul a pouvoir arreter ce monstre prehistorique geant qui detruit la ville ! il ecrase tout autour de lui, effacant les batiments. personne ne sait combien de boites de conserve il ecrasera !" $) cyoa-text! basic-tone
	"Prevision de meteo pour les zombies :" pbold +crtext
	($ "TAILLE DE LA SWARM : " pbold .. "ASSEZ GROS" fbold $) +crtext
	($ "AGGRESSION : AGRESSIVITE. " pbold .. "TRES EN COLERE" fbold $) +crtext
	($ "HEURE ACTUELLE : " pbold .. "TEMPS MONSTRE" fbold $) +crtext
		choice( "Allons-en, degagez" )choice
		choice( "Enregistrez la ville !" )choice: kaiju-recruit
		
;

cyoa: july4-scget
	"Joyeux america day" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .unclesamify
	($ rname .. " il apparait ! c'est la personification vivante de " .. "AMERIQUE" fbold .. "vous sentez " .. "UN PEU PLUS PATRIOTE" rbold .. "fuitez ce monde de zombies !" $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Henk " .. rname .. " se joindre" )choice: recruit-yes
		choice( "Fuyez vers le canada" )choice
;

cyoa: beaver-scget
	"Joyeux fete du canada !" cyoa-title!
	char-gen to recruitee ricon 6 recruitee .morale! recruitee .beaverify
	255 WEAPON_HOCKEY trunk.weapon+
	($ "Ce quelqu'un a rempli votre voiture de batons de hockey ! ceci doit s'agir d'une sorte de blague ou d'un incident bizarre. vous devrez donc les enlever soigneusement afin de ne pas les blesser ni endommager la carrosserie. " .. "MECANICIEN" rbold .. " une grosse bete sort la tete d'une montagne de batons de hockey. c'est un rongeur important qui s'y affiche." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Henk " .. rname .. " se joindre" )choice: recruit-yes
		choice( "Recuperation de l'odeur gatee" )choice
;

cyoa: feb14-scget
	"Le jour de saint-valentin : cet annee, c'est personnel" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .cupidify
	($ rname .. " il est ici ! c'est la personnification vivante de \<nom\>. " .. "UN BATON" fbold .. "vous sentez " .. "UN PEU PLUS ROMANTIQUE :" rbold .. "cependant, cela n'est pas vraiment ainsi." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Henk " .. rname .. " se joindre" )choice: recruit-yes
		choice( "Trop boueux pour moi." )choice
;

// HALLOWEEN Event


cyoa-choice: sans-test
	"WHOAAAAAAAAAAAAAAAAAAAAAAAAA!" cyoa-title!
	"Belle choix ! voila ce que vous obtenez :" cyoa-text! goodfx
	char-gen to recruitee recruitee .skelify
	"Personnage secondaire" recruitee .name!
	recruited
;

: sans2-test
	sans-test ' .skelify foreach-team-char
;

cyoa-choice: halloween-cameos2
	"MEILLEURES CAMEOS ENCORE" cyoa-title!

	($ "N'ayons pas de souci ! nous avons beaucoup plus de cameos prevus ! beaucoup plus ! " .. "quatre de plus !" rainbold $) cyoa-text! goodfx
	
	choice( "Freddie de la partie 12 de fnaf [?]" rbold )choice: sans-test
	choice( "Mon personnage prefere de cameo dans fnf : sonic.o_o" rbold )choice: sans-test
	choice( "Tres frequemment demande " .. "'shrek, selon fnfafnf, est shrek.'" rbold )choice: sans-test
	choice( "Essaie de mettre son ceinture de securite pendant plus d'une vingtaine de minutes." )choice: sans2-test
;

cyoa-choice: halloween-cameos
	"TEMPS CAMEOS" cyoa-title! picon

	($ "Crossover cameos from popular videogames???? " .. "WHOAAAAAAAAAAAAAAAAAAAAA!" rbold .. " un heureux evenement finalement ! mais choisissez avec soin car cela ne se fera qu'une fois par an. " .. "Le soir de halloween" rainbold $) cyoa-text! goodfx
	
	"Note de developpeur : nous mettrons a jour cela chaque annee pour rester a la pointe des cameos" bbold +crtext
	
	choice( "Sans en helvetica de undertale :" rbold )choice: sans2-test
	choice( "Among us par amogus : un jeu social ou les joueurs doivent collaborer pour identifier les imposteurs qui se melent parmi eux et sab" rbold )choice: sans-test
	choice( "Les fall guys, je suppose ?" rbold )choice: sans-test
	choice( "Pas assez bon, je ne peux pas faire cela. " .. "BESOIN" rbold .. " voir plus d'options" )choice: halloween-cameos2
;

cyoa-bridge: event-dracula
	"Comme dans mes romans de tetralogie de la saga du crepuscule" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .dracufy
	($ "Salut, dracule ! bonjour, dracule." $) text! " APPROVISIONNEMENTS DE 'S." rbold +text
	($ pname .. " jamais pense " .. phe .. "rencontrer un celebre ! il n'a pas de probleme pour repeter quelques-uns de ses slogans." $) +crtext
	recruitee .fitnessREV goodfx
	($ "Hache-fenetre a feu " .. pname .. " recruter " .. rname .. "il semble tristement seul depuis si longtemps en etant enferme dans une crypte." $) +crtext
	recruit-yesno
;

cyoa-choice: halloween-monsters
	"TEMPS MONSTRE" cyoa-title!

	($ "Vous avez raison ! la bonbonne que vous avez choisie. " .. "ALIMENTER" bbold .. " option etait " .. "Tres tres empoisonne." rbold .. " votre monstre prefere : c'est un dragon rouge. en tant que recompense :" $) cyoa-text! goodfx
	
	choice( "Jour dinternal " .. "amelioration :" rbold )choice: clown-test
	choice( "MACON" rbold .. "le monstre amical" )choice: mason-test
	choice( "G*RF SIGN" rbold .. "lundi, bete noire des gens de semaine" )choice: grf-test
	choice( "L'EPOUVANTEUR" rbold .. "apparition d'une celebrite" )choice: event-dracula
;

cyoa-choice: halloween-treat
	"Bonbon d'halloween." cyoa-title!

	($ "Vous avez choisi de maniere correcte ! si vous aviez choisit une autre option, je vous aurais donne une reponse differente. " .. "tu as detruit tous tes personnages, instantanement !" rbold .. " Voici votre recompense." $) cyoa-text! goodfx
	"Vous avez une grosse bonbon dure ... elle sent comme l'interieur d'un sac a main reellement vieilli." bbold +crtext
	1 trunk-food+
	
	choice( "HE HE HE " .. "beaucoup d'obama" bbold )choice
;


cyoa-choice: halloween-hand2

	($ cname .. " perd " .. chis .. " une main ordinaire et obtient un " .. "Main de scie a chaine !" rainbold .. " C'est peut-etre la fete d'halloween la plus joyeuse jamais !" $) cyoa-text!
	ctakeweapons WEAPON_CHAINHAND cchar .weapona! 1 cchar .weapon_nodropa!
	cchar .trait@ "Specialiste" $= if
		($ cname .. " ressent un air de superbe arrogante !" rainbold $) +crtext
		2 cchar .carrying.slot_count! morale4+
	then goodfx

	choice( "Bonjour et joyeux halloween!" )choice

;

cyoa-bridge: halloween-hand
	"Main de scie a chaine" cyoa-title! picon
	solohuman if
		choosehuman cchar halloween-hand2
	then;
	"Donnez-lui une main de scie-prairie pour l'halloween." text!
	' halloween-hand2 cyoa-human-choice
;

cyoa: halloween-event
	"Halloween spectaculaire" cyoa-title!
	($ "C'est " .. "DONNEZ-LUI." fbold .. " Pret pour une " .. "NOURRITURE." fbold .. " vous pouvez en choisir une experience suivante de la liste ci-dessus. " .. "- ASTUCES" rbold .. "choisissez entre la risque ou le choix sur et delicieux mais ennuyeux. " .. "TRAITEZ." bbold $) cyoa-text! basic-tone

		choice( "**ASTUCHE:** " rbold .. "Engager un monstre" )choice: halloween-monsters
		choice( "**ASTUCHE:** " rbold .. "Apparition spectaculaire dans un jeu populaire de croisement !" )choice: halloween-cameos
		choice( "**ASTUCHE:** " rbold .. "Main de scie a chaine" )choice: halloween-hand
		choice( "Raccourcir et dechirer ! " .. "ALIMENTER" bbold )choice: halloween-treat

;

} }



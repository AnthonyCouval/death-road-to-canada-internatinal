// Nimbus Ordeal, Kaiju, Canada Day Beaver, July 4th

cyoa{ road{

cyoa-bridge: nimbus-recruit
	ricon
	($ rname .. "  steigt ins Auto. Sein protziges Riesenschwert kratzt an allem entlang und zerstort die Polster." $) cyoa-text! goodfx
	team-count 3 > if
		"Deine Gruppe ist voll! Wer soll gehen um Platz zu machen?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: nimbus-scget
	"Level Schleifen erforderlich" cyoa-title!
	char-gen to recruitee ricon	3 recruitee .morale! recruitee .nimbusify
	($ Thegroup .. " ' entdeckt einen Anhalter in der Nahe der Strae.	Er schwingt ein albernes riesiges Schwert. Es ist offensichtlich, dass es viel zu gro ist, um effektiv geschwungen zu werden.	Der Mann ist ebenfalls Stufe 1, bestenfalls Stufe 2. Er wird ernsthaftes Powerleveling brauchen, wenn er kampfen will " .. "Ultimativer Aufgestiegener Bizarro Krankor" rainbold .. " deutsch sein" $) cyoa-text! basic-tone
		choice( "Rekrutieren Sie ihn" )choice: nimbus-recruit
		choice( "Lasst ihn in Ruhe" )choice
;

cyoa-bridge: kaiju-recruit
	ricon
	($ Thegroup .. "  fahrt ein paar Meter und uberfahrt beinahe das Monster. Es stellte sich heraus, dass es jemand in einem Monsterkostum war, der auf eine kleine Pappstadt trat.	" .. "'Tut mir leid, ich stecke in diesem Anzug fest!" pbold .. "  Sie steigt in das Auto." $) cyoa-text! goodfx
	team-count 3 > if
		"'Fur dieses Monster ist kein Platz im Team! Wer soll gehen?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: kaiju-scget
	"Riesenmonsterstadt" cyoa-title!
	char-gen to recruitee 3 recruitee .morale! recruitee .kaijuify
	($ "'Ein riesiges prahistorisches Monster zerstort die Stadt! Es stampft herum und zerstort Gebaude. Wer wei, wie viele Dosen Essen es zerquetscht? Du bist der Einzige, der es aufhalten kann!" $) cyoa-text! basic-tone
	"Deine Zombie Vorhersage lautet:" pbold +crtext
	($ "SCHWARMGROSSE: " pbold .. "ETWAS GROSS" fbold $) +crtext
	($ "AGGRESSION: " pbold .. "SUPER GENERVT" fbold $) +crtext
	($ "AKTUELLE ZEIT: " pbold .. "MONSTERZEIT" fbold $) +crtext
		choice( "Auf keinen Fall, fahr los" )choice
		choice( "Rettet die Stadt!" )choice: kaiju-recruit
		
;

cyoa: july4-scget
	"Frohlichen Amerika Tag" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .unclesamify
	($ rname .. " 'erscheint! Er ist die lebendige Personifizierung von " .. "AMERICA" fbold .. ", der vor Jahren aufgehort hat zu existieren. Du fuhlst dich " .. "ETWAS PATRIOTISCHER" rbold .. ", aber nicht wirklich. Zeit, dieser Zombie Einode zu entkommen!" $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Frag " .. rname .. "  zum Mitmachen auf" )choice: recruit-yes
		choice( "Fliehe nach Kanada" )choice
;

cyoa: beaver-scget
	"Frohlichen Kanada Tag" cyoa-title!
	char-gen to recruitee ricon 6 recruitee .morale! recruitee .beaverify
	255 WEAPON_HOCKEY trunk.weapon+
	($ "Jemand hat dein Auto mit Hockeyschlagern vollgestopft! Das muss irgendeine Art von " .. "KANADA TAG" rbold .. " streich sein! Etwas regt sich im riesigen Nest aus Hockeyschlagern. Ein groes Nagetier steckt seinen Kopf aus dem Haufen." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Frag " .. rname .. "  zum Mitmachen auf" )choice: recruit-yes
		choice( "Nagetier ignorieren" )choice
;

cyoa: feb14-scget
	"'Valentinstag: Diesmal ist es personlich" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .cupidify
	($ rname .. " 'ist da! Er ist die lebendige Personifizierung von " .. "ROMANCE" fbold .. ". Genau wie die Sorte die man auf diesen kleinen herzformigen Kreidebonbons sieht. Du fuhlst dich " .. "ETWAS ROMANTISCHER" rbold .. ", aber nicht wirklich." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Frag " .. rname .. "  zum Mitmachen auf" )choice: recruit-yes
		choice( "Mir zu kitschig" )choice
;

// HALLOWEEN Event


cyoa-choice: sans-test
	"WHOAAAAAAAAAAAAAAAAAAAAAAAAA!" cyoa-title!
	"Exzellente Wahl! Hier hast du es!" cyoa-text! goodfx
	char-gen to recruitee recruitee .skelify
	"Cameo Charakter" recruitee .name!
	recruited
;

: sans2-test
	sans-test ' .skelify foreach-team-char
;

cyoa-choice: halloween-cameos2
	"NOCH BESSERE CAMEOS" cyoa-title!

	($ "'Keine Sorge! Wir haben noch mehr Cameos in petto! Viel mehr " .. "4 weitere!" rainbold $) cyoa-text! goodfx
	
	choice( "Freddie, der aus FNAF Teil 12 [?]" rbold )choice: sans-test
	choice( "Dein Lieblings Cameo Charakter aus FNF" rbold )choice: sans-test
	choice( "Der sehr oft gewunschte " .. "SHREK aus FNFAFNF 8" rbold )choice: sans-test
	choice( "Wahlen Sie doch Sans und bereuen Sie es nicht, dies nicht schon fruher getan zu haben" )choice: sans2-test
;

cyoa-choice: halloween-cameos
	"CAMEOS ZEIT" cyoa-title! picon

	($ "Crossover cameos from popular videogames???? " .. "WHOAAAAAAAAAAAAAAAAAAAAA!" rbold .. " ' Endlich! Aber wahlen Sie mit Bedacht, denn wir bieten dies nur einen Tag im Jahr an! " .. "An HALLOWEEN" rainbold $) cyoa-text! goodfx
	
	"'HINWEIS DES ENTWICKLERS: Wir werden dies jedes Jahr aktualisieren damit wir bei den Cameos auf dem neuesten Stand sind" bbold +crtext
	
	choice( "Sans und Helvetica von Undertale" rbold )choice: sans2-test
	choice( "Amogus von Among Us" rbold )choice: sans-test
	choice( "Fall Guys denke ich?" rbold )choice: sans-test
	choice( "Nicht gut genug, ich " .. "BRAUCHE" rbold .. "  um weitere Optionen zu sehen" )choice: halloween-cameos2
;

cyoa-bridge: event-dracula
	"Genau wie in meinen Twilight Romanen" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .dracufy
	($ "'Hey, das ist Dracula! Hi, Dracula." $) text! "  BLUHD! BLAUGH!" rbold +text
	($ pname .. "  hatte nie gedacht " .. phe .. "'' wurde eine Beruhmtheit treffen! Es macht ihm nichts aus einige seiner Schlagworte zu verwenden." $) +crtext
	recruitee .fitnessREV goodfx
	($ "Sollen " .. pname .. "  rekrutieren " .. rname .. "? Er scheint ziemlich einsam zu sein weil er so lange in einer Krypta eingesperrt war." $) +crtext
	recruit-yesno
;

cyoa-choice: halloween-monsters
	"MONSTERZEIT" cyoa-title!

	($ "Sie haben die richtige Wahl getroffen! Die Suigkeiten aus der " .. "TREAT" bbold .. "  option war " .. "EXTREM giftig." rbold .. " 	Wahle dein Lieblingsmonster als Belohnung:" $) cyoa-text! goodfx
	
	choice( "Ein lustiger " .. "clown" rbold )choice: clown-test
	choice( "MASON" rbold .. ", das freundliche Monster" )choice: mason-test
	choice( "G*RF" rbold .. ", der Fluch des Montags" )choice: grf-test
	choice( "DRACULA" rbold .. ", ein Gastauftritt von Prominenten" )choice: event-dracula
;

cyoa-choice: halloween-treat
	"Halloween Suigkeiten" cyoa-title!

	($ "Du hast die richtige Wahl getroffen! Wenn du eine andere Option gewahlt hattest, hatte ich " .. "sofort alle deine Charaktere zerstort!" rbold .. " ' Hier ist deine Belohnung." $) cyoa-text! goodfx
	"Du hast ein einzelnes Stuck Hartbonbon bekommen.	Es riecht wie das Innere einer wirklich alten Handtasche." bbold +crtext
	1 trunk-food+
	
	choice( "DANKE " .. "viel Obama" bbold )choice
;


cyoa-choice: halloween-hand2

	($ cname .. "  verliert " .. chis .. "  langweilige alte Hand und bekommt eine " .. "Kettensagenhand!" rainbold .. "  Dies konnte das festlichste Halloween aller Zeiten werden!" $) cyoa-text!
	ctakeweapons WEAPON_CHAINHAND cchar .weapona! 1 cchar .weapon_nodropa!
	cchar .trait@ "Spezialist" $= if
		($ cname .. "  fuhlt sich UNGLAUBLICH selbstgefallig!" rainbold $) +crtext
		2 cchar .carrying.slot_count! morale4+
	then goodfx

	choice( "Frohes Halloween!" )choice

;

cyoa-bridge: halloween-hand
	"Kettensagenhand" cyoa-title! picon
	solohuman if
		choosehuman cchar halloween-hand2
	then;
	"Nichts sagt Halloween so sehr aus wie das Ersetzen deiner Hand durch eine Kettensage!	Wem willst du eine Kettensagenhand geben?" text!
	' halloween-hand2 cyoa-human-choice
;

cyoa: halloween-event
	"Halloween SCARETACULAR" cyoa-title!
	($ "'Es ist " .. "HALLOWEEN!" fbold .. "  Mach dich bereit fur ein " .. "GESPENSTISCHES" fbold .. "  erlebnis!	Du kannst aus der folgenden Liste von " .. "STREICHEN" rbold .. " auswahlen oder dich fur die sichere, kostliche, aber langweilige Option eines " .. "TREAT." bbold $) cyoa-text! basic-tone

		choice( "TRICK: " rbold .. "Rekrutiere ein MONSTER" )choice: halloween-monsters
		choice( "TRICK: " rbold .. "Beliebtes Game Cameo Crossover!" )choice: halloween-cameos
		choice( "TRICK: " rbold .. "Besorge dir eine KETTENSAW HAND" )choice: halloween-hand
		choice( "Gib mir das " .. "TREAT" bbold )choice: halloween-treat

;

} }



// Nimbus Ordeal, Kaiju, Canada Day Beaver, July 4th

cyoa{ road{

cyoa-bridge: nimbus-recruit
	ricon
	($ rname .. "  monte dans la voiture. Son ostentatoire epee geante frotte contre tout, detruisant la tapisserie." $) cyoa-text! goodfx
	team-count 3 > if
		"Votre groupe est plein ! Qui doit partir pour faire de la place ?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: nimbus-scget
	"Meulage de niveau requis" cyoa-title!
	char-gen to recruitee ricon	3 recruitee .morale! recruitee .nimbusify
	($ Thegroup .. " ' apercoit un auto stoppeur pres de la route. Il brandit une epee enorme et ridicule. Il est evident qu'elle est bien trop grande pour etre maniee efficacement. L'homme est egalement de niveau 1, niveau 2 au mieux. Il aura besoin d'une serieuse montee en puissance s'il veut combattre " .. "Bizarro Krankor supreme ascensionne" rainbold .. "  a la fin de ce jeu." $) cyoa-text! basic-tone
		choice( "Recruter" )choice: nimbus-recruit
		choice( "Laissez le tranquille" )choice
;

cyoa-bridge: kaiju-recruit
	ricon
	($ Thegroup .. "  conduit quelques metres et manque decraser le monstre. Il sest avere quil sagissait dune personne dans un costume de monstre, marchant sur une petite ville en carton." .. "'Desole, je suis coince dans ce costume !" pbold .. " Elle monte dans la voiture." $) cyoa-text! goodfx
	team-count 3 > if
		"Il n'y a pas de place dans l'equipe pour ce monstre! Qui doit partir?" +crtext recruit-replace?
	then;
		recruited
;

cyoa: kaiju-scget
	"Ville Monstre Geante" cyoa-title!
	char-gen to recruitee 3 recruitee .morale! recruitee .kaijuify
	($ "'Un monstre prehistorique geant detruit la ville !	Il pietine tout, detruisant les batiments. Qui sait combien de boites de conserve il ecrase ?	Vous etes le seul a pouvoir l'arreter !" $) cyoa-text! basic-tone
	"Voici vos previsions zombies :" pbold +crtext
	($ "TAILLE DE LESSAIM " pbold .. "UN PEU GROS" fbold $) +crtext
	($ "AGRESSIVITE " pbold .. "TRES ENERVE" fbold $) +crtext
	($ "HEURE ACTUELLE " pbold .. "HEURE MONSTRE" fbold $) +crtext
		choice( "Pas question, roule" )choice
		choice( "Sauvez la ville !" )choice: kaiju-recruit
		
;

cyoa: july4-scget
	"Joyeux Jour de lAmerique" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .unclesamify
	($ rname .. " ' apparait ! C'est la personnification vivante de " .. "AMERIQUE" fbold .. ", qui a cesse dexister il y a des annees.	Vous sentez " .. "VAGUELY MORE PATRIOTIC" rbold .. ", mais pas vraiment.	Il est temps dechapper a ce desert de zombies !" $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Demandez a " .. rname .. "  de rejoindre" )choice: recruit-yes
		choice( "Fuir vers le Canada" )choice
;

cyoa: beaver-scget
	"Bonne fete du Canada" cyoa-title!
	char-gen to recruitee ricon 6 recruitee .morale! recruitee .beaverify
	255 WEAPON_HOCKEY trunk.weapon+
	($ "Quelquun a rempli votre voiture de batons de hockey ! Ce doit etre une sorte de " .. "FETE DU CANADA" rbold .. "  farce !	Quelque chose remue dans le nid geant de batons de hockey. Un gros rongeur sort la tete du tas." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Demandez a " .. rname .. "  de rejoindre" )choice: recruit-yes
		choice( "Ignorer le rongeur" )choice
;

cyoa: feb14-scget
	"'Saint Valentin : Cette fois c'est personnel" cyoa-title!
	char-gen to recruitee ricon 4 recruitee .morale! recruitee .cupidify
	($ rname .. " ' est la ! C'est la personnification vivante de " .. "ROMANCE" fbold .. ". Tout comme ceux que vous voyez sur ces petits bonbons a la craie en forme de cur.	Vous sentez " .. "SLIGHTLY MORE ROMANTICAL" rbold .. ", mais pas vraiment." $) cyoa-text! basic-tone
	// team-count 4 < if recruited then
		choice( "Demandez a " .. rname .. "  de rejoindre" )choice: recruit-yes
		choice( "Trop ecoeurant pour moi" )choice
;


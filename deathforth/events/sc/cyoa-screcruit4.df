cyoa{ road{

cyoa-bridge: grf-recruit
	ricon
	"G***" recruitee .name!
	($ rname .. " ' diz algo mas e muito abafado para entender.	Bem vindo a um novo mundo de terror." $) cyoa-text! badfx
		team-count 3 > if
			"'Voce tera que inicializar alguem para abrir espaco para esta abominacao:" +crtext recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV recruitee .attitudeREV
		recruited
;

cyoa: grf-test
	"A Segunda feira Final" cyoa-title!
	char-gen to recruitee
	someone choosechar
	ricon 
	6 recruitee .morale! 31 screcruit 0 recruitee .attitude! -4 STAT_MORALE recruitee .bonus!
	($ Thegroup .. "  esta vasculhando um restaurante, nao encontrando nada. " .. cname-He .. "  descobre um personagem mascote em tamanho real, murcho e imundo contra uma das paredes.	De repente, o mascote se move e grita:	" .. "EU ODEIO SEGUNDAS FEIRAS	" rbold .. cname .. "  quase desmaia de surpresa." $) cyoa-text! basic-tone		
		choice( "Recrute por algum motivo" )choice: grf-recruit
		choice( "Saia dai rapido" )choice
;

cyoa-bridge: anime-recruit
	ricon 2 to anime-countdown recruitee .strengthREV recruitee .fitnessREV recruitee .attitudeREV
	// recruitee .name@ 5 $left " chan" $cat recruitee .name! - Old, bugged out with tiny names
	// recruitee .name@ dup $len 8 min $left " chan" $cat recruitee .name!
	"Poder adoravel" recruitee .perk!
	($ rname .. "  brilha, levanta sua VARINHA ADORAVEL e emite feixes de coracao.	" .. "'Uma nova equipe! Vamos fazer a diferenca!" rainbold $) cyoa-text!
	team-count 3 > if
		"'O grupo e grande demais para recruta la! Substitua alguem:" +crtext
		recruit-replace?
	then;
 goodfx
		recruited
;

cyoa: anime-test
	"O Poder do Anime" cyoa-title!
	char-gen to recruitee
	5 recruitee .morale! recruitee .animeify ricon
	($ Thegroup .. "  e emboscado por uma horda de zumbis. Enquanto corria, " .. gthey .. "  encontro" .. g1s .. "  uma mulher, ja encurralada em um canto. Parece sem esperanca, entao ela de repente se transforma em uma " .. "GAROTA MAGICA ANIME" rainbold .. "'. Os zumbis nao tem chance contra isso." $) cyoa-text! basic-tone
		choice( "Recrute a" )choice: anime-recruit
		choice( "Caminhos separados" )choice
;

cyoa-bridge: billy-recruit
	ricon
	"Billy" recruitee .name!
	($ cname .. " ' encontra um barco a remo. Demora um pouco para chegar ao velho. O homem nao fala e sua expressao e dificil de ler, mas ele entra no seu barco." .. " ><> " pbold $) cyoa-text! goodfx
		team-count 3 > if
			"Expulse alguem para dar lugar a ele:" +crtext recruit-replace?
		then;
		recruitee .shootingREV
		recruited
;

cyoa: billy-test
	"Agitacao ridicula da tela" cyoa-title!
	char-gen to recruitee
	someone choosechar
	ricon
	3 recruitee .morale! recruitee .billify
	($ Thegroup .. " ' esta fazendo uma pausa perto de um lago. Ha um velho em um barco ao longe, pescando. Ele vira a vara de pescar e dezenas de peixes voam alto no ar. Ele entao pega uma pistola e comeca a atirar neles. O mundo parece tremer. Durante o meio disso, ele troca por uma espingarda." $) cyoa-text! basic-tone
		choice( "Recruta lo" )choice: billy-recruit
		choice( "Deixe o em paz" )choice
;

cyoa-bridge: dsyp-recruit
	ricon
	"DSYP" recruitee .name!
	($ rname .. " ' parece aceitar sua oferta. Ele nao disse nada ou mesmo reagiu, exceto que ele entrou no carro. Se ele nao pular, entao esta tudo acabado." $) cyoa-text! goodfx
	team-count 3 > if
		"Voce precisara expulsar alguem para abrir espaco:" +crtext recruit-replace?
	then;
		recruited
;

cyoa: dsyp-test
	"DSYP" cyoa-title!
	char-gen to recruitee
	ricon
	3 recruitee .morale! recruitee .dsypify
	($ Thegroup .. " " $) cyoa-text! basic-tone
		choice( "Recruta lo" )choice: dsyp-recruit
		choice( "Deixe o em paz" )choice
;

cyoa-bridge: cleaner-recruit
	ricon
	($ rname .. "  gira seu esfregao rapidamente ao redor do pulso.	" .. "Hora de limpar essa bagunca!	" pbold .. "Agua de esfregao encharca " .. thegroup .. "  muito ruim." $) cyoa-text! goodfx
	team-count 3 > if
		"Remover alguem para abrir espaco:" +crtext recruit-replace?
	then;
		recruited
;

cyoa: cleaner-test
	"Limpando" cyoa-title!
	char-gen to recruitee
	someone choosechar
	ricon
	4 recruitee .morale! recruitee .cleanerify
	($ "'Voce encontra uma mulher em uma cidade abandonada, descansando em uma loja saqueada.	Ela esta usando um uniforme de limpeza.	" .. "'Eu uso essas roupas porque sao confortaveis e resistentes a manchas.		E eu uso este esfregao como uma arma porque e uma boa arma! Isso e tudo! Pare de me fazer perguntas!" pbold $) cyoa-text! basic-tone
		choice( "Recrute a" )choice: cleaner-recruit
		choice( "Deixe a em paz" )choice
;

cyoa-bridge: knight-recruit 
	ricon 4 6 rnd to knight-countdown
	"Cavaleiro" recruitee .name!
	($ rname .. "  coloca seu eu de metal no carro. A suspensao cede um pouco.	" .. "'Vamos ajudar uns aos outros em nossas missoes!" pbold $) cyoa-text! goodfx
		team-count 3 > if
			"'Voce tera que substituir alguem pelo cavaleiro:" +crtext recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV
		recruited
;


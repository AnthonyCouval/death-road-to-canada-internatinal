cyoa-bridge: grf-recruit
	ricon
	"G***" recruitee .name!
	($ rname .. " 'diz algo mas e muito muffled para entender.	Bemvindo a um novo mundo de terror." $) cyoa-text! badfx
		team-count 3 > if
			"'Vai ter que expulsar alguem para fazer espaco para esta abominacao:" +crtext recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV recruitee .attitudeREV
		recruited
;

cyoa: grf-test
	"O Ultimo QuintaFeira" cyoa-title!
	char-gen to recruitee
	someone choosechar
	ricon 
	6 recruitee .morale! 31 screcruit 0 recruitee .attitude! -4 STAT_MORALE recruitee .bonus!
	($ Thegroup .. " esta procurando por comida num restaurante, sem sucesso.	 " .. cname-He .. " encontra um boneco de mascote inflado e sujo contra uma paredes.	De repente, o boneco move e grita:	" .. "ODIOOSOS OS SEGUNDOSFEIROS	" rbold .. cname .. " pode quase desmaiar de surpresa." $) cyoa-text! basic-tone		
		choice( "Recrutar por alguma razao" )choice: grf-recruit
		choice( "Saiam dai rapido" )choice
;

cyoa-bridge: anime-recruit
	ricon 2 to anime-countdown recruitee .strengthREV recruitee .fitnessREV recruitee .attitudeREV

		choice( "Recusar oferta" )choice
;


cyoa-bridge: horse-recruit
	ricon
	($ "O homem ignora " .. cname .. "' oferta para se juntar ao grupo, mas logo fica obvio que ele simplesmente nao esta ouvindo. O carro avanca um pouco e " .. cname .. "  alcanca e abre uma das portas traseiras. O homem pula para dentro." $) cyoa-text! goodfx
		team-count 3 > if
			"Chute alguem para pegar um cavalo:" +crtext recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV recruitee
		recruited
;

cyoa-choice: horse-boost
	ricon
	($ Thegroup .. "  imagina como seria ser um cavalo." .. "UAU BOM INCRIVEL" rbold $) cyoa-text! goodfx
		' .morale++ foreach-team-char
;

cyoa: horse-test
	"Um Lindo Cavalo" cyoa-title!
	char-gen to recruitee
	someone choosechar
	"Cavalo" recruitee .name!
	ricon
	6 recruitee .morale! recruitee .horsify
	($ "'Ha um homem correndo ao lado da estrada. Sua mascara de cavalo esta balancando para frente e para tras a cada passo." .. Thegroup .. "  nunca viu alguem tao livre." $) cyoa-text! basic-tone
		choice( "Recruta lo" )choice: horse-recruit
		choice( "Imagine ser um cavalo" )choice: horse-boost	
;


		choice( "Rifiuta lofferta" )choice
;


cyoa-bridge: horse-recruit
	ricon
	($ "Luomo ignora " .. cname .. "''s offre di unirsi al gruppo, ma presto diventa ovvio che non sta ascoltando. L'auto procede un po' e " .. cname .. "  si avvicina e apre una delle porte posteriori. Luomo salta dentro." $) cyoa-text! goodfx
		team-count 3 > if
			"Calcia qualcuno per prendere un cavallo:" +crtext recruit-replace?
		then;
		recruitee .strengthREV recruitee .fitnessREV recruitee
		recruited
;

cyoa-choice: horse-boost
	ricon
	($ Thegroup .. "  immagina come sarebbe essere un cavallo." .. "WOW BELLO INCREDIBILE" rbold $) cyoa-text! goodfx
		' .morale++ foreach-team-char
;

cyoa: horse-test
	"Un bel cavallo" cyoa-title!
	char-gen to recruitee
	someone choosechar
	"Cavallo" recruitee .name!
	ricon
	6 recruitee .morale! recruitee .horsify
	($ "'C'e un uomo che corre lungo la strada.	La sua maschera da cavallo sbatte avanti e indietro a ogni passo.	" .. Thegroup .. "  non ha mai visto qualcuno cosi libero." $) cyoa-text! basic-tone
		choice( "Reclutalo" )choice: horse-recruit
		choice( "Immagina di essere un cavallo" )choice: horse-boost	
;

cyoa-bridge: gnomey-recruit
	ricon
	team-count 3 > if
		($  rname .. "  impazzisce.		" rbold .. "'Non puoi RECLUTARE nessuno se hai gia 4 persone!		Non puoi farlo! Non hai prestato ATTENZIONE?		" pbold .. rname .. "  irrompe nella sua capanna e sbatte la porta.		Caccia qualcuno dal gruppo e riprova:" $) cyoa-text! badfx recruit-replace?
	then;
	($ rname  .. "  salta sulla sua cosa da roditori.	" .. "'Hai un problema con gli ZOMBI? Quello e un PROBLEMA DA GNOMI.	" pbold .. "Il roditore si impenna e nitrisce drammaticamente.	" .. rname .. "  indica lorizzonte e strizza locchio. " $) cyoa-text! goodfx
		recruitee .strengthREV recruitee .attitudeREV recruitee .medicalREV
		recruited
;


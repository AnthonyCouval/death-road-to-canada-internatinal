uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

: ninja-restock
	15 stpick if choosechar then
	WEAPON_SHURIKEN cchar .weapona! 7 cchar .stackeda!
	1 cchar .weapon_nodropa!
	WEAPON_SMOKEBOMB cchar .weaponb! 5 cchar .stackedb! 
	1 cchar .weapon_nodropb!
;

cyoa: ninja-timeup
	15 stpick if choosechar cicon else ($ "Jeu realise par" pbold .. " elle preparait a quitter le groupe maintenant, mais elle est partie un peu avant." $) text! exit then
	"Disparition ninja !" cyoa-title!
	solo if 
		($ "Jeu realise par" pbold .. " elle se decide de rester un peu plus longtemps." $) cyoa-text!
		4 to ninja-countdown goodfx
	then;
	($ "Jeu realise par" pbold .. " elle frappe une pose dramatique a bras croises. son foulard de tete flotte dans le vent." .. "Looks like... my work is done." pbold .. "elle jette une bombe a fumigene au sol et disparait laissant derriere un petit sac... . . 		le sac est plein de bombes a fumigene !." .. "FAITES ATTENTION, VOUS AVEZ 7 BOMBES A FUMIGENE !" rbold $) cyoa-text! 7 WEAPON_SMOKEBOMB trunk.weapon+ goodfx
		decruit-good-silent
;

cyoa: ninja-despair
	bully choosechar cicon
	"Rage de ninja !" cyoa-title!
	($ cname .. " ouvre sa porte avec une violente deportation." .. "Raccrocher !" pbold .. "elle tombe hors de la voiture, fait un saut en arriere, se penche, se releve et jette alors une bombe fumigene et disparait." $) cyoa-text!
	decruit-bad-silent badfx
	team-count 0 = if
		"La voiture conduit un peu mais s'arrete finalement." +cr +text
	else
		($ Thegroup .. " est etonne et impressionne par cela." $) +cr +text
	then
;

} }



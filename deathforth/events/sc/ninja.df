uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

: ninja-restock
	15 stpick if choosechar then
	WEAPON_SHURIKEN cchar .weapona! 7 cchar .stackeda!
	1 cchar .weapon_nodropa!
	WEAPON_SMOKEBOMB cchar .weaponb! 5 cchar .stackedb! 
	1 cchar .weapon_nodropb!
;

cyoa: ninja-timeup
	15 stpick if choosechar cicon else ($ "Il ninja" pbold .. "  stava progettando di lasciare il gruppo adesso, ma sembra che se ne sia andata solo un po prima." $) text! exit then
	"Ninja Svanisci!" cyoa-title!
	solo if 
		($ "Il ninja" pbold .. " ' stava per lanciare una bomba fumogena e scomparire misteriosamente, ma non c'e nessuno in giro che possa vederlo. Che divertimento c'e in questo?		Decide di restare ancora un po'." $) cyoa-text!
		4 to ninja-countdown goodfx
	then;
	($ "Il ninja" pbold .. " 	Colpisce una posa drammatica con le braccia incrociate. La sua fascia per capelli svolazza al vento." .. "Looks like... my work is done." pbold .. "	Lei sbatte una bomba fumogena a terra e scompare, lasciando dietro di se una piccola borsa.		La borsa e piena di bombe fumogene!	" .. "HO 7 BOMBE FUMO!" rbold $) cyoa-text! 7 WEAPON_SMOKEBOMB trunk.weapon+ goodfx
		decruit-good-silent
;

cyoa: ninja-despair
	bully choosechar cicon
	"Ninja Tantrum!" cyoa-title!
	($ cname .. "  le prende a calci la porta aperta." .. "Questo mi fa infuriare!" pbold .. "escende dal veicolo, esegue un giro dorsale indietro, atterrica in una posizione in ginocchio, si alza e poi getta una bomba fumogenola e scompare." $) cyoa-text!
	decruit-bad-silent badfx
	team-count 0 = if
		"Il veicolo continua per un po ma infine si ferma." +cr +text
	else
		($ Thegroup .. " si sorprende e rimane impressionato da questo." $) +cr +text
	then
;

} }



uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: madsci-timeup
	10 stpick if choosechar cicon else ($ " is not working as expected. " .. "cientista maluco" pbold .. "  nunca chegara ao seu destino, agora." $) text! exit then
	notcchar to victim
	"De volta ao laboratorio" cyoa-title!
	solo if 
		($ "O cientista" pbold .. " 1" $) cyoa-text!
		decruit-good-silent
	then;
	($ "O cientista" pbold .. "  is delivered to her laboratory!		She thanks " .. thegroup .. " e da um " .. "um teleportador sobrecarregado" rbold .. " como recompensa!" $) cyoa-text! goodfx decruit-good-silent 10 WEAPON_DOODAD trunk.weapon+
			choice( "BOM" )choice
;

: madsci-lash
"Se eu tivesse sabido que voce eram assim nao teria aceitado o passeio! " .. "um queijoprato" aVSs .. " sobre tudo isso eu nunca teria aceito a passagem!" ;

cyoa: madsci-despair
	bully choosechar cicon
	solo if 
		"Veja a lado da historia" cyoa-title!
		($ cname .. " maravilhase como isto se tornou tao ruim DEMAIS.		" .. "'Eu apenas aceitei o passeio e todos estao mortos!		Bem, pelo menos tenho essa carinhada de carro agora." pbold $) cyoa-text!
		morale3+ goodfx
	then;
	"Analise Cientifica" cyoa-title!
	// Maybe add a chance to teleport out of the car, destroying it
	($ cname .. " ataca a " .. everyone .. ".
	" .. PURPLE .. madsci-lash .. "'de acordo com meu julgamento profissional voce esta	 " .. "bunda" aVSs .. "." .. WHITE $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except badfx
;

} }



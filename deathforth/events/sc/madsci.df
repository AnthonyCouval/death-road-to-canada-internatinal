uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: madsci-timeup
	10 stpick if choosechar cicon else ($ " Parece que el " .. " cientifico loco" pbold .. "  nunca llegara a su destino, ahora." $) text! exit then
	notcchar to victim
	" De vuelta al laboratorio" cyoa-title!
	solo if 
		($ " El cientifico" pbold .. " ' llega a su laboratorio solo. No era parte del plan de Canada, asi que parece que el viaje ha terminado." $) cyoa-text!
		decruit-good-silent
	then;
	($ " El cientifico" pbold .. "  se entrega a su laboratorio! Ella agradece " .. thegroup .. "  y da un " .. " teletransportador sobrecargado" rbold .. "  como recompensa!" $) cyoa-text! goodfx decruit-good-silent 10 WEAPON_DOODAD trunk.weapon+
			choice( "BUENO" )choice
;

: madsci-lash
" Si supiera que ibas a ser " .. " salchicha" aVSs .. " acerca de todo esto que nunca habria aceptado el viaje!" ;

cyoa: madsci-despair
	bully choosechar cicon
	solo if 
		"Mira el lado positivo" cyoa-title!
		($ cname .. " se pregunta como esto se puso tan mal TAN rapido." .. "'Simplemente acepte el viaje y todos estan muertos! Bueno, al menos ahora tengo este lindo auto." pbold $) cyoa-text!
		morale3+ goodfx
	then;
	"Analisis cientifico" cyoa-title!
	// Maybe add a chance to teleport out of the car, destroying it
	($ cname .. "  arremete contra " .. everyone .. ".
	" .. PURPLE .. madsci-lash .. "'En mi opinion profesional eres " .. "trasero" aVSs .. "." .. WHITE $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except badfx
;

} }



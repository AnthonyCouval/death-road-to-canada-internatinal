uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: madsci-timeup
	10 stpick if choosechar cicon else ($ "Parece ser el " .. "cientifico loco" pbold .. " 'nunca llegara a su destino, ahora." $) text! exit then
	notcchar to victim
	"Vuelta al laboratorio" cyoa-title!
	solo if 
		($ "El cientifico" pbold .. " 'llega a su laboratorio solo.		Ella no formaba parte del plan de Canada, asi que parece que el viaje ha terminado." $) cyoa-text!
		decruit-good-silent
	then;
	($ "El cientifico" pbold .. " 'es entregada en su laboratorio!		Ella agradece a " .. thegroup .. " 'y entrega un " .. "teletransportador sobrecargado" rbold .. " 'como recompensa!" $) cyoa-text! goodfx decruit-good-silent 10 WEAPON_DOODAD trunk.weapon+
			choice( "NICE" )choice
;

: madsci-lash
"Si hubiera sabido que ibas a ser asi " .. "pervertido" aVSs .. " 'sobre todo esto, nunca habria aceptado el viaje!" ;

cyoa: madsci-despair
	bully choosechar cicon
	solo if 
		"Mira el lado positivo" cyoa-title!
		($ cname .. " 'se pregunta como esto ha empeorado tan rapido.		" .. "0x0000000000000000" pbold $) cyoa-text!
		morale3+ goodfx
	then;
	"Analisis Cientifico" cyoa-title!
	// Maybe add a chance to teleport out of the car, destroying it
	($ cname .. " ' se enfada contra " .. everyone .. ".
	" .. PURPLE .. madsci-lash .. "segun mi opinion profesional usted es " .. "cara" aVSs .. "." .. WHITE $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except badfx
;

} }



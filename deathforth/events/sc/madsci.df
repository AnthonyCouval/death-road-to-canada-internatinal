uses road.df

cyoa{ road{

cyoa: madsci-timeup
	10 stpick if choosechar cicon else ($ "C'est l'aspect de ... " .. "un savant fou" pbold .. " elle ne parviendra plus a atteindre sa destination, maintenant." $) text! exit then
	notcchar to victim
	"Revenons au laboratoire" cyoa-title!
	solo if 
		($ "Le scientifique" pbold .. " elle se rend seule dans son laboratoire... 		elle n'etait pas partie du plan du canada, donc il semble que le voyage soit termine." $) cyoa-text!
		decruit-good-silent
	then;
	($ "Le scientifique" pbold .. " elle recoit dans son laboratoire ! cela lui fait grace. " .. thegroup .. " and gives an " .. "teleporteur surcharge" rbold .. " en recompense !" $) cyoa-text! goodfx decruit-good-silent 10 WEAPON_DOODAD trunk.weapon+
			choice( "NOUS" )choice
;

: madsci-lash
"Si je savais que tu allait etre " .. "bureau" aVSs .. " je ne l'aurais jamais accepte dans ces circonstances !" ;

cyoa: madsci-despair
	bully choosechar cicon
	solo if 
		"Regardez le cote positif des choses." cyoa-title!
		($ cname .. " ce lui fait etrangement se poser la question de comment ca s'est deteriore a ce rythme... ." .. "Je viens de accepter la course et tous les passagers sont morts !... a part ce magnifique vehicule maintenant a ma disposition." pbold $) cyoa-text!
		morale3+ goodfx
	then;
	"Negocier applique sur le char." cyoa-title!
	// Maybe add a chance to teleport out of the car, destroying it
	($ cname .. " lance des coups de poing a " .. everyone .. ".
	" .. PURPLE .. madsci-lash .. "dans mon avis professionnel, vous etes " .. "derriere" aVSs .. "." .. WHITE $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except badfx
;

} }



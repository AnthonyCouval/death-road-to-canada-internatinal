uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: madsci-timeup
	10 stpick if choosechar cicon else ($ "Operator is not working as expected " .. "verruckter Wissenschaftler" pbold .. " sie wird nie an ihrem Ziel ankommen, jetzt." $) text! exit then
	notcchar to victim
	"Zuruck ins Labor" cyoa-title!
	solo if 
		($ "Der Wissenschaftler" pbold .. " ' kommt allein in ihrem Labor an. Sie war nicht Teil des Kanada Plans, also sieht es so aus, als ware die Reise zu Ende." $) cyoa-text!
		decruit-good-silent
	then;
	($ "Der Wissenschaftler" pbold .. "  wird in ihr Labor geliefert! Sie dankt " .. thegroup .. "  und gibt ein " .. "uberladener Teleporter" rbold .. "  als Belohnung!" $) cyoa-text! goodfx decruit-good-silent 10 WEAPON_DOODAD trunk.weapon+
			choice( "SCHON" )choice
;

: madsci-lash
"Wenn ich gewusst hatte dass du " .. "wurstchen" aVSs .. "  uber all das hatte ich die Fahrt nie angenommen!" ;

cyoa: madsci-despair
	bully choosechar cicon
	solo if 
		"Betrachte die Dinge von der positiven Seite" cyoa-title!
		($ cname .. "  wundert sich wie das so schnell so schlimm werden konnte." .. "'Ich habe gerade die Fahrt angenommen und alle sind tot! Nun, wenigstens habe ich jetzt dieses tolle Auto." pbold $) cyoa-text!
		morale3+ goodfx
	then;
	"Wissenschaftliche Analyse" cyoa-title!
	// Maybe add a chance to teleport out of the car, destroying it
	($ cname .. " peitscht auf " .. everyone .. ".
	" .. PURPLE .. madsci-lash .. "'Meiner fachlichen Meinung nach bist du " .. "hintern" aVSs .. "." .. WHITE $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except badfx
;

} }



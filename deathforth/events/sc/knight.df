uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: knight-timeup
	53 stpick if choosechar cicon else ($ "Parece que" .. "o cavaleiro" pbold .. " nao podera continuar sua busca." $) text! exit then
	"Caminho do Cavaleiro" cyoa-title!
	solo if 
		($ "O cavaleiro" pbold .. " ' esta perto de seu destino, entao ela sai do carro para continuar sua jornada sagrada.		Sua busca continua, mas nao ha mais ninguem para a busca do Canada." $) cyoa-text! badfx
	else
	($ "O cavaleiro" pbold .. "  pede para sair do carro." .. "'E hora de eu retomar minha busca!" pbold .. "	Em agradecimento, ela da " .. thegroup .. "  sua espada extra!	" .. "'Espada do Cavaleiro" pbold .. "  obtido!" $) cyoa-text! goodfx 1 WEAPON_KNIGHT trunk.weapon+
	then
	decruit-good-silent
	// TEAM_STATUS_GOOD_LEFT cchar .decruit
;

cyoa: knight-despair
	bully choosechar cicon
	"'Bem meus SENTIMENTOS nao estao em armadura" cyoa-title!
	($ cname .. " ' decide que nao precisa mais dessa porcaria. 	" .. "Este carro esta AMALDICOADO! Eu deveria ter encontrado outro cavalo!" pbold .. "	Ela sai furiosa, com a armadura tilintando." $) cyoa-text!
	decruit-bad
;

} }



cyoa{ road{

cyoa: knight-timeup
	53 stpick if choosechar cicon else ($ "Sieht aus wie" .. "der Ritter" pbold .. " ' wird ihre Suche nicht fortsetzen konnen." $) text! exit then
	"Pfad des Ritters" cyoa-title!
	solo if 
		($ "Der Ritter" pbold .. " ' ist ihrem Ziel nahe, also steigt sie aus dem Auto, um ihre heilige Suche fortzusetzen.		Ihre Suche geht weiter, aber fur die Kanada Suche ist niemand mehr ubrig." $) cyoa-text! badfx
	else
	($ "Der Ritter" pbold .. "  bittet darum aus dem Auto gelassen zu werden.	" .. "'Es ist Zeit fur mich meine Suche wieder aufzunehmen!" pbold .. "	Als Dank gibt sie " .. thegroup .. " deutsch sein" .. "'Ritterliches Schwert" pbold .. " erhalten!" $) cyoa-text! goodfx 1 WEAPON_KNIGHT trunk.weapon+
	then
	decruit-good-silent
	// TEAM_STATUS_GOOD_LEFT cchar .decruit
;

cyoa: knight-despair
	bully choosechar cicon
	"'Nun meine GEFUHLE sind nicht in Plattenrustung" cyoa-title!
	($ cname .. " ' beschliet dass sie keinen weiteren Mist mehr braucht. 	" .. "Dieses Auto ist VERFLUCHT! Ich hatte mir einfach ein anderes Pferd suchen sollen!" pbold .. "	Sie sturmt wutend davon, die Rustung klirrt." $) cyoa-text!
	decruit-bad
;

} }



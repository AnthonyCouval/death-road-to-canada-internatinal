uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: knight-timeup
	53 stpick if choosechar cicon else ($ "Sembra che" .. "il cavaliere" pbold .. " ' non potra continuare la sua ricerca." $) text! exit then
	"Percorso del Cavaliere" cyoa-title!
	solo if 
		($ "Il cavaliere" pbold .. " ' e vicino alla sua destinazione, quindi esce dall'auto per continuare la sua sacra ricerca. La sua ricerca continua, ma non e rimasto nessuno per la ricerca del Canada." $) cyoa-text! badfx
	else
	($ "Il cavaliere" pbold .. "  chiede di uscire dalla macchina.	" .. "'E ora di riprendere la mia ricerca!" pbold .. "	In segno di ringraziamento, da " .. thegroup .. "  la sua spada di riserva!	" .. "'Spada del Cavaliere" pbold .. "  ottenuta!" $) cyoa-text! goodfx 1 WEAPON_KNIGHT trunk.weapon+
	then
	decruit-good-silent
	// TEAM_STATUS_GOOD_LEFT cchar .decruit
;

cyoa: knight-despair
	bully choosechar cicon
	"'Beh i miei SENTIMENTI non sono in armatura di piastre" cyoa-title!
	($ cname .. " ' decide che non ha piu bisogno di tutta questa merda. 	" .. "Questa macchina e MALEDETTA! Avrei dovuto trovare un altro cavallo!" pbold .. "	Se ne va furiosa, con larmatura che tintinna." $) cyoa-text!
	decruit-bad
;

} }



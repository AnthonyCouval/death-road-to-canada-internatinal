uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa-choice: turkey-rid
	turkey-meal
	"Ci e voluto abbastanza tempo perche quel pasto accadesse." +cr +text
	cchar .kill
;

cyoa-choice: turkey-kick
	($ vname .. "  viene cacciato dal gruppo!	" .. "'Non ci posso credere! Come fa quel tacchino ad essere ancora vivo?" pbold $) cyoa-text!
		victim .weapons-to-trunk TEAM_STATUS_BAD_LEFT victim .decruit badfx
;

cyoa: turkey-despair
	bully choosechar cicon
	notcchar to victim 
	"Turkey Fight" cyoa-title!
	($ cname .. "  becca " .. vname .. " ' mentre emette frenetici versi di gobbling! Sembra che qui non ci siano compromessi. O il tacchino va o " .. vname .. "  deve." $) cyoa-text!
		choice( "Sbarazzati del tacchino" )choice: turkey-rid
		choice( "Calcio " .. vname .. "  dalla squadra" )choice: turkey-kick
;
	
} }



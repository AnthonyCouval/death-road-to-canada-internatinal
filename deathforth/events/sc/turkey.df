uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa-choice: turkey-rid
	turkey-meal
	"Il a fallu assez longtemps pour que ce repas ait lieu." +cr +text
	cchar .kill
;

cyoa-choice: turkey-kick
	($ vname .. "  se fait virer du groupe !	" .. "'Je n'arrive pas a y croire ! Comment cette dinde est elle encore en vie ?" pbold $) cyoa-text!
		victim .weapons-to-trunk TEAM_STATUS_BAD_LEFT victim .decruit badfx
;

cyoa: turkey-despair
	bully choosechar cicon
	notcchar to victim 
	"Combat de dindes" cyoa-title!
	($ cname .. "  donne des coups de bec a " .. vname .. " ' tout en faisant des gloussements frenetiques !	On dirait qu'il n'y a pas de compromis ici.	Soit la dinde s'en va soit " .. vname .. "  doit partir." $) cyoa-text!
		choice( "Debarrassez vous de la dinde" )choice: turkey-rid
		choice( "Virez " .. vname .. "  de lequipe" )choice: turkey-kick
;
	
} }



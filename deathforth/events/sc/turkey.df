uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa-choice: turkey-rid
	turkey-meal
	"Demoro lo suficiente para que esa comida ocurra." +cr +text
	cchar .kill
;

cyoa-choice: turkey-kick
	($ vname .. " es expulsado del grupo!" .. "'No creo esto! Como es que ese pavo aun esta vivo?" pbold $) cyoa-text!
		victim .weapons-to-trunk TEAM_STATUS_BAD_LEFT victim .decruit badfx
;

cyoa: turkey-despair
	bully choosechar cicon
	notcchar to victim 
	"Pelea de Pavos" cyoa-title!
	($ cname .. " picotea " .. vname .. " the turkey stays.	CK " .. vname .. " tiene que." $) cyoa-text!
		choice( "Deshazte de Turquia" )choice: turkey-rid
		choice( "Expulsa " .. vname .. "  del equipo" )choice: turkey-kick
;
	
} }



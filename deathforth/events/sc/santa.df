uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: santa-despair
	bully choosechar cicon
	solo if 
		"NOEL EST TERMINE DEFINITIVEMENT." cyoa-title!
		($ cname .. "seul et battu, s'arrete devant une maison vide. " .. cHe .. " monte par le cheminee et n'est plus visible." $) cyoa-text! badfx
		decruit-bad-silent
	then;
	notcchar to victim
	"CE FILM DE TIM ALLEN EST PRINCIPALEMENT UNE HISTOIRE D'UN HOMME QUI PASSE SON TEMPS EN PRISON ET VEUT RECOMMENCER SA VIE APRES SA SORTIE." cyoa-title!
	($ cname .. " se jette sur la route dans un etat de deception. dans une bizarrerie de l'accident, " .. vname .. " courr " .. chim .. " a terme avec la voiture ... a cause de la malediction de saint-nicolas, " .. vname .. " des qu'il est devenu le nouveau santa," $) cyoa-text! badfx
		cchar .kill
		3 victim .specialtype!		
;

cyoa: santa-camp
	"La veille de noel" cyoa-title! cyoaicon
	($ Thegroup .. " se reveille apres une nuit de camping pour decouvrir un supplementaire de pere noel. " .. gHe .. " ne dit rien a propos de cela et feint tout simplement que rien n'est mal." $) cyoa-text! basic-tone
	char-gen to recruitee 4 recruitee .shooting! 0 recruitee .female! 6 recruitee .morale!
	50 %chance if 
		3 screcruit "Santa claus" recruitee .name! santajoins
	else
		4 screcruit "Santa malefique" recruitee .name! evilsantajoins
	then
	+cr fullcamp
;

} }



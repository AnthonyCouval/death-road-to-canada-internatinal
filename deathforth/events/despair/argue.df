uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa-choice: argue-rant-shutup
	($ Everyone .. " sagt " .. cname .. "  es zu schlieen." $) cyoa-text!
	50 %chance if
		($ cHe .. " ' nimmt das nicht gut auf und verlasst die Gruppe schmollend." $) +crtext
		decruit-bad-silent-takeweapons morale++all
	else
		($ cHe .. "  wird nach  ruhig " .. everyone .. " sagt " .. chim .. "  zu reden aufhoren, aber " .. che .. " ' ist nicht sehr glucklich daruber." $) +crtext
		morale-- cchar morale++all-except
	then
;

: argue-rant-ignore? args( vic ) 
	<- vic oblivious? if
		($ <- vic .colourname .. "  ignoriert " .. bhim .. "  einfach gut." $) +crtext
		<- vic .witsREV <- vic .attitudeREV
	else
		<- vic .morale--
	then
;

cyoa-choice: argue-rant-ignore
	($ Everyone .. "  versucht zu ignorieren " .. cname .. ", aber " .. che .. "  macht weiter und weiter." $) cyoa-text! bully ' argue-rant-ignore? foreach-team-char-except
	($ bname .. "  schimpft weiter und fuhlt sich am Ende ein bisschen besser." $) +crtext
	morale++
;

cyoa: argue-rant
	despair-start-victim!
	"Riesen Schelte" cyoa-title!
	($ cname .. " entscheidet sich Dampf abzulassen indem er eine scheinbar endlose Tirade an  abgibt " .. everyone .. "." $) cyoa-text! basic-tone
		choice( "Versuch es zu ignorieren" )choice: argue-rant-ignore
		choice( "Sag " .. bname .. " die Klappe halten" )choice: argue-rant-shutup
		bully-charm?
		bully-sprayit?
	(* most-charming if	- GAVE UP ON THIS because it kept picking the bully and couldn't do a working alt
		charchoice( "  redet " .. bname .. "  deprimiert" )choice: bully-charm
	then
	most-grating if
		charchoice( "': SAG ES SPRUHE ES NICHT" fcoolit )choice: bully-sprayit
	then *) 
;

cyoa-choice: argue-car-go
	($ vname .. "  und " .. cname .. "  diskutieren weiter, und am Ende fuhlen sich alle schlechter." $) cyoa-text! morale--all badfx
;

cyoa-choice: argue-car-fast
	($ cname .. "  wird durch den Streit aufgeregt und fahrt immer schneller. Der Streit endet abrupt als " .. che .. "  versehentlich gegen einen Fahnenmast fahrt." $) cyoa-text! -2 car-chassis+ bitefx
;

cyoa-choice: argue-car-stop
	($ "Die Gruppe halt das Auto an und baut ihr Lager in der Nahe der Strae auf, damit " .. cname .. "  und " .. vname .. "  etwas Abstand bekommen kann. Das funktioniert, aber es kostet einen Tag." $) cyoa-text! +cr fullcamp heal-event 1 calendar-day+
;

cyoa-choice: argue-car-obliv
	($ cname .. "  stimmt " .. bname .. " ' nach einer Weile aus, und es ist, als ob der Streit nie stattgefunden hatte fur " .. chim .. ".
	" .. bname .. "  wird noch unglucklicher." $) cyoa-text!
		bully .morale-- badfx
;

cyoa: argue-car
	despair-start-victim!
	"Road Trip Arguement" cyoa-title!
	($ "Wahrend der Fahrt mit dem Auto, " .. cname .. "  gerat in einen groen Streit mit " .. vname .. "." $) cyoa-text! basic-tone
		choice( "Weiterfahren und streiten" )choice: argue-car-go
		choice( "Einen Tag Pause machen" )choice: argue-car-stop
		bully-charm?
		bully-sprayit?
		victim oblivious? if
			victim charchoice( " hrt nicht " .. bname )choice: argue-car-obliv
		then	
		bully charchoice( "  fahrt schneller" )choice: argue-car-fast		
;

cyoa: argue-insults
	despair-start-victim!
	"Mobbing" cyoa-title!
	($ cname .. "  schnappt und fangt an " .. vname .. "." $) cyoa-text! basic-tone
	victim .ctemper- if
		victim angrystrong? nonfatal and if
			($ vname .. "  antwortet mit einem Schlag gegen " .. bname .. "  ins Gesicht." $) +crtext sting-- victim .strengthREV
		else
			($ vname .. "  schreit zuruck und es entwickelt sich zu einem groen Kampf." $) +crtext
		then
		morale2- victim .morale2- victim .temperREV
	then;
	victim charming? if
			($ vname .. "  bleibt diplomatisch, wahrend er beleidigt wird, aber es geht ihm trotzdem an die " .. victim xhim .. "." $) +crtext morale++ victim .morale-- victim .witsREV victim .attitudeREV
	then;
	victim oblivious? if
		($ vname .. " ' dachte wahrend all der Beleidigungen an etwas anderes und horte nichts davon." $) +crtext morale++ victim .witsREV victim .attitudeREV
	then;
	victim grating? if
			($ vname .. "  beleidigt " .. cname .. "  direkt zuruck, allerdings viel effektiver." $) +crtext morale2- victim .morale2+ victim .witsREV victim .attitudeREV
	then;
	victim paranoid? if
			($ vname .. "  argert sich sehr daruber und plant Rache fur spater." $) +crtext victim .loyalty-- victim .witsREV victim .attitudeREV
	then
	($ cname .. "  fuhlt sich ein wenig besser in Bezug auf " .. chim .. "selbst." $) +crtext
	morale++ victim .morale2-
;

cyoa: group-haze-no
"Fahrt uber den Todesweg" cyoa-title! soloer choosechar
($ "Das Team gibt schlielich auf. Sie ziehen sich in ein unbekanntes Schicksal zuruck.Die Reise nach Kanada ist zu Ende." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "VERDAMMT" )choice: quit-to-title 
;

cyoa: group-haze
	"Todliches Argument" cyoa-title!
	despair-start!
	($ Thegroup .. " spends so much effort arguing with each other that they don't notice they've driven into the middle of an overwhelming sea of zombies. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		group-haze-siege
		choice( "Auf die Reise nach Kanada verzichten" )choice: group-haze-no
;

} }



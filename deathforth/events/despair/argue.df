uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa-choice: argue-rant-shutup
	($ Everyone .. "  racconta " .. cname .. "  per spegnerlo." $) cyoa-text!
	50 %chance if
		($ cHe .. " ' non lo prende bene e lascia il gruppo in un impeto d'ira." $) +crtext
		decruit-bad-silent-takeweapons morale++all
	else
		($ cHe .. "  diventa silenzioso dopo " .. everyone .. "  racconta " .. chim .. "  per smettere di parlare, ma " .. che .. " ' non ne e molto felice." $) +crtext
		morale-- cchar morale++all-except
	then
;

: argue-rant-ignore? args( vic ) 
	<- vic oblivious? if
		($ <- vic .colourname .. "  ignora " .. bhim .. "  sta benissimo." $) +crtext
		<- vic .witsREV <- vic .attitudeREV
	else
		<- vic .morale--
	then
;

cyoa-choice: argue-rant-ignore
	($ Everyone .. "  cerca di ignorare " .. cname .. ", ma " .. che .. "  continua ad andare avanti e avanti." $) cyoa-text! bully ' argue-rant-ignore? foreach-team-char-except
	($ bname .. "  continua a lamentarsi e finisce per sentirsi un po meglio." $) +crtext
	morale++
;

cyoa: argue-rant
	despair-start-victim!
	"Sfogo Gigante" cyoa-title!
	($ cname .. "  decide di sfogarsi facendo una sfuriata apparentemente infinita a " .. everyone .. "." $) cyoa-text! basic-tone
		choice( "Prova a ignorarlo" )choice: argue-rant-ignore
		choice( "Di " .. bname .. "  a stare zitto" )choice: argue-rant-shutup
		bully-charm?
		bully-sprayit?
	(* most-charming if	- GAVE UP ON THIS because it kept picking the bully and couldn't do a working alt
		charchoice( "  parla " .. bname .. "  giu" )choice: bully-charm
	then
	most-grating if
		charchoice( "': DILLO NON SPRUZZARLO" fcoolit )choice: bully-sprayit
	then *) 
;

cyoa-choice: argue-car-go
	($ vname .. "  e " .. cname .. "  continuano a litigare e alla fine tutti si sentono peggio." $) cyoa-text! morale--all badfx
;

cyoa-choice: argue-car-fast
	($ cname .. "  si agita per la discussione e guida sempre piu velocemente. La discussione finisce bruscamente quando " .. che .. "  investe accidentalmente un palo della bandiera." $) cyoa-text! -2 car-chassis+ bitefx
;

cyoa-choice: argue-car-stop
	($ "Il gruppo ferma la macchina e monta laccampamento vicino alla strada, cosi che " .. cname .. "  e " .. vname .. "  possa avere un po di spazio. Funziona, ma spreca un giorno." $) cyoa-text! +cr fullcamp heal-event 1 calendar-day+
;

cyoa-choice: argue-car-obliv
	($ cname .. "  sintonizza " .. bname .. " ' dopo un po' e sembra che la discussione non sia mai accaduta per " .. chim .. ".
	" .. bname .. "  diventa ancora meno felice." $) cyoa-text!
		bully .morale-- badfx
;

cyoa: argue-car
	despair-start-victim!
	"Discussione durante il viaggio in macchina" cyoa-title!
	($ "Mentre guida la macchina, " .. cname .. "  inizia una grande discussione con " .. vname .. "." $) cyoa-text! basic-tone
		choice( "Continua a guidare e discutere" )choice: argue-car-go
		choice( "Fai una pausa per un giorno" )choice: argue-car-stop
		bully-charm?
		bully-sprayit?
		victim oblivious? if
			victim charchoice( "  non sente " .. bname )choice: argue-car-obliv
		then	
		bully charchoice( "  guida piu velocemente" )choice: argue-car-fast		
;

cyoa: argue-insults
	despair-start-victim!
	"Bullismo" cyoa-title!
	($ cname .. "  scatta e inizia a urlare insulti a " .. vname .. "." $) cyoa-text! basic-tone
	victim .ctemper- if
		victim angrystrong? nonfatal and if
			($ vname .. "  risponde sferrando un pugno in faccia a " .. bname .. " " $) +crtext sting-- victim .strengthREV
		else
			($ vname .. "  urla di rimando e la situazione degenera in una violenta rissa." $) +crtext
		then
		morale2- victim .morale2- victim .temperREV
	then;
	victim charming? if
			($ vname .. "  mantiene la calma mentre viene insultato, ma alla fine " .. victim xhim .. "." $) +crtext morale++ victim .morale-- victim .witsREV victim .attitudeREV
	then;
	victim oblivious? if
		($ vname .. " ' stava pensando ad altro durante tutti gli insulti, e in realta non li ha sentiti." $) +crtext morale++ victim .witsREV victim .attitudeREV
	then;
	victim grating? if
			($ vname .. "  insulta " .. cname .. "  a sua volta, ma in modo molto piu efficace." $) +crtext morale2- victim .morale2+ victim .witsREV victim .attitudeREV
	then;
	victim paranoid? if
			($ vname .. "  ne risente molto, e progetta di vendicarsi in seguito." $) +crtext victim .loyalty-- victim .witsREV victim .attitudeREV
	then
	($ cname .. "  si sente leggermente meglio riguardo a " .. chim .. "se stesso." $) +crtext
	morale++ victim .morale2-
;

cyoa: group-haze-no
"La strada della morte" cyoa-title! soloer choosechar
($ "La squadra alla fine rinuncia. Si ritira verso un destino sconosciuto. Il viaggio in Canada e finito." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "DANNAZIONE" )choice: quit-to-title 
;

cyoa: group-haze
	"Litigio fatale" cyoa-title!
	despair-start!
	($ Thegroup .. " spends so much effort arguing with each other that they don't notice they've driven into the middle of an overwhelming sea of zombies. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		group-haze-siege
		choice( "Abbandona il viaggio in Canada" )choice: group-haze-no
;

} }



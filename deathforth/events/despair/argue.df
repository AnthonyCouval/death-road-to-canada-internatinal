uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa-choice: argue-rant-shutup
	($ Everyone .. "  conta " .. cname .. " para fechar lo." $) cyoa-text!
	50 %chance if
		($ cHe .. " 'nao se leva bem com isso e sai do grupo com uma toada." $) +crtext
		decruit-bad-silent-takeweapons morale++all
	else
		($ cHe .. " fica calmo apos " .. everyone .. "  conta " .. chim .. " para parar de falar, mas " .. che .. " 'Botao nao e muito feliz sobre isso" $) +crtext
		morale-- cchar morale++all-except
	then
;

: argue-rant-ignore? args( vic ) 
	<- vic oblivious? if
		($ <- vic .colourname .. " ignora " .. bhim .. " tudo bem." $) +crtext
		<- vic .witsREV <- vic .attitudeREV
	else
		<- vic .morale--
	then
;

cyoa-choice: argue-rant-ignore
	($ Everyone .. " tenta ignorar " .. cname .. "mas " .. che .. " continua e continua" $) cyoa-text! bully ' argue-rant-ignore? foreach-team-char-except
	($ bname .. " continua a resmungar, e acaba por se sentir um pouco melhor." $) +crtext
	morale++
;

cyoa: argue-rant
	despair-start-victim!
	"Desabafo Gigante" cyoa-title!
	($ cname .. "  decide desabafar entregando um discurso aparentemente interminavel para " .. everyone .. "." $) cyoa-text! basic-tone
		choice( "Tente ignorar" )choice: argue-rant-ignore
		choice( "Diga " .. bname .. "  para calar a boca" )choice: argue-rant-shutup
		bully-charm?
		bully-sprayit?
	(* most-charming if	- GAVE UP ON THIS because it kept picking the bully and couldn't do a working alt
		charchoice( "  fala " .. bname .. "  para baixo" )choice: bully-charm
	then
	most-grating if
		charchoice( "': DIGA NAO BORRIFFE" fcoolit )choice: bully-sprayit
	then *) 
;

cyoa-choice: argue-car-go
	($ vname .. "  e " .. cname .. "  continuam discutindo, e no final todos se sentem pior." $) cyoa-text! morale--all badfx
;

cyoa-choice: argue-car-fast
	($ cname .. "  fica agitado com a discussao e dirige cada vez mais rapido. A discussao termina abruptamente quando " .. che .. "  acidentalmente bate em um poste de bandeira." $) cyoa-text! -2 car-chassis+ bitefx
;

cyoa-choice: argue-car-stop
	($ "O grupo para o carro e monta acampamento perto da estrada, para que " .. cname .. "  e " .. vname .. "  possa ter algum espaco. Isso funciona, mas desperdica um dia." $) cyoa-text! +cr fullcamp heal-event 1 calendar-day+
;

cyoa-choice: argue-car-obliv
	($ cname .. "  sintoniza " .. bname .. " ' depois de um tempo, e e como se a discussao nunca tivesse acontecido para " .. chim .. ".
	" .. bname .. "  fica ainda menos feliz." $) cyoa-text!
		bully .morale-- badfx
;

cyoa: argue-car
	despair-start-victim!
	"Discussao durante viagem" cyoa-title!
	($ "Ao dirigir o carro, " .. cname .. "  entra em uma grande discussao com " .. vname .. "." $) cyoa-text! basic-tone
		choice( "Continue dirigindo e discutindo" )choice: argue-car-go
		choice( "Faca uma pausa por um dia" )choice: argue-car-stop
		bully-charm?
		bully-sprayit?
		victim oblivious? if
			victim charchoice( "  nao ouve " .. bname )choice: argue-car-obliv
		then	
		bully charchoice( "  dirige mais rapido" )choice: argue-car-fast		
;

cyoa: argue-insults
	despair-start-victim!
	"Intimidacao" cyoa-title!
	($ cname .. "  surta e comeca a gritar insultos para " .. vname .. "." $) cyoa-text! basic-tone
	victim .ctemper- if
		victim angrystrong? nonfatal and if
			($ vname .. "  responde socando " .. bname .. "  no rosto." $) +crtext sting-- victim .strengthREV
		else
			($ vname .. "  grita de volta e vira uma briga enorme." $) +crtext
		then
		morale2- victim .morale2- victim .temperREV
	then;
	victim charming? if
			($ vname .. "  permanece diplomatico enquanto e insultado, mas ainda assim chega a " .. victim xhim .. "." $) +crtext morale++ victim .morale-- victim .witsREV victim .attitudeREV
	then;
	victim oblivious? if
		($ vname .. " ' estava pensando em outra coisa durante todos os insultos, e realmente nao ouviu nenhum deles." $) +crtext morale++ victim .witsREV victim .attitudeREV
	then;
	victim grating? if
			($ vname .. " ofensas " .. cname .. " direita de volta, exceto muito mais eficazmente." $) +crtext morale2- victim .morale2+ victim .witsREV victim .attitudeREV
	then;
	victim paranoid? if
			($ vname .. "  esta muito ressentido com isso e planeja vinganca para mais tarde." $) +crtext victim .loyalty-- victim .witsREV victim .attitudeREV
	then
	($ cname .. "  sente se um pouco melhor sobre " .. chim .. "eu mesmo." $) +crtext
	morale++ victim .morale2-
;

cyoa: group-haze-no
"Saindo da Estrada da Morte" cyoa-title! soloer choosechar
($ "A equipe finalmente desiste. Eles se retiram para um destino desconhecido. A jornada para o Canada chegou ao fim." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "DROGA" )choice: quit-to-title 
;

cyoa: group-haze
	"Argumento Fatal" cyoa-title!
	despair-start!
	($ Thegroup .. " spends so much effort arguing with each other that they don't notice they've driven into the middle of an overwhelming sea of zombies. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		group-haze-siege
		choice( "Desista da jornada para o Canada" )choice: group-haze-no
;

} }



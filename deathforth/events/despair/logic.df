
events{ road{

: despair-start!
	// saddest to bully - Covered by road.df already
	bully choosechar cicon
;
	
: despair-start-victim!
	despair-start!
	notcchar to victim
;
	
} }

cyoa{ road{

cyoa-choice: card-UGH
	"VENEZ DES HAUT !" cyoa-text! ;

cyoa-choice: bully-kick
($ cname .. " est expulse du groupe au lieu de. " .. vname .. ".
" $) cyoa-text!
decruit-bad-silent-takeweapons 0.5 600 tone
40 %chance if
		($ vname .. " il sourire un peu." $) +text
		victim .morale++
else
	30 %chance if
		($ vname .. " echappement des shoulders." $) +text
	else
		($ Thegroup .. " se sent soulage " .. bhe .. "il est parti." $) +text
		bully ' .morale++ foreach-team-char-except
	then
then
;

cyoa-choice: bully-all-kick
team-count 2 = if	
	($ notcname .. " suggest que " .. cname .. " quitter, au lieu de... ." $) cyoa-text!
else
	($ Thegroup .. " des coups de pied " .. cname .. " sorti pour ne plus etre un dingue." $) cyoa-text!
then
70 %chance if
	($ cname .. " se jette a l'hotel avec une colere en bouillant." $) +text 0.5 600 tone
else
	($ cname .. " rentre dans la raideur, je n'en disais rien en ligne !" .. cHe .. " encore est expulse..." $) +text 3 300 tone
then
decruit-bad-silent-takeweapons 
40 %chance if
		($ notcname .. " il sourire un peu." $) +text
		notcchar .morale++
else
	30 %chance if
		($ notcname .. " echappement des shoulders." $) +text
	else
		($ Thegroup .. " se sent soulage " .. bhe .. "il est parti." $) +text
		bully ' .morale++ foreach-team-char-except
	then
then
;

cyoa-choice: victim-kick
($ cname .. " a ete exclu du groupe a cause de " .. bname .. ".
" $) cyoa-text!
($ bname .. " ressent beaucoup de satisfaction concernant cela." $)
+text bully .morale3+
decruit-bad-silent-takeweapons 0.5 600 tone
;

cyoa-choice: bully-charm
	($ cname .. " conduire dans des conditions meteorologiques defavorables " .. bname .. "." $) cyoa-text!
	charmroll if
		($ cname .. " convainc " .. bname .. " se reter. ils arrivent a une comprehension l'un de l'autre, pour le moment." $) cyoa-text! bully .morale++ morale++ goodfx
	else
		($ bname .. " se fait rage par " .. cname .. "essai de manipulation de " .. bully xhim .. "! " .. bully xHe .. " jette un coup de poing a " .. cname .. " et il s'eloigne dans la nuit en grondant." $)
		+crtext sting-- bully .weapons-to-trunk TEAM_STATUS_BAD_LEFT bully .decruit bitefx
	then
;

cyoa-choice: bully-sprayit
	($ cname .. " instructe : c'est une " .. bname .. " vers" .. " DIRE CELA, NE LE REPANDS PAS." pbold $) cyoa-text!
	cool-it-7 if
		($ bname .. " prends cela a la lettre. quand bien meme " .. bully xhe .. " etait toujours retenu par " .. bully xhis .. " une rupture emotionnelle survenant a larmes se produit. l'habitude de 'sprayer cela plutot que de le dire'?" $)
		+crtext bully .morale4+ morale4+ cooled-it goodfx
	else cool-it++
		($ bname .. " se lasse beaucoup de cela. " .. bully xhe .. " pas meme pour parler." $)
		+crtext bully .morale-- morale2+ badfx
	then
;

: bully-charm?
	victim charming? if
		victim charchoice( " poquer " .. bname .. " descendre" )choice: bully-charm
	then
;

: bully-sprayit?
	victim grating? if
		victim charchoice( ": DIRE PAS L'ARROSAGE" fcoolit )choice: bully-sprayit
	then
;

: haze-siege
	9 16 rnd 2 siegecast
	"events/siege/region/midopen1.df" $load-region
	choice( "Luttez contre l'armee de zombies" )choice: premission
;

cyoa: solo-haze-won
	"Revenons sur la route de la mort!" cyoa-title! someicon
	($	"Comment avez-vous pu survivre a cela ?. ." .. cname .. " obtient " .. "TOTALMENT A L'ETAT DE RESILIENCE" fbold $) cyoa-text!
			morale4+ goodfx
;

cyoa: group-haze-won
	"Revenons sur la route de la mort!" cyoa-title! someicon
	($	"Peut-etre ce equipe n'est pas si mauvaise apres tout !" .. Thegroup .. " obtient " .. "TOTALMENT A L'ETAT DE RESILIENCE" fbold $) cyoa-text!
			morale4+all goodfx
;

: solo-haze-siege mission{ ' solo-haze-won to post-mission-cyoa } 2 haze-siege ;
: group-haze-siege mission{ ' group-haze-won to post-mission-cyoa } 2.8 haze-siege ;
	
} }

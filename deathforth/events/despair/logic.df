
events{ road{

: despair-start!
	// saddest to bully - Covered by road.df already
	bully choosechar cicon
;
	
: despair-start-victim!
	despair-start!
	notcchar to victim
;
	
} }

cyoa{ road{

cyoa-choice: card-UGH
	"VAMOS" cyoa-text! ;

cyoa-choice: bully-kick
($ cname .. "  es expulsado del grupo en lugar de " .. vname .. ".
" $) cyoa-text!
decruit-bad-silent-takeweapons 0.5 600 tone
40 %chance if
		($ vname .. "  sonrie un poco." $) +text
		victim .morale++
else
	30 %chance if
		($ vname .. "  se encoge de hombros." $) +text
	else
		($ Thegroup .. "  se siente aliviado de que " .. bhe .. "'' se haya ido." $) +text
		bully ' .morale++ foreach-team-char-except
	then
then
;

cyoa-choice: bully-all-kick
team-count 2 = if	
	($ notcname .. "  recomienda que " .. cname .. "  se vaya, en su lugar." $) cyoa-text!
else
	($ Thegroup .. "  patea " .. cname .. " fuera por ser un dingus." $) cyoa-text!
then
70 %chance if
	($ cname .. " se va de la habitacion enfadado." $) +text 0.5 600 tone
else
	($ cname .. " ' dice algo como 'VAMOS SOLO ESTABA BROMEANDO JA JA'.	" .. cHe .. "  sigue siendo expulsado.	" $) +text 3 300 tone
then
decruit-bad-silent-takeweapons 
40 %chance if
		($ notcname .. "  sonrie un poco." $) +text
		notcchar .morale++
else
	30 %chance if
		($ notcname .. "  se encoge de hombros." $) +text
	else
		($ Thegroup .. "  se siente aliviado de que " .. bhe .. "'' se haya ido." $) +text
		bully ' .morale++ foreach-team-char-except
	then
then
;

cyoa-choice: victim-kick
($ cname .. "  fue expulsado del grupo debido a " .. bname .. ".
" $) cyoa-text!
($ bname .. "  se siente bastante satisfecho por esto." $)
+text bully .morale3+
decruit-bad-silent-takeweapons 0.5 600 tone
;

cyoa-choice: bully-charm
	($ cname .. "  intenta razonar con " .. bname .. "." $) cyoa-text!
	charmroll if
		($ cname .. "  convence " .. bname .. "  para que se calme. Llegan a un entendimiento mutuo, por ahora." $) cyoa-text! bully .morale++ morale++ goodfx
	else
		($ bname .. "  esta enfurecido por " .. cname .. "' intento de manipular " .. bully xhim .. "! " .. bully xHe .. "  lanza un punetazo a " .. cname .. "  y se aleja pisando fuerte en la noche." $)
		+crtext sting-- bully .weapons-to-trunk TEAM_STATUS_BAD_LEFT bully .decruit bitefx
	then
;

cyoa-choice: bully-sprayit
	($ cname .. "  cuenta " .. bname .. "  a" .. " ' DILO, NO LO ROCIES." pbold $) cyoa-text!
	cool-it-7 if
		($ bname .. "  toma este consejo en serio. Y si " .. bully xhe .. "  siempre fue retenido por " .. bully xhis .. " eso es Eso es Eso es" $)
		+crtext bully .morale4+ morale4+ cooled-it goodfx
	else cool-it++
		($ bname .. " se enoja tanto por esto que " .. bully xhe .. " ' no puede ni hablar." $)
		+crtext bully .morale-- morale2+ badfx
	then
;

: bully-charm?
	victim charming? if
		victim charchoice( "  habla " .. bname .. "  abajo" )choice: bully-charm
	then
;

: bully-sprayit?
	victim grating? if
		victim charchoice( "': DILO NO LO ROCIES" fcoolit )choice: bully-sprayit
	then
;

: haze-siege
	9 16 rnd 2 siegecast
	"events/siege/region/midopen1.df" $load-region
	choice( "Lucha contra el ejercito de zombis" )choice: premission
;

cyoa: solo-haze-won
	"De vuelta en el camino de la muerte!" cyoa-title! someicon
	($	"Como diablos sobreviviste a eso?		" .. cname .. "  consigue " .. "COMPLETAMENTE BOMBADO" fbold $) cyoa-text!
			morale4+ goodfx
;

cyoa: group-haze-won
	"De vuelta en el camino de la muerte!" cyoa-title! someicon
	($	"'Quizas este equipo no sea tan malo despues de todo!		" .. Thegroup .. "  consigue " .. "COMPLETAMENTE BOMBADO" fbold $) cyoa-text!
			morale4+all goodfx
;

: solo-haze-siege mission{ ' solo-haze-won to post-mission-cyoa } 2 haze-siege ;
: group-haze-siege mission{ ' group-haze-won to post-mission-cyoa } 2.8 haze-siege ;
	
} }

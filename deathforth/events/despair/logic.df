
events{ road{

: despair-start!
	// saddest to bully - Covered by road.df already
	bully choosechar cicon
;
	
: despair-start-victim!
	despair-start!
	notcchar to victim
;
	
} }

cyoa{ road{

cyoa-choice: card-UGH
	"'KOMM" cyoa-text! ;

cyoa-choice: bully-kick
($ cname .. " 'wird statt dessen aus der Gruppe geworfen " .. vname .. ".
" $) cyoa-text!
decruit-bad-silent-takeweapons 0.5 600 tone
40 %chance if
		($ vname .. " 'lachelt ein wenig." $) +text
		victim .morale++
else
	30 %chance if
		($ vname .. " 'zuckt mit den Schultern." $) +text
	else
		($ Thegroup .. " 'fuhlt eine Erleichterung, da " .. bhe .. "'weg ist." $) +text
		bully ' .morale++ foreach-team-char-except
	then
then
;

cyoa-choice: bully-all-kick
team-count 2 = if	
	($ notcname .. " 'empfiehlt, dass sich " .. cname .. " 'verabschiedet, statt dessen." $) cyoa-text!
else
	($ Thegroup .. " 'wirft raus " .. cname .. " 'wegen Narrheit." $) cyoa-text!
then
70 %chance if
	($ cname .. " 'sturmt wutend davon." $) +text 0.5 600 tone
else
	($ cname .. " 'sagt etwa so: KOMMT ALLE WAS, ICH WAR DOCH NUR SCHERZHAFT." .. cHe .. " 'wird trotzdem aus der Gruppe geworfen." $) +text 3 300 tone
then
decruit-bad-silent-takeweapons 
40 %chance if
		($ notcname .. " 'lachelt ein wenig." $) +text
		notcchar .morale++
else
	30 %chance if
		($ notcname .. " 'zuckt mit den Schultern." $) +text
	else
		($ Thegroup .. " 'fuhlt eine Erleichterung, da " .. bhe .. "'weg ist." $) +text
		bully ' .morale++ foreach-team-char-except
	then
then
;

cyoa-choice: victim-kick
($ cname .. " 'wurde aufgrund von aus der Gruppe geworfen: ... " .. bname .. ".
" $) cyoa-text!
($ bname .. " " $)
+text bully .morale3+
decruit-bad-silent-takeweapons 0.5 600 tone
;

cyoa-choice: bully-charm
	($ cname .. " ' versucht sich mit ', " .. bname .. "." $) cyoa-text!
	charmroll if
		($ cname .. " ' uberredet ', " .. bname .. " ' um sich beruhigen zu konnen. Sie finden einvernehmlich miteinander zusammen, fur den Moment." $) cyoa-text! bully .morale++ morale++ goodfx
	else
		($ bname .. " ' ist wutend auf ', " .. cname .. "'' Versuch, ', " .. bully xhim .. "! " .. bully xHe .. " ' schlagt ihn und geht in die Nacht hinein.', " .. cname .. " ' und zerbricht in Tranen." $)
		+crtext sting-- bully .weapons-to-trunk TEAM_STATUS_BAD_LEFT bully .decruit bitefx
	then
;

cyoa-choice: bully-sprayit
	($ cname .. " " .. bname .. " zu" .. " ' SAG ES, LASS ES NICHT SPRAYEN." pbold $) cyoa-text!
	cool-it-7 if
		($ bname .. " ' nimmt dieses Ratgeber zum Herzen. Was wenn ', " .. bully xhe .. " ' immer von dieser ', " .. bully xhis .. " ' Gewohnheit zuruckgehalten wurde, das hei√üt Sprayen statt Sagen? Ein emotionaler Durchbruch passiert." $)
		+crtext bully .morale4+ morale4+ cooled-it goodfx
	else cool-it++
		($ bname .. " ' wird so wutend daruber, dass " .. bully xhe .. " kann nicht einmal sprechen." $)
		+crtext bully .morale-- morale2+ badfx
	then
;

: bully-charm?
	victim charming? if
		victim charchoice( "  spricht " .. bname .. " " )choice: bully-charm
	then
;

: bully-sprayit?
	victim grating? if
		victim charchoice( "': SAG ES NICHT, SPRITZE ES NICHT" fcoolit )choice: bully-sprayit
	then
;

: haze-siege
	9 16 rnd 2 siegecast
	"events/siege/region/midopen1.df" $load-region
	choice( "'Armee der Zombies kampfen" )choice: premission
;

cyoa: solo-haze-won
	"'Auf dem Todesweg zuruck!" cyoa-title! someicon
	($	"'Wie im Teufel hast du das uberlebt?		" .. cname .. " " .. "'VOLLIG AUFGEPUMPET" fbold $) cyoa-text!
			morale4+ goodfx
;

cyoa: group-haze-won
	"'Auf dem Todesweg zuruck!" cyoa-title! someicon
	($	"'Vielleicht ist dieses Team nicht so schlecht nach allen!		" .. Thegroup .. " " .. "'VOLLIG AUFGEPUMPET" fbold $) cyoa-text!
			morale4+all goodfx
;

: solo-haze-siege mission{ ' solo-haze-won to post-mission-cyoa } 2 haze-siege ;
: group-haze-siege mission{ ' group-haze-won to post-mission-cyoa } 2.8 haze-siege ;
	
} }

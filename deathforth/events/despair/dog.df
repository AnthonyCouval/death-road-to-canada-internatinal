uses base.df
uses charfilt.df
uses charstats.df
uses road.df

// Covers dogs but also other pets. Non-dog pets are rare enough where they really don't need their own despair events.

cyoa{ road{

cyoa: dog-lost
	"Perdido no Desespero" cyoa-title!
	despair-start!
	($ cname .. "  perdeu toda a fe em " .. chis .. "  pacote. " .. cHe .. "  sentase e simplesmente se recusa a continuar a jornada." $) cyoa-text! badfx
		
	notsolo ccat? and if
		notcchar to victim
		($ cname .. " decide para atacar " .. vname .. " de forma rapida antes de se renderizar. " .. "Uma para o caminho.	" rbold $) +crtext
		victim .ouch2- bitefx
	then
	
	decruit-bad-silent-takeweapons
;
	
cyoa: dog-attack
	despair-start-victim!
	($ cDogcat .. " Ataca" $) cyoa-title!
	($ cname .. " quebra, parecendo de repente, e ataca " .. vname .. " em uma rapida sucessao de " .. csnarlhiss .. "golpes e gritos " .. cteethclaws .. "." $) cyoa-text! 
	cdog? if 
		victim .ouch2- 
	else 
		ccat? if
			victim .kill
		else
			victim .ouch-- 
		then
	then bitefx
	ccat? if
		($ "O " .. cdogcat .. " 'nao parece culpado por este assassinato. Em vez disso, " .. che .. " parece muito feliz com " .. chim .. "si mesmo.		" $) +crtext
		morale4+
	else	
		($ "Percebendo o que " .. che .. " fez, o " .. cdogcat .. " fugiu e nunca voltou." $) +crtext
		decruit-bad-silent-takeweapons
	then	
;

cyoa: dog-tantrum
	despair-start!
	($ cDogcat .. "  Raiva" $) cyoa-title!
	($ cname .. "  tem um grande acesso de raiva. " .. cHe .. "  bufa e salta em um lugar. Depois de terminar rasgando um pouco de grama e mijando desafiadoramente, " .. che .. "  se sente um pouco melhor." $) cyoa-text! goodfx
	morale++
	notsolo if
		ccat? if
			($ "Durante a birra, " .. cname .. "  aproveitou a oportunidade para mutilar " .. everyone .. "." $) +crtext
			cchar ' .sting-- foreach-team-char-except bitefx
		else
			($ "Essas palhacadas foram divertidas de assistir." $) +crtext
			cchar ' .morale++ foreach-team-char-except
		then
	then
;

} }



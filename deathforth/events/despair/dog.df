uses base.df
uses charfilt.df
uses charstats.df
uses road.df

// Covers dogs but also other pets. Non-dog pets are rare enough where they really don't need their own despair events.

cyoa{ road{

cyoa: dog-lost
	"Jusqu'a 8 charges !" cyoa-title!
	despair-start!
	($ cname .. " a perdu toute foi en " .. chis .. " aucun espoir " .. cHe .. " se siege et simplement refuse de continuer le voyage." $) cyoa-text! badfx
		
	notsolo ccat? and if
		notcchar to victim
		($ cname .. " se decide a abimer " .. vname .. " avant de se rendre definitivement, essayez rapidement. " .. "Une pour la route." rbold $) +crtext
		victim .ouch2- bitefx
	then
	
	decruit-bad-silent-takeweapons
;
	
cyoa: dog-attack
	despair-start-victim!
	($ cDogcat .. " Attaquez !" $) cyoa-title!
	($ cname .. " les cris, apparaissant soudainement, et dechiquete " .. vname .. " une tempete de : " .. csnarlhiss .. "instruisons et " .. cteethclaws .. "." $) cyoa-text! 
	cdog? if 
		victim .ouch2- 
	else 
		ccat? if
			victim .kill
		else
			victim .ouch-- 
		then
	then bitefx
	ccat? if
		($ "Le " .. cdogcat .. " il ne semble pas coupable de ce meurtre en realite. " .. che .. " est tres heureux de " .. chim .. "soi-meme ." $) +crtext
		morale4+
	else	
		($ "Realisant ce qui " .. che .. " faites, le ... " .. cdogcat .. " s'enfuit et ne revient jamais." $) +crtext
		decruit-bad-silent-takeweapons
	then	
;

cyoa: dog-tantrum
	despair-start!
	($ cDogcat .. " Reglement de compte" $) cyoa-title!
	($ cname .. " jette un grand elan de colere. " .. cHe .. " s'agit d'un animal qui ricane et bondit sur place. a la fin, il arrache de la herbe et urine defiamente. " .. che .. " se sent un peu mieux." $) cyoa-text! goodfx
	morale++
	notsolo if
		ccat? if
			($ "Durant la colere, " .. cname .. " pris la chance de blesser gravement " .. everyone .. "." $) +crtext
			cchar ' .sting-- foreach-team-char-except bitefx
		else
			($ "Ces manigances etaient amusantes a regarder." $) +crtext
			cchar ' .morale++ foreach-team-char-except
		then
	then
;

} }



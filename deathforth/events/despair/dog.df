uses base.df
uses charfilt.df
uses charstats.df
uses road.df

// Covers dogs but also other pets. Non-dog pets are rare enough where they really don't need their own despair events.

cyoa{ road{

cyoa: dog-lost
	"Verloren in Verzweiflung" cyoa-title!
	despair-start!
	($ cname .. " hat jeglichen Glauben an verloren " .. chis .. "  packt. " .. cHe .. "  setzt sich hin und weigert sich einfach die Reise fortzusetzen." $) cyoa-text! badfx
		
	notsolo ccat? and if
		notcchar to victim
		($ cname .. "  beschliet " .. vname .. "  ganz schnell bevor " .. "Ein Absacker." rbold $) +crtext
		victim .ouch2- bitefx
	then
	
	decruit-bad-silent-takeweapons
;
	
cyoa: dog-attack
	despair-start-victim!
	($ cDogcat .. "  Angriff" $) cyoa-title!
	($ cname .. "  schnappt scheinbar aus dem Nichts zu und zerfleischt " .. vname .. "  in einer Flut von " .. csnarlhiss .. "und " .. cteethclaws .. "." $) cyoa-text! 
	cdog? if 
		victim .ouch2- 
	else 
		ccat? if
			victim .kill
		else
			victim .ouch-- 
		then
	then bitefx
	ccat? if
		($ "Der " .. cdogcat .. " ' scheint sich wegen dieses Mordes nicht schuldig zu fuhlen. Tatsachlich " .. che .. "  scheint sehr zufrieden mit " .. chim .. "selbst.		" $) +crtext
		morale4+
	else	
		($ "Als " .. che .. "  tat, die " .. cdogcat .. " flieht und kehrt nie wieder zuruck." $) +crtext
		decruit-bad-silent-takeweapons
	then	
;

cyoa: dog-tantrum
	despair-start!
	($ cDogcat .. " Wutanfall" $) cyoa-title!
	($ cname .. " throws a fit. " .. cHe .. " im the boss here " .. che .. "  fuhlt sich ein wenig besser." $) cyoa-text! goodfx
	morale++
	notsolo if
		ccat? if
			($ "Wahrend des Wutanfalls, " .. cname .. "  nutzte die Gelegenheit um zu verstummeln " .. everyone .. "." $) +crtext
			cchar ' .sting-- foreach-team-char-except bitefx
		else
			($ "Diese Possen waren amusant anzusehen." $) +crtext
			cchar ' .morale++ foreach-team-char-except
		then
	then
;

} }




cyoa{

cyoa: despair-oblivious 
	road{ despair-start! }
	($ cname .. "'s " .. "PODERES INCREIBLES DE PENSAMIENTO POSITIVO" rbold .. " 'se activan, protegiendo " .. chim .. " 'de las horrores de la realidad." $) cyoa-text!
	cchar .attitude 5 > if "En realidad, las cosas no van mal aqui!" +crtext then
	cchar .attitude 5 = if "Bueno, las cosas podrian ser peor, supongo!" +crtext then
	morale4+
	($ cHe .. " 'gana fuerza de la esperanza!" $) +crtext
	strength++ shooting++
	cchar .attitude 5 = if ($ cname .. "su espiritu comienza a fracturarse! " .. cHe .. " 'tal vez no sera tan suerte la proxima vez!" $) +crtext then
	witsattREV attitude-- goodfx
;

cyoa: despair-superdog
	"La Carretera de la Muerte Continua" cyoa-title!
	bully .notchoosechar
	bully character# cyoa-char-icon!
	($ bname .. " 'disculpa a " .. cname .. "." $) text!
	bully notpet? if
		($ "I can't go on the Death Road any more! Just remember everything I taught you!
			You can do it, I believe in you!" pbold $)
	else
		($ bname .. " " .. bully barkmeow .. "su forma de inspirar, en una manera muy inspiradora.	El reino esta siendo pasado, a " .. cname .. "!" $)	
	then +crtext
	($ cname .. "  obtiene las llaves, las pone en el encendido del coche, y lo arranca. Adelante a Canada!" $) +crtext
	ccat? not if
		morale3+ strength++ fitness++
	else
		($ cHe .. " 'Conduce por la Ciudad, Por Todas Partes" $) cyoa-title!
		($ cHe .. " 'nunca escucho una sola cosa " .. bname .. " 'dijo. " .. cname .. " 'conduce lentamente unos pocos kilometros por la carretera, pero luego conduce el coche directamente sobre un acantilado." $) +crtext
		cchar .kill
		clear-streak delete-the-game
		choice( "LOS GATOS NO ESCUCHAN" )choice: quit-to-title
		exit
	then
	bully .weapons-to-trunk
	TEAM_STATUS_GOOD_LEFT bully .decruit cchar .dogtosuperdog goodfx
;

}


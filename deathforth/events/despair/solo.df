uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: solo-haze-no
" Conduciendo por la Carretera de la Muerte" cyoa-title! soloer choosechar
($ cname .. "  finalmente se rinde. " .. cHe .. "  se retira a un destino desconocido. El viaje a Canada ha llegado a su fin." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "MALA SUERTE" )choice: quit-to-title 
;

cyoa: solo-haze
	"Niebla de la desesperacion" cyoa-title!
	despair-start!
	($ cname .. ", en una nube de desesperacion, deja de prestar atencion mientras conduce. " .. cHe .. "  termina en medio de una horda masiva que " .. che .. " could have avoided. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		solo-haze-siege
		choice( "Abandonar el viaje a Canada" )choice: solo-haze-no
;

cyoa: solo-drive
	"Desesperacion en la carretera" cyoa-title!
	despair-start!
	($ "Con " .. chis .. "  mente nublada por la soledad y la baja moral, " .. cname .. "  termina chocando el coche." $) cyoa-text! bitefx -2 -3 rnd car-chassis+ sting--
	car-chassis 0 > if
		($ cname .. "  se alivia cuando el coche vuelve a arrancar!" $) +crtext morale++
	then
;
	
cyoa: solo-strength
	despair-start!
	"Perdiendo fuerza" cyoa-title!
	($ "La desesperacion y el aislamiento hacen que " .. cname .. "  empiece a perder fuerza." $) cyoa-text! badfx
		strength--
;

cyoa: solo-wasting
	despair-start!
	"Desperdiciando" cyoa-title!
	($ cname .. "'el cuerpo de se ve afectado por el estres de esta situacion desesperada." $) cyoa-text! badfx
		strength-- fitness--
;

cyoa: solo-skill
	despair-start!
	"Manos temblorosas" cyoa-title!
	($ cname .. ", bajo una intensa presion, empieza a tener las manos temblorosas por el estres." $) cyoa-text! badfx
		medical-- shooting-- mechanic--
;

cyoa: solo-leg
	despair-start!
	"Mordisco de pierna" cyoa-title!
	($ "Distraido y solo, " .. cname .. "  es atrapado por un zombi que se arrastra mientras deambula por una ciudad en ruinas." .. cHe .. "  escapa, pero " .. chis .. "  la pierna nunca vuelve a ser la misma." $) cyoa-text! bitefx
		fitness-- sting--
;

cyoa: solo-bitter
	despair-start!
	"Amargura" cyoa-title!
	($ "Vagando solo, " .. cname .. "  se detiene en el pasado. " .. cHe .. "  se vuelve amargo en " .. chis .. "  aislamiento." $) cyoa-text! badfx
		loyalty-- attitude--
;

cyoa: solo-anger
	despair-start!
	"Rabieta invisible" cyoa-title!
	($ cname .. "  accidentalmente golpea " .. chis .. "  mano en la puerta del auto. Enojado, " .. che .. "  sale y patea una llanta, golpeandose " .. chis .. "  dedo del pie. Esto hace " .. chim .. " PERDER LOS ESTRIBOS." rbold $) cyoa-text! bitefx
		temper-- sting-- -1 car-chassis+
;

cyoa: solo-mindrot
	despair-start!
	"Aburrimiento Aplastante" cyoa-title!
	($ "Sin nadie con quien interactuar " .. cname .. " se aburre muchisimo " .. cHe .. "  siente " .. chis .. "  energia y conciencia se escapan." $) cyoa-text! badfx
		wits-- nosleep
		($ cname .. "  se cansa!" pbold $) +crtext
;

} }



uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: solo-haze-no
"La strada della morte" cyoa-title! soloer choosechar
($ cname .. " alla fine si arrende. " .. cHe .. " si ritira verso un destino sconosciuto. Il viaggio in Canada e finito." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "DANNAZIONE" )choice: quit-to-title 
;

cyoa: solo-haze
	"Nebbia della disperazione" cyoa-title!
	despair-start!
	($ cname .. ", in unaura di disperazione, smette di prestare attenzione mentre guida. " .. cHe .. " finisce in mezzo a unenorme orda che " .. che .. " could have avoided. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		solo-haze-siege
		choice( "Abbandona il viaggio in Canada" )choice: solo-haze-no
;

cyoa: solo-drive
	"Disperazione stradale" cyoa-title!
	despair-start!
	($ "Con " .. chis .. " la mente annebbiata dalla solitudine e dal morale basso, " .. cname .. " finisce per schiantare la macchina." $) cyoa-text! bitefx -2 -3 rnd car-chassis+ sting--
	car-chassis 0 > if
		($ cname .. "  e sollevato quando la macchina riparte!" $) +crtext morale++
	then
;
	
cyoa: solo-strength
	despair-start!
	"Perdita di forza" cyoa-title!
	($ "La disperazione e lisolamento fanno " .. cname .. "  inizia a perdere forza." $) cyoa-text! badfx
		strength--
;

cyoa: solo-wasting
	despair-start!
	"Deperimento" cyoa-title!
	($ cname .. "'il corpo di e affetto dallo stress di questa situazione senza speranza." $) cyoa-text! badfx
		strength-- fitness--
;

cyoa: solo-skill
	despair-start!
	"Mani tremanti" cyoa-title!
	($ cname .. ", sotto unintensa pressione, inizia ad avere le mani tremanti dallo stress." $) cyoa-text! badfx
		medical-- shooting-- mechanic--
;

cyoa: solo-leg
	despair-start!
	"Morso alla gamba" cyoa-title!
	($ "Distratto e solo, " .. cname .. "  viene catturato da uno zombie strisciante mentre vaga in una citta in rovina." .. cHe .. "  scappa, ma " .. chis .. "  la gamba non e piu la stessa." $) cyoa-text! bitefx
		fitness-- sting--
;

cyoa: solo-bitter
	despair-start!
	"Amarezza" cyoa-title!
	($ "Vagando da solo, " .. cname .. " vive nel passato. " .. cHe .. "  diventa amaro in " .. chis .. "  isolamento." $) cyoa-text! badfx
		loyalty-- attitude--
;

cyoa: solo-anger
	despair-start!
	"Unseen Tantrum" cyoa-title!
	($ cname .. "  sbatte accidentalmente " .. chis .. "  la mano nella portiera della macchina. In preda alla rabbia, " .. che .. "  esce e prende a calci una gomma, pestandosi " .. chis .. "  il dito del piede. Questo fa " .. chim .. "  SCOPPIARE." rbold $) cyoa-text! bitefx
		temper-- sting-- -1 car-chassis+
;

cyoa: solo-mindrot
	despair-start!
	"Crushing Boredom" cyoa-title!
	($ "Senza nessuno con cui interagire, " .. cname .. "  diventa estremamente annoiato. " .. cHe .. "  sente " .. chis .. "  energia e consapevolezza che scivolano via." $) cyoa-text! badfx
		wits-- nosleep
		($ cname .. "  diventa stanco!" pbold $) +crtext
;

} }



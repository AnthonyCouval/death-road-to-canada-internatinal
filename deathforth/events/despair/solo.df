uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: solo-haze-no
"'Der Weg des Todes abseits fahren" cyoa-title! soloer choosechar
($ cname .. " 'gibt schließlich auf. " .. cHe .. " 'zieht sich in ein unbekanntes Schicksal zuruck. Die Reise nach Kanada ist zu Ende." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "'Verdammt!" )choice: quit-to-title 
;

cyoa: solo-haze
	"'Dunst der Verzweiflung" cyoa-title!
	despair-start!
	($ cname .. "', in einem Dunst der Verzweiflung, hort auf, sich beim Fahren zu konzentrieren. " .. cHe .. " 'endet mitten in einem riesigen Schwarm, der " .. che .. " could have avoided. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		solo-haze-siege
		choice( "'Auf der Reise nach Kanada aufgeben" )choice: solo-haze-no
;

cyoa: solo-drive
	"'Straße der Verzweiflung" cyoa-title!
	despair-start!
	($ "1, Without = 0 " .. chis .. " 'Mind vernebelter durch Einsamkeit und niedrige Moral, " .. cname .. " 'sturzt das Auto um." $) cyoa-text! bitefx -2 -3 rnd car-chassis+ sting--
	car-chassis 0 > if
		($ cname .. " 'ist erleichtert, als das Auto wieder aufgeht!" $) +crtext morale++
	then
;
	
cyoa: solo-strength
	despair-start!
	"'Verlierender Kraft" cyoa-title!
	($ "'die Verzweiflung und die Einsamkeit machen " .. cname .. " 'beginnen, an Kraft zu verlieren." $) cyoa-text! badfx
		strength--
;

cyoa: solo-wasting
	despair-start!
	"'vergeudend weggehen" cyoa-title!
	($ cname .. "s Korper ist von der Belastung dieser hoffnungslosen Situation betroffen." $) cyoa-text! badfx
		strength-- fitness--
;

cyoa: solo-skill
	despair-start!
	"Zittrige Hande" cyoa-title!
	($ cname .. "'unter intensivem Druck, beginnt, zittrige Hande vom Stress zu bekommen.'" $) cyoa-text! badfx
		medical-- shooting-- mechanic--
;

cyoa: solo-leg
	despair-start!
	"Beinbiss" cyoa-title!
	($ "Abgelenkt und allein, " .. cname .. "  is caught by a crawling zombie while wandering a ruined town." .. cHe .. " 0 " .. chis .. " das Bein ist nie ganz dasselbe." $) cyoa-text! bitefx
		fitness-- sting--
;

cyoa: solo-bitter
	despair-start!
	"Bitterkeit" cyoa-title!
	($ "'Allein umherwandernd' " .. cname .. "  lebt in der Vergangenheit. " .. cHe .. "  wird bitter in " .. chis .. " " $) cyoa-text! badfx
		loyalty-- attitude--
;

cyoa: solo-anger
	despair-start!
	"Unbekannter Wutanfall" cyoa-title!
	($ cname .. " versehentlich zuschlagt " .. chis .. " 'I'll give you a hand in the car door!' " .. che .. " 'tritt vor die Tur und tritt gegen ein Rad, dabei stoßt er sich den " .. chis .. " 'Zeh. " .. chim .. " 'VERLIERT DEN VERSTAND." rbold $) cyoa-text! bitefx
		temper-- sting-- -1 car-chassis+
;

cyoa: solo-mindrot
	despair-start!
	"'Langeweile" cyoa-title!
	($ "'Mit niemandem zum Interagieren, " .. cname .. " 'wird unglaublich langweilig. " .. cHe .. " 'fuhlt " .. chis .. " 'Energie und Bewusstsein schwinden." $) cyoa-text! badfx
		wits-- nosleep
		($ cname .. " 'wird mude !" pbold $) +crtext
;

} }



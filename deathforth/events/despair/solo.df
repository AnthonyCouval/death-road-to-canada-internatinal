uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: solo-haze-no
"Conduzindo a Estrada da Morte" cyoa-title! soloer choosechar
($ cname .. " se retirou para um destino desconhecido.O viagem para o Canada acabou. " .. cHe .. "  se retira para um destino desconhecido. A jornada para o Canada chegou ao fim." $) cyoa-text! 0 cyoa-image-icon! 1 500 tone
	clear-streak delete-the-game
	choice( "MALHADO!" )choice: quit-to-title 
;

cyoa: solo-haze
	"Nevoa do Desespero" cyoa-title!
	despair-start!
	($ cname .. ", em meio a uma nevoa de desespero, para de prestar atencao enquanto dirige. " .. cHe .. " acaba no meio de uma enorme horda que " .. che .. " could have avoided. A building is nearby, but it seems hopeless..." $) cyoa-text! badfx
		solo-haze-siege
		choice( "Desista da jornada para o Canada" )choice: solo-haze-no
;

cyoa: solo-drive
	"Desespero na Estrada" cyoa-title!
	despair-start!
	($ "Com " .. chis .. " mente nublada pela solidao e moral baixo, " .. cname .. " acaba batendo o carro." $) cyoa-text! bitefx -2 -3 rnd car-chassis+ sting--
	car-chassis 0 > if
		($ cname .. " fica aliviado quando o carro liga novamente!" $) +crtext morale++
	then
;
	
cyoa: solo-strength
	despair-start!
	"Perdendo Forca" cyoa-title!
	($ "O desespero e o isolamento fazem " .. cname .. " comecar a perder forca." $) cyoa-text! badfx
		strength--
;

cyoa: solo-wasting
	despair-start!
	"Desperdicando" cyoa-title!
	($ cname .. "'o corpo e afetado pelo estresse dessa situacao desesperadora." $) cyoa-text! badfx
		strength-- fitness--
;

cyoa: solo-skill
	despair-start!
	"Maos Tremulas" cyoa-title!
	($ cname .. ", sob intensa pressao, comeca a ter maos tremulas devido ao estresse." $) cyoa-text! badfx
		medical-- shooting-- mechanic--
;

cyoa: solo-leg
	despair-start!
	"Mordida na Perna" cyoa-title!
	($ "Distraido e sozinho, , " .. cname .. " e pegue por um zumbi que se arrasta pela cidade ruina.	" .. cHe .. " se escapa, mas , " .. chis .. " perna nunca e quite a mesma." $) cyoa-text! bitefx
		fitness-- sting--
;

cyoa: solo-bitter
	despair-start!
	"Amargura" cyoa-title!
	($ "Andando sozinho, , " .. cname .. " se preocupa com o passado. " .. cHe .. " se torna amargo em " .. chis .. " isolamento." $) cyoa-text! badfx
		loyalty-- attitude--
;

cyoa: solo-anger
	despair-start!
	"Tantrum Desconhecido" cyoa-title!
	($ cname .. " acidentalmente fecha a mao na porta do carro. Em raiva " .. chis .. " sai e chuta uma roda, estampando , " .. che .. "  'sai e chuta o pneu, tropecando' " .. chis .. "  dedo do pe. Isto faz " .. chim .. "  BATER NO TETO." rbold $) cyoa-text! bitefx
		temper-- sting-- -1 car-chassis+
;

cyoa: solo-mindrot
	despair-start!
	" Tedio Esmagador" cyoa-title!
	($ " Sem ninguem para interagir, " .. cname .. "  fica extremamente entediado. " .. cHe .. "  sente " .. chis .. "  energia e consciencia escorregando para longe." $) cyoa-text! badfx
		wits-- nosleep
		($ cname .. "  fica cansado!" pbold $) +crtext
;

} }



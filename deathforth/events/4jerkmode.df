uses paul/region-layout.df

""
value OPPMODEROOMS
OPPMODEROOMS $parse-rooms

cyoa{

0 value OPP-recruit-count

cyoa: opp-recruit-yes2
	team-full? if
		($ "'Sie mussen jemanden zurucklassen, damit der Platz frei ist. Wer mochten Sie ersetzen? " .. rname .. "?" $) cyoa-text!
		' recruit-replace cyoa-team-choice
	then;
	ricon
	($ "'Sie scheinen Ihnen so cool" $) cyoa-text! 2 300 tone
		recruited
;

cyoa: opp-recruit-yes
	clear-cyoa 0.25 recruitee .ai.wander_chance! 0 nearest .unseen!
	opp-recruit-yes2
	' OPP-recruit-count ++
	recruitee .name@ "'Link" $= if road{ 1 2 rnd to lnk-countdown } then;
	recruitee .name@ "'Haare ! ', " $= if road{ 6 8 rnd to ninja-countdown } then;
	recruitee .name@ "???" $= if road{ 2 3 rnd to mason-countdown 1 to mason-curse } then;
	recruitee .name@ "'Ende der Demonstration." $= if road{ 4 6 rnd to knight-countdown } then;
	recruitee .name@ "'Eine kleine Madchen, die wie eine Anime aussieht." $= if road{ 2 to anime-countdown } then;
;

: OPP-recruit-left 4 OPP-recruit-count - rbold ;

cyoa: opp-recruit
	nearest .character@ choosechar cchar to recruitee ricon
	($ "'ICH BIN FREUDE DAS IHR EHRLICHE HERR SALUTIEREN. DIE Ehre ist Ihrer." .. rname $) text!
	
	recruitee .specialmode@ 0 > if
		"'WARNUNG: VERY UNSATISFYING" fbold +crtext
		recruitee .specialtype@ 1 = if
			"'MECHANOUNTIE IS VERY ENCOURAGED TO RESPOND ! USE THIS FACT DURING YOUR OWN RISKS." rbold +crtext
		then
	then
	
	OPP-recruit-count 3 > if ($ "'Sie haben zu viele uberdurchschnittlich intelligente Personen angestellt! Ich werde Ihnen die Hand abschneiden.', " bbold $) +crtext then;
	($ "'Sie konnen rekrutieren.', " bbold .. OPP-recruit-left .. " 'Mehr Figuren, mehr machtig!" bbold $) +crtext
	choice( "'Gehen Sie." .. rname .. "  At this stage, nothing should be done." )choice
	choice( "'Es fehlen Informationen, um eine prazise Antwort zu geben. Die Anweisungen konnen je nach Kontext variieren. Zum Beispiel konnen die Anweisungen in einem Videospiel" .. rname .. " ' um beizutreten, verwenden Sie bitte die folgenden Koordinaten: " )choice: opp-recruit-yes	
;

}

: opp-familiar-last lt .character@ args( ch )
	regiondef{ ' trader-event lt .events!
	1 lt .timer!

	camprecruit-drawpair-familiar }
	lt .cyoa! <- ch swap execute

;

: opp-camper
	regiondef{ new-camp-npc } lt .character@ args( ch )
	185 rnd5050 + lt .aim_angle!
	0.025 <- ch .ai.wander_chance!
	50 <- ch .ai.safety_leash!
	
;

: opprecruit-in
	still-npc cyoa{ ' opp-recruit cyoa! }
	// ' trader-event lt .events! 1 lt .timer!
;

: rename 
	lt .character@ .name!
;


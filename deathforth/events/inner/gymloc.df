cyoa{ 

cyoa: gym-sweaty
	"Ew, asqueroso" cyoa-title!
	($ "Este equipo de gimnasia esta todo cubierto de sudor ahora!	No hay forma de que " .. pname .. " ' toque eso." $) text!
	clear-cyoa badfx
;

: gym-barbell-end 
	pchar .dead? if ($ cname .. " ' muere por este percance de levantamiento de pesas." $) +crtext
	else
		strengthREV "Una hora paso durante esa sesion de entrenamiento improvisada." +crtext
	then clear-cyoa ' gym-sweaty this-cyoa o'clock@ 1 + o'clock
		team-nearby? not if	
			($ "Habia nadie alrededor para defenderlo', " .. pname .. " durante el entrenamiento, asi que " .. phe .. " tuve que defenderme de los zombies entre repeticiones. Cuidado!" $) +crtext
			6 11 rnd roomgen{ .zombspawn } 
		then
	;
cyoa-choice: gym-barbell-1 
	($ cname .. "  quita la mayor parte del peso de la barra y luego comienza " .. "HIERRO EN MOVIMIENTO" pbold .. " con el bar mayormente vacio." $) cyoa-text!
	cstrength- if
		($ "Aun es un gran entrenamiento para'; " .. chim .. "y nada se rompe o se rompe en el proceso!" $) +crtext
		strength++ goodfx
	else
		"No era suficiente peso para hacer algo. Los zombies tampoco estaban impresionados." +crtext badfx
	then
	gym-barbell-end
;
cyoa-choice: gym-barbell-2
	($ cname .. " quita algo de peso de la barra, pero no tanto que " .. phe .. " 'no puede " .. "ENERGIA SUPER PUMP!" rbold .. "." $) cyoa-text!
	cstrength- if
		($ "Esa fue mucha peso! " .. cHe .. " 'escucha algo en " .. chis .. " 'hace un sonido gracioso chasqueante del cuerpo." $) +crtext
		ouch-- badfx gym-barbell-end
	then;
	cstrength+ if
		($ cname .. " 'estuvo decepcionado con el entrenamiento " .. cHe .. " 'tendra que empujar mas a si mismo en el futuro " .. chim .. "se hace mas fuerte en el futuro." $) +crtext badfx gym-barbell-end
	then;
	($ cHe .. " 'hace muchos ruidos de grunido estridentes mientras levanta esa barra. Que entrenamiento!" $) +crtext goodfx strength++ gym-barbell-end
;
cyoa-choice: gym-barbell-3
	($ cname .. " 'intenta levantar la barra sobrecargada ridiculamente. " .. "sI LA BARRA NO SE ESTA APLASTANDO ESTAS SOLO HACIENDO COMO SI ESTUVIERAS ENTRENANDO" fbold .. " ' -- Sabiduria antigua del culturista" $) cyoa-text!
	cstrength+ if
		($ cHe .. " 'la levanta, aunque " .. chis .. "  ojos casi se salen de " .. chis .. " 'cabezas." $) +crtext
		strength++ morale++ goodfx
	else
		($ "Intentar levantar es una idea catastroficamente mala! " .. cname .. " ' siente algo en " .. chis .. " ' cuerpo explota." $) +crtext
		ouch2- badfx
	then
	gym-barbell-end
;

cyoa: gym-barbell
	"I.T.B.A.B.Y.J.P." cyoa-title!
	picon!
	"Aqui hay un conjunto completo de pesas olimpicas. La cantidad de peso en el se puede ajustar hasta una cantidad menos causante de hernia." cyoa-text!
	cpet? if
		($ "Tragamente, el levantamiento de pesas olimpico no esta disenado para funcionar con " .. pname .. "cuerpo." $)
	+crtext then;
	team-nearby? not if
		($ "Sin alguien a las afuera para mirar a los zombis, podria ser peligroso hacer un entrenamiento fisico aqui." $) +crtext
	else
		($ pname .. " ' considera tomarse una pausa para hacer algunos ejercicios de fuerza como " .. phe .. " 'se encuentra guardado." $) +crtext
	then
		choice( "Levantar Peso Ligero" )choice: gym-barbell-1
		choice( "Levantar Peso Pesado" )choice: gym-barbell-2
		choice( "Levantar Peso Masivo" )choice: gym-barbell-3
	choice( "Dejarlo para otro momento" )choice
;

: gym-bike-end 
	pchar .dead? if ($ cname .. " muere en la bicicleta de ejercicio por el esfuerzo puro." $) +crtext
	else
		fitnessREV "Paso una hora durante esa sesion de ejercicios." +crtext
	then clear-cyoa ' gym-sweaty this-cyoa o'clock@ 1 + o'clock
	team-nearby? not if	
			($ "Habia nadie alrededor para defenderlo', " .. pname .. " durante el entrenamiento, asi que " .. phe .. " 'Tuve que defenderme de los zombies mientras andaba en bicicleta. Cuidado!" $) +crtext
			6 11 rnd roomgen{ .zombspawn } 
		then
	; 
cyoa-choice: gym-bike-1 
	($ cname .. " 0.0 " .. "CARRETERA PAVIMENTADA EN LA LUNA" pbold .. " 'y comienza a moverse " .. chis .. " 'las piernas." $) cyoa-text!
	cfitness- if
		($ "Es un buen ejercicio para " .. chim .. ", debido a estar muy fuera de forma." $) +crtext
		fitness++ goodfx
	else
		"La practica no fue realmente mejor que quedarme sentada en el coche." +crtext badfx
	then
	gym-bike-end
;
cyoa-choice: gym-bike-2
	($ cname .. " 0.0 " .. "CAMINO DE MONTANA" rbold .. " ' comienza a bombearse " .. chis .. " 'las piernas." $) cyoa-text!
	cfitness- if
		($ cHe .. " ' logra sacar algo " .. chis .. " ' pierna! La dolorosa hace " .. chim .. " ' caerse de la bicicleta." $) +crtext
		sting-- badfx gym-bike-end
	then;
	cfitness+ if
		($ cname .. " ' no habia sudado ni un gotito! Que poca importancia para mejorar! " .. chis .. " fitness." $) +crtext badfx gym-bike-end
	then;
	($ cHe .. " ' produce una ria entera de sudor. Que gran ejercicio!" $) +crtext goodfx fitness++ gym-bike-end
;
cyoa-choice: gym-bike-3
	($ cname .. " ' establece la bicicleta en " .. "CARRETERA HACIA CANADA" fbold .. " ' y comienza a esforzarse " .. chis .. " ' piernas hasta el limite." $) cyoa-text!
	cfitness+ if
		($ cHe .. " ' realmente " .. "SIENTE EL ARDOR!" rbold $) +crtext
		fitness++ morale++ goodfx
	else
		($ cname .. "  no dura mucho antes de caerse de agotamiento. " .. cHe .. " jadeos y escupe un organo." $) +crtext
		sting2- badfx
	then
	gym-bike-end
;

cyoa: gym-bike
	"Entrenamiento Cardiovascular" cyoa-title!
	picon!
	"Aqui hay una bicicleta estacionaria de marca UltraMegaFit del lujo. A diferencia de las treadmills, esta funciona con el cortocircuito de la electricidad." cyoa-text!
	cpet? if
		($ "Lo siento, este dispositivo simplemente no esta disenado para funcionar con " .. pname .. "cuerpo." $)
	+crtext then;
	cchar .perk@ "T*S*T*C" $= if
		($ "Lo siento, " .. pname .. " no HACE CARDIO!" $)
	+crtext then;
	team-nearby? not if
		($ "Sin alguien a las afuera para mirar a los zombis, podria ser peligroso hacer un entrenamiento fisico aqui." $) +crtext
	else
		($ pname .. " considera tomarse un descanso para obtener entrenamiento fisico en lugar de. " .. phe .. " 'se encuentra guardado." $) +crtext
	then
		choice( "Ejercicio Ligero" )choice: gym-bike-1
		choice( "Ejercicio Pesado" )choice: gym-bike-2
		choice( "EXERCITO INTENSO" )choice: gym-bike-3
	choice( "Dejarlo para otro momento" )choice
;

}
			
map{ roomgen{
			
: gymcyoa 50 %chance if olympicbar cyoa{ ' gym-barbell cyoa! } else gymbike cyoa{ ' gym-bike cyoa! } then ;

} }

locdef{
		
location: gym
		max-rooms: 2
		entry-tags: gym-entry
		script: yall-theme 

	: gymstuff
		4 9 rnd for roomgen{ dumbbell } scatter next
		1 3 rnd for roomgen{ barbell } scatter next
	;

		room-choice: gym-entry
			room-weight: 10
			room-count: 1
			room-script: 
			room-post-script: 10diff %zombs gymstuff
			filter-only		

		room-choice: restroom
			room-weight: 10
			room-count: 1
			room-script: floor-bath
			
}

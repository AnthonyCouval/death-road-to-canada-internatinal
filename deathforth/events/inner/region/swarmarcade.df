"../deathforth/rooms/arcadegym.txt" $load-rooms
"../deathforth/rooms/restroom.txt" $add-rooms
"events/inner/arcadeloc.df" $load

0 value gachapon

: gachainit 0 5 rnd to gachapon ;

cyoa{

cyoa-choice: gachapon-go

	($ cname .. " ' rompe la maquina de premios. " $) text!

	gachapon case
		0 of
			($ cHe .. " 'mete todas las chicles en una bolsa. Son tecnicamente comida si comes muchos de ellos." $) +crtext 4 trunk-food+
		endof
		1 of
			"Las capsulas contienen bolas de caucho, aranitas de plastico, vomito falso, etc. Que bueno!" +crtext morale++
		endof
		2 of
			"Una de las figuritas en las capsulas era una EDICION LIMITADA ULTRA-RARE! Guau! Es muy inspirador." +crtext morale2+ 
		endof
		3 of
			($ "Las capsulas estan todas llenas de GOO mutagenico que se abren y salpican en " .. chim .. ".
			" .. "THIS OOZE IS A DISCONTINUED LIMITED EDITION! A COLLECTORS ITEM!!! WHOAAAAA!" pbold $) +crtext
			strength++ fitness++ 
			// 0 cchar .tint.skin.b! 0.4 cchar .tint.skin.r! 
			cchar .hulkclr
			1.3 cchar .scale.body.y!
		endof
		4 of
			($ cname .. " 'recoge la caramelo en la maquina. Es " .. chis .. " 'favorito!" $) +crtext
			morale++ 3 trunk-food+
		endof
		5 of
			($ cHe .. "  toma una de las pistolas de juguete, y de inmediato accidentalmente dispara " .. chim .. "self in the eye! Ouch!
			An important lesson about firearms is learned." $) +crtext shooting++
		endof
	endcase
	
	goodfx 1 nearest .open! clear-cyoa
;

cyoa: gachapon
	"Gachapon!" cyoa-title!
	picon!
	($ cname .. " 'encontro una maquina de gachapones intacta. Usabas poner una moneda y obtener algo. Ahora es mas conveniente romperla." $) text!
		
	gachapon case
		0 of "Esta lleno de bollas de chicle." endof
		1 of "Contiene pequenas capsulas llenas de juguetes baratos." endof
		2 of "Las recompensas son capsulas con figuritas pequenas." endof
		3 of "Esta lleno de capsulas llenas de fluido verde." endof
		4 of "Esta por mas de la mitad vacio, pero contiene dulces." endof
		5 of "Esta lleno de capsulas que alojan pequenas armas de juguete." endof
	endcase +crtext
	
	choice( "Romplalo abierto!" )choice: gachapon-go
	choice( "Dejemoslo solo." )choice
	
;

}

map{ roomgen{

: gachapon-cyoa
	gachapon cyoa{ ' gachapon cyoa! }
;

} }


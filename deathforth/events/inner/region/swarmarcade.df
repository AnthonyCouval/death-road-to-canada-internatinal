"../deathforth/rooms/arcadegym.txt" $load-rooms
"../deathforth/rooms/restroom.txt" $add-rooms
"events/inner/arcadeloc.df" $load

0 value gachapon

: gachainit 0 5 rnd to gachapon ;

cyoa{

cyoa-choice: gachapon-go

	($ cname .. "  zerschmettert den Preisautomaten. " $) text!

	gachapon case
		0 of
			($ cHe .. "  stopft alle Gummiballe in einen Sack. Sie sind technisch gesehen Lebensmittel wenn man viele davon isst." $) +crtext 4 trunk-food+
		endof
		1 of
			"Die Kapseln enthalten Gummiballe, winzige Plastikneuheitsspinnen, falschen Kot und so weiter. Schon!" +crtext morale++
		endof
		2 of
			"'Eine der Figuren in den Kapseln war eine ULTRA RARE LIMITED EDITION! Whoa! Es ist sehr inspirierend." +crtext morale2+ 
		endof
		3 of
			($ "Die Kapseln sind alle voll mit MUTAGENEM SCHLAMM der sich offnet und auf " .. chim .. ".
			" .. "THIS OOZE IS A DISCONTINUED LIMITED EDITION! A COLLECTORS ITEM!!! WHOAAAAA!" pbold $) +crtext
			strength++ fitness++ 
			// 0 cchar .tint.skin.b! 0.4 cchar .tint.skin.r! 
			cchar .hulkclr
			1.3 cchar .scale.body.y!
		endof
		4 of
			($ cname .. " ' sammelt die Suigkeiten in der Maschine. Es ist " .. chis .. "  favorit!" $) +crtext
			morale++ 3 trunk-food+
		endof
		5 of
			($ cHe .. "  nimmt eine der Spielzeugpistolen und erschiet sofort versehentlich " .. chim .. "self in the eye! Ouch!
			An important lesson about firearms is learned." $) +crtext shooting++
		endof
	endcase
	
	goodfx 1 nearest .open! clear-cyoa
;

cyoa: gachapon
	"Gachapon!" cyoa-title!
	picon!
	($ cname .. " " $) text!
		
	gachapon case
		0 of "Die Maschine ist voll mit Kaugummis." endof
		1 of "Es enthalt kleine Kapseln voller billiger Spielzeuge." endof
		2 of "Die Preise sind Kapseln mit kleinen Figuren." endof
		3 of "Die Maschine hat Kapseln mit gruner Flussigkeit gefullt." endof
		4 of "Die Maschine ist uber halb leer, enthalt aber Suigkeiten." endof
		5 of "'Es ist voll mit Kapseln die kleine Spielzeugpistolen beherbergen." endof
	endcase +crtext
	
	choice( "Schlag es auf!" )choice: gachapon-go
	choice( "Lass es alleine" )choice
	
;

}

map{ roomgen{

: gachapon-cyoa
	gachapon cyoa{ ' gachapon cyoa! }
;

} }


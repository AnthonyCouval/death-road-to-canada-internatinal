"../deathforth/rooms/arcadegym.txt" $load-rooms
"../deathforth/rooms/restroom.txt" $add-rooms
"events/inner/arcadeloc.df" $load

0 value gachapon

: gachainit 0 5 rnd to gachapon ;

cyoa{

cyoa-choice: gachapon-go

	($ cname .. " quebrando abertamente a maquina de premios " $) text!

	gachapon case
		0 of
			($ cHe .. " enchendo um saco com todas as bola de goma. Eles sao alimentos se comerem muitos deles." $) +crtext 4 trunk-food+
		endof
		1 of
			"As capsulas contem bolas de borracha, aranhas plasticas minusculas, vomito falso e outras coisas. Legal!" +crtext morale++
		endof
		2 of
			"'Uma das figurinhas nas capsulas era uma EDICAO LIMITADA ULTRA RARA! Ow! Muito inspirador." +crtext morale2+ 
		endof
		3 of
			($ "As capsulas estao todas cheias de SUCO MUTAGENICO que se abrem e se espalham em " .. chim .. ".
			" .. "THIS OOZE IS A DISCONTINUED LIMITED EDITION! A COLLECTORS ITEM!!! WHOAAAAA!" pbold $) +crtext
			strength++ fitness++ 
			// 0 cchar .tint.skin.b! 0.4 cchar .tint.skin.r! 
			cchar .hulkclr
			1.3 cchar .scale.body.y!
		endof
		4 of
			($ cname .. " ' pega o doce na maquina. E " .. chis .. "  favorita!" $) +crtext
			morale++ 3 trunk-food+
		endof
		5 of
			($ cHe .. "  pega uma das armas de brinquedo e imediatamente atira acidentalmente em " .. chim .. "self in the eye! Ouch!
			An important lesson about firearms is learned." $) +crtext shooting++
		endof
	endcase
	
	goodfx 1 nearest .open! clear-cyoa
;

cyoa: gachapon
	"Gachapon!" cyoa-title!
	picon!
	($ cname .. " ' encontra uma maquina de premios intacta. Voce costumava colocar um quarto e pegar algo. Agora e mais conveniente apenas quebra lo." $) text!
		
	gachapon case
		0 of "A maquina esta cheia de chicletes." endof
		1 of "Contem pequenas capsulas cheias de brinquedos baratos." endof
		2 of "Os premios sao capsulas com pequenas figuras." endof
		3 of "A maquina tem capsulas cheias de liquido verde." endof
		4 of "A maquina esta mais da metade vazia, mas contem doces." endof
		5 of "'Esta cheio de capsulas contendo pequenas armas de brinquedo." endof
	endcase +crtext
	
	choice( "Quebre o!" )choice: gachapon-go
	choice( "Deixe o sozinho" )choice
	
;

}

map{ roomgen{

: gachapon-cyoa
	gachapon cyoa{ ' gachapon cyoa! }
;

} }


"../deathforth/rooms/arcadegym.txt" $load-rooms
"../deathforth/rooms/restroom.txt" $add-rooms
"events/inner/arcadeloc.df" $load

0 value gachapon

: gachainit 0 5 rnd to gachapon ;

cyoa{

cyoa-choice: gachapon-go

	($ cname .. " ouvre la machine a sous de force. " $) text!

	gachapon case
		0 of
			($ cHe .. " met touts les bonbans dans une sac. elles sont techniquement de l'aliment si on en mange beaucoup." $) +crtext 4 trunk-food+
		endof
		1 of
			"Des capsules contenant des boules en caoutchouc, de petits araignees plastique, et de la vomique, et ainsi de suite. tres jolis !" +crtext morale++
		endof
		2 of
			"Cette figurine du capsule etait une edition limitee ultra-rare ! ah, ca me inspire beaucoup !" +crtext morale2+ 
		endof
		3 of
			($ "Les capsules sont pleines de jusqu'a la limite d'ooz des mutagene qui s'ouvrent et jettent en arriere. " .. chim .. ".
			" .. "THIS OOZE IS A DISCONTINUED LIMITED EDITION! A COLLECTORS ITEM!!! WHOAAAAA!" pbold $) +crtext
			strength++ fitness++ 
			// 0 cchar .tint.skin.b! 0.4 cchar .tint.skin.r! 
			cchar .hulkclr
			1.3 cchar .scale.body.y!
		endof
		4 of
			($ cname .. " recolte des bonbons dans la machine. c'est " .. chis .. " ajouter a mes favoris !" $) +crtext
			morale++ 3 trunk-food+
		endof
		5 of
			($ cHe .. " prend une arme a jouer et tire accidentellement dessus. " .. chim .. "self in the eye! Ouch!
			An important lesson about firearms is learned." $) +crtext shooting++
		endof
	endcase
	
	goodfx 1 nearest .open! clear-cyoa
;

cyoa: gachapon
	"Chien fidele" cyoa-title!
	picon!
	($ cname .. " une boite automatique de recompenses intacte. vous y jetteriez autrefois une quintre et obteniez quelque chose. maintenant, il est plus pratique de la casser directement." $) text!
		
	gachapon case
		0 of "La machine est pleine de bonbons a gommes." endof
		1 of "Ces capsules contiennent des jouets bon marche." endof
		2 of "Les recompenses sont des capsules contenant des figurines miniatures." endof
		3 of "La machine est pourvue de capsules remplies de liquide vert." endof
		4 of "La machine est a plus de la moitie vide, mais contient des bonbons." endof
		5 of "C'est plein de capsules abritant des petites arme a feu en jouet." endof
	endcase +crtext
	
	choice( "Cassel-le-sur: casse-le-ouvert !" )choice: gachapon-go
	choice( "Laissez-le tranquille" )choice
	
;

}

map{ roomgen{

: gachapon-cyoa
	gachapon cyoa{ ' gachapon cyoa! }
;

} }


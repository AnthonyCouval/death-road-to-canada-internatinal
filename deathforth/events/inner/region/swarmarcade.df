"../deathforth/rooms/arcadegym.txt" $load-rooms
"../deathforth/rooms/restroom.txt" $add-rooms
"events/inner/arcadeloc.df" $load

0 value gachapon

: gachainit 0 5 rnd to gachapon ;

cyoa{

cyoa-choice: gachapon-go

	($ cname .. "  rompe la maquina de premios abierta. " $) text!

	gachapon case
		0 of
			($ cHe .. "  mete todas las gominolas en un saco. Tecnicamente son comida si comes muchas." $) +crtext 4 trunk-food+
		endof
		1 of
			"Las capsulas contienen pelotas de goma, diminutas aranas de plastico de novedad, vomito falso, etc. Genial!" +crtext morale++
		endof
		2 of
			"'Una de las figuras de las capsulas era una EDICION LIMITADA ULTRA RARA! Guau! Es muy inspirador." +crtext morale2+ 
		endof
		3 of
			($ "Las capsulas estan llenas de CIENO MUTAGENICO que se abren y salpican sobre " .. chim .. ".
			" .. "THIS OOZE IS A DISCONTINUED LIMITED EDITION! A COLLECTORS ITEM!!! WHOAAAAA!" pbold $) +crtext
			strength++ fitness++ 
			// 0 cchar .tint.skin.b! 0.4 cchar .tint.skin.r! 
			cchar .hulkclr
			1.3 cchar .scale.body.y!
		endof
		4 of
			($ cname .. " ' recoge los dulces de la maquina. Es " .. chis .. "  favorito!" $) +crtext
			morale++ 3 trunk-food+
		endof
		5 of
			($ cHe .. "  toma una de las pistolas de juguete, e inmediatamente dispara accidentalmente " .. chim .. "self in the eye! Ouch!
			An important lesson about firearms is learned." $) +crtext shooting++
		endof
	endcase
	
	goodfx 1 nearest .open! clear-cyoa
;

cyoa: gachapon
	"Gachapon!" cyoa-title!
	picon!
	($ cname .. " ' encuentra una maquina de premios intacta. Solias poner un cuarto y obtener algo. Ahora es mas conveniente simplemente aplastarlo." $) text!
		
	gachapon case
		0 of "La maquina esta llena de chicles." endof
		1 of "Contiene pequenas capsulas llenas de juguetes baratos." endof
		2 of "Los premios son capsulas con pequenas figuras." endof
		3 of "La maquina tiene capsulas llenas de liquido verde." endof
		4 of "La maquina esta medio vacia, pero contiene dulces." endof
		5 of "'Esta llena de capsulas que albergan pequenas pistolas de juguete." endof
	endcase +crtext
	
	choice( "Abrelo a golpes!" )choice: gachapon-go
	choice( "Dejalo en paz" )choice
	
;

}

map{ roomgen{

: gachapon-cyoa
	gachapon cyoa{ ' gachapon cyoa! }
;

} }


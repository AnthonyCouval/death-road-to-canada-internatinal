"../deathforth/rooms/arcadegym.txt" $load-rooms
"../deathforth/rooms/restroom.txt" $add-rooms
"events/inner/arcadeloc.df" $load

0 value gachapon

: gachainit 0 5 rnd to gachapon ;

cyoa{

cyoa-choice: gachapon-go

	($ cname .. "  sfascia la macchina dei premi. " $) text!

	gachapon case
		0 of
			($ cHe .. "  infila tutte le palline di gomma in un sacco. Tecnicamente sono cibo se ne mangi tante." $) +crtext 4 trunk-food+
		endof
		1 of
			"Le capsule contengono palline di gomma, minuscoli ragni di plastica, finto vomito e cosi via. Bello!" +crtext morale++
		endof
		2 of
			"'Una delle figurine nelle capsule era un'EDIZIONE LIMITATA ULTRA RARE! Wow! E molto stimolante." +crtext morale2+ 
		endof
		3 of
			($ "Le capsule sono piene di melma MUTAGENA che si aprono e schizzano su " .. chim .. ".
			" .. "THIS OOZE IS A DISCONTINUED LIMITED EDITION! A COLLECTORS ITEM!!! WHOAAAAA!" pbold $) +crtext
			strength++ fitness++ 
			// 0 cchar .tint.skin.b! 0.4 cchar .tint.skin.r! 
			cchar .hulkclr
			1.3 cchar .scale.body.y!
		endof
		4 of
			($ cname .. " ' raccoglie le caramelle nella macchinetta. E " .. chis .. "  preferito!" $) +crtext
			morale++ 3 trunk-food+
		endof
		5 of
			($ cHe .. "  prende una delle pistole giocattolo e spara immediatamente accidentalmente " .. chim .. "self in the eye! Ouch!
			An important lesson about firearms is learned." $) +crtext shooting++
		endof
	endcase
	
	goodfx 1 nearest .open! clear-cyoa
;

cyoa: gachapon
	"Gachapon!" cyoa-title!
	picon!
	($ cname .. " ' trova una macchina dei premi intatta. Di solito dovresti inserire un quarto e ottenere qualcosa. Ora e piu conveniente distruggerla." $) text!
		
	gachapon case
		0 of "La macchina e piena di palline di gomma." endof
		1 of "Contiene piccole capsule piene di giocattoli economici." endof
		2 of "I premi sono capsule con piccole statuette." endof
		3 of "La macchina ha capsule piene di liquido verde." endof
		4 of "La macchina e vuota per piu della meta, ma contiene caramelle." endof
		5 of "'E piena di capsule contenenti piccole pistole giocattolo." endof
	endcase +crtext
	
	choice( "Rompila!" )choice: gachapon-go
	choice( "Lascialo stare" )choice
	
;

}

map{ roomgen{

: gachapon-cyoa
	gachapon cyoa{ ' gachapon cyoa! }
;

} }


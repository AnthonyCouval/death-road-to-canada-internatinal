		
cyoa{		

cyoa-choice: arcade-vidcon2
	($ cname .. " demontage de l'arcade machine pour voir comment ca fonctionne... . " .. che .. " ces anciens automates d'arcade fonctionnent a l'essence ! " .. cname .. " soigneusement evacue le gaz de son reservoir." $) cyoa-text!
	goodfx 40 70 rnd LOOT_GAS spawnloot clear-cyoa
;

: arcade-names
	1 6 rnd case
		1 of "'LA ROUTE DU CANADA, MORTELLEMENT DANGEREUSE'" endof
		2 of "LES ECLATS DE MORT" endof
		3 of "LE TOUCHER DE LA MORT" endof
		4 of "POLIBIUS EST UN HISTORIEN GREC DE LA FIN DU IIE" endof
		5 of "EXPLOSION DE DEATH" endof
		6 of "HE HE HE! HE HE HE!" endof
	endcase
;
		
cyoa-choice: arcade-vidcon1
	($ cname .. " joue a un jeu d'arcade ancien nomme " .. arcade-names fbold .. " avant de commencer a jouer, assurez-vous d'avoir une bonne connaissance des armes en vous y prenant au serieux, comme tous les jeux video produits auparavant l'ont montre. les critiques avaient raison. " .. cname .. " je l'avais pris, deux heures s'etaient ecoulees." $) cyoa-text!
		shootingREV shooting++ morale++ goodfx
		clear-cyoa
		o'clock@ 2 + o'clock 
		team-nearby? not if	
			($ "Personne n'etait la pour defendre. " .. pname .. " pendant cela, donc. " .. phe .. " il fallait se defendre contre des zombies en jouant. attention !" $) +crtext
			7 13 rnd roomgen{ .zombspawn }
		then
;

cyoa: arcade-vidcon
	"Arret d'arcade" cyoa-title!
	picon!
	"Cette machine d'arcade semble fonctionner ! c'est assez etrange qu'elle puisse marcher sans electricite." cyoa-text!
	chumany? not if
		($ pname .. " regarde l'arcade avec perplexe. ce qui separe les humains des animaux est principalement qu'ils ne jouent pas aux jeux video. en general, au moins." $) +crtext
	then; 
	team-nearby? not if
		($ "Jouer sans personne fiable a proximite pour garder un oeil sur les zombies peut etre risque." $) +crtext
	else
		($ pname .. " prenne une pause pour jouer a un jeu video " .. phe .. " est garde." $) +crtext
	then
		pchar charchoice( " joue a un jeu d'arcade" )choice: arcade-vidcon1
		cmechanic+ if
			pchar charchoice( " c'est le marque-page le plus puissant." )choice: arcade-vidcon2
		then
	choice( "Laissez-le pour le moment" )choice
;

}
			
map{ roomgen{
	
: gachapon
	spawn special_objects32_base_id 0x 5
	+ lt .spriteid! rndflip
	25 health! bbox openable swolebolt- as-metal
;
: gachaempty gachapon opened ;
	
: arcademachine
	spawn special_objects32_base_id 0x 8 + lt .spriteid!
	30 health! bbox swolebolt+ as-metal
;
: gasarcademachine
	spawn special_objects32_base_id 0x 27 + lt .spriteid!
	 30 health! bbox swolebolt+ as-metal
;


: arcade-events args( me eventid )
	<- eventid THING_EVENT_TIMER <> if then;

	// CRT scanlines
	<- me .pos particle{ new pos!
		special_objects32_base_id 0x 98 + <- me .anim.state@ + spriteid!
		<- me .anim.state@ not <- me .anim.state!
		5 ticks!
		0.3 clr.a!
		0.5 clr.r!
		0.5 clr.g!
		1 clr.b!
		0 global_colour!
	}

	// blink PLAY <ALIEN>
	<- me .anim.substate@ 1+ dup <- me .anim.substate!
	4 & if
		<- me .pos particle{ new pos!
			special_objects32_base_id 0x 9a + <- me .anim.substate@ 3 >> 1 & + spriteid!
			5 ticks!

			<- me .anim.substate@ 45 * angle-colour rgb!

			0 global_colour!
		}
	then

	5 <- me .timer!
;

: arcade-on
	gasarcademachine cyoa{ ' arcade-vidcon cyoa! }
	' arcade-events events!
	5 lt .timer!
;

: smallarcade
	spawn special_objects32_base_id 0x c + lt .spriteid!
	15 health! bbox 5bolt as-metal
;

: clawmachine
	spawn special_objects32_base_id 0x d 
	80 %chance if 1 + then
	+ lt .spriteid! rndflip
	15 health! bbox 4bolt as-metal
;
	
} }


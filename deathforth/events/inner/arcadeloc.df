		
cyoa{		

cyoa-choice: arcade-vidcon2
	($ cname .. "  inizia a smontare la macchina arcade per vedere come funziona. Dopo aver rovistato un po " .. che .. " capire il motivo. Scopre che tutte queste vecchie macchine arcade sono alimentate a gas! " .. cname .. " svuota attentamente il gas dal suo vano." $) cyoa-text!
	goodfx 40 70 rnd LOOT_GAS spawnloot clear-cyoa
;

: arcade-names
	1 6 rnd case
		1 of "STRADA DELLA MORTE VERSO IL CANADA" endof
		2 of "SCHIZZI DI MORTE" endof
		3 of "TOCCO DI MORTE" endof
		4 of "POLYBIUS" endof
		5 of "ESPLOSIONE DI MORTE" endof
		6 of "U*L*T*R*A*D*E*A*T*H" endof
	endcase
;
		
cyoa-choice: arcade-vidcon1
	($ cname .. " gioca a un vecchio gioco arcade chiamato " .. arcade-names fbold .. " e ci si appassiona davvero. Come tutti i videogiochi mai realizzati, giocarci aumenta le tue abilita con le armi. I critici avevano ragione. Prima di " .. cname .. " saperlo, erano passate 2 ore." $) cyoa-text!
		shootingREV shooting++ morale++ goodfx
		clear-cyoa
		o'clock@ 2 + o'clock 
		team-nearby? not if	
			($ "Non cera nessuno in giro a difendere " .. pname .. " durante questo, quindi " .. phe .. " ha dovuto respingere gli zombi mentre giocava. Attenzione!" $) +crtext
			7 13 rnd roomgen{ .zombspawn }
		then
;

cyoa: arcade-vidcon
	"Pausa Arcade" cyoa-title!
	picon!
	"'Questa macchina arcade sembra funzionare! Non e molto chiaro come possa funzionare senza elettricita." cyoa-text!
	chumany? not if
		($ pname .. " ' guarda la macchina arcade confusa. Cio che separa le persone dagli animali e principalmente che gli animali non giocano ai videogiochi. Almeno, per la maggior parte." $) +crtext
	then; 
	team-nearby? not if
		($ "Senza nessuno di fidato nelle vicinanze a fare la guardia agli zombi, giocarci potrebbe essere pericoloso." $) +crtext
	else
		($ pname .. "  pensa di prendersi una pausa dai videogiochi mentre " .. phe .. "  e sorvegliato." $) +crtext
	then
		pchar charchoice( "  gioca al videogioco arcade" )choice: arcade-vidcon1
		cmechanic+ if
			pchar charchoice( "  smonta la macchina arcade" )choice: arcade-vidcon2
		then
	choice( "Lascialo per ora" )choice
;

}
			
map{ roomgen{
	
: gachapon
	spawn special_objects32_base_id 0x 5
	+ lt .spriteid! rndflip
	25 health! bbox openable swolebolt- as-metal
;
: gachaempty gachapon opened ;
	
: arcademachine
	spawn special_objects32_base_id 0x 8 + lt .spriteid!
	30 health! bbox swolebolt+ as-metal
;
: gasarcademachine
	spawn special_objects32_base_id 0x 27 + lt .spriteid!
	 30 health! bbox swolebolt+ as-metal
;


: arcade-events args( me eventid )
	<- eventid THING_EVENT_TIMER <> if then;

	// CRT scanlines
	<- me .pos particle{ new pos!
		special_objects32_base_id 0x 98 + <- me .anim.state@ + spriteid!
		<- me .anim.state@ not <- me .anim.state!
		5 ticks!
		0.3 clr.a!
		0.5 clr.r!
		0.5 clr.g!
		1 clr.b!
		0 global_colour!
	}

	// blink PLAY <ALIEN>
	<- me .anim.substate@ 1+ dup <- me .anim.substate!
	4 & if
		<- me .pos particle{ new pos!
			special_objects32_base_id 0x 9a + <- me .anim.substate@ 3 >> 1 & + spriteid!
			5 ticks!

			<- me .anim.substate@ 45 * angle-colour rgb!

			0 global_colour!
		}
	then

	5 <- me .timer!
;

: arcade-on
	gasarcademachine cyoa{ ' arcade-vidcon cyoa! }
	' arcade-events events!
	5 lt .timer!
;

: smallarcade
	spawn special_objects32_base_id 0x c + lt .spriteid!
	15 health! bbox 5bolt as-metal
;

: clawmachine
	spawn special_objects32_base_id 0x d 
	80 %chance if 1 + then
	+ lt .spriteid! rndflip
	15 health! bbox 4bolt as-metal
;
	
} }


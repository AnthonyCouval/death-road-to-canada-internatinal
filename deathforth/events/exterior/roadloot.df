uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: roadloot-tunnel
	"Tunnel der Zombs" cyoa-title!
	someicon
	($ Thegroup .. "  entdeckt eine Gabelung auf der Strae die zu einem dunklen Tunnel voller zerstorter Autos fuhrt. Die Gerausche von Untoten hallen vom Eingang wider." $) cyoa-text! basic-tone
		1 2 frnd 18 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-tunnel.df" $load-region
		choice( "Tunnel durchsuchen" )choice: premission
		gas-draw
;

cyoa: roadloot-dirt
	"Konvoi auf unbefestigter Strae" cyoa-title!
	someicon
	($ Thegroup .. " ' sieht in der Ferne ein paar zerstorte Autos auf einer unbefestigten Strae, die von Zombies umgeben sind. Es konnte sich lohnen, dorthin zu gehen und nachzusehen, ob es noch Beute gibt." $) cyoa-text! basic-tone
		0.8 1.5 frnd 13 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-dirt.df" $load-region
		choice( "Zu den zerstorten Autos gehen" )choice: premission
		gas-draw
;

cyoa: roadloot-gravel
	"Rocky Road" cyoa-title!
	someicon
	($ Thegroup .. "  fahrt eine Schotterstrae entlang als " .. gthey .. "  kommen" .. g1s .. "  sehen eine Gruppe von zerstorten Autos vor sich, mit einer Horde Untoter, die hindurchreist." $) cyoa-text! basic-tone
		0.8 1.5 frnd 9 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-gravel.df" $load-region
		choice( "Untersuche die kaputten Autos" )choice: premission
		gas-draw
;

cyoa: roadloot-country
	"Freundliche Landstrae" cyoa-title!
	someicon
	($ Thegroup .. "  fahrt die Autobahn in einer ruhigen Landschaft entlang. Vor ihnen ist eine groe Menge ausgebrannter Autos, mit Zombies, die um sie herumstreifen." $) cyoa-text! basic-tone
		0.8 1.5 frnd 7 23 rnd 0 2 rnd zforecast
		"events/exterior/region/road-country.df" $load-region
		choice( "Untersuche die Autos" )choice: premission
		gas-draw-noskip
;

cyoa: roadloot-city
	"Die gemeine Strae" cyoa-title!
	someicon
	($ Thegroup .. "  fahrt durch eine Stadt als " .. gthey .. "  stelle" .. g1s .. "  eine Kreuzung mit verrosteten Autos und einer Horde bereits wutender Zombies verstopft ist."  $) cyoa-text! basic-tone
		1.5 2 frnd 8 23 rnd 3 4 rnd zforecast
		"events/exterior/region/road-city.df" $load-region
		choice( "Uberprufe diese Seitenstrae" )choice: premission
		gas-draw
;

cyoa: roadloot-canada
	"Das Ende der Todesstrae" cyoa-title!
	someicon
	($ Thegroup .. " ' hat es bis kurz vor die Grenze zu Kanada geschafft!	So nah an der Sicherheit, hier wird es am gefahrlichsten!"  $) cyoa-text! basic-tone
		1.5 2 frnd 8 12 rnd 3 3 rnd zforecast
		"events/exterior/region/road-long.df" $load-region
		choice( "Let's Do This!!!" )choice: premission
;

} }




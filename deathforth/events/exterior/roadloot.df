uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: roadloot-tunnel
	"Tunnel der Zombs" cyoa-title!
	someicon
	($ Thegroup .. " sieht einen Gabelbaum auf der Straße, der zu einem dunklen Tunnel fuhrt, der voller Wrackautos ist. Die Gerausche der Untoten hallen von dem Eingang wider." $) cyoa-text! basic-tone
		1 2 frnd 18 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-tunnel.df" $load-region
		choice( "Tunnel durchsuchen" )choice: premission
		gas-draw
;

cyoa: roadloot-dirt
	"Konvoi auf Schotterstraße" cyoa-title!
	someicon
	($ Thegroup .. " sieht eine Menge zerstorter Autos auf einer Schotterstraße in der Ferne, umgeben von Zombies. Es mag das Risiko wert sein, dorthin zu gehen und zu sehen, ob noch Beute ubrig ist." $) cyoa-text! basic-tone
		0.8 1.5 frnd 13 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-dirt.df" $load-region
		choice( "Zu den ruinierten Autos gehen" )choice: premission
		gas-draw
;

cyoa: roadloot-gravel
	"Steiniger Weg" cyoa-title!
	someicon
	($ Thegroup .. " reist eine Schotterstraße entlang, als " .. gthey .. " kommen" .. g1s .. " sieh eine Gruppe von zerstorten Autos vor dir, mit einer untoten Horde, die hindurchzieht." $) cyoa-text! basic-tone
		0.8 1.5 frnd 9 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-gravel.df" $load-region
		choice( "Check out the ruined cars" )choice: premission
		gas-draw
;

cyoa: roadloot-country
	"Freundliche Landstraße" cyoa-title!
	someicon
	($ Thegroup .. " ' fahrt entlang der Autobahn in einem stillen Landstrich. Vorne steht eine große Menge verbrannter Autos, auf denen Zombies herumstreifen." $) cyoa-text! basic-tone
		0.8 1.5 frnd 7 23 rnd 0 2 rnd zforecast
		"events/exterior/region/road-country.df" $load-region
		choice( "'Die Wagen untersuchen" )choice: premission
		gas-draw-noskip
;

cyoa: roadloot-city
	"'Die Rauhe Straße" cyoa-title!
	someicon
	($ Thegroup .. " ' fahrt durch eine Stadt, als " .. gthey .. " 'Platz" .. g1s .. " ' ein kreuzender Straßenzug mit verrosteten Autos und einer Horde bereits wutenden Zombies versperrt."  $) cyoa-text! basic-tone
		1.5 2 frnd 8 23 rnd 3 4 rnd zforecast
		"events/exterior/region/road-city.df" $load-region
		choice( "'Diese Seitenstraße untersuchen" )choice: premission
		gas-draw
;

cyoa: roadloot-canada
	"'Das Ende der Todesstraße" cyoa-title!
	someicon
	($ Thegroup .. " ' ist gerade vor der Grenze nach Kanada gelangt!	So nahe an der Sicherheit, hier ist es am gefahrlichsten!"  $) cyoa-text! basic-tone
		1.5 2 frnd 8 12 rnd 3 3 rnd zforecast
		"events/exterior/region/road-long.df" $load-region
		choice( "Let's Do This!!!" )choice: premission
;

} }




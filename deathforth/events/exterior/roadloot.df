uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: roadloot-tunnel
	"Tunel dos Zumbis" cyoa-title!
	someicon
	($ Thegroup .. "  encontra uma bifurcacao na estrada que leva a um tunel escuro cheio de carros destruidos. Os sons de mortos vivos ecoam da entrada." $) cyoa-text! basic-tone
		1 2 frnd 18 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-tunnel.df" $load-region
		choice( "Procurar tunel" )choice: premission
		gas-draw
;

cyoa: roadloot-dirt
	"Comboio em Estrada de Terra" cyoa-title!
	someicon
	($ Thegroup .. " ' ve um monte de carros destruidos numa estrada de terra ao longe, rodeados de zombies. Pode valer a pena o risco de caminhar ate la e ver se ainda ha algum saque." $) cyoa-text! basic-tone
		0.8 1.5 frnd 13 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-dirt.df" $load-region
		choice( "Caminhar para carros destruidos" )choice: premission
		gas-draw
;

cyoa: roadloot-gravel
	"Estrada Rochosa" cyoa-title!
	someicon
	($ Thegroup .. "  esta a viajar numa estrada de cascalho quando " .. gthey .. " comer" .. g1s .. " veja um grupo de carros destruidos a frente, com uma horda de mortos vivos passando por ele." $) cyoa-text! basic-tone
		0.8 1.5 frnd 9 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-gravel.df" $load-region
		choice( "Verifique carros danificados" )choice: premission
		gas-draw
;

cyoa: roadloot-country
	"Estrada amigavel do pais" cyoa-title!
	someicon
	($ Thegroup .. " esta dirigindo se pela autoestrada num quietissimo campo. Por frente ha uma grande multidao de carros queimados, com zumbis vagando por eles." $) cyoa-text! basic-tone
		0.8 1.5 frnd 7 23 rnd 0 2 rnd zforecast
		"events/exterior/region/road-country.df" $load-region
		choice( "Investigue esses carros" )choice: premission
		gas-draw-noskip
;

cyoa: roadloot-city
	"Rua Ruim" cyoa-title!
	someicon
	($ Thegroup .. " ele esta dirigindo pela cidade quando " .. gthey .. "  ve" .. g1s .. " uma estrada intersecionada congestionada com carros roxos e uma multidao de zumbis ja enraivosados."  $) cyoa-text! basic-tone
		1.5 2 frnd 8 23 rnd 3 4 rnd zforecast
		"events/exterior/region/road-city.df" $load-region
		choice( "Verifique essa rua lateral" )choice: premission
		gas-draw
;

cyoa: roadloot-canada
	"O fim da estrada da morte" cyoa-title!
	someicon
	($ Thegroup .. " 'chegou ate pouco antes da fronteira do Canada! Tao perto da seguranca, aqui e onde fica o mais perigoso!"  $) cyoa-text! basic-tone
		1.5 2 frnd 8 12 rnd 3 3 rnd zforecast
		"events/exterior/region/road-long.df" $load-region
		choice( "Let's Do This!!!" )choice: premission
;

} }




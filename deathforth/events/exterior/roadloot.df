uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

cyoa: roadloot-tunnel
	"Tunel de Zombs" cyoa-title!
	someicon
	($ Thegroup .. "  ve una bifurcacion en el camino que conduce a un tunel oscuro lleno de autos destrozados. Los sonidos de los no muertos hacen eco desde la entrada." $) cyoa-text! basic-tone
		1 2 frnd 18 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-tunnel.df" $load-region
		choice( "Buscar tunel" )choice: premission
		gas-draw
;

cyoa: roadloot-dirt
	"Convoy en Dirt Road" cyoa-title!
	someicon
	($ Thegroup .. " ' ve un monton de autos destrozados en un camino de tierra en la distancia, rodeados de zombis. Puede valer la pena arriesgarse a caminar alli y ver si queda algun botin." $) cyoa-text! basic-tone
		0.8 1.5 frnd 13 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-dirt.df" $load-region
		choice( "Caminar hacia autos en ruinas" )choice: premission
		gas-draw
;

cyoa: roadloot-gravel
	"Camino Pedregoso" cyoa-title!
	someicon
	($ Thegroup .. "  esta viajando por un camino de grava cuando " .. gthey .. "  venir" .. g1s .. "  ver un grupo de autos destrozados adelante, con una horda de muertos vivientes viajando a traves de el." $) cyoa-text! basic-tone
		0.8 1.5 frnd 9 23 rnd 0 3 rnd zforecast
		"events/exterior/region/road-gravel.df" $load-region
		choice( "Revisar autos en ruinas" )choice: premission
		gas-draw
;

cyoa: roadloot-country
	"Carretera rural amigable" cyoa-title!
	someicon
	($ Thegroup .. "  esta conduciendo por la carretera en un tranquilo campo. Mas adelante hay una gran multitud de autos quemados, con zombies deambulando a su alrededor." $) cyoa-text! basic-tone
		0.8 1.5 frnd 7 23 rnd 0 2 rnd zforecast
		"events/exterior/region/road-country.df" $load-region
		choice( "Investigar los autos" )choice: premission
		gas-draw-noskip
;

cyoa: roadloot-city
	"La calle mala" cyoa-title!
	someicon
	($ Thegroup .. "  esta conduciendo por una ciudad cuando " .. gthey .. "  veo" .. g1s .. "  una carretera que se cruza congestionada con autos oxidados y una horda de zombies ya enojados."  $) cyoa-text! basic-tone
		1.5 2 frnd 8 23 rnd 3 4 rnd zforecast
		"events/exterior/region/road-city.df" $load-region
		choice( "Revisar esta calle lateral" )choice: premission
		gas-draw
;

cyoa: roadloot-canada
	"El Fin del Camino de la Muerte" cyoa-title!
	someicon
	($ Thegroup .. " ' ha llegado justo antes de la frontera con Canada! Tan cerca de la seguridad, aqui es donde se vuelve mas peligroso!"  $) cyoa-text! basic-tone
		1.5 2 frnd 8 12 rnd 3 3 rnd zforecast
		"events/exterior/region/road-long.df" $load-region
		choice( "Let's Do This!!!" )choice: premission
;

} }




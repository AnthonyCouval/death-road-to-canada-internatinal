uses paul/region-layout.df

map{ regiondef{

	: grass-lot LAYER_FLOORTOP max-layer! grass-lot ;

	: locid-bungalow make-bungalow ;
	: locid-gablehouse make-gable-house ;
	: locid-2storeyhouse make-2storey-house ;

	// Picks the more low-rent looking houses
	: make-a-house rnd5050 if locid-bungalow else locid-2storeyhouse then grass-lot walkway ;

	// Maybe replace office-signs and such for this later
	: safe-options 
	0 stack
		"derriere" shove
		"anus : anus" shove
	shuffles pops nip
	;	
	
	: office-signs
		1 5 rnd case
			1 of "DINKUS ET SLOAN" endof
			2 of "LOIS DES VILLAINS RELAXANT" endof
			3 of "PERE ET FILS" endof
			4 of "iomnitelecorpco" endof
			5 of "Entreprise initech" endof
		endcase
	;
	: restaurant-signs
		1 5 rnd case
			1 of "POMMES DE TERRE A L'EAU BOUILLANTE" endof
			2 of "PATES A SPAGHETTIS SEULEMENT." endof
			3 of "VIANDE ET PRODUITS CONNEXES." endof
			4 of "ALLER A LA CURRY - A PROPOS DE" endof
			5 of "LE TERRITOIRE DE BURGS." endof
		endcase
	;
	
	: prefab-shop sign-text! prefab{ 0 3 rnd 9 0 shop } paved-lot ;
	: prefab-shop2 sign-text! prefab{ 0 3 rnd 9 0 shop2 } paved-lot ;
	: prefab-apt sign-text! prefab{ mrand 7 9 rnd 0 building } paved-lot ;
	: prefab-house sign-text! prefab{ mrand 6 0 building2 } paved-lot ;
	
	: make-a-pub "PUB DE MOE" prefab-shop ;
	: make-a-gunshop "ARRET DE L'ARME" sign-text! prefab{ 1 3 rnd 9 0 shop } paved-lot ;
	: make-a-foodshop "LES FUD-E-MEYERS SONT DES MOULES A H" prefab-shop2 ;
	
	: make-a-jockshop "LES SPORTS ET LES JORTES." prefab-shop2 ;
	: make-a-camping "DEPOT DE CAMPING" prefab-shop2 ;
	: make-a-hardware "EQUIPEMENT D'ERNIE" prefab-shop2 ;
	: make-a-umbrella "SEULEMENT DES PARAPLUIES." prefab-shop2 ;
	: make-a-drugshop "MEDICAMENT DE SMALLGRENE" prefab-shop2 ;
	: make-a-sportshop "SPORT MOTOCYCLISTE DE HAUT NIVEAU." prefab-shop2 ;
	: make-a-banner "ASSUREZ-VOUS ICI !" prefab-house ;
	: make-a-infest "Dead arcade : jeu mort" prefab-house ;
	: make-a-barkapt "ABOYEZ, ABOYEZ." prefab-apt ;
	: make-a-rescueapt "AIDEZ-MOI" prefab-apt ;
	
	: make-a-bookshop "LIBRAIRIE BOOKATORIUM" sign-text! prefab{ 0 9 0 shop } paved-lot ;
	: make-a-police "POLICE DE BUTTVILLE." sign-text! prefab{ 5 9 0 shop } paved-lot ;
	: make-a-clinic "MARATHON : COURSE DE 42," sign-text! prefab{ 4 9 0 shop } paved-lot ;
	: make-a-office office-signs sign-text! prefab{ 0 1 rnd 9 0 shop } paved-lot ;
	: make-a-gym 
		"MUSCLE ! BOMBE ! SALLES DE SPORT !"
		0.5 0.5 0.5 sign-border!
		0.1 0.1 0.1 sign-bg!
		1 0.5 0.5 sign-fg!
		prefab-shop2
	;
	: make-a-coffee "LA FIN DU MONDE CAFE" sign-text! prefab{ 0 9 0 shop } paved-lot ;
	: make-a-restaurant restaurant-signs prefab-shop ;
	: make-a-arcade "MANGE-QUART A LA FERIA" prefab-shop2 ;
	: make-a-furnshop "MOBILIER D'ART OU MAGASIN DE MEUBLES." prefab-shop2 ;
	
	: make-apartments ( locationid ) prefab{ mrand 5 8 rnd 0 building } paved-lot ;

	: aplot add-a-path+ grass-lot rnd5050 if 1 lot-back-fence+ then next-plot ;

} }


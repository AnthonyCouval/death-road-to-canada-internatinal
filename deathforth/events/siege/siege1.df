cyoa: siege1-farm
	"Versteck im Wald" cyoa-title!
	someicon
	($ cname .. "  fahrt nachts durch den Wald. " .. cHe .. "  biegt falsch ab und erreicht das Ende der Strae. In der Nahe im Norden, " .. che .. "  kann man kaum die Form einer Hutte erkennen." $) cyoa-text! basic-tone
	0.4 1 frnd 20 22 frnd 2 zforecast
	"events/exterior/region/cabin1-night.df" $load-region
		choice( "Hutte untersuchen" )choice: premission
		gas-draw
;

cyoa: siege1-openhouse
	"Hausbelagerung" cyoa-title!
	($ Thegroup .. "  wird beim Plundern von einer groen Horde Zombies uberrascht " .. gThey .. "  laufen" .. g1s .. "  in ein Haus um Schutz zu suchen und zu planen " .. ghis .. "  nachster Zug." $) cyoa-text! basic-tone	
		1.8 ( 1.3 ) 9 16 rnd 1 siegecast
		"events/siege/region/midopen1.df" $load-region
		choice( "Versuche zu uberleben" )choice: premission
;

cyoa: siege1-openhouseeasy

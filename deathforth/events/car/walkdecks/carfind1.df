
: find-car-gas
	50 100 rnd trunk-gas+
;

cyoa{ road{ 

: carinfo-SUV
	"'I SUV hanno un chilometraggio del gas scadente e sono lenti. Sono anche molto resistenti e si rompono lentamente! Non preoccuparti di portarlo via dai salti." +crtext
;
: carinfo-muscle
	"'Le muscle car come questa hanno un chilometraggio del gas leggermente peggiore della media e si rompono rapidamente. Sono facili da riparare e molto veloci, portalo via da un salto dolce!" +crtext
;
: carinfo-hybrid
	"Italiano" +crtext
;
: carinfo-little
	"Le macchine piu piccole hanno un buon consumo di carburante. Sono anche fragili. Non schiantarle contro niente!" +crtext
;
: carinfo-grandpa
	"'Non li fanno piu cosi! Questa vecchia macchina e costruita davvero robusta. E anche facile da riparare, ma ha un consumo di carburante leggermente peggiore." +crtext
;
: carinfo-van
	"I furgoni sono grandi, lenti, pesanti e consumano molto. Si rompono lentamente e sono costruiti come carri armati! Sono anche facili da riparare." +crtext
;

cyoa: find-car-SUV
	image-suv
	"FALLO GIRARE" cyoa-title!
	choosehuman
	($ "Mentre camminavo lungo i sobborghi della citta " .. cname .. " trova un piccolo negozio di articoli sportivi. E' stato ripulito di bottino. Pensando che tutto sia perduto, " .. cname .. "  trova un vecchio SUV nel retro del negozio." $) cyoa-text! carinfo-SUV CAR_SUV get-car
		choice( "Accendila!" )choice: find-car-gas
;

cyoa: find-car-muscle
	image-sports-car
	"GOMME CHE BRUCIANO" cyoa-title!
	choosehuman
	($ "Mentre cammina lungo la strada " .. cname .. "  trova una stazione di servizio in lontananza. Non ce molto altro che una fantastica muscle car accanto alla pompa di benzina. Ha le chiavi sul cruscotto!" $) cyoa-text! carinfo-muscle CAR_MUSCLE2 get-car
		choice( "Accendila!" )choice: find-car-gas
;	

0 value gator-ate-key

cyoa: find-car-starter
	// NEED IMAGE
	"DEJA VU" cyoa-title!
	choosehuman
	($ cname .. "  trova unauto parcheggiata in mezzo alla strada. Si precipitano a scoprire unauto che sembra sospettosamente simile allauto con cui hanno iniziato il loro viaggio." $) text!
	gator-ate-key 1 < if 
		($ cname .. "  prende le chiavi che " .. che .. "  prese dalla vecchia macchina e le infilo nel cruscotto. La macchina parti." $)
	else
		($ cname .. "  cerca le chiavi della macchina. Non ci sono " .. cHe .. "  esce dalla macchina per un momento e mette " .. chis .. "  il piede proprio in una cacca di alligatore. Ci sono delle chiavi dentro!" $)
	then
		+crtext starting-car get-car
		choice( "Eccoci di nuovo!" )choice: find-car-gas
;

cyoa: find-car-hybrid
	image-hybrid-battery
	"EM PEE GEES" cyoa-title!
	choosehuman
	($ "Mentre vagava per una piccola citta " .. cname .. "  scopre una nuova macchina ibrida davanti a un negozio. La batteria e scarica, ma il negozio si rivela essere un negozio di ricambi per auto. Trovare una batteria funzionante e stato facile!" $) cyoa-text! carinfo-hybrid CAR_HYBRID1 get-car
		choice( "Accendila!" )choice: find-car-gas
;	
	
} }

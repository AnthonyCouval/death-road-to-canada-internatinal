cyoa{ road{

: walkwandermore 
 	// Removed due to not really being a sensible choice, confusing to new players
	// choice( "Peregrinar por outro dia;" )choice 
;

cyoa: carfind-tunnel
	"Tunel de Preservacao de Carros;" cyoa-title!
	someicon
	($ Thegroup .. " 'caminha para a entrada de um tunel cheio de carros, escuro. Ha que haver algum gas e um carro funcional la dentro. Alem disso, ha muitos zumbis que voce nao consegue escapar facilmente.';" $) cyoa-text! basic-tone
		1.7 2 frnd 18 23 rnd 1 3 rnd zforecast
		"events/car/region/car-tunnel.df" $load-region
		choice( "Pesquisar tunel" )choice: premission
		walkwandermore
;

cyoa: carfind-dirt
	"Estrada de Terra para Fora;" cyoa-title!
	someicon
	($ Thegroup .. " ve a estrada de terra se estender por toda a distancia. Ha muitos carros quebrados e muitos zumbis. No final ha um carro que parece comecar.;" $) cyoa-text! basic-tone
		1.7 2 frnd 13 23 rnd 1 3 rnd zforecast
		"events/car/region/car-dirt.df" $load-region
		choice( "Tentar chegar ao carro;" )choice: premission
		walkwandermore
;

cyoa: carfind-gravel
	"Estrada acidentada para a seguranca" cyoa-title!
	someicon
	($ Thegroup .. "  esta caminhando por uma estrada de cascalho quando " .. gthey .. "  ve" .. g1s .. " ' um grupo de carros destruidos a frente. E provavel que haja gasolina em alguns carros, e um ainda pode funcionar." $) cyoa-text! basic-tone
		1.7 2 frnd 9 23 rnd 1 3 rnd zforecast
		"events/car/region/car-gravel.df" $load-region
		choice( "Investigar carros" )choice: premission
		walkwandermore
;

cyoa: carfind-country
	"Caminhada longa pelo campo" cyoa-title!
	someicon
	($ Thegroup .. "  esta caminhando pelo campo e tropeca em carros queimados, com zumbis perambulando ao redor deles. Esta e uma boa oportunidade para verificar se um dos carros ainda funciona." $) cyoa-text! basic-tone
		1.5 1.7 frnd 7 23 rnd 1 3 rnd zforecast
		"events/car/region/car-country.df" $load-region
		choice( "Investigar os carros" )choice: premission
		walkwandermore
;

cyoa: carfind-city
	"Ultima rua do mundo" cyoa-title!
	someicon
	($ "'Ha uma cidade a frente, podre de zumbis. " .. Thegroup .. "  sabe que andar por uma rua da cidade assim e uma ma ideia, mas um carro espera no final dela."  $) cyoa-text! basic-tone
		2 2.5 frnd 8 23 rnd 2 3 rnd zforecast
		"events/car/region/car-city.df" $load-region
		choice( "Ande mesmo assim" )choice: premission
		walkwandermore
;

cyoa: carfind-long
	"Longa estrada para caminhar" cyoa-title!
	someicon
	($ Thegroup .. "  encontra uma longa estrada cheia de carros abandonados e os zumbis que talvez costumavam ser donos deles. Deve haver muito gas ainda em seus tanques, e deve haver um carro que ainda funcione."  $) cyoa-text! basic-tone
		1.7 2 frnd 8 12 rnd 2 3 rnd zforecast
		"events/car/region/car-long.df" $load-region
		choice( "Procure um bom carro" )choice: premission
		walkwandermore
;

cyoa: walkfind-junk
	"Ultima Parada FerroVelho e Sucatas" cyoa-title!
	($ Thegroup .. " 'caminha para um ferrovelho com um carro puxado para a frente dele. O carro parece que vai funcionar, e pode ser o ultimo que voce ve por um tempo.'" $) cyoa-text! basic-tone
	1.1 1.4 frnd 8 18 frnd 0 2 rnd zforecast
	"events/car/region/junk-car.df" $load-region
		choice( "Explorar Deposito de Lixo" )choice: premission
		walkwandermore
;

cyoa: walkfind-rest
	"Bom Lugar para Descansar" cyoa-title!
	($ Thegroup .. " encontra um parque de descanso apos horas andando pela estrada. Dentro dela ha um carro que parece ser conduzivel. As chaves devem estar por perto." $) cyoa-text! basic-tone
	1.3 7 22 frnd 1 3 rnd zforecast
	"events/car/region/rest-car.df" $load-region
		choice( "Ver esse carro" )choice: premission
		walkwandermore
;

cyoa: walkfind-cabin
	"Cabana no Final da Estrada" cyoa-title!
	($ "Depois de horas de andar, " .. thegroup .. " 'encontra um carro sentado ao lado de uma estrada rural. Ele esta em excelente estado, mas as chaves estao faltando. Um cabinete e visivel para norte." $) cyoa-text! basic-tone
	1.5 7 22 frnd 1 3 rnd zforecast
	"events/car/region/cabin-car.df" $load-region
		choice( "Procurar pelas chaves" )choice: premission
		walkwandermore
;

} }




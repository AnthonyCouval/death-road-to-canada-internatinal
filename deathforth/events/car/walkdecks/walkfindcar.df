uses base.df
uses charfilt.df
uses charstats.df
// uses road.df

cyoa{ road{

: walkwandermore 
 	// Removed due to not really being a sensible choice, confusing to new players
	// choice( "Errez pendant un autre jour" )choice 
;

cyoa: carfind-tunnel
	"Tunnel de preservation des voitures" cyoa-title!
	someicon
	($ Thegroup .. " ' marche vers l'entree d'un tunnel sombre, rempli de voitures. Il doit y avoir de l'essence et une voiture en etat de marche la dedans. Aussi beaucoup de zombies dont vous ne pouvez pas facilement vous echapper." $) cyoa-text! basic-tone
		1.7 2 frnd 18 23 rnd 1 3 rnd zforecast
		"events/car/region/car-tunnel.df" $load-region
		choice( "Rechercher le tunnel" )choice: premission
		walkwandermore
;

cyoa: carfind-dirt
	"Chemin de terre vers la sortie" cyoa-title!
	someicon
	($ Thegroup .. "  voit la route de terre setendre dans la distance. Il y a beaucoup de voitures detruites et beaucoup de zombies. A lextremite se trouve une voiture qui pourrait redemarrer." $) cyoa-text! basic-tone
		1.7 2 frnd 13 23 rnd 1 3 rnd zforecast
		"events/car/region/car-dirt.df" $load-region
		choice( " Essayer datteindre la voiture" )choice: premission
		walkwandermore
;

cyoa: carfind-gravel
	" Route rugueuse vers la securite" cyoa-title!
	someicon
	($ Thegroup .. "  marche le long dune route de gravier quand " .. gthey .. "  voit" .. g1s .. " ' un groupe de voitures detruites devant lui. Les chances sont qu'il y a du carburant dans certaines voitures, et une pourrait encore fonctionner." $) cyoa-text! basic-tone
		1.7 2 frnd 9 23 rnd 1 3 rnd zforecast
		"events/car/region/car-gravel.df" $load-region
		choice( " Enqueter sur les voitures" )choice: premission
		walkwandermore
;

cyoa: carfind-country
	" Longue marche dans la campagne" cyoa-title!
	someicon
	($ Thegroup .. "  marche a travers le paysage et tombe sur des voitures brulees, avec des zombies qui rodent autour delles. Cest une bonne occasion de verifier si une des voitures fonctionne encore." $) cyoa-text! basic-tone
		1.5 1.7 frnd 7 23 rnd 1 3 rnd zforecast
		"events/car/region/car-country.df" $load-region
		choice( "Enqueter sur les voitures" )choice: premission
		walkwandermore
;

cyoa: carfind-city
	" Derniere rue au monde" cyoa-title!
	someicon
	($ "' Il y a une ville devant toi, gorgee de zombies. " .. Thegroup .. "  sait que marcher dans une rue de ville comme ca nest pas une bonne idee, mais il y a une voiture qui attend a la fin de celle ci."  $) cyoa-text! basic-tone
		2 2.5 frnd 8 23 rnd 2 3 rnd zforecast
		"events/car/region/car-city.df" $load-region
		choice( "Walk through anyway" )choice: premission
		walkwandermore
;

cyoa: carfind-long
	"Long Road to Walk" cyoa-title!
	someicon
	($ Thegroup .. "  trouve une longue route pleine de voitures abandonnees et de zombies qui les possedaient peut etre. Il doit y avoir encore beaucoup dessence dans leurs reservoirs, et il doit y avoir une voiture qui fonctionne encore."  $) cyoa-text! basic-tone
		1.7 2 frnd 8 12 rnd 2 3 rnd zforecast
		"events/car/region/car-long.df" $load-region
		choice( "Look for a good car" )choice: premission
		walkwandermore
;

cyoa: walkfind-junk
	"Last Stop Junk and Salvage" cyoa-title!
	($ Thegroup .. "  marche jusqua une casse avec une voiture garee devant. La voiture semble pouvoir rouler, et cest peut etre la derniere que vous verrez pendant un moment." $) cyoa-text! basic-tone
	1.1 1.4 frnd 8 18 frnd 0 2 rnd zforecast
	"events/car/region/junk-car.df" $load-region
		choice( "Explorer la casse" )choice: premission
		walkwandermore
;

cyoa: walkfind-rest
	"Good Place to Rest" cyoa-title!
	($ Thegroup .. "  trouve une aire de repos apres des heures de marche le long de la route. Juste devant il y a une voiture qui semble pouvoir etre conduite. Les cles doivent etre quelque part a proximite." $) cyoa-text! basic-tone
	1.3 7 22 frnd 1 3 rnd zforecast
	"events/car/region/rest-car.df" $load-region
		choice( "Regarde cette voiture" )choice: premission
		walkwandermore
;

cyoa: walkfind-cabin
	"Cabin at the End of the Road" cyoa-title!
	($ "Apres des heures de randonnee, " .. thegroup .. " ' trouve une voiture garee le long d'une route de campagne. Elle est en tres bon etat, mais les cles sont manquantes. Une cabane est visible au nord." $) cyoa-text! basic-tone
	1.5 7 22 frnd 1 3 rnd zforecast
	"events/car/region/cabin-car.df" $load-region
		choice( "Search for the keys" )choice: premission
		walkwandermore
;

} }




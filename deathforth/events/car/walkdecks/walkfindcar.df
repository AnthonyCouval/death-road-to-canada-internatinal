uses base.df
uses charfilt.df
uses charstats.df
// uses road.df

cyoa{ road{

: walkwandermore 
 	// Removed due to not really being a sensible choice, confusing to new players
	// choice( "Court metrage au mode enfer" )choice 
;

cyoa: carfind-tunnel
	"Tunnel de conservation pour voitures" cyoa-title!
	someicon
	($ Thegroup .. " se rend vers l'entree d'un tunnel sombre, rempli de voitures. il y a du carburant et une voiture fonctionnelle dedans. de plus, il y a beaucoup de zombies qui ne vous laisseront pas facilement passer." $) cyoa-text! basic-tone
		1.7 2 frnd 18 23 rnd 1 3 rnd zforecast
		"events/car/region/car-tunnel.df" $load-region
		choice( "Gobelin effrayant" )choice: premission
		walkwandermore
;

cyoa: carfind-dirt
	"Route sableuse vers la hors-la" cyoa-title!
	someicon
	($ Thegroup .. " voici s'etendre une route de terre vers la distance. il y a beaucoup de voitures abandonnees et beaucoup de zombies. a l'extremite se trouve une voiture qui pourrait redemarrer." $) cyoa-text! basic-tone
		1.7 2 frnd 13 23 rnd 1 3 rnd zforecast
		"events/car/region/car-dirt.df" $load-region
		choice( "Atteignre la voiture" )choice: premission
		walkwandermore
;

cyoa: carfind-gravel
	"Route rugueuse vers la securite." cyoa-title!
	someicon
	($ Thegroup .. " elle descend une voie rase a pied. " .. gthey .. " voir" .. g1s .. " un groupe de voitures detruites s'etend a l'avant. il est vraisemblable que certains vehicules contiennent du carburant, et un d'eux peut encore fonctionner." $) cyoa-text! basic-tone
		1.7 2 frnd 9 23 rnd 1 3 rnd zforecast
		"events/car/region/car-gravel.df" $load-region
		choice( "Enqueter sur les voitures." )choice: premission
		walkwandermore
;

cyoa: carfind-country
	"Long walk dans le pays" cyoa-title!
	someicon
	($ Thegroup .. " il se promene dans le paysage et tombe sur des voitures incendiees, avec des zombis qui rodent autour d'elles. cela offre une chance de verifier si l'une des voitures fonctionne encore." $) cyoa-text! basic-tone
		1.5 1.7 frnd 7 23 rnd 1 3 rnd zforecast
		"events/car/region/car-country.df" $load-region
		choice( "Enqueter sur les voitures" )choice: premission
		walkwandermore
;

cyoa: carfind-city
	"Derniere rue au monde" cyoa-title!
	someicon
	($ "Il y a une ville a l'avant, pleine de zombies putrefies. " .. Thegroup .. " cependant qu'il sait que marcher par une rue semblable a celle-ci est un mauvais idee, il y a un voiture qui attend a la fin de cette rue."  $) cyoa-text! basic-tone
		2 2.5 frnd 8 23 rnd 2 3 rnd zforecast
		"events/car/region/car-city.df" $load-region
		choice( "Marchez toujours dans ce sens" )choice: premission
		walkwandermore
;

cyoa: carfind-long
	"Long route a parcourir" cyoa-title!
	someicon
	($ Thegroup .. " une longue route pleine d'automobiles abandonnees et de zombis qui peut avoir possede anciennement. il doit y avoir beaucoup de carburant encore dans leurs reservoirs, et il doit y avoir une voiture qui fonctionne encore."  $) cyoa-text! basic-tone
		1.7 2 frnd 8 12 rnd 2 3 rnd zforecast
		"events/car/region/car-long.df" $load-region
		choice( "Rechercher une voiture agreable." )choice: premission
		walkwandermore
;

cyoa: walkfind-junk
	"L'artiste martial s'est applique sur le char." cyoa-title!
	($ Thegroup .. " se rend vers un dechetterie en portant devant lui une voiture qui semble fonctionner. elle pourrait etre la derniere que vous voyez a cette epoque." $) cyoa-text! basic-tone
	1.1 1.4 frnd 8 18 frnd 0 2 rnd zforecast
	"events/car/region/junk-car.df" $load-region
		choice( "Explorez le depot de dechets." )choice: premission
		walkwandermore
;

cyoa: walkfind-rest
	"Endroit agreable pour reposer." cyoa-title!
	($ Thegroup .. " une arret de bus apres des heures de marche le long de la route. devant lui se trouve une voiture qui ressemble a ce qu'on peut conduire. les cles doivent etre quelque part a proximite." $) cyoa-text! basic-tone
	1.3 7 22 frnd 1 3 rnd zforecast
	"events/car/region/rest-car.df" $load-region
		choice( "Verifiez cette voiture." )choice: premission
		walkwandermore
;

cyoa: walkfind-cabin
	"Une cabane au bout de la route" cyoa-title!
	($ "Apres des heures de randonnee. " .. thegroup .. " une voiture est decouverte le long d'une route de campagne. elle est en parfait etat, mais les cles manquent. un cabanon est visible a l' nord." $) cyoa-text! basic-tone
	1.5 7 22 frnd 1 3 rnd zforecast
	"events/car/region/cabin-car.df" $load-region
		choice( "Rechercher les cles" )choice: premission
		walkwandermore
;

} }




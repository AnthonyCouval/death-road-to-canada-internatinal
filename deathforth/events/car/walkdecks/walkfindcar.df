uses base.df
uses charfilt.df
uses charstats.df
// uses road.df

cyoa{ road{

: walkwandermore 
 	// Removed due to not really being a sensible choice, confusing to new players
	// choice( "Vagar por otro dia" )choice 
;

cyoa: carfind-tunnel
	"Tunel de Conservacion de Vehiculos" cyoa-title!
	someicon
	($ Thegroup .. " 'Se acerca a la entrada de un tunel oscuro, lleno de coches. Tiene que haber algo de gasolina y un coche que funcione. Tambien hay un monton de zombis de los que no puedes escapar facilmente." $) cyoa-text! basic-tone
		1.7 2 frnd 18 23 rnd 1 3 rnd zforecast
		"events/car/region/car-tunnel.df" $load-region
		choice( "Buscar en el tunel" )choice: premission
		walkwandermore
;

cyoa: carfind-dirt
	"Camino de Tierra a Fuera de Aqui" cyoa-title!
	someicon
	($ Thegroup .. " ve el camino de tierra que se extiende hacia la distancia. Hay un monton de coches destrozados y un monton de zombies. Al final hay un coche que parece que podria arrancar." $) cyoa-text! basic-tone
		1.7 2 frnd 13 23 rnd 1 3 rnd zforecast
		"events/car/region/car-dirt.df" $load-region
		choice( "Intenta alcanzar el coche" )choice: premission
		walkwandermore
;

cyoa: carfind-gravel
	"Camino Dificil a la Seguridad" cyoa-title!
	someicon
	($ Thegroup .. " esta caminando por una calle de gravilla cuando', " .. gthey .. " ve" .. g1s .. " ve visto un grupo de coches averiados adelante. Las probabilidades son que haya gasolina en algunos coches, y uno tal vez siga funcionando." $) cyoa-text! basic-tone
		1.7 2 frnd 9 23 rnd 1 3 rnd zforecast
		"events/car/region/car-gravel.df" $load-region
		choice( "Investigar coches" )choice: premission
		walkwandermore
;

cyoa: carfind-country
	"Paso largo por el campo" cyoa-title!
	someicon
	($ Thegroup .. " esta caminando por el campo y se topa con coches quemados, con zombis que recorren alrededor de ellos. Esto es una buena oportunidad para comprobar si uno de los coches sigue funcionando." $) cyoa-text! basic-tone
		1.5 1.7 frnd 7 23 rnd 1 3 rnd zforecast
		"events/car/region/car-country.df" $load-region
		choice( "Investigue los coches" )choice: premission
		walkwandermore
;

cyoa: carfind-city
	"Ultima calle del mundo" cyoa-title!
	someicon
	($ "Hay una ciudad adelante, putrefacta de zombis. ', " .. Thegroup .. " sabe que caminar por una calle urbana como esta es una mala idea, pero hay un coche parado al final de ella."  $) cyoa-text! basic-tone
		2 2.5 frnd 8 23 rnd 2 3 rnd zforecast
		"events/car/region/car-city.df" $load-region
		choice( "Caminar a traves de ello de todos modos" )choice: premission
		walkwandermore
;

cyoa: carfind-long
	"Largo Camino por Recorrer" cyoa-title!
	someicon
	($ Thegroup .. " encuentra un largo camino lleno de coches abandonados y los zombies que tal vez solian ser sus duenos. Debe haber un monton de gas todavia en sus tanques, y debe haber un coche que todavia funciona."  $) cyoa-text! basic-tone
		1.7 2 frnd 8 12 rnd 2 3 rnd zforecast
		"events/car/region/car-long.df" $load-region
		choice( "Busca un buen coche" )choice: premission
		walkwandermore
;

cyoa: walkfind-junk
	"Ultima Parada Chatarra y Desguace" cyoa-title!
	($ Thegroup .. " 'camina hacia un desguace con un coche parado justo en la entrada. El coche parece que funciona, y quizas sea el ultimo que veas durante un tiempo." $) cyoa-text! basic-tone
	1.1 1.4 frnd 8 18 frnd 0 2 rnd zforecast
	"events/car/region/junk-car.df" $load-region
		choice( "Explorar el deposito de chatarra" )choice: premission
		walkwandermore
;

cyoa: walkfind-rest
	"Buen Lugar para Descansar" cyoa-title!
	($ Thegroup .. " 'encuentra una area de descanso despues de horas caminando por la carretera. Justo enfrente hay un coche que parece que se puede conducir. Las llaves deben estar cerca." $) cyoa-text! basic-tone
	1.3 7 22 frnd 1 3 rnd zforecast
	"events/car/region/rest-car.df" $load-region
		choice( "Revisar ese coche" )choice: premission
		walkwandermore
;

cyoa: walkfind-cabin
	"Cabana al Final del Camino" cyoa-title!
	($ "Despues de horas de caminata, " .. thegroup .. " 'encuentra un coche estacionado a un lado de una carretera de campo. Esta en excelentes condiciones, pero falta la llave. Una cabana es visible al norte." $) cyoa-text! basic-tone
	1.5 7 22 frnd 1 3 rnd zforecast
	"events/car/region/cabin-car.df" $load-region
		choice( "Busca las llaves" )choice: premission
		walkwandermore
;

} }




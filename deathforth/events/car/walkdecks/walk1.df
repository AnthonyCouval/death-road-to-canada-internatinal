
// Might need to add trunk-food 0 > if then checks to taking food away. I added this to walk-hole.

cyoa{ road{ 

cyoa: walk-stubtoe
	image-stubbed-toe
	"GOLPE DE DEDO DEL PIE" cyoa-title!
	someone choosechar
	($ "Mientras camina, " .. cname .. " " .. chis .. " su pie se lastima bastante mal. No es una gran cosa, pero realmente le molesta.'," $) cyoa-text! 
	bitefx morale-- sting--
;
cyoa: walk-hole
	image-backpack-hole
	"Por la vez que" cyoa-title!
	choosehuman
	($ "Mientras camina, " .. cname .. " no se percata de un agujero en " .. chis .. " mochila." $) cyoa-text!
	nosupplyloss2? if
	// cchar .weaponb@ 0 = and
		($ "Habia tan pocos suministros que ninguno se perdio.		" .. cname .. " se siente realmente orgulloso de esto!" $) +crtext morale2+ goodfx
	else
		($ "Para cuando " .. che .. " lo comprende, habia horas de oportunidad para que suministros se hayan caido." $) +crtext
		morale-- badfx supplyloss2
	then
;

cyoa: walk-carrock
	image-car-looking-rock
	"TAN CERCA" cyoa-title!
	someone choosechar
	($ "Mientras caminaba por un camino de tierra, " .. cname .. "  penso que " .. che .. "  vio un coche en la distancia. Fue solo cuando " .. che .. "  se acerco que " .. che .. "  se dio cuenta de que era solo una roca gigante. Que pena." $) cyoa-text! badfx morale--all 
;
cyoa: walk-dirty
	image-wet-bag
	"Todo sucio" cyoa-title!
	choosehuman
	($ "Mientras caminaba por el bosque, " .. cname .. " ' no presta atencion a donde " .. che .. "  va y cae en un profundo charco de agua. " .. cHis .. "  equipo esta completamente sumergido, poniendo los suministros en peligro." $) cyoa-text! supplyloss2 morale2- badfx
;


cyoa-choice: walk-branchbreak-go
	($ cname .. "  decide trepar a un arbol para obtener un mejor punto de vista del area circundante." $) cyoa-text!
	cfitness+ if
		($ cHe .. " ' trepa al arbol con poco esfuerzo. Es un ejercicio divertido! " .. cHe .. "  ve algo en la distancia." $) +crtext morale++ goodfx fitnessREV
	then;
	40 %chance if
		 ($ "En el camino arriba, la rama que soportaba " .. chis .. " se rompe, ocasionando " .. chim .. " caer de un buen palmo!" $) +crtext fitnessREV morale-- bitefx ouch--
	then;
		($ cHis .. " plan works out fine " .. cHe .. "  ve algo a lo lejos y puede ver una vista majestuosa!" $) +crtext fitnessREV morale++ goodfx
;
: walk-branchbreak-no 2 ' walk-countdown +! badfx ;

cyoa: walk-branchbreak
	image-tree
	"LA RAMA" cyoa-title!
	choosehuman
	($ "Mientras caminaba por el bosque, " .. thegroup .. "  se pierde bastante. Si " .. gthey .. "  sigue" .. g1s .. "  yendo asi, " .. gthey .. "' perdera mucho tiempo." $) cyoa-text! 
		fittest charchoice( "  se sube a un arbol para mirar alrededor" )choice: walk-branchbreak-go
		choice( "Sigue vagando ciegamente" )choice: walk-branchbreak-no
;
cyoa: walk-nicewalk
	image-uneventful-way
	"Bonito paseo" cyoa-title!
	($ "" .. Thegroup .. "  continua caminando por el campo. Es muy tranquilo pero al menos no hay zombis ni peligros a la vista. Por primera vez en mucho tiempo pueden bajar la guardia y caminar en paz." $) cyoa-text! basic-tone
;
cyoa: walk-mold
	image-white-van
	"Bueno para siempre" cyoa-title!
	($ "" .. Thegroup .. "  ve una camioneta de panaderia que se ha averiado al costado de la carretera. La camioneta es irreparable, el pan esta mohoso y no se puede comer, pero hay algunos pasteles azucarados que aun estan buenos." $) cyoa-text! morale++all 4 trunk-food+ goodfx
;
cyoa: walk-pain1
	"Salto de fe" cyoa-title!
	($ Thegroup .. "  queda atrapado entre hordas de zombis mientras se encuentra en una carretera al borde de un acantilado. Sin un automovil, la unica forma de escapar era saltando y esperando lo mejor. La caida fue dolorosa, pero no fatal." $) cyoa-text! sting--all bitefx
;
cyoa: walk-pain2
	"Ataque de gato!" cyoa-title!
	someicon
	image-feral-cat
	
	($ cname .. "  esta caminando por la carretera cuando " .. che .. " ' es atacado repentinamente por un gato salvaje! Los gatos salvajes cubren los Estados Unidos despues del zombocalypse. Nunca los ves, pero siempre estan observando. Esperando cualquier debilidad." $) cyoa-text! sting-- morale-- bitefx
;
cyoa: walk-pain3
	"Terreno accidentado" cyoa-title! someicon
	($ Thegroup .. " ' se encuentra con un tramo de carretera particularmente accidentado. No hay nada que amenace la vida en ello, es solo una caminata larga y miserable. " .. gThey .. "  obtener" .. g1s .. "  magullado y maltratado en multiples accidentes menores." $) cyoa-text! sting--all morale--all bitefx
;
cyoa: walk-rainmorale
	"Clima horrible" cyoa-title! someicon
	($ "El clima empeora repentinamente. " .. Thegroup .. "  esta atrapado al aire libre y debe seguir moviendose. " .. gTheyare .. "  obligado a tropezar en condiciones miserables." $) cyoa-text!
	roadtrip-has-umbrella? if
		umbrella-count numhums >= if 
			solohuman if choosehuman 
				($ "'Es algo bueno que " .. cname .. "  traje un paraguas!" $)
			else "Hay suficientes paraguas para todos!" then +crtext "Las cosas podrian haber sido mucho peores!" +crtext goodfx
		else 
			umbrella-count 2 < if "Tener un paraguas ayuda, pero solo un poco." else "No hay suficientes paraguas para proteger completamente a todos del aguacero!"
			then +crtext morale--all badfx
		then
	else
		morale2-all badfx
	then
	1.2 1.6 frnd weather! -2 2 frnd wind_force!
;
cyoa: walk-meal
	image-caught-fish
	"Comida gratis" cyoa-title!
	choosehuman
	($ "Mientras camina al lado de un gran arroyo " .. cname .. " ve algunos peces en el agua " .. cname .. " prueba suerte, se mete en el agua e intenta atrapar algunos peces con la mano. Por algun milagro " .. cname .. " es capaz de atrapar un bagre de tamano decente " $) cyoa-text! morale++all +6 trunk-food+ goodfx
;

cyoa-choice: walk-bandit1-paranoid
	($ cname .. " previo una emboscada, asi que " .. che .. " establecio " .. chis .. " planes poco antes de que aparecieran los bandidos." $) cyoa-text!
	solo if
		($ cHe .. " corre inmediatamente cuando los bandidos empiezan a hacer demandas. Cuando los bandidos persiguen " .. chim .. ", tropiezan con ramas y trampas que se colocaron en el camino." $)
	else
		($ "Cuando los bandidos hacen sus demandas de " .. cname .. ", " .. theothers .. " espiar" .. g2s .. " 'se sorprenden y se rindieron detras de ellos en una emboscada contra ambush. Ellos estaban sorprendidos por esto y se rendieron." $)
	then +crtext morale++all witsattREV goodfx
;

cyoa-choice: walk-bandit1-charm
	($ cname .. " 'convence a los ladrones para no llevar a cabo el ataque. Ellos no lo querian hacer, en realidad." $) cyoa-text! goodfx
	trunk-food 4 > if
		($ "Teniendo compasion " .. cname .. " les da algo de comida." $) +crtext -5 trunk-food+ morale++
	else
		($ cname .. " 'quiere ayudarlos, pero no puede desprenderse mucho." $) +crtext  morale--
	then
;

cyoa: walk-bandit1
	"Bandidos Reluctantes" cyoa-title!
	($ "Sin un coche " .. thegroup .. " esta siendo un blanco facil para los ladrones.	" .. Thegroup .. " es emboscado por bandidos ineptos que se disculpan por el robo. Son probablemente nuevos en esto." .. "Ellos exigen " rbold $) cyoa-text! 1 500 tone
	bandit-demand-fight
		most-paranoid if 
			charchoice( " lo esperaba" )choice: walk-bandit1-paranoid
		then
		most-charming if
			charchoice( " habla con ellos" )choice: walk-bandit1-charm
		then
;

cyoa-choice: walk-bandit2-coolit
	cpet? if 
		($ cname .. " de alguna manera se las arregla para hablar con " .. chis .. " boca de animal para decir" .. " ENFRIATE " pbold .. "a los despiadados bandidos." $)
	else
		($ cname .. " les dice a los despiadados bandidos que" .. "  TRANQUILICENSE." pbold $)
	then cyoa-text!
	($ "Esto los transforma en bandidos asesinos. Ningun milagro fue posible aqui." $) +crtext
	cool-it++ sting--all ouch2- witsattREV bitefx
;

cyoa-choice: walk-bandit2-pay
	($ Thegroup .. " paga." $) text!
	ezbandit? if
		($ gThey .. " perder" .. g1s .. " un trozo de " .. ghis .. " suministros " .. gTheyare .. " todavia vivo, por el momento." $) 
	else
		($ gThey .. " perder" .. g1s .. " " .. ghis .. " armas y todo lo demas " .. gthey .. " tenia. " .. gTheyare .. " todavia vivo, por el momento." $) 
	then +crtext badfx
	 ezbandit? not if 0weaponsall trunk.clear then bandit-all morale3-all someicon
;

: bandit2-ezbandit ezbandit? if " of a dollar " else " mitad " then ;

cyoa-choice: walk-bandit2-paranoid
	($ cname .. "  espero una emboscada, entonces " .. che .. "  penso en un plan de escape antes." $) cyoa-text!
	($ gHe .. "  rapidamente lanza" .. bandit2-ezbandit .. "de " .. ghis .. "  provisiones en el suelo como distraccion, entonces " .. "SALE CORRIENDO!" rbold .. "  mientras una lluvia de balas pasa zumbando." $) +crtext
	sting-- 
	($ "El plan fue realmente simple y lejos de ser perfecto, pero las cosas podrian haber ido mucho peor." $) +crtext goodfx witsattREV bandit-supplies2
;

cyoa-choice: walk-bandit2-gourmand
	"'Bien! Lo que sea! No me importa!" text! goodfx
	($ cname .. "  se acerca a cada bandido, luego come el arma que el bandido sostiene. " .. cHe .. "  hace esto con cada bandido. Todos estan demasiado confundidos por esto para moverse, o incluso reaccionar a los procedimientos." $) +crtext
	($ cname .. "  luego explica que " .. che .. "  estaba " .. "''realmente hambriento'" pbold .. "." $) +crtext 
	morale3+
	cchar .vitality@ 6 < if 
		1.5 cchar .scale.body.x!
		cchar .vitality++ -1 STAT_DEXTERITY cchar .bonus+
	then
;

cyoa-bridge: walk-bandit2-eatpick
	' gourmandcheck pick-team-char 0= if false then; pickchar true if choosechar then
	cicon
	"Que? Que quiere decir con " text! "'Comer las armas del bandido" pbold +text "?" +text
	"'Eso ni siquiera tiene sentido!" +crtext
	cchar charchoice( " ' come las armas del bandido! " .. "HAZLO!" rbold )choice: walk-bandit2-gourmand
	choice( "Me has oido! Come todas esas armas!" )choice: walk-bandit2-gourmand
	choice( "'Come las armas! Es el contador perfecto!" )choice: walk-bandit2-gourmand
	choice( "Comer armas, pero usar tacticas de sigilo" )choice: walk-bandit2-gourmand
;

cyoa: walk-bandit2
	"Bandidos despiadados" cyoa-title!
	($ "Sin un coche " .. thegroup .. "  es presa facil para los bandidos. Un grupo te embosca y te exige tus suministros." $) text!
	ezbandit? if
		($ "Todos los alimentos y el gas, mas la mitad de sus municiones y suministros medicos." rbold $)
	else
		($ "Todas las armas, municiones, gas, suministros. Todo." rbold .. "'		Esto es excepcionalmente cruel, a un nivel al que la mayoria de los bandidos no se rebajan. Saben que es una sentencia de muerte." $)
	then +crtext 1 500 tone
	choice( "Dar sus demandas" )choice: walk-bandit2-pay
	bandit-fight
		numgourmands 0 > if
			choice( "'Comer las armas del bandido" )choice: walk-bandit2-eatpick
		then
		most-paranoid if 
			charchoice( ": Se deja caer" .. bandit2-ezbandit .. "de botin y corre" )choice: walk-bandit2-paranoid
		then
		most-grating if
			charchoice( " 'dice Calmate como ultimas palabras" )choice: walk-bandit2-coolit
		then
;

cyoa-choice: walk-bandit3-burn
	($ cname .. " promete a los bandidos que si " .. che .. " 'no se le deja ir " .. che .. " volvera y quemara el puente." $) cyoa-text!
	50 %chance if
		($ "Los bandidos deciden ir a lo seguro y simplemente atacan de inmediato " .. Thegroup .. " logra escapar de la pelea, sin que le roben suministros." $) +crtext
		solo if 
			sting2-
		else
			sting-- sting--all
		then bitefx 
	else
		($ "Los bandidos se sienten intimidados ante la idea de perder su sustento, asi que dejan que " .. thegroup .. " pase.		Una vez " .. che .. " cruza el puente " .. che .. " lo prende fuego." $) +crtext morale++ goodfx
	then aholeREV
;

cyoa-choice: walk-bandit3-paranoid
	($ cname .. "  espero una emboscada, entonces " .. che .. " camino por el puente solo, sin llevar nada.	A los bandidos les molesta " .. chis .. " falta de cosas y actitud de mierda, por lo que tiran " .. chim .. " ' sobre el puente. No es una mala caida." $) cyoa-text!
	sting-- 
	($ "Mientras esto sucede, " .. theothers .. " espiar" .. g2s .. "  mas alla del puente con los suministros!" $) +crtext goodfx witsattREV
;

cyoa: walk-bandit3
	"Bandidos del puente de peaje" cyoa-title!
	($ Thegroup .. "  es emboscado mientras cruza un puente destartalado sobre un rio. Los bandidos exigen un peaje para cruzar." .. "Ellos quieren " rbold $) cyoa-text! 1 500 tone
	bandit-demand-fight
		most-paranoid notsolo and if 
			charchoice( " lo esperaba" )choice: walk-bandit3-paranoid
		then
		most-ahole if
			charchoice( "  amenaza con quemar el puente" )choice: walk-bandit3-burn
		then
;

cyoa-choice: walk-bandit4-fight
	($ Thegroup .. "  esta cansado y atrapado al aire libre como " .. gthey .. "  luchar" .. g1s .. "'. Es una suerte que estos bandidos no sean tan peligrosos. Despues de una corta pelea, corren." $) cyoa-text! someicon bitefx sting--all
;
cyoa-choice: walk-bandit4-angry
	($ "Los bandidos son " .. "COMPLETAMENTE ATERRORIZADOS" rbold .. "  por " .. cname .. "! Se tropiezan en un apuro por escapar!" .. Thegroup .. "  se siente aliviado de evitar una pelea mientras esta exhausto." $) cyoa-text! goodfx temperREV strengthREV morale++
;
cyoa-choice: walk-bandit4-obliv
	cpet? if
		($ cname .. "  hace un ruido que suena amenazante. Resulto que eran solo ruidos de confusion animal." $) cyoa-text!
	else
		($ cname .. " el archivo no se ha podido subir correctamente Por favor intentelo de nuevo " .. "QUE DIJISTE?" pbold .. " pero en realidad " .. che .. " no los escuche." $) cyoa-text!
	then
	($ "Los bandidos malinterpretan esto y son " .. "MUY INTIMIDADO" rbold .. "  por " .. cname .. " ellos huyen y se dispersan!	" .. cname .. "  no tiene idea de lo que paso pero se alegra de que los bandidos se hayan ido." $) +crtext goodfx witsattREV morale++
;

cyoa: walk-bandit4
	"Bandidos Cobardes" cyoa-title!
	($ Thegroup .. "  es robado por bandidos debiles. Los bandidos son de un tipo que normalmente no seria un problema, si " .. thegroup .. " ' tuviera un auto o no estuviera cansado de caminar todo el dia.	" .. "Los bandidos nerviosamente demandan " rbold $) cyoa-text! 1 500 tone
	bandit-demand choice( "Negarse y luchar!" )choice: walk-bandit4-fight
	most-angrystrong if 
		charchoice( "  aterroriza a los bandidos" )choice: walk-bandit4-angry
	then
	most-oblivious if
		charchoice( ": QUE DIJISTE?" )choice: walk-bandit4-obliv
	then
	// badfx morale--all bandit-ammomed bandit-food 0bweaponsall
;

: walk-boot-get 1 WEAPON_THROWINGBOOT trunk.weapon+ goodfx ;

cyoa: walk-boot
	image-stubbed-toe
	"Botin Gratis" cyoa-title!
	($ Thegroup .. " ' ve una bota vieja en el camino. No parece ser del tamano de nadie, pero bueno, es gratis! Seguramente este es un simbolo de buena suerte." $) cyoa-text!
		choice( "Toma esa bota" )choice: walk-boot-get
		choice( "Ignora la bota" )choice
;

: walk-caryell-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. " ' no noto nada de esto." $) +crtext 
		<- @ <- @ .witsattREV
	then;
	<- @ .morale--
;

cyoa: walk-caryell
	image-angry-car
	"Pasatiempo Americano Inmortal" cyoa-title!
	($ Thegroup .. "  ve un auto a toda velocidad en la carretera. Quizas este extrano pueda ayudar! Sin detenerse, el conductor grita " .. FLASHY .. "NEEEEEEEEEEEEEEEEEEEERD" .. gS .. "!" .. WHITE $) cyoa-text!
	"Y luego el auto desaparece." +crtext ' walk-caryell-check foreach-human-char badfx
;

} }

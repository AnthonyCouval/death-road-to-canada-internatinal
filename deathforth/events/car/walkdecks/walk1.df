
// Might need to add trunk-food 0 > if then checks to taking food away. I added this to walk-hole.

cyoa{ road{ 

cyoa: walk-stubtoe
	image-stubbed-toe
	"DITO DEL PIEDE COLPITO" cyoa-title!
	someone choosechar
	($ "Mentre camminava " .. cname .. "  colpisce " .. chis .. " ' l'alluce male. Non e un grosso problema, ma e davvero fastidioso." $) cyoa-text! 
	bitefx morale-- sting--
;
cyoa: walk-hole
	image-backpack-hole
	"Pozzo senza fondo" cyoa-title!
	choosehuman
	($ "Mentre camminava " .. cname .. " ' non nota un buco nel " .. chis .. "  zaino." $) cyoa-text!
	nosupplyloss2? if
	// cchar .weaponb@ 0 = and
		($ "Cerano cosi poche provviste che non ne e andata persa nessuna.		" .. cname .. "  si sente davvero compiaciuto di questo!" $) +crtext morale2+ goodfx
	else
		($ "Nel momento in cui " .. che .. "  si rende conto di questo, ci sono state ore di possibilita per le provviste di cadere." $) +crtext
		morale-- badfx supplyloss2
	then
;

cyoa: walk-carrock
	image-car-looking-rock
	"COSI VICINO" cyoa-title!
	someone choosechar
	($ "Mentre camminava lungo una strada sterrata, " .. cname .. "  pensava che " .. che .. "  ha avvistato unauto in lontananza. E stato solo quando " .. che .. "  si e avvicinato che " .. che .. "  si e reso conto che era solo una roccia gigante. Che peccato." $) cyoa-text! badfx morale--all 
;
cyoa: walk-dirty
	image-wet-bag
	"Tutto sporco" cyoa-title!
	choosehuman
	($ "Mentre camminava nel bosco, " .. cname .. " ' non fa attenzione a dove " .. che .. "  sta andando e cade in una profonda pozzanghera dacqua. " .. cHis .. "  lattrezzatura e completamente sommersa, mettendo a rischio le forniture." $) cyoa-text! supplyloss2 morale2- badfx
;


cyoa-choice: walk-branchbreak-go
	($ cname .. "  decide di arrampicarsi su un albero per avere una migliore visuale dellarea circostante." $) cyoa-text!
	cfitness+ if
		($ cHe .. " ' scala l'albero con poco sforzo. E un esercizio divertente! " .. cHe .. "  individua qualcosa in lontananza." $) +crtext morale++ goodfx fitnessREV
	then;
	40 %chance if
		 ($ "Sulla via del ritorno, il ramo che stava tenendo " .. chis .. "  peso si rompe, causando " .. chim .. "  una buona caduta!" $) +crtext fitnessREV morale-- bitefx ouch--
	then;
		($ cHis .. "  il piano funziona bene. " .. cHe .. "  individua qualcosa in lontananza e riesce a vedere una vista maestosa!" $) +crtext fitnessREV morale++ goodfx
;
: walk-branchbreak-no 2 ' walk-countdown +! badfx ;

cyoa: walk-branchbreak
	image-tree
	"IL RAMO" cyoa-title!
	choosehuman
	($ "Mentre cammina nel bosco, " .. thegroup .. "  si perde abbastanza. Se " .. gthey .. "  mantien" .. g1s .. "  continuando cosi, " .. gthey .. "''perdera un sacco di tempo." $) cyoa-text! 
		fittest charchoice( "  si arrampica su un albero per guardarsi intorno" )choice: walk-branchbreak-go
		choice( "Continua a vagare alla cieca" )choice: walk-branchbreak-no
;
cyoa: walk-nicewalk
	image-uneventful-way
	"Bella passeggiata" cyoa-title!
	($ "" .. Thegroup .. "  continua a camminare attraverso la campagna. E molto tranquillo ma almeno non ci sono zombi o pericoli in vista. Per la prima volta da molto tempo riescono ad abbassare la guardia e a camminare in una sorta di pace." $) cyoa-text! basic-tone
;
cyoa: walk-mold
	image-white-van
	"Buono per sempre" cyoa-title!
	($ "" .. Thegroup .. "  individua un furgone del panettiere che si e rotto sul ciglio della strada. Il furgone e irreparabile, il pane e ammuffito e immangiabile, ma ci sono delle torte zuccherate che sono ancora buone." $) cyoa-text! morale++all 4 trunk-food+ goodfx
;
cyoa: walk-pain1
	"Salto della fede" cyoa-title!
	($ Thegroup .. "  viene schiacciato da orde di zombi mentre si trova su una strada scoscesa. Senza unauto, lunico modo per scappare era saltare e sperare per il meglio. La caduta e stata dolorosa, ma non fatale." $) cyoa-text! sting--all bitefx
;
cyoa: walk-pain2
	"Attacco del gatto!" cyoa-title!
	someicon
	image-feral-cat
	
	($ cname .. "  sta camminando lungo la strada quando " .. che .. " ' viene improvvisamente sbranato da un gatto selvatico! I gatti selvatici ricoprono gli Stati Uniti dopo lo zombocalypse. Non li vedi mai, ma ti stanno sempre osservando. Aspettando qualsiasi debolezza." $) cyoa-text! sting-- morale-- bitefx
;
cyoa: walk-pain3
	"Terreno accidentato" cyoa-title! someicon
	($ Thegroup .. " 'incontra un tratto di strada particolarmente accidentato. Non c'e nulla di pericoloso per la vita, e solo una lunga e miserabile passeggiata. " .. gThey .. "  ottenere" .. g1s .. "  ferito e malconcio in numerosi piccoli incidenti." $) cyoa-text! sting--all morale--all bitefx
;
cyoa: walk-rainmorale
	"Tempo orribile" cyoa-title! someicon
	($ "Il tempo improvvisamente peggiora. " .. Thegroup .. "  e sorpreso allaperto e deve continuare a muoversi. " .. gTheyare .. "  costretto a inciampare in condizioni miserabili." $) cyoa-text!
	roadtrip-has-umbrella? if
		umbrella-count numhums >= if 
			solohuman if choosehuman 
				($ "'E una buona cosa che " .. cname .. "  abbia portato un ombrello!" $)
			else "Ci sono abbastanza ombrelli per tutti!" then +crtext "Le cose sarebbero potute andare molto peggio!" +crtext goodfx
		else 
			umbrella-count 2 < if "Avere un ombrello aiuta, ma solo un po." else "Non ci sono abbastanza ombrelli per proteggere completamente tutti dal diluvio!"
			then +crtext morale--all badfx
		then
	else
		morale2-all badfx
	then
	1.2 1.6 frnd weather! -2 2 frnd wind_force!
;
cyoa: walk-meal
	image-caught-fish
	"Pasto gratuito" cyoa-title!
	choosehuman
	($ "Mentre cammina lungo un grande ruscello " .. cname .. "  nota alcuni pesci nellacqua. " .. cname .. "  tenta la fortuna, entra nellacqua e prova a catturare del pesce a mani nude. Per miracolo, " .. cname .. "  riesce a catturare un grosso pesce gatto! " $) cyoa-text! morale++all +6 trunk-food+ goodfx
;

cyoa-choice: walk-bandit1-paranoid
	($ cname .. "  aveva previsto unimboscata, quindi " .. che .. "  predispose " .. chis .. "  piani poco prima che arrivassero i banditi." $) cyoa-text!
	solo if
		($ cHe .. "  scappa subito quando i banditi iniziano a fare richieste. Quando i banditi lo inseguono " .. chim .. ", inciampano su rami e trappole che erano state posizionate sul sentiero." $)
	else
		($ "Quando i banditi chiedono " .. cname .. ", " .. theothers .. "  si intrufolano" .. g2s .. " ' dietro di loro in un contro agguato. Sono sorpresi da questo e si arrendono." $)
	then +crtext morale++all witsattREV goodfx
;

cyoa-choice: walk-bandit1-charm
	($ cname .. " ' convince i banditi a non portare a termine l'attacco. Non volevano comunque farlo." $) cyoa-text! goodfx
	trunk-food 4 > if
		($ "Sentendo pieta, " .. cname .. "  da loro del cibo." $) +crtext -5 trunk-food+ morale++
	else
		($ cname .. " vuole aiutarli, ma non puo permettersi molto." $) +crtext  morale--
	then
;

cyoa: walk-bandit1
	"Brigate Rischiose" cyoa-title!
	($ "Senza una macchina, " .. thegroup .. "  e un facile bersaglio per i briganti.	" .. Thegroup .. "  viene assalito da goffi briganti che si scusano per la rapina. Sono probabilmente alle prime armi.	" .. "Chiedono " rbold $) cyoa-text! 1 500 tone
	bandit-demand-fight
		most-paranoid if 
			charchoice( "  lo sospettavo" )choice: walk-bandit1-paranoid
		then
		most-charming if
			charchoice( "  ragiona con loro" )choice: walk-bandit1-charm
		then
;

cyoa-choice: walk-bandit2-coolit
	cpet? if 
		($ cname .. "  in qualche modo riesce a parlare con " .. chis .. "  bocca animale per dire" .. "  CALMATI " pbold .. "ai briganti spietati." $)
	else
		($ cname .. "  dice ai briganti spietati di" .. " Raffreddati." pbold $)
	then cyoa-text!
	($ "Questo li trasforma in briganti assassini. Qui non era possibile nessun miracolo." $) +crtext
	cool-it++ sting--all ouch2- witsattREV bitefx
;

cyoa-choice: walk-bandit2-pay
	($ Thegroup .. "  paga." $) text!
	ezbandit? if
		($ gThey .. "  perdere" .. g1s .. "  un pezzo di " .. ghis .. "  rifornimenti. " .. gTheyare .. "  ancora vivo, per il momento." $) 
	else
		($ gThey .. "  perdere" .. g1s .. " " .. ghis .. "  armi e tutto il resto " .. gthey .. "  aveva. " .. gTheyare .. "  ancora vivo, per il momento." $) 
	then +crtext badfx
	 ezbandit? not if 0weaponsall trunk.clear then bandit-all morale3-all someicon
;

: bandit2-ezbandit ezbandit? if "  un quarto " else "  meta " then ;

cyoa-choice: walk-bandit2-paranoid
	($ cname .. "  si aspettava unimboscata, quindi " .. che .. "  pensava a un piano di fuga in anticipo." $) cyoa-text!
	($ gHe .. "  lancia velocemente" .. bandit2-ezbandit .. "di " .. ghis .. "  fornisce a terra come distrazione, quindi " .. "SCAPPA VIA!" rbold .. "  mentre una grandinata di proiettili sfreccia." $) +crtext
	sting-- 
	($ "Il piano era davvero semplice e tuttaltro che perfetto, ma le cose sarebbero potute andare molto peggio." $) +crtext goodfx witsattREV bandit-supplies2
;

cyoa-choice: walk-bandit2-gourmand
	"'Bene! Qualunque cosa! Non mi interessa!" text! goodfx
	($ cname .. "  dondola verso ogni bandito, poi mangia larma che il bandito tiene in mano. " .. cHe .. "  lo fa per ogni singolo bandito. Tutti sono troppo confusi da questo per muoversi o addirittura reagire al procedimento." $) +crtext
	($ cname .. "  spiega in seguito che " .. che .. "  era " .. "''davvero affamato'" pbold .. "." $) +crtext 
	morale3+
	cchar .vitality@ 6 < if 
		1.5 cchar .scale.body.x!
		cchar .vitality++ -1 STAT_DEXTERITY cchar .bonus+
	then
;

cyoa-bridge: walk-bandit2-eatpick
	' gourmandcheck pick-team-char 0= if false then; pickchar true if choosechar then
	cicon
	"Cosa?	Cosa intendi con " text! "'Mangia le armi del bandito" pbold +text "?" +text
	"'Questo non ha neanche senso!" +crtext
	cchar charchoice( " ' mangia le armi del bandito! " .. "Fallo!" rbold )choice: walk-bandit2-gourmand
	choice( "Mi hai sentito! Mangia tutte quelle armi!" )choice: walk-bandit2-gourmand
	choice( "'Mangia le armi! E la contromossa perfetta!" )choice: walk-bandit2-gourmand
	choice( "Mangia le armi, ma usa tattiche furtive" )choice: walk-bandit2-gourmand
;

cyoa: walk-bandit2
	"Banditi spietati" cyoa-title!
	($ "Senza una macchina, " .. thegroup .. "  e una facile preda per i banditi. Un gruppo ti tende unimboscata e richiede le tue scorte." $) text!
	ezbandit? if
		($ "Tutto il cibo e la benzina, piu la meta delle tue munizioni e delle tue scorte mediche." rbold $)
	else
		($ "Tutte le armi, munizioni, benzina, rifornimenti. Tutto." rbold .. "'		Questo e eccezionalmente crudele, a un livello a cui la maggior parte dei banditi non si abbassa. Sanno che e una condanna a morte." $)
	then +crtext 1 500 tone
	choice( "Dategli quello che chiedono" )choice: walk-bandit2-pay
	bandit-fight
		numgourmands 0 > if
			choice( "'Mangia le armi del bandito" )choice: walk-bandit2-eatpick
		then
		most-paranoid if 
			charchoice( ": Lascia" .. bandit2-ezbandit .. "di bottino e scappa" )choice: walk-bandit2-paranoid
		then
		most-grating if
			charchoice( " ' dice Calma come ultime parole" )choice: walk-bandit2-coolit
		then
;

cyoa-choice: walk-bandit3-burn
	($ cname .. "  promette ai banditi che se " .. che .. " ' non viene lasciato andare, " .. che .. "  tornera e brucera il ponte." $) cyoa-text!
	50 %chance if
		($ "I banditi decidono di giocare sul sicuro e attaccano immediatamente. " .. Thegroup .. "  riesce a scappare dalla lotta, senza che gli vengano rubate provviste." $) +crtext
		solo if 
			sting2-
		else
			sting-- sting--all
		then bitefx 
	else
		($ "I banditi sono intimiditi al pensiero di perdere i loro mezzi di sussistenza, quindi lasciano " .. thegroup .. "  passare.		Una volta " .. che .. "  attraversa il ponte, " .. che .. "  lo da alle fiamme." $) +crtext morale++ goodfx
	then aholeREV
;

cyoa-choice: walk-bandit3-paranoid
	($ cname .. "  si aspettava unimboscata, quindi " .. che .. "  ha attraversato il ponte da solo, senza portare nulla.	I banditi sono infastiditi da " .. chis .. "  manca di roba e pessimo atteggiamento, cosi la gettano " .. chim .. " ' oltre il ponte. Non e una brutta caduta." $) cyoa-text!
	sting-- 
	($ "Mentre cio accade, " .. theothers .. "  si intrufolano" .. g2s .. "  oltre il ponte con le provviste!" $) +crtext goodfx witsattREV
;

cyoa: walk-bandit3
	"Banditi del ponte a pedaggio" cyoa-title!
	($ Thegroup .. "  viene tesa unimboscata mentre attraversa un ponte traballante su un fiume. I banditi chiedono un pedaggio per attraversare." .. "Vogliono " rbold $) cyoa-text! 1 500 tone
	bandit-demand-fight
		most-paranoid notsolo and if 
			charchoice( "  lo sospettavo" )choice: walk-bandit3-paranoid
		then
		most-ahole if
			charchoice( "  minaccia di bruciare il ponte" )choice: walk-bandit3-burn
		then
;

cyoa-choice: walk-bandit4-fight
	($ Thegroup .. "  e stanco e viene catturato allo scoperto mentre " .. gthey .. " combatti" .. g1s .. "'. Fortunatamente questi banditi non sono cosi pericolosi. Dopo un breve combattimento, scappano." $) cyoa-text! someicon bitefx sting--all
;
cyoa-choice: walk-bandit4-angry
	($ "I banditi sono " .. "TERRORIZZATI" rbold .. "  da " .. cname .. "! Cadono a terra di corsa per scappare!" .. Thegroup .. "  e sollevato di evitare una lotta mentre e esausto." $) cyoa-text! goodfx temperREV strengthREV morale++
;
cyoa-choice: walk-bandit4-obliv
	cpet? if
		($ cname .. "  fa un rumore minaccioso. Si scopre invece che erano solo suoni di confusione animale." $) cyoa-text!
	else
		($ cname .. "  dice qualcosa come " .. "CHE HAI DICOTTO?" pbold .. " in realta " .. che .. " 'ma in verita non l'hanno sentita." $) cyoa-text!
	then
	($ "I fuorilegge si sbagliano e sono " .. "OLTREMMANO" rbold .. "  da " .. cname .. "! Si allontanano e dispersi!" .. cname .. " non ha idea di cosa e successo ma e felice che i fuorilegge siano andati via." $) +crtext goodfx witsattREV morale++
;

cyoa: walk-bandit4
	"Fuorilegge codardi" cyoa-title!
	($ Thegroup .. " e derubato da fuorilegge debole. I fuorilegge sono di una specie che normalmente non sarebbe un problema, se " .. thegroup .. " 'avesse una macchina o non fosse stanchissimo di camminare tutto il giorno." .. "I banditi chiedono nervosamente " rbold $) cyoa-text! 1 500 tone
	bandit-demand choice( "Rifiuta e combatti!" )choice: walk-bandit4-fight
	most-angrystrong if 
		charchoice( "  terrorizza i banditi" )choice: walk-bandit4-angry
	then
	most-oblivious if
		charchoice( ": COSA HAI DETTO?" )choice: walk-bandit4-obliv
	then
	// badfx morale--all bandit-ammomed bandit-food 0bweaponsall
;

: walk-boot-get 1 WEAPON_THROWINGBOOT trunk.weapon+ goodfx ;

cyoa: walk-boot
	image-stubbed-toe
	"Stivale Gratis" cyoa-title!
	($ Thegroup .. " ' individua un vecchio stivale sulla strada. Non sembra essere della misura di nessuno, ma ehi, e gratis!	Questo e sicuramente un simbolo di buona fortuna." $) cyoa-text!
		choice( "Prendi quello stivale" )choice: walk-boot-get
		choice( "Ignora lo stivale" )choice
;

: walk-caryell-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. " ' non ha notato nulla di tutto cio." $) +crtext 
		<- @ <- @ .witsattREV
	then;
	<- @ .morale--
;

cyoa: walk-caryell
	image-angry-car
	"Passatempo Americano Immortale" cyoa-title!
	($ Thegroup .. "  individua unauto che sfreccia lungo la strada. Forse questo sconosciuto puo aiutarli!	Senza rallentare, lautista urla " .. FLASHY .. "NEEEEEEEEEEEEEEEEEEEERD" .. gS .. "!" .. WHITE $) cyoa-text!
	"E poi lauto se ne va." +crtext ' walk-caryell-check foreach-human-char badfx
;

} }

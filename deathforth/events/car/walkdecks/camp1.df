

cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"REDUIRE LA TENSION" cyoa-title!
	($ "" .. Thegroup .. " trouve un endroit agreable pour etablir son campement dans la foret pendant la nuit. le vent et la pluie s'y installent durant la nuit, prenant le campeiste par surprise. " .. thegroup .. " une nuit deplorable sans voiture pour retraire." $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"CHANCE ABANDONNEE." cyoa-title!
	($ "" .. Thegroup .. " heureusement, il est heureux de decouvrir un cabanon abandonne dans la foret pour y passer la nuit. courtement apres avoir installe, une tempete est arrivee. heureusement pour lui. " .. ghim .. " voit " .. gthey .. " nous avons trouve la cabane a temps." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	"SEULEMENT DU CAMPING." cyoa-title!
	($ "" .. Thegroup .. " s'arrete pour passer la nuit et essayer de se reapprovisionner en mangeant." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	"REGENERATION DE GNOME" cyoa-title!
	($ "Apres une longue marche. " .. thegroup .. " trouve une belle clairiere pour etablir le camp. le temps est agreable. " .. thegroup .. " est capable de reposer en paix." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	"**PAS D'INSECTE, CAMPING AUTORISE.**" cyoa-title!
	($ "Apres une longue promenade. " .. thegroup .. " decide de mettre son camp, heureusement pas... " .. thegroup .. " est piquee par des mosquitos durant la nuit. " .. gthey .. " obtenir" .. g1s .. " sans sommeil." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"LONG JOUR" cyoa-title!
	($ "Un jour entier de marche " .. thegroup .. " cherche un camping sur. " .. gHe .. " est tres fame. " .. gthey .. " gaz" .. g1s .. " une repas supplementaire." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	"CAVALIER" cyoa-title!
	($ "Apres une journee difficile a la recherche d'une voiture : " .. thegroup .. " recherche un emplacement de camping. pendant la nuit. " .. gtheyare .. " ATTAQUE PAR DES FOURMIS." rbold .. " c'est le marque-page le plus puissant." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. "penser a la route qui lui est devant, fait tout " .. che .. " peut economiser de l'essence supplementaire." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. "pensant a d'autres qui en ont besoin, fait tout " .. che .. " peut sauver les fournitures medicales." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Etre seul " .. che .. " ne peut saisir quasiment rien d'autre. " .. chis .. " posseder des armes personnelles." $) +crtext 
	else
		($ "Ils prennent tout ce qu'ils peuvent de fournitures supplementaires !" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. " parvient a saisir tous les aliments avant de s'enfuir ! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. " reussit a saisir tous les munitions avant de s'enfuir ! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. " reussit a saisir tous les armes avant de s'enfuir ! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. "attaque par un ours au repos, decide de se battre ! le tumultueux s'ensuit !" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "Le ours s'eloigne ! " .. Thegroup .. " est capable de rentrer en sommeil." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. " fuit et abandonne le camp!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. " courrira vers l'ours et sautera a une bonne hauteur, puis frappera durement sur le nez de l'ours. " .. che .. " sortie et egrene un pneu, en rabattant accidentellement." .. Thegroup .. " est en mesure de retrouver le sommeil." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. " calmement recupere l'un de " .. chis .. " tirer des armes et puis tire tranquillement un ours avec elles. rien de bien special !." .. Thegroup .. " mange une grosse fete cette nuit, mais heureusement ne peuvent pas conserver beaucoup de viande pour plus tard." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"CET OURS AVOLE MONS CHOSSES" cyoa-title!
	($ Thegroup .. "l'essayage de 's camping est interrompu par un ourson tres encolos. " .. gTheyare .. " devoir abandonner le camp avec peu de sommeil et prendre une decision desesperee quant a ce qu'il faut emporter. " .. "RAS." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "Pour ramasser les chaises, s'il vous plait. " )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( " coups portes au nez" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( " calmement fait exploser l'ours." )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "Prendre tous les munitions" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "Prends les armes supplementaires." )choice: walk-camp8-weapons
	then
	choice( "Luttez contre l'ours mortel" )choice: walk-camp8-bear
	choice( "Laissez tout derriere vous" )choice: walk-camp8-flee
;
} }
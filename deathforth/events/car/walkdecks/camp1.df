

cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"RUFFIN IT" cyoa-title!
	($ "" .. Thegroup .. " se encuentra un lugar agradable para acampar por la noche en el bosque. El viento y la lluvia llegan durante la noche sorpresando a " .. thegroup .. " el que estaba mal preparado." $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"SUERTE AHORRADA" cyoa-title!
	($ "" .. Thegroup .. " es afortunado en encontrar una choza abandonada en el bosque para pasar la noche. Corto despues de instalarse, llego una tormenta. Afortunadamente para el " .. ghim .. " tenia " .. gthey .. " encontro la choza a tiempo." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	"SOLO ACAMPANDO" cyoa-title!
	($ "" .. Thegroup .. " decide instalar el campamento para la noche y intentar comer una cena." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	"ACAMPAMIENTO PACIFICO" cyoa-title!
	($ "Despues de una larga caminata " .. thegroup .. " encontro un hermoso sitio para instalar el campamento. El clima era agradable y " .. thegroup .. " pudo descansar tranquilamente." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	"BICHOS Y CAMPAMENTO" cyoa-title!
	($ "Despues de una larga caminata " .. thegroup .. "  decide acampar. Desafortunadamente " .. thegroup .. "  es atacado por mosquitos durante la noche y " .. gthey .. "  obtener" .. g1s .. "  no puede dormir." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"LARGO DIA" cyoa-title!
	($ "Despues de un dia entero de caminata " .. thegroup .. "  encuentra un lugar seguro para acampar. " .. gHe .. "  tiene mucha hambre, y " .. gthey .. "  comer" .. g1s .. "  una comida extra." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	"ATAQUES DE HORMIGAS" cyoa-title!
	($ "Despues de un duro dia buscando un carro " .. thegroup .. "  encuentra un lugar para acampar. Durante la noche " .. gtheyare .. "  ES ATACADO POR HORMIGAS" rbold .. "  y debe irse sin dormir." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. ", pensando en el camino por delante, hace todo " .. che .. "  puede hacer para ahorrar el combustible adicional." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. ", pensando en otros necesitados, hace todo " .. che .. "  puede hacer para ahorrar los suministros medicos." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Estando solo, " .. che .. " ' no puede agarrar nada mas ademas de " .. chis .. "  propias armas." $) +crtext 
	else
		($ "Agarran los demas suministros que pueden!" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. "  logra agarrar toda la comida antes de huir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. "  logra agarrar toda la municion antes de huir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. "  logra agarrar todas las armas antes de huir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. ", emboscado por un oso mientras dormia, decide luchar! El caos se desata!" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "El oso se retira! " .. Thegroup .. "  es capaz de volver a dormir." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. "  corre y abandona el campamento!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. "  corre hacia el oso, salta a una buena altura y luego le da un golpe en la nariz tan fuerte como " .. che .. "  puede.	El oso se asusta y corre!	" .. Thegroup .. "  es capaz de volver a dormir." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. "  recupera tranquilamente una de " .. chis .. "  armas y luego le dispara tranquilamente al oso con ella. No es gran cosa!	" .. Thegroup .. " ' come un enorme festin esa noche, pero lamentablemente no tiene tiempo para conservar mucha carne para mas tarde." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"ESE OSO ME ROBO MIS COSAS" cyoa-title!
	($ Thegroup .. "''s el intento de acampar es interrumpido por un oso muy enojado. " .. gTheyare .. "  obligado a abandonar el campamento con poco sueno, y debe tomar una decision de panico sobre que agarrar, " .. "RAPIDO." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "Consigue toda la comida" )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( "  golpea al oso en la nariz" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( " calmadamente explota el oso" )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "Agarra toda la municion" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "Agarra las armas extra" )choice: walk-camp8-weapons
	then
	choice( "Pelea contra el oso mortal" )choice: walk-camp8-bear
	choice( "Abandona todo" )choice: walk-camp8-flee
;
} }
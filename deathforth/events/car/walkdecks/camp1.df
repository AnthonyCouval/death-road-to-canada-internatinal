

cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"'RUFFIN IT" cyoa-title!
	($ "" .. Thegroup .. " 'findet einen guten Platz in den Waldern, um die Nacht zu verbringen. Wind und Regen ziehen ein, wahrend er draußen ist. Es ist eine peinliche Nacht ohne Auto, um sich zuruckzuziehen.', " .. thegroup .. " 'fangt ihn" $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"'VERWAHRTE GLUCKSFALL" cyoa-title!
	($ "" .. Thegroup .. " 'ist glucklich, ein verlassenes Hutchen in den Waldern zu finden, um die Nacht dort zu verbringen. Kurzlich nach dem Aufsetzen zieht ein Sturm herein. Glucklicherweise fur ', " .. ghim .. " ' das " .. gthey .. " ' findet das Kabin in Zeit." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	"'NUR CAMPING" cyoa-title!
	($ "" .. Thegroup .. " 'entscheidet sich aufzubauen Lager fur die Nacht und versucht eine Mahlzeit zu essen." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	"'FRIEDLICH CAMP" cyoa-title!
	($ "'Nach einem langen Marsch " .. thegroup .. " 'findet eine schone Lichtung zum Aufbauen Lager. Das Wetter ist schon und " .. thegroup .. " 'kann ruhig schlafen." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	"'INSEKTEN UND CAMPING" cyoa-title!
	($ "'Nach einem langen Weg " .. thegroup .. " 'entscheidet sich aufzubauen Lager. Leider " .. thegroup .. " 'wird von Mucken wahrend der Nacht angegriffen und " .. gthey .. " 'bekomme" .. g1s .. " 'schlaft nicht." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"'Langer Tag" cyoa-title!
	($ "'Nach einem ganzen Tag der Gehen findet er ein sicheres Lagerplatz. " .. thegroup .. " ' ist sehr hungrig, und " .. gHe .. " ' ist sehr hungrig und ', " .. gthey .. " ' isst" .. g1s .. " ' zusatzliches Essen." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	"'Ameisenangriff" cyoa-title!
	($ "'Nach einer anstrengenden Suche nach einem Auto findet er ein Lagerplatz. In der Nacht " .. thegroup .. " ' wird von Ameisen angegriffen. " .. gtheyare .. " ' und muss ohne Schlaf aufbrechen." rbold .. " ' und denkt an die Straße voran, tut alles, was er kann, um zusatzliches Benzin zu sparen." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. "', denkend an die Straße voran, macht alles, was er kann, um zusatzliches Benzin zu sparen. " .. che .. " ' kann das zusatzliche Benzin sparen." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. " thinking of others in need, does all " .. che .. " kann das medizinische Zubehor speichern." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ " Allein sein, " .. che .. " " .. chis .. " eigene Waffen." $) +crtext 
	else
		($ "' greifen was weitere Versorgungsmittel auf, die sie mitnehmen konnen!" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. " ' gelingt es ihm, alle Nahrung vor dem Flucht zu ergreifen! ', " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. " ' gelingt es ihm, alle Munition vor dem Flucht zu ergreifen! ', " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. " ' gelingt es ihm, alle Waffen vor dem Flucht zu ergreifen! ', " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. "', von einem Baren uberrascht wahrend des Schlafens, entscheidet sich fur den Kampf! Havoc herrscht!" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "' Der Bar zuruckweicht! ', " .. Thegroup .. " ' kann wieder ins Schlafen kommen." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. " ' fluchtet und verlasst den Lagerplatz!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. " ' rennt zum Baren, springt eine gute Hohe und schlagt ihm dann mit allen Kraften ins Nase.	Der Bar reagiert verruckt und fluchtet!	 " .. che .. " ' kann es so hart schlagen wie moglich.	Der Bar panikt und fluchtet!	" .. Thegroup .. " 'kann wieder einschlafen." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. " 'holt gelassen eines von " .. chis .. " 'ihre Waffe" .. Thegroup .. " 'isst an diesem Abend ein riesiges Festmahl, kann aber leider nur wenig Fleisch fur spater konservieren." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"'DER BAR HAT MEIN ZEUG GESTOHLEN" cyoa-title!
	($ Thegroup .. "'versucht friedlich zu campen, doch ein sehr wutender Bar stort ihn. " .. gTheyare .. " 'wird zur Aufgabe des Lagers gezwungen, mit wenig Schlaf, und muss in Panik eine Entscheidung treffen, was mitzunehmen ist, " .. "'SCHNELL." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "'Hol alles Essen" )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( " 'schlagt den Baren auf die Nase" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( " 'blast den Baren gelassen weg" )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "'Hol alles Munitionsmaterial" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "'Hol die zusatzlichen Waffen" )choice: walk-camp8-weapons
	then
	choice( "'Der todliche Bar bekampfen" )choice: walk-camp8-bear
	choice( "'Alles aufgeben" )choice: walk-camp8-flee
;
} }
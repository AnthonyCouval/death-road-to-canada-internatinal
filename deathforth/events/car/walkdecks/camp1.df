: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. ", pensando na estrada a frente, faz tudo o que pode , " .. che .. " para salvar a gasolina adicional." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. ", pensando em outros que precisam, faz tudo o que pode , " .. che .. " para salvar as suprimentos medicos." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Sendo sozinho, , " .. che .. " 'nao e capaz de pegar coisa alem de '. " .. chis .. "  armas proprias." $) +crtext 
	else
		($ "Eles pegam todos os suprimentos que conseguem!" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. "  consegue pegar toda a comida antes de fugir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. "  consegue pegar toda a municao antes de fugir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. "  consegue pegar todas as armas antes de fugir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. ", emboscado por um urso enquanto dormia, decide lutar! O caos se instala!" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "O urso recua! " .. Thegroup .. " consegue voltar a dormir." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. "  corre e abandona o acampamento!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. " corre para o urso, pula bem alto e, em seguida, bate no nariz dele com toda a forca " .. che .. "  pode. O urso enlouquece e corre!" .. Thegroup .. " consegue voltar a dormir." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. "  calmamente recupera uma das " .. chis .. "  armas e entao calmamente atira no urso com ela. Nao e grande coisa!" .. Thegroup .. " 'come um banquete enorme naquela noite, mas infelizmente nao tem tempo para preservar muita carne para mais tarde.'" $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;


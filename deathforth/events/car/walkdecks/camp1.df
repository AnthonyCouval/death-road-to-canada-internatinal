

cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"RUFFIN IT" cyoa-title!
	($ "" .. Thegroup .. "  findet einen schonen Platz zum Ubernachten im Wald. Wind und Regen ziehen in der Nacht ein und uberraschen " .. thegroup .. "  von Uberraschung. Es ist eine miserable Nacht ohne Auto in das man sich zuruckziehen kann." $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"VERLASSENES GLUCK" cyoa-title!
	($ "" .. Thegroup .. "  hat das Gluck, eine verlassene Hutte im Wald zu finden, in der es ubernachten kann. Kurz nach dem Aufbau zog ein Sturm auf. Zum Gluck fur " .. ghim .. "  dass " .. gthey .. "  die Hutte rechtzeitig gefunden hat." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	"GERECHTES CAMPEN" cyoa-title!
	($ "" .. Thegroup .. "  beschliet fur die Nacht ein Lager aufzuschlagen und zu versuchen eine Mahlzeit zu sich zu nehmen." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	"FRIEDLICHES LAGER" cyoa-title!
	($ "Nach einer langen Wanderung " .. thegroup .. "  findet eine schone Lichtung um ein Lager aufzuschlagen. Das Wetter ist schon und " .. thegroup .. "  kann sich friedlich ausruhen." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	"WANZEN UND CAMPEN" cyoa-title!
	($ "Nach einem langen Spaziergang " .. thegroup .. "  beschliet ein Lager aufzuschlagen. Leider " .. thegroup .. "  wird wahrend der Nacht von Moskitos angegriffen und " .. gthey .. "  bekommt" .. g1s .. "  kein Schlaf." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"LANGER TAG" cyoa-title!
	($ "Nach einem ganzen Tag des Gehens " .. thegroup .. "  findet einen sicheren Campingplatz. " .. gHe .. " is very thirsty " .. gthey .. "  essen" .. g1s .. " ein zusatzliches Essen." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	"AMEISENGRIFFE" cyoa-title!
	($ "Nach einem anstrengenden Tag auf der Suche nach einem Auto " .. thegroup .. "  findet einen Campingplatz. Wahrend der Nacht " .. gtheyare .. "  WURDE VON AMEISEN ANGEGRIFFEN" rbold .. "  und muss ohne Schlaf abreisen." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. " denkt an den bevorstehenden Weg und tut alles " .. che .. "  kann um das zusatzliche Benzin zu sparen." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. " denkt an andere in Not und tut alles " .. che .. "  kann um die medizinischen Hilfsguter zu retten." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Da er allein ist " .. che .. " ' kann er nichts anderes als " .. chis .. "  eigene Waffen greifen." $) +crtext 
	else
		($ "Sie schnappen sich was sie sonst noch an Vorraten finden konnen!" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. "  schafft es alles Essen zu schnappen bevor er flieht " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. " schafft es alle Munition zu schnappen bevor er flieht " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. " schafft es alle Waffen zu ergreifen bevor er flieht! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. ", der im Schlaf von einem Baren uberfallen wurde, beschliet zu kampfen! Es folgt ein groes Chaos!" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "Der Bar zieht sich zuruck! " .. Thegroup .. "  kann wieder einschlafen." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. "  rennt weg und verlasst das Lager!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. "  sturzt sich auf den Baren, springt hoch und schlagt ihm dann so fest wie moglich auf die Nase " .. che .. "  der Bar flippt aus und rennt weg!" .. Thegroup .. "  kann wieder einschlafen." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. "  holt sich ruhig eine von " .. chis .. "  waffen und erschiet den Baren dann ruhig damit. Keine groe Sache!" .. Thegroup .. " ' isst an diesem Abend ein riesiges Festmahl, hat aber leider keine Zeit, viel Fleisch fur spater zu konservieren." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"DIESER BAR HAT MEIN ZEUG GESTOHLEN" cyoa-title!
	($ Thegroup .. "''s Versuch zu campen wird von einem sehr wutenden Baren unterbrochen. " .. gTheyare .. "  gezwungen, das Lager mit wenig Schlaf zu verlassen, und muss eine panische Entscheidung daruber treffen, was zu greifen ist, " .. "SCHNELL." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "Besorge alles an Nahrung" )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( "  schlagt dem Baren auf die Nase" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( "  feuert gelassen auf den Baren" )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "Schnapp dir die ganze Munition" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "Schnapp dir die zusatzlichen Waffen" )choice: walk-camp8-weapons
	then
	choice( "Bekampfe den todlichen Baren" )choice: walk-camp8-bear
	choice( "Lass alles im Stich" )choice: walk-camp8-flee
;
} }
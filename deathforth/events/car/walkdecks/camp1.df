

cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"RUFFIN IT" cyoa-title!
	($ "" .. Thegroup .. "  encontra um bom lugar para acampar durante a noite na floresta. Vento e chuva se movem durante a noite pegando " .. thegroup .. "  de surpresa. E uma noite miseravel sem carro para recuar." $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"ABANDONED LUCK" cyoa-title!
	($ "" .. Thegroup .. "  tem a sorte de encontrar uma cabana abandonada na floresta para passar a noite. Logo apos a montagem, uma tempestade se formou. Sorte para " .. ghim .. "  que " .. gthey .. " encontrou a cabana a tempo." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	"APENAS ACAMPANDO" cyoa-title!
	($ "" .. Thegroup .. " decide acampar para a noite e tentar comer uma refeicao." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	"ACAMPAMENTO TRANQUILO" cyoa-title!
	($ "Depois de uma longa caminhada " .. thegroup .. "  encontra uma clareira agradavel para montar acampamento. O clima esta bom e " .. thegroup .. "  consegue descansar em paz." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	"INSETOS E ACAMPAMENTO" cyoa-title!
	($ "Depois de uma longa caminhada " .. thegroup .. "  decide montar acampamento. Infelizmente " .. thegroup .. "  e atacado por mosquitos durante a noite e " .. gthey .. "  pegue" .. g1s .. "  nao consegue dormir." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"DIA LONGO" cyoa-title!
	($ "Depois de um dia inteiro caminhando " .. thegroup .. "  encontra um local seguro para acampar. " .. gHe .. "  esta com muita fome e " .. gthey .. "  comer" .. g1s .. "  faz uma refeicao extra." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	"ANT ATAQUES" cyoa-title!
	($ "Depois de um dia dificil procurando um carro " .. thegroup .. " encontra um local para acampar. Durante a noite " .. gtheyare .. " ATACADO POR FORMIGAS" rbold .. " e deve sair sem dormir." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. ", pensando na estrada a frente, faz tudo " .. che .. " pode economizar gasolina extra." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. ", pensando nos outros necessitados, faz tudo " .. che .. " pode economizar suprimentos medicos." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Estando sozinho, " .. che .. " 'nao consegue pegar nada alem de " .. chis .. " armas proprias." $) +crtext 
	else
		($ "Eles pegam o maximo de suprimentos que podem!" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. " consegue pegar toda a comida antes de fugir " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. "  consegue pegar toda a municao antes de fugir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. "  consegue pegar todas as armas antes de fugir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. ", emboscado por um urso enquanto dormia, decide lutar! O caos se instala!" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "O urso recua! " .. Thegroup .. "  consegue voltar a dormir." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. "  corre e abandona o acampamento!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. "  corre para o urso, pula bem alto e entao bate no nariz dele o mais forte que " .. che .. "  pode. O urso surta e foge!" .. Thegroup .. "  consegue voltar a dormir." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. "  calmamente recupera uma das " .. chis .. "  armas e entao calmamente atira no urso com ela. Nao e grande coisa!" .. Thegroup .. " ' come um enorme banquete naquela noite, mas infelizmente nao tem tempo para conservar muita carne para mais tarde." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"AQUELA URSO ROUBOU MINHAS COISAS" cyoa-title!
	($ Thegroup .. "'A tentativa de acampar e interrompida por um urso muito bravo " .. gTheyare .. " forcado a abandonar o acampamento com pouco sono, e deve tomar uma decisao em panico sobre o que pegar, " .. "RAPIDO." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "Pegue toda a comida" )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( " da um soco no nariz do urso" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( " calmamente explode o urso" )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "Pegue toda a municao" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "Pegue as armas extras" )choice: walk-camp8-weapons
	then
	choice( "Lute contra o urso mortal" )choice: walk-camp8-bear
	choice( "Abandone tudo" )choice: walk-camp8-flee
;
} }
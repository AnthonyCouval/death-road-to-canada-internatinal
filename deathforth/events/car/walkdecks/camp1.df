

cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"RUFFIN LE COCHONNET" cyoa-title!
	($ "" .. Thegroup .. " trouve un bon endroit pour camper pendant la nuit dans la foret. Le vent et la pluie sy presentent a la surprise de LUI. Cest une nuit miserable sans voiture pour se refugier " .. thegroup .. " cabane E" $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"ABANDONNEE FORTUNE" cyoa-title!
	($ "" .. Thegroup .. "  a la chance de trouver une cabane abandonnee dans les bois pour y passer la nuit. Peu apres setre installe, une tempete sest levee. Heureusement pour " .. ghim .. "  que " .. gthey .. "  a trouve la cabane a temps." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	" JUSTE DU CAMPING" cyoa-title!
	($ "" .. Thegroup .. "  decide de sinstaller pour la nuit et dessayer de manger un repas." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	" CAMPEMENT PAISIBLE" cyoa-title!
	($ "Apres une longue randonnee " .. thegroup .. "  trouve une belle clairiere pour installer son campement. Le temps est agreable et " .. thegroup .. "  peut se reposer paisiblement." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	" INSECTES ET CAMPING" cyoa-title!
	($ "Apres une longue marche " .. thegroup .. "  decide de sinstaller. Malheureusement " .. thegroup .. "  est assailli par les moustiques pendant la nuit et " .. gthey .. "  obtenir" .. g1s .. "  pas de sommeil." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"JOURNEE LONGUE" cyoa-title!
	($ "Apres une journee entiere de marche " .. thegroup .. " trouve un endroit de camping sur " .. gHe .. " is very thirsty " .. gthey .. "  manger" .. g1s .. "  une repas supplementaire." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	" ATTAQUES DANTS" cyoa-title!
	($ "Apres une journee dure a la recherche dune voiture " .. thegroup .. " trouve un camping. Durant la nuit " .. gtheyare .. "  ATTaque" rbold .. "  et doit quitter sans sommeil." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. ", pensant aux routes a venir, fait tout son possible pour economiser de lessence " .. che .. " " $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. ", pensant aux autres qui en ont besoin, fait tout son possible pour sauver les fournitures medicales " .. che .. "  peut sauver les fournitures medicales." $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Seul " .. che .. " 'nest pas capable de saisir quoi que ce soit de plus " .. chis .. "  propres armes." $) +crtext 
	else
		($ "Ils prennent les autres provisions quils peuvent !" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. "  parvient a prendre toute la nourriture avant de fuir " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. "  parvient a prendre toutes les munitions avant de fuir " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. "  parvient a prendre toutes les armes avant de fuir " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. ", pris en embuscade par un ours pendant son sommeil, decide de se battre ! Le chaos sinstalle !" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "Lours bat en retraite " .. Thegroup .. "  parvient a se rendormir." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. "  court et abandonne le camp !" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. "  se precipite vers lours, saute a une bonne hauteur, puis lui donne un coup de poing dans le nez aussi fort que " .. che .. "  peut. Lours panique et senfuit !" .. Thegroup .. "  parvient a se rendormir." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. "  recupere calmement une des " .. chis .. "  armes et tire calmement sur lours avec. Pas de probleme !" .. Thegroup .. " mange un festin enorme cette nuit, mais malheureusement n'a pas le temps de conserver beaucoup de viande pour plus tard." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"CET OURS AVOLE MA CHIOTE" cyoa-title!
	($ Thegroup .. "'MA TENTATIVE DE CAMPING EST INTERROMPU PAR UN OURS TRES RENDEZ VOUS " .. gTheyare .. " fORCE DE LABANDONNER LE CAMP AVEC PEU DE REPOS, ET DOIT FAIRE UNE Decision PANIQUE A CE QUE SAGIT DE GRABER " .. "VITE." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "RECUPERER TOUT LE FOOD" )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( " pOINGS LOURS AU NEZ" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( " cALMEMENT TIR A LOURS" )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "RECUPERER TOUT LARME" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "Prends les armes supplementaires" )choice: walk-camp8-weapons
	then
	choice( "LUTTER CONTRE LE Lourd Ours MEurtrier" )choice: walk-camp8-bear
	choice( "ABANDONNER TOUT" )choice: walk-camp8-flee
;
} }


cyoa{ road{ 

: camp-pic
	50 %chance if
		image-camp-1
	else
		image-camp-2
	then	
;

cyoa: walk-camp1
	camp-pic
	"SUFRIN ESTO" cyoa-title!
	($ "" .. Thegroup .. " encuentra un lugar agradable para acampar para la noche en el bosque. El viento y la lluvia se mueven durante la noche sorprendiendo a " .. thegroup .. " quien no tiene un coche al que retirarse. Es una noche desagradable con ninguna posibilidad de refugio." $) cyoa-text! morale2-all +cr fullcamp
;
cyoa: walk-camp2
	image-cabin-in-woods
	"ABANDONAR LA SUERTE" cyoa-title!
	($ "" .. Thegroup .. " tiene la suerte de encontrar una cabana abandonada en el bosque para pasar la noche. Poco despues de instalarse, una tormenta se avecino. Afortunadamente para " .. ghim .. " quien " .. gthey .. " encontro la cabana a tiempo." $) cyoa-text! morale++all +cr fullcamp
;
cyoa: walk-camp3
	camp-pic
	"SOLO ACAMPADA" cyoa-title!
	($ "" .. Thegroup .. " ' decide hacer campamento para pasar la noche y intentar comer una cena." $) cyoa-text! +cr fullcamp
;
cyoa: walk-camp4
	camp-pic
	"CAMPAMENTO PACIFICO" cyoa-title!
	($ "Despues de una larga caminata " .. thegroup .. " ' encuentra un hermoso sitio para hacer campamento. El clima es agradable y " .. thegroup .. " ' puede descansar tranquilamente." $) morale++all cyoa-text! +cr fullcamp
;
cyoa: walk-camp5
	camp-pic
	"PLAGAS Y CAMPING" cyoa-title!
	($ "Despues de una larga caminata " .. thegroup .. " ' decide hacer campamento. Sin embargo " .. thegroup .. " ' es atacado por mosquitos durante la noche y " .. gthey .. " ' obtiene" .. g1s .. " ' no duerme." $) cyoa-text! morale--all +cr tiredcamp
;
cyoa: walk-camp6
	camp-pic
	"DIA LARGO" cyoa-title!
	($ "Despues de un dia entero de caminar " .. thegroup .. "  encuentra un lugar seguro para acampar. " .. gHe .. " 'esta muy hambriento, y " .. gthey .. " 'coma" .. g1s .. " 'tiene una comida adicional." $) cyoa-text! 
	chowday +cr fullcamp
;
cyoa: walk-camp7
	camp-pic
	"ATACA DE HORMIGAS" cyoa-title!
	($ "Despues de un dia duro buscando un coche " .. thegroup .. " 'encuentra un sitio de acampada. Durante la noche " .. gtheyare .. " 'FUE ATACADO POR HORMIGAS" rbold .. " 'y debio abandonar sin dormir." $) cyoa-text! bitefx sting--all +cr tiredcamp
;

: walk-camp8-medcheck
	most-paranoid trunk-gas 30 > and if choosechar
		($ cname .. ", pensando en el camino por delante, hace todo lo posible para ahorrar la gasolina extra. " .. che .. " ', pensando en otros que necesitan, hace todo lo posible para ahorrar las suministros medicos." $) +crtext witsattREV sting--
	else
		bandit-gas
	then
	loyalest-pass trunk-medical 1 > and if
		loyalest choosechar 
		($ cname .. ", pensando en los demas, hace todo lo posible para salvar las suministros medicos. " .. che .. " 'Solo," $) +crtext loyaltyREV sting--
	else
		bandit-med
	then
;
: walk-camp8-solocheck
	solo if
		($ "Estando solo, " .. che .. " 'no es capaz de agarrar nada mas que " .. chis .. " 'sus propias armas." $) +crtext 
	else
		($ "Agarran los suministros adicionales que pueden!" $) +crtext
		walk-camp8-medcheck
	then
;

cyoa-choice: walk-camp8-food
	($ Thegroup .. " 'logra agarrar toda la comida antes de huir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-ammo
	else
		trunk.killer bandit-ammo2 // Maybe make this take half trunk weapons later
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-ammo
	($ Thegroup .. " 'logra agarrar todas las municiones antes de huir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		trunk.killer bandit-food
	else
		trunk.killer bandit-food2 // half trunk later?
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-weapons
	($ Thegroup .. " 'logra agarrar todas las armas antes de huir! " $) cyoa-text!
	walk-camp8-solocheck
	solo if
		bandit-ammofood
	else
		bandit-food2 bandit-ammo2
	then +cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-bear
	($ Thegroup .. ", atacado por un oso mientras dormia, decide luchar! El caos se desata!" $) cyoa-text! someicon bandithurt
	choosehuman alive? if 
		($ "El oso se retira! " .. Thegroup .. " 'es capaz de volver a dormir." $) +crtext +cr fullcamp
	then

;
cyoa-choice: walk-camp8-flee
	($ Thegroup .. " 'corre y abandona el campamento!" $) cyoa-text!
	walk-camp8-solocheck
	trunk.killer bandit-ammofood
	+cr morale--all +cr tiredcamp
;
cyoa-choice: walk-camp8-angry
	($ cname .. " 'se apresura hacia el oso, salta a una buena altura y luego le da un fuerte golpe en la nariz como " .. che .. " ' se acerca a el que	El oso se desmaya y huye!	" .. Thegroup .. " puede volver a dormirse." $) cyoa-text!
	morale++all +cr fullcamp
;

cyoa-choice: walk-camp8-shoot
	($ cname .. "  calmamente recupera uno de " .. chis .. " 	armas y luego dispara tranquilamente al oso con ella. No es gran cosa!" .. Thegroup .. " ' come va a comer una gran cena esa noche, pero lamentablemente no tengo tiempo suficiente para conservar mucha carne para mas adelante." $) cyoa-text!
	12 trunk-food+ morale3+all sleep
;

cyoa: walk-camp8
	camp-pic
	"ESE OSO ME ROBO MI COSAS" cyoa-title!
	($ Thegroup .. "intenta de camping mio esta interrumpido por un oso enojado. " .. gTheyare .. " ' obligado a abandonar el campamento con poca descanso, y debe tomar una decision apresurada sobre que coger, " .. "RAPIDO." rbold $) cyoa-text! badfx 
	trunk-food 1 > if
		choice( "Obtener todo el alimento" )choice: walk-camp8-food
	then
	most-angrystrong if
		charchoice( " 'pone un golpe en el hocico del oso" )choice: walk-camp8-angry
	then
	calmshot-check if
		charchoice( " 'calmamente dispara al oso" )choice: walk-camp8-shoot
	then
	anyammo? if
		choice( "Coger toda la municion" )choice: walk-camp8-ammo
	then 
	trunk.count 0 > if
		choice( "Coger las armas adicionales" )choice: walk-camp8-weapons
	then
	choice( "Lucha contra el oso mortal" )choice: walk-camp8-bear
	choice( "Abandono todo" )choice: walk-camp8-flee
;
} }
// this is called after carstats.df
events{ road{

: car-lost-old
	// 0 to car-working
	0 vehicle.which!
	walk-music
	// temporary wear thingy
	car-max-engine to car-engine
	car-update-display
	badfx
	walk-day-pick
	// OLD walk-day-chance
;

: car-boom
	($ "'WAGEN ZERSTORT!		Kofferwaffen verloren!" rbold $) +cr +text
	car-lost trunk.killer
;

: car-break
	($ "'WAGEN ZERLEGT!" rbold $) +cr +text
	car-lost
;

: car-stolen
	($ "'WAGEN DIEB!" rbold $) +cr +text
	car-lost
;

: car-abandon
	($ "'VERLASSENES AUTO!" rbold $) +cr +text
	car-lost
;

: car-fullhealth
	car-max-chassis to car-chassis
;

: car-fulltune
	car-max-engine to car-engine
;

: car-gas+
	trunk-gas+
	trunk-gas 0 < if
		0 LOOT_GAS trunk.loot!
	then
;

: car-chassis+
	' car-chassis +!
	car-chassis car-max-chassis > if
		car-fullhealth
	then;
	car-update-display
	car-chassis 0 <= if
		car-break
	then
;

: car-armor+
	dup ' car-max-chassis +!
	dup car-chassis+
	1 ' car-armor +!
;

: car-tune+
	' car-engine +!
	car-engine car-max-engine > if
		car-fulltune
	then
;

: car-megatune+
	dup ' car-max-engine +!
	dup car-tune+
;

: car-guzzle 10 car-mpg * car-armor + ;
: guzzle-mpg 
	trunk-gas car-guzzle < if
		trunk-gas
	else
		car-guzzle
	then
	"'SCHLUCK: " type dup print
	-1 * trunk-gas+ 
;

// Logic for garage-choices

: car-work-randnum
	cchar .mechanical 7 < if 2 else 1.4 then // For over-max mechanical, get a tighter repair variance
;

: car-engine-rnd car-max-engine car-work-randnum / car-max-engine rnd ;
: car-tune-rnd car-engine-rnd car-tune+ ;
: car-tune-rnd-half car-engine-rnd 2 / car-tune+ ;

: car-chassis-rnd car-max-chassis car-work-randnum / car-max-chassis rnd ;
: car-weld-rnd car-chassis-rnd car-chassis+ ;
: car-weld-rnd-half car-chassis-rnd 2 / car-chassis+ ;

: mechanic-diff
	cchar .mechanical car-repair - 
;
: mechanic-silentrepair 
	mechanic-diff -1 > if car-tune-rnd car-weld-rnd else car-tune-rnd-half car-weld-rnd-half then
;

: mechanic-weldup // Combine with tuneup
	mechanic-diff 1 > if
		car-weld-rnd car-tune-rnd goodfx
		($ cHe .. " ' repariert das Auto in kurzester Zeit perfekt!" $)
	then;
	mechanic-diff -1 > if
		car-weld-rnd car-tune-rnd
		"'Die Reparatur dauert den großten Teil des Tages."
	then;
	mechanic-diff -2 > if
		car-weld-rnd-half car-tune-rnd-half
		"'Die Reparatur dauert den großten Teil des Tages und ist sehr schwierig."
	then;
	($ cHe .. " 'hat keine Ahnung von " .. che .. "'' tut so, als ob er arbeitet und verschwendet einen Tag." $)
;
: mechanic-day?
	mechanic-diff 2 < if
		fullcamp
	then
;

// Used to repair a car that's fully broken down
: mechanic-repair? cchar .mechanical car-repair ;
: mechanic-repair
	car-engine-rnd to car-engine
	1 ' car-repair +!
;
: car-tunecheck
	mechanic-repair? > if
		($ cname .. " ' repariert das Auto muhelos in kurzester Zeit!" $) +cr +text goodfx
		mechanic-repair mechanicREV
	then; 
	mechanic-repair? = if
		mechanicroll if
			($ cHe .. " 'bekommt das Auto irgendwie zum Laufen, aber es dauert einen ganzen Tag." $) +cr +text goodfx
			cchar .mechanical@ 6 > if
				($  "'Beim nachsten Mal, wenn dieses Auto kaputt geht, " .. cname .. " 'wird es absolut nicht in der Lage sein, es zu reparieren." rbold $) +crtext
			else
				($ "'Beim nachsten Mal, wenn dieses Auto kaputt geht, " .. cname .. " 'wird es nicht reparieren konnen, es sei denn " rbold .. chis rbold .. " 1" rbold $) +crtext
			then
			mechanic-repair
		else
			($ cHe .. " verbringt einen Tag damit, das Auto zu reparieren, aber es weigert sich zu starten." $) +cr +text car-abandon	
		then
	else
		($ cHe .. " ' vollig scheitert, den Wagen nach einer vergeudeten Tagesspitze wieder herzustellen." $) +cr +text car-abandon
	then mechanicREV +cr fullcamp
;

: car-strengthcheck
	strengthroll if
		($ cHe .. " ' ist genauso uberrascht wie jeder andere, als das Motor klingt!" $) +cr +text
		mechanic-repair
		car-chassis cchar .strength - 1 < if
			"'Der Wagen kommt nicht weit, bevor ein Teil, das sich gestoßen hat, in Feuer aufgeht." +cr +text
		then
		cchar .strength -1 * car-chassis+ strengthREV
	then;
		($ cHe .. " ' lasst etwas im Auto brechen und etwas Knochen in " .. chis .. " ' Hand." $) +cr +text car-abandon morale-- strengthREV strength--
;

// Road block encounter common stuff
	
: detour-roll
	car-mpg 0 = if
		"' Lustig genug, dieses Auto benotigt kein Benzin." +cr +text
		goodfx
	then;
	50 %chance if
		($ gThey .. " ' verirren sich fur den ganzen Tag aus, bis endlich eine Alternativroute gefunden wird." $)
		+cr +text
		trunk-gas 70 car-mpg * >= if
			-55 -70 rnd car-mpg * car-gas+ 
		else
			bandit-gas
		then
		+cr fullcamp heal-event
	else
		"'Es dauert etwas langer und kostet ein bisschen mehr Benzin, aber nicht viel!" +cr +text
		trunk-gas 30 car-mpg * >= if
			-25 -30 rnd car-mpg * car-gas+
		else
			bandit-gas
		then
	then
;

: car-plowthrough
	car-armor 0 > if
		"'Der Wagen prallt gerade durch den Hindernis, obwohl manche Teile seiner Notlackierung abfallen." +cr +text goodfx
		-1 ' car-armor +!
	else
		-2 -3 rnd car-chassis+ badfx
		car-chassis 0 > if
			"'Der Wagen kommt durch, aber leidet etwas Schaden." +crtext
		else
			"'Der Wagen ist durchgekommen, aber hat zu viel Schaden genommen. Er zerfiel kurzlich an einer Stelle weiter down the road." +crtext
		then 
	then
;

: car-jump
	car-speed 2 < if
		"0 points" +cr +text badfx
		ouch2-all car-break
	then;
	car-speed 2 = if
		"Das Auto schafft es gerade so, aber sinkt wie ein Amboss und zerschmettert auf den Boden. Teile des Autos fliegen in verschiedene Richtungen." +cr +text badfx
		-2 -3 rnd car-chassis+
		car-chassis 0 > if "Es hat einiges eingesteckt, aber es lauft immer noch!" +crtext then
	then;
	car-speed 3 > if
		"'Das Auto baut unglaubliche Geschwindigkeit auf, trifft den Sprung und fliegt eine Weile durch die Raketenantriebe! Es ist aufregend!'" +cr +text goodfx morale2+all
	then;
	car-speed 2 > if
		"Das Auto baut eine große Geschwindigkeit auf, trifft den Sprung und segelt direkt uber das Hindernis hinweg!" +cr +text goodfx
	then;
;
	
// Option for shooting stuff in a frenzy, needs work later

: car-shoot-ammo? trunk-bullet 0 > trunk-rifle-shell 0 > trunk-shotgun-shell 0 > or or ;
: car-shoot-check trunk-bullet 29 > trunk-rifle-shell 20 > trunk-shotgun-shell 10 > and and ;
: car-shoot // improve this later
	trunk-bullet 0 > if -30 trunk-bullet+ then
	trunk-rifle-shell 0 > if -20 trunk-rifle-shell+ then
	trunk-shotgun-shell 0 > if -10 trunk-shotgun-shell+ then
	trunk-bullet 0 < if
		0 LOOT_BULLET trunk.loot!
	then
	trunk-shotgun-shell 0 < if
		0 LOOT_SHOTGUN_SHELL trunk.loot!
	then
	trunk-rifle-shell 0 < if
		0 LOOT_RIFLE_SHELL trunk.loot!
	then
;

} }

cyoa{ road{ 

// Common used elements for road block encounters

cyoa-choice: car-detour
	($ Thegroup .. " 'entscheidet sich fur eine Umleitung! Das ist usualerweise keine gute Idee." $) cyoa-text!
	detour-roll
;

// Used to tune up a car in a garage, before it's broken
: car-tuneup // partially combined with weldup now
	car-engine car-max-engine >= if
		"'Das Auto fahrt wie neu! " 
	else
		car-engine 14 > if
			"'Das Auto fahrt so, als ware es in gutem Zustand. "
		then
		car-engine 15 < car-engine 7 > and if
			"'Das Auto hat schon bessere Tage gesehen. "
		then
		car-engine 8 < if
			"'Das Auto konnte jederzeit immer noch zusammenbrechen. "
		then
	then
	+crtext
;
cyoa-choice: car-weldup
	($ cname .. " 'versucht, das Auto zu reparieren, in der Hoffnung, dass es ein wenig weiter fahrt, bevor es kaputt geht. " $) cyoa-text!
	mechanic-weldup +text
	car-chassis car-max-chassis = if
		"'Das Auto sieht unbeschadigt aus!" 
	else
		car-chassis 3 < if
			"'Das Auto sieht immer noch zerschmettert aus."
		else
			"'Das Auto sieht zerschlagen aus, ist aber immer noch stabil."
		then
	then
	car-tuneup
	+text mechanicREV mechanic-diff -2 > if mechanic++ then +cr mechanic-day?
;

// Standard choices in every garage
: garage-choices
	mechanicest choosechar
	choice( "'Autoreparatur und Abstimmung" )choice: car-weldup
	// choice( "'Vollstandige Abstimmung" )choice: car-tuneup 
	choice( "'Wegfahren" )choice 
;

cyoa: car-nogas
	"'KEIN KRAFTSTOFF MEHR" cyoa-title!
	($ "'Der Wagen ist ganz aus Benzin gefahren und kommt zum Stillstand.	" .. "'VERLASSENES AUTO!" rbold $) cyoa-text! badfx car-lost
;

cyoa-choice: car-abandoned
	($ "'TEST2 Gehen'] " .. thegroup .. " 'TEST2 Gehen']" $) cyoa-text!
	car-abandon
;
cyoa-choice: car-breakdown-punch
	($ cname .. " 'TEST2 Gehen']" $) cyoa-text! car-strengthcheck strengthREV
;
cyoa-choice: car-breakdown-fix
	($ cname .. " 'TEST2 Gehen']" $) cyoa-text! car-tunecheck mechanicREV
;
cyoa: car-breakdown
	"'TEST2 Gehen']" cyoa-title!
	($ "'TEST2 Gehen']" $) cyoa-text!
		choice( "'TEST2 Gehen']" )choice: car-abandoned
		mechanicest charchoice( " 'TEST2 Gehen']" )choice: car-breakdown-fix
		someone charchoice( " 'TEST2 Gehen']" )choice: car-breakdown-punch
		
;

} }

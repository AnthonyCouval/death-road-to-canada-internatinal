: timeforecast
	timeofday 1 < if "'Mitternacht" fbold then;
	timeofday 5 < if "'Vor Morgendammerung" fbold then;
	timeofday 7 < if "'Tagesanbruch" then;
	timeofday 9 < if "'Morgen" then;
	timeofday 11 < if "'Spate Morgenstunden" then;
	timeofday 12 = if "'Mittag" then;
	timeofday 13 < if "'In der Nahe von Mittag" then;
	timeofday 14 < if "'Nachmittag" then;
	timeofday 17 < if "'Spate Nachmittagstunden" then;
	timeofday 19 < if "'In der Nahe von Sonnenuntergang" rbold then;
	timeofday 21 < if "'Abenddammerung" rbold then;
	timeofday 22 < if "'Nach Einbruch der Dunkelheit" rbold then;
	timeofday 24 < if "'Spate Nachtstunden" fbold then;
	"'Zeit, um eine neue Uhr zu kaufen" fbold
;

: aggroforecast
	aggrocheck 0 = if "'Trage" then;
	aggrocheck 1 = if "'Ruhevoll" then;
	aggrocheck 2 = if "'Reizbar" rbold then;
	aggrocheck 3 = if "'Jagd" rbold then;
	aggrocheck 4 = if "'Mega-Verargert" fbold then;
	"DIE!!!" fbold
;

: zforetext
	($ "'Ihr Zombie-Vorhersage lautet:		SWARM SIZE: " pbold .. swarmforecast .. "'		AGGRESSION: " pbold .. aggroforecast .. "'		Aktueller Zeitpunkt: " pbold .. timeforecast $) +crtext
;

: zfore-music
	10diff 19 < if 
		easy-music-load
	else
		hard-music-load
	then
;

: dusk-music-setup mission{ ' dusk-music to main-event-mission-dusk } ;

: zforecast locals( tdiff timeset aggro ) // 0 9 3 -- for no zombies, 9 o'clock, 3 aggro
	-> aggro -> timeset -> tdiff
	<- timeset to timeofday
	<- aggro road{ to temp-aggro }
	<- tdiff road{ to temp-difficulty }
		
	zforetext	
	zfore-music
;


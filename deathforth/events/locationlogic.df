	10diff 12 < if "'Milde" then;
	10diff 15 < if "'XTREME*tm* Eishockeystange'}" then;
	10diff 17 < if "'Groß" then;
	10diff 19 < if "'Sehr groß" rbold then;
	10diff 20 < if "'Sehr groß!" rbold then;
	10diff 21 < if "'Sehr groß!!" rbold then;
	10diff 22 < if "Very Large!!!" rbold then;

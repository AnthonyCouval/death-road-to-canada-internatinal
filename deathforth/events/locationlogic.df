	10diff 26 < if "Enorme!!" rbold then;
	10diff 27 < if "Massive!!!" rbold then;
	10diff 29 < if "Schiacciante" rbold then;
	10diff 31 < if "Schiacciante!" rbold then;
	10diff 33 < if "Schiacciante!!" rbold then;
	10diff 35 < if "Overwhelming!!!" rbold then;
	10diff 37 < if "Orda di Non Morti" fbold then;
	10diff 39 < if "Orda di Non Morti!" fbold then;

	10diff 6 < if "Rares" then; // 6
	10diff 10 < if "Leg" then; // 11
	10diff 13 < if "Moderees." then; // 16
	10diff 16 < if "Epais" then; // 21
	10diff 19 < if "Tres epais" rbold then; // 31 
	10diff 22 < if "Tres epais !" rbold then;
	10diff 24 < if "Tres epais !" rbold then;
	10diff 26 < if "Very Thick!!!" rbold then;
	10diff 29 < if "Sardines emballees" rbold then; // 41 
	10diff 32 < if "Poisson sardine emballe !" rbold then;
	10diff 35 < if "Sardines emballees!!" rbold then;
	10diff 38 < if "Sardine Packed!!!" rbold then;

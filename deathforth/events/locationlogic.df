: aggroforecast
	aggrocheck 0 = if "Lentement" then;
	aggrocheck 1 = if "Charger" then;
	aggrocheck 2 = if "Decu" rbold then;
	aggrocheck 3 = if "Chasse" rbold then;
	aggrocheck 4 = if "Gros fromage" fbold then;
	"DIE!!!" fbold
;

: zforetext
	($ "Previsions de meteo pour vos zombies :. . 		taille de l'epandouis: " pbold .. swarmforecast .. "aggression : agressivite " pbold .. aggroforecast .. "temps actuel : " pbold .. timeforecast $) +crtext
;

: zfore-music
	10diff 19 < if 
		easy-music-load
	else
		hard-music-load
	then
;

: dusk-music-setup mission{ ' dusk-music to main-event-mission-dusk } ;

: zforecast locals( tdiff timeset aggro ) // 0 9 3 -- for no zombies, 9 o'clock, 3 aggro
	-> aggro -> timeset -> tdiff
	<- timeset to timeofday
	<- aggro road{ to temp-aggro }
	<- tdiff road{ to temp-difficulty }
		
	zforetext	
	zfore-music
;


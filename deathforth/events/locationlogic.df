: aggroforecast
	aggrocheck 0 = if "Lethargique" then;
	aggrocheck 1 = if "Calme" then;
	aggrocheck 2 = if "Irritee" rbold then;
	aggrocheck 3 = if "Chasse" rbold then;
	aggrocheck 4 = if "Mega Fromage" fbold then;
	"DIE!!!" fbold
;

: zforetext
	($ "Votre prevision de zombie est :		TAILLE DE LESSAIM : " pbold .. swarmforecast .. "		AGRESSION : " pbold .. aggroforecast .. "		HEURE ACTUELLE : " pbold .. timeforecast $) +crtext
;

: zfore-music
	10diff 19 < if 
		easy-music-load
	else
		hard-music-load
	then
;

: dusk-music-setup mission{ ' dusk-music to main-event-mission-dusk } ;

: zforecast locals( tdiff timeset aggro ) // 0 9 3 -- for no zombies, 9 o'clock, 3 aggro
	-> aggro -> timeset -> tdiff
	<- timeset to timeofday
	<- aggro road{ to temp-aggro }
	<- tdiff road{ to temp-difficulty }
		
	zforetext	
	zfore-music
;


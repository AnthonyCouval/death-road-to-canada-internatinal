	10diff 33 < if "Debordant!!" rbold then;
	10diff 35 < if "Overwhelming!!!" rbold then;
	10diff 37 < if "Inondation de l'undecoupe" fbold then;
	10diff 39 < if "Inondation de l'undecoupable !" fbold then;

	10diff 25 < if "'Massiv!" rbold then;
	10diff 26 < if "'Massiv!!" rbold then;
	10diff 27 < if "Massive!!!" rbold then;
	10diff 29 < if "'Uberwaltigend" rbold then;
	10diff 31 < if "'Uberwaltigend!" rbold then;
	10diff 33 < if "'Uberwaltigend!!" rbold then;
	10diff 35 < if "Overwhelming!!!" rbold then;
	10diff 37 < if "'Untoter Ansturm" fbold then;
	10diff 39 < if "'Untoter Ansturm!" fbold then;
	10diff 41 < if "'Untoter Ansturm!!" fbold then;
	10diff 43 < if "Undead Flood!!!" fbold then;
	10diff 45 < if "'Heerschar des Todes" fbold then;
	10diff 47 < if "'Heerschar des Todes!" fbold then;
	10diff 49 < if "'Heerschar des Todes!!" fbold then;
	10diff 51 < if "Army of Death!!!" fbold then;

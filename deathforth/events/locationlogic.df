: aggroforecast
	aggrocheck 0 = if "Pigro" then;
	aggrocheck 1 = if "Calmo" then;
	aggrocheck 2 = if "Irritato" rbold then;
	aggrocheck 3 = if "Caccia" rbold then;
	aggrocheck 4 = if "Mega arrabbiato" fbold then;
	"DIE!!!" fbold
;

: zforetext
	($ "La tua previsione sugli zombi e:		DIMENSIONE DELLORMATA " pbold .. swarmforecast .. "		AGGRESSIONE: " pbold .. aggroforecast .. "		ORA ATTUALE: " pbold .. timeforecast $) +crtext
;

: zfore-music
	10diff 19 < if 
		easy-music-load
	else
		hard-music-load
	then
;

: dusk-music-setup mission{ ' dusk-music to main-event-mission-dusk } ;

: zforecast locals( tdiff timeset aggro ) // 0 9 3 -- for no zombies, 9 o'clock, 3 aggro
	-> aggro -> timeset -> tdiff
	<- timeset to timeofday
	<- aggro road{ to temp-aggro }
	<- tdiff road{ to temp-difficulty }
		
	zforetext	
	zfore-music
;


	timeofday 9 < if "Mattina" then;
	timeofday 11 < if "Tarda mattinata" then;
	timeofday 12 = if "Mezzogiorno" then;
	timeofday 13 < if "Quasi mezzogiorno" then;
	timeofday 14 < if "Pomeriggio" then;
	timeofday 17 < if "Tardo pomeriggio" then;
	timeofday 19 < if "Quasi tramonto" rbold then;
	timeofday 21 < if "Crepuscolo" rbold then;
	timeofday 22 < if "Dopo il tramonto" rbold then;
	timeofday 24 < if "Tarda notte" fbold then;

uses base.df
uses charfilt.df
uses charstats.df
// uses road.df

// uses paul/building-pick-layout-test.df

uses events/city/region/special-lots.df
// uses events/block/blocktestlayout.df

cyoa{ road{

// : specialmission regiondef{ special-lot-setup-example } premission ;

: easycity-picker
	0 stack
		"events/city/region/easy/easy-burb-vary-3x3.df" shove
		"events/city/region/easy/easy-aparts-1row.df" shove
		// "events/city/region/easy/easy-aparts-mid-2x3.df" shove
		"events/city/region/easy/easy-burb-3x2.df" shove
		"events/city/region/easy/easy-burb-4x2.df" shove
	shuffles pops nip
;

: citylayout1 "events/city/region/burb-narrow-3x3.df" ;
: citylayout2 "events/city/region/aparts-mid-3x3.df" ;
: citylayout3 "events/city/region/aparts-vary-4x3.df" ;
: citylayout4 "events/city/region/aparts-narrow-4x3.df" ;
: citylayout5 "events/city/region/aparts-wide-3x3.df" ;
: citylayout6 "events/city/region/mix-vary-3x3.df" ;
: citylayout7 "events/city/region/aparts-vary-3x4.df" ;
: citylayout8 "events/city/region/burb-vary-3x4.df" ;
: citylayout9 "events/city/region/mix-3x4.df" ;
: citylayout10 "events/city/region/aparts-vary-2x4.df" ;
: citylayout11 "events/city/region/burb-vary-2x4.df" ;
: citylayout12 "events/city/region/mix-4x2.df" ;
: citylayout13 "events/city/region/aparts-vary-4x2.df" ;
: citylayout14 "events/city/region/mixed-vary-5x2.df" ;
: citylayout15 "events/city/region/suburb-vary-5x2.df" ;
: citylayout16 "events/city/region/mixed-rnd-3x2.df" ;
: citylayout17 "events/city/region/burb-vary-3x2.df" ;
: citylayout18 "events/city/region/burb-1row.df" ;

	deck-new
		card: citylayout1
		card: citylayout2
		card: citylayout3
		card: citylayout4
		card: citylayout5
		card: citylayout6
		card: citylayout7
		card: citylayout8
		card: citylayout9
		card: citylayout10
		card: citylayout11
		card: citylayout12
		card: citylayout13
		card: citylayout14
		card: citylayout15
		card: citylayout16
		card: citylayout17
		card: citylayout18
	constant CITYLAYOUT-DECK
	CITYLAYOUT-DECK var citylayout-deck
	CITYLAYOUT-DECK shuffles to citylayout-deck
	
: citylayoutdeck 
	citylayout-deck depths 0= if CITYLAYOUT-DECK shuffles to citylayout-deck then
	drawcard ;

cyoa: easycity1
	"Afternoon Raid" cyoa-title!
	someicon
	($ Thegroup .. "  entdeckt eine verseuchte Stadt von der Strae. Erkundet sie aus der Ferne, " .. ghe .. "  muss entscheiden ob er unter der Mittagssonne fur Vorrate kampft." $) cyoa-text! basic-tone
	0.9 1.1 frnd 12 1 zforecast
	($ "Aus der Ferne, " .. thegroup .. "  sieht etwas Interessantes:" $) +crtext
	easycity-picker $load-region
		lot-draw
;

cyoa: easycity2
	"Fruhe Morgenzombies" cyoa-title!
	someicon
	($ Thegroup .. " ' erspaht aus der Ferne eine Stadt. Es gibt mehr Untote als sonst, aber es ist noch fruh am Tag, sodass sie benommen sein sollten. Zumindest anfangs." $) cyoa-text! basic-tone
	1.1 1.3 frnd 7 9 frnd 0 zforecast
	($ "Beim Fahren in die Stadt, " .. thegroup .. " entdeckt etwas" $) +crtext
	easycity-picker $load-region
		lot-draw
;

cyoa: easycity3
	"Leichter Regen" cyoa-title!
	someicon
	($ Thegroup .. "  erreicht eine Stadt als es zu regnen beginnt. Der Nieselregen scheint die ortlichen Zombies aufzustacheln." $) cyoa-text! basic-tone
	0.9 10 15 frnd 2 zforecast
	0.1 0.2 frnd weather! -0.5 0.5 frnd wind_force! 
	($ "Beim Fahren in die Stadt, " .. thegroup .. "  entdeckt:" $) +crtext
	easycity-picker $load-region
		lot-draw
;

cyoa: easycity4
	"Furchte die Nacht" cyoa-title!
	someicon
	($ Thegroup .. "  fahrt in eine Stadt als es zu dammern beginnt. Versuche die Zeit nicht aus den Augen zu verlieren. Nach Sonnenuntergang kann es brenzlig werden." $) cyoa-text! basic-tone
	0.8 17 18 frnd 0 zforecast 
	($ "Beim Fahren in die Stadt, " .. thegroup .. "  findet:" $) +crtext
	easycity-picker $load-region
		lot-draw
;

cyoa: easycity5
	"Schnelles Plundern" cyoa-title!
	someicon
	($ Thegroup .. " ' fahrt durch eine Stadt die noch nicht vollstandig uberrannt wurde. Du solltest nach Vorraten suchen um dich fur die Reise einzudecken." $) cyoa-text! basic-tone
	0.9 1.1 frnd 10 16 frnd 0 1 rnd zforecast
	($ "Beim Fahren in die Stadt, " .. thegroup .. " entdeckt etwas" $) +crtext
	easycity-picker $load-region
		lot-draw
;

cyoa: normcity1
	"Beliebte Stadt" cyoa-title!
	someicon
	($ Thegroup .. " ' findet nachmittags eine Stadt. Die Untoten wimmeln daruber. Sie sind jetzt untatig, aber sie werden dich bald genug bemerken." $) cyoa-text! basic-tone
	1.3 1.7 frnd 11 15 frnd 0 zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity2
	"Uberfullte Stadt" cyoa-title! 0 to cyoaicon cyoaicon
	someicon
	($ Thegroup .. "  sieht in der Ferne eine Stadt, in der sich Zombies auf den Straen drangen. Es konnte schwierig sein, lebend zuruckzukommen." $) cyoa-text! basic-tone
	1.5 1.8 frnd 8 14 frnd 1 zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity3
	"Stadt vor Einbruch der Dunkelheit" cyoa-title!
	someicon
	($ Thegroup .. "  reist gegen Einbruch der Dunkelheit und sieht in der Ferne eine Stadt. Die Zombies werden aggressiver wenn die Sonne untergeht." $) cyoa-text! basic-tone
	0.8 1 frnd 18 20 frnd 1 2 rnd zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity4
	"Ruhige Stadt" cyoa-title! 0 to cyoaicon cyoaicon
	someicon
	($ Thegroup .. "  erkundet eine ziemlich ruhige Stadt. Dies ist eine gute Gelegenheit sich in relativer Sicherheit neu zu versorgen." $) cyoa-text! basic-tone
	0.8 1.1 frnd 8 16 frnd 0 zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity5
	"Rush Hour" cyoa-title!
	someicon
	($ "Die Zombies in dieser Stadt haben sich geregt. Sie sind bereits aggressiv wie " .. thegroup .. "  kommt an." $) cyoa-text! basic-tone
	1 1.3 frnd 16 17 frnd 2 zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity6
	"Stadt im Regen" cyoa-title!
	someicon
	($ "Es hat begonnen, uber diese Stadt zu regnen. Die Zombies werden als Reaktion darauf aggressiver, aus Grunden, die nicht erklart wurden." $) cyoa-text! basic-tone
	1 1.3 frnd 7 15 frnd 2 zforecast
	0.4 1 frnd weather! -1 1 frnd wind_force!
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity7
	"Stadt im Sturm" cyoa-title!
	someicon
	($ "Ein Sturm zieht uber " .. thegroup .. " herein. Im stromenden Regen suchen die Zombies dieser Stadt nach den Lebenden!" $) cyoa-text! basic-tone
	1 13 17 frnd 3 zforecast
	1 1.5 frnd weather! -2 2 frnd wind_force!
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity8
	"Stadtrand" cyoa-title!
	someicon
	($ Thegroup .. " ' fahrt in den Stadtrand einer Stadt. Zombies schlendern herum, aber sie scheinen das Auto noch nicht bemerkt zu haben." $) cyoa-text! basic-tone
	1 1.3 frnd 9 16 frnd 0 1 rnd zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity9
	"Die Stadt wecken" cyoa-title!
	someicon
	($ Thegroup .. "  fahrt in eine neue Stadt. Gerausche aus dem Auto haben bereits begonnen die Aufmerksamkeit der Untoten auf sich zu ziehen." $) cyoa-text! basic-tone
	1.2 1.5 frnd 7 9 frnd 2 zforecast
	citylayoutdeck $load-region
		lot-draw
;

} }




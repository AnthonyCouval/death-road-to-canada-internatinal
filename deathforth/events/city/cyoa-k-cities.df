cyoa: normcity6
	"Ville sous la pluie" cyoa-title!
	someicon
	($ "Il a commence a pleuvoir sur cette ville. Les zombies deviennent plus agressifs en reponse, pour des raisons qui nont pas ete expliquees." $) cyoa-text! basic-tone
	1 1.3 frnd 7 15 frnd 2 zforecast
	0.4 1 frnd weather! -1 1 frnd wind_force!
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity7
	"Ville dans la Tempete" cyoa-title!
	someicon
	($ "Une tempete sabat sur " .. thegroup .. ". Dans la pluie battante, les zombies de cette ville cherchent les vivants!" $) cyoa-text! basic-tone
	1 13 17 frnd 3 zforecast
	1 1.5 frnd weather! -2 2 frnd wind_force!
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity8
	"Quartiers dExterieur" cyoa-title!
	someicon
	($ Thegroup .. " ' conduit vers les quartiers dune ville. Les zombies rodent autour, mais ils nont pas encore remarque la voiture." $) cyoa-text! basic-tone
	1 1.3 frnd 9 16 frnd 0 1 rnd zforecast
	citylayoutdeck $load-region
		lot-draw
;

cyoa: normcity9
	"Reveil de la Ville" cyoa-title!
	someicon
	($ Thegroup .. "  conduit dans une nouvelle ville. Les bruits de la voiture ont deja commence a attirer lattention des morts vivants." $) cyoa-text! basic-tone
	1.2 1.5 frnd 7 9 frnd 2 zforecast
	citylayoutdeck $load-region
		lot-draw
;

} }




cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"'Nao havia comida suficiente para compartilhar com o cao. Ele fugia quando se aproximava.'"  cyoa-text! badfx
	then;
	($ Thegroup .. " atraia " .. rname .. "  acabou com a comida. " .. rHe .. "  conhece uma boa fonte de refeicoes quando " .. rhe .. "  ve e decide ficar por perto. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "O grupo esta cheio. Quem voce gostaria de substituir para deixar lugar para " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Deixalhe " .. rname .. " atras" )choice
	then;
		recruited
;

cyoa: recruit-dog
	"Recrutamento de Caes" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "'Ha um cachorro vagando por perto. Ele esta mantendo distancia, mas observando " .. thegroup .. " ' com interesse cauteloso. Tornouse raro ver um cachorro que confia nas pessoas." $) cyoa-text! basic-tone foodamt
		choice( "Recrutar cachorro - 2 comidas" )choice: recruit-dog-feed
		choice( "Deixe o cachorro em paz" )choice
;

cyoa: recruit-dogpal
	"Ima de Caes!" cyoa-title!
	choosedogpal
	char-gen to recruitee ricon

cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"'No habia suficiente comida para el perro.		Corre lejos cuando se le acerca."  cyoa-text! badfx
	then;
	($ Thegroup .. "  atrae " .. rname .. "  con comida. " .. rHe .. "  conoce una buena fuente de comidas cuando " .. rhe .. "  la ve, y decide quedarse. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "El grupo esta lleno. A quien te gustaria reemplazar para hacerle un lugar a " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Salir " .. rname .. "  detras" )choice
	then;
		recruited
;

cyoa: recruit-dog
	"Reclutamiento de Perros" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "'Hay un perro vagando cerca. Se mantiene a distancia, pero observa " .. thegroup .. " ' con interes cauteloso.	Es raro ver a un perro que confia en las personas." $) cyoa-text! basic-tone foodamt
		choice( "Reclutar perro   2 comidas" )choice: recruit-dog-feed
		choice( "Deja al perro en paz" )choice
;


cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"'Es gab nicht genug Futter um fur den Hund ubrig zu haben.		Er lauft weg wenn man sich ihm nahert."  cyoa-text! badfx
	then;
	($ Thegroup .. "  lockt " .. rname .. "  mit Essen an " .. rHe .. "  kennt eine gute Nahrungsquelle wenn " .. rhe .. "  sie sieht, und beschliet, in der Nahe zu bleiben. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "Die Gruppe ist voll. Wen wurdest du gerne ersetzen um Platz fur " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Lass " .. rname .. "  zuruck" )choice
	then;
		recruited
;

cyoa: recruit-dog
	"Hunde Rekrutierung" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "'Ein Hund streunt in der Nahe herum. Er halt Abstand, beobachtet " .. thegroup .. " ' aber mit vorsichtigem Interesse. Es ist selten geworden einen Hund zu sehen der Menschen vertraut." $) cyoa-text! basic-tone foodamt
		choice( "Hund rekrutieren   2 Nahrung" )choice: recruit-dog-feed
		choice( "Lass den Hund in Ruhe" )choice
;

cyoa: recruit-dogpal
	"Hundemagnet!" cyoa-title!
	choosedogpal
	char-gen to recruitee ricon
	recruitee .doggify
	($ cname .. "  ist ein Blitzableiter, aber fur Hunde! Ein Hund nahert sich " .. thegroup-him .. "  aus dem Nichts. Er scheint begierig darauf zu sein sich anzuschlieen!" $) cyoa-text! basic-tone
		recruit-yesno
;


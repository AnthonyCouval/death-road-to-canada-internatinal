cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"'Nao havia comida suficiente para o cachorro. Ele foge quando e abordado."  cyoa-text! badfx
	then;
	($ Thegroup .. "  atrai " .. rname .. "  com comida. " .. rHe .. "  conhece uma boa fonte de refeicoes quando " .. rhe .. " ve o e decide ficar por perto. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "O grupo esta cheio. Quem voce gostaria de substituir para abrir espaco para " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Deixe " .. rname .. "  para tras" )choice
	then;
		recruited
;

cyoa: recruit-dog
	"Recrutamento de Caes" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "'Ha um cao a vaguear nas proximidades. Mantem distancia, mas observa " .. thegroup .. " 'com interesse cauteloso. Tornou se raro ver um cao que confia nas pessoas." $) cyoa-text! basic-tone foodamt
		choice( "Recrutar cao   2 alimentos" )choice: recruit-dog-feed
		choice( "Deixe o cachorro em paz" )choice
;


cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"No habia suficiente comida para compartir con el perro.		Se aleja al acercarse."  cyoa-text! badfx
	then;
	($ Thegroup .. " 'acecha atrae " .. rname .. " 'con alimentos. " .. rHe .. " 'sabe una buena fuente de comidas cuando " .. rhe .. "  lo ve, y decide quedarse. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "El grupo esta lleno. A quien te gustaria reemplazar para hacer espacio para " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Se va " .. rname .. " 'deja atras" )choice
	then;
		recruited
;

cyoa: recruit-dog
	"Reclutamiento de Perros" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "Hay un perro que deambula cerca. Se mantiene a distancia, pero nos mira " .. thegroup .. " 'con interes cauteloso.	Hace tiempo que no se ve un perro que confie en las personas." $) cyoa-text! basic-tone foodamt
		choice( "Reclutar perro - 2 comida" )choice: recruit-dog-feed
		choice( "Deja al perro en paz" )choice
;


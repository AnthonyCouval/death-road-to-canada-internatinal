cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"Il n'y avait pas assez de nourriture pour le chien... . 		il s'enfuit quand on l'approche."  cyoa-text! badfx
	then;
	($ Thegroup .. " des airs musicaux " .. rname .. " terminer avec la nourriture. " .. rHe .. " sait une bonne source de repas " .. rhe .. " regarde et decide de rester. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "Le groupe est plein. qui voulez-vous remplacer pour faire place a quelqu'un ? " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Quitter " .. rname .. " derriere" )choice
	then;
		recruited
;

cyoa: recruit-dog
	"Recrutement canin" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "Chien errant a proximite. il se tient a l'ecart, mais regarde. " .. thegroup .. " de maniere circonstancielle, on voit de moins en moins un chien qui s'entend bien avec les humains." $) cyoa-text! basic-tone foodamt
		choice( "Engager un chien - 2 aliments" )choice: recruit-dog-feed
		choice( "Laisser le chien tranquille" )choice
;


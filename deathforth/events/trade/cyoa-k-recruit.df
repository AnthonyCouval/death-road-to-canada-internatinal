cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"' Non c'era abbastanza cibo da dare al cane.		Scappa quando gli si avvicina."  cyoa-text! badfx
	then;
	($ Thegroup .. "  attira " .. rname .. "  con del cibo. " .. rHe .. "  conosce una buona fonte di cibo quando " .. rhe .. "  la vede e decide di restare nei paraggi. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "Il gruppo e pieno. Chi vorresti sostituire per fare spazio a " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Lascia " .. rname .. " dietro" )choice
	then;
		recruited
;

cyoa: recruit-dog
	" Reclutamento di cani" cyoa-title!
	char-gen to recruitee ricon
	recruitee .doggify
	($ "' C'e un cane che vaga nei paraggi. Si tiene a distanza, ma osserva " .. thegroup .. " ' con interesse cauto. E raro vedere un cane che si fida delle persone." $) cyoa-text! basic-tone foodamt
		choice( "Recluta un cane   2 cibo" )choice: recruit-dog-feed
		choice( "Lascia stare il cane" )choice
;

cyoa: recruit-dogpal
	"Attrattore di cani!" cyoa-title!
	choosedogpal
	char-gen to recruitee ricon
	recruitee .doggify
	($ cname .. "  e un parafulmine, ma per cani! Un cane si avvicina " .. thegroup-him .. "  dal nulla. Sembra desideroso di unirsi!" $) cyoa-text! basic-tone
		recruit-yesno
;


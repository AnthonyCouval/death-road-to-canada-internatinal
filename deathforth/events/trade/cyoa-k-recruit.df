cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"'Es gab nicht genugend Essen, um dem Hund zu sparen.	Das Tier rennt weg, wenn man es herantritt."  cyoa-text! badfx
	then;
	($ Thegroup .. " 'lockt " .. rname .. " 'mit Essen herein. " .. rHe .. " 'weiß eine gute Quelle fur Mahlzeiten, wenn " .. rhe .. " 'es sieht und bleibt da. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "'Die Gruppe ist voll. Wen mochtest du dafur ersetzen, um Platz fur zu machen? " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "'Verlasse " .. rname .. " 'zuruck" )choice
	then;
		recruited
;


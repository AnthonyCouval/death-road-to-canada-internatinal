cyoa: recruit-dog-feed
	ricon trunk-food 2 < if
		"' Il n'y avait pas assez de nourriture pour partager avec le chien.		Il s'enfuit quand on l'approche."  cyoa-text! badfx
	then;
	($ Thegroup .. "  attire " .. rname .. "  en utilisant de la nourriture. " .. rHe .. "  connait une bonne source de repas quand " .. rhe .. "  le voit et decide de rester dans les parages. " $) cyoa-text! 2 300 tone
	-2 trunk-food+
	team-count 3 > if
		($ "Le groupe est plein. Qui souhaitez vous remplacer pour faire de la place a " .. rname .. "?" $) +crtext
			' recruit-replace cyoa-team-choice
			choice( "Laissez " .. rname .. "  derriere" )choice
	then;
		recruited
;


cyoa{ road{

cyoa-bridge: recruit1-yes
	ricon team-count 3 > if
	($ "HAI TIPO UN MILIARDO DI PERSONE. VATTENE." pbold .. "'Dovrai liberare un posto se vuoi questa persona fastidiosa." $) cyoa-text!	badfx recruit-replace?
	then;
	recruitee character# cyoa-char-icon!
	($ "VA BENE, qualunque cosa!" pbold .. "La porta si apre e " .. rname .. "  esce." $) cyoa-text! 2 300 tone
		recruited recruitee .attitudeREV recruitee .witsREV judgerecruit
;
cyoa-choice: recruit1-no 
	($ "SEI UN ENORME COGLIONE.	COGLIONE.	" pbold .. cname .. "  e furioso e sbatte la porta per un po " .. Thegroup .. "  finisce per andarsene poco dopo." $) cyoa-text! badfx temperREV temper-- attitudeREV attitude--
;
cyoa-bridge: recruit1-coolit
	cpet? if
		($ cname .. "  scoreggia sulla porta chiusa a chiave." $)
	else
		($ cname .. "  dice alla voce di " .. "CALMARSI." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ "HHHHHHEH! YOU'RE ALRIGHT! " rbold $) +crtext
		team-count 3 > if
			($ "YOU HAVE TOO MANY PEOPLE, THOUGH.
			" rbold .. "La porta rimane chiusa a meno che tu non ti liberi di qualcuno." $) +crtext badfx
			recruit-replace?
		else
			($ "OK, I'M IN!
			" rbold .. "La porta si apre e " .. rname .. "  esce." $) +text goodfx
			recruited recruitee .attitudeREV recruitee .witsREV
		then
	else cool-it++
		($ "'DILLO, NON SPRUZZARLO! 		ODIO LE PERSONE FASTIDIOSE!		" rbold .. "La voce si rifiuta di aprire la porta e " .. thegroup .. "  finisce per andarsene." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit1
	"La Dinkdoor: Porta dei Coglioni" cyoa-title!
	char-gen to recruitee
	0 1 rnd recruitee .attitude!
	0 1 rnd recruitee .wits!
	WEAPON_OTAKU recruitee .weapona!
	ricon
	($ Thegroup .. " ' si imbatte in una casa lungo la strada. E chiusa a chiave.	Mentre cerca di sfondare la porta, una voce grida:	" .. "HEY LASCIA STARE LA MIA PORTA COGLIONI" pbold $) cyoa-text! basic-tone
		choice( "Prova a reclutare" )choice: recruit1-yes
		someone charchoice( "': NON SONO UN COGLIONE" )choice: recruit1-no
		most-grating if 
			charchoice( " fRENA" fcoolit )choice: recruit1-coolit
		then
;

cyoa-choice: recruit2-yes
	ricon
	team-count 3 > if
		($ rname .. " " .. rhe .. "''ll be fine staying put for awhile longer.		Ditch someone to make room:" $) cyoa-text!
		recruit-replace?
	then;
	($ "	In italian Certo, mi uniro! Stavo finendo il cibo, comunque." pbold .. rname .. "  fa ora parte della squadra!	" .. rname .. "  porta con se un po di provviste! Bonus!	Avanti verso il Canada!" $) cyoa-text! 2 300 tone
	6 LOOT_FOOD trunk.loot+ recruitee .recruit recruitee .temperREV recruitee .witsREV
	gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
	judgerecruit
;

cyoa-choice: recruit2-rob
	solo if
	($ cname .. "  rapina " .. rname .. ".	Questo e probabilmente il motivo per cui il tuo gruppo ha solo una persona in esso." $) cyoa-text!
	else
	($ cname .. "  convince il gruppo a rapinare " .. rname .. "." $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except
	cchar ' .loyalty-- foreach-team-char-except
	then
	6 LOOT_FOOD trunk.loot+ loyaltyREV badfx
;
cyoa-choice: recruit2-coolit
	cpet? if
		($ cname .. "  scorreggia. Risuona nel negozio di alimentari." pbold $)
	else
		($ cname .. "  racconta " .. rname .. "  a " .. "CALMARSI." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ rHe .. "  e impressionato da questo atteggiamento da spaccone!" $) +crtext
		team-count 3 > if
			($ "Here, take a bunch of food I had stored up!
			" pbold .. "La squadra va per la sua strada con il cibo." $) +crtext goodfx 15 trunk-food+
		else
			($ "Lasciami venire con te! Ho un sacco di cibo!" pbold $) +crtext goodfx
			recruited recruitee .temperREV recruitee .witsREV 15 trunk-food+
			most-paranoid if recruitee .attitudeREV then
		then
	else cool-it++
		($ rname .. "  e per lo piu confuso da questo.		" .. "What? I wasn't doing anything...
		" pbold .. "  Wow! Che nerd! " .. Thegroup .. "  se ne va " .. rhim .. "." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit2
	"Occupante abusivo di alimentari" cyoa-title!
	char-gen to recruitee
	5 6 rnd recruitee .composure!
	5 6 rnd recruitee .wits!
	3 4 rnd recruitee .morale!
	50 %chance if 0 1 else 5 6 then rnd recruitee .attitude!
	WEAPON_FRYING recruitee .weapona!
	ricon
	($ Thegroup .. "  sta per entrare in un piccolo negozio di alimentari fortificato, ma poi trova " .. rname .. " italiano" .. rHe .. "  sembra una persona calma, intelligente." $) cyoa-text! basic-tone
		choice( "Chiedi a " .. rname .. " di unirsi" )choice: recruit2-yes
		choice( "Lascia " .. rname .. "  da solo" )choice
		weaselest-pass if
			weaselest charchoice( "': Rapiniamo questo pirla!" )choice: recruit2-rob
		then
		most-grating if 
			charchoice( "  racconta " .. rname .. "  a CALMARSI" fcoolit )choice: recruit2-coolit
		then
;

cyoa: recruit3
	"Un po invadente" cyoa-title!
	char-gen to recruitee
	recruitee character# cyoa-char-icon!
	0 1 rnd recruitee .composure!
	5 6 rnd recruitee .attitude!
	4 5 rnd recruitee .morale!
	4 recruitee 50 %chance if .strength! else .shooting! then
	WEAPON_BASEBALL recruitee .weapona!
	($ Thegroup .. "  trova un altro viaggiatore sul ciglio della strada, di nome " .. rname .. ".
	" .. rHe .. "  insiste per unirsi al gruppo, immediatamente. " $) cyoa-text! basic-tone
	solo if
		($ thegroup .. "  considera i benefici di " .. ghis .. "  Strategia del LUPO SOLITARIO finora. Dovrebbe " .. gthey .. " reclutare " .. rname .. "?" $) +crtext
		recruit-yesno
	then;
	team-count 4 < if
		($ Thegroup .. " ' non gli viene nemmeno data una scelta.		" .. rname .. "  si unisce al gruppo! Avanti verso il Canada?" $) +text
		recruitee .recruit recruitee .attitudeREV recruitee .temperREV
		gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
		judgerecruit
	then;
		"La macchina e gia piena! Qualcuno dovra essere cacciato dal gruppo per fare spazio:" +text
		recruit-replace?
;

// Possible stat bonus recruit events

: recruit-intro
	char-gen to recruitee ricon
	($ Thegroup .. "  trova una nuova persona, " .. rname .. ".
	" .. rHe .. "  e solo e vuole unirsi al team!" $) cyoa-text! basic-tone
;

: recruit-confirm
	choosechar
	($ cname .. 
	1 5 rnd case
		1 of "  garantisce per questa affermazione." endof
		2 of " italiano " .. chis .. "  lesperienza." endof
		3 of "  crede che " .. rhe .. "  dice la verita." endof
		4 of "  ha un buon senso riguardo questa persona." endof
		5 of "  ha un senso di collera che questo sia la verita." endof
	endcase
	$) +crtext recruitee
;

: recruit-scoff
	choosechar
	($ cname .. 
	1 6 rnd case
		1 of "  avere seriamente dubbi su questo." endof
		2 of "  lancia i dadi " .. chis .. "  guarda con sospetto a questa evidente menzogna." endof
		3 of "  crede che " .. rhe .. "  mentisce." endof
		4 of "  ha un senso di terrore riguardo questa persona." endof
		5 of "  ha un senso di collera che questo sia una menzogna." endof
		6 of "  sa che qualcosa non va su " .. rname .. "." endof
	endcase
	$) +crtext recruitee .loyaltyREV recruitee
;

: recruit-strength-flavor
	1 6 rnd case
		1 of "  si flette in modo drammatico per provarlo." endof
		2 of "  parla di una vita passata come taglialegna." endof
		3 of "  parla di una vita precedente come bodybuilder." endof
		4 of " ' si vanta di essere un ex combattente di caged pit deathmatch." endof
		5 of "  piega un cucchiaio, molto aggressivamente." endof
		6 of "  si flette e grugnisce FORTE, gocce di sudore si formano sulla fronte." endof
	endcase
;

: recruit-fitness-flavor
	1 6 rnd case
		1 of "  rivela che " .. rhe .. "  era una star della pista al college." endof
		2 of " ' fa una goffa mezza capriola. Forse e un giorno no per " .. rhim .. "?" endof
		3 of "  mostra unelaborata routine di stretching per provarlo." endof
		4 of " jogs in place for a bit. It looks ok? There's little to no wheezing..." endof
		5 of "  fa un piccolo balletto veloce. Quindi " .. rname .. "  si ferma, dicendo di reclutare " .. rhim .. "  di piu." endof
		6 of "  si vanta di come " .. rhe .. "  era un atleta olimpico." endof
	endcase
;

: recruit-shooting-flavor
	1 6 rnd case
		1 of "  parla di " .. rhis .. " ' pistole preferite, anche se e preoccupante che " .. rhe .. " ' pronunci male pistole." endof
		2 of " ' parla di una vita passata come agente di polizia. Non un poliziotto qualsiasi, un superpoliziotto." endof
		3 of "  parla di tutti " .. rhis .. "  trofei di tiro e trofei per le migliori pistole." endof
		4 of "  si rifiuta di dimostrare " .. rhe .. "' e un buon tiratore perche " .. rhis .. "  il dito fa male in questo momento. Sospetto." endof
		5 of "  fa roteare una pistola, prima di farla cadere e romperla accidentalmente." endof
		6 of "  spara un elastico da " .. rhis .. "  dito per mostrare " .. rhis .. "  mira, ma sbaglia." endof
	endcase
;

: recruit-medical-flavor
	1 6 rnd case
		1 of "  sputa un sacco di gergo medico. Sembra plausibile?" endof
		2 of "  e evasivo quando gli viene chiesto cosa " .. rhis .. "  pratica fosse." endof
		3 of "Tesori personali" .. rhe .. " ' non era un dottore dottore, ma cattura " .. rhim .. "se stesso." endof
		4 of "  parla di " .. rhis .. "  lunga carriera nel settore sanitario." endof
		5 of "  dice che " .. rhe .. " ' non ha mai avuto una laurea, ma ha imparato molto per strada." endof
		6 of "  fa roteare un bisturi come un esperto, ma poi lo fa cadere in uno scarico pluviale." endof
	endcase
;

: recruit-mechanical-flavor
	1 6 rnd case
		1 of "  discute di riparazione auto, ma e difficile dire se " .. rhe .. "' sta bluffando o no." endof
		2 of "  parla di come " .. rhe .. "  possedeva unofficina." endof
		3 of "  dice " .. rhe .. "  era un ingegnere, ma e evasivo sul tipo." endof
		4 of "  continua a parlare di " .. rhis .. "  passione per le auto." endof
		5 of "  promette che se qualcosa si rompe, " .. rhe .. "  puo aggiustarlo!" endof
		6 of " ' puzza di olio per auto, ma forse e solo una cattiva igiene." endof
	endcase
;

: recruit-highstat 80 %chance if 4 else 5 then recruitee ;
: recruit-liestat 0 1 rnd recruitee .loyalty! 0 2 rnd recruitee ;
		

cyoa: recruit-strength
	" Straniero forte" cyoa-title!
	recruit-intro
	WEAPON_SLEDGE recruitee .weapona!
	($ rname .. "  afferma di essere davvero forte. " .. rHe .. recruit-strength-flavor $) +crtext
	60 %chance if
		recruit-highstat .strength!
		strongest-pass if strongest recruit-confirm .strengthREV strengthREV
		else
			most-paranoid if recruit-confirm .strengthREV witsREV attitudeREV then 
		then
	else
		recruit-liestat .strength!
		strongest-pass if strongest recruit-scoff .strengthREV strengthREV
		else
			most-paranoid if recruit-scoff .strengthREV witsREV attitudeREV then
		then
	then
	recruit-yesno
;


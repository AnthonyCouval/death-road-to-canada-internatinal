cyoa{ road{

cyoa-bridge: recruit1-yes
	ricon team-count 3 > if
	($ "TENES COMO UN MILLON DE PERSONAS. 	VAYANSE.	" pbold .. "Vas a tener que aclarar un lugar si quieres a esta persona molesta." $) cyoa-text!	badfx recruit-replace?
	then;
	recruitee character# cyoa-char-icon!
	($ "ESTA BIEN, lo que sea! 	" pbold .. "La puerta se abre y " .. rname .. " ' sale." $) cyoa-text! 2 300 tone
		recruited recruitee .attitudeREV recruitee .witsREV judgerecruit
;
cyoa-choice: recruit1-no 
	($ "ERES UN ESPECIALMENTE GRANDE CABRON. 	CABRON.	" pbold .. cname .. " 'esta furioso y aplasta la puerta durante un rato. " .. Thegroup .. " 'se va poco despues." $) cyoa-text! badfx temperREV temper-- attitudeREV attitude--
;
cyoa-bridge: recruit1-coolit
	cpet? if
		($ cname .. " ' caga en la puerta cerrada con llave." $)
	else
		($ cname .. " 'le dice a la voz para " .. "Esperen que se enfrie." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ "HHHHHHEH! YOU'RE ALRIGHT! " rbold $) +crtext
		team-count 3 > if
			($ "YOU HAVE TOO MANY PEOPLE, THOUGH.
			" rbold .. "La puerta se mantiene cerrada a menos que te deshagas de alguien." $) +crtext badfx
			recruit-replace?
		else
			($ "OK, I'M IN!
			" rbold .. "La puerta se abre y " .. rname .. " ' sale." $) +text goodfx
			recruited recruitee .attitudeREV recruitee .witsREV
		then
	else cool-it++
		($ "DILO, NO LO ESCUPRAS! 		ODIO A LA GENTE MOLESTA!		" rbold .. "La voz se niega a abrir la puerta, y " .. thegroup .. " ' acaba de irse." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit1
	"La Puerta Dinkdoor: Puerta de los Dinks" cyoa-title!
	char-gen to recruitee
	0 1 rnd recruitee .attitude!
	0 1 rnd recruitee .wits!
	WEAPON_OTAKU recruitee .weapona!
	ricon
	($ Thegroup .. " 'llega a encontrar una casa por el camino. Esta cerrada. Mientras intenta romperla, una voz grita:	" .. "DEJA MI PUERTA SOLA USTEDES DINKS!" pbold $) cyoa-text! basic-tone
		choice( "Intente reclutar" )choice: recruit1-yes
		someone charchoice( ": SOY UN DINK" )choice: recruit1-no
		most-grating if 
			charchoice( " 'le dice a la voz que TRATE DE SUELTAR" fcoolit )choice: recruit1-coolit
		then
;

cyoa-choice: recruit2-yes
	ricon
	team-count 3 > if
		($ rname .. " 'dice que hay demasiadas personas en tu coche ya, y que " .. rhe .. "'estare bien quedandome aqui por un rato mas.	Dejar a alguien para hacer espacio:" $) cyoa-text!
		recruit-replace?
	then;
	($ "	Claro que me uno! De todas formas, ya me estaba quedando sin comida." pbold .. rname .. "  ahora es parte del equipo!" .. rname .. " 1" $) cyoa-text! 2 300 tone
	6 LOOT_FOOD trunk.loot+ recruitee .recruit recruitee .temperREV recruitee .witsREV
	gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
	judgerecruit
;

cyoa-choice: recruit2-rob
	solo if
	($ cname .. "  roba  =  steals " .. rname .. "este es probablemente el motivo por el que tu grupo tiene solo una persona en el." $) cyoa-text!
	else
	($ cname .. " convence al grupo para robar " .. rname .. "." $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except
	cchar ' .loyalty-- foreach-team-char-except
	then
	6 LOOT_FOOD trunk.loot+ loyaltyREV badfx
;
cyoa-choice: recruit2-coolit
	cpet? if
		($ cname .. " 'emite gases. Resuena en la tienda de comestibles." pbold $)
	else
		($ cname .. " dice " .. rname .. " 'a " .. "Esperen que se enfrie." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ rHe .. " 'queda admirado por esta actitud de 'no me importa el care-mundo'!" $) +crtext
		team-count 3 > if
			($ "Here, take a bunch of food I had stored up!
			" pbold .. "El equipo continua su camino con la comida." $) +crtext goodfx 15 trunk-food+
		else
			($ "Dejame acompanarte! Tengo un monton de comida!" pbold $) +crtext goodfx
			recruited recruitee .temperREV recruitee .witsREV 15 trunk-food+
			most-paranoid if recruitee .attitudeREV then
		then
	else cool-it++
		($ rname .. " 'parece que esta confundido, sobre todo." .. "What? I wasn't doing anything...
		" pbold .. " 'Guau! Que nerd! " .. Thegroup .. " 'deja " .. rhim .. "." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit2
	"Squatter de Supermercado" cyoa-title!
	char-gen to recruitee
	5 6 rnd recruitee .composure!
	5 6 rnd recruitee .wits!
	3 4 rnd recruitee .morale!
	50 %chance if 0 1 else 5 6 then rnd recruitee .attitude!
	WEAPON_FRYING recruitee .weapona!
	ricon
	($ Thegroup .. " 'esta a punto de entrar en un pequeno supermercado fortificado, pero luego encuentra a " .. rname .. " 'ya viviendo alli!" .. rHe .. " 'parece una persona tranquila y perspicaz." $) cyoa-text! basic-tone
		choice( "Preguntar " .. rname .. " unirse" )choice: recruit2-yes
		choice( "Se va " .. rname .. " solo, only = solamente" )choice
		weaselest-pass if
			weaselest charchoice( ": Vamos a atracar a este tipo!" )choice: recruit2-rob
		then
		most-grating if 
			charchoice( " dice " .. rname .. " ' lo calme" fcoolit )choice: recruit2-coolit
		then
;

cyoa: recruit3
	"Muy Presionante" cyoa-title!
	char-gen to recruitee
	recruitee character# cyoa-char-icon!
	0 1 rnd recruitee .composure!
	5 6 rnd recruitee .attitude!
	4 5 rnd recruitee .morale!
	4 recruitee 50 %chance if .strength! else .shooting! then
	WEAPON_BASEBALL recruitee .weapona!
	($ Thegroup .. " ' encuentra a otro viajero en el camino, llamado " .. rname .. ".
	" .. rHe .. " ' insiste en unirse al grupo, inmediatamente. " $) cyoa-text! basic-tone
	solo if
		($ thegroup .. " ' considera los beneficios de " .. ghis .. " ' ESTRATEGIA SOLITARIO hasta ahora. Deberia " .. gthey .. " 'reclutar " .. rname .. "?" $) +crtext
		recruit-yesno
	then;
	team-count 4 < if
		($ Thegroup .. " ' no tiene incluso una opcion.		" .. rname .. " ' se une al grupo! Adelante hacia Canada?" $) +text
		recruitee .recruit recruitee .attitudeREV recruitee .temperREV
		gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
		judgerecruit
	then;
		"El coche esta ya lleno! Alguien tendra que ser sacado del grupo para hacer espacio:" +text
		recruit-replace?
;

// Possible stat bonus recruit events

: recruit-intro
	char-gen to recruitee ricon
	($ Thegroup .. " ' encuentra a una nueva persona, " .. rname .. ".
	" .. rHe .. " ' esta solo, y quiere unirse al equipo!" $) cyoa-text! basic-tone
;

: recruit-confirm
	choosechar
	($ cname .. 
	1 5 rnd case
		1 of " ' lo apoya en esta afirmacion." endof
		2 of " ' confia en esto basado en " .. chis .. " experiencia." endof
		3 of " ' piensa que " .. rhe .. " 'esta diciendo la verdad." endof
		4 of " 'tiene una buena sensacion acerca de esta persona." endof
		5 of " 'tiene un instinto que esto es la verdad." endof
	endcase
	$) +crtext recruitee
;

: recruit-scoff
	choosechar
	($ cname .. 
	1 6 rnd case
		1 of " 'duda en serio de esto." endof
		2 of " 'hace una jugada " .. chis .. " 'fija los ojos en esta mentira evidente." endof
		3 of " ' piensa que " .. rhe .. " 'esta mintiendo." endof
		4 of " 'tiene una mala sensacion acerca de esta persona." endof
		5 of " 'tiene un instinto que esto es una mentira." endof
		6 of " 'sabe que algo no esta bien sobre " .. rname .. "." endof
	endcase
	$) +crtext recruitee .loyaltyREV recruitee
;

: recruit-strength-flavor
	1 6 rnd case
		1 of " 'se flexiona de una manera dramatica para demostrarlo" endof
		2 of " 'habla sobre una vida pasada como lenador" endof
		3 of " 'habla sobre una vida pasada como bodybuilder" endof
		4 of " 'presume de ser un antiguo luchador de 'caged pit deathmatch" endof
		5 of " 'dobla una cuchara, muy agresivamente" endof
		6 of " 'se flexiona y grune MUY FUERTE, gotas de sudor se forman en la frente" endof
	endcase
;

: recruit-fitness-flavor
	1 6 rnd case
		1 of " 'revela que " .. rhe .. " 'fue un atleta de pista y campo en la universidad." endof
		2 of " 'hace una media carretilla torpe. Tal vez sea un dia flojo para " .. rhim .. "?" endof
		3 of " 'muestra una rutina de estiramiento elaborada para demostrarlo." endof
		4 of " jogs in place for a bit. It looks ok? There's little to no wheezing..." endof
		5 of " 'hace un pequeno baile rapido. Luego " .. rname .. " 'se detiene, diciendo que reclute a " .. rhim .. " 'para mas." endof
		6 of "  presume de como " .. rhe .. " solia ser un atleta olimpico." endof
	endcase
;

: recruit-shooting-flavor
	1 6 rnd case
		1 of " habla sobre " .. rhis .. " 'aunque preocupa que'; " .. rhe .. " pronounces 'guns' wrong." endof
		2 of "  habla de una vida pasada como policia. 'No cualquier policia, un superpolicia'." endof
		3 of " 'habla de todos " .. rhis .. " 'disparos y trofeos para las mejores armas." endof
		4 of " 'se niega a demostrar " .. rhe .. "es un buen tirador porque " .. rhis .. " 'me duele el dedo derecho. Sospechoso." endof
		5 of " 'gira una pistola alrededor, antes de perderla y romperla accidentalmente." endof
		6 of " 'dispara una cinta elastica " .. rhis .. " 'dedo para mostrarlo off " .. rhis .. " 'tira, pero falla." endof
	endcase
;

: recruit-medical-flavor
	1 6 rnd case
		1 of " 'chupetea una serie de palabras medicas. Parece creible?" endof
		2 of " 'es evasivo al ser preguntado que " .. rhis .. " 'su practica fue." endof
		3 of "Tesoros personales" .. rhe .. " 'no era un 'doctor-doctor', pero atrapa [a] " .. rhim .. "self." endof
		4 of " habla sobre " .. rhis .. " 'larga carrera en el cuidado de la salud." endof
		5 of " dice que ', " .. rhe .. " 'nunca tuvo un titulo, pero aprendio mucho 'en la calle'." endof
		6 of " 'hace girar un bisturi como un experto, pero luego lo deja caer por un sumidero de tormenta." endof
	endcase
;

: recruit-mechanical-flavor
	1 6 rnd case
		1 of " 'habla de reparacion de automoviles, pero es dificil decir si " .. rhe .. "'esta bluffeando o no." endof
		2 of " 'habla sobre como " .. rhe .. " 'solia tener un taller de reparacion." endof
		3 of " dice " .. rhe .. " 'solia ser un ingeniero, pero es evasivo sobre que tipo." endof
		4 of " 'habla sin parar sobre " .. rhis .. " 'pasion de por vida por los automoviles." endof
		5 of " 'promete que si algo se rompe, 'Hare que funcione de nuevo, sin importar el costo'. " .. rhe .. " 'puede arreglarlo!" endof
		6 of " ' pueede oler a aceite de motor, pero tal vez eso solo sea mala higiene." endof
	endcase
;

: recruit-highstat 80 %chance if 4 else 5 then recruitee ;
: recruit-liestat 0 1 rnd recruitee .loyalty! 0 2 rnd recruitee ;
		

cyoa: recruit-strength
	"Extrano Desconocido" cyoa-title!
	recruit-intro
	WEAPON_SLEDGE recruitee .weapona!
	($ rname .. " 'afirma ser realmente fuerte. " .. rHe .. recruit-strength-flavor $) +crtext
	60 %chance if
		recruit-highstat .strength!
		strongest-pass if strongest recruit-confirm .strengthREV strengthREV
		else
			most-paranoid if recruit-confirm .strengthREV witsREV attitudeREV then 
		then
	else
		recruit-liestat .strength!
		strongest-pass if strongest recruit-scoff .strengthREV strengthREV
		else
			most-paranoid if recruit-scoff .strengthREV witsREV attitudeREV then
		then
	then
	recruit-yesno
;


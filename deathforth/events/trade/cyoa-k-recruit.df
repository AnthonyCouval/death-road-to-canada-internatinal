cyoa{ road{

cyoa-bridge: recruit1-yes
	ricon team-count 3 > if
	($ "VOCE TEM COMO UM BILHAO DE PESSOAS. VA EMBORA." pbold .. "'Voce tera que abrir espaco se quiser essa pessoa irritante." $) cyoa-text!	badfx recruit-replace?
	then;
	recruitee character# cyoa-char-icon!
	($ "CERTO, tanto faz!" pbold .. "A porta se abre e " .. rname .. "  sai." $) cyoa-text! 2 300 tone
		recruited recruitee .attitudeREV recruitee .witsREV judgerecruit
;
cyoa-choice: recruit1-no 
	($ "VOCE E UM IMBECIL ESPECIALMENTE GRANDE. VOCE IMBECIL." pbold .. cname .. "  fica furioso e bate na porta por um tempo " .. Thegroup .. "  acaba saindo logo depois." $) cyoa-text! badfx temperREV temper-- attitudeREV attitude--
;
cyoa-bridge: recruit1-coolit
	cpet? if
		($ cname .. "  peida na porta trancada." $)
	else
		($ cname .. "  diz a voz para " .. "SE ACALMAR." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ "HHHHHHEH! YOU'RE ALRIGHT! " rbold $) +crtext
		team-count 3 > if
			($ "YOU HAVE TOO MANY PEOPLE, THOUGH.
			" rbold .. "A porta permanece fechada a menos que voce se livre de alguem." $) +crtext badfx
			recruit-replace?
		else
			($ "OK, I'M IN!
			" rbold .. "A porta se abre e " .. rname .. "  sai." $) +text goodfx
			recruited recruitee .attitudeREV recruitee .witsREV
		then
	else cool-it++
		($ "'DIGA, NAO BORRIFFE! EU ODEIO PESSOAS CHATAS!" rbold .. "A voz se recusa a abrir a porta e " .. thegroup .. "  acaba saindo." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit1
	"The Dinkdoor: Porta dos Idiotas" cyoa-title!
	char-gen to recruitee
	0 1 rnd recruitee .attitude!
	0 1 rnd recruitee .wits!
	WEAPON_OTAKU recruitee .weapona!
	ricon
	($ Thegroup .. " ' encontra uma casa na estrada. Esta trancado. Enquanto tenta arrombar a porta, uma voz grita:" .. "EI DEIXE MINHA PORTA EM PAZ VOCES IMBECIS" pbold $) cyoa-text! basic-tone
		choice( "Tente Recrutar" )choice: recruit1-yes
		someone charchoice( "': EU NAO SOU UM IMBECIL" )choice: recruit1-no
		most-grating if 
			charchoice( " fICA TRANQUILO" fcoolit )choice: recruit1-coolit
		then
;

cyoa-choice: recruit2-yes
	ricon
	team-count 3 > if
		($ rname .. " is the maximum number of people that can be in the car " .. rhe .. "'vou ficar bem parado por mais algum tempo. Abandone alguem para abrir espaco:" $) cyoa-text!
		recruit-replace?
	then;
	($ "'Claro, vou entrar! Eu estava ficando sem comida, de qualquer maneira." pbold .. rname .. "  agora faz parte da equipe!	" .. rname .. "  traz alguns suprimentos de comida! Bonus! Rumo ao Canada!" $) cyoa-text! 2 300 tone
	6 LOOT_FOOD trunk.loot+ recruitee .recruit recruitee .temperREV recruitee .witsREV
	gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
	judgerecruit
;

cyoa-choice: recruit2-rob
	solo if
	($ cname .. "  rouba " .. rname .. "isso e provavelmente porque seu grupo tem apenas uma pessoa nele." $) cyoa-text!
	else
	($ cname .. " convence o grupo a roubar " .. rname .. "." $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except
	cchar ' .loyalty-- foreach-team-char-except
	then
	6 LOOT_FOOD trunk.loot+ loyaltyREV badfx
;
cyoa-choice: recruit2-coolit
	cpet? if
		($ cname .. " pum. Ecoa no supermercado." pbold $)
	else
		($ cname .. "  conta " .. rname .. "  para " .. "SE ACALMAR." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ rHe .. " esta impressionado com essa atitude de quem nao se importa com nada!" $) +crtext
		team-count 3 > if
			($ "Here, take a bunch of food I had stored up!
			" pbold .. "A equipe segue seu caminho com a comida." $) +crtext goodfx 15 trunk-food+
		else
			($ "Deixe me ir com voce! Eu tenho um monte de comida!" pbold $) +crtext goodfx
			recruited recruitee .temperREV recruitee .witsREV 15 trunk-food+
			most-paranoid if recruitee .attitudeREV then
		then
	else cool-it++
		($ rname .. "  fica confuso com isso.		" .. "What? I wasn't doing anything...
		" pbold .. "  Uau! Que nerd! " .. Thegroup .. "  folhas " .. rhim .. "." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit2
	" Ocupacao do Mercearia" cyoa-title!
	char-gen to recruitee
	5 6 rnd recruitee .composure!
	5 6 rnd recruitee .wits!
	3 4 rnd recruitee .morale!
	50 %chance if 0 1 else 5 6 then rnd recruitee .attitude!
	WEAPON_FRYING recruitee .weapona!
	ricon
	($ Thegroup .. "  esta prestes a invadir uma pequena mercearia fortificada, mas entao encontra " .. rname .. "  ja morando la dentro!" .. rHe .. "  parece uma pessoa calma e inteligente." $) cyoa-text! basic-tone
		choice( "Pergunte " .. rname .. " se juntar" )choice: recruit2-yes
		choice( "Deixe " .. rname .. "  sozinho" )choice
		weaselest-pass if
			weaselest charchoice( "': Vamos roubar esse idiota!" )choice: recruit2-rob
		then
		most-grating if 
			charchoice( "  conta " .. rname .. "  para SE ACALMAR" fcoolit )choice: recruit2-coolit
		then
;

cyoa: recruit3
	" Meio insistente" cyoa-title!
	char-gen to recruitee
	recruitee character# cyoa-char-icon!
	0 1 rnd recruitee .composure!
	5 6 rnd recruitee .attitude!
	4 5 rnd recruitee .morale!
	4 recruitee 50 %chance if .strength! else .shooting! then
	WEAPON_BASEBALL recruitee .weapona!
	($ Thegroup .. "  encontra outro viajante na beira da estrada, chamado " .. rname .. ".
	" .. rHe .. "  insiste em se juntar ao grupo, imediatamente. " $) cyoa-text! basic-tone
	solo if
		($ thegroup .. " considera os beneficios de " .. ghis .. " Segue a estrategia SOLO WOLF ate agora. Deveria " .. gthey .. "  recrutar " .. rname .. "?" $) +crtext
		recruit-yesno
	then;
	team-count 4 < if
		($ Thegroup .. " 'nao e nem dada uma opcao.		" .. rname .. " se juntara ao grupo! Avancamos para o Canada?" $) +text
		recruitee .recruit recruitee .attitudeREV recruitee .temperREV
		gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
		judgerecruit
	then;
		"O carro ja esta cheio! Alguem tera que ser expulso do grupo para fazer lugar:" +text
		recruit-replace?
;

// Possible stat bonus recruit events

: recruit-intro
	char-gen to recruitee ricon
	($ Thegroup .. " encontra uma nova pessoa, " .. rname .. ".
	" .. rHe .. " esta sozinho, e quer se juntar a equipe!" $) cyoa-text! basic-tone
;

: recruit-confirm
	choosechar
	($ cname .. 
	1 5 rnd case
		1 of " garante essa afirmacao." endof
		2 of " confia nisso " .. chis .. " baseado em" endof
		3 of " acredita que " .. rhe .. " esta falando a verdade." endof
		4 of "  tem um bom pressentimento sobre essa pessoa." endof
		5 of "  tem um pressentimento de que esta e a verdade." endof
	endcase
	$) +crtext recruitee
;

: recruit-scoff
	choosechar
	($ cname .. 
	1 6 rnd case
		1 of "  duvida seriamente disso." endof
		2 of "  revira " .. chis .. "  olhos para essa mentira obvia." endof
		3 of " acredita que " .. rhe .. "  esta mentindo." endof
		4 of "  tem um pressentimento muito ruim sobre essa pessoa." endof
		5 of "  tem um pressentimento de que isso e mentira." endof
		6 of "  sabe que algo esta errado com " .. rname .. "." endof
	endcase
	$) +crtext recruitee .loyaltyREV recruitee
;

: recruit-strength-flavor
	1 6 rnd case
		1 of "  flexiona de forma dramatica para provar." endof
		2 of "  fala sobre uma vida passada como lenhador." endof
		3 of "  fala sobre uma vida passada como fisiculturista." endof
		4 of " ' se gaba de ser um ex lutador de 'caged pit deathmatch'." endof
		5 of "  dobra uma colher, muito agressivamente." endof
		6 of "  flexiona e grunhe MUITO, gotas de suor se formando na testa." endof
	endcase
;

: recruit-fitness-flavor
	1 6 rnd case
		1 of "  revela que " .. rhe .. "  era um astro do atletismo na faculdade." endof
		2 of " ' faz uma meia roda desajeitada. Talvez seja um dia ruim para " .. rhim .. "?" endof
		3 of "  mostra uma elaborada rotina de alongamento para provar isso." endof
		4 of " jogs in place for a bit. It looks ok? There's little to no wheezing..." endof
		5 of "  faz uma dancinha rapida. Entao " .. rname .. "  para, dizendo para recrutar " .. rhim .. "  para mais." endof
		6 of "  se gaba de como " .. rhe .. "  costumava ser um atleta olimpico." endof
	endcase
;

: recruit-shooting-flavor
	1 6 rnd case
		1 of " fala sobre " .. rhis .. " ' armas favoritas, embora seja preocupante que " .. rhe .. " ' pronuncia 'armas' errado." endof
		2 of " ' fala sobre uma vida passada como policial. 'Nao qualquer policial, um superpolicial'." endof
		3 of "  fala sobre todos os " .. rhis .. " trofeus de tiro e trofeus para melhores armas." endof
		4 of " recusa se a provar " .. rhe .. "''e um bom tiro porque " .. rhis .. "  dedo doi agora. Suspeito." endof
		5 of "  gira uma pistola ao redor, antes de cair acidentalmente e quebra la." endof
		6 of "  atira um elastico " .. rhis .. "  dedo para mostrar " .. rhis .. "  mira, mas erra." endof
	endcase
;

: recruit-medical-flavor
	1 6 rnd case
		1 of "  fala um monte de jargoes medicos. Parece plausivel?" endof
		2 of "  e evasivo quando perguntado o que " .. rhis .. "  pratica era." endof
		3 of "Tesouros pessoais" .. rhe .. " ' nao era um 'medico medico', mas pega " .. rhim .. "eu mesmo." endof
		4 of " fala sobre " .. rhis .. "  longa carreira na area da saude." endof
		5 of " diz que " .. rhe .. " ' nunca teve um diploma, mas aprendeu muito 'nas ruas'." endof
		6 of "  gira um bisturi como um especialista, mas depois o deixa cair em um bueiro." endof
	endcase
;

: recruit-mechanical-flavor
	1 6 rnd case
		1 of "  discute reparo de carro, mas e dificil dizer se " .. rhe .. "' esta blefando ou nao." endof
		2 of "  fala sobre como " .. rhe .. "  costumava ter uma oficina mecanica." endof
		3 of "  diz " .. rhe .. "  costumava ser engenheiro, mas e evasivo sobre que tipo." endof
		4 of "  drones sobre " .. rhis .. "  paixao ao longo da vida por carros." endof
		5 of "  promete que se algo quebrar, " .. rhe .. "  pode consertar!" endof
		6 of " ' cheira a oleo de carro, mas talvez seja apenas falta de higiene." endof
	endcase
;

: recruit-highstat 80 %chance if 4 else 5 then recruitee ;
: recruit-liestat 0 1 rnd recruitee .loyalty! 0 2 rnd recruitee ;
		

cyoa: recruit-strength
	"Estranho Forte" cyoa-title!
	recruit-intro
	WEAPON_SLEDGE recruitee .weapona!
	($ rname .. "  afirma ser muito forte. " .. rHe .. recruit-strength-flavor $) +crtext
	60 %chance if
		recruit-highstat .strength!
		strongest-pass if strongest recruit-confirm .strengthREV strengthREV
		else
			most-paranoid if recruit-confirm .strengthREV witsREV attitudeREV then 
		then
	else
		recruit-liestat .strength!
		strongest-pass if strongest recruit-scoff .strengthREV strengthREV
		else
			most-paranoid if recruit-scoff .strengthREV witsREV attitudeREV then
		then
	then
	recruit-yesno
;


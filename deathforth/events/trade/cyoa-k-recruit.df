cyoa{ road{

cyoa-bridge: recruit1-yes
	ricon team-count 3 > if
	($ "TIENES COMO UN BILLON DE PERSONAS. VETE." pbold .. "'Tendras que despejar un lugar si quieres a esta persona molesta." $) cyoa-text!	badfx recruit-replace?
	then;
	recruitee character# cyoa-char-icon!
	($ "BIEN, lo que sea!" pbold .. "La puerta se abre y " .. rname .. "  sale." $) cyoa-text! 2 300 tone
		recruited recruitee .attitudeREV recruitee .witsREV judgerecruit
;
cyoa-choice: recruit1-no 
	($ "ERES UN DINK ESPECIALMENTE GRANDE. DINK." pbold .. cname .. "  esta enfurecido y golpea la puerta por un rato. " .. Thegroup .. "  termina yendose poco despues." $) cyoa-text! badfx temperREV temper-- attitudeREV attitude--
;
cyoa-bridge: recruit1-coolit
	cpet? if
		($ cname .. "  se tira un pedo en la puerta cerrada." $)
	else
		($ cname .. "  le dice a la voz que " .. "SE CALME." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ "HHHHHHEH! YOU'RE ALRIGHT! " rbold $) +crtext
		team-count 3 > if
			($ "YOU HAVE TOO MANY PEOPLE, THOUGH.
			" rbold .. "La puerta permanece cerrada a menos que te deshagas de alguien." $) +crtext badfx
			recruit-replace?
		else
			($ "OK, I'M IN!
			" rbold .. "La puerta se abre y " .. rname .. "  sale." $) +text goodfx
			recruited recruitee .attitudeREV recruitee .witsREV
		then
	else cool-it++
		($ "'DILO, NO LO ROCIES! 		ODIO A LA GENTE MOLESTA!		" rbold .. "La voz se niega a abrir la puerta y " .. thegroup .. "  termina yendose." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit1
	"La Puerta de los Idiotas: Puerta de los Idiotas" cyoa-title!
	char-gen to recruitee
	0 1 rnd recruitee .attitude!
	0 1 rnd recruitee .wits!
	WEAPON_OTAKU recruitee .weapona!
	ricon
	($ Thegroup .. " ' se encuentra con una casa en el camino. Esta cerrada. Mientras intenta derribar la puerta, una voz grita:	" .. "HEY DEJA MI PUERTA EN PAZ IDIOTAS" pbold $) cyoa-text! basic-tone
		choice( "Intenta reclutar" )choice: recruit1-yes
		someone charchoice( "': NO SOY UN IDIOTA" )choice: recruit1-no
		most-grating if 
			charchoice( "  le dice a la voz que se CALME" fcoolit )choice: recruit1-coolit
		then
;

cyoa-choice: recruit2-yes
	ricon
	team-count 3 > if
		($ rname .. "  dice que ya hay demasiada gente en tu coche y que " .. rhe .. "'' estara bien quedandose un rato mas.		Deshazte de alguien para hacer espacio:" $) cyoa-text!
		recruit-replace?
	then;
	($ "'Claro, me unire! Me estaba quedando sin comida, de todos modos.	" pbold .. rname .. "  ahora es parte del equipo!	" .. rname .. "  trae algunos suministros de comida! Bono! En marcha hacia Canada!" $) cyoa-text! 2 300 tone
	6 LOOT_FOOD trunk.loot+ recruitee .recruit recruitee .temperREV recruitee .witsREV
	gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
	judgerecruit
;

cyoa-choice: recruit2-rob
	solo if
	($ cname .. "  roba " .. rname .. "esto es probablemente por que tu grupo tiene solo una persona en el." $) cyoa-text!
	else
	($ cname .. " convence al grupo de robar " .. rname .. "." $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except
	cchar ' .loyalty-- foreach-team-char-except
	then
	6 LOOT_FOOD trunk.loot+ loyaltyREV badfx
;
cyoa-choice: recruit2-coolit
	cpet? if
		($ cname .. "  se farta. Ecoa en la supermercado." pbold $)
	else
		($ cname .. "  cuenta " .. rname .. " a " .. "SE CALME." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ rHe .. "  esta impresionado por esta actitud temeraria!" $) +crtext
		team-count 3 > if
			($ "Here, take a bunch of food I had stored up!
			" pbold .. " El equipo continua su camino con la comida." $) +crtext goodfx 15 trunk-food+
		else
			($ " Dejame ir contigo! Tengo un monton de comida!" pbold $) +crtext goodfx
			recruited recruitee .temperREV recruitee .witsREV 15 trunk-food+
			most-paranoid if recruitee .attitudeREV then
		then
	else cool-it++
		($ rname .. "  esta mayormente confundido por esto." .. "What? I wasn't doing anything...
		" pbold .. "  Vaya! Que nerd! " .. Thegroup .. "  se va " .. rhim .. "." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit2
	" Ocupante de comestibles" cyoa-title!
	char-gen to recruitee
	5 6 rnd recruitee .composure!
	5 6 rnd recruitee .wits!
	3 4 rnd recruitee .morale!
	50 %chance if 0 1 else 5 6 then rnd recruitee .attitude!
	WEAPON_FRYING recruitee .weapona!
	ricon
	($ Thegroup .. "  esta a punto de irrumpir en una pequena tienda de comestibles fortificada, pero luego encuentra " .. rname .. "  ya viviendo adentro!" .. rHe .. "  parece una persona tranquila e inteligente." $) cyoa-text! basic-tone
		choice( "Pidele a " .. rname .. "  que se una" )choice: recruit2-yes
		choice( "Salir " .. rname .. "  solo" )choice
		weaselest-pass if
			weaselest charchoice( "': Robemosle a este idiota!" )choice: recruit2-rob
		then
		most-grating if 
			charchoice( "  cuenta " .. rname .. "  que se ENFRIE" fcoolit )choice: recruit2-coolit
		then
;

cyoa: recruit3
	" Algo insistente" cyoa-title!
	char-gen to recruitee
	recruitee character# cyoa-char-icon!
	0 1 rnd recruitee .composure!
	5 6 rnd recruitee .attitude!
	4 5 rnd recruitee .morale!
	4 recruitee 50 %chance if .strength! else .shooting! then
	WEAPON_BASEBALL recruitee .weapona!
	($ Thegroup .. "  encuentra a otro viajero en el camino, llamado " .. rname .. ".
	" .. rHe .. "  insiste en unirse al grupo, inmediatamente " $) cyoa-text! basic-tone
	solo if
		($ thegroup .. "  considera los beneficios de " .. ghis .. "  Estrategia LONE WOLF hasta ahora. Deberia " .. gthey .. " reclutar " .. rname .. "?" $) +crtext
		recruit-yesno
	then;
	team-count 4 < if
		($ Thegroup .. " ' ni siquiera se le da una opcion.		" .. rname .. "  se une a la fiesta! Hacia Canada?" $) +text
		recruitee .recruit recruitee .attitudeREV recruitee .temperREV
		gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
		judgerecruit
	then;
		"El coche ya esta lleno! Alguien tendra que ser expulsado del grupo para dejar espacio:" +text
		recruit-replace?
;

// Possible stat bonus recruit events

: recruit-intro
	char-gen to recruitee ricon
	($ Thegroup .. "  encuentra una nueva persona, " .. rname .. ".
	" .. rHe .. "  esta solo y quiere unirse al equipo!" $) cyoa-text! basic-tone
;

: recruit-confirm
	choosechar
	($ cname .. 
	1 5 rnd case
		1 of "  avala esta afirmacion." endof
		2 of "  confia en esto basado en " .. chis .. "  experiencia." endof
		3 of "  piensa que " .. rhe .. "  esta diciendo la verdad." endof
		4 of "  tiene un buen presentimiento sobre esta persona." endof
		5 of "  tiene un presentimiento de que esta es la verdad." endof
	endcase
	$) +crtext recruitee
;

: recruit-scoff
	choosechar
	($ cname .. 
	1 6 rnd case
		1 of "  duda en serio de esto." endof
		2 of "  rueda " .. chis .. "  mira con desden a esta mentira obvia." endof
		3 of "  piensa que " .. rhe .. "  esta mintiendo." endof
		4 of "  tiene una mala sensacion acerca de esta persona." endof
		5 of "  siente que esto es una mentira." endof
		6 of "  sabe que algo no esta bien sobre " .. rname .. "." endof
	endcase
	$) +crtext recruitee .loyaltyREV recruitee
;

: recruit-strength-flavor
	1 6 rnd case
		1 of "  se inclina dramaticamente para demostrarlo." endof
		2 of "  habla de una vida pasada como lumberjack." endof
		3 of "  habla de una vida pasada como bodybuilder." endof
		4 of " ' se autoproclama un antiguo peleador de luchas callejeras." endof
		5 of "  dobla una cuchara, muy agresivamente." endof
		6 of " se flexiona y grune FUERTE, gotas de sudor formandose en la frente." endof
	endcase
;

: recruit-fitness-flavor
	1 6 rnd case
		1 of " revela que " .. rhe .. " fue una estrella de la pista en la universidad." endof
		2 of " " .. rhim .. "?" endof
		3 of "  muestra una elaborada rutina de estiramiento para demostrarlo." endof
		4 of " jogs in place for a bit. It looks ok? There's little to no wheezing..." endof
		5 of "  hace un pequeno baile rapido. Entonces " .. rname .. "  se detiene y dice que reclute " .. rhim .. "  para mas." endof
		6 of "  se jacta de como " .. rhe .. "  solia ser un atleta olimpico." endof
	endcase
;

: recruit-shooting-flavor
	1 6 rnd case
		1 of " habla de " .. rhis .. " ' armas favoritas, aunque es preocupante que " .. rhe .. " ' pronuncie mal armas." endof
		2 of " ' habla de una vida pasada como oficial de policia. 'No cualquier policia, un superpolicia'." endof
		3 of "  habla de todos " .. rhis .. "  trofeos de tiro y trofeos para las mejores armas." endof
		4 of "  se niega a probar " .. rhe .. "'' es un buen tirador porque " .. rhis .. "  el dedo me duele ahora mismo. Sospechoso." endof
		5 of " gira un revolver alrededor, antes de dejarlo caer y romperlo." endof
		6 of " dispara una liga " .. rhis .. " dedo para presumir " .. rhis .. " apunta, pero falla." endof
	endcase
;

: recruit-medical-flavor
	1 6 rnd case
		1 of " " endof
		2 of " es evasivo cuando se le pregunta que " .. rhis .. " practicaba" endof
		3 of "Tesoros personales" .. rhe .. " no era un 'doctor doctor', pero atrapa " .. rhim .. "self." endof
		4 of " habla de " .. rhis .. " larga carrera en el cuidado de la salud." endof
		5 of " dice eso " .. rhe .. " nunca tuve un titulo, pero aprendi mucho 'en la calle'." endof
		6 of "  gira un bisturi como un experto, pero luego lo deja caer en un desague pluvial." endof
	endcase
;

: recruit-mechanical-flavor
	1 6 rnd case
		1 of "  habla de reparacion de automoviles, pero es dificil saber si " .. rhe .. "' esta mintiendo o no." endof
		2 of "  habla de como " .. rhe .. "  solia tener un taller de reparaciones." endof
		3 of "  dice " .. rhe .. "  solia ser ingeniero, pero es evasivo sobre que tipo." endof
		4 of "  habla sobre " .. rhis .. "  pasion de toda la vida por los coches." endof
		5 of "  promete que si algo se rompe " .. rhe .. "  puedo arreglarlo!" endof
		6 of " ' huele a aceite de coche, pero quizas sea simplemente mala higiene." endof
	endcase
;

: recruit-highstat 80 %chance if 4 else 5 then recruitee ;
: recruit-liestat 0 1 rnd recruitee .loyalty! 0 2 rnd recruitee ;
		

cyoa: recruit-strength
	" Extrano fuerte" cyoa-title!
	recruit-intro
	WEAPON_SLEDGE recruitee .weapona!
	($ rname .. "  afirma ser muy fuerte. " .. rHe .. recruit-strength-flavor $) +crtext
	60 %chance if
		recruit-highstat .strength!
		strongest-pass if strongest recruit-confirm .strengthREV strengthREV
		else
			most-paranoid if recruit-confirm .strengthREV witsREV attitudeREV then 
		then
	else
		recruit-liestat .strength!
		strongest-pass if strongest recruit-scoff .strengthREV strengthREV
		else
			most-paranoid if recruit-scoff .strengthREV witsREV attitudeREV then
		then
	then
	recruit-yesno
;


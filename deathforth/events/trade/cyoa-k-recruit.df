cyoa{ road{

cyoa-bridge: recruit1-yes
	ricon team-count 3 > if
	($ "'IHR HABT SOGAR EINE MILLIARDE LEUTE. VERZISCHT!" pbold .. "'Du musst dich einen Platz suchen, wenn du diese nervige Person haben willst." $) cyoa-text!	badfx recruit-replace?
	then;
	recruitee character# cyoa-char-icon!
	($ "'GUT, was auch immer! 	" pbold .. "'Die Tur offnet sich und " .. rname .. " ' tritt heraus." $) cyoa-text! 2 300 tone
		recruited recruitee .attitudeREV recruitee .witsREV judgerecruit
;
cyoa-choice: recruit1-no 
	($ "'IHR SEID EIN GANZ BESONDERER VOLLIDIOT. IHR VOLLIDIOT. 	" pbold .. cname .. " 'ist außer sich und haut eine Weile auf die Tur. " .. Thegroup .. " 'verlasst schnell nach draußen." $) cyoa-text! badfx temperREV temper-- attitudeREV attitude--
;
cyoa-bridge: recruit1-coolit
	cpet? if
		($ cname .. " 'an der verschlossenen Tur flatuliert." $)
	else
		($ cname .. " 'sagt dem Ton dem: ', " .. "'RUHE ONDOWN." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ "HHHHHHEH! YOU'RE ALRIGHT! " rbold $) +crtext
		team-count 3 > if
			($ "YOU HAVE TOO MANY PEOPLE, THOUGH.
			" rbold .. "'Die Tur bleibt geschlossen, bis du jemanden wegwirst." $) +crtext badfx
			recruit-replace?
		else
			($ "OK, I'M IN!
			" rbold .. "'Die Tur offnet sich und " .. rname .. " ' tritt heraus." $) +text goodfx
			recruited recruitee .attitudeREV recruitee .witsREV
		then
	else cool-it++
		($ "'SAG ES, NICHT SPRAY ES! 	ICH HASSE ANNOYINGE PEOPLE!	" rbold .. "'Der Ton weigert sich, die Tur aufzuziehen, und ', " .. thegroup .. " 'verlasst es." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit1
	"'Das Dinkdoor: Tur der Dinks" cyoa-title!
	char-gen to recruitee
	0 1 rnd recruitee .attitude!
	0 1 rnd recruitee .wits!
	WEAPON_OTAKU recruitee .weapona!
	ricon
	($ Thegroup .. " 'kommt uber eine Villa an der Straße vorbei. Sie ist verschlossen. Wahrend er versucht, die Tur einzubrechen, ruft ein Ton aus:	" .. "'LASS MEINE TUR ALLEIN SIE DINKS!" pbold $) cyoa-text! basic-tone
		choice( "'Rekrutieren Sie" )choice: recruit1-yes
		someone charchoice( "': ICH bin NICHT EIN DINK." )choice: recruit1-no
		most-grating if 
			charchoice( " 'Ruhig'" fcoolit )choice: recruit1-coolit
		then
;

cyoa-choice: recruit2-yes
	ricon
	team-count 3 > if
		($ rname .. " ' sagt, dass es schon zu vielen Leuten in deinem Auto gibt und dass ', " .. rhe .. "' bleibt gut stehen, um ein Weilchen langer.	Lege jemanden hinaus, um Platz zu schaffen:" $) cyoa-text!
		recruit-replace?
	then;
	($ "'Ja, ich komme mit! Ich war gerade ausgerechnet Hunger leidend.	" pbold .. rname .. " 'ist jetzt Teil der Mannschaft!	" .. rname .. " 'bringt auch Essensvorrate mit! Bonus!	Weiter nach Kanada!" $) cyoa-text! 2 300 tone
	6 LOOT_FOOD trunk.loot+ recruitee .recruit recruitee .temperREV recruitee .witsREV
	gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
	judgerecruit
;

cyoa-choice: recruit2-rob
	solo if
	($ cname .. " " .. rname .. "'.	Dies ist wahrscheinlich der Grund, warum Ihre Gruppe nur eine Person hat." $) cyoa-text!
	else
	($ cname .. " ' uberredet die Gruppe, die ', " .. rname .. "." $) cyoa-text!
	cchar ' .morale-- foreach-team-char-except
	cchar ' .loyalty-- foreach-team-char-except
	then
	6 LOOT_FOOD trunk.loot+ loyaltyREV badfx
;
cyoa-choice: recruit2-coolit
	cpet? if
		($ cname .. " ' farbt. Es schallt in der Supermarkt hinein." pbold $)
	else
		($ cname .. " " .. rname .. " " .. "'RUHE ONDOWN." pbold $)
	then cyoa-text!
	cool-it-7 if
		($ rHe .. " ' ist beeindruckt von diesem frech-gemutzten Verhalten!" $) +crtext
		team-count 3 > if
			($ "Here, take a bunch of food I had stored up!
			" pbold .. "'Geht es weiter mit dem Essen." $) +crtext goodfx 15 trunk-food+
		else
			($ "'Komm mit mir! Ich habe viel Essen dabei!" pbold $) +crtext goodfx
			recruited recruitee .temperREV recruitee .witsREV 15 trunk-food+
			most-paranoid if recruitee .attitudeREV then
		then
	else cool-it++
		($ rname .. " 'ist hauptsachlich nur verunsichert von diesem.	" .. "What? I wasn't doing anything...
		" pbold .. " 'Wow! Was fur ein Nerd! " .. Thegroup .. " 'blatter " .. rhim .. "." $) badfx +crtext
	then attitudeREV witsREV
;

cyoa: recruit2
	"'Lebensmittel-Besetzer" cyoa-title!
	char-gen to recruitee
	5 6 rnd recruitee .composure!
	5 6 rnd recruitee .wits!
	3 4 rnd recruitee .morale!
	50 %chance if 0 1 else 5 6 then rnd recruitee .attitude!
	WEAPON_FRYING recruitee .weapona!
	ricon
	($ Thegroup .. " 'ist dabei, in einen kleinen, befestigten Supermarkt einzubrechen, entdeckt aber, dass " .. rname .. " 'bereits jemand darin lebt!" .. rHe .. " 'scheint eine ruhige, kluge Person zu sein." $) cyoa-text! basic-tone
		choice( "'Ask: Frage " .. rname .. " 'zum Beitreten" )choice: recruit2-yes
		choice( "'Verlasse " .. rname .. " " )choice
		weaselest-pass if
			weaselest charchoice( "': Lasst uns diesen Trottel ausrauben!" )choice: recruit2-rob
		then
		most-grating if 
			charchoice( " " .. rname .. " ' um ES AUSZUHALTEN" fcoolit )choice: recruit2-coolit
		then
;

cyoa: recruit3
	"'Etwas aufdringlich" cyoa-title!
	char-gen to recruitee
	recruitee character# cyoa-char-icon!
	0 1 rnd recruitee .composure!
	5 6 rnd recruitee .attitude!
	4 5 rnd recruitee .morale!
	4 recruitee 50 %chance if .strength! else .shooting! then
	WEAPON_BASEBALL recruitee .weapona!
	($ Thegroup .. " 'findet einen anderen Reisenden am Straßenrand, namens " .. rname .. ".
	" .. rHe .. " ' besteht darauf, der Gruppe sofort beizutreten. " $) cyoa-text! basic-tone
	solo if
		($ thegroup .. " 'uberlegt die Vorteile der " .. ghis .. " 'EIN-WOLF-Strategie bisher. Sollte " .. gthey .. " anwerben " .. rname .. "?" $) +crtext
		recruit-yesno
	then;
	team-count 4 < if
		($ Thegroup .. " " .. rname .. "  tritt der Party bei! Auf nach Kanada?" $) +text
		recruitee .recruit recruitee .attitudeREV recruitee .temperREV
		gstats{ ugnome-extraZP 2 > if 1 zombop+! then }
		judgerecruit
	then;
		"Der Wagen ist bereits voll! Jemand muss aus der Gruppe rausgeschmissen werden, um Platz zu machen." +text
		recruit-replace?
;

// Possible stat bonus recruit events

: recruit-intro
	char-gen to recruitee ricon
	($ Thegroup .. " ' findet eine neue Person, " .. rname .. ".
	" .. rHe .. " ' ist allein und will sich der Mannschaft anschließen!" $) cyoa-text! basic-tone
;

: recruit-confirm
	choosechar
	($ cname .. 
	1 5 rnd case
		1 of " ' belegt dieses Behauptung." endof
		2 of " ' glaubt an diese Aussage aufgrund von ', " .. chis .. " ' Erfahrung." endof
		3 of " ' glaubt, dass ', " .. rhe .. " ' die Wahrheit sagt." endof
		4 of " ' hat ein gutes Gefuhl fur diese Person." endof
		5 of " ' hat einen Verdacht, dass dies wahr ist." endof
	endcase
	$) +crtext recruitee
;

: recruit-scoff
	choosechar
	($ cname .. 
	1 6 rnd case
		1 of " ' hat große Bedenken an dieser Behauptung." endof
		2 of " ' wirft eine Seite.', " .. chis .. " ' schuttelt den Kopf bei diesem offensichtlichen Luge." endof
		3 of " ' glaubt, dass ', " .. rhe .. " liegt." endof
		4 of " ich habe ein sehr schlechtes Gefuhl bei dieser Person." endof
		5 of " hat das Gefuhl, dass das eine Luge ist." endof
		6 of " weiß, dass etwas nicht stimmt mit " .. rname .. "." endof
	endcase
	$) +crtext recruitee .loyaltyREV recruitee
;

: recruit-strength-flavor
	1 6 rnd case
		1 of " er bewegt sich auf dramatische Weise, um es zu beweisen." endof
		2 of " er spricht uber ein fruheres Leben als Holzfaller." endof
		3 of " er spricht uber ein fruheres Leben als Bodybuilder." endof
		4 of " ' kampfte fruher als Gefangener in einem Tierkampf. " endof
		5 of " ' biegt einen Loffel sehr aggressiv um. " endof
		6 of " ' streckt sich und knurrt HARD, Sauerteig bildet sich auf der Stirn. " endof
	endcase
;

: recruit-fitness-flavor
	1 6 rnd case
		1 of " ' offenbart dass ', " .. rhe .. " ' einmal College-Leichtathlet war. " endof
		2 of " ' macht eine ungeschickte Halbtumbe. Vielleicht ist es ein schlechter Tag fur ', " .. rhim .. "?" endof
		3 of " ' zeigt eine aufwendige Dehngrube vor, um das zu beweisen. " endof
		4 of " jogs in place for a bit. It looks ok? There's little to no wheezing..." endof
		5 of " ' tanzet leichtfertig. Dann halt er sich an, und sagt dem Rekrutierten fur mehr. ', " .. rname .. " ' behauptet, dass ', " .. rhim .. " " endof
		6 of " ' behauptet, dass ', " .. rhe .. " ' einmal Olympiateilnehmer war." endof
	endcase
;

: recruit-shooting-flavor
	1 6 rnd case
		1 of " 'spricht uber " .. rhis .. " 'lieblingsgewehre, obwohl es beunruhigend ist, dass " .. rhe .. " 'gewehre falsch ausspricht." endof
		2 of " 'redet uber ein fruheres Leben als Polizist. Nicht nur irgendein Cop, ein Supercop." endof
		3 of " 'redet uber all " .. rhis .. " 'Schießtrophaen und Trophaen fur die besten Gewehre." endof
		4 of " 'weigert sich zu beweisen " .. rhe .. "''s ein guter Schutze ist, weil " .. rhis .. " 'der Finger gerade weh tut. Verdachtig." endof
		5 of " 'dreht eine Pistole herum, bevor sie aus Versehen fallen und zerbrechen lasst." endof
		6 of " 'schießt mit einem Gummiband von " .. rhis .. " 'der Finger, um zu zeigen " .. rhis .. " 'die Treffsicherheit, aber verfehlt." endof
	endcase
;

: recruit-medical-flavor
	1 6 rnd case
		1 of " ' spricht eine Menge medizinischer Fachausdrucke. Scheint glaubwurdig?" endof
		2 of " ' ist verschwiegen, wenn darauf gefragt wird, was er " .. rhis .. " ' betreibt." endof
		3 of "'Personliche Schatze" .. rhe .. " ' war kein 'Arzt-Arzt', aber holte sich " .. rhim .. "'selbst." endof
		4 of " 'spricht uber " .. rhis .. " ' eine lange Karriere im Gesundheitswesen." endof
		5 of " ' sagt das ', " .. rhe .. " ' hatte nie einen Abschluss, aber hat viel gelernt 'auf der Straße'." endof
		6 of " ' dreht ein Messer wie ein Experte um, aber dann wirft es in eine Sturmgrube." endof
	endcase
;

: recruit-mechanical-flavor
	1 6 rnd case
		1 of " ' spricht uber Autoreparatur, aber man kann nicht erkennen, ob " .. rhe .. "' blufft oder nicht." endof
		2 of " ' spricht von der Zeit, als " .. rhe .. " ' ein Reparaturladen besaß." endof
		3 of " " .. rhe .. " ' war einmal Ingenieur, aber verschweigt sich uber die Art." endof
		4 of " schwafelt uber " .. rhis .. " leidenschaft fur Autos, die ein Leben lang anhalt." endof
		5 of "  then the catch will catch it " .. rhe .. " 'kann es reparieren!" endof
		6 of " 'riecht wie Motorol, aber vielleicht ist das nur mangelnde Hygiene." endof
	endcase
;

: recruit-highstat 80 %chance if 4 else 5 then recruitee ;
: recruit-liestat 0 1 rnd recruitee .loyalty! 0 2 rnd recruitee ;
		

cyoa: recruit-strength
	"'Starke Fremde" cyoa-title!
	recruit-intro
	WEAPON_SLEDGE recruitee .weapona!
	($ rname .. " ' behauptet, wirklich stark zu sein.'  " .. rHe .. recruit-strength-flavor $) +crtext
	60 %chance if
		recruit-highstat .strength!
		strongest-pass if strongest recruit-confirm .strengthREV strengthREV
		else
			most-paranoid if recruit-confirm .strengthREV witsREV attitudeREV then 
		then
	else
		recruit-liestat .strength!
		strongest-pass if strongest recruit-scoff .strengthREV strengthREV
		else
			most-paranoid if recruit-scoff .strengthREV witsREV attitudeREV then
		then
	then
	recruit-yesno
;


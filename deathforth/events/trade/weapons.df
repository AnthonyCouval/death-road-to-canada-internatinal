	($ Thegroup .. " 'conoce a un hombre que blande una lanza casera. A pesar de ser un cuchillo atado a un palo, parece que seria una arma realmente efectiva." .. "No hay nada mejor que las picas para cazar zombis!" pbold $) cyoa-text! basic-tone foodamt
	choice( "Dejalo" )choice back-esc
	most-ahole if
		charchoice( " 'asalta al comerciante" )choice: trade-polearm-rob
	then
	most-grating if 
		charchoice( " 'le dice que TRATE DE SER CALMO" fcoolit )choice: trade-polearm-coolit
	then
	trunk-food 3 < if
		($ "Esto no es suficiente comida para comprar nada! Como compensacion, el comerciante da " .. thegroup .. " 'un taco de billar." $) +crtext goodfx 1 WEAPON_POOLCUE trunk.weapon+ clear-cyoa
	else
		trunk-food 24 > polearm-bardiche 1 < and if
			choice( "Bardiche por 25 comida" )choice: trade-polearm-4
		then
		trunk-food 8 > polearm-spear 3 < and if
			choice( "Lanza tactica por 9 comida" )choice: trade-polearm-3
		then
		trunk-food 5 > polearm-boot 1 < and if
			choice( "Botas de palo por 6 comida" )choice: trade-polearm-2
		then
		trunk-food 2 > if
			choice( "Horca por 3 comida" )choice: trade-polearm-1
		then
	then
;


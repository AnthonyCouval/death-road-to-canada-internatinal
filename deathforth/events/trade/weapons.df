cyoa: trade-polearm
	"Stangenwaffenkamerad" cyoa-title!
	($ Thegroup .. " 	Trifft einen Mann, der eine selbstgebaute Lanze schwingt. Trotzdem es sich nur um ein Messer handelt, das an einem Stock befestigt ist, scheint es ein wirklich effektives Waffe zu sein." .. "Nichts schlagt Hellebarden fur die Zombiejagd!" pbold $) cyoa-text! basic-tone foodamt
	choice( "Lass ihn" )choice back-esc
	most-ahole if
		charchoice( " 'beraubt den Handler" )choice: trade-polearm-rob
	then
	most-grating if 
		charchoice( " ' lasst ihn Ruhe halten!" fcoolit )choice: trade-polearm-coolit
	then
	trunk-food 3 < if
		($ "1. " .. thegroup .. " ein Billardstock." $) +crtext goodfx 1 WEAPON_POOLCUE trunk.weapon+ clear-cyoa
	else
		trunk-food 24 > polearm-bardiche 1 < and if
			choice( "1.5 gold, 1.5 wood, 1.5 food" )choice: trade-polearm-4
		then
		trunk-food 8 > polearm-spear 3 < and if
			choice( "9 food + 1 spear = 10 food" )choice: trade-polearm-3
		then
		trunk-food 5 > polearm-boot 1 < and if
			choice( "6 food" )choice: trade-polearm-2
		then
		trunk-food 2 > if
			choice( "3 food" )choice: trade-polearm-1
		then
	then
;


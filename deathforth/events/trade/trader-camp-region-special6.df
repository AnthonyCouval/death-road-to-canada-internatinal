cyoa{

: prepperturret-grab clear-cyoa deleteme goodfx turretgreen drop southofcyoa ;

cyoa-choice: prepperturret-hack
	cmechanic+ if
		($ pname .. " 'utiliza sus habilidades para descubrir como reiniciar el turret a su estado desplegable" .. "TURRET GRATIS!" rainbold $) cyoa-text! mechanicREV prepperturret-grab
	else
		($ pname .. " 'intenta usar la fuerza bruta para aplastar el turret de regreso a su estado portatil" .. "GRAAAAAAAAAAAAAH!" rbold $) cyoa-text!
		cstrength+ if
			"Milagrosamente, esto realmente funciona" +crtext prepperturret-grab
		else
			($ "Esto funciona mas o menos tan bien como puedes esperar. Ademas, " .. pname .. " 'recibe una descarga bastante fuerte" $) +crtext bitefx sting-- morale--
		then strengthREV 
	then
;

cyoa: prepperturret
	"Ladron de Turret" cyoa-title!
	picon!
	($ "Este turret esta haciendo cosas de turret. Zumbido, escaneando para hostiles, y asi sucesivamente. Wow, mira como va!	Un pequeno problema: " .. "No es TU turret!" rbold $) cyoa-text!
		choice( "Dejalo estar" )choice
		pchar charchoice( " 'intenta robar el turret" )choice: prepperturret-hack
;

0 value pt1-1
0 value pt1-2
0 value pt1-3

cyoa-choice: trade-p1-3
	($ Thegroup .. " 'compra un Lanzallamas modificado para doble capacidad" .. "Hablas de amigas FUEGO! Cuida de tus companeros ahora mismo!" pbold $) cyoa-text! goodfx
	100 WEAPON_NAPALM trunk.weapon+ -16 trunk-food+ someicon ' pt1-3 ++
;

cyoa-choice: trade-p1-2
	($ Thegroup .. " 'compra un bazooka modificado con ocho cohetes!	" .. "TOTAL anarquia! Me encanta!" pbold $) cyoa-text! goodfx
	8 WEAPON_BAZOOKA trunk.weapon+ -12 trunk-food+ someicon ' pt1-2 ++
;

cyoa-choice: trade-p1-1
	($ Thegroup .. " 'compra un lanzagranadas modificado con quince granadas!" .. "Mira cuantos zombis puedes esplatar a la vez!" pbold $) cyoa-text! goodfx
	15 WEAPON_GLAUNCH trunk.weapon+ -12 trunk-food+ someicon ' pt1-1 ++
;

cyoa: preptrader1
	"Armas de Carnage XL" cyoa-title!
	($ "He modificado todos estos armamentos DESTROYECTORES ya que tienen capacidad doble o mas! No puedes obtenerlos en ningun otro lugar!" pbold $) cyoa-text!
	trunk-food 11 > if "Ahora estamos hablando." +crtext then
	basic-tone foodamt
	trunk-food 12 < if
		($ Thegroup .. " 'esta DESTROZADO al enterarse de que no puede permitirse nada." $) +crtext
	else
		choice( "Deja esto por ahora" )choice back-esc
		trunk-food 15 > pt1-3 1 < and if
			choice( "Lanzallamas XL - 100 'palmas - 16 comida" )choice: trade-p1-3
		then
		trunk-food 11 > pt1-2 1 < and if
			choice( "Bazooka XL - 8 disparos - 12 comida" )choice: trade-p1-2
		then
		trunk-food 11 > pt1-1 1 < and if
			choice( "3 food" )choice: trade-p1-1
		then
	then
;

0 value pt2-1
0 value pt2-2
0 value pt2-3

cyoa-choice: trade-p2-3
	($ Thegroup .. " 'compra la " .. "Minigun" fbold .. " ' Es la cima del suministro de municion de rifle!" .. "Lo vendi con un descuento masivo porque accidentalmente le puse manchas de mantequilla de cacahuate." pbold $) cyoa-text! goodfx
	1 WEAPON_MINIGUN trunk.weapon+ -35 trunk-food+ someicon ' pt2-3 ++
;
	
cyoa-choice: trade-p2-2
	($ Thegroup .. " 'compra la " .. "BIG DAWG" rbold .. ". Es una pieza unica de un fusil de canon personalizado. Cada disparo es una gran explosion de zombis esplatando." $) cyoa-text! goodfx ' pt2-2 ++
	1 WEAPON_DAWG trunk.weapon+ -20 trunk-food+ picon
;

cyoa-choice: trade-p2-1
	($ Thegroup .. " 'compra la " .. "PISTOLA DORADA" rbold .. ". Tiene una cantidad inusual de poder y penetracion de bala para una pistola, ademas es bonita y brillante." $) cyoa-text! goodfx ' pt2-1 ++
	1 WEAPON_GOLDPISTOL trunk.weapon+ -15 trunk-food+ picon
;

cyoa: preptrader2
	"Armas de cima" cyoa-title!
	($ "Bienvenido a " pbold .. "PARAISO DEL PREPPER!" rainbold .. " ' Vendo solo las MEJORES armas! La escopeta mas grande, el rifle automatico mas rapido y la pistola mas brillante!" pbold $) cyoa-text!
	basic-tone foodamt
	trunk-food 15 < if
		($ Thegroup .. " ' le falta comida suficiente para comprar algo!" $) +crtext
		($ "No te preocupes, te cubro!" pbold .. " ' El comerciante guina un ojo y luego da " .. thegroup .. " ' el " .. "LIL PERRO!" rbold $) +crtext goodfx 1 WEAPON_LILDAWG trunk.weapon+ clear-cyoa
	else
		choice( "Deja esto por ahora" )choice back-esc
		trunk-food 34 > pt2-3 1 < and if
			choice( "1.5 damage" )choice: trade-p2-3
		then
		trunk-food 19 > pt2-2 1 < and if
			choice( "1 shotgun" )choice: trade-p2-2
		then
		trunk-food 14 > pt2-1 1 < and if
			choice( "1 gold" )choice: trade-p2-1
		then
	then
;

0 value pt3-1
0 value pt3-2
0 value pt3-3

cyoa-choice: trade-p3-3
	($ Thegroup .. " 'compra la " .. "Rociador de curacion XL!" rbold .. " 	Usalo para curarte a ti mismo, o para danar a un grupo de zombies." .. "A veces, incluso lo esprayo en mi comida." pbold $) cyoa-text! goodfx
	10 WEAPON_HEALSPRAY trunk.weapon+ -10 trunk-food+ someicon ' pt3-3 ++
;
	
cyoa-choice: trade-p3-2
	($ Thegroup .. " compra un " .. "CUCHILLO DE SURVIVENCIA" rbold .. ". Es ligero, facil de golpear incluso cuando estas agotado, y puede cortar a dos zombis en una sola hachazo." $) cyoa-text! goodfx ' pt3-2 ++
	1 WEAPON_SURVKNIFE trunk.weapon+ -6 trunk-food+ picon
;

cyoa-choice: trade-p3-1
	($ Thegroup .. " compra un " .. "ARCO CON 50 flechas" rbold .. ". Los arcos se benefician de cada estadistica: fuerza, aptitud fisica y tiro todos lo que hacen mas poderosos los arcos." $) cyoa-text! goodfx ' pt3-1 ++
	50 WEAPON_BOW trunk.weapon+ -5 trunk-food+ picon
;

cyoa: preptrader3
	"Equipo de supervivencia" cyoa-title!
	($ "Estoy comercializando algunos equipos de supervivencia asequibles y efectivos!	Los arcos son excelentes para matar a los zombis silenciosamente, especialmente si eres lo suficientemente atletico como para usarlos bien. Si tienes la comida, tengo muchas flechas adicionales en el inventario." pbold $) cyoa-text!
	basic-tone foodamt
	trunk-food 5 < if
		($ Thegroup .. " ' carece de suficiente comida para comprar incluso un arco!" $) +crtext
		($ "El traficante se siente un poco compasivo con " .. thegroup .. " 'y reparte " .. "un cuchillo de supervivencia gratis, y un arco con 12 flechas!" rbold $) +crtext goodfx 12 WEAPON_BOW trunk.weapon+ 1 WEAPON_SURVKNIFE trunk.weapon+ clear-cyoa
	else
		choice( "Deja esto por ahora" )choice back-esc
		trunk-food 9 > pt3-3 1 < and if
			choice( "Spray de curacion XL - 10 Sprays - 10 comida" )choice: trade-p3-3
		then
		trunk-food 5 > pt3-2 2 < and if
			choice( "Cuchillo de supervivencia - 6 comida" )choice: trade-p3-2
		then
		trunk-food 4 > pt3-1 8 < and if
			choice( "Arco con 50 flechas - 5 comida" )choice: trade-p3-1
		then
	then
;

: delta-good args( chara )
	"Bueno " pchar .name@ $cat
	"Malo " pchar .name@ $cat pchar .name!
;

: delta-cool args( chara )
	"Genial " <- chara .name@ $cat
;

: deltrarecruit-rename
	ricon recruitee .name! ($ "DELTA" pbold .. "su nombre ahora es " .. rname .. "!" $) cyoa-text! goodfx
;

cyoa-choice: deltarecruit-name1
	"Pedorberto" deltrarecruit-rename
	"Que nombre completamente horrible y nuevo! Y, sin embargo, tiene un toque exotico." +crtext
;

cyoa-choice: deltarecruit-name2
	"Harry Hamm" deltrarecruit-rename 
	$( rname .. " 'fue uno de los nombres de perro mas populares, justo antes del Zombocalipsis. No se debe confundir con el nombre de persona muy poderoso, 'Harry Ham'." $) +crtext 
;

cyoa-choice: deltarecruit-name3
	cchar delta-cool deltrarecruit-rename 
	($ "Este nombre es aun mas genial, de alguna manera!" $) +crtext
;

cyoa-choice: deltarecruit-name4
	cchar delta-good deltrarecruit-rename 
	"Que gran nombre!" +crtext
	($ pname .. " 'se siente triste." $) +crtext
	pchar .morale--
;

cyoa-bridge: deltarecruit-name
	ricon "Que nombre debe llamarse el perro supersoldado?" text!
	choice( "Pedorberto" )choice: deltarecruit-name1
	choice( "Harry Hamm" )choice: deltarecruit-name2
	choice( "Genial " .. rname )choice: deltarecruit-name3
	choice( "Bueno " .. pchar .name@ )choice: deltarecruit-name4
;

cyoa-bridge: deltarecruit-go
	ricon 4 recruitee .morale! clear-cyoa 0.25 recruitee .ai.wander_chance! 0 nearest .unseen!
	($ "Now without a cause, DELTA decides to follow a new master...... YOU..........." rbold $) cyoa-text!
	-10 trunk-food+ goodfx
	
	team-full? if
		($ "El grupo esta lleno. Que persona quieres reemplazar para dejar lugar a " .. rname .. "?" $) +crtext
		recruit-replace?
	else
		recruited
		($ "Te gustaria dar " .. rname .. " ' un nuevo nombre?" $) +crtext
		choice( "NO" )choice
		choice( "SI" )choice: deltarecruit-name
	then
	
	WEAPON_SHOTGUN recruitee .weaponb! 	20 LOOT_SHOTGUN_SHELL recruitee .lootamt!
;

cyoa: deltarecruit
	"PROYECTO: DELTA" cyoa-title!
	nearest .character@ choosechar cchar to recruitee ricon
	($ cname .. " is a supersoldier dog trained by the government.
	Now that the government has fallen, DELTA seeks a new master......... for the right price........" rbold $) cyoa-text!
	" (Acerca de 10 latas de comida)" bbold +text basic-tone
	trunk-food 9 > if
		choice( "Deja esto por ahora" )choice
		choice( "Recluta DELTA - Diez raciones de comida" )choice: deltarecruit-go
	else
		choice( "No puedo desprenderme de la comida" )choice
	then		
;
	
}

roomgen{


: .pt1 args( ch ) 
	10 <- ch .hattype! // Helmet, modded explosives
;
: .pt2 args( ch ) 
	11 <- ch .hattype! // General's Hat, fancy weapons
;
: .pt3 args( ch ) 
	12 <- ch .hattype! // Camo Hat, cheap survival
;

: preptradercommon
	still-npc regiondef{ ' trader-event lt .events! 1 lt .timer! }
	
;

: preptrader1
	preptradercommon .pt1 cyoa{ ' preptrader1 cyoa! }
;

: preptrader2
	preptradercommon .pt2 cyoa{ ' preptrader2 cyoa! }
;

: preptrader3
	preptradercommon .pt3 cyoa{ ' preptrader3 cyoa! }
;

: preptrader4
	preptradercommon .deltaify cyoa{ ' deltarecruit cyoa! }
;

		0 stack
			' preptrader1 shove
			' preptrader2 shove
			' preptrader3 shove
			' preptrader4 shove
		value preptrader-base
		preptrader-base shuffles var preptrader-picker

: preppertrader
	preptrader-picker depths 0= if preptrader-base shuffles to preptrader-picker then pops nip execute ;

: prepperturret
	still-npc .greenturretify cyoa{ ' prepperturret cyoa! } ;

}


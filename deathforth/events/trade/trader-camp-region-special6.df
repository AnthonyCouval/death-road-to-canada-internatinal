cyoa{

: prepperturret-grab clear-cyoa deleteme goodfx turretgreen drop southofcyoa ;

cyoa-choice: prepperturret-hack
	cmechanic+ if
		($ pname .. " 'nutzt ihre Fahigkeiten, um herauszufinden, wie das Turret in seinen Bereitstellzustand zuruckgesetzt werden kann!		" .. "'GRATIS TURRET!" rainbold $) cyoa-text! mechanicREV prepperturret-grab
	else
		($ pname .. " 'versucht, mit Kraft zu versuchen, das Turret in sein Tragzustand zuruckzudrucken!		" .. "GRAAAAAAAAAAAAAH!" rbold $) cyoa-text!
		cstrength+ if
			"'Bewundernswert ist dies, dass das funktioniert!" +crtext prepperturret-grab
		else
			($ "'Das funktioniert so gut wie erwartet. Zusatzlich erhalt " .. pname .. " ' wird sehr stark geschockt." $) +crtext bitefx sting-- morale--
		then strengthREV 
	then
;

cyoa: prepperturret
	"Turm Dieb" cyoa-title!
	picon!
	($ "1 " .. "Es ist nicht DEIN Geschutz!" rbold $) cyoa-text!
		choice( "Lass es sein" )choice
		pchar charchoice( " turret is not stolen" )choice: prepperturret-hack
;

0 value pt1-1
0 value pt1-2
0 value pt1-3

cyoa-choice: trade-p1-3
	($ Thegroup .. " 'kauft sich einen Napalmbewerfer, der doppelte Kapazitat hat!	" .. "'Freundliches Feuer! Wirklich, achtet auf Teamkollegen.	" pbold $) cyoa-text! goodfx
	100 WEAPON_NAPALM trunk.weapon+ -16 trunk-food+ someicon ' pt1-3 ++
;

cyoa-choice: trade-p1-2
	($ Thegroup .. " 'kauft sich einen Raketenwerfer mit acht Raketen moddiert!	" .. "'Volles Chaos! Das liebe ich!" pbold $) cyoa-text! goodfx
	8 WEAPON_BAZOOKA trunk.weapon+ -12 trunk-food+ someicon ' pt1-2 ++
;

cyoa-choice: trade-p1-1
	($ Thegroup .. " 'kauft sich einen Granatwerfer, der 15 Granaten moddiert ist!	" .. "'Sieh aus, wie viele Zombies du gleichzeitig zerquetschen kannst!" pbold $) cyoa-text! goodfx
	15 WEAPON_GLAUNCH trunk.weapon+ -12 trunk-food+ someicon ' pt1-1 ++
;

cyoa: preptrader1
	"'Karnage-Waffen XL	" cyoa-title!
	($ "'Ich habe alle diese Waffen mit doppelter Kapazitat oder mehr moddiert! Du kannst sie hier nicht anders erhalten!" pbold $) cyoa-text!
	trunk-food 11 > if "'JETZT sprechen wir mal." +crtext then
	basic-tone foodamt
	trunk-food 12 < if
		($ Thegroup .. " 'ist enttauscht, daß es sich leider nicht leisten lasst.	" $) +crtext
	else
		choice( "'Gehen Sie fur jetzt" )choice back-esc
		trunk-food 15 > pt1-3 1 < and if
			choice( "'Napalmbewerfer XL - 100 Napalm-Granaten - 16 Nahrungsmittel	" )choice: trade-p1-3
		then
		trunk-food 11 > pt1-2 1 < and if
			choice( "'Raketenwerfer XL - 8 Schusse - 12 Nahrungsmittel	" )choice: trade-p1-2
		then
		trunk-food 11 > pt1-1 1 < and if
			choice( "'Granatwerfer XL - 15 Schuss - 12 Lebensmittel" )choice: trade-p1-1
		then
	then
;

0 value pt2-1
0 value pt2-2
0 value pt2-3

cyoa-choice: trade-p2-3
	($ Thegroup .. " ' kauft etwas.', " .. "'Minigun!" fbold .. " 'Es ist der Gipfel der Patronenlieferung fur Gewehre! " .. "'Ich habe es zu einem massiven Rabatt verkauft, weil ich es versehentlich mit Erdnussbutter befleckt habe." pbold $) cyoa-text! goodfx
	1 WEAPON_MINIGUN trunk.weapon+ -35 trunk-food+ someicon ' pt2-3 ++
;
	
cyoa-choice: trade-p2-2
	($ Thegroup .. " ' kauft etwas.', " .. "'GROSSER HUND" rbold .. "'. Es handelt sich um eine einmalige, von Hand angefertigte Schrotflinten! Jeder Schuss ist ein massiver Blast an Zombie-Zerquetschung." $) cyoa-text! goodfx ' pt2-2 ++
	1 WEAPON_DAWG trunk.weapon+ -20 trunk-food+ picon
;

cyoa-choice: trade-p2-1
	($ Thegroup .. " ' kauft etwas.', " .. "'GOLDENE PISTOLE" rbold .. "'. Sie hat eine ungewohnliche Menge an Kraft und Schusstiefe fur eine Pistole, und sie ist schon glanzend." $) cyoa-text! goodfx ' pt2-1 ++
	1 WEAPON_GOLDPISTOL trunk.weapon+ -15 trunk-food+ picon
;

cyoa: preptrader2
	"'Spitzenwaffen" cyoa-title!
	($ "'Willkommen bei " pbold .. "'PREPPER PARADIES!" rainbold .. " 'Ich verkaufe nur die BESTEN Waffen! Den großten Revolver, das schnellste automatische Gewehr und die schonste Pistole!" pbold $) cyoa-text!
	basic-tone foodamt
	trunk-food 15 < if
		($ Thegroup .. " 'mangelt es an Lebensmitteln, um etwas zu kaufen!" $) +crtext
		($ "'Mach dir keine Sorgen, ich habe dich abgedeckt." pbold .. " ' Der Handler zwinkert und gibt dann " .. thegroup .. "  der, die, das " .. "Kleiner Hund!" rbold $) +crtext goodfx 1 WEAPON_LILDAWG trunk.weapon+ clear-cyoa
	else
		choice( "'Gehen Sie fur jetzt" )choice back-esc
		trunk-food 34 > pt2-3 1 < and if
			choice( "'Minigun - 35 Nahrungseinheiten" )choice: trade-p2-3
		then
		trunk-food 19 > pt2-2 1 < and if
			choice( "'BIG HUND Schrotflinten-Gewehr - 20 Nahrungseinheiten" )choice: trade-p2-2
		then
		trunk-food 14 > pt2-1 1 < and if
			choice( "'Goldenes Revolver - 15 Nahrungseinheiten" )choice: trade-p2-1
		then
	then
;

0 value pt3-1
0 value pt3-2
0 value pt3-3

cyoa-choice: trade-p3-3
	($ Thegroup .. " ' kauft etwas.', " .. "'Heilend Spray XL!" rbold .. " 'Verwende es, um dich selbst zu heilen, oder eine Gruppe von Zombies zu schaden.	" .. "'Manchmal spritze ich es auch auf meine Nahrung." pbold $) cyoa-text! goodfx
	10 WEAPON_HEALSPRAY trunk.weapon+ -10 trunk-food+ someicon ' pt3-3 ++
;
	
cyoa-choice: trade-p3-2
	($ Thegroup .. " ' kauft ein " .. "'Uberlebensklinge" rbold .. "'. Es ist leicht, auch wenn man erschopft ist, und kann zwei Zombies mit einem Schlag treffen." $) cyoa-text! goodfx ' pt3-2 ++
	1 WEAPON_SURVKNIFE trunk.weapon+ -6 trunk-food+ picon
;

cyoa-choice: trade-p3-1
	($ Thegroup .. " ' kauft ein " .. "50 Pfeile" rbold .. "bogen profitieren von jeder Statistik: Starke, Fitness und Schießen machen Bogen machtiger." $) cyoa-text! goodfx ' pt3-1 ++
	50 WEAPON_BOW trunk.weapon+ -5 trunk-food+ picon
;

cyoa: preptrader3
	"Uberlebensausrustung" cyoa-title!
	($ "1x Bow, 1x 10 Arrows" pbold $) cyoa-text!
	basic-tone foodamt
	trunk-food 5 < if
		($ Thegroup .. " hat nicht genug Geld, um sich uberhaupt einen Bogen zu kaufen!" $) +crtext
		($ "Der Handler nimmt ein wenig Mitleid auf " .. thegroup .. "  und gibt aus " .. "1.000.000€" rbold $) +crtext goodfx 12 WEAPON_BOW trunk.weapon+ 1 WEAPON_SURVKNIFE trunk.weapon+ clear-cyoa
	else
		choice( "'Gehen Sie fur jetzt" )choice back-esc
		trunk-food 9 > pt3-3 1 < and if
			choice( "10x 10 = 100" )choice: trade-p3-3
		then
		trunk-food 5 > pt3-2 2 < and if
			choice( "'Uberlebensknife - 6 Nahrungseinheiten" )choice: trade-p3-2
		then
		trunk-food 4 > pt3-1 8 < and if
			choice( "'Bogen mit 50 Pfeilen - 5 Nahrungseinheiten" )choice: trade-p3-1
		then
	then
;

: delta-good args( chara )
	"'Gut " pchar .name@ $cat
	"'Schlecht " pchar .name@ $cat pchar .name!
;

: delta-cool args( chara )
	"'Kuhle " <- chara .name@ $cat
;

: deltrarecruit-rename
	ricon recruitee .name! ($ "'DELTA" pbold .. "s name is now " .. rname .. "!" $) cyoa-text! goodfx
;

cyoa-choice: deltarecruit-name1
	"'Geruchsbetroffen" deltrarecruit-rename
	"'Was ein ganz verheissender, aber dennoch etwas exotisches Neues!" +crtext
;

cyoa-choice: deltarecruit-name2
	"'Harry Hund" deltrarecruit-rename 
	$( rname .. " ' war einer der beliebtesten Hundennamen, gerade vor dem Zombocalypse. Nicht zu verwechseln mit dem sehr machtigen menschlichen Namen, 'Harry Ham'." $) +crtext 
;

cyoa-choice: deltarecruit-name3
	cchar delta-cool deltrarecruit-rename 
	($ "'Dieser Name ist noch cooler, irgendwie." $) +crtext
;

cyoa-choice: deltarecruit-name4
	cchar delta-good deltrarecruit-rename 
	"'Was ein tolles Name!" +crtext
	($ pname .. " 'fuhlt sich unglucklich." $) +crtext
	pchar .morale--
;

cyoa-bridge: deltarecruit-name
	ricon "'Was soll der supersoldat Hund einen neuen Namen bekommen?" text!
	choice( "'Geruchsbetroffen" )choice: deltarecruit-name1
	choice( "'Harry Hund" )choice: deltarecruit-name2
	choice( "'Kuhle " .. rname )choice: deltarecruit-name3
	choice( "'Gut " .. pchar .name@ )choice: deltarecruit-name4
;

cyoa-bridge: deltarecruit-go
	ricon 4 recruitee .morale! clear-cyoa 0.25 recruitee .ai.wander_chance! 0 nearest .unseen!
	($ "Now without a cause, DELTA decides to follow a new master...... YOU..........." rbold $) cyoa-text!
	-10 trunk-food+ goodfx
	
	team-full? if
		($ "'Die Gruppe ist voll. Wen mochtest du dafur ersetzen, um Platz fur zu machen? " .. rname .. "?" $) +crtext
		recruit-replace?
	else
		recruited
		($ "Mochtest du geben " .. rname .. " ein neuer Name?" $) +crtext
		choice( "'NEIN" )choice
		choice( "'JA" )choice: deltarecruit-name
	then
	
	WEAPON_SHOTGUN recruitee .weaponb! 	20 LOOT_SHOTGUN_SHELL recruitee .lootamt!
;

cyoa: deltarecruit
	"PROJEKT: DELTA" cyoa-title!
	nearest .character@ choosechar cchar to recruitee ricon
	($ cname .. " is a supersoldier dog trained by the government.
	Now that the government has fallen, DELTA seeks a new master......... for the right price........" rbold $) cyoa-text!
	" (About 10 Dosen Essen)" bbold +text basic-tone
	trunk-food 9 > if
		choice( "'Gehen Sie fur jetzt" )choice
		choice( "'Rekrut DELTA - 10 Lebensmittel" )choice: deltarecruit-go
	else
		choice( "'Essen kann ich nicht abgeben" )choice
	then		
;
	
}

roomgen{


: .pt1 args( ch ) 
	10 <- ch .hattype! // Helmet, modded explosives
;
: .pt2 args( ch ) 
	11 <- ch .hattype! // General's Hat, fancy weapons
;
: .pt3 args( ch ) 
	12 <- ch .hattype! // Camo Hat, cheap survival
;

: preptradercommon
	still-npc regiondef{ ' trader-event lt .events! 1 lt .timer! }
	
;

: preptrader1
	preptradercommon .pt1 cyoa{ ' preptrader1 cyoa! }
;

: preptrader2
	preptradercommon .pt2 cyoa{ ' preptrader2 cyoa! }
;

: preptrader3
	preptradercommon .pt3 cyoa{ ' preptrader3 cyoa! }
;

: preptrader4
	preptradercommon .deltaify cyoa{ ' deltarecruit cyoa! }
;

		0 stack
			' preptrader1 shove
			' preptrader2 shove
			' preptrader3 shove
			' preptrader4 shove
		value preptrader-base
		preptrader-base shuffles var preptrader-picker

: preppertrader
	preptrader-picker depths 0= if preptrader-base shuffles to preptrader-picker then pops nip execute ;

: prepperturret
	still-npc .greenturretify cyoa{ ' prepperturret cyoa! } ;

}


// The rewards

cyoa: tnome-rodent
	"Roedor de Tamanho Incomum" cyoa-title!
	"BEM VINDO A UM NOVO MUNDO UM MUNDO DE ROEDORES" pbold text!
	"Essas palavras de Tnomey ecoam em sua mente." +crtext
	char-gen to recruitee ricon
	recruitee .gerbilfy
	// WEAPON_FIERCE recruitee .weapon_default!
	4 recruitee .strength! // 3 4 rnd recruitee .morale!
	"Escudo da Esperanca" recruitee .perk!
	team-full? if
		($ "O grupo esta muito cheio para um roedor deste tamanho. Quem voce gostaria de substituir para dar espaco ao roedor?" $) +crtext
		recruit-replace?
	else
		recruited
	then
;

: tnome-weaponbuy args( weapon cost )
	1 <- weapon trunk.weapon+ <- cost tnome-end goodfx
;


// The rewards

cyoa: tnome-rodent
	"Roditore di insolita dimensione" cyoa-title!
	"BENVENUTI IN UN NUOVO MONDO UN MONDO DI RODITORI" pbold text!
	"Queste parole di Tnomey echeggiano nella tua mente." +crtext
	char-gen to recruitee ricon
	recruitee .gerbilfy
	// WEAPON_FIERCE recruitee .weapon_default!
	4 recruitee .strength! // 3 4 rnd recruitee .morale!
	"Scudo della Speranza" recruitee .perk!
	team-full? if
		($ "Il gruppo e troppo pieno per un roditore cosi grande. Chi vorresti sostituire per fare spazio al roditore?" $) +crtext
		recruit-replace?
	else
		recruited
	then
;

: tnome-weaponbuy args( weapon cost )
	1 <- weapon trunk.weapon+ <- cost tnome-end goodfx
;


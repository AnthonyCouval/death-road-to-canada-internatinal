// The rewards

cyoa: tnome-rodent
	"Raton de Tamano Anormal" cyoa-title!
	"BIENVENIDOS A UN NUEVO MUNDO	UN MUNDO DE RATON" pbold text!
	"Estas palabras del Tnomey resuenan en tu mente." +crtext
	char-gen to recruitee ricon
	recruitee .gerbilfy
	// WEAPON_FIERCE recruitee .weapon_default!
	4 recruitee .strength! // 3 4 rnd recruitee .morale!
	"Escudo de la Esperanza" recruitee .perk!
	team-full? if
		($ "El grupo esta demasiado lleno para un roedor de este tamano. A quien te gustaria reemplazar para hacerle espacio al roedor?" $) +crtext
		recruit-replace?
	else
		recruited
	then
;

: tnome-weaponbuy args( weapon cost )
	1 <- weapon trunk.weapon+ <- cost tnome-end goodfx
;


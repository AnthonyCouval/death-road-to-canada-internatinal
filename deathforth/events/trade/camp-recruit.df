0 value camp-goat-milked

cyoa-choice: camp-goat-milk
	' camp-goat-milked ++
	camp-goat-milked 2 < if
		($ "Saviez vous que les chevres produisent le plus de lait de tous les animaux delevage ? Environ 300 fois plus quune vache !		De plus les chevres encornent " .. cname .. " pas terrible" $) 
	else
		($ cname .. "  tente a nouveau de traire la chevre.		Une fois de plus, la chevre en corne " .. cname .. " pas terrible" $) 
	then
		text!
		ouch-- morale-- bitefx
		recruitee .female@ if 
			alive? if
				($ cname .. "  parvient a obtenir du lait de la chevre!" $)
			else
				($ cname .. "  obtient du lait de la chevre avant de mourir. Bien!" $)
			then +crtext 2 trunk-food+ goodfx
		else
			"'Vous ne pouvez pas obtenir de lait de chevre d'un bouc!" +crtext
			alive? if
				camp-goat-milked 2 < if
					($ "La chevre en corne " .. cname .. "  extra fort, donc " .. che .. "  se souvient de cette lecon." $) 
				else
					($ cname .. " ' n'a pas reussi a se souvenir de cette lecon de la derniere fois." $) 
				then
					+crtext	ouch--
			else
				($ "La chevre est decue que " .. cname .. "  soit deja mort, car il voulait reflechir " .. chim .. "  deux fois." $) +crtext 
			then
		then
;


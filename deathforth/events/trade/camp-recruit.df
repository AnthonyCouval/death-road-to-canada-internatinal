cyoa: camp-recruit-final
	"'Si vous ne reussissez pas du premier coup" cyoa-title!
	nearest .character@ choosechar cchar to recruitee ricon
	($ rname .. "  a presque reussi a arriver au Canada. " .. rHe .. "  est arrive jusqua la ville des espoirs brises, ou le reste du " .. rhis .. "  groupe a ete mange." .. rHe .. "  propose de vous rejoindre pour 10 nourritures. " .. rHe .. "  a un tres bon pressentiment sur cette tentative !" $) cyoa-text! basic-tone
	WEAPON_HOCKEY recruitee .weaponc!
	
	trunk-food 10 < if
		camp-recruit-nofood
	then;
	
	regiondef{ camprecruit-final-talked } 1 < if 
		($ rname .. "  fait une rapide demonstration de " .. rhis .. " " $) +crtext
		40 %chance if
			"talent de tireur !" +text
			recruit-highstat .shooting!
			recruitee .shootingREV
		else
			50 %chance if
				"force herculeenne !" +text
				recruit-highstat .strength!
				recruitee .strengthREV
			else
				"forme physique !" +text
				recruit-highstat .fitness!
				recruitee .fitnessREV
			then
		then
	else
		($ "'Ma derniere equipe etait une bande de nazes ! Je pense que je ferai beaucoup mieux cette fois ci, si vous me donnez une chance !" $) pbold +crtext
	then
	regiondef{ ' camprecruit-final-talked ++ }
	
	recruit-finalcampyesno
;


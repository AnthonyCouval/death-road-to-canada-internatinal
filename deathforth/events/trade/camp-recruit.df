cyoa: camp-recruit-final
	"Si no lo consigues la primera vez" cyoa-title!
	nearest .character@ choosechar cchar to recruitee ricon
	($ rname .. " 'estaba a punto de llegar a Canada. " .. rHe .. " 'llego tan lejos como la Ciudad de las Esperanzas Trunadas, donde el resto del grupo fue comido.	 " .. rhis .. " 'nuestro grupo estaba siendo comido." .. rHe .. " 'esta dispuesto a unirse a ti por diez comida. " .. rHe .. " 'tiene una sensacion realmente buena acerca de esta intentona!" $) cyoa-text! basic-tone
	WEAPON_HOCKEY recruitee .weaponc!
	
	trunk-food 10 < if
		camp-recruit-nofood
	then;
	
	regiondef{ camprecruit-final-talked } 1 < if 
		($ rname .. " 'da una rapida demostracion de " .. rhis .. " " $) +crtext
		40 %chance if
			"habilidades de tiro!" +text
			recruit-highstat .shooting!
			recruitee .shootingREV
		else
			50 %chance if
				"fuerza impresionante!" +text
				recruit-highstat .strength!
				recruitee .strengthREV
			else
				"fisico en forma!" +text
				recruit-highstat .fitness!
				recruitee .fitnessREV
			then
		then
	else
		($ "Mi ultimo equipo era una pandilla de chorizos! Creo que hare mucho mejor esta vez alrededor, si me dan una oportunidad!" $) pbold +crtext
	then
	regiondef{ ' camprecruit-final-talked ++ }
	
	recruit-finalcampyesno
;


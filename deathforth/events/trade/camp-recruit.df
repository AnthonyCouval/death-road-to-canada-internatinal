0 value camp-goat-milked

cyoa-choice: camp-goat-milk
	' camp-goat-milked ++
	camp-goat-milked 2 < if
		($ "Die Ziege stot " .. cname .. "  recht schlecht." $) 
	else
		($ cname .. " die Ziege stot wieder zu. " .. cname .. "  recht schlecht." $) 
	then
		text!
		ouch-- morale-- bitefx
		recruitee .female@ if 
			alive? if
				($ cname .. " schafft es etwas Milch von der Ziege zu bekommen!" $)
			else
				($ cname .. " melkt noch die Ziege bevor sie stirbt. Schon!" $)
			then +crtext 2 trunk-food+ goodfx
		else
			"You can't get blood from a stone!" +crtext
			alive? if
				camp-goat-milked 2 < if
					($ "Die Ziege stot " .. cname .. " extra hart, also " .. che .. " erinnert sich an diese Lektion." $) 
				else
					($ cname .. " 'konnte sich nicht an diese Lektion aus letzter Zeit erinnern." $) 
				then
					+crtext	ouch--
			else
				($ "Die Ziege ist enttauscht dass " .. cname .. " bereits gestorben ist, da er " .. chim .. " zweimal denken wollte." $) +crtext 
			then
		then
;

cyoa-bridge: camp-goat-milk-pick
	solohuman if
		choosehuman camp-goat-milk
	then;
	($ "Wer soll die Ziege melken? " .. rHe .. " scheint " .. "murrisch." rbold $) text!
	choice( "Ich habe meine Meinung geandert!" )choice
	' camp-goat-milk cyoa-human-choice
;

cyoa-bridge: camp-goat-rec-pick
	solohuman if
		choosehuman camp-goat-recruit
	then;
	($ "Wer soll die Ziege rekrutieren? " .. rHe .. " scheint " .. "murrisch." rbold $) text!
	' camp-goat-recruit cyoa-human-choice
;


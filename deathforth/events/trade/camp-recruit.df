cyoa: camp-recruit-final
	"'Si al principio no tienes exito" cyoa-title!
	nearest .character@ choosechar cchar to recruitee ricon
	($ rname .. " casi llegamos a Canada. " .. rHe .. " llegaron hasta la Ciudad de las Esperanzas Perdidas, donde el resto de " .. rhis .. " grupo fue comido." .. rHe .. " 10 food " .. rHe .. " tiene un buen presentimiento acerca de este intento!" $) cyoa-text! basic-tone
	WEAPON_HOCKEY recruitee .weaponc!
	
	trunk-food 10 < if
		camp-recruit-nofood
	then;
	
	regiondef{ camprecruit-final-talked } 1 < if 
		($ rname .. " da una rapida demostracion de " .. rhis .. " " $) +crtext
		40 %chance if
			"habilidades de tiro!" +text
			recruit-highstat .shooting!
			recruitee .shootingREV
		else
			50 %chance if
				"fuerza poderosa!" +text
				recruit-highstat .strength!
				recruitee .strengthREV
			else
				"aptitud fisica!" +text
				recruit-highstat .fitness!
				recruitee .fitnessREV
			then
		then
	else
		($ "Mi ultimo equipo era un monton de salchichas! Creo que lo hare mucho mejor esta vez, si me das una oportunidad!" $) pbold +crtext
	then
	regiondef{ ' camprecruit-final-talked ++ }
	
	recruit-finalcampyesno
;


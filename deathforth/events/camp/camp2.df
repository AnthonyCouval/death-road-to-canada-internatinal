// Bad Weather camping

: camp2-badweather-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. "  pensava che il tempo fosse bello!" $) +crtext 
		<- @ choosechar morale++ witsattREV
	then;
	<- @ .cattitude+ if 
		($ <- @ .colourname .. " ' non ci badava molto." $) +crtext 
		<- @ .attitudeREV
	then;
	<- @ .morale--
;


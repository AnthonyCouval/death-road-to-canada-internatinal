cyoa-choice: camp2-zwatch-shift
	someone choosechar
	($ Thegroup .. " si alternano nel dormire durante la notte." $) text!
	team-count 4 < if 
		($ cname .. " e molto stanco la mattina e " .. theothers .. " ' non ha dormito granche bene neanche." $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "'Con un gruppo al completo, ci sono abbastanza persone per riuscire comunque a dormire a sufficienza!" $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. "  fa la guardia agli zombie che gironzolano." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. "  smette di prestare attenzione e se ne va in giro nel bel mezzo della guardia " .. gHe .. "  viene assalito dagli zombie, ma riesce a combatterli." $) +crtext
			cchar ' .sting-- foreach-team-char-except
		else
			($ cHe .. "  si addormenta quasi allistante " .. gHe .. "  si sveglia nel bel mezzo del pasto." $) +crtext ouch--all
		then sleep
	else
		($ cHe .. "  riesce a restare sveglio, ma la mattina si sente intontito." $)
		+crtext sleep-except morale--
	then loyaltyREV
	someone choosechar alive? if +cr chowtime then

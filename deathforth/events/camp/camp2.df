// Night watch for bandits, or rather thieves

cyoa-choice: camp2-bwatch-drive
	($ Thegroup .. " 	Recusase a acampar em uma area perigosa e passa uma noite tensa e sem dormir dirigindo pela escuridao." $) cyoa-text! morale--all +cr tiredcamp
	50 %chance if "O carro sai da estrada e bate numa arvore." +crtext  -2 car-chassis+ then
;
cyoa-choice: camp2-bwatch-pick
	($ cname .. " 'fica de guarda pela noite.'" $) cyoa-text!
	cloyalty- if
		($ cHe .. " ignora a tarefa e cai no sono quase instantaneamente. Na manha seguinte, uma serie de suprimentos esta faltando." $) +crtext sleep bandit-supplies2
	else
		($ cHe .. " consegue manterse acordado, mas se sente mal na manha.," $) +crtext
		sleep-except morale--
	then loyaltyREV
	+cr chowtime
;

cyoa-bridge: camp2-bwatch-pick4

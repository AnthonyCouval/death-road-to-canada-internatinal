// Night watch for bandits, or rather thieves

cyoa-choice: camp2-bwatch-drive
	($ Thegroup .. "  se niega a acampar en un area peligrosa y pasa una noche tensa y sin dormir conduciendo por la oscuridad.	" $) cyoa-text! morale--all +cr tiredcamp
	50 %chance if "El coche se sale de la carretera y choca contra un arbol." +crtext  -2 car-chassis+ then
;
cyoa-choice: camp2-bwatch-pick
	($ cname .. "  se queda de guardia por la noche." $) cyoa-text!
	cloyalty- if
		($ cHe .. "  ignora la tarea y se queda dormido casi al instante. A la manana siguiente, faltan un monton de suministros." $) +crtext sleep bandit-supplies2
	else
		($ cHe .. "  logra mantenerse despierto, pero se siente bastante mal por la manana." $) +crtext
		sleep-except morale--
	then loyaltyREV
	+cr chowtime
;

cyoa-bridge: camp2-bwatch-pick4
	someicon
	"Quien deberia quedarse despierto de guardia?" cyoa-text!
	' camp2-bwatch-pick cyoa-team-choice
;

cyoa: camp2-bwatch
	image-bandit-watch

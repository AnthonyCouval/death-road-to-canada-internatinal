cyoa{ road{

// Minigolf, no choices

cyoa: camp2-minigolf
	image-golf-course
	"Mini Golf!" cyoa-title!
	($ Thegroup .. "  si accampa nel posto piu sicuro che riesce a trovare nei dintorni: un parco di mini golf abbandonato. " $) cyoa-text! basic-tone
	+cr fullcamp
	($ "Al mattino, " .. gthey .. "  trova" .. g1s .. "  una pallina da golf e un putter mentre perlustra la zona. " .. Thegroup .. "  decide di fare una partita veloce!" $) +crtext
	unfittest choosechar cfitness- if
		cpet? if
			($ cname .. "  corre in giro eccitato!" $) +crtext morale++
		else
			($ cname .. "  fa un po di sano esercizio!" $) +crtext fitness++
		then	
	then
	most-ahole if
		choosechar ($ cname .. "  si stanca del gioco e poi perde la palla di proposito." $) +crtext morale--all
	then;
	strongest-pass if
		cpet? if
		 	($ cname .. "  morde accidentalmente la palla." $) +crtext morale++ 1 WEAPON_GOLF trunk.weapon+
		then;
		strongest choosechar 50 %chance if
			($ cname .. "  distrugge accidentalmente il putter." $) +crtext morale++
		else
			($ cname .. "  colpisce accidentalmente la palla cosi lontano che si perde." $) +crtext fitness++ 1 WEAPON_GOLF trunk.weapon+
		then
	then;
	morale++all 1 WEAPON_GOLF trunk.weapon+
;


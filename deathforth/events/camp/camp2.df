cyoa-choice: camp2-zwatch-shift
	someone choosechar
	($ Thegroup .. " 'hace turnos durante la noche." $) text!
	team-count 4 < if 
		($ cname .. " 'esta muy cansado por la manana, y " .. theothers .. " 'no dormio bien tampoco." $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "Con un grupo completo, hay suficientes personas para aun obtener mucho descanso!" $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. " 'mantiene la vigilia contra zombis errantes." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. " 'deja de prestar atencion y se desvia en el medio de mantener la guardia. " .. gHe .. " 'es atacado por zombies, pero logra repelerlos." $) +crtext
			cchar ' .sting-- foreach-team-char-except
		else
			($ cHe .. " 'se queda dormido casi al instante. " .. gHe .. " 'despierta en medio de ser devorado." $) +crtext ouch--all
		then sleep
	else
		($ cHe .. " 'logra mantenerse despierto, pero se siente somnoliento por la manana." $)
		+crtext sleep-except morale--
	then loyaltyREV
	someone choosechar alive? if +cr chowtime then

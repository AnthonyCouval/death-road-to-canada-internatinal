// Bad Weather camping

: camp2-badweather-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. "  fand das Wetter schon!" $) +crtext 
		<- @ choosechar morale++ witsattREV
	then;
	<- @ .cattitude+ if 
		($ <- @ .colourname .. " ' machte ihm nicht viel aus." $) +crtext 
		<- @ .attitudeREV
	then;
	<- @ .morale--
;

cyoa: camp2-badweather
	image-camp-2
	"Elendes Camping" cyoa-title!
	($ Thegroup .. " ' konnte keine sicheren Unterkunfte finden, konnte aber einen Campingplatz zusammenbasteln. Das Wetter ist die ganze Nacht schrecklich!" $) text! ' camp2-badweather-check foreach-team-char +cr fullcamp
	0.4 1 frnd weather! -1 1 frnd wind_force!
;



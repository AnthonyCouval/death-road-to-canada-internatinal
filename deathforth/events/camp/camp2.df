cyoa{ road{

// Minigolf, no choices

cyoa: camp2-minigolf
	image-golf-course
	"'Mini-Golf!" cyoa-title!
	($ Thegroup .. " ' richtet das Lager an dem sichersten Ort ein, den sie finden konnen: einem verlassenen Minigolf-Park. " $) cyoa-text! basic-tone
	+cr fullcamp
	($ "'morgens, ', " .. gthey .. " 'findet" .. g1s .. " 'eine Golfkugel und einen Putter im Bereich suchend. ', " .. Thegroup .. " 'entscheidet sich, eine schnelle Runde zu spielen!" $) +crtext
	unfittest choosechar cfitness- if
		cpet? if
			($ cname .. " 'lauft aufgeregt herum!" $) +crtext morale++
		else
			($ cname .. " 'bekommt etwas notwendiges Training!" $) +crtext fitness++
		then	
	then
	most-ahole if
		choosechar ($ cname .. " 'wird mude von dem Spiel und verliert dann absichtlich die Kugel. " $) +crtext morale--all
	then;
	strongest-pass if
		cpet? if
		 	($ cname .. " 'biss unabsichtlich durch die Kugel." $) +crtext morale++ 1 WEAPON_GOLF trunk.weapon+
		then;
		strongest choosechar 50 %chance if
			($ cname .. " 'zerstort unabsichtlich den Putter." $) +crtext morale++
		else
			($ cname .. " 'beschadigt unabsichtlich die Kugel so sehr, dass sie verloren geht. " $) +crtext fitness++ 1 WEAPON_GOLF trunk.weapon+
		then
	then;
	morale++all 1 WEAPON_GOLF trunk.weapon+
;


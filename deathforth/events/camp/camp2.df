// Night watch for bandits, or rather thieves

cyoa-choice: camp2-bwatch-drive
	($ Thegroup .. " ' weigert sich, in einem gefahrlichen Gebiet zu campen, und verbringt eine anspannende und schlafsturzende Nacht mit dem Fahren durch die Dunkelheit.	" $) cyoa-text! morale--all +cr tiredcamp
	50 %chance if "'Das Auto fahrt von der Straße ab und prallt gegen einen Baum." +crtext  -2 car-chassis+ then
;
cyoa-choice: camp2-bwatch-pick
	($ cname .. " ' halt Wache fur die Nacht." $) cyoa-text!
	cloyalty- if
		($ cHe .. " ' ignoriert die Aufgabe und fallt sofort ein. Am nachsten Morgen fehlen eine Menge Ausrustung." $) +crtext sleep bandit-supplies2
	else
		($ cHe .. " ' bleibt wach, aber fuhlt sich recht schlecht am Morgen." $) +crtext
		sleep-except morale--
	then loyaltyREV
	+cr chowtime
;


// Night watch for zombies

cyoa-choice: camp2-zwatch-awake
	($ cname .. " 'decide ir para dormir, apostando que os zumbis nao o encontrarao', " .. chim .. "." $) cyoa-text!
	50 %chance if
		($ cHe .. " acorda no meio do processo de ser engolido por um pequeno grupo de zumbis. Sem ninguem para ajudalo " .. chim .. "', e dificil se soltar.'," $) +crtext despairbite
	else
		($ cHe .. " dorme durante a noite sem interrupcao." $) +crtext
	then
	someone choosechar alive? if +cr fullcamp then
;
cyoa-choice: camp2-zwatch-shift
	someone choosechar
	($ Thegroup .. " troca de turno para dormir durante a noite." $) text!
	team-count 4 < if 
		($ cname .. " esta muito cansado na manha, e, " .. theothers .. " 'nao teve uma boa noite de sono tambem.'" $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "'Com um grupo completo, ha suficientes pessoas para ainda obter muita dormida!'," $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. " guarda contra zumbis errantes." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. "  perde a atencao e sai andando no meio da guarda. " .. gHe .. " e emboscado por zumbis, mas consegue lutar contra eles." $) +crtext
			cchar ' .sting-- foreach-team-char-except
		else
			($ cHe .. "  adormece quase que instantaneamente. " .. gHe .. "  acorda no meio de ser comido." $) +crtext ouch--all
		then sleep
	else
		($ cHe .. "  consegue ficar acordado, mas se sente grogue pela manha." $)
		+crtext sleep-except morale--
	then loyaltyREV
	someone choosechar alive? if +cr chowtime then
;


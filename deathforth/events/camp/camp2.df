cyoa{ road{

// Minigolf, no choices

cyoa: camp2-minigolf
	image-golf-course
	"Mini Golfe!" cyoa-title!
	($ Thegroup .. "  instala o acampamento em um dos lugares mais seguros que puderam encontrar ao redor: um parque de minigolf abandonado. " $) cyoa-text! basic-tone
	+cr fullcamp
	($ "No dia seguinte, , " .. gthey .. "  encontrar" .. g1s .. "  joga uma bola de golfe e um palito enquanto procura a area. " .. Thegroup .. "  decide fazer uma partida rapida!" $) +crtext
	unfittest choosechar cfitness- if
		cpet? if
			($ cname .. "  corre em excitacao!" $) +crtext morale++
		else
			($ cname .. "  obtem algum exercicio necessario." $) +crtext fitness++
		then	
	then
	most-ahole if
		choosechar ($ cname .. "  se cansa do jogo e depois perde a bola intencionalmente." $) +crtext morale--all
	then;
	strongest-pass if
		cpet? if
		 	($ cname .. "  comeca acidentalmente por morar a bola." $) +crtext morale++ 1 WEAPON_GOLF trunk.weapon+
		then;
		strongest choosechar 50 %chance if
			($ cname .. "  destroi acidentalmente o palito." $) +crtext morale++
		else
			($ cname .. "  aciona acidentalmente a bola para ir tao longe que ela se perde." $) +crtext fitness++ 1 WEAPON_GOLF trunk.weapon+
		then
	then;
	morale++all 1 WEAPON_GOLF trunk.weapon+
;


// Night watch for zombies

cyoa-choice: camp2-zwatch-awake
	($ cname .. " decide ir a dormir, apostando a que los zombies no encontraran " .. chim .. "." $) cyoa-text!
	50 %chance if
		($ cHe .. "  se despierta en medio de ser comido por un pequeno grupo de zombis. Sin nadie que lo ayude " .. chim .. "', es dificil liberarse." $) +crtext despairbite
	else
		($ cHe .. "  duerme toda la noche sin interrupcion." $) +crtext
	then
	someone choosechar alive? if +cr fullcamp then
;
cyoa-choice: camp2-zwatch-shift
	someone choosechar
	($ Thegroup .. "  se turnan para dormir durante la noche." $) text!
	team-count 4 < if 
		($ cname .. "  esta muy cansado por la manana y " .. theothers .. " ' tampoco durmio muy bien." $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "' Con un grupo completo, hay suficientes personas para dormir lo suficiente!" $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. "  vigila a los zombis errantes." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. "  deja de prestar atencion y se aleja en medio de la guardia. " .. gHe .. "  es emboscado por zombis, pero logra luchar contra ellos." $) +crtext
			cchar ' .sting-- foreach-team-char-except
		else
			($ cHe .. "  se queda dormido casi al instante. " .. gHe .. "  se despierta en medio de ser comido." $) +crtext ouch--all
		then sleep
	else
		($ cHe .. "  logra mantenerse despierto, pero se siente aturdido por la manana." $)
		+crtext sleep-except morale--
	then loyaltyREV
	someone choosechar alive? if +cr chowtime then
;


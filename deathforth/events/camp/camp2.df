cyoa{ road{

// Minigolf, no choices

cyoa: camp2-minigolf
	image-golf-course
	"Minigolf!" cyoa-title!
	($ Thegroup .. "  schlagt das Lager am sichersten Ort auf den sie in der Umgebung finden konnten: einem verlassenen Minigolfplatz. " $) cyoa-text! basic-tone
	+cr fullcamp
	($ "Am Morgen, " .. gthey .. " findet" .. g1s .. "  einen Golfball und einen Putter wahrend sie die Gegend durchsuchen. " .. Thegroup .. "  beschliet eine schnelle Runde zu spielen!" $) +crtext
	unfittest choosechar cfitness- if
		cpet? if
			($ cname .. "  rennt vor Aufregung herum!" $) +crtext morale++
		else
			($ cname .. "  bekommt etwas Bewegung!" $) +crtext fitness++
		then	
	then
	most-ahole if
		choosechar ($ cname .. "  wird des Spiels mude und verliert dann absichtlich den Ball." $) +crtext morale--all
	then;
	strongest-pass if
		cpet? if
		 	($ cname .. "  beit versehentlich durch den Ball." $) +crtext morale++ 1 WEAPON_GOLF trunk.weapon+
		then;
		strongest choosechar 50 %chance if
			($ cname .. "  zerstort versehentlich den Putter." $) +crtext morale++
		else
			($ cname .. "  schlagt den Ball versehentlich so weit dass er verloren geht." $) +crtext fitness++ 1 WEAPON_GOLF trunk.weapon+
		then
	then;
	morale++all 1 WEAPON_GOLF trunk.weapon+
;

// Driving range with different choices

// previously they find a less dangerous and less fun place to camp - fullcamp
cyoa-choice: camp2-fore-flee
	($ Thegroup .. "  beschliet vom Golfplatz zu fliehen. " .. gThey .. "  finden keinen anderen guten Schlafplatz und fahren die meiste Nacht. " .. gThey .. "  sind am nachsten Tag sehr mude." $) cyoa-text! +cr tiredcamp
;
cyoa-choice: camp2-fore-fore
	solo if
		soloer choosechar
		cpet? if
			($ cname .. " ' versucht Golf zu spielen, aber es ist schwierig, dies als " .. cdogcat .. ". " .. cHe .. " maybe could have done it with a caddy.
			" .. cname .. "  ist vollig uberfordert." $) cyoa-text! morale3- ouch-- sting-- bitefx 
		else
			($ cname .. " ' schlagt eine Menge Golfballe in Zombiekopfe. Es ist eine ziemlich gute Ubung, aber bald " .. che .. " is overwhelmed by them.
			" .. cHe .. "  entkommt, verbringt aber die Nacht damit, sich in einem Schrank zu verstecken. " .. cHe .. "  ist morgens erschopft." $) cyoa-text! fitness++ fitnessREV morale-- sting-- bitefx  
		then someone choosechar alive? if +cr tiredcamp then
	then;
	($ Thegroup .. "  nimmt ein paar Schlager und holt ein paar Eimer Golfballe. Sie beginnen Schusse auf die Driving Range zu schlagen wahrend sich die Zombies nahern." $) cyoa-text! 
	fitness-total 7 > if
		"Sie schicken Golfball fur Golfball in die ankommende Horde." +crtext
		strength-total 7 > if
			"Das Team schlagt die Zombies aus der gesamten Reichweite. Sie kommen nicht einmal in die Nahe!" +crtext goodfx morale++all
		else
			"'Die Zombies werden von Golfballen getroffen, aber sie werden nicht hart genug getroffen, um viel langsamer zu werden. Das Team kampft schlielich normal gegen sie." +crtext someone .sting-- someone .sting-- bitefx
		then
		unfittest .fitness++ ' .fitnessREV foreach-team-char 
		' .strengthREV foreach-team-char +cr fullcamp
	else
		($ "'Es ist harte Arbeit, und das Team ermudet sich meistens nur selbst. " .. gThey .. "  werden von den Zombies uberwaltigt." $) +crtext ouch--all ' .fitnessREV foreach-team-char +cr choosehuman alive? if fullcamp then bitefx
	then
	1 WEAPON_GOLF trunk.weapon+
;

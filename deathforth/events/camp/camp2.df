	($ Thegroup .. "  decide huir del campo de golf. " .. gThey .. "  terminar no encontrando otro buen lugar para dormir, y manejar durante la mayor parte de la noche. " .. gThey .. " al dia siguiente estan muy cansados." $) cyoa-text! +cr tiredcamp
;
cyoa-choice: camp2-fore-fore
	solo if
		soloer choosechar
		cpet? if
			($ cname .. " 1 " .. cdogcat .. ". " .. cHe .. " maybe could have done it with a caddy.
			" .. cname .. " esta completamente abrumado." $) cyoa-text! morale3- ouch-- sting-- bitefx 
		else
			($ cname .. "  'Golpea un monton de bolas de golf en las cabezas de los zombis. Es un buen ejercicio, pero pronto' " .. che .. " is overwhelmed by them.
			" .. cHe .. "  escapa, pero pasa la noche escondido en un armario. " .. cHe .. " se agota por la manana." $) cyoa-text! fitness++ fitnessREV morale-- sting-- bitefx  
		then someone choosechar alive? if +cr tiredcamp then
	then;
	($ Thegroup .. " recoge un monton de palos y consigue algunos cubos de bolas de golf. Comienzan a conducir tiros por el rango mientras los zombies se acercan." $) cyoa-text! 
	fitness-total 7 > if
		"En espanol: Envian bola de golf tras bola de golf hacia la horda entrante." +crtext
		strength-total 7 > if
			"El equipo frijolea a los zombies desde el otro lado del rango. Ni siquiera se acercan!" +crtext goodfx morale++all
		else
			"Los zombies son bombardeados por pelotas de golf, pero no son golpeados lo suficientemente fuerte como para ralentizarse mucho. El equipo termina luchando contra ellos normalmente." +crtext someone .sting-- someone .sting-- bitefx
		then
		unfittest .fitness++ ' .fitnessREV foreach-team-char 
		' .strengthREV foreach-team-char +cr fullcamp
	else
		($ "Es un trabajo duro, y el equipo en su mayoria solo se cansa. " .. gThey .. " estan abrumados por los zombies." $) +crtext ouch--all ' .fitnessREV foreach-team-char +cr choosehuman alive? if fullcamp then bitefx
	then
	1 WEAPON_GOLF trunk.weapon+
;

cyoa{ road{

// Minigolf, no choices

cyoa: camp2-minigolf
	image-golf-course
	"Mini Golf!" cyoa-title!
	($ Thegroup .. " 'establece el campamento en el lugar mas seguro que pudieron encontrar alrededor: un parque de golf miniaturizado abandonado. " $) cyoa-text! basic-tone
	+cr fullcamp
	($ "Al amanecer, " .. gthey .. " 'encontrar" .. g1s .. " 'un pelota y un palo de golf mientras buscaba la zona. " .. Thegroup .. " 'se decide a jugar una rapida partida!" $) +crtext
	unfittest choosechar cfitness- if
		cpet? if
			($ cname .. " 'corre alrededor de alegria!" $) +crtext morale++
		else
			($ cname .. " 'obtiene algun ejercicio necesario!" $) +crtext fitness++
		then	
	then
	most-ahole if
		choosechar ($ cname .. " 'se cansa del juego y luego pierde la pelota intencionadamente." $) +crtext morale--all
	then;
	strongest-pass if
		cpet? if
		 	($ cname .. " 'muerde accidentalmente a traves de la pelota." $) +crtext morale++ 1 WEAPON_GOLF trunk.weapon+
		then;
		strongest choosechar 50 %chance if
			($ cname .. " 'accidentalmente destruye el putter." $) +crtext morale++
		else
			($ cname .. " 'perder la pelota" $) +crtext fitness++ 1 WEAPON_GOLF trunk.weapon+
		then
	then;
	morale++all 1 WEAPON_GOLF trunk.weapon+
;

// Driving range with different choices

// previously they find a less dangerous and less fun place to camp - fullcamp

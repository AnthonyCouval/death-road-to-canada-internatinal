// Bad Weather camping

: camp2-badweather-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. " 'dachte, das Wetter war nett!" $) +crtext 
		<- @ choosechar morale++ witsattREV
	then;
	<- @ .cattitude+ if 
		($ <- @ .colourname .. " 'fand es nicht sehr unangenehm." $) +crtext 
		<- @ .attitudeREV
	then;
	<- @ .morale--
;

cyoa: camp2-badweather
	image-camp-2
	"'Elendiges Camping" cyoa-title!
	($ Thegroup .. " 'konnte keine sichere Unterstande finden, aber konnte eine Campingstelle zusammenbauen. Das Wetter ist schlecht ganz durch die Nacht!" $) text! ' camp2-badweather-check foreach-team-char +cr fullcamp
	0.4 1 frnd weather! -1 1 frnd wind_force!
;



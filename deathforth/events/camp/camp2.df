	someone choosechar
	($ Thegroup .. " 'wechselt sich beim Schlafen wahrend der Nacht ab." $) text!
	team-count 4 < if 
		($ cname .. " 'ist morgens sehr mude, und " .. theothers .. " 'hat auch nicht gut geschlafen." $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "'Mit einer vollstandigen Gruppe gibt es genug Leute, um immer noch genug Schlaf zu bekommen!" $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. " 'halt Wache gegen umherziehende Zombies." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. " 'hort auf aufzupassen und wandert in der Mitte der Wache ab. " .. gHe .. " 'wird von Zombies angegriffen, kann sie aber abwehren." $) +crtext

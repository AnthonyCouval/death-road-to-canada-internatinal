// Bad Weather camping

: camp2-badweather-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. " acreditava que o tempo era bom!" $) +crtext 
		<- @ choosechar morale++ witsattREV
	then;
	<- @ .cattitude+ if 
		($ <- @ .colourname .. " 'nao se importava muito." $) +crtext 
		<- @ .attitudeREV
	then;
	<- @ .morale--
;

cyoa: camp2-badweather
	image-camp-2
	"Acampamento Miseravel" cyoa-title!
	($ Thegroup .. " 'nao conseguiu encontrar nenhum abrigo seguro, mas conseguiu montar um acampamento. O tempo e terrivel toda noite!" $) text! ' camp2-badweather-check foreach-team-char +cr fullcamp
	0.4 1 frnd weather! -1 1 frnd wind_force!
;



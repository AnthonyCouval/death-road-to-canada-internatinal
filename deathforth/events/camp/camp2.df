// Bad Weather camping

: camp2-badweather-check args( @ )
	<- @ oblivious? if
		($ <- @ .colourname .. " ' creia que el clima era agradable!" $) +crtext 
		<- @ choosechar morale++ witsattREV
	then;
	<- @ .cattitude+ if 
		($ <- @ .colourname .. " ' no lo molestaba mucho." $) +crtext 
		<- @ .attitudeREV
	then;
	<- @ .morale--
;

cyoa: camp2-badweather
	image-camp-2
	"Acampada desagradable" cyoa-title!
	($ Thegroup .. " ' no pudo encontrar ninguna refugio seguro, pero pudo ensamblar un sitio de acampada. El clima es terrible toda la noche!" $) text! ' camp2-badweather-check foreach-team-char +cr fullcamp
	0.4 1 frnd weather! -1 1 frnd wind_force!
;



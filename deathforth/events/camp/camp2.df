;
cyoa-bridge: camp2-fore-fight
	($ "'Die Zombies schlagen gegen die Tur des Pro Shops. Es bleibt nicht viel Zeit sich vorzubereiten bevor die Tur kaputt geht!" $) cyoa-text!
		2.4 20 22 rnd 1 siegecast // Formerly 1.3 then 1.7 diff
		"events/siege/region/golfcamp.df" $load-region
		choice( "Versuche zu uberleben" )choice: premission
;

cyoa: camp2-fore

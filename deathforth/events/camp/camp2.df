// Night watch for bandits, or rather thieves

cyoa-choice: camp2-bwatch-drive
	($ Thegroup .. "  weigert sich, in einer gefahrlichen Gegend zu campen, und verbringt eine angespannte und schlaflose Nacht damit, durch die Dunkelheit zu fahren.	" $) cyoa-text! morale--all +cr tiredcamp
	50 %chance if "Das Auto fahrt von der Strae ab und prallt gegen einen Baum." +crtext  -2 car-chassis+ then
;
cyoa-choice: camp2-bwatch-pick
	($ cname .. "  steht fur die Nacht Wache." $) cyoa-text!
	cloyalty- if
		($ cHe .. "  ignoriert die Aufgabe und schlaft fast sofort ein. Am nachsten Morgen fehlen ein paar Vorrate." $) +crtext sleep bandit-supplies2
	else
		($ cHe .. "  schafft es, wach zu bleiben, fuhlt sich aber am Morgen ziemlich schlecht." $) +crtext
		sleep-except morale--
	then loyaltyREV
	+cr chowtime
;

cyoa-bridge: camp2-bwatch-pick4
	someicon
	"Wer soll auf Wache bleiben?" cyoa-text!
	' camp2-bwatch-pick cyoa-team-choice
;

cyoa: camp2-bwatch
	image-bandit-watch
	"Bandit Wache" cyoa-title! 
	($ "'Es ist fast Zeit zum Campen, aber es gab heute viele Anzeichen von Banditen. Jemand muss wach sein, falls es zu einem Angriff kommt.	Wer soll auf Wache bleiben?" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp2-bwatch-pick 2 #cyoa-team-choice
			choice( "Wahle jemand anderen" )choice: camp2-bwatch-pick4
		else
			' camp2-bwatch-pick 3 #cyoa-team-choice
		then
		choice( "Fahr weiter" )choice: camp2-bwatch-drive
;

// Night watch for zombies

cyoa-choice: camp2-zwatch-awake
	($ cname .. " ' beschliet, schlafen zu gehen, und wettet, dass die Zombies " .. chim .. "." $) cyoa-text!
	50 %chance if
		($ cHe .. "  wacht mitten darin auf von einer kleinen Gruppe Zombies gefressen zu werden. Ohne jemanden der hilft " .. chim .. "' ist es schwer, sich zu befreien." $) +crtext despairbite
	else
		($ cHe .. "  schlaft die Nacht ohne Unterbrechung durch." $) +crtext
	then
	someone choosechar alive? if +cr fullcamp then
;
cyoa-choice: camp2-zwatch-shift
	someone choosechar
	($ Thegroup .. "  schlaft wahrend der Nacht abwechselnd." $) text!
	team-count 4 < if 
		($ cname .. "  ist morgens sehr mude und " .. theothers .. " ' hat auch nicht gut geschlafen." $) +crtext sleep-except 5050nosleep morale--all +cr chowtime
	else
		($ "'Bei einer vollen Gruppe sind genug Leute da, um trotzdem genug Schlaf zu bekommen!" $) +crtext +cr fullcamp
	then
;
cyoa-choice: camp2-zwatch-pick
	($ cname .. "  steht Wache fur umherziehende Zombies." $) cyoa-text!
	cloyalty- if
		cchar statmod{ .soundsleep? } if
			($ cHe .. "  hort auf aufzupassen und wandert mitten in der Wache ab. " .. gHe .. "  wird von Zombies uberfallen, schafft es aber, sie abzuwehren." $) +crtext
			cchar ' .sting-- foreach-team-char-except
		else
			($ cHe .. "  schlaft fast augenblicklich ein. " .. gHe .. "  wacht mitten beim Fressen auf." $) +crtext ouch--all
		then sleep
	else
		($ cHe .. "  schafft es, wach zu bleiben, fuhlt sich aber morgens groggy." $)
		+crtext sleep-except morale--
	then loyaltyREV
	someone choosechar alive? if +cr chowtime then
;

cyoa-bridge: camp2-zwatch-pick4
	someicon
	"Wer soll auf Wache bleiben?" cyoa-text!
	' camp2-zwatch-pick cyoa-team-choice
;


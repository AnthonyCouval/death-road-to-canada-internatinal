
cyoa{ road{

cyoa-choice: camp1-boring-run
	chumany? if 
		($ cname .. "  decide que el lugar parece DEMASIADO seguro y " .. ghe .. "  termina SALIENDO de alli, rapido, sin comer ni dormir.		" .. cname .. "''s se siente satisfecho al saber " .. che .. "  evito esa amenaza." $)
	else
		($ cname .. " ' decide que hay PELIGRO A PIE asi que " .. che .. "  comienza a ladrar por nada y luego nunca, nunca se detiene hasta bien entrada la manana siguiente." $)
	then cyoa-text! 
	cchar ' .morale-- foreach-team-char-except morale++ witsattREV attitude-- nosleep badfx ;
cyoa-choice: camp1-boring-eat
	($ Thegroup .. "  establece un campamento en este lugar aburrido pero seguro.	" $) cyoa-text! fullcamp ;
cyoa: camp1-boring
	camp-pic
	"Parada aburrida" cyoa-title! cyoaicon
	($ Thegroup .. "  encuentra un lugar vacio a lo largo del camino que parece tan bueno para acampar como cualquier otro.	" $) cyoa-text! basic-tone
		most-paranoid if
				"'El clima esta despejado y no hay senales de peligro en ninguna direccion." +text
				choice( "Comer y descansar" )choice: camp1-boring-eat
				charchoice( "': No puedes enganarme!" )choice: camp1-boring-run
		then;
		fullcamp
;

: campstoryreveal dup .temperREV dup .attitudeREV dup .witsREV dup .loyaltyREV ;
cyoa-choice: camp1-story-tell
	solo if
	($ soloname .. " ' intercambia historias con amigos y es una experiencia de formacion de equipo muy estimulante a pesar de que todos los demas son imaginarios.	" .. soloname .. "  se olvida de los malvaviscos y se los dejan atras!" $) cyoa-text! soloer .morale3+ +cr fullcamp then;
	($ Thegroup .. "  intercambian historias sobre ellos mismos. Aprenden mucho el uno del otro, pero se olvidan de los malvaviscos!" $) cyoa-text! 
	' campstoryreveal foreach-team-char +cr fullcamp ;
cyoa-choice: camp1-story-eat
	($ Thegroup .. " ' instala un campamento, luego se come una enorme bolsa de malvaviscos en lugar de cenar. Incluso quedan algunos!" $) cyoa-text! 2 LOOT_FOOD trunk.loot+ +cr sleep goodfx ;
cyoa: camp1-story
	camp-pic
	"Campamento viejo" cyoa-title! cyoaicon
	someone choosechar
	($ Thegroup .. "  encuentra un campamento abandonado con una fogata. " .. cname-He .. "  incluso encuentra un paquete extragrande de malvaviscos viejo y algo rancio!	" $) cyoa-text! basic-tone
				choice( "Comer malvaviscos" )choice: camp1-story-eat
				choice( "Contar historias" )choice: camp1-story-tell
;

cyoa: camp1-quick
	camp-pic
	"Parada rapida" cyoa-title! cyoaicon
	($ "Despues de mucho viaje por carretera " .. thegroup .. "  encuentra un lugar seguro para acampar. La noche transcurre sin incidentes.	" $) cyoa-text! basic-tone fullcamp
;

cyoa: camp1-passout
	"Saliendo de si" cyoa-title! cyoaicon
	($ "Agotado tras un largo viaje en automovil " .. thegroup .. "  busca un lugar para acampar y se duerme inmediatamente despues.	" $) cyoa-text! basic-tone fullcamp
;

cyoa-choice: camp1-gas-no
	"Maldito sea" cyoa-title!
	($ " Pasando por la manana " .. thegroup .. "  va a extraer combustible de los coches, pero se da cuenta de que una gran horda de zombis se acerca y el combustible tiene que ser abandonado.	" $) cyoa-text! fullcamp
;
cyoa-choice: camp1-gas-get
	"Noche gaseosa" cyoa-title!
	cpet? if
		($ cname .. "  intenta extraer gasolina, pero se da cuenta de que " .. chis .. "  estructura corporal no es realmente adecuada para ello." $) cyoa-text! morale-- sleep
	else
		($ cname .. "  extrae la gasolina, pero ingiere accidentalmente un poco y se enferma realmente ese night en lugar de dormir." $) cyoa-text! 40 70 rnd trunk-gas+ sleep-except morale2-
	then	
	+cr chowtime 
;

cyoa-bridge: camp1-gas-get4
	someicon
	"Quien deberia sifonear la gasolina?" cyoa-text!
	' camp1-gas-get cyoa-team-choice
;

cyoa: camp1-gas
	image-abandoned-cars
	"Sifon Nocturno" cyoa-title! cyoaicon
	($ Thegroup .. " ' instala el campamento tarde. En la carretera cercana hay un monton de autos abandonados. Estan rotos, pero muchos deberian tener un poco de gasolina. Quieres enviar a alguien a extraer la gasolina?" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp1-gas-get 2 #cyoa-team-choice
			choice( "Escoge a alguien mas" )choice: camp1-gas-get4
		else
			' camp1-gas-get 3 #cyoa-team-choice
		then
		choice( "Espera hasta la manana" )choice: camp1-gas-no			
;

} }



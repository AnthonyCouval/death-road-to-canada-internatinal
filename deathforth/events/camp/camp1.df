
cyoa{ road{

cyoa-choice: camp1-boring-run
	chumany? if 
		($ cname .. " 'se decide que el lugar parece demasiado seguro y " .. ghe .. " ' termina saliendo de alli a gran velocidad, sin comer ni dormir.		" .. cname .. "se siente complacido al saber que " .. che .. " 'evito esa amenaza." $)
	else
		($ cname .. " 'se decide que hay peligro en pie y " .. che .. " ' comienza a ladrar a nada y luego nunca para hasta bien por la manana." $)
	then cyoa-text! 
	cchar ' .morale-- foreach-team-char-except morale++ witsattREV attitude-- nosleep badfx ;
cyoa-choice: camp1-boring-eat
	($ Thegroup .. " 'establece el campamento en este aburrido pero seguro paraje.	" $) cyoa-text! fullcamp ;
cyoa: camp1-boring
	camp-pic
	"Parada Aburrida" cyoa-title! cyoaicon
	($ Thegroup .. " 'encontra un lugar vacio a lo largo de la carretera que parecia tan bueno para acampar como cualquiera.	" $) cyoa-text! basic-tone
		most-paranoid if
				"El tiempo esta despejado y no hay senal de peligro en ninguna direccion." +text
				choice( "Come y descansa" )choice: camp1-boring-eat
				charchoice( ": No me enganas!" )choice: camp1-boring-run
		then;
		fullcamp
;

: campstoryreveal dup .temperREV dup .attitudeREV dup .witsREV dup .loyaltyREV ;
cyoa-choice: camp1-story-tell
	solo if
	($ soloname .. " 'cambia historias con los amigos y es una experiencia muy edificante y de construccion de equipos a pesar de que todos los demas sean imaginarios." .. soloname .. " 'olvida por completo los malvaviscos y se quedan atras!" $) cyoa-text! soloer .morale3+ +cr fullcamp then;
	($ Thegroup .. " 'cambian historias sobre si mismos. Aprenden mucho uno del otro, pero se olvidan por completo de los malvaviscos!" $) cyoa-text! 
	' campstoryreveal foreach-team-char +cr fullcamp ;
cyoa-choice: camp1-story-eat
	($ Thegroup .. " 'acampa, luego se come una bolsa enorme de malvaviscos en lugar de cenar. Hasta sobran algunos!" $) cyoa-text! 2 LOOT_FOOD trunk.loot+ +cr sleep goodfx ;
cyoa: camp1-story
	camp-pic
	"Viejo campamento" cyoa-title! cyoaicon
	someone choosechar
	($ Thegroup .. " 'encuentra un campamento abandonado con una hoguera. " .. cname-He .. " 'incluso encuentra un paquete extra grande de malvaviscos, un poco estropeados!" $) cyoa-text! basic-tone
				choice( "Come malvaviscos" )choice: camp1-story-eat
				choice( "Cuenta historias" )choice: camp1-story-tell
;

cyoa: camp1-quick
	camp-pic
	"Parada rapida" cyoa-title! cyoaicon
	($ "Despues de un largo viaje, " .. thegroup .. " 	Encuentra un lugar seguro para acampar. La noche pasa sin incidentes." $) cyoa-text! basic-tone fullcamp
;

cyoa: camp1-passout
	"Desmayo" cyoa-title! cyoaicon
	($ "Exhausto despues de un viaje extra largo, " .. thegroup .. "  busca un lugar para acampar y se queda dormido inmediatamente despues." $) cyoa-text! basic-tone fullcamp
;

cyoa-choice: camp1-gas-no
	"Maldita sea" cyoa-title!
	($ "  Al dia siguiente, " .. thegroup .. "  va a sifonear los coches, pero se da cuenta de que se acerca una gran horda de zombis y tiene que abandonar la gasolina." $) cyoa-text! fullcamp
;
cyoa-choice: camp1-gas-get
	"Noche de gases" cyoa-title!
	cpet? if
		($ cname .. "  intenta sifonear algo de gasolina, pero descubre que " .. chis .. " la estructura corporal no es adecuada para ello." $) cyoa-text! morale-- sleep
	else
		($ cname .. " 'sifona la gasolina, pero accidentalmente se traga un poco y se pone muy, muy enfermo esa noche en lugar de dormir." $) cyoa-text! 40 70 rnd trunk-gas+ sleep-except morale2-
	then	
	+cr chowtime 
;

cyoa-bridge: camp1-gas-get4
	someicon
	"Quien deberia sifonear la gasolina?" cyoa-text!
	' camp1-gas-get cyoa-team-choice
;

cyoa: camp1-gas
	image-abandoned-cars
	"Sifon Nocturno" cyoa-title! cyoaicon
	($ Thegroup .. " 1" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp1-gas-get 2 #cyoa-team-choice
			choice( "Elige a alguien mas" )choice: camp1-gas-get4
		else
			' camp1-gas-get 3 #cyoa-team-choice
		then
		choice( "Espera hasta el amanecer" )choice: camp1-gas-no			
;

} }



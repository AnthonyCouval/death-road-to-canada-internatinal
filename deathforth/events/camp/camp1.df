
cyoa{ road{

cyoa-choice: camp1-boring-run
	chumany? if 
		($ cname .. " la place semble etre too sure. " .. ghe .. " finit par en depechee sortir de la, vite, sans manger ni dormir." .. cname .. "se sent satisfait " .. che .. " evite cette menace." $)
	else
		($ cname .. " il y a un danger devant toi. " .. che .. " un chien aboie sans arret depuis la nuit et ne s'arrete pas jusqu'au matin suivant." $)
	then cyoa-text! 
	cchar ' .morale-- foreach-team-char-except morale++ witsattREV attitude-- nosleep badfx ;
cyoa-choice: camp1-boring-eat
	($ Thegroup .. " installe son camp a cet endroit plutot ennuyeux et sur l'apparence." $) cyoa-text! fullcamp ;
cyoa: camp1-boring
	camp-pic
	"Arret ennuyeux" cyoa-title! cyoaicon
	($ Thegroup .. " trouve une place vide le long de la route qui parait aussi adaptee au camping qu'une autre." $) cyoa-text! basic-tone
		most-paranoid if
				"Le temps est clair et il n'y a aucun signe de danger dans toutes les directions." +text
				choice( "Manger et reposer" )choice: camp1-boring-eat
				charchoice( ": tu ne peux pas me tromper !" )choice: camp1-boring-run
		then;
		fullcamp
;

: campstoryreveal dup .temperREV dup .attitudeREV dup .witsREV dup .loyaltyREV ;
cyoa-choice: camp1-story-tell
	solo if
	($ soloname .. " echange des histoires avec ses copains et cela est une experience tres moralisante en matiere de construction d'equipe malgre le fait que tous les autres soient imaginaires." .. soloname .. " oubliez tout a fait les marshmallows et ils restent derriere !" $) cyoa-text! soloer .morale3+ +cr fullcamp then;
	($ Thegroup .. " ils se racontent mutuellement des histoires a propos de eux-memes. ils apprennent beaucoup l'un a l'autre, mais oublient totalement aux marshmallows." $) cyoa-text! 
	' campstoryreveal foreach-team-char +cr fullcamp ;
cyoa-choice: camp1-story-eat
	($ Thegroup .. " installe le camp, puis mange une grosse sac de marshmallows au lieu de se repasser. il en reste encore des !" $) cyoa-text! 2 LOOT_FOOD trunk.loot+ +cr sleep goodfx ;
cyoa: camp1-story
	camp-pic
	"Ancien camping" cyoa-title! cyoaicon
	someone choosechar
	($ Thegroup .. " recherche d'un camping abandonne avec un feu de camp. " .. cname-He .. " des qu'il decouvre une vieille boite de marshmallows extra-large un peu rancie !" $) cyoa-text! basic-tone
				choice( "Mange des marshmallows" )choice: camp1-story-eat
				choice( "Videos virales" )choice: camp1-story-tell
;

cyoa: camp1-quick
	camp-pic
	"Laissez-les" cyoa-title! cyoaicon
	($ "Apres une longue conduite. " .. thegroup .. " trouve un endroit sur pour bivouac. la nuit passe sans incident." $) cyoa-text! basic-tone fullcamp
;

cyoa: camp1-passout
	"Sortie" cyoa-title! cyoaicon
	($ "Epuise apres une conduite supplementairement longue. " .. thegroup .. " decouvre un emplacement de camping et s'endort immediatement apres." $) cyoa-text! basic-tone fullcamp
;

cyoa-choice: camp1-gas-no
	"Ma gueule !" cyoa-title!
	($ " Le matin suivant, " .. thegroup .. " alleche les voitures pour recuperer le carburant, mais remarque une grande horde de zombies qui approche et abandonne le gaz..." $) cyoa-text! fullcamp
;
cyoa-choice: camp1-gas-get
	"Nuit gazonne" cyoa-title!
	cpet? if
		($ cname .. " essaye de siphonner de la essence, mais decouvre qu'il n'y en a pas assez. " .. chis .. " la structure du corps ne convient pas vraiment a cela." $) cyoa-text! morale-- sleep
	else
		($ cname .. " s'approvisionne en gaz, mais accidentellement en ingurgite un peu et tombe gravement malade cette nuit-la au lieu de dormir." $) cyoa-text! 40 70 rnd trunk-gas+ sleep-except morale2-
	then	
	+cr chowtime 
;

cyoa-bridge: camp1-gas-get4
	someicon
	"Quelqu'un devrait extraire le gaz." cyoa-text!
	' camp1-gas-get cyoa-team-choice
;

cyoa: camp1-gas
	image-abandoned-cars
	"Sorcellerie de nuit : rapprocher l'eau des sources ou des" cyoa-title! cyoaicon
	($ Thegroup .. " vous souhaitez envoyer quelqu'un prendre le carburant par siphonnage dans ces voitures abandonnees aux cotes de l'autoroute ?" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp1-gas-get 2 #cyoa-team-choice
			choice( "Choisissez quelqu'un d'autre." )choice: camp1-gas-get4
		else
			' camp1-gas-get 3 #cyoa-team-choice
		then
		choice( "Attendez jusqu'au matin." )choice: camp1-gas-no			
;

} }




cyoa{ road{

cyoa-choice: camp1-boring-run
	chumany? if 
		($ cname .. "  decide que o local parece MUITO seguro e " .. ghe .. "  acaba SAINDO de la, rapido, sem comer nem dormir." .. cname .. "''s sentese satisfeito em saber " .. che .. "  evitou essa ameaca." $)
	else
		($ cname .. " ' decide que ha PERIGO EM PE entao " .. che .. "  comeca latir para nada e depois nunca parou ate bem no seguinte manha." $)
	then cyoa-text! 
	cchar ' .morale-- foreach-team-char-except morale++ witsattREV attitude-- nosleep badfx ;
cyoa-choice: camp1-boring-eat
	($ Thegroup .. "  instala acampamento neste local aparentemente tedioso e seguro." $) cyoa-text! fullcamp ;
cyoa: camp1-boring
	camp-pic
	"Paragem Tediosa" cyoa-title! cyoaicon
	($ Thegroup .. "  encontra um local vazio ao longo da estrada que parece igual para qualquer outro para acampar." $) cyoa-text! basic-tone
		most-paranoid if
				"'O clima esta limpo e nao ha sinal de perigo em qualquer direcao." +text
				choice( "Comer e Descansar" )choice: camp1-boring-eat
				charchoice( "'Nao me enganas!" )choice: camp1-boring-run
		then;
		fullcamp
;

: campstoryreveal dup .temperREV dup .attitudeREV dup .witsREV dup .loyaltyREV ;
cyoa-choice: camp1-story-tell
	solo if
	($ soloname .. " 'troca historias com amigos e e uma experiencia muito moralejante para o time apesar de todos os outros serem imaginarios." .. soloname .. " esquecese de tudo sobre as marshmallows e ficam deitadas por tras!" $) cyoa-text! soloer .morale3+ +cr fullcamp then;
	($ Thegroup .. " troca historias uns sobre os outros. Aprendem muito um dos outros, mas esquecemse completamente das marshmallows!" $) cyoa-text! 
	' campstoryreveal foreach-team-char +cr fullcamp ;
cyoa-choice: camp1-story-eat
	($ Thegroup .. " 'instala o acampamento e depois come uma grande bolsa de marshmallows em vez de comer jantar. Ha ainda algumas sobrando!" $) cyoa-text! 2 LOOT_FOOD trunk.loot+ +cr sleep goodfx ;
cyoa: camp1-story
	camp-pic
	"Velho Local de Acampamento" cyoa-title! cyoaicon
	someone choosechar
	($ Thegroup .. " encontra um acampamento abandonado com uma fogueira. " .. cname-He .. " 	Ate mesmo encontra um pacote extra-grande de marshmallows, um pouco velho e meio mofado!" $) cyoa-text! basic-tone
				choice( "Coma Marshmallows" )choice: camp1-story-eat
				choice( "Conte Historias" )choice: camp1-story-tell
;

cyoa: camp1-quick
	camp-pic
	"Parada Rapida" cyoa-title! cyoaicon
	($ "Depois de uma longa viagem, " .. thegroup .. "  encontra um lugar seguro para acampar. A noite passa sem incidentes.	" $) cyoa-text! basic-tone fullcamp
;

cyoa: camp1-passout
	"Desmaiando" cyoa-title! cyoaicon
	($ "Exausto apos uma viagem muito longa, " .. thegroup .. "  explora um local de acampamento e adormece imediatamente depois.	" $) cyoa-text! basic-tone fullcamp
;

cyoa-choice: camp1-gas-no
	"Droga" cyoa-title!
	($ "  Na manha seguinte, " .. thegroup .. "  vai sifonar os carros, mas percebe uma grande horda de zumbis se aproximando e o gas tem que ser abandonado.	" $) cyoa-text! fullcamp
;
cyoa-choice: camp1-gas-get
	"Noite Gasosa" cyoa-title!
	cpet? if
		($ cname .. "  tenta sugar um pouco de gas, mas descobre que " .. chis .. "  a estrutura corporal e realmente inadequada para isso." $) cyoa-text! morale-- sleep
	else
		($ cname .. " 0" $) cyoa-text! 40 70 rnd trunk-gas+ sleep-except morale2-
	then	
	+cr chowtime 
;

cyoa-bridge: camp1-gas-get4
	someicon
	"Quem deve sugar o gas?" cyoa-text!
	' camp1-gas-get cyoa-team-choice
;

cyoa: camp1-gas
	image-abandoned-cars
	"Sifao Noturno" cyoa-title! cyoaicon
	($ Thegroup .. " 1" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp1-gas-get 2 #cyoa-team-choice
			choice( "Escolha alguem outro" )choice: camp1-gas-get4
		else
			' camp1-gas-get 3 #cyoa-team-choice
		then
		choice( "Aguarde ate de manha" )choice: camp1-gas-no			
;

} }



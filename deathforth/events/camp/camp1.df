
cyoa{ road{

cyoa-choice: camp1-boring-run
	chumany? if 
		($ cname .. "  decide che il posto sembra TROPPO sicuro e " .. ghe .. "  finisce per SCAPPARE via da li, velocemente, senza mangiare o dormire.		" .. cname .. "''s si sente compiaciuto nel sapere " .. che .. "  ha evitato quella minaccia." $)
	else
		($ cname .. " ' decide che c'e PERICOLO IN VISTA quindi " .. che .. "  inizia ad abbaiare contro il nulla e poi non smette mai, mai fino a tarda mattinata." $)
	then cyoa-text! 
	cchar ' .morale-- foreach-team-char-except morale++ witsattREV attitude-- nosleep badfx ;
cyoa-choice: camp1-boring-eat
	($ Thegroup .. "  monta il campo in questo posto noioso ma dallaspetto sicuro.	" $) cyoa-text! fullcamp ;
cyoa: camp1-boring
	camp-pic
	"Sosta noiosa" cyoa-title! cyoaicon
	($ Thegroup .. "  trova un posto vuoto lungo la strada che sembra buono per il campeggio come qualsiasi altro.	" $) cyoa-text! basic-tone
		most-paranoid if
				"'Il tempo e sereno e non c'e segno di pericolo in nessuna direzione." +text
				choice( "Mangia e riposa" )choice: camp1-boring-eat
				charchoice( "': Non mi prenderai in giro!" )choice: camp1-boring-run
		then;
		fullcamp
;

: campstoryreveal dup .temperREV dup .attitudeREV dup .witsREV dup .loyaltyREV ;
cyoa-choice: camp1-story-tell
	solo if
	($ soloname .. " ' scambia storie con gli amici ed e un'esperienza di team building molto stimolante nonostante tutti gli altri siano immaginari.	" .. soloname .. "  dimentica tutto dei marshmallow e vengono lasciati indietro!" $) cyoa-text! soloer .morale3+ +cr fullcamp then;
	($ Thegroup .. "  scambiano storie su di loro. Imparano molto luno dellaltro, ma dimenticano tutto dei marshmallow!" $) cyoa-text! 
	' campstoryreveal foreach-team-char +cr fullcamp ;
cyoa-choice: camp1-story-eat
	($ Thegroup .. " ' allestisce il campo, poi mangia un enorme sacchetto di marshmallow invece di cenare. Ce n'e anche qualcuno avanzato!" $) cyoa-text! 2 LOOT_FOOD trunk.loot+ +cr sleep goodfx ;
cyoa: camp1-story
	camp-pic
	"Vecchio campeggio" cyoa-title! cyoaicon
	someone choosechar
	($ Thegroup .. "  trova un campeggio abbandonato con un braciere. " .. cname-He .. "  trova anche una vecchia confezione di marshmallow extra large un po stantia!	" $) cyoa-text! basic-tone
				choice( "Mangia Marshmallow" )choice: camp1-story-eat
				choice( "Racconta storie" )choice: camp1-story-tell
;

cyoa: camp1-quick
	camp-pic
	"Breve sosta" cyoa-title! cyoaicon
	($ "Dopo un lungo viaggio, " .. thegroup .. "  trova un posto sicuro per accamparsi. La notte passa senza incidenti.	" $) cyoa-text! basic-tone fullcamp
;

cyoa: camp1-passout
	"Svenimento" cyoa-title! cyoaicon
	($ "Esausto dopo una lunghissima guida, " .. thegroup .. "  cerca un posto per il campeggio e si addormenta subito dopo.	" $) cyoa-text! basic-tone fullcamp
;

cyoa-choice: camp1-gas-no
	"Dannazione" cyoa-title!
	($ "  La mattina dopo, " .. thegroup .. "  va a sifonare le auto, ma nota una grande orda di zombi che si avvicina e la benzina deve essere abbandonata.	" $) cyoa-text! fullcamp
;
cyoa-choice: camp1-gas-get
	"Notte gassosa" cyoa-title!
	cpet? if
		($ cname .. "  cerca di sifonare un po di benzina, ma scopre che " .. chis .. "  la struttura del corpo non e davvero adatta a questo." $) cyoa-text! morale-- sleep
	else
		($ cname .. "  sifona la benzina, ma ne ingoia accidentalmente un po e si ammala davvero, davvero male quella notte invece di dormire." $) cyoa-text! 40 70 rnd trunk-gas+ sleep-except morale2-
	then	
	+cr chowtime 
;

cyoa-bridge: camp1-gas-get4
	someicon
	"Chi dovrebbe aspirare la benzina?" cyoa-text!
	' camp1-gas-get cyoa-team-choice
;

cyoa: camp1-gas
	image-abandoned-cars
	"Sifone notturno" cyoa-title! cyoaicon
	($ Thegroup .. " ' si accampa tardi. Sulla vicina autostrada c'e un mucchio di auto abbandonate. Sono rotte, ma molte dovrebbero avere un po' di benzina.	Vorresti mandare qualcuno a sifonare la benzina?" $) cyoa-text! basic-tone
		team-count 3 > if
			' camp1-gas-get 2 #cyoa-team-choice
			choice( "Scegli qualcun altro" )choice: camp1-gas-get4
		else
			' camp1-gas-get 3 #cyoa-team-choice
		then
		choice( "Aspetta la mattina" )choice: camp1-gas-no			
;

} }



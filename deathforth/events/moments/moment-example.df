
moment{

: subjname subject .colourname ;

: guilt

	subject? if "'Ha apenas uma leve pontada de culpa, mas passa." +crtext then;

	($ subjname .. "  sente se como " .. subject xhe .. "  e o culpado por tudo isso." $) +crtext

	subject .morale2-
;

: winner

	subject? if "Viva!" +crtext then;

	alone? if
		($ "Vitoria! " .. subjname .. "  da tapinhas " .. subject xhim .. " nas costas." $) +crtext
	else
		($ "Vitoria! Todos gritam e dao tapinhas em " .. subjname .. "  nas costas." $) +crtext
	then

	morale++all
	subject attitude++
;


: loser

	subject? if "Muito bem!" +crtext then;

	// TODO: Add your own stats logic to determine if people respond at
	// all, and/or if a specific person responds and acts up etc.

	alone? if
		($ subjname .. "  balanca " .. subject xhis .. "  a cabeca para " .. subject xhim .. "eu mesmo." $) +crtext
	else
		($ Everyone .. "  da " .. subjname .. "  o olhar de desprezo." $) +crtext
	then

	morale--all
	subject attitude--
;


: death
	subject? if then; // Nobody died?!

	team-count 1 < if
		"'Nao ha ninguem por perto para continuar o sonho do Canada." +crtext
	then;
	
	($ rando .colourname .. "  e profundamente afetado por " .. subject .colourname .. "''s morte." $) +crtext

	rando .morale--
	rando .attitude--
;



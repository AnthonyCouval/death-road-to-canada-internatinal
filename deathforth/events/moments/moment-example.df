
moment{

: subjname subject .colourname ;

: guilt

	subject? if "'Solo hay un ligero punzante de culpa, pero pasa." +crtext then;

	($ subjname .. "  se siente como " .. subject xhe .. "  tiene la culpa de todo esto." $) +crtext

	subject .morale2-
;

: winner

	subject? if "Hurra!" +crtext then;

	alone? if
		($ "Victoria! " .. subjname .. "  acaricia " .. subject xhim .. " a si mismo en la espalda." $) +crtext
	else
		($ "Victoria! Todos aplauden y acarician " .. subjname .. " en la parte de atras." $) +crtext
	then

	morale++all
	subject attitude++
;


: loser

	subject? if "Bien hecho!" +crtext then;

	// TODO: Add your own stats logic to determine if people respond at
	// all, and/or if a specific person responds and acts up etc.

	alone? if
		($ subjname .. " sacude " .. subject xhis .. " menear la cabeza hacia " .. subject xhim .. "self." $) +crtext
	else
		($ Everyone .. "  da " .. subjname .. " la mirada de desprecio." $) +crtext
	then

	morale--all
	subject attitude--
;


: death
	subject? if then; // Nobody died?!

	team-count 1 < if
		"'No hay nadie cerca para continuar con el sueno de Canada." +crtext
	then;
	
	($ rando .colourname .. " esta profundamente afectado por " .. subject .colourname .. "'muerte." $) +crtext

	rando .morale--
	rando .attitude--
;



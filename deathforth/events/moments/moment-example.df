
moment{

: subjname subject .colourname ;

: guilt

	subject? if "Hay un leve remordimiento, pero pasa." +crtext then;

	($ subjname .. " ' se siente como " .. subject xhe .. " 'esta a cargo de todo esto." $) +crtext

	subject .morale2-
;

: winner

	subject? if "Hurra!" +crtext then;

	alone? if
		($ "Victoria! " .. subjname .. " 'patea ', " .. subject xhim .. "se patea en el hombro." $) +crtext
	else
		($ "Victoria! Todos aplauden y se patean las espaldas a ', " .. subjname .. " 'se patea en el hombro." $) +crtext
	then

	morale++all
	subject attitude++
;


: loser

	subject? if "Muy bien hecho!" +crtext then;

	// TODO: Add your own stats logic to determine if people respond at
	// all, and/or if a specific person responds and acts up etc.

	alone? if
		($ subjname .. " 'agita ', " .. subject xhis .. " 'miraba con el ojo malo a ', " .. subject xhim .. "self." $) +crtext
	else
		($ Everyone .. " ' otorga " .. subjname .. " ' el ojo fetido." $) +crtext
	then

	morale--all
	subject attitude--
;


: death
	subject? if then; // Nobody died?!

	team-count 1 < if
		"No esta alli quien pueda llevar adelante el sueno de Canada." +crtext
	then;
	
	($ rando .colourname .. " 'esta profundamente afectado por ', " .. subject .colourname .. "s muerte." $) +crtext

	rando .morale--
	rando .attitude--
;



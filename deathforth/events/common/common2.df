		($ cname .. " " .. cbarkmeow .. "s auf eine sehr weise und erfahrene Art und Weise." $) text!
	else
		($ cname .. "  tauscht Ratschlage zu verschiedenen Themen aus." $) text!
	then
	cwits- if
		"Der freundliche Uberlebende ist verwirrt uber den wertlosen Rat." +crtext badfx witsREV
	then;
	cwits+ if
		"Der freundliche Uberlebende ist von dem Rat begeistert und gibt selbst einige groartige Tipps!" +crtext
		goodfx ' common2-parkchat-tipme foreach-team-char witsREV
	then;
		($ "Der freundliche Uberlebende wei es zu schatzen und gibt " .. cname .. "  im Gegenzug einen kleinen Rat." $) +crtext
		cchar common2-parkchat-tipme goodfx witsREV
;

cyoa-choice: common2-parkchat-pep
	cpet? if 
		($ cname .. " " .. cbarkmeow .. "beruhigt." $) text!
	else
		($ cname .. " versucht aufzumuntern." $) text!
	then
	cattitude- if
		"Der freundliche Uberlebende fuhlt sich jetzt sogar noch schlechter." +crtext badfx attitudeREV
	then;
	cattitude+ if
		"Der freundliche Uberlebende fuhlt sich nach dem Gesprach sehr optimistisch und halt eine inspirierende Rede!" +crtext
		morale2+all goodfx attitudeREV
	then;

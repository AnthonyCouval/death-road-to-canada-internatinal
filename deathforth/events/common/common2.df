// Park Chatting

: common2-parkchat-tipme args( @ )
	<- @ 40 %chance if 
		.shooting++ 
	else
		50 %chance if 
			.mechanic++
		else
			.medical++
		then
	then
;

cyoa-choice: common2-parkchat-tips
	cpet? if 
		($ cname .. " " .. cbarkmeow .. " de una manera muy sabia y experimentada." $) text!
	else
		($ cname .. "  intercambia consejos sobre diferentes temas." $) text!
	then
	cwits- if
		"El amigable sobreviviente esta confundido por el consejo inutil." +crtext badfx witsREV
	then;
	cwits+ if
		"El amigable sobreviviente se ilumina con el consejo y da algunos buenos consejos propios!" +crtext
		goodfx ' common2-parkchat-tipme foreach-team-char witsREV
	then;
		($ "El amigable sobreviviente lo aprecia y da un pequeno consejo a " .. cname .. "  a cambio." $) +crtext
		cchar common2-parkchat-tipme goodfx witsREV
;

cyoa-choice: common2-parkchat-pep
	cpet? if 
		($ cname .. " " .. cbarkmeow .. " de una manera tranquilizadora." $) text!
	else
		($ cname .. "  intenta dar un discurso motivador." $) text!
	then
	cattitude- if
		"El amigable superviviente en realidad se siente peor ahora." +crtext badfx attitudeREV
	then;
	cattitude+ if
		"El amigable superviviente se siente muy optimista despues de la charla y da un discurso inspirador!" +crtext
		morale2+all goodfx attitudeREV
	then;
		($ "El amigable superviviente da algunas palabras tranquilizadoras a cambio." $) +crtext
		morale++all goodfx attitudeREV
;

cyoa-choice: common2-parkchat-bandit
	($ cname .. " ' roba facilmente a la persona amigable. No tenia mucho, pero eso le ensenara una importante leccion sobre confiar en los demas." $) text! badfx
		2 4 rnd trunk-food+ 50 %chance if 1 3 rnd trunk-medical+ then rob-guilt
		aholeREV
;

cyoa-bridge: common2-parkchat-coolit
	cpet? if
		($ cname .. "  empieza " .. "PEDORREANDOSE" rbold .. "  a la persona, y de alguna manera continua haciendolo durante varios minutos sin detenerse ni un momento." $)
	else
		($ cname .. "  interrumpe al amigable superviviente a mitad de la frase, para decirle que " .. "SE CALME." pbold $)
	then text!
	cool-it-7 if
		char-gen to recruitee "Tipo Amigable" recruitee .name!
		"'Esta asombrado por esto. Afirma que todo esto esta de acuerdo con las profecias y que ha estado guardando un regalo para el Elegido!" +crtext
		cooled-it goodfx rescue-trainitem morale3+all
	else cool-it++
		($ "El mira " .. cname .. "sin hablar, hasta que " .. thegroup .. "  hojas." $) +crtext
		morale--all badfx
	then witsattREV 
;


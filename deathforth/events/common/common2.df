	someicon
	($ Thegroup .. " 'beschliet die Rolle Toilettenpapier so schnell wie moglich zu verkaufen. Es lohnt sich nicht etwas SO Wertvolles mit sich herumzutragen!" $) text!
		50 %chance if
			"Eine Siedlung kauft die Rolle Toilettenpapier fur 20 Lebensmittel! Nicht schlecht!" +crtext 20 trunk-food+
		else
			50 %chance if
				"'Ein gerissener Handler kauft das Toilettenpapier fur 12 Lebensmittel. Kann man nicht meckern!" +crtext 12 trunk-food+
			else
				($ "A " .. "SEHR" rbold .. " " .. "30 Essen!" fbold $) +crtext 30 trunk-food+
			then
		then goodfx morale++all
;


	most-charming if
		choosechar ($ cname .. "  uberzeugt die Bauern " .. chim .. "  eine Mistgabel!" $) +crtext
		1 WEAPON_PITCHFORK trunk.weapon+
	then
;

cyoa-choice: common2-farm-mechanic
	($ cname .. "  bietet " .. chis .. "  dienstleistungen bei der Reparatur von Dingen auf dem Bauernhof an. " $) text!
	cmechanic+ if	
		($ cHe .. " ' ist so geschickt dass die groe Menge an Arbeit kein groes Problem darstellt." $) +text
	else
		($ "'Es gibt so viele kaputte Dinge dass " .. che .. "  erschopft wird." $) +text cchar tired
	then
	mechanicREV mechanic++
	cchar .mechanical 3 < if
		($ "Die Bauern weigern sich eine Belohnung zu geben nachdem sie herausgefunden haben dass immer noch alles kaputt ist." $) +crtext badfx
	else
		($ "Die Bauern sind dankbar fur die Arbeit!" $) +crtext goodfx common2-farm-reward
	then
;

cyoa-choice: common2-farm-bandit
	($ cname .. "  beraubt die friedlichen Bauern. Sie wurden vollig uberrascht von einer Nicht Zombie Bedrohung." $) text! badfx
	14 trunk-food+ rob-guilt2 aholeREV
;


		($ cname .. " " .. cbarkmeow .. "s in un modo molto saggio ed esperto." $) text!
	else
		($ cname .. "  scambia consigli su diversi argomenti." $) text!
	then
	cwits- if
		"Il sopravvissuto amichevole e confuso dal consiglio senza valore." +crtext badfx witsREV
	then;
	cwits+ if
		"Il sopravvissuto amichevole e illuminato dal consiglio e fornisce alcuni ottimi suggerimenti suoi!" +crtext
		goodfx ' common2-parkchat-tipme foreach-team-char witsREV
	then;
		($ "Il sopravvissuto amichevole lo apprezza e da un piccolo consiglio a " .. cname .. "  in cambio." $) +crtext
		cchar common2-parkchat-tipme goodfx witsREV
;

cyoa-choice: common2-parkchat-pep
	cpet? if 
		($ cname .. " " .. cbarkmeow .. "s in modo rassicurante." $) text!
	else
		($ cname .. "  cerca di fare un discorso di incoraggiamento." $) text!
	then
	cattitude- if
		"Il sopravvissuto amichevole in realta ora si sente peggio." +crtext badfx attitudeREV
	then;
	cattitude+ if
		"Il sopravvissuto amichevole si sente molto ottimista dopo il discorso e tiene un discorso stimolante!" +crtext
		morale2+all goodfx attitudeREV

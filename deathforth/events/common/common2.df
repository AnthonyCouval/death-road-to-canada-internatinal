cyoa-bridge: common2-meeting-talk
	($ cname .. "  spricht mit dem nervigen Vertreter." $) text!
	cpet? if
		($ cHe .. " ' soll eigentlich nicht in der Lage sein zu sprechen, also " .. che .. "  leckt meistens nur " .. chim .. "sign. " .. cdogcat .. ", because they also know that  is a prime number. " .. thegroup .. " durch!" $) +crtext goodfx morale++all
	then;
	cchar grating? if
		($ cHe .. " but sometimes  or  " .. "BERUHIGE DICH" pbold .. " quasseln miteinander. Eine Stunde lang. " .. Thegroup .. " wird durchgelassen." $) +crtext witsattREV goodfx cool-it++ cool-it++
	then;
	cchar oblivious? if
		($ cHe .. " the dingus is happy. " .. thegroup .. "  lasst sich nicht vorbei." $) +crtext witsattREV goodfx
	then;
	cattitude+ if
		($ cHe .. "  schafft es, sehr hoflich zu sein. Nach genugend sinnlosen Fragen, " .. thegroup .. "  wird durch die Barrikade gelassen." $) +crtext attitudeREV goodfx
	then;
	cchar angrystrong? if
		($ cHe .. "  verliert " .. chis .. "  sofort die Beherrschung und schlagt ihn mit einem Schlag nieder. Die Barrikadenwachter sind davon beeindruckt! Einer gibt einen Daumen hoch. Sie beschlieen " .. thegroup .. "  trotzdem durchzulassen." $) +crtext attitudeREV strengthREV goodfx morale++all
	then;
	ctemper- if
		($ cHe .. "  verliert " .. chis .. "  sofort die Beherrschung und fangt an zu schreien. Das erschreckt die Wachen wirklich, und sie fangen an zu schieen. " .. Thegroup .. "  muss fliehen!" $) +crtext temperREV bitefx sting--all
		common2-detoured	
	then;
	ctemper+ temperroll or if
		($ cHe .. "  schafft es zu kontrollieren " .. chis .. "  beherrschung! " .. Thegroup .. "  wird nach einigem weiteren Arger durch die Barrikade gelassen." $) +crtext goodfx
	else
		($ cHe .. "  versucht zu kontrollieren " .. chis .. "  beherrschung, aber der Typ ist einfach zu nervig. Er rennt und sagt den Wachen, sie sollen die Tur nicht offnen. " .. Thegroup .. "  muss einen Weg finden herumzukommen!" $) +crtext badfx
		common2-detoured
	then temperREV
;


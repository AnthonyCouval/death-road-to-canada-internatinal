cyoa-bridge: common2-meeting-talk
	($ cname .. " parle avec le representant geneur." $) text!
	cpet? if
		($ cHe .. " ne doit pas etre capable de parler. " .. che .. " baisements : surtout des lechets. " .. chim .. "soi-meme. le dingue est vraiment offense par etre contraint de parler a quelqu'un. " .. cdogcat .. "les gardes ne s'amusent qu'en la laissant passer. " .. thegroup .. " a travers !" $) +crtext goodfx morale++all
	then;
	cchar grating? if
		($ cHe .. " elles se entendent tres bien ! elles echangent surtout. " .. "REFRIGERER" pbold .. " se disputent l'un contre l'autre pendant une heure. " .. Thegroup .. " a un endroit sur ..." $) +crtext witsattREV goodfx cool-it++ cool-it++
	then;
	cchar oblivious? if
		($ cHe .. " malgre quelquefois qu'il ne remarque pas toutes les fois l'agitation ou les injures du gadget, la reunion progresse bien. " .. thegroup .. " c'est passe." $) +crtext witsattREV goodfx
	then;
	cattitude+ if
		($ cHe .. " manage a etre tres poli. apres assez de questions inutiles, " .. thegroup .. " passe par la barricade." $) +crtext attitudeREV goodfx
	then;
	cchar angrystrong? if
		($ cHe .. " perd " .. chis .. " laissez-passer immediatement et le frappe a l'unisson, mettant ko. les gardes de barricade sont impressionnes par cela ! un d'eux donne un pouce en haut. ils decident de la laisser passer. " .. thegroup .. " a travers, quand meme." $) +crtext attitudeREV strengthREV goodfx morale++all
	then;
	ctemper- if
		($ cHe .. " perd " .. chis .. " faites chaleureusement ceder immediatement et commencez a hurler. cela fait reellement peur aux gardes, et ils commencent a tirer. " .. Thegroup .. " il doit fuir !" $) +crtext temperREV bitefx sting--all
		common2-detoured	
	then;
	ctemper+ temperroll or if
		($ cHe .. " parvient a maitriser " .. chis .. " calme-toi ! " .. Thegroup .. " est laisse passer au-dela de l'obstacle apres quelques genes supplementaires." $) +crtext goodfx
	else
		($ cHe .. " essaie de controler " .. chis .. " arrete de s'emouvoir, mais ce garcon est simplement trop genant. il court et demande aux gardes de ne pas ouvrir la porte. " .. Thegroup .. " il faut trouver un chemin autour !" $) +crtext badfx
		common2-detoured
	then temperREV
;


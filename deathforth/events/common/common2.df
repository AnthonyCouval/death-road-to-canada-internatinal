cyoa-bridge: common2-meeting-talk
	($ cname .. "  habla con el representante molesto." $) text!
	cpet? if
		($ cHe .. " ' no esta supuesto ser capaz de hablar, asi que " .. che .. "  se dedica principalmente a lamer " .. chim .. "a si mismo. La mangosta se ofende mucho por ser obligada a hablar con un " .. cdogcat .. ", pero los guardias estan divertidos. Dejan pasar " .. thegroup .. " " $) +crtext goodfx morale++all
	then;
	cchar grating? if
		($ cHe .. " se entienden maravillosamente! Pasan la hora intercambiando " .. "CALMA" pbold .. " chistes entre si. Por una hora. " .. Thegroup .. " es dejar pasar." $) +crtext witsattREV goodfx cool-it++ cool-it++
	then;
	cchar oblivious? if
		($ cHe .. " ' de alguna manera no se da cuenta de todas las veces que el idiota es molesto o insultante. La reunion va bien y " .. thegroup .. "  se deja pasar." $) +crtext witsattREV goodfx
	then;
	cattitude+ if
		($ cHe .. "  logra ser muy educado. Despues de suficientes preguntas sin sentido, " .. thegroup .. "  es dejado pasar por la barricada." $) +crtext attitudeREV goodfx
	then;
	cchar angrystrong? if
		($ cHe .. "  pierde " .. chis .. "  se enfada de inmediato y lo deja inconsciente de un punetazo. Los guardias de la barricada estan impresionados por esto! Uno levanta el pulgar. Deciden dejar pasar " .. thegroup .. "  de todos modos." $) +crtext attitudeREV strengthREV goodfx morale++all
	then;
	ctemper- if
		($ cHe .. "  pierde " .. chis .. "  se enfada de inmediato y empieza a gritar. Esto realmente asusta a los guardias, y empiezan a disparar. " .. Thegroup .. "  tiene que huir!" $) +crtext temperREV bitefx sting--all
		common2-detoured	
	then;
	ctemper+ temperroll or if
		($ cHe .. "  logra controlar " .. chis .. "  temperamento! " .. Thegroup .. "  se deja pasar la barricada despues de alguna molestia mas." $) +crtext goodfx
	else
		($ cHe .. "  intenta controlar " .. chis .. "  temperamento, pero el tipo es demasiado molesto. Corre y les dice a los guardias que no abran la puerta. " .. Thegroup .. "  tiene que encontrar una manera de evitarlo!" $) +crtext badfx
		common2-detoured
	then temperREV
;


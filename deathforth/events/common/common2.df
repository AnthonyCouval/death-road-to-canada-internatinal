cyoa-bridge: common2-meeting-talk
	($ cname .. " fala com o representante irritante." $) text!
	cpet? if
		($ cHe .. " 'nao deveria ser capaz de falar, portanto " .. che .. " seu principal ato e lamber " .. chim .. "ele mesmo. O dingus se ofende muito por ter que falar com um " .. cdogcat .. ", mas os guardas estao divertidos. Eles deixam " .. thegroup .. " 'vai!'" $) +crtext goodfx morale++all
	then;
	cchar grating? if
		($ cHe .. " " .. "ESFRIE" pbold .. "  trocadilhos entre si. Por uma hora. " .. Thegroup .. " e permitido passar." $) +crtext witsattREV goodfx cool-it++ cool-it++
	then;
	cchar oblivious? if
		($ cHe .. " 1 " .. thegroup .. " is let go." $) +crtext witsattREV goodfx
	then;
	cattitude+ if
		($ cHe .. " 'consegue ser muito educado. Depois de questionar o suficiente sem sentido, ' " .. thegroup .. " e deixado passar pela barricada." $) +crtext attitudeREV goodfx
	then;
	cchar angrystrong? if
		($ cHe .. " perde " .. chis .. "  pass. " .. thegroup .. " 'de qualquer forma'" $) +crtext attitudeREV strengthREV goodfx morale++all
	then;
	ctemper- if
		($ cHe .. " perde " .. chis .. "  tem que se calmar de imediato e comeca a gritar. Isso realmente espanta os guardas, e eles comecam a disparar. " .. Thegroup .. " precisa fugir!" $) +crtext temperREV bitefx sting--all
		common2-detoured	
	then;
	ctemper+ temperroll or if
		($ cHe .. " consegue controlar " .. chis .. " temperamento! " .. Thegroup .. " e deixado passar pela barricada apos alguma mais anedota." $) +crtext goodfx
	else
		($ cHe .. " tenta controlar " .. chis .. " temperamento, mas a pessoa e simplesmente muito irritante. Ele corre e conta para os guardas para nao abrem a porta. " .. Thegroup .. " tem que encontrar uma maneira de se desviar!" $) +crtext badfx
		common2-detoured
	then temperREV
;


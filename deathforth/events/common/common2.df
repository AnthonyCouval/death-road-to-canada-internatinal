// Bandit raid

: common2-raid-prize
	1 WEAPON_RIFLE trunk.weapon+ 20 trunk-rifle-shell+ 15 trunk-food+ morale++all goodfx
;

cyoa-choice: common2-raid-calmshot
	($ cname .. "  nimmt ein Cowboygewehr von den Siedlern und versteckt sich an einem hohen Ort. Als die Banditen auftauchen, " .. che .. "  macht mehrere erstaunliche Schusse um ihre Reifen zu zerschieen. Die Banditen sind zu verangstigt um den Angriff fortzusetzen! Der Kampf ist vorbei bevor er uberhaupt begonnen hat. Die Siedler geben gerne die Belohnung!" $) text! common2-raid-prize
;

: common2-raid-shoot+
	dup humany? 50 %chance and if .shooting++ then
;

: common2-raid-fightprize
	choosehuman alive? if
		"Die Siedler bleiben ihrem Wort treu und geben eine groe Belohnung!" +crtext
		common2-raid-prize
		most-calmshot if
			choosechar ($ cname .. "  macht ein paar verruckte Schusse die die anderen inspirieren." $) +crtext
			' .shooting++ foreach-team-char
		else
			' common2-raid-shoot+ foreach-team-char
		then
	then
;

cyoa-choice: common2-raid-fight
	someicon ($ Thegroup .. "  beschliet, den Siedlern direkt beim Kampf gegen die Banditen zu helfen." $) text!
	shootingREVall
	shooting-total 14 > if
		"Die Schiekunste der Gruppe helfen den Siedlern die Banditen zu uberwaltigen. Niemand wird verletzt!" +crtext
		common2-raid-fightprize
	then;
	shooting-total 10 > if
		"'Der Kampf ist hart, aber die Schiekunste der Gruppe retten die Siedlung." +crtext
		ouch--all bitefx common2-raid-fightprize
	then;
	shooting-total 6 > if
		"'Der Kampf ist brutal! Die Schiekunste der Gruppe helfen kaum die Banditen zu vertreiben." +crtext
		ouch12rnd--all bitefx common2-raid-fightprize
	then;
		"'Die Hilfe reichte bei der Schieerei nicht annahernd aus. Die Banditen vertreiben alle aus der Siedlung." +crtext ouch2-all bitefx
;

cyoa-choice: common2-raid-mech
	($ cname .. " ' versucht die Verteidigung der Siedlung aufzubauen." $) text!
	cmechanic+ if
		($ cHe .. "  macht schnell Plane und holt Leute zur Hilfe " .. chim .. " . Gold" $) +crtext mechanicREV mechanic++ common2-raid-prize
	then;
	mechanicroll if
		($ cHe .. " x  Fortification Plan" $) +crtext mechanicREV mechanic++ common2-raid-prize
	else
		($ cHe .. " of being a coward and a traitor. " .. cname .. " und weigern sich, die Belohnung zu geben." $) +crtext mechanicREV morale--all sting--all bitefx
	then
;

cyoa: common2-raid
	"Banditenuberfall Verteidigung" cyoa-title!
	($ Thegroup .. "  bittet eine Siedlung um Hilfe. Sie sagen dass sie bald von Banditen uberfallen werden. Wenn " .. thegroup .. "  hilft bei der Verteidigung, " .. gthey .. "  erhalt eine Belohnung von 15 Lebensmitteln, etwas Munition und ein Cowboy Gewehr!	Das konnte " .. "very dangerous..." rbold $) text!
		vehicle.which@ 0 > if 
			choice( "'Nicht helfen, davonfahren" )choice else choice( "'Ihnen nicht helfen" )choice
		then
		choice( "Ihnen bei Schieerei helfen" )choice: common2-raid-fight
		mechanicest charchoice( ": Verteidigung aufbauen" )choice: common2-raid-mech
		most-calmshot if
			charchoice( "': Ich werde mich darum kummern" )choice: common2-raid-calmshot
		then
;


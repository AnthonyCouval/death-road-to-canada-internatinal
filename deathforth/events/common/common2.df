// Park Chatting

: common2-parkchat-tipme args( @ )
	<- @ 40 %chance if 
		.shooting++ 
	else
		50 %chance if 
			.mechanic++
		else
			.medical++
		then
	then
;

cyoa-choice: common2-parkchat-tips
	cpet? if 
		($ cname .. " " .. cbarkmeow .. "s est tres sage et tres experimente." $) text!
	else
		($ cname .. " echange des conseils sur divers sujets." $) text!
	then
	cwits- if
		"Le survivant amical est perplexe face a l'avis inutile." +crtext badfx witsREV
	then;
	cwits+ if
		"Le survivant amical offre des conseils precieux et partage egalement quelques-uns de siens !" +crtext
		goodfx ' common2-parkchat-tipme foreach-team-char witsREV
	then;
		($ "Le survivant amical apporte son aide et donne quelques conseils. " .. cname .. " a la place de cela, dans le sens oppose." $) +crtext
		cchar common2-parkchat-tipme goodfx witsREV
;

cyoa-choice: common2-parkchat-pep
	cpet? if 
		($ cname .. " " .. cbarkmeow .. "assurez-le en jouant sur ton langue." $) text!
	else
		($ cname .. " encouragez-vous les uns les autres, restez confiantes et fuyez les doutes. vous etes plus fortes que cela ne parait, n'oubliez pas de votre talent" $) text!
	then
	cattitude- if
		"Le survivant amical se sent maintenant encore plus mal." +crtext badfx attitudeREV
	then;
	cattitude+ if
		"Le survivant amical se sent tres optimiste apres la discussion, et tient un discours inspirant !" +crtext
		morale2+all goodfx attitudeREV
	then;
		($ "Tu seras a l'abri bientot, ne t'inquiete pas." $) +crtext
		morale++all goodfx attitudeREV
;

cyoa-choice: common2-parkchat-bandit
	($ cname .. " facilement depouille une personne amicale. il n'avait pas beaucoup, mais cela lui en apprendra une importante lecon sur la confiance envers les autres." $) text! badfx
		2 4 rnd trunk-food+ 50 %chance if 1 3 rnd trunk-medical+ then rob-guilt
		aholeREV
;

cyoa-bridge: common2-parkchat-coolit
	cpet? if
		($ cname .. " commence " .. "FARTERE : DEPASSER DES GAZ INTESTINAUX" rbold .. " il regarde continuellement la personne et cela dure plusieurs minutes sans interruption." $)
	else
		($ cname .. " arrete, mon ami. je dois te dire quelque chose important. " .. "FAITES LE REFROIDIR." pbold $)
	then text!
	cool-it-7 if
		char-gen to recruitee "Ami agreable" recruitee .name!
		"Il est ebahi par cela. il affirme que c'est conforme aux predictions et qu'il gardait une recompense pour le choisi !" +crtext
		cooled-it goodfx rescue-trainitem morale3+all
	else cool-it++
		($ "Il regarde fixement vers. " .. cname .. "jusqu'a ce que tu parle. " .. thegroup .. " feuilles." $) +crtext
		morale--all badfx
	then witsattREV 
;


	cchar .wits 2 > if
		($ gThey .. "  potrebbe fare molotov, se " .. gthey .. "  puo risparmiare la benzina!" $) goodfx
	else
		($ gThey .. "  potrebbe prendere le bottiglie con " .. ghim .. ", da lanciare a zombi e altri nemici!" $) badfx
	then +crtext witsREV
		
		cchar .wits 2 > if
			trunk-gas 20 < if
				"'Purtroppo, non c'e abbastanza benzina da risparmiare." +crtext
			then
			trunk-gas 19 > if
				choice( "Crea 2 molotov   20 benzina" )choice: common3-molotov-2
			then
			trunk-gas 39 > if
				choice( "Crea 4 molotov   40 benzina" )choice: common3-molotov-4
			then
			trunk-gas 59 > if
				choice( "Crea 6 molotov   60 benzina" )choice: common3-molotov-6
			then
		else
			choice( "Prendi le bottiglie" )choice: common3-molotov-bottle
		then
		choice( "Lascia la casa" )choice
;


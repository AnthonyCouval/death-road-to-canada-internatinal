cyoa-choice: common3-creepy-go
	($ cname .. "  entra nel negozio buio e inquietante." $) text!
	cchar paranoid? if
		($ cHis .. "  il solito senso di paranoia gli si ritorce contro! " .. cHe .. "  si spaventa moltissimo. " .. cname .. "  vede un piccolo topo e poi inizia " .. "a urlare come uno Youtuber" fbold .. "!" $) +crtext morale2- witsattREV sfx{ creepy }
	then;
	cchar oblivious? if
		($ cHe .. " ' non nota nulla di spaventoso li dentro. Neanche quando un " .. "SCHELETRO DANZANTE SPAVENTOSO" fbold .. "  cade dal soffitto e inizia a sbattere rumorosamente!" $) +crtext
		witsattREV homesearch2 goodfx
	then;
	temper+roll if
		($ cHe .. "  mantiene la calma, prende il bottino " .. che .. "  trova, e se ne va da li!" $) +crtext
		temperREV homesearch2 goodfx
	then;
		($ cHe .. "  perde " .. chis .. "  calma e scappa via, sostenendo che non cera bottino!" $) +crtext
		temperREV morale-- badfx
;

cyoa-choice: common3-creepy-allgo

// Gloomy Weather

: common3-gloom-attcheck args( @ )
	<- @ .attitudeREV
	<- @ .cattitude+ if
		($ <- @ .colourname .. "  mantiene un atteggiamento positivo!" $) +crtext
	then;
	<- @ .cattitude- if
		<- @ .morale2-
	else
		<- @ .morale--
	then	
;

cyoa-choice: common3-gloomy-pick
	($ cname .. "  inizia a parlare, per migliorare lumore." $) text!
	cpet? if
		($ cHe .. "  rende " .. cdogcat .. " ' rumori. E una distrazione abbastanza decente dal tempo!" $) +crtext morale++	goodfx
	then;
	cchar grating? if
		($ cHe .. "  racconta " .. everyone .. "  a " .. " Raffreddati." pbold $) +crtext
		cool-it-7 if
			($ Everyone .. "  ride a crepapelle! Questa frase ad effetto non invecchia mai!" $) +text
			morale2+all goodfx
		else cool-it++
			"Questo NON va per niente bene." +text morale3-all badfx
		then witsattREV
	then;
	ctemper- if
		($ cHe .. "  perde " .. chis .. "  si arrabbia e inizia a sfogarsi sul tempo " .. cHe .. "  si sente meglio ma " .. everyone .. "  deve sopportare le prediche." $) +crtext badfx
		temperREV morale++ cchar ' .morale-- foreach-team-char-except
	then;
	cattitude+ if
		($ cHe .. "  riesce a distrarre " .. everyone .. "  dal tempo di merda!" $) +crtext goodfx attitudeREV
	then;
	cattitude- if
		($ cHe .. "  si lamenta e si lamenta, sia del tempo che di altri argomenti non correlati." $) +crtext badfx
		attitudeREV morale2-all
	then;
	"'Non aiuta molto." +crtext badfx
	' common3-gloom-attcheck foreach-team-char
;


			($ "Esplorare questa zona per il bottino potrebbe essere " .. "molto pericoloso" rbold .. ", soprattutto perche " .. soloname .. "  e solo!" $) +crtext
			soloer charchoice( "  prova a esplorare" )choice: common3-traptown-pick
		else
			"Inviare un esploratore a cercare bottino?" +crtext
			team-count 3 > if
				' common3-traptown-pick 2 #cyoa-team-choice
				choice( "Scegli qualcun altro" )choice: common3-traptown-pick4
			else
				' common3-traptown-pick 3 #cyoa-team-choice
			then
		then
		choice( "Allontanarsi in auto!" )choice
		
;


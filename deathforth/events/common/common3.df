// Gloomy Weather

: common3-gloom-attcheck args( @ )
	<- @ .attitudeREV
	<- @ .cattitude+ if
		($ <- @ .colourname .. " gardes ton esprit positif !" $) +crtext
	then;
	<- @ .cattitude- if
		<- @ .morale2-
	else
		<- @ .morale--
	then	
;

cyoa-choice: common3-gloomy-pick
	($ cname .. " je suis heureux de vous parler. comment allez-vous aujourd'hui ?" $) text!
	cpet? if
		($ cHe .. " fabrique " .. cdogcat .. " cela fait du bruit, ce qui est assez amusant pour faire oublier la meteo !" $) +crtext morale++	goodfx
	then;
	cchar grating? if
		($ cHe .. " instructe : c'est une " .. everyone .. " de : a " .. "FAITES CESSER LA CHALEUR. " pbold $) +crtext
		cool-it-7 if
			($ Everyone .. " rire intensement ! ce slogan ne vieillit jamais !" $) +text
			morale2+all goodfx
		else cool-it++
			"Cela ne va pas etre bien accueilli du tout." +text morale3-all badfx
		then witsattREV
	then;
	ctemper- if
		($ cHe .. " perd " .. chis .. " le thermometre s'echauffe et commence a reagir sur le temps meteorologique ! " .. cHe .. " se sent un peu meilleur. " .. everyone .. " doit supporter les repliques." $) +crtext badfx
		temperREV morale++ cchar ' .morale-- foreach-team-char-except
	then;
	cattitude+ if
		($ cHe .. " parvient a retenir l'attention " .. everyone .. " rechappez-vous de la mauvaise meteo !" $) +crtext goodfx attitudeREV
	then;
	cattitude- if
		($ cHe .. " pleure et pleure, a propos du temps meteorologique mais aussi sur d'autres sujets non lies." $) +crtext badfx
		attitudeREV morale2-all
	then;
	"C'est peu utile." +crtext badfx
	' common3-gloom-attcheck foreach-team-char
;


cyoa{ road{ 

// Not a Ouija Board

: weegeetm .. "Weegee Board [tm]" pbold .. ;
: weegeecurse args( char ) 13 <- char .seed! ;

: weegee-end
	($ Thegroup .. "  fuhlt sich jetzt unglaublich unglucklich. Hute dich vor dem " .. "Fluch von Weegee!" rbold $) +crtext
	"GLUCK MASSIV GESENKT!" fbold +crtext
	"Irgendwo in der Ferne lacht ein Goblin." pbold +crtext goblin-laugh
	
;

cyoa-choice: common4-weegee-pretty
	choosehuman cicon
	($ "Der " weegeetm "  buchstabiert das " .. cname .. "  ist " .. "	V E R Y P R E T T Y" pbold $) text!
	($ "Schon! " .. cname .. " ' Fuhlt sich uberhaupt nicht verflucht von diesem entzuckenden Weegee." $) +crtext
	morale2+
	"Somewhere in the distance, a goblin laughs, but in a nice way. As if to say 'hey.... what's up. have a nice day.'" pbold +crtext goblin-laugh
	choice( "nett" )choice
;

cyoa-choice: common4-weegee-loot
	($ "Der " weegeetm "  buchstabiert den Ort eines versteckten Beutevorrats im Haus!" $) text!
	homesearch1
	weegee-end
;

cyoa-choice: common4-weegee-check
	weaselest choosechar cicon
	($ "Als gefragt wird, wer die Gruppe verraten wird, " weegeetm "  buchstabiert " $) text!
	weaselest-pass if
		($ cname .. "'s Name!" $) +text
		loyaltyREV
		weegee-end
	else
		"Y O U R B U T T" pbold +crtext
		($ "Was konnte das bedeuten? Die Gruppe wird unruhig und Zweifel keimen. Konnte dies der " .. "Fluch von Weegee?" rbold $) +crtext
		morale--all goblin-laugh
	then
;

cyoa-choice: common4-weegee-canada
	($ "Der " weegeetm "  zeigt auf das Wort " .. "NEIN" pbold .. "  mit erstaunlicher Geschwindigkeit. Dann zeigt es auf " .. "NEIN" fbold .. "  wieder, wahrend es irgendwie Feuer fangt." $) text!
	($ "Was auch immer! Diese Dinge sind sowieso immer falsch! " .. cname .. "  wirft das brennende " weegeetm "  durch den Raum. Das macht " .. chim .. "  fangt auch Feuer." $) +crtext
	cchar isfireproof? if 
		($ cname .. "  liebt es feuerfest zu sein!" $) +crtext
		morale++ goodfx
	else
		ouch-- alive? if bitefx then
	then
	alive? if
		"Es war zumindest eine gute Ubung." +crtext fitness++
	else
		($ "'Leg dich nicht mit dem " .. "Fluch von Weegee!" rbold $) +crtext goblin-laugh
	then
	
;

cyoa: common4-weegee
	"Weegee Board" cyoa-title! choosehuman cicon
	($ Thegroup .. "  stobert in einem verlassenen Haus herum und findet ein " weegeetm " ' auf dem Kuchentisch. Es ist ein gangiges Spiel das verwendet wird um mit ' zu kommunizieren " .. "GEISTE" fbold $) text!
		choice( "LASS DAS NONSENSE AUFSEHEN" )choice
		($ "Diese Dinge sind gerugt um " .. "AUF UNSCHABig WUNSCHKRANK MIT SCHLECHTER GLUCK" rbold .. ", so beware! Still, it may be worth asking it a question..." $) +crtext

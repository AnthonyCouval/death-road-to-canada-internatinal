// Old VHS tape

: common4-vhs-end
	morale++all
	($ "Der Fernseher schaltet sich nach dem Film ab und wird zuruckgelassen." +crtext
;

: sumo-vhs args( char )
	<- char ispet? if 
		<- char dog? if
			($ <- char .name@ .. " lernte Sumo, trotzdem ein Hund war." $) +crtext
			WEAPON_SUMO <- char .weapon_default!
		then
	then;	
	<- char .weapon_default@ WEAPON_SUMO = if
		($ <- char .name@ .. "  lernt uberlegene Sumo Techniken!" $) +crtext
		WEAPON_SUPERSUMO <- char .weapon_default!
	else WEAPON_SUMO <- char .weapon_default! then
;


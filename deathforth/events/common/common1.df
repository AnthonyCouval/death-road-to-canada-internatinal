// Twinkie Truck

: common1-twinkie-get
	($ Thegroup .. " 'die unversehrten Twinkies sammelt und die von Ameisen uberfallen wurden nach dem Lastwagen umkippt ist. " $) +cr +text 8 trunk-food+ goodfx
;

cyoa-choice: common1-twinkie-mech
	($ cname .. " 'beginnt mit dem Schloss zu spielen. " $) cyoa-text!
		cmechanic+ if
			($ "'Es ist kein Problem fur " .. chim .. " 'es aufzulosen." $) +text common1-twinkie-get
		then;
		mechanicroll if
			"'Es dauert etwas, aber schließlich bricht das Schloss auf." +text common1-twinkie-get mechanic++
		else
			($ cHe .. " 'kommt nicht weiter und verzweifelt" $) +text
			badfx morale--
		then mechanicREV
;

cyoa-choice: common1-twinkie-smash
	cpet? if
		($ cname .. " 'beginnt, das Schloss zu kaut. " $) 
	else
		($ cname .. " 'findet ein großes Stein und schwinger dann hart aufs Schloss. " $) 
	then cyoa-text!
		cstrength+ if
			($ "WHAAAAAAM!" rbold .. " ' Das Schloss bricht. " $) +text common1-twinkie-get
		then;
		strengthroll if
			"'Das Schloss bricht!" +text common1-twinkie-get strength++
		else
			cpet? if
				($ cHe .. " ' verfascht " .. chis .. " 'Zahne gegen das festgelegte Metall prallen!" $)
			else
				($ cHe .. " ' zertrummert " .. chis .. " ' Hand sehr schlecht aufgeht, anstatt den Lastkraftwagen aufzuziehen!" $) 
			then +text bitefx sting-- strength--
		then strengthREV
;

cyoa-choice: common1-twinkie-shoot
	($ cname .. " ' nimmt Schuss auf das Schloss am Heck des Lastkraftwagens. " $) cyoa-text!
		cshooting+ if
			"'Volltreffer! Das Hebel stimmt auf. " +text common1-twinkie-get
		then;
		shootingroll if
			($ cHe .. " ' den Schuss treffen, das Schloss zerstort!" $) +text common1-twinkie-get shooting++
		else
			($ "The shot misses and goes through the back.
			Sparks from the bullet ignite the " .. "'EXTREM FLAMMBAR" rbold .. "  Der LKW wird von einer riesigen Explosion verschlungen!" $) +text
			bitefx sting--
		then shootingREV
;

cyoa: common1-twinkie
	image-twinkie
	"'Twinkie-Trucking" cyoa-title!
	($ "'Es gibt einen Twinkie-Truck auf der Straße. Er liegt auf dem Dach, und der Zugang zum Innenraum ist verschlossen. " .. Thegroup .. " sabbert uber die Beute von verarbeitetem Maissirup, die drinnen sein muss." $) cyoa-text!
		choice( "'Ignorieren Sie es aus gesundheitlichen Grunden'" )choice
		mechanicest charchoice( " versucht es aufzuhebeln" )choice: common1-twinkie-mech
		strongest charchoice( " zerschmettert es mit etwas schwerem" )choice: common1-twinkie-smash
		shootest charchoice( " schießt das Schloss" )choice: common1-twinkie-shoot
;


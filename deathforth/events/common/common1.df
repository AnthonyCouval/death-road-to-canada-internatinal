;

cyoa-choice: common1-stitches-med
	($ cname .. " versucht zu nahen " .. vname .. "s arme Kind." $) cyoa-text!
		medical+roll if
			trunk-medical 1 < if
				($ "Ohne medizinische Versorgung " .. cname .. "  macht das Beste " .. che .. " es gibt einige Probleme spater mit der Infektion." $) +crtext victim .morale--
			else

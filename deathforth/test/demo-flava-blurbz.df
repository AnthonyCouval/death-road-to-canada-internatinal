
// Called once for each character
: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"Esto es una MIERDA." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Estoy de acuerdo " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Tal vez debas callar!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"Una vez vi a un bodybuilder tirar un coche a algunos zombies!" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Esto no tiene sentido, " .. 1st-char .name@ .. "." $) blurbsay
				"Eres raro!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Que genial!" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zombis" endof
	2 of "estar sucio" endof
	3 of "el clima" endof
	4 of "insectos" endof
	5 of "como todos son malos" endof
	6 of ($ me .name@ .. "su papa" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " 'que llora incesantemente sobre " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " broods about a tragic past....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " hace un gran gesto de eye roll" $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "una mascota antigua" endof
	2 of "Canada" endof
	3 of "el clima" endof
	4 of "dinosaurios" endof
	5 of "el siguiente paso en el plan" endof
	6 of "algo gracioso en el pasado" endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " habla sobre " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;

: civnoun 1 11 rnd case
	1 of "Twitter" endof
	2 of "comida rapida" endof
	3 of "correo electronico" endof
	4 of "selfies" endof
	5 of "noticias de celebridades" endof
	6 of "videos virales" endof
	7 of "streamers de videojuegos" endof
	8 of "la concepcion de la higiene" endof
	9 of "fanficion amateur cruda ilustrada" endof
	10 of "tablones de imagen" endof
	11 of "creepypasta" endof
	endcase ;

	: one-line1 "Todo estara bien si puedo llegar a Canada." ;
	: one-line2 "Los zombis no son un problema. Bien, quizas solo un pequeno problema." ;
	: one-line3 "Rooaaaad triiiiip." ;
	: one-line4 "Cada cosa tiene un olor muy diferente a lo que solia antes de que el jabon fuera raro." ;
	: one-line5 "Hope I don't run into any more bandits..." ;
	: one-line6 ($ "Con la civilizacion desaparecida, lo que mas me falta es " .. civnoun .. "." $) ;
	: one-line7 "If only we knew about throwing chairs when the zombies first showed up..." ;
	: one-line8 "I wonder if I could get strong enough to just throw the car at zombies..." ;
	: one-line9 "Estamos alli ya?" ;
	: one-line10 "Let's hope the car doesn't break down..." ;

	deck-new
		card: one-line1
		card: one-line2
		card: one-line3
		card: one-line4
		card: one-line5
		card: one-line6
		card: one-line7
		card: one-line8
		card: one-line9
		card: one-line10
	constant ONE-LINERS
	ONE-LINERS var one-liners

: one-liner // One person says something, no reactions, pulled from a deck
	one-liners depths 0= if ONE-LINERS shuffles to one-liners then
	blurbslot 0= if
		one-liners drawcard blurbsay
	then
;

	deck-new
		card: some-bullcrap
		card: turn-back
		card: legend-bodybuild
		card: whiner
		card: brooding
		card: smalltalk 
		10 cards: one-liner

	constant BLURB-DECK
	BLURB-DECK var blurb-deck
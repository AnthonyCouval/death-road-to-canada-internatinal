
// Called once for each character
: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"Isso e uma BESTEIRA." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Eu concordo, " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Talvez voce deva ficar quieto!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"Eu uma vez vi um fisiculturista jogar um carro em alguns zumbis!" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Isso nao faz sentido, " .. 1st-char .name@ .. "." $) blurbsay
				"'Voce e um esquisito!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Oh LEGAL!" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zumbis" endof
	2 of "estar sujo" endof
	3 of "o tempo" endof
	4 of "insetos" endof
	5 of "como todo mundo e um idiota" endof
	6 of ($ me .name@ .. "''pai" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " chora incessantemente sobre " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " broods about a tragic past....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " faz um rolamento de olhos serio." $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "um antigo animal de estimacao" endof
	2 of "Canada" endof
	3 of "o tempo" endof
	4 of "dinossauros" endof
	5 of "o proximo passo no plano" endof
	6 of "algo engracado no passado" endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " fala sobre " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;

: civnoun 1 11 rnd case
	1 of "Twitter" endof
	2 of "fast food" endof
	3 of "email" endof
	4 of "selfies" endof
	5 of "noticias de celebridades" endof
	6 of "videos virais" endof
	7 of "streamers de videogame" endof
	8 of "o conceito de higiene" endof
	9 of "fanficcao grosseiramente ilustrada" endof
	10 of "imageboards" endof
	11 of "creepypasta" endof
	endcase ;

	: one-line1 "Tudo ficara bem se eu conseguir chegar ao Canada." ;
	: one-line2 "Zumbis nao sao problema. Bem, talvez um pequeno problema." ;
	: one-line3 "Rooaaaad triiiiip." ;
	: one-line4 "Tudo cheira muito diferente do que cheirava antes do sabao se tornar raro." ;
	: one-line5 "Hope I don't run into any more bandits..." ;
	: one-line6 ($ "Com a civilizacao acabada, eu principalmente sinto falta de " .. civnoun .. "." $) ;
	: one-line7 "If only we knew about throwing chairs when the zombies first showed up..." ;
	: one-line8 "I wonder if I could get strong enough to just throw the car at zombies..." ;
	: one-line9 "Ja chegamos?" ;
	: one-line10 "Let's hope the car doesn't break down..." ;

	deck-new
		card: one-line1
		card: one-line2
		card: one-line3
		card: one-line4
		card: one-line5
		card: one-line6
		card: one-line7
		card: one-line8
		card: one-line9
		card: one-line10
	constant ONE-LINERS
	ONE-LINERS var one-liners

: one-liner // One person says something, no reactions, pulled from a deck
	one-liners depths 0= if ONE-LINERS shuffles to one-liners then
	blurbslot 0= if
		one-liners drawcard blurbsay
	then
;

	deck-new
		card: some-bullcrap
		card: turn-back
		card: legend-bodybuild
		card: whiner
		card: brooding
		card: smalltalk 
		10 cards: one-liner

	constant BLURB-DECK
	BLURB-DECK var blurb-deck
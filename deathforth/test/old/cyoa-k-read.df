uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"Delusione" cyoa-title!
	"" cyoa-text!
	solo not if ($ "Questa strana scelta di lettura offende " .. theothers .. "  del gruppo. Imperterrito, " $) +text then
	($ cname .. "  si rilassa e legge Giant Butts Monthly. Si scopre essere una rivista medica arida con un nome fuorviante." $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"American G*U*N*S" cyoa-title!
	($ "La rivista e piena di foto di armi, informazioni sulle armi, consigli sulle armi e bizzarre invettive iperpatriottiche. " .. cname .. "  assorbe tutte queste cose." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"Turnkey & Good2Go" cyoa-title!
	($ "Questa era LA rivista di auto prima che la societa esplodesse. Gli articoli perspicaci hanno un effetto calmante su " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	" video di gatti immagini" cyoa-title!
	"'Quello che dice il titolo, solo immagini di video con gatti. Fu inutile in tempi migliori, ma e diventato veramente popolare dopo che l'internet si e spezzato." cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"Riviste: popolari dopo lApocalisse" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " cerca di saccheggiare un negozio di alimentari, ma e stato ripulito completamente " .. cname-He .. " trova un espositore di riviste e decide di prenderne una da leggere." .. "scegli una rivista:" $) cyoa-text! basic-tone
		choice( "American G*U*N*S" )choice: magazine1-guns
		choice( "Turnkey & Good2Go" )choice: magazine1-mech
		choice( " video di gatti immagini" )choice: magazine1-cats
		choice( "GIANT BUTTS MONTHLY" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"Aneddoti edificanti" cyoa-title!
	($ cname .. " si rende conto che questa rivista e sempre stata banale, ma apprezza ancora le storie ottimistiche. Una storia parla di un gatto che salva il suo padrone dal soffocamento a un buffet. Ispiratrice." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"Scienza discutibile" cyoa-title!
	($ cname .. " 'si sente pessimista riguardo alla previsione della rivista di hovercar volanti tra pochi anni, ora che la civilta e piu o meno distrutta. Era comunque una rivista piuttosto divertente." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"Notizie sulle celebrita" cyoa-title!
	($ "Questa rivista e sempre stata incredibilmente cattiva, forse ancora di piu ora che la maggior parte delle persone in questa sono state mangiate " .. cname .. " e una persona leggermente peggiore anche solo per averlo letto." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"Studio dentistico" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  saccheggia uno studio dentistico, trovando alcune scorte mediche rimaste e molti tubetti di dentifricio tecnicamente commestibili. " .. cname-He .. "  va nella sala dattesa e prende una rivista dalla loro scarsa selezione." .. "scegli una rivista:" $) cyoa-text! basic-tone
		choice( "Glurge per lanima sensibile" )choice: magazine2-glu
		choice( "Scienza discutibile" )choice: magazine2-sci
		choice( "Notizie CELEBZ" )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "Tutti passano in giro la rivista, leggendo gli articoli che li interessano. Come sempre, alla fine qualcuno ci mette sopra delle macchie di burro di arachidi, al punto che diventa illeggibile." cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "Questo era un numero speciale ipotetico, allepoca, sullapocalisse zombi. " .. cname .. "  studia attentamente i consigli sulle armi da fuoco, larticolo di medicina durgenza e i trucchi di riparazione comuni insoliti ma efficaci." $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Chi dovrebbe leggere la rivista Prepared Preppers?" cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Rivista Prepared Preppers" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. " ' sifona benzina da alcuni veicoli abbandonati, e poi nota una rivista in una delle auto. E un numero di Prepared Preppers, l'edizione speciale, in condizioni eccellenti! " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. "  studia la sua saggezza ormai giustificata." $) +text 
		mag3solo goodfx
	then;
	+cr "Chi puo leggerlo?" +text basic-tone 
	team-count 3 > if
		choice( "Scegli qualcuno per leggerlo" )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "Condividilo con tutti" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"I LIBRI SONO PER I SECCHIONI" cyoa-title!
	cpet? if
		($ cname .. " salta su, afferra il libro in " .. chis .. " mandibole, e " .. "STRACCIA A PEZZI" rbold .. " come " .. che .. " scuote il libro da un lato allaltro. Prendi QUESTO, secchione." $) 
	else
		($ cname .. " prende il libro e " .. "lo strappa in due" rbold .. "  sgrumblando molto. " .. "'SI proprio quello penso sui libri." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"Cambia la tua vita attraverso la positivita" cyoa-title!
	($ Thegroup .. "  impara molte cose sulla potenza di restare positivo!" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enciclopedia del Tinkering" cyoa-title!
	"'Questo libro e pieno di informazioni su come riparare o modificare molte cose quotidiane. E probabilmente abbastanza pesante da uccidere qualcuno. Aggiungiamo!" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"'Dr. Dink's Rhyme Time" cyoa-title!
	($ "Questo libro e pieno di immagini colorate e e meraviglioso per bambini di tutte le eta e " .. thegroup .. "  veramente gode avere qualcosa, qualsiasi cosa, nuovo da leggere." $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( ": RABBIA DI LIBRO" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Biblioteca bruciata" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  incontra una biblioteca in una citta che sembra essere stata per lo piu bruciata. " .. cname-He .. "  trova un singolo libro che e riuscito a evitare di essere veramente danneggiato dal fuoco. Quale libro era?" $) cyoa-text! basic-tone
		book1-swole
		choice( "Gigantesco manuale di riparazione" )choice: book1-mechanic
		choice( "Libro di auto aiuto sulla positivita" )choice: book1-improve
		choice( "'Libro di filastrocche per bambini" )choice: book1-morale
;

// END Burnt Library

} }



uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"La deception." cyoa-title!
	"" cyoa-text!
	solo not if ($ "Ceci choisie de lire derange : " .. theothers .. " despite tout cela, le groupe s'est maintenu determine. " $) +text then
	($ cname .. " lit et retourne une publication mensuelle geante intitulee 'giant butts monthly'. il s'avere finalement etre un journal medical seche avec un nom trompeur." $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"Armes americaines" cyoa-title!
	($ "La revue est pleine de photographies d'armes, d'informations sur les armes, de conseils d'armes et de discours hyper-patriotiques bizarres. " .. cname .. " absorption des choses entieres." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"Tour-cle et pret-a-aller" cyoa-title!
	($ "Ceci etait le magazine d'automobile avant que la societe explose. les articles instruits ont un effet apaisant. " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	"videos et images de chat." cyoa-title!
	"Ceci n'est pas plus qu'une collection d'images de videos chat. cela n'avait jamais beaucoup de sens dans des temps meilleurs, mais est devenu tres populaire apres que l'internet ait ete mis hors service." cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"Magasins populaires apres l'apocalypse" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " essaye de voler un magasin d'alimentation, mais il a ete completement depouille. " .. cname-He .. " prend un magazine depuis le tiroir a magazines et decide de s'en servir pour lire." .. "choisissez un magazine :" $) cyoa-text! basic-tone
		choice( "Armes americaines" )choice: magazine1-guns
		choice( "Tour-cle et pret-a-aller" )choice: magazine1-mech
		choice( "videos et images de chat." )choice: magazine1-cats
		choice( "MOIS HEUREUSEMENT GRANDES FANONS" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"Histoires dechirantes a l'esprit" cyoa-title!
	($ cname .. " cela realise que ce magazine a toujours ete mordant, mais apprecie encore les histoires optimistes. l'une d'elles est sur un chat sauvant son proprietaire en chocant au buffet. inspiratrice." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"Sciences contestees" cyoa-title!
	($ cname .. " se sent pessimiste quant a la prediction du magazine d'automobiles volantes en suspension a quelques annees, maintenant que la civilisation est quelque peu detruite. cependant, elle restait encore une bonne lecture." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"Nouvelles sur les celebrites" cyoa-title!
	($ "Ce magazine etait toujours particulierement mechant, peut-etre plus encore maintenant que la majorite des personnes figurant dans ses pages ont ete consommees. " .. cname .. " c'est une personne un peu moins agreable a simplement la lire." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"Bureau dentiste" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " raide un cabinet dentaire, decouvrant des fournitures medicales restantes et beaucoup de tubes de toothpaste techniquement comestibles. " .. cname-He .. " aller dans le salon d'attente et prendre un magazine parmi celles-ci." .. "choisissez un magazine :" $) cyoa-text! basic-tone
		choice( "Pour l'ame sensible :" )choice: magazine2-glu
		choice( "Sciences contestees" )choice: magazine2-sci
		choice( "Les dernieres nouvelles de celebz." )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "Chaque personne passe le magazine autour, lisant quels articles leur plaisent. comme d'habitude, quelqu'un finit par y avoir des taches de beurre de cacahouete qui rendent la revue illisible." cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "Cet edition speciale etait une hypothese, a l'epoque, consacree a une apocalypse de zombies. " .. cname .. " etudie soigneusement les conseils sur le tir a l'arme a feu, l'article de premiere aidemedicale d'urgence et les astuces rares mais efficaces de reparation courante." $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Tous ceux qui s'interessent a la preparation aux evenements d'urgence ou catastrophiques et veulent etre prepares." cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Prepares, le magazine des preparateurs prets" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. " desame gaz depuis quelques vehicules abandonnes, puis je decouvre un numero de prepared preppers, edition speciale, en etat neuf dans l'un des voitures ! " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. " etudie maintenant sa sagesse justifiee." $) +text 
		mag3solo goodfx
	then;
	+cr "Qui en lit ?" +text basic-tone 
	team-count 3 > if
		choice( "Choisissez quelqu'un pour la lire." )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "Partagez-le avec tout le monde" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"FITNESS : SANTE PHYSIQUE." cyoa-title!
	cpet? if
		($ cname .. " saute en avant, attrape le livre. " .. chis .. " machoires et dentures. " .. "FAITES-LE EN MORCEAUX." rbold .. " comme " .. che .. " fais glisser le livre de cote a cote. que ca te touche, nerde." $) 
	else
		($ cname .. " prends le livre. " .. "coupe-le en deux parties." rbold .. " en roulant des groans intenses. " .. "ce n'est pas ce que je pense reellement a propos des livres." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"Changer ta vie a travers de la positivite" cyoa-title!
	($ Thegroup .. " apprend beaucoup sur le pouvoir de rester positif !" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enciclopedie de l'ingenierie creative" cyoa-title!
	"Ce livre est rempli d'informations sur la reparation ou la modification de beaucoup de choses courantes quotidiennes. il peut egalement etre assez lourd pour tuer quelqu'un. c'est un agreable bonus !" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"Temps de rimer de dr. dink" cyoa-title!
	($ "Ce livre est plein de images couleurees et ideal pour les enfants de tous ages. " .. thegroup .. " vraiment aime avoir quelque chose neuf a lire." $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( "VOITURE VOLEE !" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Bibliotheque brulee" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " rencontre une bibliotheque dans une ville qui parait avoir brule majoritairement. " .. cname-He .. " le livre qui a echappe reellement aux dommages de l'incendie... 	was it, in fact, the one?" $) cyoa-text! basic-tone
		book1-swole
		choice( "Manuel de reparation gigantesque" )choice: book1-mechanic
		choice( "Livre auto-formation sur la positivite" )choice: book1-improve
		choice( "Livre pour enfants qui rime" )choice: book1-morale
;

// END Burnt Library

} }



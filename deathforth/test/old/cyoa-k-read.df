cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"'Enttauschung" cyoa-title!
	"" cyoa-text!
	solo not if ($ "'This weird choice of reading offends' " .. theothers .. " 'der Gruppe. Unbeirrt, " $) +text then
	($ cname .. " 'tritt zuruck und liest Riesenpos. Es stellt sich als trockene medizinische Zeitschrift mit irrefuhrendem Namen heraus." $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"'Amerikanische G*U*N*S" cyoa-title!
	($ "'Das Magazin ist voll von Waffenbildern, Waffeninformationen, Waffentipps und seltsamen hyperpatriotischen Wutausbruchen. " .. cname .. " 'nimmt all diese Dinge auf." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"'Abzugsbereit & Gut2Go" cyoa-title!
	($ "'Dies war DAS Auto-Magazin vor dem Zusammenbruch der Gesellschaft. Die aufschlussreichen Artikel haben eine beruhigende Wirkung auf " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	"'-katzenvideos bilder-" cyoa-title!
	"'Es handelt sich einfach um Bilder von katzenvideos. Es war nutzlos in besseren Zeiten, wurde aber wirklich popular, nachdem das Internet abgesturzt ist." cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"'Zeitschriften: Beliebt nach der Apokalypse" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " ' versucht ein Supermarkt auszurauben, aber es ist schon von jemandem ganz aufgeraumt worden. " .. cname-He .. " ' findet einen Magazine-Regal und entscheidet sich, eines zu nehmen, um ihn lesen zu wollen." .. "'Wahle ein Magazin aus:" $) cyoa-text! basic-tone
		choice( "'Amerikanische G*U*N*S" )choice: magazine1-guns
		choice( "'Abzugsbereit & Gut2Go" )choice: magazine1-mech
		choice( "'-katzenvideos bilder-" )choice: magazine1-cats
		choice( "'RIESENPOs MONATLICH" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"'Aufgeklarte Erzahlungen" cyoa-title!
	($ cname .. " ' merkt, dass dieses Magazin immer korngemacht war, aber trotzdem die optimistischen Geschichten genießt. Eine Geschichte handelt von einem Katze, das ihren Besitzer vor Erdrosselung an einem Buffet rettet. Inspiriierend." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"'Fragwurdige Wissenschaft" cyoa-title!
	($ cname .. " ' fuhlt sich pessimistisch uber die Vorhersage des Magazins von fliegenden Hovercars in Kurze, jetzt dass die Zivilisation zerbrochen ist. Es war trotzdem eine recht unterhaltsame Zeitschrift." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"'Celebrity News" cyoa-title!
	($ "'Dieses Magazin war immer sehr hinterlistig, moglicherweise noch mehr jetzt, dass die meisten der Menschen in diesem Artikel verzehrt wurden. " .. cname .. " ' bin etwas schlechter geworden, nur um es zu lesen." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"'Zahnarztpraxis" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  Beutezahnarztpraxis, findet einige ubrig gebliebene medizinische Vorrate und viele technisch essbare Tuben Zahnpasta. " .. cname-He .. "  geht ins Wartezimmer und nimmt sich eine Zeitschrift aus ihrer sparlichen Auswahl." .. "'Wahle ein Magazin aus:" $) cyoa-text! basic-tone
		choice( "GFTSS" )choice: magazine2-glu
		choice( "'Fragwurdige Wissenschaft" )choice: magazine2-sci
		choice( "Promi Nachrichten" )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "'The magazine is dead.'" cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "'Das war zu der Zeit eine hypothetische Zombie-Apokalypse-Sonderausgabe. " .. cname .. "  Schaut sich genau die Waffen-Tipps, Notfallmedizin-Artikel und ungewohnliche, aber effektive allgemeine Reparaturtricks an." $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Wer sollte das Preppared Preppers Magazin lesen?" cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Vorbereitete Preppers Zeitschrift" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. " ' siphont benzin aus einigen verlassenen Fahrzeugen und entdeckt dann eine Zeitschrift in einem von ihnen. Es handelt sich um eine Sonderausgabe von Prepared Preppers, in mintem Zustand! " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. " ' studiert seine nun gerechtfertigte Weisheit." $) +text 
		mag3solo goodfx
	then;
	+cr "'Wer darf es lesen?" +text basic-tone 
	team-count 3 > if
		choice( "'Jemanden auswahlen, um es zu lesen" )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "'Teile es mit jedem" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"'BUCHER SIND FUR NERDS" cyoa-title!
	cpet? if
		($ cname .. " 'springt hoch, schnappt sich das Buch in " .. chis .. " 'den Kiefer und " .. "'ZERISSES ES IN STUCKE" rbold .. " 'als " .. che .. " 'schuttelt das Buch hin und her. Nimm das, Nerd." $) 
	else
		($ cname .. " 'greift zum Buch und " .. "'zerreißt es in der Mitte" rbold .. " 'wahrend er laut schnauft. " .. "'Ja, das ist, was ich uber Bucher denke.'" pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"CYLVP" cyoa-title!
	($ Thegroup .. "  lernt viel uber die Kraft des positiven Denkens!" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enzyklopadie des Bastelns" cyoa-title!
	"'Dieses Buch ist voller Informationen uber Reparaturen oder Modifikationen von vielen alltaglichen Dingen. Es ist wahrscheinlich auch schwer genug, um jemanden zu toten. Bonus!" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"'Dr. Dink: Reimzeit" cyoa-title!
	($ "'Dieses Buch ist voller farbenprachtige Bilder und ist hervorragend fur Kinder aller Alters. " .. thegroup .. " 'der wirklich genießt, etwas Neues zu lesen." $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( "': BUCH ZORN" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"'Verbrannte Bibliothek" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " 'entdeckt in einer Stadt, die sich hauptsachlich verbrannt hat, eine Bibliothek. " .. cname-He .. " 'findet ein einziges Buch, das sich durch den Brand recht gut halten konnte. Was war das Buch?" $) cyoa-text! basic-tone
		book1-swole
		choice( "'Großes Reparaturhandbuch" )choice: book1-mechanic
		choice( "'Selbsthilfebuch zur Positivitat" )choice: book1-improve
		choice( "'Rheinisches Kinderbuch" )choice: book1-morale
;

// END Burnt Library

} }



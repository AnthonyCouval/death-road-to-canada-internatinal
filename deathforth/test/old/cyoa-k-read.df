uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"Decepcion" cyoa-title!
	"" cyoa-text!
	solo not if ($ "Este extrano gusto por la lectura ofende " .. theothers .. "  del grupo. Sin desanimarse, " $) +text then
	($ cname .. " 'se recuesta y lee Culos Gigantes Mensual. Resulta ser una revista medica seca con un nombre enganoso." $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"American G*U*N*S" cyoa-title!
	($ "Este periodico esta lleno de imagenes de armas, informacion de armas, consejos de armas y rantas hiper-patrioticas extranas. " .. cname .. " 'absorbe todas estas cosas." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"Turnkey & Good2Go" cyoa-title!
	($ "Este era EL periodico de automoviles antes de que la sociedad explotara. Los articulos reveladores tienen un efecto calmante sobre " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	"-videos de gatos imagenes-" cyoa-title!
	"Solo son imagenes de videos de gatos. Era inutil en mejores tiempos, pero se hizo muy popular despues de que la red se desconectara." cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"Revistas: Populares despues del Apocalipsis" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " 'intenta saquear una tienda de comestibles, pero esta absolutamente limpia. " .. cname-He .. " 'encuentra un rastrillo de revistas y decide coger una para leer." .. "escoge una revista:" $) cyoa-text! basic-tone
		choice( "American G*U*N*S" )choice: magazine1-guns
		choice( "Turnkey & Good2Go" )choice: magazine1-mech
		choice( "-videos de gatos imagenes-" )choice: magazine1-cats
		choice( "CULOS GIGANTES MENSUAL" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"Anecdotas Alentadoras" cyoa-title!
	($ cname .. " 'se da cuenta de que esta revista siempre ha sido cursi, pero aun asi disfruta las historias optimistas. Una historia es sobre un gato que salva a su dueno de atragantarse en un bufet. Inspirador." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"Ciencia Cuestionable" cyoa-title!
	($ cname .. " 'se siente pesimista sobre la prediccion de la revista de coches voladores en unos anos, ahora que la civilizacion esta mas o menos destruida. Aun asi fue una revista bastante entretenida." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"Noticias de Celebridades" cyoa-title!
	($ "Esta revista siempre ha sido increiblemente cruel, posiblemente aun mas ahora que la mayoria de la gente en este lugar ha sido devorada. " .. cname .. " 'es una persona ligeramente peor por siquiera leerla." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"Consultorio Dental" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  saquea una oficina de dentista, encontrando algunos suministros medicos sobrantes y muchos tubos de pasta de dientes tecnicamente comestibles. " .. cname-He .. " va a la sala de espera y toma una revista de su escasa seleccion." .. "escoge una revista:" $) cyoa-text! basic-tone
		choice( "Glurge para el Alma Sensible" )choice: magazine2-glu
		choice( "Ciencia Cuestionable" )choice: magazine2-sci
		choice( "CELEBZ noticias" )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "Everyone passes around the magazine, reading what articles appeal to them. Like always, eventually someone gets peanut butter stains all over the mag, to the point where it becomes unreadable." cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "Este fue un hipotetico, en ese momento, especial de apocalipsis zombie. " .. cname .. "  'Estudia de cerca los consejos de armas de fuego, el articulo de medicina de emergencia y los trucos de reparacion comunes inusuales pero efectivos." $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Quien deberia leer la revista Preppared Preppers?" cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Revista Preparados Preppers" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. "  sifona gas de algunos vehiculos abandonados, y luego ve una revista en uno de los coches. Es un ejemplar de Preparados Preppers, la edicion especial, en perfecto estado! " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. " 'estudia ahora esta justificada la sabiduria." $) +text 
		mag3solo goodfx
	then;
	+cr "Quien va a leerlo?" +text basic-tone 
	team-count 3 > if
		choice( "Elige a alguien para leerlo" )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "Compartir con todos" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"LIBROS SON PARA NERDOS" cyoa-title!
	cpet? if
		($ cname .. " 'salta, arranca el libro en " .. chis .. " 'dientes, y " .. "LO REDUCE EN CUBITOS" rbold .. " 'como " .. che .. " 'saca el libro de un lado a otro. Que tal, nerd!" $) 
	else
		($ cname .. " 'coge el libro y " .. "lo corta en dos" rbold .. " 'mientras grune mucho. " .. "yEAH, ESO ES LO QUE PIENSO DE LOS LIBROS." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"Cambia tu vida a traves de la positividad" cyoa-title!
	($ Thegroup .. " 'aprende mucho sobre el poder de mantenerse positivo" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enciclopedia del Tinkering" cyoa-title!
	"Este libro esta lleno de informacion sobre la reparacion o modificacion de muchas cosas cotidianas. Tambien es probable que sea lo suficientemente pesado como para matar a alguien. Bonus!" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"El Rimado del Dr. Dink" cyoa-title!
	($ "Este libro esta lleno de imagenes coloridas y es genial para ninos de todas las edades y " .. thegroup .. " 'realmente disfruta teniendo algo, cualquier cosa, nuevo para leer." $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( ": RABIA DE LIBRO" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Biblioteca Quemada" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " 'se encuentra con una biblioteca en un pueblo que parece haberse quemado en su mayoria. " .. cname-He .. " ' encuentra un solo libro que evito danos graves causados por el fuego. Cual fue el libro?" $) cyoa-text! basic-tone
		book1-swole
		choice( "Manual gigante de reparacion" )choice: book1-mechanic
		choice( "Libro de autoayuda sobre positividad" )choice: book1-improve
		choice( "Libro de rimas para ninos" )choice: book1-morale
;

// END Burnt Library

} }



uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"Decepcao" cyoa-title!
	"" cyoa-text!
	solo not if ($ "Esta escolha estranha de leitura ofende " .. theothers .. "  do grupo. Sem se deixar abater, " $) +text then
	($ cname .. " chuta para tras e le Traseiros Gigantes Mensal. Acaba por ser uma revista medica seca com um nome enganador." $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"Armas Americanas" cyoa-title!
	($ "A revista esta cheia de fotos de armas, informacoes sobre armas, dicas sobre armas e discursos hiper patrioticos bizarros. " .. cname .. " absorbe tudo isso." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"Venda pronta & Good2Go" cyoa-title!
	($ "Era O MAGAZINE DE CARROS antes da sociedade explodir. As artigos perspicazes tem um efeito tranquilizador em " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	" videos de gatos imagens" cyoa-title!
	"'E o que diz o titulo, apenas imagens de videos de gatos. Era inutil em tempos melhores, mas se tornou muito popular apos a internet cair." cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"Revistas: Popular apos o Apocalipse" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " tenta saquear uma loja de supermercado, mas ela havia sido esvaziada absolutamente " .. cname-He .. " encontra um estante de revistas, e decide pegar uma para ler." .. "	Escolha uma revista:" $) cyoa-text! basic-tone
		choice( "Armas Americanas" )choice: magazine1-guns
		choice( "Venda pronta & Good2Go" )choice: magazine1-mech
		choice( " videos de gatos imagens" )choice: magazine1-cats
		choice( "BUNDAS GIGANTES MENSALMENTE" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"Anedotas edificantes" cyoa-title!
	($ cname .. "  percebe que esta revista sempre foi cafona, mas ainda gosta das historias otimistas. Uma historia e sobre um gato que salva seu dono de engasgar em um bufe. Inspirador." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"Ciencia Questionavel" cyoa-title!
	($ cname .. " ' se sente pessimista sobre a previsao da revista de hovercars voadores em alguns anos, agora que a civilizacao esta mais ou menos destruida. Ainda era uma revista muito divertida." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"Noticias de Celebridades" cyoa-title!
	($ "Esta revista sempre foi incrivelmente ma, possivelmente mais ainda agora que a maioria das pessoas aqui agora sao comidas. " .. cname .. "  e uma pessoa um pouco pior por ate mesmo le la." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"Consultorio Odontologico" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  saqueia um consultorio odontologico, encontrando alguns suprimentos medicos restantes e muitos tubos de pasta de dente tecnicamente comestiveis. " .. cname-He .. "  vai para a sala de espera e pega uma revista de sua escassa selecao." .. "	Escolha uma revista:" $) cyoa-text! basic-tone
		choice( "Glurge para a Alma Sensivel" )choice: magazine2-glu
		choice( "Ciencia Questionavel" )choice: magazine2-sci
		choice( "Noticias das CELEBZ" )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "Todos passam a revista, lendo os artigos que lhes interessam. Como sempre, eventualmente alguem coloca manchas de manteiga de amendoim por toda a revista, ao ponto de torna la ilegivel." cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "Esta era uma edicao especial hipotetica sobre apocalipse zumbi " .. cname .. "  estuda atentamente as dicas de armas de fogo, o artigo sobre medicina de emergencia e truques incomuns, mas eficazes de reparo comum." $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Quem deveria ler a Revista Prepared Preppers?" cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Revista Prepared Preppers" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. " ' sifona a gasolina de alguns veiculos abandonados e entao avista uma revista em um dos carros. E uma edicao de Prepared Preppers, a edicao especial, em perfeitas condicoes " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. "  estuda sua sabedoria agora justificada." $) +text 
		mag3solo goodfx
	then;
	+cr "Quem pode ler?" +text basic-tone 
	team-count 3 > if
		choice( "Escolha alguem para le lo" )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "Compartilhe com todos" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"LIVROS SAO PARA NERDS" cyoa-title!
	cpet? if
		($ cname .. "  salta, arranca o livro de " .. chis .. "  mandibulas, e " .. "RASGA O EM PEDACOS" rbold .. " portugues " .. che .. " p" $) 
	else
		($ cname .. " pega o livro e " .. "rasga o ao meio" rbold .. "  enquanto grunhia muito. " .. "'		SIM ISSO E O QUE PENSO SOBRE LIVROS." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"Mude Sua Vida Por Meio da Positividade" cyoa-title!
	($ Thegroup .. "  aprende muito sobre o poder de se manter positivo!" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enciclopedia da Gambiarra" cyoa-title!
	"'Este livro esta cheio de informacoes sobre como consertar ou modificar muitas coisas do dia a dia. Provavelmente tambem e pesado o suficiente para matar alguem. Bonus!" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"'Dr. Dink e o Tempo das Rimas" cyoa-title!
	($ "Este livro e cheio de figuras coloridas e e otimo para criancas de todas as idades e " .. thegroup .. "  realmente gosta de ter algo, qualquer coisa, novo para ler." $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( ": FURIA DO LIVRO" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Biblioteca Queimada" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  encontra uma biblioteca em uma cidade que parece ter sido quase totalmente queimada. " .. cname-He .. "  encontra um unico livro que nao foi muito danificado pelo fogo. Qual era o livro?" $) cyoa-text! basic-tone
		book1-swole
		choice( "Gigantic repair manual" )choice: book1-mechanic
		choice( "Self help book on positivity" )choice: book1-improve
		choice( "'Rhyming children's book" )choice: book1-morale
;

// END Burnt Library

} }



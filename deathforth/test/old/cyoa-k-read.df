uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"Decepcao" cyoa-title!
	"" cyoa-text!
	solo not if ($ "Esta escolha estranha de leitura ofende " .. theothers .. " 0.5 " $) +text then
	($ cname .. " 'chuta para tras e le a revista Bundas Gigantes do Mes. Acaba por ser uma revista medica seca com um nome enganador.'" $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"American G*U*N*S" cyoa-title!
	($ "A revista esta cheia de fotos de armas, informacoes sobre armas, dicas sobre armas e discursos hiperpatrioticos bizarros. " .. cname .. " absorve todas essas coisas." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"Pronto para uso" cyoa-title!
	($ "Este era A revista de carros antes que a sociedade explodisse. As artigos perspicazes tem um efeito tranquilizador sobre " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	"-videos de gatos imagens-" cyoa-title!
	"'Isso e o que diz o titulo, apenas imagens de videos de gatos. Foi desnecessario em tempos melhores, mas se tornou muito popular apos a internet cair.'," cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"Revistas: Popular apos o Apocalipse" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " tenta roubar uma loja de supermercados, mas ela havia sido esvaziada absolutamente., " .. cname-He .. " encontra um estante de revistas e decide pegar uma para ler.," .. "escolha uma revista:" $) cyoa-text! basic-tone
		choice( "American G*U*N*S" )choice: magazine1-guns
		choice( "Pronto para uso" )choice: magazine1-mech
		choice( "-videos de gatos imagens-" )choice: magazine1-cats
		choice( "BUNDAS GIGANTES MENSALMENTE" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"Anedotas edificantes" cyoa-title!
	($ cname .. "  percebe que esta revista sempre foi piegas, mas ainda gosta das historias otimistas. Uma historia e sobre um gato que salva seu dono de engasgar em um bufe. Inspirador." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"Ciencia questionavel" cyoa-title!
	($ cname .. " ' sentese pessimista sobre a previsao da revista de hovercars voadores em alguns anos, agora que a civilizacao esta mais ou menos destruida. Ainda era uma revista muito divertida." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"Noticias sobre celebridades" cyoa-title!
	($ "Esta revista sempre foi incrivelmente maldosa, possivelmente mais ainda agora que a maioria das pessoas aqui ja foi comida. " .. cname .. "  e uma pessoa um pouco pior por ate mesmo lelo." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"Consultorio odontologico" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  saqueia um consultorio odontologico, encontrando alguns suprimentos medicos restantes e muitos tubos de pasta de dente tecnicamente comestiveis. " .. cname-He .. "  vai para a sala de espera e pega uma revista de sua escassa selecao." .. "escolha uma revista:" $) cyoa-text! basic-tone
		choice( "Glurge for the Sensitive Soul" )choice: magazine2-glu
		choice( "Ciencia questionavel" )choice: magazine2-sci
		choice( "Noticias da CELEBZ" )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "Everyone passes around the magazine, reading what articles appeal to them. Like always, eventually someone gets peanut butter stains all over the mag, to the point where it becomes unreadable." cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "Isso foi uma edicao hipotetica, aquela altura, sobre um apocalipse de zumbis. " .. cname .. "  Estuda de perto as dicas de armas de fogo, artigo de medicina de emergencia e truques de reparo comuns incomuns, mas eficazes." $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Quem deveria ler a revista Preppared Preppers?" cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Revista Preparados Preparados" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. "  Sifona gasolina de alguns veiculos abandonados e entao avista uma revista em um dos carros. E uma edicao especial de Preparados Preppers, em perfeitas condicoes! " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. " estuda agora sua sabedoria justificada." $) +text 
		mag3solo goodfx
	then;
	+cr "Quem vai ler isso?" +text basic-tone 
	team-count 3 > if
		choice( "Escolha alguem para ler" )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "Compartilhe com todos" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"LIVROS SaO PARA NERDS" cyoa-title!
	cpet? if
		($ cname .. " pula, pega o livro e " .. chis .. " abre a boca e " .. "QUEBRALO EM PECAS" rbold .. " como " .. che .. " agita o livro de lado a lado. Faca isso, nerd." $) 
	else
		($ cname .. " pega o livro e " .. "quebrao em meio" rbold .. " enquanto grunhida muito. " .. "'		ISSO E O QUE PENSAM SOBRE LIVROS." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"Mude Sua Vida atraves da Positividade" cyoa-title!
	($ Thegroup .. " aprende muito" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enciclopedia do Gambiarra" cyoa-title!
	"'Este livro esta cheio de informacoes sobre reparar ou modificar muitas coisas comuns a cada dia. Ele provavelmente e pesado o suficiente para matar alguem com isso. Bonus!" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"'Dr. Dink no Tempo do Ritmo" cyoa-title!
	($ "Este livro e cheio de imagens coloridas e e otimo para criancas de todas as idades. " .. thegroup .. " 'realmente gosta de ter algo, qualquer coisa, nova para ler.'" $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( "rAIVA DE LIVRO" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Biblioteca Queimada" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  encontra uma biblioteca em uma cidade que parece ter sido em grande parte queimada. " .. cname-He .. " 'The Bible'" $) cyoa-text! basic-tone
		book1-swole
		choice( "Manual de reparacao gigantesco" )choice: book1-mechanic
		choice( "Livro autoral de autoajuda sobre positividade" )choice: book1-improve
		choice( "'Livro infantil em verso" )choice: book1-morale
;

// END Burnt Library

} }



uses base.df
uses charfilt.df
uses charstats.df
uses road.df

cyoa{ road{

// Magazines: Popular After the Apocalypse

cyoa-choice: magazine1-butts
	"Decepcion" cyoa-title!
	"" cyoa-text!
	solo not if ($ "Esta extrana eleccion de lectura ofende " .. theothers .. "  del grupo. Sin inmutarse, " $) +text then
	($ cname .. "  se relaja y lee Giant Butts Monthly. Resulta ser una revista medica seca con un nombre enganoso." $) +text 2 400 tone
		attitude-- medical++ cchar morale--all-except
;

cyoa-choice: magazine1-guns
	"American G*U*N*S" cyoa-title!
	($ "La revista esta llena de fotos de armas, informacion sobre armas, consejos sobre armas y extranas diatribas hiperpatrioticas. " .. cname .. "  absorbe todas estas cosas." $) cyoa-text! 1 400 tone
		temper-- shooting++
;

cyoa-choice: magazine1-mech
	"Turnkey & Good2Go" cyoa-title!
	($ "Esta era LA revista de coches antes de que la sociedad explotara. Los perspicaces articulos tienen un efecto calmante sobre " .. cname .. "." $) cyoa-text! 2 300 tone
		temper++ mechanic++
;

cyoa-choice: magazine1-cats
	" cat videos pictures" cyoa-title!
	"'Es lo que dice el titulo, solo imagenes de videos de gatos. Era inutil en mejores tiempos, pero se hizo muy popular despues de que Internet se cayo." cyoa-text! goodfx
		morale++ attitude++
;

cyoa: magazine1-cyoa
	"Revistas: populares despues del Apocalipsis" cyoa-title!
	choosehuman cicon
	($ Thegroup .. "  intenta saquear una tienda de comestibles, pero ha sido limpiada por completo. " .. cname-He .. "  encuentra un revistero y decide coger uno para leer." .. "elige una revista:" $) cyoa-text! basic-tone
		choice( "American G*U*N*S" )choice: magazine1-guns
		choice( "Turnkey & Good2Go" )choice: magazine1-mech
		choice( " cat videos pictures" )choice: magazine1-cats
		choice( "GIANT BUTTS MONTHLY" )choice: magazine1-butts
;

// END Magazines: Popular after the Apocalpyse

// Dentist Office

: magazine2-loot morale++ 2 LOOT_FOOD trunk.loot+ 2 3 rnd LOOT_MEDICAL trunk.loot+ ;

cyoa-choice: magazine2-glu
	"Anecdotas edificantes" cyoa-title!
	($ cname .. "  se da cuenta de que esta revista siempre ha sido cursi, pero aun disfruta de las historias optimistas. Una historia es sobre un gato que salva a su dueno de ahogarse en un buffet. Inspirador." $) cyoa-text! 2 300 tone attitude++ magazine2-loot
;	
cyoa-choice: magazine2-sci
	"Ciencia cuestionable" cyoa-title!
	($ cname .. " ' se siente pesimista sobre la prediccion de la revista de aerodeslizadores voladores en unos anos, ahora que la civilizacion esta mas o menos destruida. Seguia siendo una revista bastante entretenida." $) cyoa-text! 1 300 tone attitude-- magazine2-loot
;
cyoa-choice: magazine2-celeb
	"Noticias de Famosos" cyoa-title!
	($ "Este revista siempre fue un poco peor, tal vez mas ahora que la mayoria de las personas en esto ya han sido devoradas. " .. cname .. " es una persona un poco peor por solo leerlo." $) cyoa-text! 2 300 tone loyalty-- wits-- morale2+ magazine2-loot
;	
cyoa: magazine2-cyoa
	"Consultatorio dental" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " saquea un consultatorio dental, encontrando algunos suministros medicos restantes y muchas tuberias de pasta de dientes tecnicamente comestibles. " .. cname-He .. " va a la sala de espera y saca una revista de su seleccion escasa." .. "elige una revista:" $) cyoa-text! basic-tone
		choice( "Glurge para el alma sensible" )choice: magazine2-glu
		choice( "Ciencia cuestionable" )choice: magazine2-sci
		choice( "NOTICIAS CELEBZ" )choice: magazine2-celeb
;

// END Dentist Office

// Prepper Magazine - Person Pick CYOA if you have people, Instant Result if you don't.

: mag3roll 30 %chance if .medical++ else 50 %chance if .shooting++ else .mechanic++ then then ;
: mag3share cyoa-good-dialog "Todos pasan la revista entre si, leyendo que articulos les apelan. Como siempre, eventualmente alguien termina manchando el mag con manchas de mani, hasta el punto de que se vuelve ilegible." cyoa-text! 
	' mag3roll foreach-team-char someone 100 LOOT_GAS trunk.loot+ ; 

: mag3solo shooting++ medical++ mechanic++ 100 LOOT_GAS trunk.loot+ ;
: mag3result cyoa-good-dialog
	($ "Era una edicion hipotetica, en ese momento, sobre la apocalipsis zombi. " .. cname .. " se acerca detenidamente" $) cyoa-text! cicon mag3solo
;

cyoa-bridge: mag3share-pick 
	someicon
	"Quien deberia leer la revista Preppared Preppers?" cyoa-text!
	' mag3result cyoa-team-choice
;

: magazine3-cyoa
	cyoa-start "Revista Prepared Preppers" cyoa-title! 
	0 to cyoaicon cyoaicon
	($ Thegroup .. " ' sifona gasolina de algunos vehiculos abandonados, y luego ve una revista en uno de los autos. Es un ejemplar de Prepared Preppers, la edicion especial, en perfecto estado " $) cyoa-text!
	solo if 
		soloer choosechar ($ cHe .. "  estudia su sabiduria ahora justificada." $) +text 
		mag3solo goodfx
	then;
	+cr "Quien puede leerlo?" +text basic-tone 
	team-count 3 > if
		choice( "Elige a alguien para leerlo" )choice: mag3share-pick 
	else
		' mag3result 3 #cyoa-team-choice
	then
	choice( "Compartelo con todos" )choice: mag3share 
; 

// END Prepper Magazine

// Burnt Library

cyoa-choice: books-are-for-nerds 
	"LOS LIBROS SON PARA NERDS" cyoa-title!
	cpet? if
		($ cname .. "  salta, arrebata el libro en " .. chis .. "  mandibulas y " .. "LO HACE TRIZAS" rbold .. "  como " .. che .. "  sacude el libro de lado a lado. Toma ESO, nerd." $) 
	else
		($ cname .. " agarra el libro y " .. "lo rasga por la mitad" rbold .. " mientras grune mucho. " .. "'		SI ESO ES LO QUE PIENSO DE LOS LIBROS." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;
cyoa-choice: book1-improve
	"Cambia tu vida a traves de la positividad" cyoa-title!
	($ Thegroup .. " aprende mucho sobre el poder de mantenerse positivo!" $) cyoa-text! 1 300 tone
		attitude++ temper++ morale++ cchar ' book1-helproll foreach-team-char-except
;
cyoa-choice: book1-mechanic
	"Enciclopedia de tinkering" cyoa-title!
	"'Este libro esta lleno de informacion sobre como reparar o modificar muchas cosas cotidianas. Tambien es probablemente lo suficientemente pesado como para matar a alguien con el. Bono!" cyoa-text! 2 300 tone
		mechanic++ cchar ' book1-mechroll foreach-team-char-except
;
cyoa-choice: book1-morale
	"'Dr. Dink's Rhyme Time" cyoa-title!
	($ "Este libro esta lleno de imagenes coloridas y es ideal para ninos de todas las edades y " .. thegroup .. " realmente disfruta tener algo, cualquier cosa, nuevo para leer." $) cyoa-text! goodfx morale2+ cchar morale++all-except
;
: book1-swole 
	// cchar angrystrong-revealed? not if then;	cchar angrystrong? if
		most-angrystrong if
			charchoice( ": FURIA DE LIBROS" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Biblioteca quemada" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " encuentra una biblioteca en una ciudad que parece haberse quemado en su mayor parte. " .. cname-He .. " the Bible" $) cyoa-text! basic-tone
		book1-swole
		choice( "Manual de reparacion gigantesco" )choice: book1-mechanic
		choice( "Libro de autoayuda sobre positividad" )choice: book1-improve
		choice( "'Libro infantil con rimas" )choice: book1-morale
;

// END Burnt Library

} }



			charchoice( "rAGE DE LIVRE" )choice: books-are-for-nerds
	then
;
cyoa: book1-cyoa
	"Bibliotheque brulee" cyoa-title!
	choosehuman cicon
	($ Thegroup .. " rencontre une bibliotheque dans une ville qui semble avoir en grande partie brule. " .. cname-He .. " the Bible" $) cyoa-text! basic-tone
		book1-swole
		choice( "Manuel de reparation gigantesque" )choice: book1-mechanic
		choice( "Livre de developpement personnel sur la positivite" )choice: book1-improve
		choice( "Livre pour enfants en rimes" )choice: book1-morale
;


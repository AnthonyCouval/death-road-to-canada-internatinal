	"LES LIVRES SONT POUR LES NERDS" cyoa-title!
	cpet? if
		($ cname .. "  bondit, arrache le livre dans " .. chis .. "  machoires, et " .. "LE DECHIRE EN MORCEAUX" rbold .. "  comme " .. che .. "  secoue le livre dun cote a lautre. Prends CA, nerd." $) 
	else
		($ cname .. "  attrape le livre et " .. "il la coupe en deux" rbold .. " en roulant des gros grognons " .. "'		OUI C'EST CA CE QUE J'EN PENSE AUX LIVRES." pbold $) 
	then cyoa-text! goodfx
	morale2+ temper-- strength++ attitude++ cchar morale--all-except
;
: book1-helproll 50 %chance if .attitude++ else .temper++ then ;
: book1-mechroll 50 %chance if .mechanic++ then ;


road{ voc{ cyoa-examples

0 value recruitee

: recruit-yes
	cyoa-good-dialog
		recruitee character# cyoa-char-icon!
		($ recruitee .colourname .. "  ist dabei wie FLYNN. Wer ist Flynn uberhaupt" $)
		cyoa-text!

	recruitee .recruit
;
 
: recruit-no
	cyoa-bad-dialog
	($ "'Tut mir leid, Kumpel, das passiert nicht'. Das Team schickt " ..
		recruitee .name@ .. "  weg." $) cyoa-text!
	recruitee char-as-icon 1 cyoa-icon-hint!
;

: recruitment
	cyoa-new
		"BEGEGNUNG" cyoa-title!

		// Generating a char RIGHT here for example, but we probably
		// should create the chars ahead of time

		char-gen to recruitee
		recruitee character# cyoa-char-icon!

		// TODO: Show some stats info?
		($ "Ein Anhalter, " .. recruitee .colourname .. 
		", will sich der Gruppe anschlieen." $) cyoa-text!

		choice( "Sicher ich denke wir konnen noch einen nehmen." )choice: recruit-yes // recruitee choosechar
		choice( "Vergiss es!" )choice: recruit-no
;


// : char-choice-with-handler
//	cyoa-add-char-choice dup cyoa-choice-handler! ;

: char-choice-with-handler
	dup choice( swap .name@ )choice choosechar
	dup cyoa-choice-handler!
;

: cyoa-team-choices-with-handler ( handler -- )
	team-count #team-stack-shuffled
	' char-choice-with-handler foreach
	drop
;


: seeya
	cyoa-bad-dialog
	choicechar-as-icon
	($ "Bis spater, " .. choicechar .name@ .. "... BOOSH!" $) cyoa-text!

	TEAM_STATUS_BAD_LEFT choicechar .decruit
;


: decruitment
	cyoa-new
		"BIS BALD" cyoa-title!

		team-count 1 = if
			($ "'DU KANNST DEN LETZTEN KERL NICHT RAUSWERFEN. Du kannst es, aber ich lasse dich nicht." $)
			cyoa-text!
		then;

		($ "'Es ist Zeit, jemanden rauszuschmeien, denn Kepa will ein BEISPIEL MACHEN. Also, wer wird es sein?" $)
			cyoa-text!

		' seeya cyoa-team-choices-with-handler
;

' recruitment 1 hotkey!
' decruitment 2 hotkey!


} }

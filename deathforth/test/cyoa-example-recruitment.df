
road{ voc{ cyoa-examples

0 value recruitee

: recruit-yes
	cyoa-good-dialog
		recruitee character# cyoa-char-icon!
		($ recruitee .colourname .. " esta DENTRO como FLYNN. Quem e Flynn afinal." $)
		cyoa-text!

	recruitee .recruit
;
 
: recruit-no
	cyoa-bad-dialog
	($ "'Sinto muito, cara, nao vai acontecer'. A equipe envia " ..
		recruitee .name@ .. " embalagem." $) cyoa-text!
	recruitee char-as-icon 1 cyoa-icon-hint!
;

: recruitment
	cyoa-new
		"ENCONTRO" cyoa-title!

		// Generating a char RIGHT here for example, but we probably
		// should create the chars ahead of time

		char-gen to recruitee
		recruitee character# cyoa-char-icon!

		// TODO: Show some stats info?
		($ "Um carona, " .. recruitee .colourname .. 
		"quer se juntar ao grupo." $) cyoa-text!

		choice( "Talvez possamos levar um mais." )choice: recruit-yes // recruitee choosechar
		choice( "Desista!" )choice: recruit-no
;


// : char-choice-with-handler
//	cyoa-add-char-choice dup cyoa-choice-handler! ;

: char-choice-with-handler
	dup choice( swap .name@ )choice choosechar
	dup cyoa-choice-handler!
;

: cyoa-team-choices-with-handler ( handler -- )
	team-count #team-stack-shuffled
	' char-choice-with-handler foreach
	drop
;


: seeya
	cyoa-bad-dialog
	choicechar-as-icon
	($ "Ta logo, " .. choicechar .name@ .. "... BOOSH!" $) cyoa-text!

	TEAM_STATUS_BAD_LEFT choicechar .decruit
;


: decruitment
	cyoa-new
		"TA DEVOLVENDO" cyoa-title!

		team-count 1 = if
			($ "'Nao posso te expulsar o ultimo. Sim, posso, mas eu nao vou permitir isso." $)
			cyoa-text!
		then;

		($ "'E hora de expulsar alguem, porque Kepa quer fazer UM EXEMPLO. Entao quem e que vai ser?" $)
			cyoa-text!

		' seeya cyoa-team-choices-with-handler
;

' recruitment 1 hotkey!
' decruitment 2 hotkey!


} }

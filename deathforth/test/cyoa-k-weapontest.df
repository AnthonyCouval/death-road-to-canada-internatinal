: gimmestatupdate  
($ cname .. " " .. cchar .strength@ .. " ' strength and ' in German is ' Starke und " .. cchar .fitness@ .. " " $) cyoa-text! goodfx
;
cyoa-choice: gimmestata
	6 STAT_STRENGTH cchar .stat! 6 STAT_FITNESS cchar .stat!
	gimmestatupdate
;
cyoa-choice: gimmestatb
	6 STAT_FITNESS cchar .stat!
	gimmestatupdate
;
cyoa-choice: gimmestatc
	6 STAT_STRENGTH cchar .stat!
	gimmestatupdate
;
cyoa: gimmestats
	"'Locking and Loading' in German is 'Sicherung und Laden" cyoa-title! 0 to cyoaicon cyoaicon
	soloer choosechar
	($ cname .. " ' hat " .. cchar .strength@ .. " ' strength and ' in German is ' Starke und " .. cchar .fitness@ .. " 0.1 " .. chis .. " statistik?" $) cyoa-text! 2 500 tone

		choice( "'MAX Fitness und Kraft! Jawohl!!" )choice: gimmestata
		choice( "'6 Fitness" )choice: gimmestatb
		choice( "'6 Starke" )choice: gimmestatc
		choice( "'Lasst sie nicht verandern" )choice

// Last file in boot, for loading anything extra

// cyoa-start

cyoa{

: wsnews-complete
	gstats{ BRANCHNAME to newschecked save }
;


cyoa-blank: wsnews-yes sfx{ goodfx }

	gstats{ 10 ' zombo-point +! save }
	"Merci de prendre connaissance de wayward souls !" text!
	"10 points gagnes en zomboches!" rainbold +crtext
	zombopfull? if
		zombo-point ZOMBOP_CAP > if 
			"You are over the maximum for Zombo Points!
			Spend your excess ZP in the UNLOCKS section before starting a new game!" fbold +crtext
		else
			zombopfull rbold +crtext
		then
	then
	"http://store.steampowered.com/app/559260/Wayward_Souls/" openurl
	wsnews-complete
;


cyoa-blank: WSnews

	"LANCEMENT DE WAYWARD SOULS 1.0 !" cyoa-title!
	($ "Le jeu rocketcat games a termine la version 1.0 de son lancement. " .. "Ames errantes" bbold .. "!
	" .. "Ames errantes" bbold .. " un jeu d'action rpg aux donnees aleatoires avec un fort accent sur l'histoire et de multiples personnages, chacun ayant son propre style de jeu. decouvrez-le en detail sur la page steam store." $) text!
	choice( "Peut-etre le prochain fois." )choice
	choice( "Regardez-le sur steam - " .. "Obtenez 10 points zombo" bbold )choice: wsnews-yes
	choice( "Ne le montrer plus" )choice: wsnews-complete
	
;


0 value shown-in-session


: WSnewscheck amend main-event-do-title 

	// Only show once per game session
	shown-in-session if then; 1 to shown-in-session

	gstats{ newschecked } BRANCHNAME $= if then;
	WSnews
;

// Comment below to disable the news announcement
// last to main-event-do-title

}

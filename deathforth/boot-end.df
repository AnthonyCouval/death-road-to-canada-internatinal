// Last file in boot, for loading anything extra

// cyoa-start

cyoa{

: wsnews-complete
	gstats{ BRANCHNAME to newschecked save }
;


cyoa-blank: wsnews-yes sfx{ goodfx }

	gstats{ 10 ' zombo-point +! save }
	"Grazie di aver controllato Wayward Souls!" text!
	"punti Zombo guadagnati 10" rainbold +crtext
	zombopfull? if
		zombo-point ZOMBOP_CAP > if 
			"You are over the maximum for Zombo Points!
			Spend your excess ZP in the UNLOCKS section before starting a new game!" fbold +crtext
		else
			zombopfull rbold +crtext
		then
	then
	"http://store.steampowered.com/app/559260/Wayward_Souls/" openurl
	wsnews-complete
;


cyoa-blank: WSnews

	"Lancio ufficiale 1.0 di Wayward Souls!" cyoa-title!
	($ "Rocketcat Games ha completato il lancio ufficiale di " .. "Wayward Souls" bbold .. "!
	" .. "Wayward Souls" bbold .. " e un RPG dazione casualmente generato con dungeon crawler. Si concentra sulla storia e su molti personaggi, ognuno con i propri stili di gioco. Controllalo nella Store Steam per altre informazioni!" $) text!
	choice( "Prossimamente" )choice
	choice( "Controllalo sulla Store Steam   " .. "Ottieni 10 punti Zombo" bbold )choice: wsnews-yes
	choice( "'Non mostrare piu questo messaggio di news" )choice: wsnews-complete
	
;


0 value shown-in-session


: WSnewscheck amend main-event-do-title 

	// Only show once per game session
	shown-in-session if then; 1 to shown-in-session

	gstats{ newschecked } BRANCHNAME $= if then;
	WSnews
;

// Comment below to disable the news announcement
// last to main-event-do-title

}

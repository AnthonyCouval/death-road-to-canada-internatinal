: wyk-newrecord
	($ wyk-name .. "  est alle plus loin sur la route de la mort quil ne lavait jamais fait auparavant!	" .. "Francais " rainbold $) +crtext
	gstats{ ' wyk-highscore ++ }
;

cyoa: rewardevent
	"Lueur despoir sur la route de la mort" cyoa-title!
	($ Thegroup .. "  se sent inspire apres avoir reussi a survivre a cette situation !" .. gThey .. "  ressens" .. g1s .. "  comme " .. gtheyare .. " getting the hang of this..." $) cyoa-text!
	
	// STREAM RACE wyk stuff
	wyk? if
		' wyk-reward ++
		wyk-reward 1 = if
			gstats{ wyk-highscore } 1 < if wyk-newrecord wyk-key1 +text then
		then
		wyk-reward 2 = if
			gstats{ wyk-highscore } 2 < if wyk-newrecord wyk-key2 +text then
		then
		wyk-reward 3 = if
			gstats{ wyk-highscore } 3 < if wyk-newrecord wyk-key3 +text then
		then
		wyk-reward 4 = if
			gstats{ wyk-highscore } 4 < if wyk-newrecord wyk-key4 +text then
		then
	then
	
	someicon goodfx
	solo if
		"Choisissez une recompense pour le survivant :"
	else
		"Choisissez une recompense pour le groupe :"
	then +crtext
		choice( "Moral et gain de competence aleatoire" )choice: rewardevent-morale
		hazard-reward-shuffle
		hazard-reward-draw
		team-count 3 < if
			hazard-reward-draw // Maybe get rid of this later, change to over 2 people = extra card
		else
			hazard-specialreward
			// hazard-special-draw
		then
;


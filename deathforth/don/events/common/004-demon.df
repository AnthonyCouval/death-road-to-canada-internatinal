cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	004 - "Los No Invocados" - Don Thacker
	One of the group becomes posessed by the demon HEKTATRIUS. He wants PIZZA and SMOKES.
	That's cool, right? I mean he sounds pretty rad.
------------------------------------------------------------------------------------------------------------------------
*)

// The group kicks the character TO THE CURB
cyoa-choice: don-common-demon-offload
	victim to cchar
	($ notcname .. " 'patea " .. vname .. " ' sale por la puerta del pasajero. 	Al caer, " .. vhe .. " 'cae, " .. vhe .. " 'explotta en un enjambre de pequenas murcielagos negros." $) cyoa-text!
	victim .kill
	morale--all
;

: don-common-demonify
	victim .morale-- 
	0 victim .tint.skin.g!
	0 victim .tint.skin.b!
	victim .strength++ victim .fitness++
	victim statmod{ .fireproof }
	victim ispet? if 
		0 victim .pet! victim statmod{ .undog } 0 3 rnd victim .bodytype! 73 victim .specialhead!
		WEAPON_FIERCE victim .weapon_default!
	else
		victim .weapons-to-trunk
		WEAPON_DEVILFORK victim .weapona!
		1 victim .weapon_nodropa!
	then
;

cyoa-choice: don-common-demon-pizza-refuse
// Victim was necessary to carry the character selected at the start all the way to here. Otherwise the intermediary cyoa: would have cleared it. Could have also gotten around this using the vortex-003 example of not using cyoa: and using cyoa-start instead, but it would have been really clumsy and prone to breaking.
	($ "JA, BUENO, GRACIAS DE TODO MODO IGNORO. " rbold .. "El demonio libera " .. vname .. ", quien es cambiado por la experiencia." $) cyoa-text!
	don-common-demonify sfx{ creepy }
;

: don-common-demon-pizzaboost dup .strength++ dup .fitness++ dup .morale-- ;

cyoa-choice: don-common-demon-pizza2
	($ "THANKS FOR THE SOOOUUUUUUUUL.
	" rbold .. "Todos los sobrevivientes son investidos con poder demoniaco." $) cyoa-text!
	cchar .kill
	cchar ' don-common-demon-pizzaboost foreach-team-char-except
;

cyoa-bridge: don-common-demon-pizza2-4
	someicon
	"Quien deberia ser sacrificado a HEKATRIUS?" cyoa-text!
	' don-common-demon-pizza2 cyoa-team-choice
;

cyoa: don-common-demon-pizza

image-demon
solo if
	soloer choosechar
	($ "GRACIAS A MONTONES, TONTIN. " rbold .. "El demonio blasrea a " .. cname .. " 'con poderes espeluznantes, luego desaparece!" $) cyoa-text!
	cchar to victim
	don-common-demonify sfx{ creepy }
else
	($ "Las papas fritas eran sabores de pizza. BUENO ENOUGH." .. " ' HEKATRIUS" rbold .. " 'pide una alma para acompanarlo. " .. "QUEDA A SER SACRIFICADO?\" rbold $) cyoa-text!
	team-count 3 > if
		' don-common-demon-pizza2 2 #cyoa-team-choice
		choice( "Elige a alguien mas" )choice: don-common-demon-pizza2-4
	else
		' don-common-demon-pizza2 3 #cyoa-team-choice
	then
	choice( "No se debe sacrificar a nadie.\" )choice: don-common-demon-pizza-refuse	
then
	-1 trunk-food+
;	


cyoa-choice: don-common-demon-facepunch
	
	($ "MALDITO HOMBRE! MALDITO!	" pbold .. "HEKATRIUS\" rbold .. " 'se desvanece. " .. cname .. " 'se siente muy bien con esto." $) cyoa-text!
		($ "Que milagro de puno!" $) +crtext
		morale2+ strengthREV strength++ temperREV goodfx

;	

cyoa-choice: don-common-demon-freakout
	// the group freaks out, causing the demon to freak out - you all freak out together
	// the demon leaves and you have essentially lost a person for nothing
	// maybe don't freak out next time
	
	($ Thegroup .. " 'se desmaya!" rbold $) text!
	notsolo if
		($ "HEKATRIUS\" rbold .. " 'se desmaya durante un rato! Luego se transforma nuevamente en " .. vname .. "eL, quien luego explota!" $) +crtext
		victim .kill
	else
		($ "HEKATRIUS\" rbold .. " 'se desmaya durante un rato, luego desaparece en una nube de humo! Es muy traumatizante!" $) +crtext
		morale--
	then badfx
;	
		
	
: don-common-demon-angrypunch 
	most-angrystrong if
		choice( "Pierda la cara" )choice: don-common-demon-facepunch
	then
;	

: don-common-demon-choiceblock
		trunk-food 0 > if
			choice( "1 food" )choice: don-common-demon-pizza	
		then
		choice( "Volverse loco" )choice: don-common-demon-freakout
;

: don-common-demon-transmutetext
	($ cname .. "s ojos se desplazan hacia atras y ', " .. che .. "  empieza a convulsionar! " .. cHe .. "  sacudidas y gritos en lenguas arcanas." $) +crtext
	($ "En " .. vname .. "'s place now sits " .. "EL DEMONIO HEKATRIUS" rbold .. ". Preguna si tienes pizza. Podria realmente usar un pedazo caliente." $) +crtext
	
	don-common-demon-choiceblock
;	
	
// Enter HEKTATRIUS
cyoa: don-common-demon
	"Los No Invocados" cyoa-title!
	($ Thegroup .. " ' observa un olor fetido saliendo de las tablas. Azufre. Carnicero podrido. Caramelo." $) cyoa-text! basic-tone 
	($ "Un flash de luz y el sonido de " .. "mil ballenas explotando" pbold .. " ' llena el coche." $) +crtext
	
	solo if // alone
		image-demon
		soloer choosechar
		($ "La humida se despeja para revelar " .. "EL DEMONIO HEKATRIUS" rbold .. "." $) +crtext
		($ "Preguna si tienes pizza. Podria usar un pedazo caliente." $) +crtext	
		don-common-demon-angrypunch 
		don-common-demon-choiceblock
		
	else // not alone
		someicon
		cchar to victim 
		// added cchar to victim here so it's really easy to keep track of who turned into a demon. This lets me use victim and vname up above, instead of having to constantly keep track of cname.
			don-common-demon-transmutetext
	then
	

	
;

} }

cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	004 - "Die ungerufenen" - Don Thacker
	One of the group becomes posessed by the demon HEKTATRIUS. He wants PIZZA and SMOKES.
	That's cool, right? I mean he sounds pretty rad.
------------------------------------------------------------------------------------------------------------------------
*)

// The group kicks the character TO THE CURB
cyoa-choice: don-common-demon-offload
	victim to cchar
	($ notcname .. "  tritt " .. vname .. " aus der Beifahrertur heraus. Als " .. vhe .. " fallt " .. vhe .. " explodiert in einen Schwarm winziger schwarzer Fledermause." $) cyoa-text!
	victim .kill
	morale--all
;

: don-common-demonify
	victim .morale-- 
	0 victim .tint.skin.g!
	0 victim .tint.skin.b!
	victim .strength++ victim .fitness++
	victim statmod{ .fireproof }
	victim ispet? if 
		0 victim .pet! victim statmod{ .undog } 0 3 rnd victim .bodytype! 73 victim .specialhead!
		WEAPON_FIERCE victim .weapon_default!
	else
		victim .weapons-to-trunk
		WEAPON_DEVILFORK victim .weapona!
		1 victim .weapon_nodropa!
	then
;

cyoa-choice: don-common-demon-pizza-refuse
// Victim was necessary to carry the character selected at the start all the way to here. Otherwise the intermediary cyoa: would have cleared it. Could have also gotten around this using the vortex-003 example of not using cyoa: and using cyoa-start instead, but it would have been really clumsy and prone to breaking.
	($ "UGH, NAJA, DANKE TROTZDEM, SCHATZE ICH." rbold .. "Der Damon lasst " .. vname .. "frei, der durch die Erfahrung verandert wird." $) cyoa-text!
	don-common-demonify sfx{ creepy }
;

: don-common-demon-pizzaboost dup .strength++ dup .fitness++ dup .morale-- ;

cyoa-choice: don-common-demon-pizza2
	($ "THANKS FOR THE SOOOUUUUUUUUL.
	" rbold .. "Alle Uberlebenden werden mit damonischer Macht erfullt." $) cyoa-text!
	cchar .kill
	cchar ' don-common-demon-pizzaboost foreach-team-char-except
;

cyoa-bridge: don-common-demon-pizza2-4
	someicon
	"Wer soll HEKATRIUS geopfert werden?" cyoa-text!
	' don-common-demon-pizza2 cyoa-team-choice
;

cyoa: don-common-demon-pizza

image-demon
solo if
	soloer choosechar
	($ "VIELEN DANK, DUMMKOPF.	" rbold .. "Der Damon feuert " .. cname .. "  mit gruseligen Kraften ab und verschwindet dann!" $) cyoa-text!
	cchar to victim
	don-common-demonify sfx{ creepy }
else
	($ "Die Chips hatten einen Pizzageschmack. GUT GENUG." .. "  HEKATRIUS" rbold .. "  bittet um eine Seele um sie damit runterzuspulen.	" .. "WER WIRD GEOPFERT?" rbold $) cyoa-text!
	team-count 3 > if
		' don-common-demon-pizza2 2 #cyoa-team-choice
		choice( "Wahle jemand anderen" )choice: don-common-demon-pizza2-4
	else
		' don-common-demon-pizza2 3 #cyoa-team-choice
	then
	choice( "Ah, opfere niemanden." )choice: don-common-demon-pizza-refuse	
then
	-1 trunk-food+
;	


cyoa-choice: don-common-demon-facepunch
	
	($ "VERDAMMT SEI DER MENSCH! VERDAMMT SEI DER MENSCH!	" pbold .. "HEKATRIUS" rbold .. "  verschwindet. " .. cname .. "  fuhlt sich dabei ziemlich gut." $) cyoa-text!
		($ "Was fur ein Wunderpunch!" $) +crtext
		morale2+ strengthREV strength++ temperREV goodfx

;	

cyoa-choice: don-common-demon-freakout
	// the group freaks out, causing the demon to freak out - you all freak out together
	// the demon leaves and you have essentially lost a person for nothing
	// maybe don't freak out next time
	
	($ Thegroup .. "  flippt aus!" rbold $) text!
	notsolo if
		($ "HEKATRIUS" rbold .. "  flippt eine Weile aus! Er verwandelt sich dann wieder zuruck in " .. vname .. ", der dann explodiert!" $) +crtext
		victim .kill
	else
		($ "HEKATRIUS" rbold .. " ' flippt eine Weile aus und verschwindet dann in einer Rauchwolke! Es ist sehr traumatisierend!" $) +crtext
		morale--
	then badfx
;	
		
	
: don-common-demon-angrypunch 
	most-angrystrong if
		choice( "Schlag ihm ins Gesicht" )choice: don-common-demon-facepunch
	then
;	

: don-common-demon-choiceblock
		trunk-food 0 > if
			choice( "Biete ihm eine Tute Chips an   1 Essen" )choice: don-common-demon-pizza	
		then
		choice( "Ausflippen" )choice: don-common-demon-freakout
;

: don-common-demon-transmutetext
	($ cname .. "''s Augen rollen nach hinten und " .. che .. "  beginnt zu krampfen! " .. cHe .. "  zittert und schreit in arkanen Sprachen." $) +crtext
	($ "In " .. vname .. "''s Platz sitzt jetzt " .. "DER DAMON HEKATRIUS" rbold .. ". Er fragt ob Sie Pizza haben. Er konnte wirklich ein heies Stuck gebrauchen." $) +crtext
	
	don-common-demon-choiceblock
;	
	
// Enter HEKTATRIUS
cyoa: don-common-demon
	"Die ungerufenen" cyoa-title!
	($ Thegroup .. "  riecht einen ublen Geruch der von den Dielen kommt. Schwefel. Verfaultes Hammelfleisch. Zuckermais." $) cyoa-text! basic-tone 
	($ "Ein Lichtblitz und der Klang von " .. "tausend explodierenden Walen" pbold .. "  erfullt das Auto." $) +crtext
	
	solo if // alone
		image-demon
		soloer choosechar
		($ "Der Rauch verzieht sich und enthullt " .. "DER DAMON HEKATRIUS" rbold .. "." $) +crtext
		($ "Er fragt ob du Pizza hast. Er konnte ein heies Stuck gebrauchen." $) +crtext	
		don-common-demon-angrypunch 
		don-common-demon-choiceblock
		
	else // not alone
		someicon
		cchar to victim 
		// added cchar to victim here so it's really easy to keep track of who turned into a demon. This lets me use victim and vname up above, instead of having to constantly keep track of cname.
			don-common-demon-transmutetext
	then
	

	
;

} }

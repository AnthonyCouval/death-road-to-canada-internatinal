cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	015 - "Tre tombe" - Don Thacker
	The group passes through an abandoned graveyard emptied but for three undesturbed graves. 
	There's only time enough to search one.
------------------------------------------------------------------------------------------------------------------------
*)

	cyoa-choice: don-common-graves-digup1
		image-three-graves
		($ Thegroup .. "  trova una raccolta di lettere damore da un soldato alla sua amata che si strugge. Sono davvero toccanti!" $)  cyoa-text!
		($ "'C'e anche una scatola piena di aringhe in scatola e una scatola di caramelle stantie avvolte in un fiocco dorato." $) +crtext
			10 trunk-food+ goodfx
			morale2+all
	;
	
	cyoa-choice: don-common-graves-digup2
		someone choosechar
		image-three-graves
		($ Thegroup .. "  scava e scava e non trova nulla di interessante. Che perdita di tempo." $) cyoa-text!
		solo if
		($ "Tuttavia, " .. cname .. "  trova un grande pacchetto pieno di " .. "materiale sanitario" pbold .. "  in una vicina dependance!" $) +crtext
			9 trunk-medical+ goodfx
		else
		($ "Mentre tutti gli altri scavavano, " .. cname .. " trovo una tanica di benzina sotto delle foglie, accanto a una " .. "pila di teschi" rbold .. "." $) +crtext
			50 70 rnd trunk-gas+ goodfx
		then
		morale++all
	;
	
	cyoa-choice: don-common-graves-digup3
		image-three-graves
		($ Thegroup .. "  dissotterra una bara di quercia con maniglie in ottone rivettate e una placca con il sentimento " $) cyoa-text!	
		($ "'THERE'S NO FATE BUT WHAT YOU MAKE " rbold $) +text
		($ "'inciso su di essa. La bara e pesante ma si apre facilmente. 		E piena di " .. "GUNS" pbold .. ". Una tonnellata di " .. "GUNS" pbold .. "." $) +text goodfx
		80 %chance if 
			3 WEAPON_PISTOL trunk.weapon+
			($ "GOT 3 PISTOLS, " rbold $) +crtext
		else
			2 WEAPON_DOLT trunk.weapon+
			($ "GOT 2 REVOLVERS, " rbold $) +crtext
		then
		80 %chance if
			2 WEAPON_SHOTGUN trunk.weapon+
			($ "2 SHOTGUNS" rbold $) +text
		else
			1 WEAPON_AUTOSHOT trunk.weapon+
			($ "AN AUTOSHOTGUN" fbold $) +text
		then
		($ ", " rbold $) +text
		80 %chance if
			2 WEAPON_HUNTING trunk.weapon+
			($ "AND 2 HUNTING RIFLES!" rbold $) +text
		else
			80 %chance if
				1 WEAPON_AK47 trunk.weapon+
				($ "AND AN ASSAULT RIFLE!" fbold $) +text
			else
				1 WEAPON_MINIGUN trunk.weapon+
				($ "AND A MINIGUN!!!" fbold $) +text
			then
		then		
	;
				
	cyoa-choice: don-common-graves-screwthat
		image-three-graves
		($ Thegroup .. "  decide che forse dissotterrare le tombe durante il " .. "apocalisse zombie" rbold .. " ' non e la cosa piu brillante e sceglie invece di " ..  "AFFRETTARSI" pbold .. "." $) cyoa-text!
	;

	cyoa: don-common-graves
		image-three-graves
		"Tre tombe" cyoa-title! 
		($ Thegroup .. "  attraversa un cimitero. Quasi ogni tomba e stata dissotterrata, per lo piu dallinterno verso lesterno. " $) cyoa-text! basic-tone
	 	($ "Ci sono tre tombe, in fila, indisturbate con i nomi " .. "  gRID" pbold .. ", " .. "NICHOLAS" pbold .. "  e " .. "LUI " pbold .. ". " $) +crtext
	 	// ($ Thegroup .. "  ha solo il tempo di dissotterrare una tomba." $) +text

		choice( "Dissotterra   GRID" )choice: don-common-graves-digup1
		choice( "Dissotterra NICHOLAS" )choice: don-common-graves-digup2
		choice( "Dissotterra LUI " )choice: don-common-graves-digup3
		choice( "Lasciali stare!" )choice: don-common-graves-screwthat
	;
} }

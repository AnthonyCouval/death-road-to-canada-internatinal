cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"Et Alors un Sasquatch" - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. " accelere. " .. cname	.. " voulait vraiment croire, mais raconte a " .. chim .. "de se rubriquer les mains " .. "COOL IT" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. " en le disant une deuxieme fois " .. "COOL IT" pbold .. " reprend la route pour en enqueter de nouveau." $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. " fait demi tour pour enqueter " .. Thegroup .. 
		"  ne trouve quune seule grande empreinte de pas la ou le sasquatch etait cense etre." .. cname .. " casse un " .. 
		"photo instantanee" rbold .. ". " .. cHe .. " veut croire." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. " applaudissements " .. cname .. "victoire de " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. " saute de la voiture et verrouille les bras avec le sasquatch. " $) cyoa-text!
		cstrength+ if
			($ "Le sasquatch nest pas un match pour " .. chim .. ", et soumet facilement." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "After hours that seem to pass " .. "la lutte" rbold .. ", le sasquatch finit par se rendre.," $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. "  est immediatement mis dans une barre de bras. Ce sasquatch connait le judo. " .. cname .. 
				"  est force de se soumettre au plus grand adversaire." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"Et Alors un Sasquatch" cyoa-title!
	someone choosechar
	($ cname .. " voit un sasquatch en bord de route, qui fait sa bien.," $) cyoa-text! basic-tone
		choice( "'Bigfoot n'est pas reel" )choice: don-common-sasquatch-aintreal
		choice( "Retourne et enquete" )choice: don-common-sasquatch-investigate
		strongest charchoice( " essaye de lutter contre lui" )choice: don-common-sasquatch-wrestle
;

} }

cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"Jump it Homem!" - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. "  velocidades ligadas. " .. cname	.. "  queria realmente acreditar, mas diz , " .. chim .. "se a si mesmo " .. "ESFRIE" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. " acaricialhe isso dizer " .. "ESFRIE" pbold .. " um segundo vez." $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. " volta o carro para investigar. " .. Thegroup .. 
		" encontra apenas uma grande huella unica onde o sasquatch era suposto estar. 		" .. cname .. " tomando uma " .. 
		"instante fotografia" rbold .. ". " .. cHe .. " queria acreditar." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. " aplaude " .. cname .. "'vitoria dele. " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. " sai do carro e se junta ao sasquatch. " $) cyoa-text!
		cstrength+ if
			($ " O sasquatch nao e pareo para " .. chim .. ", e submete facilmente." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "Depois de horas de " .. "a briga" rbold .. ", o sasquatch finalmente se rende." $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. " e colocado imediatamente em uma chave de braco. Este sasquatch conhece Judo. " .. cname .. 
				" e forcado a se render ao oponente maior." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"Jump it Homem!" cyoa-title!
	someone choosechar
	($ cname .. " ve um sasquatch na beira da estrada, cuidando da propria vida." $) cyoa-text! basic-tone
		choice( "'Pe Grande nao e real" )choice: don-common-sasquatch-aintreal
		choice( "Virese e investigue" )choice: don-common-sasquatch-investigate
		strongest charchoice( " tenta lutar com ele" )choice: don-common-sasquatch-wrestle
;

} }

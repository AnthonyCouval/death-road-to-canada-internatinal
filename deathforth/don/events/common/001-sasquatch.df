cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"E Depois um Sasquatch" - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. " acelera " .. cname	.. " realmente queria acreditar, mas diz " .. chim .. "ele mesmo para " .. "CALMA AI" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. " esfrega isso dizendo " .. "CALMA AI" pbold .. " uma segunda vez." $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. " vira o carro para investigar " .. Thegroup .. 
		" encontra apenas uma unica pegada grande onde o sasquatch foi alegado estar. 		" .. cname .. " tira um " .. 
		"foto instantanea" rbold .. ". " .. cHe .. " quer acreditar." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. " aplaude " .. cname .. "''s vitoria. " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. " salta do carro e trava os bracos com o sasquatch " $) cyoa-text!
		cstrength+ if
			($ "O sasquatch nao e pareo para " .. chim .. ", e se submete facilmente." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "Depois do que parecem horas de " .. "luta livre" rbold .. ", o sasquatch finalmente se submete." $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. "  e imediatamente colocado em uma chave de braco. Este sasquatch conhece judo. " .. cname .. 
				"  e forcado a se submeter ao oponente maior." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"E Depois um Sasquatch" cyoa-title!
	someone choosechar
	($ cname .. "  ve um sasquatch na beira da estrada, cuidando da propria vida." $) cyoa-text! basic-tone
		choice( "'Pe Grande nao e real" )choice: don-common-sasquatch-aintreal
		choice( "Vire se e investigue" )choice: don-common-sasquatch-investigate
		strongest charchoice( "  tenta lutar com ele" )choice: don-common-sasquatch-wrestle
;

} }

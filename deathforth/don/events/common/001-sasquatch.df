cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"Y luego un Sasquatch" - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. " " .. cname	.. "  realmente queria creer, pero le dice " .. chim .. " a si mismo " .. "CALMA" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. "  lo restriega diciendo " .. "CALMA" pbold .. "  por segunda vez." $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. "  da la vuelta al coche para investigar. " .. Thegroup .. 
		"  encuentra solo una sola huella grande donde supuestamente estaba el sasquatch. 		" .. cname .. "  toma una " .. 
		"foto instantanea" rbold .. ". " .. cHe .. "  quiere creer." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. "  aplaude " .. cname .. "' victoria. " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. "  salta del coche y se abraza al sasquatch. " $) cyoa-text!
		cstrength+ if
			($ "El sasquatch no es rival para " .. chim .. ", y se somete facilmente." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "Despues de lo que parece horas de " .. "el forcejeo" rbold .. ", el sasquatch finalmente se somete." $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. "  es puesto inmediatamente en una barra de brazo. Este sasquatch sabe Judo. " .. cname .. 
				"  se ve obligado a someterse al oponente mayor." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"Y luego un Sasquatch" cyoa-title!
	someone choosechar
	($ cname .. "  ve un sasquatch al costado de la carretera, ocupandose de sus propios asuntos." $) cyoa-text! basic-tone
		choice( "'Bigfoot no es real" )choice: don-common-sasquatch-aintreal
		choice( "Da la vuelta e investiga" )choice: don-common-sasquatch-investigate
		strongest charchoice( "  intenta luchar con el" )choice: don-common-sasquatch-wrestle
;

} }

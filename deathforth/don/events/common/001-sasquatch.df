cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"Und dann ein Sasquatch" - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. " ' die Motoren an.', " .. cname	.. " wollte wirklich glauben, aber erzahlt " .. chim .. "self to + 1 " .. "'BERUHIGEN SIE SICH" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. " ' lasst es auf sich ondulieren, indem er sagt ', " .. "'BERUHIGEN SIE SICH" pbold .. " ' ein zweites Mal." $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. " ' dreht den Wagen um und sucht nach Untersuchung. ', " .. Thegroup .. 
		" ' findet lediglich eine große Fussabdruck, wo der Sasquatch vermutet wurde. 		" .. cname .. " ' nimmt ein ', " .. 
		"'Instantsbild" rbold .. ". " .. cHe .. " ' will glauben." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. " ' jubelt fur ', " .. cname .. "'Sieg. ', " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. " ' springt aus dem Wagen und schließt Arme mit dem Sasquatch. ', " $) cyoa-text!
		cstrength+ if
			($ "'Der Sasquatch ist kein Gegner fur '. " .. chim .. ", und gibt leicht nach." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "Nachdem es stundenlang erschien, als ob " .. "der Ringkampf" rbold .. "der Sasquatch gibt endlich nach." $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. "  wird sofort in einen Armhebel genommen. Dieser Sasquatch kennt Judo. " .. cname .. 
				"  ist gezwungen, sich dem starkeren Gegner zu unterwerfen." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"Und dann ein Sasquatch" cyoa-title!
	someone choosechar
	($ cname .. "  Sieht einen Sasquatch am Straßenrand, der sein eigenes verdammtes Geschaft betreibt." $) cyoa-text! basic-tone
		choice( "Bigfoot ist nicht echt" )choice: don-common-sasquatch-aintreal
		choice( "'Drehe um und untersuchen" )choice: don-common-sasquatch-investigate
		strongest charchoice( " ' versucht es zu beherrschen" )choice: don-common-sasquatch-wrestle
;

} }

cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"Y Entonces un Sasquatch" - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. " ' se encienden a un ritmo rapido. " .. cname	.. " ' realmente quiso creerlo, pero le dice " .. chim .. "se a si mismo que " .. "CALMA" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. " 'se rinde al decirle " .. "CALMA" pbold .. " 'una vez mas." $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. " 'gira el coche para investigar. " .. Thegroup .. 
		" 'encuentra solo una huella grande unica donde se supo que el yeti estaba presente. 		" .. cname .. " 'tomo una " .. 
		"instantanea" rbold .. ". " .. cHe .. " 'quiere creerlo." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. " 'aplauda " .. cname .. "victoria suya. " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. " 'salta del coche y se enlaza con el sasquatch. " $) cyoa-text!
		cstrength+ if
			($ "El sasquatch no es rival para " .. chim .. ", y se somete facilmente." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "Despues de lo que parecen horas de " .. "se enfrenta a lo que lucha" rbold .. ", el sasquatch se rinde finalmente." $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. " 'es colocado inmediatamente en un giro de brazo. Este sasquatch sabia Judo. " .. cname .. 
				" 'es forzado a rendirse al oponente superior." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"Y Entonces un Sasquatch" cyoa-title!
	someone choosechar
	($ cname .. " 've un sasquatch a un costado de la carretera, ocupandose a solas." $) cyoa-text! basic-tone
		choice( "El Bigfoot no es real" )choice: don-common-sasquatch-aintreal
		choice( "Vuelva y investigue" )choice: don-common-sasquatch-investigate
		strongest charchoice( " 'se apodera de el" )choice: don-common-sasquatch-wrestle
;

} }

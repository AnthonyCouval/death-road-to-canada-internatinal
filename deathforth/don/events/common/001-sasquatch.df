cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	001 -"Et ensuite, un sasquatch." - Don Thacker
	The group comes across bigfoot himself. 
	Will they drive on, investigate or WRESTLE HIM?
------------------------------------------------------------------------------------------------------------------------
*)

// Sasquatch aint real
	cyoa-choice: don-common-sasquatch-aintreal
	($ Thegroup .. " allumez les vitesses. " .. cname	.. " vraiment voulu croire, mais il nous dit " .. chim .. "soi a " .. "REFRIGERER" pbold .. "." $) cyoa-text! morale-- cool-it++ badfx
	most-grating if choosechar
	($ cname .. " froche cette blessure en disant " .. "REFRIGERER" pbold .. " temps actuel :" $) +crtext cool-it++
	then
;

// Investigate the sasquatch
	cyoa-choice: don-common-sasquatch-investigate
	($ Thegroup .. " tourne la voiture pour enqueter. " .. Thegroup .. 
		" trouve une seule grande empreinte ou le sasquatch aurait ete suppose se trouver ..." .. cname .. " une photo de " .. 
		"cliche photographique instantane" rbold .. ". " .. cHe .. " veut croire." $) cyoa-text! morale2+ goodfx
;

// Beat the sasquatch at a wrestling match
: don-common-sasquatch-beat
	notsolo if ($ Thegroup .. " vendu arme! " .. cname .. "suivez-moi. " $) +crtext then goodfx morale2+all
;

// Challange the sasquatch to wrestle
cyoa-choice: don-common-sasquatch-wrestle
	($ cname .. " il saute du vehicule et s'accroche aux bras du sasquatch. " $) cyoa-text!
		cstrength+ if
			($ "Le sasquatch n'est pas a la hauteur de [personne ou chose] . " .. chim .. "envoyer simplement et accepter facilement." $) +text don-common-sasquatch-beat
		then;
		strengthroll if
			($ "Apres des heures semblables a : " .. "ultra reglage a fond !" rbold .. "la sasquatch cede enfin." $) +text 
			don-common-sasquatch-beat fitnessREV fitness++
		else
			($ cHe .. " cet etre humanoide est immediatement pris dans un eclat d'epaule par cette bete de sasquatch ayant appris le judo. " .. cname .. 
				" doit ceder devant l'adversaire plus puissant." $) +text badfx morale--
		then strengthREV strength++
;

// The group sees a sasquatch
cyoa: don-common-sasquatch
	image-sasquatch
	"Et ensuite, un sasquatch." cyoa-title!
	someone choosechar
	($ cname .. " voit un sasquatch a cote de la route, ne se preoccupant de rien." $) cyoa-text! basic-tone
		choice( "Bigfoot n'existe pas reellement." )choice: don-common-sasquatch-aintreal
		choice( "S'affronter et enqueter a l'envers." )choice: don-common-sasquatch-investigate
		strongest charchoice( " essaie de la lutter" )choice: don-common-sasquatch-wrestle
;

} }

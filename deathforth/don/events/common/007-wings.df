cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	007 - "Asas por DIAS" - Don Thacker
	The group happens onto a cargo container full of freshly cooked chicken wings.
	So they win, right?
------------------------------------------------------------------------------------------------------------------------
*)

: ouch-wings-all args( chara )
	<- chara isfireproof? if
		($ <- chara .name@ pbold .. "  esta amando esse molho!" $) +crtext
		<- chara .morale2+
	else
		<- chara .ouch--
	then
;

// GET THOSE WINGS!
cyoa-choice: don-common-wings-get
    image-crate-of-wings
	($  Thegroup .. "  se aproxima do conteiner de carga. " .. gThey .. "  aberto" .. g1s .. "  a porta e QUANTIDADES GIGANTES de molho picante fervente saem em um maremoto." $) text!
		' ouch-wings-all foreach-team-char
	choosehuman alive? if
		($ Thegroup .. "  pega o que " .. gthey .. "  figura" .. g1s .. " " .. gthey .. "  pode comer antes que as asas de frango estraguem na estrada. Valeu a pena!" $) +crtext
			team-count 8 * trunk-food+ goodfx morale3+all
	else
		($ "Mais um caso de asas de frango superpicantes causando mortes! Voce nunca ouve falar sobre isso devido a " .. "FRANGO GRANDE" rbold .. "  industria." $) +crtext
	then
;

// Leave the wings. Man that sucks.
cyoa-choice: don-common-wings-leave
    ($ Thegroup .. " ' decide que e muito arriscado, mesmo para asas." $) cyoa-text!
    ($ "Cara, com certeza eles cheiravam bem, no entanto." $) +crtext
;

// The group comes across an overturned cargo container. OF WINGS.
cyoa: don-common-wings
    image-crate-of-wings
    "Asas para DIAS!" cyoa-title!
    ($ Thegroup .. "  encontra um " .. "estranho conteiner de carga" pbold .. "  tombou para o lado, deitado no meio da estrada. " $) cyoa-text! basic-tone
    ($ "'Tem uma porta de escape com valvula saindo dele, liberando vapor e o cheiro de " .. "asas quentes frescas" fbold .. ". " $) +crtext

    choice( "COMPRE ASAS   AVISO: QUENTES" )choice: don-common-wings-get
    choice( "Deixe" )choice: don-common-wings-leave
;


} }

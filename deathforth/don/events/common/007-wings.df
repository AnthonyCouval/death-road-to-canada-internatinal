cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	007 - "Asas por DIAAS" - Don Thacker
	The group happens onto a cargo container full of freshly cooked chicken wings.
	So they win, right?
------------------------------------------------------------------------------------------------------------------------
*)

: ouch-wings-all args( chara )
	<- chara isfireproof? if
		($ <- chara .name@ pbold .. " esta amando este molho!" $) +crtext
		<- chara .morale2+
	else
		<- chara .ouch--
	then
;

// GET THOSE WINGS!
cyoa-choice: don-common-wings-get
    image-crate-of-wings
	($  Thegroup .. " se aproxima do conteiner de carga. " .. gThey .. " aberto" .. g1s .. " a porta e GRANDES QUANTIDADES de molho picante fervente saem em um maremoto." $) text!
		' ouch-wings-all foreach-team-char
	choosehuman alive? if
		($ Thegroup .. " leva o que " .. gthey .. "  figura" .. g1s .. " " .. gthey .. "  podia comer antes que as asas de frango assadas se envenem na estrada. Valia a pena!" $) +crtext
			team-count 8 * trunk-food+ goodfx morale3+all
	else
		($ "Outro caso de asas de frango super picantes causando mortes! Nunca ouves disso por causa da " .. "INDUSTRIA DE POLLO GRANDE" rbold .. " " $) +crtext
	then
;

// Leave the wings. Man that sucks.
cyoa-choice: don-common-wings-leave
    ($ Thegroup .. " ' decide que e muito arriscado, mesmo para asas." $) cyoa-text!
    ($ "Homem, eles chegavam com um cheiro maravilhoso, porem." $) +crtext
;

// The group comes across an overturned cargo container. OF WINGS.
cyoa: don-common-wings
    image-crate-of-wings
    "Asas para DIAS!" cyoa-title!
    ($ Thegroup .. " " .. "cargo estranho" pbold .. "  virou de costas e ficou deitado no meio da estrada. " $) cyoa-text! basic-tone
    ($ "'Tem um portao de escape com valvula, expelindo vapor e o cheiro de " .. "asas quentes de frango" fbold .. ". " $) +crtext

    choice( "GET WINGS - AVISO: QUENTE" )choice: don-common-wings-get
    choice( "Deixe isso" )choice: don-common-wings-leave
;


} }

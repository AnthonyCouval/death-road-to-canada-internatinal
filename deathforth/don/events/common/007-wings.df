cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	007 - "Les ailes pour jadis" - Don Thacker
	The group happens onto a cargo container full of freshly cooked chicken wings.
	So they win, right?
------------------------------------------------------------------------------------------------------------------------
*)

: ouch-wings-all args( chara )
	<- chara isfireproof? if
		($ <- chara .name@ pbold .. " aime beaucoup cette sauce !" $) +crtext
		<- chara .morale2+
	else
		<- chara .ouch--
	then
;

// GET THOSE WINGS!
cyoa-choice: don-common-wings-get
    image-crate-of-wings
	($  Thegroup .. " approche le conteneur a chargement. " .. gThey .. " ouvrir" .. g1s .. " la porte s'ouvre et une vague immenses de sauce chaude en bouillante s'ecoule." $) text!
		' ouch-wings-all foreach-team-char
	choosehuman alive? if
		($ Thegroup .. " prend ce qu'il prend " .. gthey .. " figure." .. g1s .. " " .. gthey .. " manger avant que les ailes de poulet s'alterent sur la route. c'etait tout a fait valeur la peine !" $) +crtext
			team-count 8 * trunk-food+ goodfx morale3+all
	else
		($ "Des cas encore une fois de ailes de poulet extremement epicees causant la mort ! cela ne vous est jamais signale a cause du : " .. "GROS POULET" rbold .. " l'industrie." $) +crtext
	then
;

// Leave the wings. Man that sucks.
cyoa-choice: don-common-wings-leave
    ($ Thegroup .. " il estime que c'est trop risque, meme pour les ailes." $) cyoa-text!
    ($ "Effectivement, ca les sentait bien parfumes." $) +crtext
;

// The group comes across an overturned cargo container. OF WINGS.
cyoa: don-common-wings
    image-crate-of-wings
    "Ailes pour jours !" cyoa-title!
    ($ Thegroup .. " trouve une " .. "conteneur cargaison etrange a l'aspect." pbold .. " decouverte debout sur son cote, au milieu de la route. " $) cyoa-text! basic-tone
    ($ "Cela a un port d'echappement a voie de serrure sortant de lui, qui evacue de la vapeur et l'odeur de. " .. "ailes fraiches et chaudes" fbold .. ". " $) +crtext

    choice( "AVERTISSEMENT : LES AILES SONT CHAUDES - ALLES RECUPERER DES AILES CHAUDES" )choice: don-common-wings-get
    choice( "Laissez-le" )choice: don-common-wings-leave
;


} }

cyoa{ road{ 

(*
------------------------------------------------------------------------------------------------------------------------
	007 - "Alas por DIAS" - Don Thacker
	The group happens onto a cargo container full of freshly cooked chicken wings.
	So they win, right?
------------------------------------------------------------------------------------------------------------------------
*)

: ouch-wings-all args( chara )
	<- chara isfireproof? if
		($ <- chara .name@ pbold .. " esta amando esta salsa!" $) +crtext
		<- chara .morale2+
	else
		<- chara .ouch--
	then
;

// GET THOSE WINGS!
cyoa-choice: don-common-wings-get
    image-crate-of-wings
	($  Thegroup .. " se acerca al contenedor de carga " .. gThey .. " abre" .. g1s .. " la puerta y LLENAS CANTIDADES INCREIBLES DE salsa picante salen en una oleada." $) text!
		' ouch-wings-all foreach-team-char
	choosehuman alive? if
		($ Thegroup .. " tomar lo que " .. gthey .. " pensa" .. g1s .. " " .. gthey .. " puede comer antes de que las alas de pollo se descomponan en la carretera. Valio la pena!" $) +crtext
			team-count 8 * trunk-food+ goodfx morale3+all
	else
		($ "Otra vez las alas de pollo picantes causando muertes! Nunca oyes acerca de esto debido a la " .. "INDUSTRIA DE POLLO" rbold .. " grande." $) +crtext
	then
;

// Leave the wings. Man that sucks.
cyoa-choice: don-common-wings-leave
    ($ Thegroup .. " 'considera que es demasiado arriesgado, incluso para las alas de pollo." $) cyoa-text!
    ($ "Hombre, olian muy bien, sin embargo." $) +crtext
;

// The group comes across an overturned cargo container. OF WINGS.
cyoa: don-common-wings
    image-crate-of-wings
    "Alas por DIAS!" cyoa-title!
    ($ Thegroup .. "  encuentra un " .. "un extrano contenedor de carga" pbold .. " volcado de lado, en medio de la carretera " $) cyoa-text! basic-tone
    ($ "'Tiene un puerto de escape con valvula que sobresale, ventilando vapor y el olor a " .. "alitas de pollo recien hechas" fbold .. ". " $) +crtext

    choice( "OBTEN ALITAS   ADVERTENCIA: CALIENTE" )choice: don-common-wings-get
    choice( "Dejalo" )choice: don-common-wings-leave
;


} }

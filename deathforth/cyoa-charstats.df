: recruited 
	+cr ($ rname .. "  se junta a equipe! Avancando para o Canada " $) +text
	recruitee .morale@ 2 < if
		2 recruitee .morale!
	then
	recruitee .recruit
	gstats{ ugnome-extraZP 2 > if 1 zombop+! then }

	// if the character has a related THING, clear what it's following so it will follow the player
	recruitee .thing@ if 0 recruitee .thing@ .ai.followid! then

;

// Word replacements that alter pronouns and such to the situation

: xhis .female@ if "dela" else "dele" then ;
: xHis .female@ if "Dela" else "Dele" then ;
: xhim .female@ if "dela" else "ele" then ;
: xhe .female@ if "ela" else "ele" then ;
: xHe .female@ if "Ela" else "Ele" then ;

: ghis solo if soloer xhis else "deles" then ;
: gHis solo if soloer xHis else "Deles" then ;
: ghim solo if soloer xhim else "eles" then ;
: ghe solo if soloer xhe else "o grupo" then ;
: gHe solo if soloer xHe else "O grupo" then ;
: gthey solo if soloer xhe else "eles" then ;
: gThey solo if soloer xHe else "Eles" then ;

// Below words for putting in an extra s depending on group

: g1s solo if "s" else "" then ;
: g2s team-count 2 = if "s" else "" then ;
: gs solo if "" else "s" then ;
: gS solo if "" else "S" then ;

: gare solo if "e" else "sao" then ;
: gwere solo if "foi" else "foram" then ;
: gtheywere gthey .. " " .. gwere ;
: gtheyare gthey .. " " .. gare ;
: gTheyare gThey .. " " .. gare ;

// Below example: "traseiro" aVSs = you're a butt versus you're butts, depending 2 or 3 people.
: g2a team-count-alive 2 = if "  um" else "" then ;
: g1a team-count-alive 1 = if "  um" else "" then ;
: g1an team-count-alive 1 = if "  uma" else "" then ;
: g3s team-count-alive 2 > if "s" else "" then ;
: aVSs ($ g2a .. swap .. g3s $) ;
: gaVSs ($ g1a .. swap .. gs $) ;
: ganVSs ($ g1an .. swap .. gs $) ;

: I-or-we team-count-alive 1 = if "  Eu " else "  nos " then ;
: I-or-WE team-count-alive 1 = if "  Eu " else "  NOS " then ;

: cname-he solo if soloer xhe else cname then ;
: cname-He solo if soloer xHe else cname then ;
: thegroup-him solo if soloer xhim else "o grupo" then ;

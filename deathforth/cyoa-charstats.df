: rescskillup
	rescskilltype case
		// 0 of dup .strengthREV .strength++ endof - Got rid of the reveal
		0 of .strength++ endof
		1 of .fitness++ endof
		2 of .medical++ endof
		3 of .mechanic++ endof
		4 of .shooting++ endof
	endcase
;
: rescskillname
	rescskilltype case
		0 of "fortaleza" endof
		1 of "fisicalidade" endof
		2 of "medico" endof
		3 of "mecanico" endof
		4 of "tiro" endof
	endcase
;



voc{ news

: news-off? gstats{ newschecked } BRANCHNAME $= ;

// TITLE INFO

		($ "Mi nuevo juego:" .. cr$ .. "Cruce de Cannibales" $) news_title!

// NEWSBOX IMAGE INFO

8 value imagecount
3 sec>tick newsbox_ticker_dur!

// BUTTONS INFO

"See Trailer / Buy / Wishlist" value b0_text
"http://www.cannibalcrossing.com" urlopener: b0_url

"Discord oficial" value b1_text
"https://discord.gg/J7HChAa" urlopener:  b1_url

"Opciones de noticias" value b2_text


0 value index

: ticker_handler
	($ "deathforth/news/" .. index .. ".png" $) newsbox_load_image

	' index ++ index imagecount % to index
;

last newsbox_ticker_handler!


b0_text		0 #news_btn_text!
' b0_url	0 #news_btn_handler!
b1_text 	1 #news_btn_text!
' b1_url	1 #news_btn_handler!
b2_text 	2 #news_btn_text!

"http://www.twitter.com/rocketcatgames/" 	urlopener: rocketcat-twitter
"http://www.facebook.com/rocketcatgames/" 	urlopener: rocketcat-facebook
"http://www.twitter.com/madgarden/" 		urlopener: madgarden-twitter

: show-news 
	gstats{ 0 to newschecked save }
	0 newsbox_disable!
	0 0 #news_btn_disable!
	0 1 #news_btn_disable!
	0 2 #news_btn_disable!

	1 refresh_layout!
;

: hide-news 
	gstats{ BRANCHNAME to newschecked save }
	// 0 news_enable!

	1 newsbox_disable!
	1 0 #news_btn_disable!
	0 1 #news_btn_disable!
	0 2 #news_btn_disable!

	1 refresh_layout!
;

cyoa{

cyoa-blank: social
	"TWITTER Y FACEBOOK" cyoa-title!

	"Sigue las actualizaciones de Rocketcat Games en Twitter o Facebook para noticias de Death Road y juegos futuros. Sigue a Madgarden en Twitter para consejos canadienses reales!" bbold text!
	"Respondemos rapidamente a comentarios y sugerencias en Twitter!" +crtext

	choice( "Atras" )choice
	choice( "@RocketcatGames" )choice: rocketcat-twitter
	choice( "Madgarden en Twitter" )choice: madgarden-twitter
	choice( "Rocketcat en Facebook" )choice: rocketcat-facebook

;

cyoa-blank: weblinks
	"OPCIONES DE NOTICIAS" cyoa-title!

	"Aqui hay mas maneras de contactarnos, dar feedback y sugerencias, y ver lo que estamos haciendo para actualizaciones y nuevos proyectos! 	Estamos muy activos en el Discord Oficial de Rocketcat, donde puedes hablar con nosotros y otros fanaticos de nuestros juegos." bbold text!
	"Tambien puedes ocultar el panel de noticias hasta la proxima actualizacion mayor." +crtext

	choice( "Atras" )choice
	choice( "Twitter/Facebook" )choice: social
	choice( "Discord Oficial de Rocketcat" )choice: b1_url
	news-off? if 
		choice( "Mostrar Noticias" )choice: show-news
	else
		choice( "Ocultar Noticias" )choice: hide-news
	then
;
	
}

last 2 #news_btn_handler!

: newschecker
	1 news_enable! // Changing this to 0 shuts off news AND other stuff

	news-off? if hide-news then;
	
	show-news
	
	// Uncomment below to hide news but not hide the news options and Discord buttons
	hide-news
	
;

newschecker

}

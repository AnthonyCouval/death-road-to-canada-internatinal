
voc{ news

: news-off? gstats{ newschecked } BRANCHNAME $= ;

// TITLE INFO

		($ "Meu Novo Jogo:" .. cr$ .. "Cruzada do Cannibal" $) news_title!

// NEWSBOX IMAGE INFO

8 value imagecount
3 sec>tick newsbox_ticker_dur!

// BUTTONS INFO

"See Trailer / Buy / Wishlist" value b0_text
"http://www.cannibalcrossing.com" urlopener: b0_url

"Nosso Discord Oficial" value b1_text
"https://discord.gg/J7HChAa" urlopener:  b1_url

"Opcoes de Noticias" value b2_text


0 value index

: ticker_handler
	($ "deathforth/news/" .. index .. ".png" $) newsbox_load_image

	' index ++ index imagecount % to index
;

last newsbox_ticker_handler!


b0_text		0 #news_btn_text!
' b0_url	0 #news_btn_handler!
b1_text 	1 #news_btn_text!
' b1_url	1 #news_btn_handler!
b2_text 	2 #news_btn_text!

"http://www.twitter.com/rocketcatgames/" 	urlopener: rocketcat-twitter
"http://www.facebook.com/rocketcatgames/" 	urlopener: rocketcat-facebook
"http://www.twitter.com/madgarden/" 		urlopener: madgarden-twitter

: show-news 
	gstats{ 0 to newschecked save }
	0 newsbox_disable!
	0 0 #news_btn_disable!
	0 1 #news_btn_disable!
	0 2 #news_btn_disable!

	1 refresh_layout!
;

: hide-news 
	gstats{ BRANCHNAME to newschecked save }
	// 0 news_enable!

	1 newsbox_disable!
	1 0 #news_btn_disable!
	0 1 #news_btn_disable!
	0 2 #news_btn_disable!

	1 refresh_layout!
;

cyoa{

cyoa-blank: social
	"TWITTER E FACEBOOK" cyoa-title!

	"'Leia atualizacoes da Rocketcat Games no Twitter ou Facebook para noticias do Death Road e proximos jogos! Leia o Twitter do Madgarden para obter sabedoria canadense real!" bbold text!
	"'Respondemos rapidamente a comentarios e sugestoes no Twitter!" +crtext

	choice( "Voltar" )choice
	choice( "Rocketcat Twitter" )choice: rocketcat-twitter
	choice( "Madgarden Twitter" )choice: madgarden-twitter
	choice( "Rocketcat Facebook" )choice: rocketcat-facebook

;

cyoa-blank: weblinks
	"OPCoES DE NOTICIAS" cyoa-title!

	"Aqui estao mais maneiras de entrar em contato conosco, dar feedback e sugestoes e ver o que estamos fazendo para atualizacoes e novos projetos! Somos muito ativos no Discord oficial da Rocketcat, onde voce pode conversar conosco e com outros fas de nossos jogos." bbold text!
	"Voce tambem pode ocultar o painel de noticias ate a proxima grande atualizacao." +crtext

	choice( "Voltar" )choice
	choice( "Twitter/Facebook" )choice: social
	choice( "Discord oficial da Rocketcat" )choice: b1_url
	news-off? if 
		choice( "Mostrar Noticias" )choice: show-news
	else
		choice( "Ocultar Noticias" )choice: hide-news
	then
;
	
}

last 2 #news_btn_handler!

: newschecker
	1 news_enable! // Changing this to 0 shuts off news AND other stuff

	news-off? if hide-news then;
	
	show-news
	
	// Uncomment below to hide news but not hide the news options and Discord buttons
	hide-news
	
;

newschecker

}

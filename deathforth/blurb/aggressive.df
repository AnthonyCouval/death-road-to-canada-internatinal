
: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Una volta ho colpito uno zombie cosi forte che e esploso!" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "'Non ti credo, " .. 1st-char .name@ .. "." $) blurbsay
				"'Sei un IMBROGLIONE!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Ma dai! Fantastico!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"E se mettessimo delle lame allesterno della macchina?" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Non funzionerebbe mai, " .. 1st-char .name@ .. "!" $) blurbsay
				"'E una cattiva idea!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Si, proprio come un carro falcato moderno!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"'Ehi! Se ci metti cosi tanto a sparare qualcosa dammi un po' delle tue munizioni!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Prendine, " .. 1st-char .name@ .. "." $) blurbsay
				"Probabilmente mancherei comunque." blurbsay
				STAT_MORALE me .stat--
		else
			"Zitto! Queste sono le mie munizioni." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"Andiamo a investire qualche zombi con la macchina!" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "E un'idea orribile " .. 1st-char .name@ .. "." $) blurbsay
				"Non possiamo rischiare di danneggiare la macchina per stupidi motivi!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Si! Sarebbe fantastico e risparmieremmo munizioni!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Ho bisogno di piu armi! Datemi tutte le armi!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Va bene, prendi la mia " .. 1st-char .name@ .. "." $) blurbsay
				"Non le voglio piu!" blurbsay
				STAT_MORALE me .stat--
		else
			"No! Dobbiamo dividere le armi equamente!" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "le loro armi preferite" endof
	2 of "le loro fughe rocambolesche" endof
	3 of "le loro migliori uccisioni di zombi" endof
	4 of "quanto sanno calciare in alto" endof
	5 of "quanto bene sanno guidare" endof
	6 of "quanto bene sanno usare una pistola" endof
	7 of "quanto possono spingere in panca piana" endof
	8 of "unauto che hanno posseduto in passato" endof
	9 of "un salto fantastico che hanno fatto una volta in bicicletta" endof
	10 of "quanto sono bravi nei giochi da tavolo" endof
	11 of "le loro corse veloci nei videogiochi" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " si vanta di " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;




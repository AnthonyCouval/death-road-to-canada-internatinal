
: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Une fois jai frappe si fort a un zombie quil sest explose!" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "'Je ne crois pas toi " .. 1st-char .name@ .. "." $) blurbsay
				"'Tu es une contrefacon!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Pas possible ! Magnifique !" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"Et si on accrochait des armes blanches a lexterieur de la voiture ?" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Ca ne marcherait jamais, " .. 1st-char .name@ .. "!" $) blurbsay
				"'C'est une mauvaise idee !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Ouais, comme un char a faux moderne !" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"'He ! Si tu mets autant de temps a tirer donne moi des munitions !" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Prends en, " .. 1st-char .name@ .. "." $) blurbsay
				"'Je vais probablement rater de toute facon." blurbsay
				STAT_MORALE me .stat--
		else
			"Tais toi ! Ce sont mes munitions." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"'Allons ecraser des zombies avec la voiture !" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "'C'est une horrible idee, " .. 1st-char .name@ .. "." $) blurbsay
				"'On ne peut pas risquer d'abimer la voiture pour des raisons stupides !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Ouais ! Ce serait genial et on economiserait des munitions !" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Jai besoin de plus darmes ! Donnez moi toutes les armes !" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Bien, prends les miennes, " .. 1st-char .name@ .. "." $) blurbsay
				"'Je n'en veux plus !" blurbsay
				STAT_MORALE me .stat--
		else
			"Non ! Nous devons diviser les armes equitablement !" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "leurs armes preferees" endof
	2 of "leurs echappees belles" endof
	3 of "leurs meilleures tueries de zombies" endof
	4 of "jusquou ils peuvent donner des coups de pied" endof
	5 of "a quel point ils peuvent conduire" endof
	6 of "a quel point ils peuvent utiliser une arme a feu" endof
	7 of "combien ils peuvent soulever au developpe couche" endof
	8 of "une voiture quils possedaient autrefois" endof
	9 of "un saut sucre quils ont fait une fois sur un velo" endof
	10 of "how good they are at board games" endof
	11 of "leurs speedruns de jeux video" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " se vante de " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;





: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Une fois j'ai frappe si fort a un zombie qu'il s'est explose !" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "Je ne le crois pas. " .. 1st-char .name@ .. "." $) blurbsay
				"Tu es une escroque !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Pas possible ! magnifique !" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"Cela pourrait etre dangereux et illegal. il est interdit de porter des armes blanches dans une voiture en circulation. cela pourrait aussi causer des accidents ou blesser des personnes. nous ne recommandons pas cette idee." blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Cela ne fonctionnerait jamais. " .. 1st-char .name@ .. "!" $) blurbsay
				"C'est une idee maladroite !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Une charrette a tonneaux moderne equipee d'une faux." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"Si vous prenez tant de temps pour tirer, donnez-moi quelques munitions s'il vous plait !" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Prends-en quelques. " .. 1st-char .name@ .. "." $) blurbsay
				"Jamais de toute facon je lancerais." blurbsay
				STAT_MORALE me .stat--
		else
			"Arrete de parler ! c'est mon munition." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"Allons-y ecraser quelques zombies a la voiture !" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "Cela est une idee horriblle. " .. 1st-char .name@ .. "." $) blurbsay
				"Nous ne pouvons pas prendre de risques de dommages stupides a l'automobile !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Cela serait magnifique et nous en epargnerions de la munition !" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Je vous fournirai tous les armes disponibles." blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Prenez la mienne, " .. 1st-char .name@ .. "." $) blurbsay
				"Je les veux plus!" blurbsay
				STAT_MORALE me .stat--
		else
			"Nous devons repartir les armes de maniere equitable !" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "leurs armes preferees." endof
	2 of "ses evadements serres" endof
	3 of "les meilleures tueees de zombies a eux" endof
	4 of "quel est leur point maximal pour un coup de pied ?" endof
	5 of "comment ils conduisent bien :" endof
	6 of "comment bien ils peuvent utiliser une arme a feu." endof
	7 of "combien peuvent-ils benoiter ?" endof
	8 of "une voiture qu'ils ont unefois possedee" endof
	9 of "un bond doux qu'ils ont fait a une fois sur un velo." endof
	10 of "ils sont bien joueurs aux jeux d'echecs." endof
	11 of "les speedruns de leurs jeux video" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " se vante de " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;




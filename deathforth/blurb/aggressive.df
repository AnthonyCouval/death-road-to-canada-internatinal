
: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Einmal habe ich einen Zombie so hart geschlagen dass er explodiert ist!" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "'Ich glaube dir nicht, " .. 1st-char .name@ .. "." $) blurbsay
				"'Du bist ein SCHWINDLER!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Auf keinen Fall! Groartig!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"Was ware wenn wir Klingenwaffen an der Auenseite des Autos anbringen?" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Das wurde niemals funktionieren, " .. 1st-char .name@ .. "!" $) blurbsay
				"'Das ist eine schlechte Idee!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Ja, genau wie ein moderner Sensenwagen!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"'Hey! Wenn du so lange brauchst um etwas zu schieen gib mir etwas von deiner Munition!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Nimm etwas, " .. 1st-char .name@ .. "." $) blurbsay
				"'Ich wurde wahrscheinlich sowieso daneben schieen." blurbsay
				STAT_MORALE me .stat--
		else
			"Halt die Klappe! Das ist meine Munition." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"Lass uns ein paar Zombies mit dem Auto uberfahren!" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "Das ist eine schreckliche Idee " .. 1st-char .name@ .. "." $) blurbsay
				"Wir konnen es uns nicht leisten das Auto aus dummen Grunden zu beschadigen!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Yeah! Das ware super und wir wurden Munition sparen!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Ich brauche mehr Waffen! Gebt mir alle Waffen!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Nimm meins, wenn du willst " .. 1st-char .name@ .. "." $) blurbsay
				"'Ich will sie nicht mehr!" blurbsay
				STAT_MORALE me .stat--
		else
			"Nein! Wir mussen die Waffen gleichmaig aufteilen!" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "ihre Lieblingswaffen" endof
	2 of "ihre knappen Entkommen" endof
	3 of "ihre besten Zombie Kills" endof
	4 of "wie hoch sie treten konnen" endof
	5 of "wie gut sie fahren konnen" endof
	6 of "wie gut sie eine Waffe benutzen konnen" endof
	7 of "wie viel sie beim Bankdrucken schaffen" endof
	8 of "ein Auto das sie einmal besaen" endof
	9 of "ein cooler Sprung den sie einmal mit dem Fahrrad gemacht haben" endof
	10 of "wie gut sie bei Brettspielen sind" endof
	11 of "ihre Videospiel Speedruns" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " prahlt uber " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;




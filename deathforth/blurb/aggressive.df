
: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"'Einmal habe ich einem Zombie so hart getan, dass es explodierte!" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "'Ich glaube dich nicht, " .. 1st-char .name@ .. "." $) blurbsay
				"'Du bist ein FALSCHER!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Nein Moglichkeit! Super!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"'Was wenn wir Waffen mit Schneiden an die Außenseite des Autos anfugen?" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "'Das wurde nie funktionieren, " .. 1st-char .name@ .. "!" $) blurbsay
				"Es ist eine schlechte Idee!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Ja, genau wie ein moderner Streitwagen mit Sicheln!'" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"'Hier! Wenn Sie so lange dauern, um etwas zu schießen, gib mir ein bisschen Ihr Munition!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Nimm ein bisschen dazu,', " .. 1st-char .name@ .. "." $) blurbsay
				"Das wurde ich wahrscheinlich verfehlen." blurbsay
				STAT_MORALE me .stat--
		else
			"Schweige! Das ist meine Munition." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"Lass uns loslegen und die Zombies mit dem Auto uberfahren!" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "Das ist eine schreckliche Idee, ', " .. 1st-char .name@ .. "." $) blurbsay
				"Wir konnen das Fahrzeug nicht riskieren fur dumme Grunde!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Ja! Das ware super und wir sparen uns Munition!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Ich brauche mehr Waffen! Gib mir alle Waffen!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Okay, nehme deine, ', " .. 1st-char .name@ .. "." $) blurbsay
				"Ich will sie nicht mehr!" blurbsay
				STAT_MORALE me .stat--
		else
			"Nein! Wir mussen die Waffen gleichmaßig verteilen!" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "'ihre liebsten Waffen" endof
	2 of "ihre knappen Entkommen" endof
	3 of "their best zombie kills" endof
	4 of "'wie hoch sie treten konnen" endof
	5 of "'wie gut sie Auto fahren konnen" endof
	6 of "'wie gut sie mit einer Schusswaffe umgehen konnen" endof
	7 of "'wie viel sie auf der Bank drucken konnen" endof
	8 of "'ein Auto, das sie einmal besessen haben" endof
	9 of "'eine suße Sprung, die sie jemals auf dem Fahrrad gemacht haben" endof
	10 of "'wie gut sie bei Brettspielen sind" endof
	11 of "'ihre Videospiel-Geschwindigkeitslaufe" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " 'brustet sich mit " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;





: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Uma vez eu soquei um zumbi com tanta forca que ele explodiu!" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "'Eu nao acredito em voce, " .. 1st-char .name@ .. "." $) blurbsay
				"'Voce e um FALSO!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"De jeito nenhum! Incrivel!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"E se prendermos armas de lamina na parte externa do carro?" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Isso nunca funcionaria, " .. 1st-char .name@ .. "!" $) blurbsay
				"'E uma ma ideia!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Sim, assim como uma moderna carruagem com foices!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"'Ei! Se voce vai demorar tanto para atirar em alguma coisa me de um pouco de sua municao!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Pegue um pouco, " .. 1st-char .name@ .. "." $) blurbsay
				"'Provavelmente eu erraria mesmo." blurbsay
				STAT_MORALE me .stat--
		else
			"Cale a boca! Esta e a minha municao." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"'Vamos atropelar alguns zumbis com o carro!" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "'Isso e uma pessima ideia, " .. 1st-char .name@ .. "." $) blurbsay
				"'Nao podemos arriscar danificar o carro por motivos estupidos!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Sim! Seria otimo e economizariamos municao!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Preciso de mais armas! Me deem todas as armas!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Tudo bem, pegue a minha, " .. 1st-char .name@ .. "." $) blurbsay
				"'Nao quero mais!" blurbsay
				STAT_MORALE me .stat--
		else
			"Nao! Precisamos dividir as armas igualmente!" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "suas armas favoritas" endof
	2 of "suas fugas por pouco" endof
	3 of "suas melhores mortes de zumbis" endof
	4 of "o quao alto conseguem chutar" endof
	5 of "o quao bem conseguem dirigir" endof
	6 of "o quao bem conseguem usar uma arma" endof
	7 of "qual e a sua melhor pressao de banco" endof
	8 of "um carro que ja possuiram" endof
	9 of "uma otima pulo que ja fizeram em bicicleta" endof
	10 of "suas habilidades em jogos de xadrez" endof
	11 of "suas velocidades de runs em jogos de video" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " se bragam com " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;




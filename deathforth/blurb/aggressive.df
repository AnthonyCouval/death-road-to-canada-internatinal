
: aggressive-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Una vez le di un punetazo a un zombie con tanta fuerza que exploto!" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "No te creo, " .. 1st-char .name@ .. "." $) blurbsay
				"Eres un FARSANTE!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"No puede ser! Genial!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-pessi1
	2nd-char choosechar
	blurbslot 0= if
		"Que tal si atachamos armas con filo al exterior del coche?" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Eso nunca funcionaria, " .. 1st-char .name@ .. "!" $) blurbsay
				"Es una mala idea!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Si, exactamente como un carro moderno con hoz!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;
	
: aggressive-passpess1
	2nd-char choosechar
	blurbslot 0= if
		"Eh! Si vas a tardar tanto en disparar algo, dame algo de tu municion!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Tomate algunas, " .. 1st-char .name@ .. "." $) blurbsay
				"Probablemente fallaria de todos modos." blurbsay
				STAT_MORALE me .stat--
		else
			"Callate! Esta es mi municion." blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-carmageddon
	2nd-char choosechar
	blurbslot 0= if
		"Vamos a atropellar a algunos zombies con el coche!" blurbsay
	else
		blurbslot 2 < if
			ctemper- not if
				($ "Esa es una idea horrible " .. 1st-char .name@ .. "." $) blurbsay
				"No podemos arriesgarnos a danar el coche por estupideces!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Eso seria genial! Y salvamos en municiones!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;		

: aggressive-passpess2
	2nd-char choosechar
	blurbslot 0= if
		"Necesito mas armas! Dame todas las armas!" blurbsay
	else
		blurbslot 2 < if
			ctemper+ cattitude- or if
				($ "Bien, toma el mio " .. 1st-char .name@ .. "." $) blurbsay
				"No quiero esas mas!" blurbsay
				STAT_MORALE me .stat--
		else
			"No! Debemos dividir las armas por igual!" blurbsay
			STAT_MORALE 1st-char .stat--
		then then
	then
;	

: aggressive-topic 1 11 rnd case
	1 of "sus armas favoritas" endof
	2 of "sus estrechisimos escapes" endof
	3 of "sus mejores matanzas de zombis" endof
	4 of "cuanto pueden patinar" endof
	5 of "cuan bien pueden conducir" endof
	6 of "cuan bien pueden usar una pistola" endof
	7 of "cuanto pueden levantar en el banco" endof
	8 of "un coche que alguna vez tenian" endof
	9 of "un gran salto que alguna vez hicieron en una bicicleta" endof
	10 of "que tan buenos son en juegos de mesa" endof
	11 of "las carreras de speed run de su video juego" endof
	endcase ;

: aggressive-brag
	blurbslot 0= if
		qmsg ($ me .name@ .. " 'presume de " .. aggressive-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;




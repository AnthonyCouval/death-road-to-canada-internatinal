// Things anyone can say, not tied to a specific personality.

// Called once for each character

: bath-room 
	blurbslot 0= if
		"Eu preciso usar o banheiro." blurbsay
	else
		blurbslot 2 < if
			"Voce deveria ter ido quando paramos da ultima vez!" blurbsay
			STAT_MORALE 1st-char .stat--
		then
	then
;

: sing-along
	blurbslot 0= if
		"Alguem quer fazer um karaoke?" blurbsay
	else
		blurbslot 2 < if
			"Deveriamos fazer um cala-a-boca." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"Isso e uma merda." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Eu concordo, " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Talvez voce devesse calar a boca!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"Uma vez vi um fisiculturista jogar um carro em alguns zumbis!" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Isso nao faz sentido, " .. 1st-char .name@ .. "." $) blurbsay
				"'Voce e um esquisito!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Oh legal!" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zumbis" endof
	2 of "estar sujo" endof
	3 of "o clima" endof
	4 of "erros" endof
	5 of "como todo mundo e um idiota" endof
	6 of ($ me .name@ .. "'s father" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. "  chora incessantemente sobre " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " broods about a tragic past....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " 'Revira os olhos'" $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "um animal de estimacao velho" endof
	2 of "Canada" endof
	3 of "o clima" endof
	4 of "dinossauros" endof
	5 of "o proximo passo no plano" endof
	6 of "'engracado no passado'" endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " fala sobre " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;

: civnoun 1 11 rnd case
	1 of "Twitter" endof
	2 of "comida rapida" endof
	3 of "email" endof
	4 of "selfies" endof
	5 of "noticias famosas" endof
	6 of "videos virais" endof
	7 of "transmitidores de jogos eletronicos" endof
	8 of "a ideia de higiene" endof
	9 of "ficcao erotica crudamente ilustrada" endof
	10 of "paineis de imagens" endof
	11 of "historias assombrosas" endof
	endcase ;


// Things anyone can say, not tied to a specific personality.

// Called once for each character

: bath-room 
	blurbslot 0= if
		"Je dois utiliser la salle de bain." blurbsay
	else
		blurbslot 2 < if
			"Vous auriez du partir quand nous avons arrete dernierement !" blurbsay
			STAT_MORALE 1st-char .stat--
		then
	then
;

: sing-along
	blurbslot 0= if
		"Quelqu'un veut faire un karaoke ?" blurbsay
	else
		blurbslot 2 < if
			"Nous devons faire un chante-en-tete." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"Ceci est de la bouille." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Je suis d'accord. " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Peut-etre devrais-tu taire un peu !" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"J'ai vu une fois un bodybuilder jeter une voiture sur certains zombies !" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Ceci n'a aucun sens. " .. 1st-char .name@ .. "." $) blurbsay
				"Tu es un etrange !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Tres joli !" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zombies : creatures vivantes" endof
	2 of "s sales" endof
	3 of "le temps meteorologique." endof
	4 of "insectes de" endof
	5 of "est peur des poulets." endof
	6 of ($ me .name@ .. "pere de '" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " gemisse sans cesse a propos de ... " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " broods about a tragic past....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " roule des yeux avec beaucoup de gravite." $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "un animal d'accompagnement ancien." endof
	2 of "Le canada" endof
	3 of "le temps meteorologique." endof
	4 of "les dinosaures" endof
	5 of "le prochain pas dans le plan :" endof
	6 of "quelque chose amusant du passe." endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " parle de " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;

: civnoun 1 11 rnd case
	1 of "Twitter :" endof
	2 of "rapide service alimentaire" endof
	3 of "courriel" endof
	4 of "selfies sont des photos que l'" endof
	5 of "des informations sur la derniere actualite de celebrites." endof

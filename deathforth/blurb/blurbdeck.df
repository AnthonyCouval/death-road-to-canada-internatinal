// Things anyone can say, not tied to a specific personality.

// Called once for each character

: bath-room
	blurbslot 0= if
		"Je dois aller aux toilettes." blurbsay
	else
		blurbslot 2 < if
			"Tu aurais du y aller quand on s'est arretes la derniere fois !" blurbsay
			STAT_MORALE 1st-char .stat--
		then
	then
;

: sing-along
	blurbslot 0= if
		"Est-ce que quelqu'un veut faire un karaoke ?" blurbsay
	else
		blurbslot 2 < if
			"On devrait plutot faire un fermez-la-oke." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"C'est vraiment des CONNERIES" blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Je suis daccord, " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Peut-etre qu'on devrait faire demi-tour..." blurbsay
	else
		blurbslot 2 < if
			"Peut-etre que tu devrais la fermer !" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"Une fois j'ai vu un bodybuilder lancer une voiture sur des zombies !" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Ca n'a aucun sens, " .. 1st-char .name@ .. "." $) blurbsay
				"Tu es un bizarre !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Oh super !" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zombies" endof
	2 of "sont sales" endof
	3 of "le temps" endof
	4 of "insectes" endof
	5 of "comment tout le monde est con" endof
	6 of ($ me .name@ .. "'pere" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " se plain sans cesse a propos de " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " rumine un passe tragique....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " roule ses yeux de facon serieuse." $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "un vieil animal de compagnie" endof
	2 of "Canada" endof
	3 of "le temps" endof
	4 of "dinosaures" endof
	5 of "la prochaine etape du plan" endof
	6 of "quelque chose de drole dans le passe" endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " parle de " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;


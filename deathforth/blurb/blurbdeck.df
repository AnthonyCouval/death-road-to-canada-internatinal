// Things anyone can say, not tied to a specific personality.

// Called once for each character

: bath-room 
	blurbslot 0= if
		"Necesito usar el bano." blurbsay
	else
		blurbslot 2 < if
			"Deberias haber ido cuando paramos la ultima vez!" blurbsay
			STAT_MORALE 1st-char .stat--
		then
	then
;

: sing-along
	blurbslot 0= if
		"Alguien quiere hacer un karaoke?" blurbsay
	else
		blurbslot 2 < if
			"Deberiamos hacer un shut-up-along." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: some-bullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"Esto es una MIERDA." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Estoy de acuerdo " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: turn-back // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Tal vez debas callar!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: legend-bodybuild
	blurbslot 0= if
		"Una vez vi a un bodybuilder tirar un coche a algunos zombies!" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Esto no tiene sentido, " .. 1st-char .name@ .. "." $) blurbsay
				"Eres raro!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Que genial!" blurbsay
			STAT_MORALE me .stat++
		then then
	then
;

: whinetopic 1 6 rnd case
	1 of "zombis" endof
	2 of "estar sucio" endof
	3 of "el clima" endof
	4 of "insectos" endof
	5 of "como todos son malos" endof
	6 of ($ me .name@ .. "su papa" $) endof
	endcase ;

: whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " 'que llora incesantemente sobre " .. whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " broods about a tragic past....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " hace un gran gesto de eye roll" $) txt then
		then
	then
;

: smalltopic 1 6 rnd case
	1 of "una mascota antigua" endof
	2 of "Canada" endof
	3 of "el clima" endof
	4 of "dinosaurios" endof
	5 of "el siguiente paso en el plan" endof
	6 of "algo gracioso en el pasado" endof
	endcase ;

: smalltalk // small chance to raise morale for each member of group
	blurbslot 0= if
		qmsg ($ me .name@ .. " habla sobre " .. smalltopic .. "." $) txt
	else
		15 %chance if
			STAT_MORALE me .stat++
		then
	then
;


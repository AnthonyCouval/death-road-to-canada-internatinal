	2nd-char choosechar
	blurbslot 0= if
		"Cetait finalement une belle journee aujourdhui !" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "'PFFT, QUOI DE SI FACILEMENT AGREABLE A CELA ?" $) blurbsay
				"'Rien de bien agreable a propos des zombies !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Vous avez raison ! Ca fait un merveilleux jour pour une route de vacances." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;	

: taste-like
	2nd-char choosechar
	blurbslot 0= if 
		"Si vous fermez vos yeux ce cat food presque a larome de thon !" blurbsay
	else
		blurbslot 2 < if
			cattitude+ not if
				($ "Si vous fermez vos yeux cela presque a larome de merde !" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				STAT_MORALE me .stat++
		then then
	then
;
	
: canada-weather
	2nd-char choosechar
	blurbslot 0= if 
		"'Bien que le Canada soit froid je me dis que j'en attends moi meme une belle meteo" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Cest pas comme si nous avions un choix ! Je deteste le froid !" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				"Je suis daccord, la Floride peut etre insupportable a certains moments sans climatisation." blurbsay
				STAT_MORALE me .stat++
		then then
	then
;
	

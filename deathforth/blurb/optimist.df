	2nd-char choosechar
	blurbslot 0= if
		"Realmente acabou sendo um bom dia hoje!" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "'PFFT, O QUE HA DE TAO BOM NISSO?" $) blurbsay
				"'Nao ha nada de bom em zumbis!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Voce esta certo! Que dia bonito para uma viagem de carro." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;	

: taste-like
	2nd-char choosechar
	blurbslot 0= if 
		"Se voce fechar os olhos esta comida de gato quase tem gosto de atum!" blurbsay
	else
		blurbslot 2 < if
			cattitude+ not if
				($ "Se voce fechar os olhos quase tem gosto de porcaria!" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				STAT_MORALE me .stat++
		then then
	then
;
	
: canada-weather
	2nd-char choosechar
	blurbslot 0= if 
		"'Pode estar frio no Canada mas tambem estou ansioso por um tempo frio!" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Nao e como se tivessemos escolha! Eu odeio tempo frio!" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				"Concordo, a Florida pode ser insuportavel as vezes sem ar condicionado." blurbsay
				STAT_MORALE me .stat++
		then then
	then
;
	

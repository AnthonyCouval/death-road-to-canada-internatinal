	2nd-char choosechar
	blurbslot 0= if
		"C'etait un bon jour aujourd'hui !" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "PFFT, CE QUE TA JE NE SAIS PAS, MAIS IL Y A CERTAINMENTENT QUELQUE CHOSSE AIMEABLE A C" $) blurbsay
				"Rien de bien agreable a propos des zombies !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"C'est juste ce que je disais ! quel beau jour pour une escapade routiere." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;	

: taste-like
	2nd-char choosechar
	blurbslot 0= if 
		"Si vous fermez les yeux, ce cat food presque a le gout de thon !" blurbsay
	else
		blurbslot 2 < if
			cattitude+ not if
				($ "Si vous fermez les yeux, cela ressemble presque a la merde a gouter !" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				STAT_MORALE me .stat++
		then then
	then
;
	
: canada-weather
	2nd-char choosechar
	blurbslot 0= if 
		"Je suis impatient pour l'arrivee de temps froids, quelle que soit mon situation actuelle." blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Je prefere evidemment pas l'hiver froid !" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				"D'accord, la floride peut etre insupportable a certains moments sans climatisation." blurbsay
				STAT_MORALE me .stat++
		then then
	then
;
	

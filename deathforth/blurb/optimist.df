	
: good-weather
	2nd-char choosechar
	blurbslot 0= if
		"Oggi in realta e una bella giornata!" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "'PFFT, COSA C'E DI COSI BELLO?" $) blurbsay
				"'Non c'e niente di bello negli zombi!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Hai ragione! Che bella giornata per un viaggio su strada." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;	

: taste-like
	2nd-char choosechar
	blurbslot 0= if 
		"Se chiudi gli occhi questo cibo per gatti ha quasi il sapore del tonno!" blurbsay
	else
		blurbslot 2 < if
			cattitude+ not if
				($ "Se chiudi gli occhi ha quasi il sapore di merda!" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				STAT_MORALE me .stat++
		then then
	then
;
	
: canada-weather
	2nd-char choosechar
	blurbslot 0= if 
		"Puo essere freddo in Canada ma io non vedo l'ora di avere un po' di fresco anche io!" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "Non e che abbiamo scelta! Io odio il freddo!" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				"Stanno accordando bene, la Florida puo essere insopportabile alle volte senza condizionamento." blurbsay
				STAT_MORALE me .stat++
		then then
	then
;
	

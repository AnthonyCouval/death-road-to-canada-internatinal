	2nd-char choosechar
	blurbslot 0= if
		"'Es ist doch ein netter Tag geworden heute!" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "'PFFT, WAS IST SO NETTES DARAN?" $) blurbsay
				"'Nichts ist nettes an Zombies!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Du hast recht! Was fur ein schoner Tag fur einen Roadtrip." blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;	

: taste-like
	2nd-char choosechar
	blurbslot 0= if 
		"'Wenn du die Augen schließt, dieses Katessen fast wie Thunfisch schmeckt!" blurbsay
	else
		blurbslot 2 < if
			cattitude+ not if
				($ "Wenn du die Augen schließt, schmeckt es fast wie Scheiße!" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				STAT_MORALE me .stat++
		then then
	then
;
	
: canada-weather
	2nd-char choosechar
	blurbslot 0= if 
		"'Es kann kalt sein in Kanada, aber ich freue mich auf etwas angenehmes Wetter selbst!" blurbsay
	else
		blurbslot 2 < if
			cattitude- if
				($ "'Das ist nicht so, wie wir eine Wahl hatten! Ich hasse kaltes Wetter!" $) blurbsay
				STAT_MORALE 1st-char .stat--
			else
				"'Ich stimme zu, Florida kann manche Male unertraglich sein ohne Klimaanlage." blurbsay
				STAT_MORALE me .stat++
		then then
	then
;
	

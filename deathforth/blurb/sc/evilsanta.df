
: evilsanta-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO" fbold blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "SALGA DE MI CABEZA!" $) blurbsay
			STAT_MORALE me .stat--
			then
		then
	then
;

: evilsanta-christmas
	blurbslot 0= if
		($ ICON_SKULL textclr$ .. me .name@ .. " 'grita algo ininteligible sobre Navidad." .. 0 textclr$ $) blurbevent
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;


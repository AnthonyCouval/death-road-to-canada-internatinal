
: evilsanta-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO" fbold blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "RAUS AUS MEINEM KOPF!" $) blurbsay
			STAT_MORALE me .stat--
			then
		then
	then
;

: evilsanta-christmas
	blurbslot 0= if
		($ ICON_SKULL textclr$ .. me .name@ .. "  schreit etwas Unverstandliches uber Weihnachten." .. 0 textclr$ $) blurbevent
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

	: ESANTA-oneline1 "ICH WERDE RICHTEN WER UNARTIG UND WER ARTIG WAR" ;
	: ESANTA-oneline2 "HU HO HO" ;
	: ESANTA-oneline3 "HO HO HO, HO HO HO" ;
	: ESANTA-oneline4 "ICH WERDE URTEILEN WER ARTIG UND WER UNARTIG WAR" ;

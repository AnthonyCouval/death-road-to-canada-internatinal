
: evilsanta-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE HE" fbold blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "SORTEZ DE MA TETE !" $) blurbsay
			STAT_MORALE me .stat--
			then
		then
	then
;

: evilsanta-christmas
	blurbslot 0= if
		($ ICON_SKULL textclr$ .. me .name@ .. " cris du vide concernant noel." .. 0 textclr$ $) blurbevent
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

	: ESANTA-oneline1 "JE JUGE QUI A ETE MAUVAIS ET QUI A ETE AIMABLE" ;
	: ESANTA-oneline2 "HE HE HE" ;
	: ESANTA-oneline3 "HE HE HE, HE HE HE" ;
	: ESANTA-oneline4 "JE JUGERAI QUI A ETE AIMABLE ET QUI A ETE MECHANT" ;

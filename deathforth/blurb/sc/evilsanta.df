
: evilsanta-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO HO" fbold blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "SAIA DA MINHA CABECA!" $) blurbsay
			STAT_MORALE me .stat--
			then
		then
	then
;

: evilsanta-christmas
	blurbslot 0= if
		($ ICON_SKULL textclr$ .. me .name@ .. " grita algo ininteligivel sobre o Natal." .. 0 textclr$ $) blurbevent
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

	: ESANTA-oneline1 "EU JULGAREI QUEM FOI MAU E QUEM FOI BOM" ;
	: ESANTA-oneline2 "HO HO HO" ;
	: ESANTA-oneline3 "HO HO HO, HO HO HO" ;
	: ESANTA-oneline4 "EU VOU DECIDIR QUEM FOI BOM E QUEM FOI MAU" ;
	: ESANTA-oneline5 "'VOCE VAI FICAR CEGO GAROTO" ;
	: ESANTA-oneline6 "OS BONS FORAM PURGADOS DESTA TERRA E SO OS MAUS RESTAM" ;
	: ESANTA-oneline7 "OS MAUS ANDAM PELA TERRA E SO EU POSSO DETE LOS" ;
	: ESANTA-oneline8 "QUE OS MAUS SEJAM EXPULSOS DESTA TERRA ARRUINADA" ;
	: ESANTA-oneline9 "EU SOU O JUIZ DA HUMANIDADE E UM DIA, SO EU PERMANECEREI NESTA TERRA" ;
	: ESANTA-oneline10 "EU GOSTO DE LEITE E BOLACHAS" ;

	deck-new
		card: ESANTA-oneline1
		card: ESANTA-oneline2
		card: ESANTA-oneline3
		card: ESANTA-oneline4
		card: ESANTA-oneline5
		card: ESANTA-oneline6
		card: ESANTA-oneline7
		card: ESANTA-oneline8
		card: ESANTA-oneline9
		card: ESANTA-oneline10
	constant EVILSANTA-ONELINERS
	EVILSANTA-ONELINERS var evilsanta-oneliners
	EVILSANTA-ONELINERS shuffles to evilsanta-oneliners

: evilsanta-oneliner
	evilsanta-oneliners depths 0= if EVILSANTA-ONELINERS shuffles to evilsanta-oneliners then
	blurbslot 0= if
		drawcard fbold blurbsay
	then
;

	deck-new
		2 cards: evilsanta-hohoho
		card: evilsanta-christmas
	10 cards: evilsanta-oneliner

	constant BLURB-EVILSANTA-DECK
	BLURB-EVILSANTA-DECK var blurb-evilsanta-deck
	BLURB-EVILSANTA-DECK shuffles to blurb-evilsanta-deck
	: DSYP-emote1 "  peida." ;
	: DSYP-emote2 "  peido" ;
	: DSYP-emote3 "  peido" ;
	: DSYP-emote4 "  peido" ;

	deck-new
		card: DSYP-emote1
	(*	card: DSYP-emote2
		card: DSYP-emote3
		card: DSYP-emote4 *)
	constant DSYP-EMOTES
	DSYP-EMOTES var dsyp-emotes	
	DSYP-EMOTES shuffles to dsyp-emotes
	
: dsyp-emote
	dsyp-emotes depths 0= if DSYP-EMOTES shuffles to dsyp-emotes then
	blurbslot 0= if
		qmsg ($ me .name@ .. dsyp-emotes drawcard $) txt
	then
;

: dsyp-fart
	blurbslot 0= if 
		"*peido*" blurbsay
	then
;

	deck-new
	5 cards: ...say
	card: dsyp-fart
	card: dsyp-emote


	constant BLURB-DSYP-DECK
	BLURB-DSYP-DECK var blurb-dsyp-deck
	BLURB-DSYP-DECK shuffles to blurb-dsyp-deck

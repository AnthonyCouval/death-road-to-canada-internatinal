: wrestler-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"La lutte nest pas seulement un sport, cest un art !" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "Lart de gaspiller des meubles !" $) blurbsay
				"La lutte est tellement fausse !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Je suis daccord!" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;

: wrestler-tude1
	2nd-char choosechar
	blurbslot 0= if
		"Y'A PAS DE ZOMBIES QUI PEUVENT ARRETER EL SATAN!" blurbsay
	else
		blurbslot 2 < if
			cattitude- or if
				($ "Pourquoi tu dois toujours tout ecraser?" $) blurbsay
				"Pourquoi ne pas utiliser un flingue ?!" blurbsay
				STAT_MORALE 1st-char .stat++
		else
			"DARN STRAIGHT !" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;


: wrestler-carriedaway
	blurbslot 0= if
		"TEMPS POUR LE FINISHER EL SATAN INFERNO ENFLAMME!" blurbsay
		"Oh, desole, je me suis emporte la." blurbsay
	then
;

: wrestler-beingunmasked
	blurbslot 0= if
		"'Je n'ai vraiment pas peur d'etre mange par des zombs." blurbsay
		"Ma plus grande crainte est detre demasque." blurbsay
		qmsg ($ me .name@ .. "  verse une larme virile." $) txt
	then
;

: wrestler-suethreat
	blurbslot 0= if
		"The EL SATAN ATOMIC PUNCH used to be called the EL SATAN **** ******." blurbsay
		"Jai du le changer quand un autre lutteur a menace de me poursuivre en justice." blurbsay
	then
;


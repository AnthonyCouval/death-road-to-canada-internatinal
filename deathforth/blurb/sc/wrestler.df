: wrestler-sharp1
	2nd-char choosechar
	blurbslot 0= if
		"Lutte n'est pas seulement un sport, c'est une art !" blurbsay
	else
		blurbslot 2 < if
			cwits+ cattitude- or if
				($ "L'art de gaspiller du mobilier !" $) blurbsay
				"Coupe ca, gros nerds !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Matin" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;

: wrestler-tude1
	2nd-char choosechar
	blurbslot 0= if
		"IL N'Y A PAS DE ZOMBIES QUI RETENANT EL SATAN!" blurbsay
	else
		blurbslot 2 < if
			cattitude- or if
				($ "Pourquoi devrez-vous conduire des pieux tout le temps ?" $) blurbsay
				"Pourquoi ne pouvez-vous pas utiliser simplement une arme a feu?!" blurbsay
				STAT_MORALE 1st-char .stat++
		else
			"FAIRE DROITURE !" blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;


: wrestler-carriedaway
	blurbslot 0= if
		"TEMPS POUR LE FINISSEUR INCENDIAIRE DU DIABLE EL SATAN!" blurbsay
		"Je suis desole, je me suis emporte un peu la-dessus." blurbsay
	then
;

: wrestler-beingunmasked
	blurbslot 0= if
		"Je ne suis pas reellement peur d'etre mange par des zombies." blurbsay
		"Ma plus grande peur consiste a etre demasque" blurbsay
		qmsg ($ me .name@ .. " il verse une seule larme masculine." $) txt
	then
;

: wrestler-suethreat
	blurbslot 0= if
		"The EL SATAN ATOMIC PUNCH used to be called the EL SATAN **** ******." blurbsay
		"J'avais a le modifier lorsqu'un autre lutteur a annonce qu'il allait porter plainte." blurbsay
	then
;

	: WRESTLER-oneline1 "Lutter, c'est vraiment une activite reelle aujourd'hui." ;
	: WRESTLER-oneline2 "Esperer realiser un mouvement de lutte qui merite d'etre appele ultime." ;
	: WRESTLER-oneline3 "Nous souhaiterions que les arbitres etaient encore presents pour que les zombies puissent etre disqualifies pour mordre." ;

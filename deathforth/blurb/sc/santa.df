
// Normal Santa deck

: santa-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HE HE HE! HE HE HE! HE HE HE!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "SILENCE, SVP. " .. 1st-char .name@ .. "." $) blurbsay
			STAT_MORALE me .stat--
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

: santa-merrychristmas // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"HO HO HO! MEEEEEERRY CHRISTMAS!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "PEUT-IL LE FAIRE ? " .. 1st-char .name@ .. "!" $) blurbsay
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

	: SANTA-oneline1 "JOYEUX NOEL A TOUS !" ;
	: SANTA-oneline2 "NOUS ALLONS TOUS ACHETER DU LAIT ET DES BISCUITS A L'POLE NORD !" ;
	: SANTA-oneline3 "HE HE HE!" ;
	: SANTA-oneline4 "ESPERONS QUE TOUS LE MONDE A BIEN OBSERVE LES BONNES MANIERES CETTE ANNEE !" ;
	: SANTA-oneline5 "FUYEZ MAINTENANT ! FUYEZ ! FUYEZ TOUS !" ;
	: SANTA-oneline6 "ALLUMONS, COMETE ! ALLUMONS, CUPIDON ! ALLUMONS, DUNDER ET BLIXEM !" ;
	: SANTA-oneline7 "HE HE HE! HE HE HE!" ;
	: SANTA-oneline8 "HE HO, HE HO !" ;
	: SANTA-oneline9 "C'EST LE MEILLEUR NOEL JAMAIS !" ;
	: SANTA-oneline10 "ET BONNE WILLIER ENSEMBLE AUX HOMMES !" ;

	deck-new
		card: SANTA-oneline1
		card: SANTA-oneline2
		card: SANTA-oneline3
		card: SANTA-oneline4
		card: SANTA-oneline5
		card: SANTA-oneline6
		card: SANTA-oneline7
		card: SANTA-oneline8
		card: SANTA-oneline9
		card: SANTA-oneline10
	constant SANTA-ONELINERS
	SANTA-ONELINERS var santa-oneliners
	SANTA-ONELINERS shuffles to santa-oneliners

: santa-oneliner
	santa-oneliners depths 0= if SANTA-ONELINERS shuffles to santa-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;


	deck-new
		card: santa-hohoho
		card: santa-merrychristmas
	10 cards: santa-oneliner

	constant BLURB-SANTA-DECK
	BLURB-SANTA-DECK var blurb-santa-deck
	BLURB-SANTA-DECK shuffles to blurb-santa-deck
	
// END Normal Santa Deck
	
// Sad Santa Deck

: santa-whocares
	blurbslot 0= if
		"WHO EVEN CARES ABOUT CHRISTMAS ANYMORE? NOT ME..." blurbsay
	else
		blurbslot 2 < if 
			rnd5050 if ($ "Ne quitte pas, santa ! reessayons." $) blurbsay 
			else
				me .morale--
			then
		then
	then
;

: santa-allover
	blurbslot 0= if
		"NOEL EST TERMINE DEFINITIVEMENT ! JE ANNULE NOEL DEFINITIVEMENT !" blurbsay
	else
		50 %chance if
			blurbslot 2 < if "EST" blurbsay then
		then
			me .morale--
	then
;

	: SANTA-oneline1-sad "SE SENT COMME UNE NOUVELLE PERSONNE !" ;
	: SANTA-oneline2-sad "RUDOLPH A ETE DEVORE ET JE NE REVIENDRAI JAMAIS AU POLE NORD !" ;
	: SANTA-oneline3-sad "JOYEUX NOEL, PLUTOT JOYEUX POISSON NOEL !" ;
	: SANTA-oneline4-sad "THIS DOESN'T LOOK LIKE CHRISTMAS TO ME..." ;
	: SANTA-oneline5-sad "ho ho ... ho ..." ;
	: SANTA-oneline6-sad "IL N'Y A PLUS DE ESPOIR EN VIEIL PERE NOEL !" ;
	: SANTA-oneline7-sad "AUCUNE PLUS COOKIE POUR SANTA, A PARTIR DE MAINTENANT !" ;
	: SANTA-oneline8-sad "C'EST TOUT CELA PARCE QUE TROP DE PERSONNES ONT ETE MALHEUREUX L'AN DERNIER !" ;
	: SANTA-oneline9-sad "PERSONNE NE DECORE PLUS L'ARBRE ! QUEL EST L'INTERET ?" ;
	: SANTA-oneline10-sad "... ho ho ho ..." ;

	deck-new
		card: SANTA-oneline1-sad
		card: SANTA-oneline2-sad
		card: SANTA-oneline3-sad
		card: SANTA-oneline4-sad
		card: SANTA-oneline5-sad
		card: SANTA-oneline6-sad
		card: SANTA-oneline7-sad
		card: SANTA-oneline8-sad
		card: SANTA-oneline9-sad
		card: SANTA-oneline10-sad
	constant SANTA-ONELINERS-SAD
	SANTA-ONELINERS-SAD var santa-oneliners-sad
	SANTA-ONELINERS-SAD shuffles to santa-oneliners-sad

: santa-oneliner-sad
	santa-oneliners-sad depths 0= if SANTA-ONELINERS-SAD shuffles to santa-oneliners-sad then
	blurbslot 0= if
		drawcard blurbsay
		me .morale--
	then
;


	deck-new
		card: santa-whocares
		card: santa-allover
	10 cards: santa-oneliner-sad

	constant BLURB-SANTA-DECK-SAD
	BLURB-SANTA-DECK-SAD var blurb-santa-deck-sad
	BLURB-SANTA-DECK-SAD shuffles to blurb-santa-deck-sad
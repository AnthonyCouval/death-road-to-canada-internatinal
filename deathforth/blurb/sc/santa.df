
// Normal Santa deck

: santa-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HO HO HO! HO HO HO! HO HO HO!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "CALLA, " .. 1st-char .name@ .. "." $) blurbsay
			STAT_MORALE me .stat--
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

: santa-merrychristmas // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"HO HO HO! MEEEEEERRY CHRISTMAS!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "POCALO, " .. 1st-char .name@ .. "!" $) blurbsay
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

	: SANTA-oneline1 "FELIZ NAVIDAD A TODOS!" ;
	: SANTA-oneline2 "TOoodos a por leche y galletas al Polo Norte!" ;
	: SANTA-oneline3 "JA, JA, JA!" ;
	: SANTA-oneline4 "Espero que todos hayais sido buenos este ano!" ;
	: SANTA-oneline5 "Ahora corred! Corred! Corred todos!" ;
	: SANTA-oneline6 "Arre, cometa! Arre, cupido! Arre, trueno y relampago!" ;
	: SANTA-oneline7 "JA, JA, JA! JA, JA, JA!" ;
	: SANTA-oneline8 "HO, HO, HO!" ;
	: SANTA-oneline9 "Esta es la mejor Navidad de la historia!" ;
	: SANTA-oneline10 "Y buena voluntad hacia los hombres!" ;

	deck-new
		card: SANTA-oneline1
		card: SANTA-oneline2
		card: SANTA-oneline3
		card: SANTA-oneline4
		card: SANTA-oneline5
		card: SANTA-oneline6
		card: SANTA-oneline7
		card: SANTA-oneline8
		card: SANTA-oneline9
		card: SANTA-oneline10
	constant SANTA-ONELINERS
	SANTA-ONELINERS var santa-oneliners
	SANTA-ONELINERS shuffles to santa-oneliners

: santa-oneliner
	santa-oneliners depths 0= if SANTA-ONELINERS shuffles to santa-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;


	deck-new
		card: santa-hohoho
		card: santa-merrychristmas
	10 cards: santa-oneliner

	constant BLURB-SANTA-DECK
	BLURB-SANTA-DECK var blurb-santa-deck
	BLURB-SANTA-DECK shuffles to blurb-santa-deck
	
// END Normal Santa Deck
	
// Sad Santa Deck

: santa-whocares
	blurbslot 0= if
		"WHO EVEN CARES ABOUT CHRISTMAS ANYMORE? NOT ME..." blurbsay
	else
		blurbslot 2 < if 
			rnd5050 if ($ "Santa, no! No te rindas!" $) blurbsay 
			else
				me .morale--
			then
		then
	then
;

: santa-allover
	blurbslot 0= if
		"La Navidad ha terminado para siempre! La cancelo para siempre!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if "NO!" blurbsay then
		then
			me .morale--
	then
;


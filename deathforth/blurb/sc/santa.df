
// Normal Santa deck

: santa-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"'HO HO HO! HO HO HO! HO HO HO!' // Englisch" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "'SHUT UP, ' // Englisch " .. 1st-char .name@ .. "." $) blurbsay
			STAT_MORALE me .stat--
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

: santa-merrychristmas // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"HO HO HO! MEEEEEERRY CHRISTMAS!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "'CAN IT, ' // Englisch " .. 1st-char .name@ .. "!" $) blurbsay
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

	: SANTA-oneline1 "'FROHE WEIHNACHTEN ALLEN!" ;
	: SANTA-oneline2 "'LASS UNS ALLE ZUR MILCH UND Keksen ZUM NORDPOLE GEHEN!" ;
	: SANTA-oneline3 "'HO HO HO!" ;
	: SANTA-oneline4 "'Ich hoffe, ihr seid in diesem Jahr alle artig gewesen!" ;
	: SANTA-oneline5 "'JETZT WEGDAVON! WEGDAVON! WEGDAVON!" ;
	: SANTA-oneline6 "'AUF, Komet! AUF, Kupid! AUF, DUNDER UND BLIXEM!" ;
	: SANTA-oneline7 "'HO HO HO! HO HO HO!" ;
	: SANTA-oneline8 "3x O, 2x H" ;
	: SANTA-oneline9 "'DIES IST DAS BESTE WEIHNACHTEN UBERHAUPT!" ;
	: SANTA-oneline10 "'UND FROHE WEIHNACHTEN FUR ALLE!" ;

	deck-new
		card: SANTA-oneline1
		card: SANTA-oneline2
		card: SANTA-oneline3
		card: SANTA-oneline4
		card: SANTA-oneline5
		card: SANTA-oneline6
		card: SANTA-oneline7
		card: SANTA-oneline8
		card: SANTA-oneline9
		card: SANTA-oneline10
	constant SANTA-ONELINERS
	SANTA-ONELINERS var santa-oneliners
	SANTA-ONELINERS shuffles to santa-oneliners

: santa-oneliner
	santa-oneliners depths 0= if SANTA-ONELINERS shuffles to santa-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;


	deck-new
		card: santa-hohoho
		card: santa-merrychristmas
	10 cards: santa-oneliner

	constant BLURB-SANTA-DECK
	BLURB-SANTA-DECK var blurb-santa-deck
	BLURB-SANTA-DECK shuffles to blurb-santa-deck
	
// END Normal Santa Deck
	
// Sad Santa Deck

: santa-whocares
	blurbslot 0= if
		"WHO EVEN CARES ABOUT CHRISTMAS ANYMORE? NOT ME..." blurbsay
	else
		blurbslot 2 < if 
			rnd5050 if ($ "Santa, nein! Gib nicht auf!" $) blurbsay 
			else
				me .morale--
			then
		then
	then
;

: santa-allover
	blurbslot 0= if
		"'Weihnachten ist fur immer vorbei! Ich sage Weihnachten fur immer ab!'" blurbsay
	else
		50 %chance if
			blurbslot 2 < if "NEIN!" blurbsay then
		then
			me .morale--
	then
;

	: SANTA-oneline1-sad "Trauriges Weihnachten! Trauriges Weihnachten!" ;


// Normal Santa deck

: santa-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HO HO HO! HO HO HO! HO HO HO!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "Bobo, " .. 1st-char .name@ .. "." $) blurbsay
			STAT_MORALE me .stat--
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

: santa-merrychristmas // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"HO HO HO! MEEEEEERRY CHRISTMAS!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "Ta na hora de, " .. 1st-char .name@ .. "!" $) blurbsay
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

	: SANTA-oneline1 "FELIZ NATAL A TODOS!" ;
	: SANTA-oneline2 "VAMOS TODOS IR OBTER LEITE E BISCOITOS NO POLO NORTE!" ;
	: SANTA-oneline3 "HO HO HO!" ;
	: SANTA-oneline4 "'ESPERO QUE TODOS SEJAM BEMAVENTURADOS NESTE ANO NOVO!" ;
	: SANTA-oneline5 "AGORA VA VA VA! VA VA VA TODOS!" ;
	: SANTA-oneline6 "O, COMETA! O, CUPIDADE! O, DUNDER E BLIXEN!" ;
	: SANTA-oneline7 "HO HO HO! HO HO HO!" ;
	: SANTA-oneline8 "HA, HA, HA!" ;
	: SANTA-oneline9 "ESSA E A MELHOR VEZ DE NATAL JA!" ;
	: SANTA-oneline10 "E ESTAS BOAS INTENCoES PARA OS HOMENS!" ;

	deck-new
		card: SANTA-oneline1
		card: SANTA-oneline2
		card: SANTA-oneline3
		card: SANTA-oneline4
		card: SANTA-oneline5
		card: SANTA-oneline6
		card: SANTA-oneline7
		card: SANTA-oneline8
		card: SANTA-oneline9
		card: SANTA-oneline10
	constant SANTA-ONELINERS
	SANTA-ONELINERS var santa-oneliners
	SANTA-ONELINERS shuffles to santa-oneliners

: santa-oneliner
	santa-oneliners depths 0= if SANTA-ONELINERS shuffles to santa-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;


	deck-new
		card: santa-hohoho
		card: santa-merrychristmas
	10 cards: santa-oneliner

	constant BLURB-SANTA-DECK
	BLURB-SANTA-DECK var blurb-santa-deck
	BLURB-SANTA-DECK shuffles to blurb-santa-deck
	
// END Normal Santa Deck
	
// Sad Santa Deck

: santa-whocares
	blurbslot 0= if
		"WHO EVEN CARES ABOUT CHRISTMAS ANYMORE? NOT ME..." blurbsay
	else
		blurbslot 2 < if 
			rnd5050 if ($ "'Santa, nao! Nao desiste!" $) blurbsay 
			else
				me .morale--
			then
		then
	then
;

: santa-allover
	blurbslot 0= if
		"'O NATAL ACABOU FOREVER! CANCELAR O NATAL FOREVER!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if "NaO!" blurbsay then
		then
			me .morale--
	then
;

	: SANTA-oneline1-sad "TRISTE NATAL! TRISTE NATAL!" ;
	: SANTA-oneline2-sad "'RUDOLFO FICOU COMIDO E NUNCA VOU RETORNAR PARA O POLO NORTE!" ;
	: SANTA-oneline3-sad "'FELIZ NATAL, MAIS COMO FELIZ PEIXENATAL!'" ;
	: SANTA-oneline4-sad "THIS DOESN'T LOOK LIKE CHRISTMAS TO ME..." ;
	: SANTA-oneline5-sad "ho ho ... ho ..." ;
	: SANTA-oneline6-sad "NaO HA MAIS ESPERANCA NO VELHO PAPAI NOEL!" ;
	: SANTA-oneline7-sad "NUNCA MAIS BISCOITOS PARA O PAPAI NOEL, NUNCA MAIS!" ;
	: SANTA-oneline8-sad "TUDO ISSO PORQUE MUITA GENTE FOI MALCRIADA ANO PASSADO!" ;
	: SANTA-oneline9-sad "NINGUEM MAIS DECORA A ARVORE! QUEM SE IMPORTA?" ;
	: SANTA-oneline10-sad "... ho ho ho ..." ;

	deck-new
		card: SANTA-oneline1-sad
		card: SANTA-oneline2-sad
		card: SANTA-oneline3-sad
		card: SANTA-oneline4-sad
		card: SANTA-oneline5-sad
		card: SANTA-oneline6-sad
		card: SANTA-oneline7-sad
		card: SANTA-oneline8-sad
		card: SANTA-oneline9-sad
		card: SANTA-oneline10-sad
	constant SANTA-ONELINERS-SAD
	SANTA-ONELINERS-SAD var santa-oneliners-sad
	SANTA-ONELINERS-SAD shuffles to santa-oneliners-sad

: santa-oneliner-sad
	santa-oneliners-sad depths 0= if SANTA-ONELINERS-SAD shuffles to santa-oneliners-sad then
	blurbslot 0= if
		drawcard blurbsay
		me .morale--
	then
;


	deck-new
		card: santa-whocares
		card: santa-allover
	10 cards: santa-oneliner-sad

	constant BLURB-SANTA-DECK-SAD
	BLURB-SANTA-DECK-SAD var blurb-santa-deck-sad
	BLURB-SANTA-DECK-SAD shuffles to blurb-santa-deck-sad
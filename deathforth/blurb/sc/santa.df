
// Normal Santa deck

: santa-hohoho
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"HO HO HO! HO HO HO! HO HO HO!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "SHUT UP, " .. 1st-char .name@ .. "." $) blurbsay
			STAT_MORALE me .stat--
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

: santa-merrychristmas // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"HO HO HO! MEEEEEERRY CHRISTMAS!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if ($ "CAN IT, " .. 1st-char .name@ .. "!" $) blurbsay
			then
		else
			STAT_MORALE me .stat++
		then
	then
;

	: SANTA-oneline1 "FELIZ NAVIDAD A TODOS!" ;
	: SANTA-oneline2 "VAMOS TODOS A CONSEGUIR LECHE Y GALLETAS EN EL POLO NORTE!" ;
	: SANTA-oneline3 "JAJAJA!" ;
	: SANTA-oneline4 "'ESPERO QUE TODOS HAYAN SIDO BUENOS ESTE ANO!" ;
	: SANTA-oneline5 "AHORA CORRE! CORRE! CORRE TODO!" ;
	: SANTA-oneline6 "ADELANTE, COMETA! ADELANTE, CUPIDO! ADELANTE, DUNDER Y BLIXEM!" ;
	: SANTA-oneline7 "HO HO HO! HO HO HO!" ;
	: SANTA-oneline8 "JO, JO, JO!" ;
	: SANTA-oneline9 "ESTA ES LA MEJOR NAVIDAD DE TODAS!" ;
	: SANTA-oneline10 "Y BUENA VOLUNTAD HACIA LOS HOMBRES!" ;

	deck-new
		card: SANTA-oneline1
		card: SANTA-oneline2
		card: SANTA-oneline3
		card: SANTA-oneline4
		card: SANTA-oneline5
		card: SANTA-oneline6
		card: SANTA-oneline7
		card: SANTA-oneline8
		card: SANTA-oneline9
		card: SANTA-oneline10
	constant SANTA-ONELINERS
	SANTA-ONELINERS var santa-oneliners
	SANTA-ONELINERS shuffles to santa-oneliners

: santa-oneliner
	santa-oneliners depths 0= if SANTA-ONELINERS shuffles to santa-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;


	deck-new
		card: santa-hohoho
		card: santa-merrychristmas
	10 cards: santa-oneliner

	constant BLURB-SANTA-DECK
	BLURB-SANTA-DECK var blurb-santa-deck
	BLURB-SANTA-DECK shuffles to blurb-santa-deck
	
// END Normal Santa Deck
	
// Sad Santa Deck

: santa-whocares
	blurbslot 0= if
		"WHO EVEN CARES ABOUT CHRISTMAS ANYMORE? NOT ME..." blurbsay
	else
		blurbslot 2 < if 
			rnd5050 if ($ "'Santa, no! No te rindas!" $) blurbsay 
			else
				me .morale--
			then
		then
	then
;

: santa-allover
	blurbslot 0= if
		"'LA NAVIDAD SE ACABO PARA SIEMPRE! CANCELARE LA NAVIDAD PARA SIEMPRE!" blurbsay
	else
		50 %chance if
			blurbslot 2 < if "NO!" blurbsay then
		then
			me .morale--
	then
;

	: SANTA-oneline1-sad "TRISTE NAVIDAD! TRISTE NAVIDAD!" ;
	: SANTA-oneline2-sad "'RUDOLPH FUE COMIDO Y NUNCA REGRESARE AL POLO NORTE!" ;
	: SANTA-oneline3-sad "FELIZ NAVIDAD, MAS BIEN FELIZ NAVIDAD!" ;
	: SANTA-oneline4-sad "THIS DOESN'T LOOK LIKE CHRISTMAS TO ME..." ;
	: SANTA-oneline5-sad "ho ho ... ho ..." ;
	: SANTA-oneline6-sad "'NO HAY MAS ESPERANZA EN EL VIEJO SANTA!" ;
	: SANTA-oneline7-sad "NO MAS GALLETAS PARA SANTA, NUNCA MAS!" ;
	: SANTA-oneline8-sad "TODO ESTO ES PORQUE DEMASIADA GENTE SE PORTO MAL EL ANO PASADO!" ;
	: SANTA-oneline9-sad "NADIE DECORA EL ARBOL! A QUIEN LE IMPORTA?" ;
	: SANTA-oneline10-sad "... ho ho ho ..." ;

	deck-new

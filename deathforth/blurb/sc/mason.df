: mason-stareat
	blurbslot 0= if 
		solo if 
			($ "fixe le vide en particulier tout en aiguisant sa machette." $) blurbdo 
		then;
		($ "fixe " ..  2nd-char .name@ .. "  tout en aiguisant sa machette." $) blurbdo
	else
		blurbslot 2 < if
			50 %chance if
				($ "Uhhh... crap." $) blurbsay
			else
				($ "se tortille dinconfort." $) blurbdo
			then
			99 %chance if 
				($ "continue de regarder." $) 1st-char .blurbdo
			else
				($ "'SALUT JE SUIS MASON MOORHIZ" $) 1st-char .blurbsay
			then
			STAT_MORALE me .stat--
		then
	then
;

	: MASON-oneline1 "  regarde silencieusement." ;

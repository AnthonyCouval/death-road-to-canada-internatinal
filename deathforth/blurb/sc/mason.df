: mason-stareat
	blurbslot 0= if 
		solo if 
			($ "mira para nada em particular enquanto afina seu machete." $) blurbdo 
		then;
		($ "mira para " ..  2nd-char .name@ .. " enquanto afiava seu facao." $) blurbdo
	else
		blurbslot 2 < if
			50 %chance if
				($ "Uhhh... crap." $) blurbsay
			else
				($ "se contorce de desconforto" $) blurbdo
			then
			99 %chance if 
				($ "continua encarando." $) 1st-char .blurbdo
			else
				($ "'OI EU SOU MASON MOORHIZ" $) 1st-char .blurbsay
			then
			STAT_MORALE me .stat--
		then
	then
;


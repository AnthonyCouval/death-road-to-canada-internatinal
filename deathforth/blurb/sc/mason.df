: mason-stareat
	blurbslot 0= if 
		solo if 
			($ "fissa il vuoto mentre affila il suo machete." $) blurbdo 
		then;
		($ "fissa " ..  2nd-char .name@ .. "  mentre affila il suo machete." $) blurbdo
	else
		blurbslot 2 < if
			50 %chance if
				($ "Uhhh... crap." $) blurbsay
			else
				($ "si contorce a disagio." $) blurbdo
			then
			99 %chance if 
				($ "continua a fissare." $) 1st-char .blurbdo
			else
				($ "'CIAO SONO MASON MOORHIZ" $) 1st-char .blurbsay
			then
			STAT_MORALE me .stat--
		then
	then
;

	: MASON-oneline1 "  fissa silenziosamente." ;

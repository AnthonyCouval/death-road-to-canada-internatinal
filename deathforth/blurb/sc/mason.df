: mason-stareat
	blurbslot 0= if 
		solo if 
			($ "se queda mirando a la nada en particular mientras afila su machete." $) blurbdo 
		then;
		($ "mira fijamente a " ..  2nd-char .name@ .. " mientras afilaba su machete." $) blurbdo
	else
		blurbslot 2 < if
			50 %chance if
				($ "Uhhh... crap." $) blurbsay
			else
				($ "se retuerce de incomodidad." $) blurbdo
			then
			99 %chance if 
				($ "continua mirando fijamente." $) 1st-char .blurbdo
			else
				($ "'HOLA SOY MASON MOORHIZ" $) 1st-char .blurbsay
			then
			STAT_MORALE me .stat--
		then
	then
;


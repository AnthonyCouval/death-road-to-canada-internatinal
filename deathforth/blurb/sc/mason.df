: mason-stareat
	blurbslot 0= if 
		solo if 
			($ "mira hacia nada en particular mientras afila su machete." $) blurbdo 
		then;
		($ "mira a " ..  2nd-char .name@ .. " ' mientras afila su machete." $) blurbdo
	else
		blurbslot 2 < if
			50 %chance if
				($ "Uhhh... crap." $) blurbsay
			else
				($ "se retuerce incomodo." $) blurbdo
			then
			99 %chance if 
				($ "sigue mirando." $) 1st-char .blurbdo
			else
				($ "HOLA SOY MASON MOORHIZ" $) 1st-char .blurbsay
			then
			STAT_MORALE me .stat--
		then
	then
;


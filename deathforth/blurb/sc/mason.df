: mason-stareat
	blurbslot 0= if 
		solo if 
			($ "'stiert ins Leere und scharft seinen Machete." $) blurbdo 
		then;
		($ "'stiert auf " ..  2nd-char .name@ .. " ' wahrend er seinen Machete scharft." $) blurbdo
	else
		blurbslot 2 < if
			50 %chance if
				($ "Uhhh... crap." $) blurbsay
			else
				($ "' windet sich vor Unbehagen." $) blurbdo
			then
			99 %chance if 
				($ "'setzt sein Starren fort." $) 1st-char .blurbdo
			else
				($ "'Hallo, ich bin MASON MOORHIZ" $) 1st-char .blurbsay
			then
			STAT_MORALE me .stat--
		then
	then
;

	: MASON-oneline1 " ' stiert still." ;

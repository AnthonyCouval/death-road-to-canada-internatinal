
: tlb-pumped
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"WERDE PUMPED! WERDE PUMPED!!" fbold blurbsay
	else
		blurbslot 2 < if 
			($ "AUUUUUURRRRRGH!" $) blurbsay
			me .strength++ 
			me .morale2+
		then
	then
;


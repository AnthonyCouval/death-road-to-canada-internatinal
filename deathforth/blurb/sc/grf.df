: grf-hatemondays
	blurbslot 0= if
		"ODIO I LUNEDI" blurbsay
		"MA *attutito* ODIO ME STESSO" blurbsay
	then
;

: grf-suitsmell
	blurbslot 0= if
		qmsg ($ me .name@ .. "  emette un terribile odore." $) txt
	else
		blurbslot 2 < if
			50 %chance if
				($ "Lava tua vestito gia!" $)
			else
				($ "Agh! Perche devo stare accanto a te?" $) 
			then
			blurbsay STAT_MORALE me .stat--
		then	
	then
;

: grf-megasmell 
	blurbslot 0= if
		qmsg ($ me .name@ .. "  emana un odore indescrivibile." $) txt
	else
		STAT_MORALE me .stat--
	then
;


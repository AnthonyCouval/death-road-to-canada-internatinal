	constant GRF-ONELINERS
	GRF-ONELINERS var grf-oneliners
	GRF-ONELINERS shuffles to grf-oneliners

: grf-oneliner
	grf-oneliners depths 0= if GRF-ONELINERS shuffles to grf-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;

	: GRF-emote1 " prende pezzi di sporcizia dal fursuit." ;
	: GRF-emote2 "  guarda allontanato nello spazio." ;
	: GRF-emote3 "  inizia a piangere." ;
	: GRF-emote4 " accarezza il suo fursuit." ;
	
	deck-new
		card: GRF-emote1
		card: GRF-emote2
		card: GRF-emote3
		card: GRF-emote4

	constant GRF-EMOTES
	GRF-EMOTES var GRF-emotes
	GRF-EMOTES shuffles to GRF-emotes

: GRF-emote
	GRF-emotes depths 0= if GRF-EMOTES shuffles to GRF-emotes then
	blurbslot 0= if
		qmsg ($ me .name@ .. GRF-emotes drawcard $) txt
	then
;

	deck-new
	card: grf-hatemondays
	card: grf-suitsmell
	card: grf-megasmell
	10 cards: grf-oneliner
	4 cards: GRF-emote
	
	constant BLURB-GRF-DECK

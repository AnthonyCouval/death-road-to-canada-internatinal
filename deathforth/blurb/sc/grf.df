: grf-hatemondays
	blurbslot 0= if
		"JE DETESTE LUNDIS" blurbsay
		"Moi, je deteste moi-meme." blurbsay
	then
;

: grf-suitsmell
	blurbslot 0= if
		qmsg ($ me .name@ .. " emet un parfum desagreable a terroriser." $) txt
	else
		blurbslot 2 < if
			50 %chance if
				($ "Lavez deja votre costume !" $)
			else
				($ "Desole, je n'ai pas le choix. je suis oblige de etre a cote de toi." $) 
			then
			blurbsay STAT_MORALE me .stat--
		then	
	then
;

: grf-megasmell 
	blurbslot 0= if
		qmsg ($ me .name@ .. " emet une odeur indescriptible." $) txt
	else
		STAT_MORALE me .stat--
	then
;


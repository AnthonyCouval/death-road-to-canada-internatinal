: grf-hatemondays
	blurbslot 0= if
		"ODIO LOS LUNES" blurbsay
		"PERO *amordazado* ME ODIO A MI MISMO" blurbsay
	then
;

: grf-suitsmell
	blurbslot 0= if
		qmsg ($ me .name@ .. "  emite un olor terrible." $) txt
	else
		blurbslot 2 < if
			50 %chance if
				($ "Lavate el traje ya!" $)
			else
				($ "Tengo que estar a tu lado?" $) 
			then
			blurbsay STAT_MORALE me .stat--
		then	
	then
;

: grf-megasmell 
	blurbslot 0= if
		qmsg ($ me .name@ .. " suena un olor indescribible." $) txt
	else
		STAT_MORALE me .stat--
	then
;

	: GRF-oneline1 "*sonidos muffled a traves de la cabeza de fursuit*" ;
	: GRF-oneline2 "*ruidos guturales confusos*" ;
	: GRF-oneline3 "*muffled* HRRRRRRRRRRRNG" ;
	: GRF-oneline4 "*ruidos de gemidos heridos muffleds*" ;
	: GRF-oneline5 "*muffled* ... LOVE LASAGA [sic] ..." ;
	: GRF-oneline6 "I'M... UNHAPPY... JON" ;
	: GRF-oneline7 "... I FREAKING HATE [word that sounds like MONDAYS?] ..." ;
	: GRF-oneline8 "*ruidos de toser muffleds*" ;
	: GRF-oneline9 "*gruntes ininteligibles a traves de la fursuit*" ;
	: GRF-oneline10 "*ruidos extranos muffleds*" ;

	deck-new
		card: GRF-oneline1
		card: GRF-oneline2
		card: GRF-oneline3
		card: GRF-oneline4
		card: GRF-oneline5
		card: GRF-oneline6
		card: GRF-oneline7
		card: GRF-oneline8
		card: GRF-oneline9
		card: GRF-oneline10
	constant GRF-ONELINERS
	GRF-ONELINERS var grf-oneliners
	GRF-ONELINERS shuffles to grf-oneliners

: grf-oneliner
	grf-oneliners depths 0= if GRF-ONELINERS shuffles to grf-oneliners then
	blurbslot 0= if
		drawcard blurbsay
	then
;

	: GRF-emote1 "  recoge trozos de suciedad del fursuit." ;
	: GRF-emote2 " mira vacio." ;
	: GRF-emote3 " comienza a llorar." ;
	: GRF-emote4 " toca su fursuit." ;
	
	deck-new
		card: GRF-emote1
		card: GRF-emote2
		card: GRF-emote3
		card: GRF-emote4

	constant GRF-EMOTES
	GRF-EMOTES var GRF-emotes
	GRF-EMOTES shuffles to GRF-emotes

: GRF-emote
	GRF-emotes depths 0= if GRF-EMOTES shuffles to GRF-emotes then
	blurbslot 0= if
		qmsg ($ me .name@ .. GRF-emotes drawcard $) txt
	then
;

	deck-new
	card: grf-hatemondays
	card: grf-suitsmell
	card: grf-megasmell
	10 cards: grf-oneliner
	4 cards: GRF-emote
	
	constant BLURB-GRF-DECK
	BLURB-GRF-DECK var blurb-grf-deck
	BLURB-GRF-DECK shuffles to blurb-grf-deck

: make-it
	2nd-char choosechar
	blurbslot 0= if 
		"'Wir schaffen es nie bis nach Kanada!" blurbsay
	else
		cattitude+ if
			blurbslot 2 < if 
				($ "'We can do it. It's definitely possible.' " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: negative-tude
2nd-char choosechar
	blurbslot 0= if
		"Warum Kanada? Es kann doch nicht sein, dass es weiter nordlich besser wird." blurbsay
	else
		blurbslot 2 < if
			cattitude- not if
				($ "'Ich bin etwas ermudet von deiner negativen Einstellung, ', " .. 1st-char .name@ .. "." $) blurbsay
				"'Halt auf oder geh weg!" blurbsay
				STAT_MORALE 1st-char .stat--
			else
				"'Vielleicht hast du recht, aber das konnte die beste Option sein, die wir haben." blurbsay
				STAT_MORALE 1st-char .stat++
			then 
		then
	then
;		

: pessimist-somebullcrap
	blurbslot 0= if // Conversation starter, then everyone in party responds
		"'Das ist doch totaler Schwachsinn." blurbsay
	else
		rnd5050 if
			blurbslot 2 < if ($ "Ich stimme zu " .. 1st-char .name@ .. "." $) blurbsay
			then
		else
			STAT_MORALE me .stat--
		then
	then
;

: pessimist-whinetopic 1 12 rnd case
	1 of "'Zombies" endof
	2 of "'sie sind schmutzig" endof
	3 of "'das Wetter" endof
	4 of "'Kafer" endof
	5 of "'wie jeder ein Arschloch ist" endof
	6 of ($ me .name@ .. "'sein Vater" $) endof
	7 of "'Montags" endof
	8 of "'ihr Waffen" endof
	9 of "'Wie Menschen riechen" endof
	10 of "'dass man das Toilettengang benutzen muss" endof
	11 of "'wie lang die Fahrt ist" endof
	12 of "'dass man verpflegen muss, was aus Dosen kommt" endof
	endcase ;

: pessimist-whiner // Picks two other people, lowers their morale
	blurbslot 0= if
		qmsg ($ me .name@ .. " 'jammert unaufhorlich daruber, dass " .. pessimist-whinetopic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat--
		then
	then
;

: pessimist-brooding
	blurbslot 0= if
		qmsg ($ me .name@ .. " broods about a tragic past....." $) txt
	else
		blurbslot 2 < if
			rnd5050 if
			qmsg ($ me .name@ .. " 'tut stellenweise heftiges Augenrollen." $) txt then
		then
	then
;


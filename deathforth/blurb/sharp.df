: sharp-topic 1 7 rnd case
	1 of "die Wichtigkeit des Waschens deiner Hande" endof
	2 of "die Bedeutung von kochendem Wasser" endof
	3 of "wie man Mobel richtig hebt" endof
	4 of "die besten Methoden um Konserven zu offnen" endof
	5 of "'warum man Fremden nicht trauen sollte" endof
	6 of "schussplatzierung um Munition zu sparen" endof
	7 of "die Wichtigkeit steriler medizinischer Versorgung" endof
	endcase ;

: sharp-advice
	blurbslot 0= if
		qmsg ($ me .name@ .. "  redet uber " .. sharp-topic .. "." $) txt
	else
		blurbslot 3 < if
			STAT_MORALE me .stat++
		then
	then
;

: boring-stuff
	2nd-char choosechar
	blurbslot 0= if
		"Wir mussen alle unsere Vorrate inventarisieren!" blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "FUR DIESE ART VON LANGWEILIGEM ZEUG HABEN WIR KEINE ZEIT!" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Sicher, vielleicht, wenn wir etwas mehr Zeit haben, " .. 1st-char .name@ .. "." $) blurbsay
			
		then then
	then
;

: useful-info
	blurbslot 0= if
		"Wenn du dir eine Schnur ganz fest um den Finger bindest wird dein Finger lila!" blurbsay
	else
		blurbslot 2 < if
			// sc-pick 0= works to check if there's a character in there or not, but I have no idea why. If it's the right character, printing it out says their phrase like Gnomey's "'Du bist ein DINKUS!". If it's the wrong character, checking by printing either does a blank line or an underflow error. So not sure how this logic works with 0=, especially since there's no false in sc-pick.
			sc-pick 0= if
				rnd5050 if
					// Similarly I'm not sure how this works either. It's also checking sc-pick. Does it count as 1 if there's simply any text in there? If so, why isn't it sc-pick 1 = above, too? 
					screply- 1 = if	1st-char .morale-- then;
				else
					// screply is neutral response, screply+ is happy, screply- is angry/sad. May expand on this later, but I like how this part turned out.
					screply+ 1 = if	1st-char .morale++ then;
				then
			then
			rnd5050 if
				($ "Warum sollte ich das wissen mussen, " .. 1st-char .name@ .. "?" $) blurbsay
				"WEN KUMMERTS?" blurbsay
				1st-char .morale--
			else
				"Gut zu wissen, danke!" blurbsay
				me .morale++
			then 
		then
	then
;

: snare-trap
	2nd-char choosechar
	blurbslot 0= if
		"Das nachste Mal wenn wir anhalten sollte ich dir zeigen wie man Schnappfallen baut." blurbsay
	else
		blurbslot 2 < if
			screply 1 = if exit then
			ctemper- if
				($ "Vielleicht sollte ich dir das nachste Mal zeigen wie man die Falle halt!" $) blurbsay
				1st-char .morale--
			else
				($ "Klingt gut fur mich, " .. 1st-char .name@ .. "." $) blurbsay
		then then
	then
;

: sharp-too-swole
	blurbslot 0= if
		"Kann irgendein Mensch wirklich zu sehr durchtrainiert sein?" blurbsay
	else
		blurbslot 2 < if
			rnd5050 if
				($ "Woruber redest du uberhaupt?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"ZU SEHR DURCHTRAINIERT, UM KONTROLLIERT ZU WERDEN, BABY. WUU!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat++
		then then
	then
;

: sharp-dull1
2nd-char choosechar
	blurbslot 0= if
		"Wenn wir Solarmodule und ein paar Batterien bekommen konnten, konnte es nutzlich sein." blurbsay
	else
		blurbslot 2 < if
			cwits- if
				($ "Tolle Idee, " .. 1st-char .name@ .. "!" $) blurbsay
				"Ich konnte meine Videospielkonsole daran anschlieen!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Dann lasst uns die Augen offen halten. Ich kann mir vorstellen dass so etwas nutzlich sein konnte." blurbsay
		then then
	then
;

: sharp-aggressive1
2nd-char choosechar
	blurbslot 0= if
		"Achte beim Fahren darauf beide Hande am Lenkrad zu haben! " blurbsay
	else
		blurbslot 2 < if
			ctemper- if
				($ "Halt die Klappe, " .. 1st-char .name@ .. "!" $) blurbsay
				"Wie soll ich sonst gleichzeitig auf Zombies schieen?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Na gut, was auch immer!" blurbsay
			STAT_MORALE me .stat--
		then then
	then
;


: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Quizas deberiamos ignorar la proxima ciudad?" blurbsay
		"Creo que ya tenemos suficientes suministros." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NO, NECESITAMOS MAS MUNICION PARA PODER DISPARAR A MAS ZOMBIES!" $) blurbsay
				"NUNCA PODEMOS TENER SUFICIENTES BALAS, NUNCA PODEMOS DISPARAR A SUFICIENTES ZOMBIES!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "'Eso podria ser lo mejor, veremos como estamos haciendo en los suministros para entonces." $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Quizas deberia esperar en el auto la proxima vez que paremos en un pueblo para, eh, sostener el fuerte?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "'Que? No quieres ir a aplastar zombies?" $) blurbsay
				"'QUE PASA CONTIGO? ESTAS ASUSTADO O ALGO?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Si, claro. Como sea." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Quizas deberias callarte!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"Podriamos ir un poco mas despacio?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "Podrias callarte un poco?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Claro, lo que sea." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Vielleicht sollten wir die nachste Stadt einfach ignorieren?" blurbsay
		"Ich denke, wir haben schon genug Vorrate." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NEIN, WIR BRAUCHEN MEHR MUNITION, DAMIT ICH MEHR ZOMBIES ERSCHIESSEN KANN!" $) blurbsay
				"D" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Das ist vielleicht das Beste, wir werden sehen, wie es um unsere Vorrate steht, wenn es soweit ist." $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Vielleicht sollte ich das nachste Mal im Auto warten, wenn wir in einer Stadt anhalten, um die Stellung zu halten?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "'Was? Du willst nicht hinterhergehen und Zombies zerschmettern?" $) blurbsay
				"'ABER WAS IST DAS FUR DIR, DASS SIE SCHWACHER SEIN SIND ODER ETWAS?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "'Ja, sicher. Nichts daran." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Vielleicht solltest du einfach mal die Klappe halten!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"'Konnten wir etwas langsamer fahren?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "'Konnte man ein bisschen leiser sprechen?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"'Ja, sicher. Nichts daran." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


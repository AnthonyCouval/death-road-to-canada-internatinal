: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Talvez devessemos simplesmente ignorar a proxima cidade?" blurbsay
		"Acho que ja temos suprimentos suficientes." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NAO, PRECISAMOS DE MAIS MUNICAO PARA QUE EU POSSA ATIRAR EM MAIS ZUMBIS!" $) blurbsay
				"NUNCA PODEMOS TER BALAS SUFICIENTES, NUNCA PODEMOS ATIRAR EM ZUMBIS SUFICIENTES!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "'Isso pode ser o melhor, veremos como estamos nos suprimentos ate la." $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Talvez eu devesse esperar no carro da proxima vez que pararmos em uma cidade para, tipo, segurar o forte?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "'O que? Voce nao quer esmagar alguns zumbis?" $) blurbsay
				"'O QUE HA DE ERRADO COM VOCE? VOCE ESTA COM MEDO OU ALGO ASSIM?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Sim, claro. Tanto faz." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Talvez voce deva ficar quieto!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"Sera que poderiamos ir um pouco mais devagar?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "Voce poderia calar a boca um pouco?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Claro, tanto faz." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


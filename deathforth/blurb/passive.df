: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Talvez devessemos ignorar a proxima cidade?" blurbsay
		"Eu acho que ja temos suprimentos suficientes." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NaO, PRECISAMOS DE MAIS MUNICaO PARA QUE EU POSSA ATIRAR MAIS ZUMBIS!" $) blurbsay
				"'NUNCA PODEMOS TER BULLETS SUFICIENTES, NUNCA PODEMOS MATAR ZUMBIS SUFICIENTES!'" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "'Pode ser o melhor, veremos como estamos em suprimentos ate la.'" $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Talvez eu deva esperar no carro na proxima vez que pararmos em uma cidade para, uh, segurar o forte?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "'O que? Voce nao quer esmagar alguns zumbis?" $) blurbsay
				"'O QUE HA DE ERRADO COM VOCE? VOCE ESTA COM MEDO OU ALGO ASSIM?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Sim, claro. Tanto faz." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Talvez voce devesse calar a boca!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"Sera que da pra diminuir um pouco?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "Da pra voce calar a boca um pouco?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Claro, tanto faz." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


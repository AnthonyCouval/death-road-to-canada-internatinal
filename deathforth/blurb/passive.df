: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Forse dovremmo semplicemente ignorare la prossima citta?" blurbsay
		"Penso che abbiamo gia abbastanza rifornimenti." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NO, ABBIAMO BISOGNO DI PIU MUNIZIONI COSI POSSO SPARARE A PIU ZOMBIE!" $) blurbsay
				"NON SI POSSONO MAI AVERE ABBASTANZA PROIETTILI, NON SI POSSONO MAI SPARARE ABBASTANZA ZOMBIE!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "'Forse e meglio cosi, vedremo come andra con le scorte da qui a li." $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Forse dovrei aspettare in macchina la prossima volta che ci fermiamo in una citta per uh, tenere la fortezza?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "'Cosa? Non vuoi andare a fracassare qualche zombie?" $) blurbsay
				"'COSA C'E CHE NON VA IN TE? HAI PAURA O QUALCOSA?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Si, certo. Come vuoi." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Forse dovresti tacere!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"Potremmo rallentare un po?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "Potresti stare un po zitto?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Certo, come vuoi." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


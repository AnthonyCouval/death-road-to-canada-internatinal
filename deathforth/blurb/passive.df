: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Peut etre devrions nous simplement ignorer la prochaine ville ?" blurbsay
		"Je pense que nous avons deja suffisamment de fournitures." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NON, NOUS AVONS BESOIN DE PLUS DE MUNITIONS POUR QUE JE PUISSE TIRER SUR PLUS DE ZOMBIES !" $) blurbsay
				"ON NE PEUT JAMAIS AVOIR ASSEZ DE BALLES, ON NE PEUT JAMAIS TIRER SUR ASSEZ DE ZOMBIES !" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "'C'est peut etre pour le mieux, nous verrons comment nous nous en sortirons avec les fournitures d'ici la." $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Peut etre devrais je attendre dans la voiture la prochaine fois que nous nous arreterons dans une ville pour, euh, tenir le fort ?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "'Quoi ? Tu ne veux pas aller ecraser des zombies ?" $) blurbsay
				"'QU'EST CE QUI NE VA PAS AVEC TOI ? TU AS PEUR OU QUOI ?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Ouais, bien sur. Comme tu veux." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Peut etre que tu devrais la fermer !" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"Pourrions nous ralentir un peu ?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "Pourrais tu te taire un peu?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Oui, peu importe." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


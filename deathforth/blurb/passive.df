: ignore-town
	2nd-char choosechar
	blurbslot 0= if
		"Tal vez deberiamos ignorar la proxima ciudad?" blurbsay
		"Creo que ya tenemos suficientes suministros." blurbsay
	else
		blurbslot 2 < if
			ctemper- cwits- or if
				($ "NO, NECESITAMOS MAS MUNICION PARA QUE YO PUEDA DISPARAR MAS ZOMBIES" $) blurbsay
				"JAMAS HAY SUFICIENTES BALAS, JAMAS HAY SUFICIENTES ZOMBIES PARA DISPARAR!" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Quizas seria lo mejor, veremos como estamos en suministros para entonces." $) blurbsay
			STAT_MORALE 1st-char .stat++
			
		then then
	then
;

: leave-mein
	2nd-char choosechar
	blurbslot 0= if
		"Quizas deberia esperar en el auto la proxima vez que paremos en una ciudad para, eh, mantener la posicion?" blurbsay
	else
		blurbslot 2 < if
			ctemper-  if
				($ "Que? No quieres ir a aplastar algunos zombis?" $) blurbsay
				"QUE TE PASA? TIENES MIEDO O ALGO?" blurbsay
				STAT_MORALE 1st-char .stat--
		else
			($ "Si, claro. Como quieras." $) blurbsay
			
		then then
	then
;

: passive-turnback // Random first person, random single responder, stuff happens.
	blurbslot 0= if
		"Maybe we should turn back..." blurbsay
	else
		blurbslot 2 < if
			"Tal vez debas callar!" blurbsay
			STAT_MORALE me .stat++
			STAT_MORALE 1st-char .stat--
		then
	then
;

: slow-down
	2nd-char choosechar
	blurbslot 0= if
		"Podriamos ir un poco mas lentos?" blurbsay
	else
		blurbslot 2 < if
			ctemper+ not if
				($ "Podrias hablar un poco menos?" $) blurbsay
				STAT_MORALE 1st-char .stat--
		else
			"Claro, como quieras." blurbsay
			STAT_MORALE 1st-char .stat++
		then then
	then
;		


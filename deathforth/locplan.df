: get-a-loc loc-pick-stack
	depths 0= if loc-pick-stack-base shuffles to loc-pick-stack then
pops nip ;

: get-a-loc-easy easyloc-pick-stack
	depths 0= if easyloc-pick-stack-base shuffles to easyloc-pick-stack then
pops nip ;

: explorer-pick
	explorer? if drop 3 else drop 
		10 %chance if 3 else 2 then
	then 
;

: pick-3-locs 
	explorer-pick stack sizes for get-a-loc shove next to 3-loc-stack
	cyoa-3-locs
;

: pick-3-locs-easy 3 stack sizes for get-a-loc-easy shove next to 3-loc-stack
	cyoa-3-locs
;

: locpick-redrawcost road{ car-guzzle 2.5 * } >int ;

: explorer-redrawcost 
	gstats{ perk-explorer } 3 >= if
		road{ car-guzzle 1.5 * } >int
	else 
		gstats{ perk-explorer } 2 >= if
			road{ car-guzzle 2 * } >int
		else
			locpick-redrawcost
		then
	then
;

: locpick-repick
	cyoa-start
	"Conduire partout." cyoa-title!
	($ Thegroup .. " decide de bruler du gaz pour esperer trouver des lieux plus interessants. " .. gThey .. " trouver" .. g1s .. " nouvelles localisations : " $) text!
	locpick-redrawcost -1 * trunk-gas+ -1 car-tune+
	pick-3-locs
	gas-skip
;

: explorer-repick
	cyoa-start
	"Exploration soignee" cyoa-title!
	($ Thegroup .. " prend plus de temps a explorer. " .. gThey .. " trouver" .. g1s .. " nouvelles localisations : " $) text!
	explorer-redrawcost -1 * trunk-gas+ -1 car-tune+
	pick-3-locs
	gas-skip
;

: locpick
	cyoa-start
	"Toujours videoter" cyoa-title!
	($ "En conduisant sur la route de la mort, " .. thegroup .. " prend la decision d'arreter pour se approvisionner. " $) text!
	pick-3-locs
	explorer? if drop
		trunk-gas explorer-redrawcost 1 - > if
			choice( "Explorateur : " pbold .. "Conduire plus. " .. explorer-redrawcost .. " gaz"  )choice: explorer-repick
		else
			gas-skip
		then
	else drop
		trunk-gas locpick-redrawcost 1 - > if
			choice( "Conduisez plus longtemps - " .. locpick-redrawcost .. " gaz"  )choice: locpick-repick
		else
			gas-skip
		then
	then
;

: easylocpick
	cyoa-start
	"En commencant la route de la mort" cyoa-title!
	($ "Pour commencer le voyage, " .. thegroup .. " pour survivre au death road, il faut rassembler le plus de fournitures que possible ! vous devrez egalement trouver des moyens de former et d'augmenter votre equipe." $) text!
	// Temp Testing
	// choice( "Ami gele" fbold )choice: rare2-caveman
	pick-3-locs-easy
	explorer? if drop
		easyloc-pick-stack drawcard
	then
;
	

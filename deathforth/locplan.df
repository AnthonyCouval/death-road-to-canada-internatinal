: get-a-loc loc-pick-stack
	depths 0= if loc-pick-stack-base shuffles to loc-pick-stack then
pops nip ;

: get-a-loc-easy easyloc-pick-stack
	depths 0= if easyloc-pick-stack-base shuffles to easyloc-pick-stack then
pops nip ;

: explorer-pick
	explorer? if drop 3 else drop 
		10 %chance if 3 else 2 then
	then 
;

: pick-3-locs 
	explorer-pick stack sizes for get-a-loc shove next to 3-loc-stack
	cyoa-3-locs
;

: pick-3-locs-easy 3 stack sizes for get-a-loc-easy shove next to 3-loc-stack
	cyoa-3-locs
;

: locpick-redrawcost road{ car-guzzle 2.5 * } >int ;

: explorer-redrawcost 
	gstats{ perk-explorer } 3 >= if
		road{ car-guzzle 1.5 * } >int
	else 
		gstats{ perk-explorer } 2 >= if
			road{ car-guzzle 2 * } >int
		else
			locpick-redrawcost
		then
	then
;

: locpick-repick
	cyoa-start
	"Guida Ovunque" cyoa-title!
	($ Thegroup .. "  decide di bruciare un po di benzina nella speranza di trovare posti piu interessanti. " .. gThey .. "  trova" .. g1s .. "  alcune nuove posizioni: " $) text!
	locpick-redrawcost -1 * trunk-gas+ -1 car-tune+
	pick-3-locs
	gas-skip
;

: explorer-repick
	cyoa-start
	"Esplorazione Attenta" cyoa-title!
	($ Thegroup .. "  impiega piu tempo per esplorare. " .. gThey .. "  trova" .. g1s .. "  alcune nuove posizioni: " $) text!
	explorer-redrawcost -1 * trunk-gas+ -1 car-tune+
	pick-3-locs
	gas-skip
;

: locpick
	cyoa-start
	"Saccheggia Sempre" cyoa-title!
	($ "Mentre guida sulla Strada della Morte, " .. thegroup .. "  decide di fare una sosta per le provviste: " $) text!
	pick-3-locs
	explorer? if drop
		trunk-gas explorer-redrawcost 1 - > if
			choice( "Esploratore: " pbold .. "Guida di Piu   " .. explorer-redrawcost .. "  benzina"  )choice: explorer-repick
		else
			gas-skip
		then
	else drop
		trunk-gas locpick-redrawcost 1 - > if
			choice( "Guida in Giro di Piu   " .. locpick-redrawcost .. "  benzina"  )choice: locpick-repick
		else
			gas-skip
		then
	then
;

: easylocpick
	cyoa-start
	"Intraprendendo la Strada della Morte" cyoa-title!
	($ "Per iniziare il viaggio, " .. thegroup .. " ' decide di prendere alcune provviste da un luogo vicino. Per sopravvivere alla Strada della Morte, dovrai accumulare quante piu provviste possibile! Dovrai anche trovare modi per addestrare e far crescere la tua squadra." $) text!
	// Temp Testing
	// choice( "Amico ghiacciato" fbold )choice: rare2-caveman
	pick-3-locs-easy
	explorer? if drop
		easyloc-pick-stack drawcard
	then
;
	
